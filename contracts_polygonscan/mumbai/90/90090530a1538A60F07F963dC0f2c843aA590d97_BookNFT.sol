pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./BookFactory.sol";
import "./BookManager.sol";

contract BookNFT is Ownable, ERC721Enumerable {
    // EVENT
    event RegisterEvent(
        address indexed _authorAddress,
        uint256 indexed _totalRegisters,
        uint256 _price,
        string _bookId
    );
    event ClaimBackMoneyEvent(
        address indexed _authorAddress,
        uint256 indexed _price
    );
    event ClaimMoneySaleBookEvent(
        address indexed _authorAddress,
        uint256 indexed _transfer
    );
    event AddWhiteListEvent(address indexed _userAddress);
    event RemoveWhiteListEvent(address indexed _userAddress);
    event ClaimBookEvent(address indexed _authorAddress, string _bookId);

    using Strings for uint256;

    string public bookId;
    uint256 public price;
    uint256 public totalPublish;
    address public authorAddress;
    uint256 authorFee;
    address public translatorAddress;
    uint256 translatorFee;
    uint256 public totalRegisters;
    uint256 endDate;
    uint256 startDate;
    string public baseURI;
    address public buyToken;
    string public baseExtension = ".json";
    address public deployerAddress;
    address public contractManagerAddress;
    address public contractFactoryAddress;
    uint256 option;
    bool isClaimedMoneySaleBook = false;

    mapping(address => bool) public whiteList;
    mapping(address => bool) public registerList;
    mapping(address => bool) public claimedMoneyList;
    mapping(address => bool) public mintedList;
    mapping(address => uint256) public amountAddressCanMint;

    constructor() ERC721("BookToken", "Book") {}

    function initBookData(
        string memory _bookId,
        uint256 _price,
        uint256 _totalPublish,
        address _authorAddress,
        uint256 _authorFee,
        address _translatorAddress,
        uint256 _translatorFee,
        uint256 _endDate,
        uint256 _startDate,
        string memory _initalBaseURI,
        address _managerAddress
    ) public {
        BookManager bookManager = BookManager(_managerAddress);

        bookId = _bookId;
        price = _price;
        totalPublish = _totalPublish;
        authorAddress = _authorAddress;
        authorFee = _authorFee;
        translatorAddress = _translatorAddress;
        translatorFee = _translatorFee;
        endDate = _endDate;
        startDate = _startDate;
        baseURI = _initalBaseURI;
        contractManagerAddress = _managerAddress;
        address _buyToken = bookManager.getBuyToken(
            bookManager.getCurrentBuyTokenVersion()
        );
        buyToken = _buyToken;
        address _deployerAddress = bookManager.getDeployerAddress();
        deployerAddress = _deployerAddress;
        address _factoryAddress = bookManager.getFactory(
            bookManager.getCurrentFactoryVersion()
        );
        contractFactoryAddress = _factoryAddress;
    }

    function setOption(uint256 _option) public {
        option = _option;
    }

    // MODIFIERS
    modifier onlyAuthor() {
        require(
            _msgSender() == authorAddress,
            "Ownable: caller is not in the author"
        );
        _;
    }

    modifier onlyDeployerAddress() {
        require(
            _msgSender() == deployerAddress,
            "Ownable: caller is not in the deployer"
        );
        _;
    }

    // PUBLIC
    function mint(address _to) public {
        BookFactory bookFactory = BookFactory(contractFactoryAddress);
        uint256 supply = totalSupply();
        uint256 currentTimestamp = block.timestamp;
        require(
            supply <= totalPublish,
            "This book reach the max amount for publish"
        );
        require(
            whiteList[_msgSender()] == true,
            "You are not in whitelist for mint this book"
        );
        require(
            amountAddressCanMint[_msgSender()] > 0,
            "You cant mint more books"
        );
        require(
            currentTimestamp >= uint256(endDate),
            "Current is not time mint"
        );

        amountAddressCanMint[_msgSender()] -= 1;
        _safeMint(_to, supply + 1);
        mintedList[_msgSender()] = true;
        bookFactory.addMyBookUser(_msgSender(), address(this));
        emit ClaimBookEvent(_msgSender(), bookId);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        require(
            _exists(tokenId),
            "ERC721Metadata: URI query for nonexistent token"
        );
        string memory currentBaseURI = _baseURI();
        return
            bytes(currentBaseURI).length > 0
                ? string(
                    abi.encodePacked(
                        currentBaseURI,
                        tokenId.toString(),
                        baseExtension
                    )
                )
                : "";
    }

    function transferERC20(
        address token,
        address to,
        uint256 amount
    ) public {
        uint256 erc20balance = IERC20(token).balanceOf(address(this));
        require(amount <= erc20balance, "Balance is low");
        IERC20(token).transfer(to, amount);
    }

    function register() public {
        uint256 currentTimestamp = block.timestamp;
        require(registerList[_msgSender()] == false, "You already register!");
        require(
            currentTimestamp >= uint256(startDate) &&
                currentTimestamp <= uint256(endDate),
            "Current is not time register"
        );
        require(totalRegisters <= totalPublish, "Registrations are full");
        IERC20(buyToken).transferFrom(
            _msgSender(),
            address(this),
            price * 10**18
        );
        registerList[_msgSender()] = true;
        totalRegisters += 1;

        emit RegisterEvent(_msgSender(), totalRegisters, price, bookId);
    }

    function claimBackMoney() public {
        uint256 currentTimestamp = block.timestamp;
        require(
            currentTimestamp >= uint256(endDate),
            "Current is not time claim back money"
        );
        require(
            registerList[_msgSender()] == true &&
                whiteList[_msgSender()] != true &&
                claimedMoneyList[_msgSender()] != true,
            "You cannot claim money"
        );
        transferERC20(buyToken, _msgSender(), price * 10**18);
        claimedMoneyList[_msgSender()] = true;

        emit ClaimBackMoneyEvent(_msgSender(), price);
    }

    // INTERNAL
    function _baseURI() internal view virtual override returns (string memory) {
        return baseURI;
    }

    // AUTHOR
    function claimMoneySaleBook() external onlyAuthor {
        uint256 currentTimestamp = block.timestamp;
        require(currentTimestamp > uint256(endDate), "You cannot claim money");
        require(
            isClaimedMoneySaleBook == false,
            "You already claim money sale book"
        );
        require(option == 2, "Number of buyers is not enough");
        if (totalRegisters <= totalPublish) {
            transferERC20(
                buyToken,
                authorAddress,
                totalRegisters * price * 10**18
            );
        } else {
            transferERC20(
                buyToken,
                authorAddress,
                totalPublish * price * 10**18
            );
        }
        isClaimedMoneySaleBook = true;
    }

    // ADMIN
    function setBaseURI(string memory _newBaseURI) public onlyDeployerAddress {
        baseURI = _newBaseURI;
    }

    function addWhiteList(address _user, uint256 _canMint)
        public
        onlyDeployerAddress
    {
        whiteList[_user] = true;
        amountAddressCanMint[_user] = _canMint;
    }

    function setTotalPublish(uint256 _totalPublish) public onlyDeployerAddress {
        totalPublish = _totalPublish;
    }

    function removeWhitelist(address _user) public onlyDeployerAddress {
        whiteList[_user] = false;
        amountAddressCanMint[_user] = 0;
    }

    // USER
    function getBookDetails()
        public
        view
        returns (
            string memory _bookId,
            uint256 _totalPublish,
            uint256 _price,
            address _authorAddress,
            uint256 _authorFee,
            address _translatorAddress,
            uint256 _translatorFee,
            uint256 _endDate,
            uint256 _startDate,
            string memory _initalBaseURI,
            uint256 _totalRegisters
        )
    {
        return (
            bookId,
            totalPublish,
            price,
            authorAddress,
            authorFee,
            translatorAddress,
            translatorFee,
            endDate,
            startDate,
            baseURI,
            totalRegisters
        );
    }

    function isRegister(address _userAddress) external view returns (bool) {
        return registerList[_userAddress];
    }

    function getCurrentStatus() public view returns (string memory status) {
        uint256 currentTimestamp = block.timestamp;
        if (
            registerList[_msgSender()] == true &&
            whiteList[_msgSender()] == true &&
            claimedMoneyList[_msgSender()] == false &&
            _msgSender() != authorAddress &&
            currentTimestamp >= uint256(endDate) &&
            mintedList[_msgSender()] != true
        ) {
            return "CLAIM_BOOK";
        } else if (mintedList[_msgSender()] == true) {
            return "CLAIMED_BOOK";
        } else if (
            registerList[_msgSender()] == true &&
            claimedMoneyList[_msgSender()] == false &&
            whiteList[_msgSender()] == false &&
            _msgSender() != authorAddress &&
            currentTimestamp >= uint256(endDate)
        ) {
            return "CLAIM_BACK_MONEY";
        } else if (claimedMoneyList[_msgSender()] == true) {
            return "CLAIMED_BACK_MONEY";
        } else if (
            _msgSender() == authorAddress &&
            currentTimestamp >= uint256(endDate) &&
            isClaimedMoneySaleBook == false &&
            option == 2 &&
            totalRegisters > 0
        ) {
            return "CLAIM_MONEY_SALE_BOOK";
        } else if (
            _msgSender() == authorAddress &&
            currentTimestamp >= uint256(endDate) &&
            option == 2 &&
            isClaimedMoneySaleBook == true &&
            totalRegisters > 0
        ) {
            return "CLAIMED_MONEY_SALE_BOOK";
        } else if (
            _msgSender() == authorAddress &&
            currentTimestamp >= uint256(endDate) &&
            totalRegisters < totalPublish &&
            option == 1
        ) {
            return "CLOSED_CAMPAIGN";
        } else if (
            registerList[_msgSender()] == false &&
            whiteList[_msgSender()] == false &&
            claimedMoneyList[_msgSender()] == false &&
            _msgSender() != authorAddress &&
            totalRegisters <= totalPublish &&
            currentTimestamp >= uint256(startDate) &&
            currentTimestamp <= uint256(endDate)
        ) {
            return "UNREGISTER";
        } else if (
            registerList[_msgSender()] == false &&
            whiteList[_msgSender()] == false &&
            claimedMoneyList[_msgSender()] == false &&
            _msgSender() != authorAddress &&
            totalRegisters == totalPublish &&
            currentTimestamp >= uint256(startDate) &&
            currentTimestamp <= uint256(endDate)
        ) {
            return "REGISTER_FULL";
        } else if (registerList[_msgSender()] == true) {
            return "REGISTERED";
        } else {
            return "NOT_FOUND";
        }
    }
}

