import "./CloneFactory.sol";
import "./BookNFT.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

library  ConvertType {
    function char(bytes1 b) private pure returns (bytes1 c) {
        if (uint8(b) < 10) return bytes1(uint8(b) + 0x30);
        else return bytes1(uint8(b) + 0x57);
    }

    function toAsciiString(address x) public pure returns (string memory) {
        bytes memory s = new bytes(40);
        for (uint256 i = 0; i < 20; i++) {
            bytes1 b = bytes1(uint8(uint256(uint160(x)) / (2**(8 * (19 - i)))));
            bytes1 hi = bytes1(uint8(b) / 16);
            bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
            s[2 * i] = char(hi);
            s[2 * i + 1] = char(lo);
        }
        return string(abi.encodePacked("0x", s));
    }
}


contract BookFactory is Ownable, CloneFactory {
    event PublishBookEvent(
        address indexed _authorAddress,
        string _bookId,
        address indexed _bookContractAddress
    );

    struct User {
        address userAddress;
        string role;
    }

    BookNFT[] public bookNFT;
    uint256 authorCount = 0;
    uint256 bookCount = 0;
    address masterBookNFTContract;
    address managerContractAddress;
    address buyTokenAddress;
    string public constant ADMIN_ROLE = "ADMIN_ROLE";

    /* Storage Variables */
    BookNFT bookContract;

    constructor(address _bookContractAddress) {
        masterBookNFTContract = _bookContractAddress;
    }

    // MAPPING
    mapping(address => bool) public authorList;
    // MY PUBLISHED BOOK
    mapping(address => string[]) public authorBooksIds;
    // MY BOOK
    mapping(address => string[]) public userBookAddress;

    mapping(uint256 => address) public addresses;

    mapping(address => string) userRole;

    uint256 addressRegistryCount;

    // MODIFIERS
    modifier onlyAuthor() {
        require(
            authorList[_msgSender()] == true,
            "Ownable: caller is not in the authorList"
        );
        _;
    }

    modifier onlyAdmin(string memory role) {
        require(
            keccak256(abi.encodePacked(hasRole(_msgSender()))) == keccak256(abi.encodePacked(role)),
            "You are not admin"
        );
        _;
    }

    function hasRole(address _userAddress) public view returns (string memory) {
        return userRole[_userAddress];
    }

    function setRole( address _userAddress, string memory _role ) public onlyOwner returns (bool) {
        userRole[_userAddress] = _role;
        return true;
    }

    function initBookData(
        string memory _bookId,
        uint256 _totalPublish,
        uint256 _price,
        uint256 _authorFee,
        address _translatorAddress,
        uint256 _translatorFee,
        uint256 _endDate,
        uint256 _startDate,
        string memory _initalBaseURI,
        uint256 _option
    ) external {
        BookNFT book = BookNFT(createClone(masterBookNFTContract));
        book.initBookData(
            _bookId,
            _price,
            _totalPublish,
            _msgSender(),
            _authorFee,
            _translatorAddress,
            _translatorFee,
            _endDate,
            _startDate,
            _initalBaseURI,
            managerContractAddress
        );

        book.setOption(_option);

        bookNFT.push(book);
        bookCount++;
        authorBooksIds[_msgSender()].push(ConvertType.toAsciiString(address(book))); 
        emit PublishBookEvent(_msgSender(), _bookId, address(book));
    }

    function addMyBookUser(address _userAddress, address _bookAddress) public returns(bool) {
        userBookAddress[_userAddress].push(ConvertType.toAsciiString(address(_bookAddress))); 
        return true;
    }

    function getBooks() external view returns (BookNFT[] memory) {
        return bookNFT;
    }

    function myPublishedBook(address _userAddress) public view returns (string[] memory) {
        require(_msgSender() == _userAddress, "You is not owner of address!");
        return authorBooksIds[_userAddress];
    }

    function myBook(address _userAddress) public view returns (string[] memory) {
        require(_msgSender() == _userAddress, "You is not owner of address!");
        return userBookAddress[_userAddress];
    }

    function getBookInfo(address _bookAddress) public view returns (
            string memory _bookId,
            uint256 _totalPublish,
            uint256 _price,
            address _authorAddress,
            uint256 _authorFee,
            address _translatorAddress,
            uint256 _translatorFee,
            uint256 _endDate,
            uint256 _startDate,
            string memory _initalBaseURI,
            uint256 _totalRegisters
        ) {
        BookNFT bookSC = BookNFT(_bookAddress);
        return bookSC.getBookDetails();
    }

    function getAuthorList() external view returns (address[] memory) {
        address[] memory ret = new address[](addressRegistryCount);
        for (uint256 i = 0; i < addressRegistryCount; i++) {
            ret[i] = addresses[i];
        }
        return ret;
    }

    function addWhiteListAuthor(address _userAddress) external onlyAdmin(ADMIN_ROLE) {
        authorList[_userAddress] = true;
        authorCount++;
        addresses[addressRegistryCount] = _userAddress;
        addressRegistryCount++;
    }

    function removeAuthor(address _userAddress) external onlyOwner {
        authorList[_userAddress] = false;
    }

    function isAuthor(address _userAddress) external view returns (bool) {
        return authorList[_userAddress];
    }

    function setManagerContractAddress(address _managerContractAddress) public onlyOwner {
        managerContractAddress = _managerContractAddress;
    }
}

