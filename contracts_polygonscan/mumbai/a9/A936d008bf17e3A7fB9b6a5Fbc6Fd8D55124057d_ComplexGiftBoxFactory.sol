// @name ComplexGiftBoxFactory
// @notice Used to create gift boxes with complex redemption options
contract ComplexGiftBoxFactory {

  //Constants
  address ZERO_ADDRESS;
  uint256 ANY;

  IGiftRegistry internal registry;
  address internal wethGateway; //AAVE lending ETH
  address internal lendingPoolAddressProvider; //AAVE lending pool address provider

  constructor(address _giftRegistry, address _lendingPoolAddressProvider, address _wethGateway) {
    registry = IGiftRegistry(_giftRegistry);
    lendingPoolAddressProvider = _lendingPoolAddressProvider;
    wethGateway = _wethGateway;
  }

  // @name Create Complex Gift Box
  // @notice Allows configuring a starting conservator, target redemption date, required redemption balance, and/or target ERC20 token balances
  function createComplexGiftBox(
    address _recipient,
    address _conservator,
    uint256 _targetDate,
    uint256 _targetBalance,
    address _targetToken,
    uint256 _targetTokenBalance
  ) external {
    ComplexGiftBox box = new ComplexGiftBox(address(this),
      _recipient,
      msg.sender,
      _conservator,
      _targetDate,
      _targetBalance,
      _targetToken,
      _targetTokenBalance);
    registry.registerGiftBox(_recipient, address(box));
  }

  // @name Create AAVE Interest Yielding Complex Gift Box
  // @notice Complex redemption options along with auto-investing for native token with AAVE
  function createAIYComplexGiftBox(
    address _recipient,
    address _conservator,
    uint256 _targetDate,
    uint256 _targetBalance,
    address _targetToken,
    uint256 _targetTokenBalance
  ) external {
    aiyComplexGiftBox box = new aiyComplexGiftBox(address(this),
      _recipient,
      msg.sender,
      _conservator,
      _targetDate,
      _targetBalance,
      _targetToken,
      _targetTokenBalance,
      wethGateway,
      lendingPoolAddressProvider);
    registry.registerGiftBox(_recipient, address(box));
  }
}

