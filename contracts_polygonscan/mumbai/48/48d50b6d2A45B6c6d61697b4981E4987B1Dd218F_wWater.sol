pragma solidity 0.7.5;

import "SafeERC20.sol";
import "ERC20.sol";
import "LowGasSafeMath.sol";
import "IWater.sol";

contract wWater is ERC20 {
    using SafeERC20 for IWater;
    using LowGasSafeMath for uint;

    IWater public immutable Water;
    event Wrap(address indexed recipient, uint256 amountWater, uint256 amountWWater);
    event UnWrap(address indexed recipient,uint256 amountWWater, uint256 amountWater);

    constructor( address _Water ) ERC20( 'Wrapped Water', 'wWater', 18 ) {
        require( _Water != address(0) );
        Water = IWater(_Water);
    }


    function wrap( uint _amount ) external returns ( uint ) {
        Water.safeTransferFrom( msg.sender, address(this), _amount );

        uint value = WaterTowWater( _amount );
        _mint( msg.sender, value );
        emit Wrap(msg.sender, _amount, value);
        return value;
    }

    function unwrap( uint _amount ) external returns ( uint ) {
        _burn( msg.sender, _amount );

        uint value = wWaterToWater( _amount );
        Water.safeTransfer( msg.sender, value );
        emit UnWrap(msg.sender, _amount, value);
        return value;
    }


    function wWaterToWater( uint _amount ) public view returns ( uint ) {
        return _amount.mul( Water.index() ).div( 10 ** decimals() );
    }


    function WaterTowWater( uint _amount ) public view returns ( uint ) {
        return _amount.mul( 10 ** decimals() ).div( Water.index() );
    }

}

