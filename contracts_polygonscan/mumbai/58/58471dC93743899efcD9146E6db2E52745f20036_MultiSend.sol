contract MultiSend {
    using SafeERC20 for IERC20;

    IERC20 public ERC20Interface;

    /**
     * @dev Allows the caller to airdrop tokens.
     * @param token Contract address of the token.
     * @param users Addresses of the users.
     * @param amounts Token values to the corresponding users.
     * @param totalSum Total sum of the tokens to be airdropped to all users.
     */
    function multiSend(
        address token,
        address[] memory users,
        uint256[] memory amounts,
        uint256 totalSum
    ) external returns (bool) {
        require(users.length == amounts.length, "Length mismatch");
        ERC20Interface = IERC20(token);
        
        //Caller should first provide allowance to this contract for the `totalSum` of tokens before calling this function.
        ERC20Interface.safeTransferFrom(msg.sender, address(this), totalSum);
        for (uint256 i = 0; i < users.length; i++) {
            totalSum = totalSum - (amounts[i]);
            ERC20Interface.safeTransfer(users[i], amounts[i]);
        }

        return true;
    }
}