pragma solidity 0.5.17;






contract Deposits is AdminRole, EIP712MetaTransaction {
    using SafeMath for uint256;

    //Tells if a transaction has been claimed
    mapping(bytes32 => bool) public txVsClaimed;
    mapping(address => uint256) public lastWithdrawal;

    uint256 public maxLimit = 2 ether;
    uint256 public blockLimit = 100;

    IERC20 public weth;
    address public wallet;

    event Deposit(address indexed account, uint256 amount, bytes txHash);
    event Withdraw(address indexed account, uint256 amount);

    constructor(
        address _weth,
        address wallet_
    )
        public
        EIP712MetaTransaction("BadBit.Games", "0.1")
    {
        weth = IERC20(_weth);
        wallet = wallet_;
    }

    function changeMaxLimit(uint256 newLimit) external onlyAdmin {
        maxLimit = newLimit;
    }

    function changeBlockLimit(uint256 newLimit) external onlyAdmin {
        blockLimit = newLimit;
    }

    function withdraw(uint256 amount) external {
        address sender = _msgSender();

        require(amount <= maxLimit, "Amount greater then maximum limit");
        require(
            block.number > lastWithdrawal[sender].add(blockLimit),
            "Block limit not reached"
        );

        weth.transferFrom(sender, address(this), amount);
        emit Withdraw(sender, amount);
    }

    function claimDeposit(
        bytes calldata txHash,
        address account,
        uint256 amount
    )
        external
        onlyAdmin
    {
        bytes32 keccakedTxHash = keccak256(abi.encodePacked(txHash));
        if (txVsClaimed[keccakedTxHash] == true) {
            //ignore the tx
            return;
        }
        txVsClaimed[keccakedTxHash] = true;
        weth.transfer(account, amount);
        emit Deposit(account, amount, txHash);
    }

    function withdrawWeth() external onlyAdmin {
        uint256 balance = weth.balanceOf(address(this));
        weth.transfer(wallet, balance);
    }
}