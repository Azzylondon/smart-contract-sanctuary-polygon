    event PolltobePaid(uint256 value); // amount of wei to be paid for participation in poll
    event NftPurchased(address indexed buyer, uint256 value); // nft purchased with token
    event NftSet(address indexed nftAddress, uint256 tokenId); // nft address set of purchasaable nft
    event Withdrawn(address indexed from, uint256 value); // amount of wei withdrawn from contract

