import "./types/Ownable.sol";
import "./libraries/SafeERC20.sol";
import "./libraries/SafeMath.sol";

contract BraavosAirdropper is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    constructor() {}

    receive() external payable {}

    fallback() external payable {}

    function getBalance() public view returns (uint) {
        return address(this).balance;
    }

    function airdropMatic(address payable[] memory _receivers, uint256 _amount) public payable {
        uint forRecipient = _amount.div(_receivers.length);
        for (uint256 i; i < _receivers.length; i++) {
            bool sent = _receivers[i].send(forRecipient);
            require(sent, "Failed to send Matic");
        }
    }

    function airdropERC20(address _principle, address[] memory _receivers, uint256 _amount) public payable {
        require(IERC20(_principle).balanceOf(address(this)) > _amount, 'Trying to send more ERC20 tokens than available');
        uint forRecipient = _amount.div(_receivers.length);
        for (uint256 i; i < _receivers.length; i++) {
            IERC20(_principle).transfer(_receivers[i], forRecipient);
        }
    }

}

