contract MintContract is ReentrancyGuard, Ownable, ERC1155Holder {
	enum EventPeriod { NONE, FREE_MINT, PUBLIC_FREE_MINT, PUBLIC_SALE }
	enum Trade {PUMP, DUMP}

	uint256 private constant MINTICK = 0;

	uint256 private constant MAX_SUPPLY = 20000;
	
	uint256 private constant FREE_MINT_COUNT = 9000;
	uint256 private constant PUBLIC_FREE_MINT_COUNT = 1000;
	uint256 private constant TEAM_MINT_COUNT = 200;

	uint256 private constant PUBLIC_FREE_MINT_ONCE_LIMIT = 2;
	uint256 private constant PUBLIC_SALE_ONCE_LIMIT = 5;

	bool private mintable = true;
	EventPeriod private period = EventPeriod.NONE;
	uint256 private salePrice = 0.025 ether;

	uint256 private totalCount;
	uint256 private freeMintCount;
	uint256 private publicFreeMintCount;
	uint256 private teamMintCount;

	IMinTick minTicketContract;
	IMinTick minTicketOGContract;
	address payable hamsterGameContract;

	string thgBaseURI;

	bool initialized = false;

	event Mint(address _to, uint256 _amount);

	function initialize(
		address _hamsterGameContract, 
		address _minTickContract, 
		address _minTickOGContract, 
		string memory _thgBaseURI
	) public {
		require(!initialized, "Initialize function can be called only once");

		initialized = true;
		hamsterGameContract = payable(_hamsterGameContract);
		minTicketContract = IMinTick(_minTickContract);
		minTicketOGContract = IMinTick(_minTickOGContract);
		thgBaseURI = _thgBaseURI;
	}

	function isMintable() public view returns (bool) {
		return mintable;
	}

	function getSalePrice() public view returns (uint256) {
		return salePrice;
	}

	function setPeriod(bool _mintable, uint256 _price, uint256 _period) public onlyOwner {
		require(_period <= uint256(EventPeriod.PUBLIC_SALE), "Invalid Period");

		mintable = _mintable;
		salePrice = _price;
		period = EventPeriod(_period);
	}

	function getPeriod(address account) public view returns (uint256 mintableCount, uint256 totalMintableCount, uint256 periodType, uint256 minTickCount) {
		periodType = uint256(period);
		mintableCount = getMintableNFTCount();

		if (period == EventPeriod.FREE_MINT) {
			totalMintableCount = FREE_MINT_COUNT;
		} else if (period == EventPeriod.PUBLIC_FREE_MINT) {
			totalMintableCount = PUBLIC_FREE_MINT_COUNT;
		} else if (period == EventPeriod.PUBLIC_SALE) {
			totalMintableCount = MAX_SUPPLY - TEAM_MINT_COUNT;
		} else {
			totalMintableCount = 0;
		}

		minTickCount = minTicketContract.balanceOf(account, MINTICK);
	}

	function getMintableNFTCount() public view returns (uint256) {
		if (period == EventPeriod.FREE_MINT) {
			return FREE_MINT_COUNT - freeMintCount;
		} else if (period == EventPeriod.PUBLIC_FREE_MINT) {
			return PUBLIC_FREE_MINT_COUNT + FREE_MINT_COUNT - (publicFreeMintCount + freeMintCount);
		} else if (period == EventPeriod.PUBLIC_SALE) {
			return MAX_SUPPLY - totalCount - (TEAM_MINT_COUNT - teamMintCount);
		}

		return 0;
	}

	function setBaseURI(string memory _baseUri) public {
		thgBaseURI = _baseUri;
	}

	function mint(uint256 _amount) public payable nonReentrant {
		require(period != EventPeriod.NONE, "Free Mint Event is still not started");
		require(mintable, "Not available for now");
		require(MAX_SUPPLY - totalCount - (TEAM_MINT_COUNT - teamMintCount) >=  _amount, "Not enough tokens left to mint");

		if (period == EventPeriod.FREE_MINT) {
			require(_amount >= 2, "User cannot mint less than 2 HGN during the Free Mint period");
			uint256 minTickCount = minTicketContract.balanceOf(msg.sender, MINTICK);

			require(minTickCount >= 2, "2 MinTicks are the minimum required amount to mint HamsterGame");
			require(minTickCount >= _amount, "Not enough MinTicks to mint HamsterGame");
			require(_amount <= FREE_MINT_COUNT - freeMintCount, "Not enough free tokens left to mint during the free mint period");
		
			freeMintCount = freeMintCount + _amount;

		} else if (period == EventPeriod.PUBLIC_FREE_MINT) {
			require(_amount <= PUBLIC_FREE_MINT_ONCE_LIMIT, "User cannot mint more than 2 HGN during the Public Free Mint period");
			require((FREE_MINT_COUNT + PUBLIC_FREE_MINT_COUNT) - (publicFreeMintCount + freeMintCount) >= _amount, "Not enough free tokens left to mint during the public free mint period");

			if (freeMintCount < FREE_MINT_COUNT) {
				if (freeMintCount + _amount > FREE_MINT_COUNT) {
					publicFreeMintCount = publicFreeMintCount + _amount - (FREE_MINT_COUNT - freeMintCount);
					freeMintCount = FREE_MINT_COUNT;
				} else {
					freeMintCount = freeMintCount + _amount;
				}
			} else {
				publicFreeMintCount = publicFreeMintCount + _amount;
			}

		} else if (period == EventPeriod.PUBLIC_SALE) {
			require(_amount <= PUBLIC_SALE_ONCE_LIMIT, "User cannot mint more than 5 HGN during the Public Sale period");
			require(msg.value == salePrice * _amount, "Price should be equal to the Sale price multiplied to the amount of NFTs");

			if (freeMintCount < FREE_MINT_COUNT) {
				if (freeMintCount + _amount > FREE_MINT_COUNT) {
					publicFreeMintCount = publicFreeMintCount + _amount - (FREE_MINT_COUNT - freeMintCount);
					freeMintCount = FREE_MINT_COUNT;
				} else {
					freeMintCount = freeMintCount + _amount;
				}
			} else if (publicFreeMintCount < PUBLIC_FREE_MINT_COUNT) {
				if (publicFreeMintCount + _amount > PUBLIC_FREE_MINT_COUNT) {
					publicFreeMintCount = PUBLIC_FREE_MINT_COUNT;
				} else {
					publicFreeMintCount = publicFreeMintCount + _amount;
				}
			}
		}

		for (uint i = 0; i < _amount; i++) {
			totalCount = totalCount + 1;
			IHamsterGameNFT(hamsterGameContract).mint(msg.sender, string(abi.encodePacked(thgBaseURI, uint2str(totalCount), ".json")));
		}

		if (period == EventPeriod.FREE_MINT) {
			minTicketContract.safeTransferFrom(msg.sender, address(this), MINTICK, _amount, "");
			minTicketOGContract.mint(msg.sender, MINTICK, _amount);
		}

		if (msg.value > 0) {
			payable(hamsterGameContract).transfer(msg.value);
		}
	}

	function mintForTeam(address _to, uint256 _amount) public onlyOwner {
		require(_amount <= TEAM_MINT_COUNT - teamMintCount, "Not enough tokens to mint for team members");

		teamMintCount = teamMintCount + _amount;

		for (uint i = 0; i < _amount; i++) {
			totalCount = totalCount + 1;
			IHamsterGameNFT(hamsterGameContract).mint(_to, string(abi.encodePacked(thgBaseURI, uint2str(totalCount), ".json")));
		}
	}

	function burn(address from, uint256 _id) public {
		require(msg.sender == from);
	    IHamsterGameNFT(hamsterGameContract).burn(_id);
	}

	function uint2str(uint _i) internal pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint j = _i;
        uint len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint k = len;
        while (_i != 0) {
            k = k-1;
            uint8 temp = (48 + uint8(_i - _i / 10 * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }
