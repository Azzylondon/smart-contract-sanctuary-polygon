pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "./IBridge.sol";

// A shared base for both the root and child bridges.
abstract contract BridgeBase is Ownable, IBridge {
    using EnumerableSet for EnumerableSet.AddressSet;
    bytes32 public constant DEPOSIT = keccak256("DEPOSIT");

    EnumerableSet.AddressSet internal addressesStaked;
    mapping(address => uint256) public addressToGPStaked;
    uint256 public amountNeededToOpenPortal = 0;
    uint256 public amountStaked;

    function updateStakeSettings(uint256 _amountNeededToOpenPortal) external onlyOwner {
        amountNeededToOpenPortal = _amountNeededToOpenPortal;
    }

    function stakeGP(uint256 _amount) external override {
        require(_amount > 0, "Must stake some GP.");
        amountStaked += _amount;
        addressToGPStaked[msg.sender] += _amount;
        addressesStaked.add(msg.sender);

        transferGPFrom(msg.sender, address(this), _amount);
    }

    function unstakeGP(uint256 _amount) external override {
        uint256 _amountStaked = addressToGPStaked[msg.sender];
        require(_amountStaked >= _amount, "Too much GP to unstake");

        _removeStakedGP(msg.sender, _amount);

        transferGPFrom(address(this), msg.sender, _amount);
    }

    function getStakedGPAmt(address _address) external view override returns(uint256) {
        return addressToGPStaked[_address];
    }

    function _removeStakedGP(address _address, uint256 _amount) private {
        amountStaked -= _amount;
        addressToGPStaked[_address] -= _amount;
    }

    function transferGPFrom(address _from, address _to, uint256 _amount) internal virtual;

}

