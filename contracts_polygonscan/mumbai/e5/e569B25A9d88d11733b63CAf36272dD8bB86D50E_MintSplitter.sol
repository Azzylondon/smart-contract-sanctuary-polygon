pragma solidity 0.8.4;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract MintSplitter is Ownable {
  using SafeMath for uint256;

  // Mint distro percentages
  uint256 private ghost = 4; // 4%
  uint256 private jax = 4; // 4%
  uint256 private fahim = 2; // 2%
  uint256 private divineDao = 2; // 2%
  uint256 private lootDao = 5; // 5%
  uint256 private banners = 83; // 83% or the rest...

  // Mint distro addresses
  address private divineDaoAddy = 0x5C504C18A476f26c6ddc36cCe344a2d6e4A8a2bc; // Divine DAO War Chest
  address private lootDaoAddy = 0x8cFDF9E9f7EA8c0871025318407A6f1Fbc5d5a18; // Loot DAO War Chest
  address private ghostAddy = 0xbF7877303B90297E7489AA1C067106331DfF7288; // Ghost address
  address private jaxAddy = 0xE6995fDB691aad061e45df31A7C407792A52565A; // Banners Chest
  address private fahimAddy = 0x76ac4a517DE5Cc1AE380ffbE84e8e6629aED1C5a; // Fahim address
  address private bannersWarChestAddy = 0xA9EC89f38a1dC912F1726EE66409a840fFc6a709; // Ledger address for Banners

  /// @dev allows withdraw of any tokens getting stuck in contract
  function withdraw() public onlyOwner {
    require(address(this).balance > 0, "Nothing to withdraw");

    receiveAndSplit();
  }

  function receiveAndSplit() public payable {
    uint256 amountToSplit = msg.value;

    if (msg.value == 0) {
      amountToSplit = address(this).balance;
    }

    // todo: need to test the output of these....
    uint256 amountForGhost = uint256(amountToSplit.div(100).mul(ghost));
    uint256 amountForJax = uint256(amountToSplit.div(100).mul(jax));
    uint256 amountForFahim = uint256(amountToSplit.div(100).mul(fahim));
    uint256 amountForDivine = uint256(amountToSplit.div(100).mul(divineDao));
    uint256 amountForLoot = uint256(amountToSplit.div(100).mul(lootDao));
    uint256 amountForBanners = uint256(amountToSplit.div(100).mul(banners));

    (bool success, ) = ghostAddy.call{ value: amountForGhost }("");
    require(success, "MintSplitter:: payment transfer failed for ghost");

    (bool success1, ) = jaxAddy.call{ value: amountForJax }("");
    require(success1, "MintSplitter:: payment transfer failed for jax");

    (bool success2, ) = fahimAddy.call{ value: amountForFahim }("");
    require(success2, "MintSplitter:: payment transfer failed for fahim");

    (bool success3, ) = divineDaoAddy.call{ value: amountForDivine }("");
    require(success3, "MintSplitter:: payment transfer failed for divine dao");

    (bool success4, ) = lootDaoAddy.call{ value: amountForLoot }("");
    require(success4, "MintSplitter:: payment transfer failed for loot dao");

    (bool success5, ) = bannersWarChestAddy.call{ value: amountForLoot }("");
    require(success5, "MintSplitter:: payment transfer failed for banners war chest");
  }
}

