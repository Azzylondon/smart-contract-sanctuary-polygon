import "@openzeppelin/contracts/access/Ownable.sol";
import {IWrassleable} from "../Interfaces/Wrassleable/Wrassleable.sol";
import {ERC721} from "../Interfaces/ERC721.sol";

contract WrasslingArena is Ownable {
    event WrasslerRegistered(address contractAddress, uint256 tokenId);
    event WrasslerUpdated(address contractAddress, uint256 tokenId);
    event WrasslerRemoved(address contractAddress, uint256 tokenId);

    mapping(address => mapping(uint256 => IWrassleable.Wrassler)) public wrasslers;
    mapping(address => bool) internal wrassleableContracts;
    mapping(address => mapping(uint256 => string)) public wrasslerAvatars;

    constructor() public {}

    function allowWrassleable(address wrassleableContract) public onlyOwner {
        wrassleableContracts[wrassleableContract] = true;
    }

    function registerWrassler(
        uint256 tokenId,
        string memory ipfsAvatar,
        string memory name,
        string memory bio,
        uint256 power,
        uint256 speed,
        uint256 aggression,
        uint256 determination,
        uint256 resilience,
        uint256 awareness
    ) public {
        require(wrassleableContracts[msg.sender], "WA:rW:401");
        require(wrasslers[msg.sender][tokenId].tokenId == 0, "WA:rW:409");

        wrasslers[msg.sender][tokenId] = IWrassleable.Wrassler({
            id: abi.encode(msg.sender, tokenId),
            wrassleableContract: msg.sender,
            tokenId: tokenId,
            name: name,
            bio: bio,
            power: power,
            speed: speed,
            aggression: aggression,
            determination: determination,
            resilience: resilience,
            awareness: awareness
        });

        wrasslerAvatars[msg.sender][tokenId] = ipfsAvatar;

        emit WrasslerRegistered(msg.sender, tokenId);
    }

    function upgradeWrassler(
        address wrassleableContract,
        uint256 tokenId,
        IWrassleable.UpgradeParams memory upgradeParams
    ) public payable onlyOwner {
        require(wrassleableContracts[wrassleableContract], "WA:rW:401");
        // require(msg.value > 0, "pymnt");

        try ERC721(wrassleableContract).ownerOf(tokenId) returns (address owner) {
            if (owner == msg.sender) {
                IWrassleable.Wrassler storage wrassler = wrasslers[wrassleableContract][tokenId];

                // check payment for $WRASS
                wrassler.power += upgradeParams.power;
                wrassler.speed += upgradeParams.speed;
                wrassler.aggression += upgradeParams.aggression;
                wrassler.determination += upgradeParams.determination;
                wrassler.resilience += upgradeParams.resilience;
                wrassler.awareness += upgradeParams.awareness;

                emit WrasslerUpdated(msg.sender, tokenId);
            }
        } catch {}
    }

    function updateWrasslerAvatar(uint256 tokenId, string memory ipfsAvatar) public {
        require(wrassleableContracts[msg.sender], "WA:rW:401");

        wrasslerAvatars[msg.sender][tokenId] = ipfsAvatar;
        emit WrasslerUpdated(msg.sender, tokenId);
    }

    function removeWrassler(address wrassleableContract, uint256 tokenId) public onlyOwner {
        require(wrasslers[wrassleableContract][tokenId].tokenId == 0, "WA:rW:409");

        delete wrasslers[msg.sender][tokenId];
        delete wrasslerAvatars[msg.sender][tokenId];
        emit WrasslerRemoved(msg.sender, tokenId);
    }

    function getWrassler(address contractAddress, uint256 _tokenId)
        public
        view
        returns (
            uint256 power,
            uint256 speed,
            uint256 aggression,
            uint256 determination,
            uint256 resilience,
            uint256 awareness
        )
    {
        IWrassleable.Wrassler memory wrassler = wrasslers[contractAddress][_tokenId];

        return (
            wrassler.power,
            wrassler.speed,
            wrassler.aggression,
            wrassler.determination,
            wrassler.resilience,
            wrassler.awareness
        );
    }
}

