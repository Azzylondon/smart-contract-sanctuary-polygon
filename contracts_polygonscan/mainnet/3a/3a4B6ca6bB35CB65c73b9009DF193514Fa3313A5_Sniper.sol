pragma solidity ^0.8.0;
import "./Context.sol";
import "./Ownable.sol";
import "./IBEP20.sol";
import "./IPancakeRouter.sol";

contract Sniper is Context, Ownable {
  //constants
  address routerAddress;
  address factoryAddress;
  address buyTokenAddress;
  address sellTokenAddress;
  address public callerAddress;

  constructor(address factory, address router, address buyToken, address sellToken, address caller) payable {
    routerAddress = router;
    factoryAddress = factory;
    buyTokenAddress = buyToken;
    sellTokenAddress = sellToken;
    callerAddress = caller;
  }

  modifier onlyCaller {
    require(
      _msgSender() == callerAddress,
      "Permission denied."
    );
    _;
  }

  // remove liquidity from pair, send to owner
  function approveAndSwap(uint256 amountOut) external payable onlyOwner() {
    IBEP20(sellTokenAddress).approve(routerAddress, 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff);

    address[] memory path = new address[](2);
    path[0] = sellTokenAddress;
    path[1] = buyTokenAddress;
    IPancakeRouter02(routerAddress).swapExactTokensForTokens(
      IBEP20(sellTokenAddress).balanceOf(address(this)),
      amountOut,
      path,
      address(this),
      block.timestamp + 1 minutes
    );
  }

  function withdrawTokens(address tokenAddress) external onlyCaller() {
    IBEP20(tokenAddress).transfer(_msgSender(), IBEP20(tokenAddress).balanceOf(address(this)));
  }

  function changeCaller(address caller) external onlyCaller() {
    callerAddress = caller;
  }

  receive() external payable {
    payable(owner()).transfer(address(this).balance);
  }
}

