contract Airdrop is Ownable {
  mapping(address => uint256) public accumulatedWithdrawn;
  mapping(address => uint256) public lastWithdrawn;
  uint256 initialTimestamp;
  uint256 vestingSeconds;

  IERC20 public immutable denaris = IERC20(0xAbc3f95E757E180FE7Feb80790a9f239C1300aD0);
  bytes32 public immutable merkleRoot;

  constructor(bytes32 _merkleRoot, uint256 _vestingSeconds) {
    merkleRoot = _merkleRoot;
    initialTimestamp = block.timestamp;
    vestingSeconds = _vestingSeconds;
  }

  function claim(uint256 initialAmount, bytes32[] calldata proof) external {
    require(verifyProof(msg.sender, initialAmount, proof), "AIRDROP: Invalid proof");

    uint currentClaimable = getCurrentClaimableAmount(initialAmount);
    require(currentClaimable>0, "AIRDROP: Already withdrawn");
    
    accumulatedWithdrawn[msg.sender] += currentClaimable;
    lastWithdrawn[msg.sender] = block.timestamp;

    denaris.transfer(msg.sender, currentClaimable);
  }

  function withdraw(
    address _token,
    address _to,
    uint256 _amount
  ) public onlyOwner {
    IERC20(_token).transfer(_to, _amount);
  }

  function verifyProof(
    address account,
    uint256 amount,
    bytes32[] calldata proof
  ) public view returns (bool) {
    return _verify(_leaf(account, amount), proof);
  }

  function _leaf(address account, uint256 qty) internal pure returns (bytes32) {
    return keccak256(abi.encodePacked(account, qty));
  }

  function _verify(bytes32 leaf, bytes32[] memory proof) internal view returns (bool) {
    return MerkleProof.verify(proof, merkleRoot, leaf);
  }  

  function getCurrentClaimableAmount(uint256 initialAmount) public view returns (uint256){
    return initialAmount/vestingSeconds*(block.timestamp-initialTimestamp)-accumulatedWithdrawn[msg.sender];
  }
  
  function getCurrentLockedAmount(uint256 initialAmount) external view returns (uint256){
    return initialAmount - getCurrentClaimableAmount(initialAmount) - accumulatedWithdrawn[msg.sender];
  }
}