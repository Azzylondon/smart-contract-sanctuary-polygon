        s_pixelInterval = 60;
        s_timeInterval = _timeInterval;
        s_grayScaleFilter = "filter='url(#grayscale)' ";
    }

    struct Pixel {
        bool isBackground;
        bool isBaseCircle;
        uint256 xlocation;
        uint256 ylocation;
        string color;
    }

    function getIsBackground(uint256 _tokenId) public view returns (bool) {
        return s_tokenIdToPixel[_tokenId].isBackground;
    }

