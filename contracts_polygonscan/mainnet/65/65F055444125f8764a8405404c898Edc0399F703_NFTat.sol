        uint256 tokenCounter = s_tokenCounter;
        // // 225 makes it 15 x 15
        uint256 pixelInterval = s_pixelInterval;
        for(uint256 x = 0; x < 4; x++) {
            for(uint256 y = 0; y < 15; y++) {
