pragma solidity ^0.6.12;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

interface Vault {
    function lastEarnBlock() external view returns(uint);
    function compound() external;
}

interface Lotterypot {
    function round() external view returns (uint256);

    function enroll(address _user, uint256 _count) external;
}

contract Compounder is Ownable,ReentrancyGuard{
    struct Unit{
        address vault;
        bool stop;
    }
    Unit[] public vaults;
    uint public univInterval=3600*2;
    Lotterypot public lottery;
    uint public lastcom;

    constructor(address _lottery) public {
        lottery=Lotterypot(_lottery);
    }
    /*reader contracts*/
    function vaultcount() public view returns(uint){
        return vaults.length;
    }
    function nextcompoundable() public view returns(uint){
        return lastcom+univInterval;
    }
    function lastcompounds() public view returns(uint[] memory){
        uint[] memory lasts=new uint[](vaults.length);
        for(uint i=0;i<vaults.length;i++){
            lasts[i]=Vault(vaults[i].vault).lastEarnBlock();
        }
        return lasts;
    }
    function compoundAll() public nonReentrant {
        for(uint i=0;i<vaults.length;i++){
            if(!vaults[i].stop){
                Vault cur=Vault(vaults[i].vault);
                if(cur.lastEarnBlock()+univInterval< block.timestamp){
                    cur.compound();
                }
            }            
        }
        if(lastcom+univInterval<block.timestamp){
            lottery.enroll(msg.sender,1);
            lastcom=block.timestamp;
        }
        lastcom=block.timestamp;
    }
    function compound(uint _pid) public nonReentrant{
        Vault(vaults[_pid].vault).compound();
    }
    function setInt(uint _univ) external onlyOwner{
        univInterval=_univ;
    }
    function newvault(address _vault) external onlyOwner{
        vaults.push(Unit({
            vault:_vault,
            stop:false
        }));
    }
    function stopvault(uint index, bool _stop) external onlyOwner{
        vaults[index].stop=_stop;
    }
}