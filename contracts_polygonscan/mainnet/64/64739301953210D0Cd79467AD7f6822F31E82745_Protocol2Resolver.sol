pragma solidity ^0.8.6;


import "./interfaces.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Protocol2Resolver {
    using SafeMath for uint;

    IProtocolModule internal constant protocolModule = IProtocolModule(0x0c1Bc6A8CbE9eE57E86371E1B9026bA3d2A3a8B5);
    ILiquidity internal constant liquidity = ILiquidity(0xAFA64764FE83E6796df18De44b739074D68Fd715);

    function getFee() public view returns (uint256) {
        return protocolModule.fee();
    }

    function getTokenAvailability(address[] memory tokens_, uint256[] memory amounts_) public view returns (bool, uint256) {
        uint256 length_ = tokens_.length;
        require(amounts_.length == length_, "lengths-not-same");
        bool availability_ = true;
        for (uint256 i = 0; i < length_; i++) {
            (, uint256 borrowExchangePrice_) = liquidity.updateInterest(tokens_[i]);
            uint256 borrowLimitRaw_ = liquidity.protocolBorrowLimit(address(protocolModule), tokens_[i]);
            uint256 borrowLimit_ = borrowLimitRaw_.mul(borrowExchangePrice_).div(1e18);
            IERC20 token_ = IERC20(tokens_[i]);
            if(token_.balanceOf(address(liquidity)) < amounts_[i] ||  borrowLimit_ < amounts_[i]) {
                availability_ = false;
                break;
            }
        }
        return (availability_, getFee());
    }
}

