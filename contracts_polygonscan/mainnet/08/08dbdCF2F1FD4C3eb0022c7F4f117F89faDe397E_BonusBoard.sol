pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../interfaces/IGameBase.sol";

interface IRandomizer {
    function getRandom() external returns (bytes32);

    function available() external returns (bool);
}

contract BonusBoard is ReentrancyGuard, Pausable, Ownable {
    //--------- Libraries ----------//
    using SafeMath for uint256;

    //---------- Contracts ----------//
    IERC20 internal DSG;
    IGameBase internal GAME;
    IRandomizer internal RANDOM;

    //---------- Variables ----------//
    uint8[37] internal Boxes;
    uint256 public feeLINK;
    uint256 public Timeout;

    //---------- Storage -----------//
    struct PlayerInfo {
        uint256 box;
        uint256 rolls;
        uint256 owned;
        uint256[] results;
        bool ended;
    }

    struct Request {
        address player;
        uint256 board;
    }

    mapping(uint256 => mapping(address => PlayerInfo)) private Player;
    mapping(bytes32 => Request) private PlayerRequest;
    mapping(address => bool) public rolling;

    //---------- Events -----------//
    event DiceRolled(
        uint256 indexed board,
        address indexed roller,
        bytes32 requestId
    );
    event DiceLanded(
        uint256 indexed board,
        address indexed roller,
        bytes32 requestId,
        uint256 result
    );
    event PlayerWin(
        uint256 indexed board,
        address indexed player,
        uint256 amount
    );

    //---------- Constructor ----------//
    constructor(
        address dsg,
        address randomizer,
        address game
    ) {
        DSG = IERC20(dsg);
        RANDOM = IRandomizer(randomizer);
        GAME = IGameBase(game);
        feeLINK = 0.01 * 10**18; // 0.01 MATIC
        Timeout = 20 minutes;
        Boxes = [
            0,
            1,
            2,
            3,
            4,
            2,
            4,
            6,
            8,
            1,
            3,
            5,
            7,
            2,
            5,
            9,
            11,
            4,
            6,
            8,
            10,
            5,
            7,
            10,
            15,
            7,
            14,
            21,
            28,
            8,
            16,
            24,
            32,
            10,
            20,
            50,
            100
        ];
    }

    //---------- Modifiers ----------//
    modifier notContract() {
        require(!_isContract(msg.sender), "Contract not allowed");
        require(msg.sender == tx.origin, "Proxy contract not allowed");
        _;
    }

    modifier onlyGame() {
        require(address(GAME) == _msgSender());
        _;
    }

    modifier onlyRandomizer() {
        require(address(RANDOM) == _msgSender());
        _;
    }

    //----------- Internal Functions -----------//
    function _isContract(address _addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(_addr)
        }
        return size > 0;
    }

    //----------- External Functions -----------//
    function getPlayer(uint256 board, address player) public view returns(PlayerInfo memory) {
        return Player[board][player];
    }

    function isReady(uint256 board) public view returns (bool) {
        if (board > 0) {
            board = board > 10 ? 10 : board;
            uint256 maxPrize = board.mul(10500 ether);
            uint256 balance = DSG.balanceOf(address(this));
            return balance >= maxPrize;
        }
        return false;
    }

    function rollDice(uint256 board)
        external
        payable
        whenNotPaused
        notContract
        nonReentrant
        returns (bytes32 requestId)
    {
        require(board > 0, "Invalid borad");
        require(msg.value == feeLINK, "Invalid amount");
        require(RANDOM.available() && isReady(board), "Randomizer error");
        PlayerInfo storage p = Player[board][_msgSender()];
        require(p.rolls > 0 && !rolling[_msgSender()]);
        payable(address(RANDOM)).transfer(feeLINK);
        rolling[_msgSender()] = true;
        p.rolls = p.rolls.sub(1);
        bytes32 RequestId = RANDOM.getRandom();
        PlayerRequest[RequestId].player = _msgSender();
        PlayerRequest[RequestId].board = board;
        emit DiceRolled(board, _msgSender(), requestId);
        return RequestId;
    }

    function returnRandom(bytes32 requestId, uint256 randomness)
        external
        onlyRandomizer
    {
        address player = PlayerRequest[requestId].player;
        uint256 board = PlayerRequest[requestId].board;
        delete PlayerRequest[requestId];
        uint256 result = randomness.mod(10).add(2);
        uint256 multiBoard = board > 10 ? 10 : board;
        if (player != address(0) && !Player[board][player].ended) {
            PlayerInfo storage p = Player[board][player];
            p.box = p.box.add(result);
            uint8 boxMulti = Boxes[p.box];
            uint256 owned = p.owned == 0 ? multiBoard.mul(1 ether) : p.owned;
            p.results.push(boxMulti);
            p.owned = owned.mul(boxMulti);
            if (p.rolls == 0) {
                p.ended = true;
                DSG.transfer(player, p.owned);
                emit PlayerWin(board, player, p.owned);
            }
        }
        rolling[player] = false;
        emit DiceLanded(board, player, requestId, result);
    }

    function addCredits(uint256 board, address player) external onlyGame {
        delete Player[board][player];
        Player[board][player].rolls = 3;
    }

    function safeWithdrawn() external whenPaused onlyOwner {
        if (DSG.balanceOf(address(this)) > 0) {
            DSG.transfer(_msgSender(), DSG.balanceOf(address(this)));
        }
    }

    function setFeeLink(uint256 fee) external onlyOwner {
        require(fee > 0);
        feeLINK = fee;
    }

    function resetPlayer(uint256 board, address player) external onlyOwner {
        require(player != address(0));
        delete Player[board][player];
        delete rolling[player];
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}

