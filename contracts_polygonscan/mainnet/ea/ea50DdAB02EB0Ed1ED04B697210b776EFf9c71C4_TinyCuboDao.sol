import "./Cubo.sol";
import "./Dai.sol";
import "./CuboDao.sol";

contract TinyCuboDao {
  uint public totalNodes;
  address [] public cuboNodesAddresses;

  Cubo public cuboAddress;
  Dai public daiAddress;
  address private owner;
  CuboDao private mainDaoAddress;

  struct Account {
    bool exists;
    uint type75NodeCount;
    uint type50NodeCount;
    uint type25NodeCount;
    uint interestAccumulated;
  }

  mapping(address => Account) public accounts;

  uint [] public nodeRewards = [
    1 * 10 ** 17, // 25 DAI - 25 CUBO -- Reward: 0.1 CUBO
    3 * 10 ** 17, // 50 DAI - 50 CUBO -- Reward: 0.3 CUBO
    6 * 10 ** 17  // 75 DAI - 75 CUBO -- Reward: 0.6 CUBO
  ];

  constructor(Cubo _cuboAddress, Dai _daiAddress, CuboDao _mainDaoAddress) {
    owner = msg.sender;
    cuboAddress = _cuboAddress;
    daiAddress = _daiAddress;
    mainDaoAddress = _mainDaoAddress;
  }

  function mintNode(address _address, uint _cuboAmount, uint _daiAmount, uint _nodeType) public {
    require(msg.sender == _address, 'Only user can create a node.');
    require(_nodeType >= 0 && _nodeType <= 3, 'Invalid node type');

    Account memory account;

    if(accounts[_address].exists){
      account = accounts[_address];
    }
    else{
      account = Account(true, 0, 0, 0, 0);
      cuboNodesAddresses.push(_address);
    }

    if(_nodeType == 0){
      require(_cuboAmount >= 25 * 10 ** 18, 'You must provide at least 25 CUBO for the LP token');
      require(_daiAmount >= 25 * 10 ** 18, 'You must provide at least 25 DAI for the LP token');
      account.type25NodeCount++;
      totalNodes++;
    }
    else if(_nodeType == 1){
      require(_cuboAmount >= 50 * 10 ** 18, 'You must provide at least 50 CUBO for the LP token');
      require(_daiAmount >= 50 * 10 ** 18, 'You must provide at least 50 DAI for the LP token');
      account.type50NodeCount++;
      totalNodes++;
    }
    else if(_nodeType == 2){
      require(_cuboAmount >= 75 * 10 ** 18, 'You must provide at least 75 CUBO for the LP token');
      require(_daiAmount >= 75 * 10 ** 18, 'You must provide at least 75 DAI for the LP token');
      account.type75NodeCount++;
      totalNodes++;
    }

    accounts[_address] = account;

    cuboAddress.transferFrom(_address, address(mainDaoAddress), _cuboAmount);
    daiAddress.transferFrom(_address, address(mainDaoAddress), _daiAmount);
  }

  function widthrawInterest(address _to) public {
    require(msg.sender == _to, 'Only user can widthraw its own funds.');
    require(accounts[_to].interestAccumulated > 0, 'Interest accumulated must be greater than zero.');

    uint amount = accounts[_to].interestAccumulated;
    accounts[_to].interestAccumulated = 0;

    // This contract will need tokens fed weekly to pay interest
    cuboAddress.transfer(_to, amount);
  }

  // runs daily
  function payInterest() public {
    require(msg.sender == owner, 'You must be the owner to run this.');

    uint i;
    for(i=0; i<cuboNodesAddresses.length; i++){
      address a = cuboNodesAddresses[i];
      Account memory acc = accounts[a];
      uint interestAccumulated;
      interestAccumulated = acc.type25NodeCount * nodeRewards[0];
      interestAccumulated += acc.type50NodeCount * nodeRewards[1];
      interestAccumulated += acc.type75NodeCount * nodeRewards[2];

      acc.interestAccumulated += interestAccumulated;

      accounts[a] = acc;
    }
  }

  function withdrawCubo(address _address, uint amount) public {
    require(msg.sender == owner, 'You must be the owner to run this.');
    cuboAddress.transfer(_address, amount);
  }

  function withdrawDai(address _address, uint amount) public {
    require(msg.sender == owner, 'You must be the owner to run this.');
    daiAddress.transfer(_address, amount);
  }

  function awardNode(address _address, uint _nodeType) public {
    require(msg.sender == owner, 'You must be the owner to run this.');

    Account memory account;

    if(accounts[_address].exists){
      account = accounts[_address];
    }
    else{
      account = Account(true, 0, 0, 0, 0);
      cuboNodesAddresses.push(_address);
    }

    if(_nodeType == 0){
      account.type25NodeCount++;
    }
    else if(_nodeType == 1){
      account.type50NodeCount++;
    }
    else if(_nodeType == 2){
      account.type75NodeCount++;
    }

    totalNodes++;
    accounts[_address] = account;
  }
}

