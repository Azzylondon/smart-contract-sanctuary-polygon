pragma solidity ^0.8.0;

import {Ownable} from '@openzeppelin/contracts/access/Ownable.sol';
import {Pausable} from '@openzeppelin/contracts/security/Pausable.sol';
import {IERC20} from '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import {IERC721} from '@openzeppelin/contracts/token/ERC721/IERC721.sol';
import {ECDSA} from '@openzeppelin/contracts/utils/cryptography/ECDSA.sol';
import {MerkleProof} from '@openzeppelin/contracts/utils/cryptography/MerkleProof.sol';

contract ReConeMarket is Ownable, Pausable {
    using ECDSA for bytes32;
    using MerkleProof for bytes32[];

    mapping(bytes32 => bool) public orderIsUsed;

    struct Order {
        address reConeMarketContractAddress;
        address payable makerAddress;
        address nftContractAddress;
        address currencyContractAddress;
        address payable creatorAddress;
        uint256 tokenId;
        uint256 price;
        uint256 salt;
        bytes32 root;
        bytes32[] proof;
        bool isTokenIdSpecified;
        bool isPrimary;
        bytes signature;
    }

    event Bought(
        bytes32 indexed hash,
        address indexed takerAddress,
        address reConeMarketContractAddress,
        address indexed makerAddress,
        address nftContractAddress,
        address currencyContractAddress,
        uint256 tokenId,
        uint256 price,
        uint256 salt,
        bytes32 root,
        bytes32[] proof,
        bool isTokenIdSpecified,
        bytes signature
    );
    event Sold(
        bytes32 indexed hash,
        address indexed takerAddress,
        address reConeMarketContractAddress,
        address indexed makerAddress,
        address nftContractAddress,
        address currencyContractAddress,
        uint256 tokenId,
        uint256 price,
        uint256 salt,
        bytes32 root,
        bytes32[] proof,
        bool isTokenIdSpecified,
        bytes signature
    );
    event Canceled(
        bytes32 indexed hash,
        address indexed executor,
        address reConeMarketContractAddress,
        address nftContractAddress,
        address currencyContractAddress,
        uint256 tokenId,
        uint256 price,
        uint256 salt,
        bytes32 root,
        bytes32[] proof,
        bool isTokenIdSpecified,
        bytes signature
    );

    receive() external payable {}

    function hashOrder(Order memory order) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    order.reConeMarketContractAddress,
                    order.nftContractAddress,
                    order.currencyContractAddress,
                    order.tokenId,
                    order.price,
                    order.salt,
                    order.isTokenIdSpecified
                )
            );
    }

    function validateSignature(
        address signer,
        bytes32 hash,
        bytes memory signature
    ) internal pure returns (bool) {
        bytes32 ethSignedMessageHash = hash.toEthSignedMessageHash();
        address recoveredAddress = ethSignedMessageHash.recover(signature);
        return recoveredAddress == signer;
    }

    function buyNFT(Order memory order) public payable whenNotPaused {
        if (order.currencyContractAddress == address(0x0)) {
            require(
                msg.value == order.price,
                'msg.value should match order.price'
            );
        }
        bytes32 hash = hashOrder(order);
        require(orderIsUsed[hash] == false, 'This order has already used');
        require(
            validateSignature(order.makerAddress, order.root, order.signature),
            "The signature must match the signer's address"
        );
        require(
            order.proof.verify(order.root, hash),
            'Hash must be in the merkle root'
        );

        orderIsUsed[hash] = true;
        IERC721(order.nftContractAddress).transferFrom(
            order.makerAddress,
            msg.sender,
            order.tokenId
        );
        if (order.isPrimary == true) {
            if (order.currencyContractAddress == address(0x0)) {
                order.makerAddress.transfer((order.price * 9) / 10);
                payable(address(this)).transfer(order.price / 10);
            } else {
                IERC20(order.currencyContractAddress).transferFrom(
                    msg.sender,
                    order.makerAddress,
                    (order.price * 9) / 10
                );
                IERC20(order.currencyContractAddress).transferFrom(
                    msg.sender,
                    payable(address(this)),
                    order.price / 10
                );
            }
        } else {
            if (order.currencyContractAddress == address(0x0)) {
                order.makerAddress.transfer((order.price * 90) / 100);
                order.creatorAddress.transfer((order.price * 8) / 100);
                payable(address(this)).transfer((order.price * 2) / 100);
            } else {
                IERC20(order.currencyContractAddress).transferFrom(
                    msg.sender,
                    order.makerAddress,
                    (order.price * 90) / 100
                );
                IERC20(order.currencyContractAddress).transferFrom(
                    msg.sender,
                    order.creatorAddress,
                    (order.price * 8) / 100
                );
                IERC20(order.currencyContractAddress).transferFrom(
                    msg.sender,
                    payable(address(this)),
                    (order.price * 2) / 100
                );
            }
        }

        emit Bought(
            hash,
            msg.sender,
            order.reConeMarketContractAddress,
            order.makerAddress,
            order.nftContractAddress,
            order.currencyContractAddress,
            order.tokenId,
            order.price,
            order.salt,
            order.root,
            order.proof,
            order.isTokenIdSpecified,
            order.signature
        );
    }

    function sellNFT(Order memory order, uint256 actualTokenId)
        public
        payable
        whenNotPaused
    {
        bytes32 hash = hashOrder(order);
        require(!orderIsUsed[hash], 'This order has already used');
        require(
            validateSignature(order.makerAddress, order.root, order.signature),
            "The signature must match the signer's address"
        );
        require(
            order.proof.verify(order.root, hash),
            'Hash must be in the merkle root'
        );
        if (order.isTokenIdSpecified) {
            require(
                order.tokenId == actualTokenId,
                "tokenId and actualTokenId don't match"
            );
        }

        orderIsUsed[hash] = true;
        IERC721(order.nftContractAddress).transferFrom(
            msg.sender,
            order.makerAddress,
            actualTokenId
        );
        IERC20(order.currencyContractAddress).transferFrom(
            order.makerAddress,
            msg.sender,
            (order.price * 90) / 100
        );
        IERC20(order.currencyContractAddress).transferFrom(
            order.makerAddress,
            order.creatorAddress,
            (order.price * 8) / 100
        );
        IERC20(order.currencyContractAddress).transferFrom(
            order.makerAddress,
            payable(address(this)),
            (order.price * 2) / 100
        );

        emit Sold(
            hash,
            msg.sender,
            order.reConeMarketContractAddress,
            order.makerAddress,
            order.nftContractAddress,
            order.currencyContractAddress,
            order.tokenId,
            order.price,
            order.salt,
            order.root,
            order.proof,
            order.isTokenIdSpecified,
            order.signature
        );
    }

    function cancel(Order memory order) public whenNotPaused {
        require(
            order.makerAddress == msg.sender,
            'Only makerAddress can execute cancel function'
        );
        bytes32 hash = hashOrder(order);
        require(!orderIsUsed[hash], 'This order has already used');

        orderIsUsed[hash] = true;

        emit Canceled(
            hash,
            msg.sender,
            order.reConeMarketContractAddress,
            order.nftContractAddress,
            order.currencyContractAddress,
            order.tokenId,
            order.price,
            order.salt,
            order.root,
            order.proof,
            order.isTokenIdSpecified,
            order.signature
        );
    }

    function withdrawEth() public payable onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    function withdrawErc20(address erc20ContractAddress)
        public
        payable
        onlyOwner
    {
        uint256 balance = IERC20(erc20ContractAddress).balanceOf(address(this));
        IERC20(erc20ContractAddress).transferFrom(
            address(this),
            payable(msg.sender),
            balance
        );
    }

    function getBalance() public view returns (uint256) {
        return address(this).balance;
    }
}

