pragma experimental ABIEncoderV2;





interface IMasterChef {
    function pendingOre(uint256 _pid, address _user) external view returns (uint256);
    function getMultiplier(uint256 _from, uint256 _to) external view returns (uint256);
    function orePerBlock() external view returns (uint256);
    function totalAllocPoint() external view returns (uint256);
    function deposit(uint256 _pid, uint256 _amount) external;
    function withdraw(uint256 _pid, uint256 _amount) external;
    function poolInfo(uint256 _pid) external view returns (address,uint256,uint256,uint256);
    function userInfo(uint256 _pid, address _address) external view returns (uint256,uint256,uint256);
}

interface IPledgePool {
    function userInfo(address _address) external view returns (uint256,uint256,uint256);
    function period() external view returns (uint256);
    function pendingOre(address _user) external view returns (uint256);
}


contract GetPoolData is Ownable {
    
    using SafeMath for uint256;

    struct PoolInfo {
        uint256 pid;       
        address tokenAddress;    
        address pledgeAddress;
        bool isNeedLocked;
    }

    PoolInfo[] public poolInfo;

    struct UserData {        
        uint256 endTime;
        uint256 balance;
        uint256 pending;
        uint256 principal;
        uint256 allowance;
    }

    function add(uint256 _pid, address _tokenAddress, address _pledgeAddress, bool _isNeedLocked) public onlyOwner {

        poolInfo.push(PoolInfo({
            pid: _pid,
            tokenAddress: _tokenAddress,
            pledgeAddress: _pledgeAddress,
            isNeedLocked: _isNeedLocked
        }));
    }
    
    function set(uint256 _pid, address _tokenAddress, address _pledgeAddress, bool _isNeedLocked) public onlyOwner {
        poolInfo[_pid].pid = _pid;
        poolInfo[_pid].tokenAddress = _tokenAddress;
        poolInfo[_pid].pledgeAddress = _pledgeAddress;
        poolInfo[_pid].isNeedLocked = _isNeedLocked;
    }

    function getEndTime(address _user,uint256 _pid) public view returns (uint256) {
        PoolInfo memory info = poolInfo[_pid];
        if(info.isNeedLocked){
            return 0;
        }
        (,,uint256 created_at) = IPledgePool(info.pledgeAddress).userInfo(_user);
        uint256 period = IPledgePool(info.pledgeAddress).period();
        if(created_at == 0){
            return 0;
        }
        return created_at.add(period);
    }
    
    function getBalance(address _user,uint256 _pid) public view returns (uint256) {
        PoolInfo memory info = poolInfo[_pid];
        return IERC20(info.tokenAddress).balanceOf(_user);
    }

    function getPending(address _user,uint256 _pid) public view returns (uint256) {
        PoolInfo memory info = poolInfo[_pid];
        if(info.isNeedLocked){
            return IPledgePool(info.pledgeAddress).pendingOre(_user);
        }
        return IMasterChef(info.pledgeAddress).pendingOre(_pid,_user);

    }

    function getPrincipal(address _user,uint256 _pid) public view returns (uint256) {
        PoolInfo memory info = poolInfo[_pid];
        if(info.isNeedLocked){
            (uint256 amount,,) = IPledgePool(info.pledgeAddress).userInfo(_user);
            return amount;
        }
        (uint256 principal,,) = IMasterChef(info.pledgeAddress).userInfo(_pid,_user);
        return principal;
    }

    function getAllowance(address _user,uint256 _pid) public view returns (uint256) {
        PoolInfo memory info = poolInfo[_pid];
        return IERC20(info.tokenAddress).allowance(_user, info.tokenAddress);
    }

    function getUserData(address _user) public view returns (UserData[] memory){
        uint256 len = poolInfo.length;
        UserData[] memory results = new UserData[](len);
        for(uint256 i = 0 ; i < len; i++){
            results[i] = UserData({
                endTime: getEndTime(_user,i),
                balance: getBalance(_user,i),
                pending: getPending(_user,i),
                principal: getPrincipal(_user,i),
                allowance: getAllowance(_user,i)
            });
        }
        return results;
    }


}