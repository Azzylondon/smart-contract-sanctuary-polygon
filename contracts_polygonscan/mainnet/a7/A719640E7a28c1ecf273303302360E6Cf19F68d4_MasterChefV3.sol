        ButterFinal _butterToken,
        address _devAddress,
        address _feeAddress
    ) public {
        butterToken = _butterToken;
        butterPerBlock = BASE.mul(TEN**butterToken.decimals()).div(THOUSAND);
        startBlock = block.number + 43200;
        devAddress = _devAddress;
        feeAddress = _feeAddress;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    
    

