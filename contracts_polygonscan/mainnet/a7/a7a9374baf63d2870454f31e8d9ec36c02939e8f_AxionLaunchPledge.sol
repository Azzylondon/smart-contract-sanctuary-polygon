pragma solidity ^0.8.0;

import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import '@openzeppelin/contracts/interfaces/IERC721.sol';
import '@openzeppelin/contracts/interfaces/IERC1155.sol';
import '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';
import '../interfaces/IStakeManager.sol';
import '../interfaces/IStakeCustodian.sol';
import '../interfaces/IStakeToken.sol';

contract AxionLaunchPledge is OwnableUpgradeable {
    using SafeERC20 for IERC20;

    enum Methods {YearStake, OG5555, OGPoly, MaxStake}

    struct Tier {
        uint256 allocation; // Additional allocation allowed for tier
        Methods method; // Method to use that will allow the additional allocation
        bool required; // If required user MUST pass tier
    }

    struct Item {
        Tier[] tiers; // Read up ^
        uint256 tokenPerDollar; // amount of tokens per each dollar pledged
        uint256 maxPledged; // Max amount of USDC pledged
        uint256 pledged; // Current pledged amount
        uint256 numberOfPledgers;
        uint256 start; // start time
        uint256 end; // end time
    }

    struct UserPledge {
        uint256 amount; // amount user pledged
        uint256 tokens; // amount of tokens to be vested
    }

    struct PledgedItem {
        UserPledge record; // UserPledge Record
        Item item; // Item record
    }

    //** contracts */
    IStakeManager stakeManager;
    IStakeCustodian stakeCustodian;
    IStakeToken stakeToken;
    IERC1155 axionUtility;
    mapping(string => address) tokens; // Known tokens

    //** Meat and bones of contracts :) */
    mapping(string => Item) items;
    mapping(address => string[]) public userPledges;
    mapping(address => mapping(string => UserPledge)) public records;
    string[] internal names;

    /** Pledge
        @param name {string}
        @param amount {uint256}
        @param stakeId {uint256}
     */
    function axionLaunchPledge(
        string memory name,
        uint256 amount,
        uint256 stakeId
    ) external {
        //** 0 amount not allowed */
        require(amount > 0, 'Amount can not be 0');

        //** get item */
        Item storage item = items[name];
        //** Ensure allocation is allowed */
        require(
            item.start <= block.timestamp && item.end >= block.timestamp,
            'Allocation is closed'
        );

        //** Get user allocation based on methods */
        uint256 totalAllocation = 0;
        for (uint256 i = 0; i < item.tiers.length; i++) {
            bool exists = checkMethod(item.tiers[i].method, stakeId);
            if (item.tiers[i].required) require(exists, 'Pledge: Base requirement unmet');

            if (exists) {
                totalAllocation += item.tiers[i].allocation;
            }
        }

        //** Get user pledge */
        UserPledge storage userPledge = records[msg.sender][name];
        //** Add to user list of pledges */
        if (userPledge.amount == 0) {
            item.numberOfPledgers += 1;
            userPledges[msg.sender].push(name);
        }
        //** Ensure user is not overpledging */
        uint256 amountLeftToPledge = totalAllocation - userPledge.amount;

        require(
            amount <= amountLeftToPledge,
            'Pledge: Amount provided greater then total allocation'
        );

        //** Transfer tokens */
        IERC20(tokens['USDC']).safeTransferFrom(msg.sender, address(this), amount);

        //** Update user */
        uint256 tokensEarned = (amount * item.tokenPerDollar) / 1e6;
        userPledge.amount += amount;
        userPledge.tokens += tokensEarned;

        //** Update the item and ensure max pledge hasn't been reached */
        item.pledged += amount;
        require(item.pledged <= item.maxPledged, 'Pledge: Max Pledge reached');

        emit UserPledged(
            msg.sender,
            name,
            userPledge.amount,
            userPledge.tokens,
            amount,
            tokensEarned,
            stakeId
        );
    }

    /** checkMethod
        @param method {Methods}
        @param stakeId {uint256}
     */
    function checkMethod(Methods method, uint256 stakeId) internal returns (bool) {
        if (method == Methods.OG5555) {
            uint256 balance = axionUtility.balanceOf(msg.sender, 0);
            return balance >= 1;
        }

        if (method == Methods.OGPoly) {
            uint256 balance = axionUtility.balanceOf(msg.sender, 2);
            return balance >= 1;
        }

        if (method == Methods.MaxStake) {
            require(
                stakeToken.isOwnerOf(msg.sender, stakeId) ||
                    stakeCustodian.isOwnerOf(msg.sender, stakeId),
                'Pledge: Not owner of stake.'
            );
            StakeData1e18 memory stakeData = stakeManager.getStake(stakeId);

            return
                stakeData.stakingDays == 5555 &&
                stakeData.amount >= (950000 * 1e18) &&
                stakeData.status == StakeStatus.Active;
        }

        if (method == Methods.YearStake) {
            require(
                stakeToken.isOwnerOf(msg.sender, stakeId) ||
                    stakeCustodian.isOwnerOf(msg.sender, stakeId),
                'Pledge: Not owner of stake.'
            );
            StakeData1e18 memory stakeData = stakeManager.getStake(stakeId);

            return
                stakeData.stakingDays >= 350 &&
                stakeData.amount >= (950000 * 1e18) &&
                stakeData.status == StakeStatus.Active;
        }

        return false;
    }

    /** Item updates ------------------------------------------------------------------ */

    /** @notice create an item */
    function addItem(string memory _name, Item memory _item) external onlyOwner {
        require(items[_name].start == 0, 'Pledge: Item already exists');
        require(_item.start != 0, 'Value must be set');

        names.push(_name);
        for (uint256 i = 0; i < _item.tiers.length; i++) {
            Tier memory tier = _item.tiers[i];
            items[_name].tiers.push(
                Tier({method: tier.method, required: tier.required, allocation: tier.allocation})
            );
        }
        items[_name].tokenPerDollar = _item.tokenPerDollar;
        items[_name].maxPledged = _item.maxPledged;
        items[_name].start = _item.start;
        items[_name].end = _item.end;

        emit ItemAdded(msg.sender, _name, _item);
    }

    /** @notice update an item, can not update the tokenPerDollar */
    function updateItem(string memory _name, Item memory _item) external onlyOwner {
        require(items[_name].start != 0, 'Pledge: Item does not exist');

        for (uint256 i = 0; i < _item.tiers.length; i++) {
            Tier memory tier = _item.tiers[i];
            items[_name].tiers[i] = Tier({
                method: tier.method,
                required: tier.required,
                allocation: tier.allocation
            });
        }
        if (_item.maxPledged != 0) items[_name].maxPledged = _item.maxPledged;
        if (_item.start != 0) items[_name].start = _item.start;
        if (_item.end != 0) items[_name].end = _item.end;

        emit ItemUpdated(msg.sender, _name, _item);
    }

    // Getters && Setters ------------------------------------------------------------------ */

    /** @notice get names length for pagination */
    function getNamesLength() public view returns (uint256) {
        return names.length;
    }

    /** @notice Get names */
    function getNames(uint256 from, uint256 to) public view returns (string[] memory) {
        string[] memory _names = new string[](to - from);

        uint256 count = 0;
        for (uint256 i = from; i < to; i++) {
            _names[count] = names[i];
            count++;
        }

        return _names;
    }

    function getItem(string memory name) public view returns (Item memory) {
        return items[name];
    }

    /** @notice get paginated items */
    function getItems(uint256 from, uint256 to) public view returns (Item[] memory) {
        Item[] memory _items = new Item[](to - from);

        uint256 count = 0;
        for (uint256 i = from; i < to; i++) {
            _items[count] = items[names[i]];
            count++;
        }

        return _items;
    }

    /** @notice get all pledge items */
    function getAllItems() public view returns (Item[] memory) {
        uint256 length = getNamesLength();

        Item[] memory _items = new Item[](length);

        for (uint256 i = 0; i < length; i++) {
            _items[i] = items[names[i]];
        }

        return _items;
    }

    /** @notice get length of user pledged items for pagination in frontend */
    function getUserPledgesLength(address user) public view returns (uint256) {
        return userPledges[user].length;
    }

    /** @notice get all user pledged items */
    function getUserItems(
        address user,
        uint256 from,
        uint256 to
    ) public view returns (PledgedItem[] memory) {
        PledgedItem[] memory _items = new PledgedItem[](to - from);
        string[] memory keys = userPledges[user];

        uint256 count = 0;
        for (uint256 i = from; i < to; i++) {
            _items[count].item = items[keys[i]];
            _items[count].record = records[user][keys[i]];
            count++;
        }

        return _items;
    }

    /** @notice allow manager to set known tokens */
    function setKnownTokens(string memory _name, address _token) external onlyOwner {
        tokens[_name] = _token;
    }

    /** @notice release */
    function release(address tkn, address to) external onlyOwner {
        IERC20(tkn).safeTransfer(to, IERC20(tkn).balanceOf(address(this)));
    }

    /** Initialize */
    function initialize(
        address _stakeManager,
        address _stakeCustodian,
        address _stakeToken,
        address _axionUtility
    ) public initializer {
        __Ownable_init();

        stakeManager = IStakeManager(_stakeManager);
        stakeCustodian = IStakeCustodian(_stakeCustodian);
        stakeToken = IStakeToken(_stakeToken);
        axionUtility = IERC1155(_axionUtility);
    }

    event UserPledged(
        address account,
        string name,
        uint256 totalAmount,
        uint256 totalTokens,
        uint256 amount,
        uint256 tokens,
        uint256 stakeId
    );
    event ItemAdded(address owner, string name, Item item);
    event ItemUpdated(address owner, string name, Item item);
}

