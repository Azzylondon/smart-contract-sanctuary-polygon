contract Router is Ownable {
    using SafeERC20 for IERC20;

    uint256 public constant N_COINS = 2;
    uint256 public constant WETH_IDX = N_COINS - 1;
    address public constant WETH = 0x1169AB3622727fbb784225abA2d2D30B67C54967; // MOCK WMATIC

    address public factory;
    address public router;

    constructor(address _factory) {
        router = address(this);
        factory = _factory;
    }

    /* ========== INTERNAL FUNCTIONS ========== */

    function deadline_check(uint256 _deadline) internal {
        require(block.timestamp <= _deadline, "Timeout");
    }

    function sort_token(address tokenA, address tokenB) internal pure returns (address token0, address token1) {
        require(tokenA != tokenB, "IDENTICAL_ADDRESSES");
        (token0, token1) = tokenA < tokenB ? (tokenA, tokenB) : (tokenB, tokenA);
        require(token0 != address(0), "ZERO_ADDRESS");
    }

    function get_amounts_out(uint256 dx, address[] memory path) internal view returns (uint256[] memory amounts) {
        require(path.length >= 2, "INVALID_PATH");
        amounts = new uint256[](path.length);
        amounts[0] = dx;
        for (uint256 i; i < path.length - 1; i++) {
            (address input, address output) = (path[i], path[i + 1]);
            (address token0, ) = sort_token(input, output);
            address _pool = getPair(path[i], path[i + 1]);
            uint256 dy = ICryptoPair(_pool).get_dy(input == token0 ? 1 : 0, input == token0 ? 0 : 1, amounts[i]);
            amounts[i + 1] = dy;
        }
    }

    // function exchange(
    //     address[N_COINS] memory _coins,
    //     uint256 i,
    //     uint256 j,
    //     uint256 dx,
    //     uint256 min_dy
    // ) internal {
    //     address _pool = getPair(_coins[0], _coins[1]);
    //     IERC20(_coins[i]).safeTransferFrom(msg.sender, router, dx);
    //     ICryptoPair(_pool).exchange(i, j, dx, min_dy);
    //     IERC20(_coins[j]).safeTransfer(msg.sender, IERC20(_coins[j]).balanceOf(router));
    // }

    function exchange(address[N_COINS] memory _coins, uint256 i, uint256 j, uint256 dx, uint256 min_dy, bool use_eth) internal {
        address _pool = getPair(_coins[0], _coins[1]);
        if (i == 1 && use_eth) {
            IWETH(WETH).deposit{value: msg.value}();
            uint256 amount = IERC20(WETH).balanceOf(router);
            IERC20(WETH).safeTransfer(_pool, amount);
        } else {
            IERC20(_coins[i]).safeTransferFrom(msg.sender, router, dx);
        }
        ICryptoPair(_pool).exchange(i, j, dx, min_dy);

        if (j == 1 && use_eth) {
            //wrap ETH here
            uint256 WETHBalance = IERC20(WETH).balanceOf(router);
            IWETH(WETH).withdraw(WETHBalance);
            payable(msg.sender).transfer(WETHBalance);
        } else {
            IERC20(_coins[j]).safeTransfer(msg.sender, IERC20(_coins[j]).balanceOf(router));
        }
    }

    function swap(uint256[] memory amounts, address[] memory path) internal virtual {
        for (uint256 i; i < path.length - 1; i++) {
            (address input, address output) = (path[i], path[i + 1]);
            (address token0, ) = sort_token(input, output);
            uint256 amountOut = amounts[i + 1];
            (uint256 amount0Out, uint256 amount1Out) = input == token0
                ? (uint256(0), amountOut)
                : (amountOut, uint256(0));
            bool use_eth = path[i] == WETH || path[i + 1] == WETH;
            exchange([path[i], path[i + 1]], input == token0 ? 1 : 0, input == token0 ? 0 : 1, amount0Out, amount1Out, use_eth);
        }
    }

    /* ========== EXTERNAL FUNCTIONS ========== */

    function createPair(address[N_COINS] memory _coins, uint256 _initial_price) public returns (address pair) {
        //set initial_prices here
        if (_coins[0] == WETH) {
            _coins[0] = _coins[1];
            _coins[1] = WETH;
        }
        pair = IFactory(factory).createPair(_coins, _initial_price, msg.sender);
        address lp_token = ICryptoPair(pair).get_lp_token();
        IERC20(lp_token).approve(pair, type(uint256).max);
        IERC20(_coins[0]).approve(pair, type(uint256).max);
        IERC20(_coins[1]).approve(pair, type(uint256).max);
    }

    function addLiquidity(
        address[N_COINS] memory _coins,
        uint256[N_COINS] memory _amount,
        uint256 _min_mint_amount,
        address _receiver,
        uint256 _deadline
    ) external payable returns (uint256) {
        deadline_check(_deadline);
        address _pool = getPair(_coins[0], _coins[1]);
        if (_pool == address(0)) {
            revert("pool not exist");
        }
        _receiver = msg.sender;
        /*
            @notice Add liquidity and wrap Ether to wETH
            @param _amounts Amount of each token to deposit. `msg.value` must be
                            equal to the given amount of Ether.
            @param _min_mint_amount Minimum amount of LP token to receive
            @param _receiver Receiver of the LP tokens
            @return Amount of LP tokens received
        */
        uint256 temp = N_COINS;
        if (_coins[1] == WETH) {
            require(msg.value == _amount[WETH_IDX]);
            IWETH(WETH).deposit{value: msg.value}();
            IERC20(WETH).safeTransfer(router, IERC20(WETH).balanceOf(router));
            temp--;
        }

        for (uint256 i = 0; i < temp; i++) {
            if (_amount[i] > 0) {
                IERC20(_coins[i]).safeTransferFrom(msg.sender, router, _amount[i]);
            }
        }
        address lpToken = ICryptoPair(_pool).get_lp_token();
        ICryptoPair(_pool).add_liquidity(_amount, _min_mint_amount);
        uint256 amount = ERC20(lpToken).balanceOf(router);
        IERC20(lpToken).safeTransfer(_receiver, amount);
        return amount;
    }

    function removeLiquidity(
        address[N_COINS] memory _coins,
        uint256 _amount,
        uint256[N_COINS] memory _min_amounts,
        address _receiver,
        uint256 _deadline
    ) external returns (uint256[N_COINS] memory) {
        /*
            @notice Withdraw coins from the pool, unwrapping wETH to Ether
            @dev Withdrawal amounts are based on current deposit ratios
            @param _amount Quantity of LP tokens to burn in the withdrawal
            @param _min_amounts Minimum amounts of coins to receive
            @param _receiver Receiver of the withdrawn tokens
            @return Amounts of coins that were withdrawn
        */
        deadline_check(_deadline);
        address _pool = getPair(_coins[0], _coins[1]);
        address lpToken = ICryptoPair(_pool).get_lp_token();
        require(_pool != address(0), "pool not exist");
        _receiver = msg.sender;
        IERC20(lpToken).safeTransferFrom(msg.sender, router, _amount);
        ICryptoPair(_pool).remove_liquidity(_amount, _min_amounts);

        uint256[N_COINS] memory amounts;
        uint256 tmp = N_COINS;
        if (_coins[1] == WETH) {
            amounts[WETH_IDX] = IERC20(WETH).balanceOf(router);
            IWETH(WETH).withdraw(amounts[WETH_IDX]);
            payable(msg.sender).transfer(amounts[WETH_IDX]);
            tmp -= 1;
        }

        for (uint256 i = 0; i < tmp; i++) {
            address coin = _coins[i];
            amounts[i] = IERC20(coin).balanceOf(router);
            IERC20(coin).safeTransfer(_receiver, amounts[i]);
        }
        return amounts;
    }

    function removeLiquidityOneCoin(
        address[N_COINS] memory _coins,
        uint256 _token_amount,
        uint256 i,
        uint256 _min_amount,
        address receiver,
        uint256 _deadline
    ) external returns (uint256) {
        /*
            @notice Withdraw a single coin from the pool, unwrapping wETH to Ether
            @param _token_amount Amount of LP tokens to burn in the withdrawal
            @param i Index value of the coin to withdraw
            @param _min_amount Minimum amount of coin to receive
            @param _receiver Receiver of the withdrawn token
            @return Amount of underlying coin received
        */
        deadline_check(_deadline);
        address _pool = getPair(_coins[0], _coins[1]);
        require(_pool != address(0), "pool not exist");
        address lpToken = ICryptoPair(_pool).get_lp_token();

        receiver = msg.sender;
        IERC20(lpToken).safeTransferFrom(msg.sender, router, _token_amount);
        ICryptoPair(_pool).remove_liquidity_one_coin(_token_amount, i, _min_amount);

        address coin = _coins[i];
        uint256 amount = IERC20(coin).balanceOf(router);
        if (i == WETH_IDX) {
            IWETH(WETH).withdraw(amount);
            payable(msg.sender).transfer(amount);
        } else {
            IERC20(coin).safeTransfer(receiver, amount);
        }
        return amount;
    }

    function swapExactTokensForTokens(
        uint256 dx,
        uint256 min_dy,
        address[] calldata path,
        uint256 _deadline
    ) external returns (uint256[] memory amounts) {
        deadline_check(_deadline);
        amounts = get_amounts_out(dx, path);
        require(amounts[amounts.length - 1] >= min_dy, "INSUFFICIENT_OUTPUT_AMOUNT");
        swap(amounts, path);
    }

    // function swapExactTokensForETH(
    //     uint256 dx,
    //     uint256 min_dy,
    //     address[] calldata path,
    //     uint256 _deadline
    // ) external payable returns (uint256[] memory amounts) {
    //     deadline_check(_deadline);
    //     require(path[path.length - 1] == WETH, "INVALID_PATH");
    //     amounts = get_amounts_out(dx, path);
    //     require(amounts[amounts.length - 1] >= min_dy, "INSUFFICIENT_OUTPUT_AMOUNT");
    //     swap(amounts, path, address(this));
    //     uint256 WETHBalance = IERC20(WETH).balanceOf(router);
    //     IWETH(WETH).withdraw(WETHBalance);
    //     payable(msg.sender).transfer(WETHBalance);
    // }

    function getPair(address _tokenA, address _tokenB) public view returns (address _pair) {
        _pair = IFactory(factory).getPair(_tokenA, _tokenB);
    }

    /* ========== RESTRICTED FUNCTIONS ========== */
    function changeFactory(address _newFactory) external onlyOwner {
        factory = _newFactory;
    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}
}

