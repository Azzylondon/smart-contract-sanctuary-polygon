pragma solidity ^0.8.4;





contract CallingERC1155Token is Ownable{
    event Mint(
        uint tokenId,
        uint amount,
        uint price,
        address indexed _contract,
        address indexed _owner
    );

    event Bought(
        uint tokenId,
        uint price,
        address indexed _contract,
        address indexed _owner,
        address indexed _buyer
    );

    address public factoryContract;

    constructor(address _factoryContract){
        factoryContract = _factoryContract;
    }

    function setFactoryContract(address _factoryContract) public onlyOwner{
        factoryContract = _factoryContract;
    }
    function name(address _contract) external view returns (string memory) {
        return IERC1155Token(_contract).name();
    }
    function baseMetadataURI(address _contract) external view returns (string memory){
        return IERC1155Token(_contract).baseMetadataURI();
    }
    function getItemInfo(uint _tokenid, address _contract) external view  returns (uint price, uint _tokenId,uint total, uint remaining){
        return IERC1155Token(_contract).getItemInfo(_tokenid);
    }

    function uri(uint _tokenId, address _contract) external view returns (string memory){
        return IERC1155Token(_contract).uri(_tokenId);
    }

     function mint(uint _id, uint256 amount, uint256 price, address _contract)  external returns (uint) {
         address _owner = IERC1155Factory(factoryContract).owner();
         emit Mint(_id,amount,price,_contract,_owner);
         return IERC1155Token(_contract).mint(_id,amount,price);
     }

    function purchaseItem(address _owner, uint _tokenId) external payable {
        address _contract = IERC1155Factory(factoryContract).ownerToContract(_owner);
        uint price = IERC1155Token(_contract).getItemPrice(_tokenId);
        require(msg.value >= price, "not enough ether to cover item price");
        
        emit Bought(_tokenId, price, _contract, _owner, msg.sender);

          //pay feeAccount and seller
        address payable feeAccount = payable(IERC1155Factory(factoryContract).feeAccount());
        uint feePercent = IERC1155Factory(factoryContract).feePercent();
        uint256 fees = (price/100)*feePercent;
        feeAccount.transfer(fees);

        address payable owner = payable(_owner);
        owner.transfer(price - fees);
        IERC1155Token(_contract).purchaseItem(_tokenId);
    }
}