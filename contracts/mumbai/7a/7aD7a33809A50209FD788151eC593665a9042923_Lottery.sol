pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "../IPlatform.sol";

contract Lottery is Ownable {
    using EnumerableSet for EnumerableSet.AddressSet;
    using EnumerableMap for EnumerableMap.AddressToUintMap;

    address private _platform;
    address private _token;
    uint256 private _price;
    uint256 private _stopHeight;
    EnumerableSet.AddressSet private _participants;
    mapping(uint256 => EnumerableMap.AddressToUintMap) private _lotteries;
    EnumerableMap.AddressToUintMap private _winners;

    constructor(
        address platform_,
        address token_,
        uint256 price_
    ) {
        _platform = platform_;
        _token = token_;
        _price = price_;
        _stopHeight = block.number + 100;
    }

    function _generateId() internal view returns (bytes32) {
        return keccak256(abi.encode(_msgSender(), _msgData(), block.timestamp));
    }

    function platform() public view returns (address) {
        return _platform;
    }

    function setPlatform(address platform_) public {
        _platform = platform_;
    }

    function token() public view returns (address) {
        return _token;
    }

    function setToken(address token_) public onlyOwner {
        _token = token_;
    }

    function price() public view returns (uint256) {
        return _price;
    }

    function setPrice(uint256 price_) public {
        _price = price_;
    }

    function buy(uint256[] calldata numbers_) public returns (bytes32) {
        require(block.number < _stopHeight, "waiting for drawing the lottery");
        bytes32 id = _generateId();
        IPlatform(_platform).gameDeosit(
            id,
            msg.sender,
            _token,
            numbers_.length * _price
        );
        _participants.add(msg.sender);
        for (uint8 i = 0; i < numbers_.length; i++) {
            _lotteries[numbers_[i]].set(
                msg.sender,
                _lotteries[numbers_[i]].get(msg.sender)
            );
        }
        return id;
    }

    function draw()
        public
        returns (
            bytes32,
            address[] memory,
            uint256[] memory
        )
    {
        require(
            block.number > _stopHeight + 5,
            "waiting for stopping the lottery buying"
        );
        bytes memory hash = abi.encodePacked(blockhash(_stopHeight - 1));
        uint256 total;
        for (uint8 i = 0; i < 5; i++) {
            EnumerableMap.AddressToUintMap storage singleWinners = _lotteries[
                uint256(uint8(hash[i]))
            ];
            for (uint256 j = 0; j < singleWinners.length(); j++) {
                (address user, uint256 count) = singleWinners.at(j);
                total += count;
                _winners.set(user, _winners.get(user) + count);
            }
        }
        uint256 balance = IPlatform(_platform).balanceOfGame(
            address(this),
            _token
        );
        uint256 amountPer = balance / total;
        address[] memory a = new address[](_winners.length());
        uint256[] memory b = new uint256[](_winners.length());
        bytes32 id = _generateId();
        for (uint256 i = 0; i < _winners.length(); i++) {
            (address user, uint256 count) = _winners.at(i);
            IPlatform(_platform).gameClaim(id, user, _token, amountPer * count);
            a[i] = user;
            b[i] = amountPer * count;
        }
        _stopHeight = block.number + 100;
        return (id, a, b);
    }
}

