contract Donate is Ownable {

    struct Receiver {
        address addr;
        string name;
        string avatarLink;
    }

    mapping(address => Receiver) public addressToReceiver;

    constructor() {

    }

    event Donation(address to, uint value, address tokenAddress, string ipfsLink);

    event DonationEther(address to, uint value, string ipfsLink);

    function withdrawContractBalance() external payable onlyOwner {
        require(payable(msg.sender).send(address(this).balance));
    }

    function getContractBalance() external view returns(uint) {
        return address(this).balance;
    }

    function registerNewReceiver(string memory name, string memory avatarLink) external {
        addressToReceiver[msg.sender] = Receiver({
        addr: msg.sender,
        name: name,
        avatarLink: avatarLink
        });
    }

    function donateEther(address payable receiver, string memory ipfsLink) external payable {
        require(receiver != address(0));
        require(msg.value != 0, "Donation 0 funds is unavailable");
        uint toReceive = msg.value * 99 / 100;
        receiver.transfer(toReceive);

        emit DonationEther(receiver, toReceive, ipfsLink);
    }

    function donateToken(address payable receiver, address tokenAddress, uint256 amount, string memory ipfsLink) external {
        require(receiver != address(0));
        require(amount != 0);

        uint toReceive = amount * 99 / 100;
        IERC20 token = IERC20(tokenAddress);
        token.transferFrom(msg.sender, receiver, toReceive);
        token.transferFrom(msg.sender, address(this), amount - toReceive);

        emit Donation(receiver, toReceive, tokenAddress, ipfsLink);
    }
}