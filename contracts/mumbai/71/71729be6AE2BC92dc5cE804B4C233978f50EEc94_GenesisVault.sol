import 'base64-sol/base64.sol';
import '@openzeppelin/contracts/utils/Strings.sol';

library UriUtils {
  function getBase64MetadataFromArray(
    uint8[] memory metadata,
    string[] memory metadataInfo,
    string memory name,
    string memory imageSrc
  ) external pure returns (string memory) {
    string memory attributeValuesJson = '';

    for (uint256 i = 0; i < metadata.length; i++) {
      attributeValuesJson = string(
        abi.encodePacked(
          attributeValuesJson,
          '{"trait_type": "',
          string(metadataInfo[i]),
          '", "value": ',
          Strings.toString(metadata[i]),
          i == (metadata.length - 1) ? '}' : '},'
        )
      );
    }

    string memory json = Base64.encode(
      bytes(
        string(
          abi.encodePacked(
            '{"name": "',
            name,
            '",',
            '"image": "',
            imageSrc,
            '",',
            '"attributes":[',
            attributeValuesJson,
            ']}'
          )
        )
      )
    );

    return string(abi.encodePacked('data:application/json;base64,', json));
  }
}

