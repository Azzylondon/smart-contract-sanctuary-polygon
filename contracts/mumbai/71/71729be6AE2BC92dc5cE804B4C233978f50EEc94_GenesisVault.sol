/// @custom:security-contact [email protected]
contract GenesisVault is
  ERC1155,
  Ownable,
  Pausable,
  ERC1155Burnable,
  ERC1155Supply,
  IERC2981,
  ERC721Holder,
  ERC1155Holder
{
  uint256 public constant GENESIS_VAULT_ID = 1;

  address public crystalContractAddress;
  address public accessoriesContractAddress;
  address public weaponsContractAddress;

  /// @notice internal structure to hold NFT metadata on-chain
  struct Attributes {
    string name;
    string imageSrc;
    string level;
    string damage;
    string accuracy;
    string weight;
    string usage;
    string durability;
  }

  /// @dev Storage of randomness used to generate genesis vaults.
  struct RandomnessRequest {
    uint256 genesisVaultId;
    address opener;
  }

  modifier callerIsUser() {
    /* solhint-disable avoid-tx-origin */
    require(tx.origin == msg.sender, 'The caller is another contract');
    _;
    /* solhint-enable avoid-tx-origin*/
  }

  /// @dev Mapping of token ids -> Attributes
  mapping(uint256 => Attributes) public metadata;

  /// @dev NFT royalties (ERC2981)
  /// 10% = 1000 bps
  /// (royaltyBps * _salePrice) / 10000
  uint256 public royaltyBps;

  /// @dev Name of the contract (opensea requirement)
  string public name;

  /// @notice Max mint per wallets (default is 5)
  uint256 public maxMintsPerWallet = 5;

  /// @notice Max mint amount of genesis vault
  uint256 public maxSupply = 2500;

  /// @notice Flag if public sale is turned on (default is false)
  bool public isPublicSaleOn = false;

  /// @notice Mint price in ether (default 0.0001)
  uint256 public mintPrice = 0.0001 ether;

  /// @dev holds merkle tree root used for claiming tokens
  bytes32 public immutable merkleRoot;

  /// @dev mapping between owner address -> flag if token is already claimed
  mapping(address => bool) public hasClaimed;

  /// @dev genesis vault id => genesis vault opener => Randomness request
  mapping(uint256 => mapping(address => bytes32)) public currentRequestId;

  /// @dev thrown if user is trying to claim a genesis vault that has already been claimed
  error AlreadyClaimed();

  /// @dev thrown if combination of user address / id is not in merkle tree root
  error NotInWhitelist();

  /// @dev Emitted when royalty BPS is updated
  event RoyaltyBpsUpdated(uint256 royaltyBps);

  /// @dev Emitted when genesis vault is minted
  event GenesisVaultMinted();

  /// @dev Emitted on a request to open a genesis vault.
  event GenesisVaultOpenRequest(
    uint256 indexed genesisVaultId,
    address indexed opener,
    bytes32 requestId
  );

  /// @notice Creates genesis vault contract
  /// @param _name Name of contract displayed on opensea
  /// @param _royaltyBps Royalty BPS of genesis vault (100 -> 1%)
  /// @param _merkleRoot Merkle tree root used for claiming genesis vaults
  constructor(
    string memory _name,
    uint256 _royaltyBps,
    bytes32 _merkleRoot,
    address _crystalContractAddress,
    address _accessoriesContractAddress,
    address _weaponContractAddress
  )
    ERC1155('ipfs://QmNWs1gp9cdHHtWKzYNLNb77Vuyj5NqjSxziRzLMNZVoZJ/${id}.json')
  {
    name = _name;
    royaltyBps = _royaltyBps;
    merkleRoot = _merkleRoot;
    crystalContractAddress = _crystalContractAddress;
    accessoriesContractAddress = _accessoriesContractAddress;
    weaponsContractAddress = _weaponContractAddress;
  }

  /// @notice Set maximum mints per wallet
  function setMaxMintsPerWallet(uint16 _maxMintsPerWallet) external onlyOwner {
    maxMintsPerWallet = _maxMintsPerWallet;
  }

  /// @notice Set maximum mints per wallet
  function setMaxSupply(uint16 _maxSupply) external onlyOwner {
    maxSupply = _maxSupply;
  }

  /// @notice Set public sale on/off
  function setPublicSale(bool _isPublicSaleOn) external onlyOwner {
    isPublicSaleOn = _isPublicSaleOn;
  }

  /// @notice Open genesis vault
  function open() external {
    require(
      balanceOf(msg.sender, GENESIS_VAULT_ID) > 0,
      'genesis vault not found'
    );

    _burn(msg.sender, GENESIS_VAULT_ID, 1);

    IClaimable(crystalContractAddress).claim(msg.sender, 1);
    IClaimable(accessoriesContractAddress).claim(msg.sender, 1);
    IClaimable(weaponsContractAddress).claim(msg.sender, 1);
  }

  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override(ERC1155, ERC1155Receiver, IERC165)
    returns (bool)
  {
    return
      super.supportsInterface(interfaceId) ||
      interfaceId == type(IERC2981).interfaceId;
  }

  /// @dev See EIP 2918
  function royaltyInfo(uint256, uint256 salePrice)
    external
    view
    virtual
    override
    returns (address receiver, uint256 royaltyAmount)
  {
    receiver = address(this);
    royaltyAmount = (salePrice * royaltyBps) / 10_000;
  }

  /// @notice Update royalty BPS
  /// @param _royaltyBps New royalty BPS
  function updateRoyaltyBps(uint256 _royaltyBps) external onlyOwner {
    royaltyBps = _royaltyBps;
  }

  /// @notice Pause contract
  function pause() external onlyOwner {
    _pause();
  }

  /// @notice Unpause contract
  function unpause() external onlyOwner {
    _unpause();
  }

  /// @notice Set mint price
  function setMintPrice(uint256 _mintPrice) external onlyOwner {
    mintPrice = _mintPrice;
  }

  /// @notice Claim genesis vault
  /// @param account Address of account to claim genesis vault
  /// @param id ID of genesis vault
  /// @param amount Amount of genesis vault to claim
  /// @param _proof Merkle tree proof
  function claim(
    address account,
    uint256 id,
    uint256 amount,
    bytes32[] calldata _proof
  ) external payable callerIsUser {
    if (hasClaimed[account]) revert AlreadyClaimed();

    require(
      balanceOf(msg.sender, id) <= maxMintsPerWallet,
      'You cannot mint more tokens'
    );

    require(msg.value == mintPrice, 'Not enough ETH for claim');

    bytes32 leaf = keccak256(abi.encodePacked(account, id));

    bool isValidLeaf = MerkleProof.verify(_proof, merkleRoot, leaf);

    if (!isValidLeaf) revert NotInWhitelist();

    // Set address to claimed
    hasClaimed[account] = true;

    _mint(account, id, amount, '');
  }

  function purchase(bytes32[] calldata _proof) external payable callerIsUser {
    if (hasClaimed[msg.sender]) revert AlreadyClaimed();

    require(msg.value >= mintPrice, 'Not enough ETH for purchase');
    // Minting up to 2,500 “genesis vaults”
    require(
      maxSupply >= totalSupply(GENESIS_VAULT_ID) + 1,
      'All tokens are minted'
    );

    if (!isPublicSaleOn) {
      bytes32 leaf = keccak256(abi.encodePacked(msg.sender, GENESIS_VAULT_ID));

      bool isValidLeaf = MerkleProof.verify(_proof, merkleRoot, leaf);

      if (!isValidLeaf) revert NotInWhitelist();
      // Set address to claimed
      hasClaimed[msg.sender] = true;
    }

    if (isPublicSaleOn) {
      require(
        (balanceOf(msg.sender, GENESIS_VAULT_ID) + 1) <= maxMintsPerWallet,
        'You cannot mint more tokens'
      );
    }
    _mint(msg.sender, GENESIS_VAULT_ID, 1, '');
  }

  /// @notice Internal Mint Token
  /// @param account Address of account to mint token
  /// @param id id of token
  /// @param amount amount of tokens
  /// @param attr Attributes of tokens
  /// @param data Token data
  function mint(
    address account,
    uint256 id,
    uint256 amount,
    Attributes memory attr,
    bytes memory data
  ) external onlyOwner {
    _mint(account, id, amount, data);
    metadata[id] = attr;
  }

  /// @notice Internal Batch Mint Token
  /// @param to Address of account to mint token
  /// @param ids Ids of token
  /// @param amounts Amounts of tokens
  /// @param data Token data
  function mintBatch(
    address to,
    uint256[] memory ids,
    uint256[] memory amounts,
    bytes memory data
  ) external onlyOwner {
    _mintBatch(to, ids, amounts, data);
  }

  function _beforeTokenTransfer(
    address operator,
    address from,
    address to,
    uint256[] memory ids,
    uint256[] memory amounts,
    bytes memory data
  ) internal override(ERC1155, ERC1155Supply) whenNotPaused {
    super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
  }
}

