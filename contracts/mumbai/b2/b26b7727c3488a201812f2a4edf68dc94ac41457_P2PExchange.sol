contract P2PExchange is Ownable, ReentrancyGuard {

    uint256 public handlingFees;
    
    struct order {
        address depositedBy;
        IERC20 depositToken;
        uint256 depositAmount;
        IERC20 exchangeToken;
        uint256 exchangeAmount;
        address exchangedBy;
        bool isLive;
    }

    

    uint256 public totalOrders;

    mapping(uint256=>order) public orders;
    mapping(address=>uint256[]) private addressOrders;

    mapping(address=>order[]) public boughtOrders;

    function createOrder(IERC20 depositToken, uint256 depositAmount, IERC20 exchangeToken, uint256 exchangeAmount) public nonReentrant {
        TransferHelper.safeTransferFrom(address(depositToken), msg.sender, address(this),depositAmount);
        order memory order_ = order(msg.sender, depositToken, depositAmount, exchangeToken, exchangeAmount, address(0), true);
        totalOrders++;
        addressOrders[msg.sender].push(totalOrders);
        orders[totalOrders] = order_;
    }  


    function makeOrder(uint256 orderId) public nonReentrant {
        order storage order_ = orders[orderId];
        require(order_.isLive == true, "Order not live");
        order_.isLive = false;
        TransferHelper.safeTransferFrom(address(order_.exchangeToken), msg.sender, order_.depositedBy,order_.exchangeAmount);
        order_.exchangedBy = msg.sender;
        boughtOrders[msg.sender].push(order_);
        TransferHelper.safeTransfer(address(order_.depositToken), msg.sender, order_.depositAmount);
    } 

    function cancelOrder(uint256 orderId) public nonReentrant {
        order storage order_ = orders[orderId];
        require(order_.isLive == true, "Order not live");
        require(order_.depositedBy == msg.sender, "You are not creator");
        order_.isLive = false;
        TransferHelper.safeTransferFrom(address(order_.depositToken), address(this), msg.sender, order_.depositAmount);
    }


    function getUserOrderIds(address user) public view returns(uint256[] memory){
        return addressOrders[user];
    } 

    function getUserOrders(address user) public view returns(order[] memory){
        uint256 length = addressOrders[user].length;
        order[] memory order_ = new order[](length);
        for(uint256 i = 0; i<length;i++){
            uint256 id = addressOrders[user][i];
            order memory this_order = orders[id];
            order_[i] = this_order;
        }
        return order_;
    }

}