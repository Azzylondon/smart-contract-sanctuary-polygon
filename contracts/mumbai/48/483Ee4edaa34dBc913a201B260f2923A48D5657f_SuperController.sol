/// @title SuperController
contract SuperController is Ownable, SuperReceiver, ChainlinkClient, VRFConsumerBase {
  using Chainlink for Chainlink.Request;
  using Strings for uint256;
  using Bytes32AddressLib for bytes32;

  struct PoolDistribution {
    uint256 fromBlock;
    uint256 toBlock;
    uint256 amount;
    bool distributed;
    address winner;
  }

  bytes4 public constant ERC721_INTERFACE_ID = 0x80ac58cd;

  address public constant CHAINLINK_TOKEN = 0x326C977E6efc84E512bB9C30f76E30c160eD06FB;

  // chainlink stuff
  address private vrf = 0x8C7382F9D8f56b33781fE506E897a4F1e2d17255;
  address private oracle = 0x58BBDbfb6fca3129b91f0DBE372098123B38B5e9;
  bytes32 private jobId = "a82495a8fd5b4cb492b17dc0cc31a4fe"; // POST => bytes32
  bytes32 private keyHash = 0x6e75b569a01ef56d18cab6a8e71e6600d6ce853834d4a5748b720d06f878b3a4;
  uint256 private feeAPI = 10 ** 16; // 0.01 LINK
  uint256 private feeVRF = 10 ** 14; // 0.0001 LINK

  string private constant CHAINLINK_API_URL = "https://i1e17ses7h.execute-api.us-east-1.amazonaws.com/dev";

  uint256 public immutable PROTOCOL_POOL_ENTRY_FEE;
  uint256 public immutable DISTRIBUTION_THRESHOLD;

  uint256 public prevDistributionBlock;
  uint256 public pendingDistributionBlock;
  bool internal jobPending;

  mapping (address => mapping (uint256 => bool)) internal upgradedTokens;
  mapping (address => mapping (uint256 => bool)) internal sponsoredTokens;
  mapping (uint256 => mapping (address => bool)) internal impressionsPerEpoch;
  mapping (uint256 => PoolDistribution) internal distributionsPerEpoch;

  event TokenUpgraded(address indexed token, uint256 tokenId, address currentOwner);
  event StreamUpdated(address indexed token, uint256 tokenId, address receiver, address sender, int96 flowRate);
  event StreamDeleted(address indexed token, uint256 tokenId, address receiver, address sender);
  event LogImpression(address indexed token, uint256 tokenId, address account);
  event PoolDistributed(address account, uint256 fromBlock, uint256 toBlock, uint256 amount, uint256 epoch);
  event Log(string value);

  modifier onlyUpgradedTokens(address token, uint256 tokenId) {
    require(upgradedTokens[token][tokenId] == true, "SuperController:: only upgraded tokens");
    _;
  }

  modifier onlySponsoredTokens(address token, uint256 tokenId) {
    require(sponsoredTokens[token][tokenId] == true, "SuperController:: only sponsored tokens");
    _;
  }

  /// @dev contract contructor
  constructor(address host, address cfa, address acceptedToken)
    SuperReceiver(host, cfa, acceptedToken)
    VRFConsumerBase(vrf, CHAINLINK_TOKEN)
  {
    PROTOCOL_POOL_ENTRY_FEE = 10000000000000000 wei; // 0.01 eth
    DISTRIBUTION_THRESHOLD = 20000000000000000 wei; // 0.02 eth => 2 likes
    prevDistributionBlock = block.number;

    setChainlinkToken(CHAINLINK_TOKEN);
  }

  /// @dev bring your token into the spotlight
  function upgradeToken(address token, uint256 tokenId) external {
    if (upgradedTokens[token][tokenId]) return; // early return

    require(IERC721(token).supportsInterface(ERC721_INTERFACE_ID), "SuperController:: must support erc721");

    address _owner = _getTokenOwner(token, tokenId);
    require(_owner == msg.sender, "SuperController:: only token owner can upgrade");

    // @TODO: find something better to do here
    upgradedTokens[token][tokenId] = true;

    emit TokenUpgraded(token, tokenId, _owner);
  }

  function likeToken(address token, uint256 tokenId)
    external
    payable
    onlyUpgradedTokens(token, tokenId)
    onlySponsoredTokens(token, tokenId)
  {
    require(msg.value == PROTOCOL_POOL_ENTRY_FEE, "SuperController:: must pay pool entry fee");
    require(impressionsPerEpoch[prevDistributionBlock][msg.sender] == false, "SuperController:: only 1 like per epoch");

    // @TODO: subscribe to distributions of MATICx

    impressionsPerEpoch[prevDistributionBlock][msg.sender] = true;

    emit LogImpression(token, tokenId, msg.sender);
  }

  /// @dev for anyone to start the process of determining which superNFT wins (TODO: this could be periodic)
  /// - querying all the impressions for active sponsorships
  /// - determine the superNFT with the most impressions
  /// - upgrade this contracts held ETH and upgrade to ETHx => distribution to all superNFT impressions' accounts
  function determinePoolWinner() external returns (bytes32 requestId) {
    // require(jobPending == false, "SuperController:: job is pending");
    // require(address(this).balance >= DISTRIBUTION_THRESHOLD, "SuperController:: contract balance below threshold");

    // create record in storage
    distributionsPerEpoch[prevDistributionBlock] = PoolDistribution({
      fromBlock: prevDistributionBlock,
      toBlock: block.number,
      amount: address(this).balance, // @TODO: handle case where the previous distribution actually has yet to happen (really should happen in #fulfill)
      distributed: false,
      winner: address(0)
    });

    // 1. request a random number
    // 2. include this number in api request to get the top super nft and one lucky account

    pendingDistributionBlock = prevDistributionBlock; // so we can finalize in #fulfill
    prevDistributionBlock = block.number;
    jobPending = true;

    return requestRandomness(keyHash, feeVRF);
  }

  function fulfill(bytes32 _requestId, bytes32 result) public recordChainlinkFulfillment(_requestId) {
    PoolDistribution storage distribution = distributionsPerEpoch[pendingDistributionBlock];
    Log("parsing address");
    distribution.winner = result.fromLast20Bytes(); // get address

    // send the winner their MATIC
    _sendValue(payable(distribution.winner), distribution.amount);

    // for the feed
    emit PoolDistributed(
      distribution.winner,
      distribution.fromBlock,
      distribution.toBlock,
      distribution.amount,
      pendingDistributionBlock
    );

    // release for next distribution
    pendingDistributionBlock = 0;
    jobPending = false;
  }

  /// @dev VRFConsumerBase callback
  function fulfillRandomness(bytes32 _requestId, uint256 randomNumber) internal override {
    Chainlink.Request memory request = buildChainlinkRequest(jobId, address(this), this.fulfill.selector);

    Log("encoding url");

    // build url with query params to get top super nft in given block period
    string memory _url = string(abi.encodePacked(
      CHAINLINK_API_URL,
      "?prevDistributionBlock=",
      prevDistributionBlock.toString(),
      "&currentBlock=",
      block.number.toString(),
      "&random=",
      (randomNumber / (10 ** 17)).toString()
    ));

    request.add("get", _url);
    request.add("path", "result");

    Log("sending request");
    Log(_url);

    sendChainlinkRequestTo(oracle, request, feeAPI);
  }

  function _getTokenOwner(address token, uint256 tokenId) internal view override returns (address) {
    return IERC721(token).ownerOf(tokenId);
  }

  /// @dev callback for when we receive a stream update
  /// @param _contract the contract address for the token
  /// @param tokenId the exact token id
  /// @param receiver the account to receive the stream (the token owner)
  /// @param sender the account that triggered the change
  /// @param flowRate the new stream flow rate (see SuperReceiver.sol)
  function _onFlowUpdated(
    address _contract,
    uint256 tokenId,
    address receiver,
    address sender,
    int96 flowRate
  ) internal override onlyUpgradedTokens(_contract, tokenId) {
    if (flowRate == int96(0)) { // @TODO: confirm this callback occurs even when a stream's source wallet is depleted
      sponsoredTokens[_contract][tokenId] = false;
      emit StreamDeleted(_contract, tokenId, receiver, sender);
    } else {
      sponsoredTokens[_contract][tokenId] = true;
      emit StreamUpdated(_contract, tokenId, receiver, sender, flowRate);
    }
  }

  /// @dev See @openzeppelin/contracts/utils/Address.sol#sendValue
  function _sendValue(address payable recipient, uint256 amount) internal {
    require(address(this).balance >= amount, "SuperController: insufficient balance");

    (bool success, ) = recipient.call{value: amount}("");
    require(success, "SuperController: unable to send value, recipient may have reverted");
  }

  receive() external payable {
    revert("SuperController:: we do not want your money");
  }
}

