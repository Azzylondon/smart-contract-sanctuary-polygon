    // assigned date
    certificate[_tokenId].acceptanceDate = block.timestamp;
    // mint nft token
    _safeMint(to, _tokenId);
    // accepted counter to increment. no need to increment ready counter because both steps happen in the same method
    _increment(ACCEPTED_HASH);
      
