  } 


  function _increment(bytes32 hash) internal {
     _counters[hash].increment();
  }

  function _decrement(bytes32 hash) internal {
     if (_counters[hash].current() > 0) _counters[hash].decrement();
  }

  function _current(bytes32 hash) internal view returns (uint256) {
    return _counters[hash].current();
  }

  function _beforeTokenTransfer(address from, address to, uint256) internal virtual override {
    require(from == address(0) || to == address(0), "transfer operation is not allowed");
  }

  function _setApprovalForAll(address, address, bool) internal virtual override  {
    revert("approval operation is not allowed");
  } 

  function _approve(address to, uint256) internal virtual override  {
    require(to == address(0), "approve operation is not allowed");      
  }

  function owner() public view virtual returns (address) {
    return _owner;
  }

  function service() public view virtual returns (address) {
    return _service;
  }

  function category() view override external returns (string memory) {
    return _category;
  }             

 
