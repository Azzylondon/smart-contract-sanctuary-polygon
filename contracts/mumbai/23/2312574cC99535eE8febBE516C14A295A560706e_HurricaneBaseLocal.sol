pragma solidity ^0.8.2;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./ERC20/iERC20Token.sol";
import "./MerkleTree.sol";

import "./interface/IVerifier.sol";

contract HurricaneBaseLocal is AccessControl, MerkleTree, ReentrancyGuard {
    uint256 public denomination;

    mapping(bytes32 => bool) private nullifierHashes;

    // we store all commitments just to prevent accidental deposits with the same commitment
    mapping(bytes32 => bool) private commitments;

    IVerifier public verifier;

    iERC20Token private Token;

    uint256 private _fee;

    address private _relayer;

    event Deposit(
        bytes32 indexed commitments,
        uint32 leafIndex,
        uint256 timestamp
    );

    event Withdrawal(
        address to,
        bytes32 nullifierHashes,
        address indexed relayer,
        uint256 fee
    );

    constructor(
        address _verifier,
        uint256 _denomination,
        uint32 _merkleTreeHieght,
        address _hasher,
        address _token
    ) MerkleTree(_merkleTreeHieght, _hasher) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        require(_denomination > 0, "denomination should be greater than zero");
        verifier = IVerifier(_verifier);
        denomination = _denomination;
        Token = iERC20Token(_token);
    }

    function deposit(bytes32 _commitment) public nonReentrant {
        require(!commitments[_commitment], "The commitment has been submitted");

        uint32 insertedIndex = _insert(_commitment);
        commitments[_commitment] = true;
        _processDeposit();

        emit Deposit(_commitment, insertedIndex, block.timestamp);
    }

    function _processDeposit() internal {
        require(
            Token.balanceOf(msg.sender) >= denomination,
            "Please send `mixDenomination` ETH along with transaction"
        );
        Token.transferFrom(msg.sender, address(this), denomination);
    }

    function withdraw(
        uint256[2] memory a,
        uint256[2][2] memory b,
        uint256[2] memory c,
        uint256[1] memory input,
        bytes32 _root,
        bytes32 _nullifierHash,
        address payable _recipient
    ) external nonReentrant {
        require(_fee <= denomination, "Fee exceeds transfer value");
        require(
            !nullifierHashes[_nullifierHash],
            "The note has been already spent"
        );
        require(isKnownRoot(_root), "Cannot find your merkle root");
        require(verifier.verifyProof(a, b, c, input), "Invalid withdraw proof");

        nullifierHashes[_nullifierHash] = true;
        _processWithdraw(_recipient);

        emit Withdrawal(_recipient, _nullifierHash, _relayer, _fee);
    }

    function _processWithdraw(address payable _recipient) internal {
        uint256 transfer = denomination - _fee;
        Token.mint(_recipient, transfer);
        Token.mint(_relayer, _fee);
    }

    function isSpent(bytes32 _nullifierHash) public view returns (bool) {
        return nullifierHashes[_nullifierHash];
    }

    function fetchFee() public view returns (uint256) {
        return _fee;
    }

    function fetchRelayer() public view returns (address) {
        return _relayer;
    }

    function setFee(uint256 fee) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _fee = fee;
    }

    function setRelayer(address relayer) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _relayer = relayer;
    }
}

