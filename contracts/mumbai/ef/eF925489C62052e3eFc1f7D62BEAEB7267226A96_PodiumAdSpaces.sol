    // Utility Get Methods

    /**
     * @notice Getter that returns the # of ad Spaces
     */
    function getAdSpaceCount() public view returns(uint256){
        return adSpaceCount_;
    }

    /**
     * @notice Getter that returns creator and supply of token
     */
    function getTokenInfo(uint256 _tokenID) public view override returns(TokenInfo memory){
        return tokensData_[_tokenID];
    }

    // Commented out to be used if needed
    // /**
    //  * @notice Getter that returns all owners of token
    //  */
    // function getTokenOwners(uint256 _tokenID) public view override returns(address [] memory){
    //     return tokenOwners_[_tokenID];
    // }

