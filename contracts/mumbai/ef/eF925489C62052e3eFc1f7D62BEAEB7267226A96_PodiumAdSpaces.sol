     * @notice Getter the value of PodiumOnlyApproval_
     * which when set to true restricts operators to Podium
     * i.e. only marketplace that can be used to trade
     */
    function getPodiumOnlyApproval() public view returns(bool){
        return PodiumOnlyApproval_;
    }

    /**
     * @notice Override uri function to return token ID and 
     */
    function uri(uint256 tokenID) override public view returns(string memory){
        return (
            string(abi.encodePacked(
                    baseURI, Strings.toString(tokenID),
                    ".json"
                )
            )
        );
    }

    // ------------------------------------------------------------------------
    // Marketplace operators and mint access

    /**
     * @notice Internal function to check if is an operator
     * Granted to Podium marketplace contracts
     */
    function isPodiumOperator(address _operator) public view returns(bool) {
        return PodiumOperators_[_operator];
    }
    /**
     * @notice Add new Podium Marketplace operators
     * @dev Only affects approval when PodiumOnlyApproval_ is set to true
     *
     * Emits a {SetPodiumOperator} event.
     */
    function setPodiumOperator(address _newPodiumOperator, bool _approval)
        external 
        onlyContractAdmin 
    {
        PodiumOperators_[_newPodiumOperator] = _approval;
        emit SetPodiumOperator(_newPodiumOperator, _approval);
    }

    /**
     * @notice Set restrictions on operator approval
     * if set true can only be traded on Podium marketplace
     * @dev Only affects setapprovalforall
     *
     * Emits a {SetPodiumOnlyApproval} event.
     */
    function setPodiumOnlyApproval(bool _approval) 
        external 
        onlyContractAdmin
    {
        PodiumOnlyApproval_ = _approval;
        emit SetPodiumOnlyApproval(msg.sender, _approval);
    }

