    // mapping(uint256 => address []) private tokenOwners_;

    // Maximum token supply represented in bps (i.e. 100 = 1%)
    uint256 private maxTokenSupply = 9999;

    // Mapping Podium marketplace addresses
    // @dev NEVER add non Podium addresses
    // if you want to remove restrictions, set PodiumOnlyApproval_
    mapping(address => bool) private PodiumOperators_;

    // Restrict operators to Podium Marketplace
    bool private PodiumOnlyApproval_ = true;

    // URI override for BASE
    string public baseURI;

    constructor() 
    ERC1155("")
    {
    }

    /**
     * @notice Mint function is restricted to Podium
     * Marketplace contract (i.e. owner)
     * @ _totalSupply is in bps (i.e. 100 = 1%) 
     *
     * Emits a {Transfer} event from address(0).
     */
    function mint(
        TokenInfo memory _tokenInfo,
        address _AllowedPodiumOperator
    ) public override onlyOwner returns (uint256)
    {
        if(_tokenInfo.tokenSupply > maxTokenSupply){
            revert TotalSupplyOverHundred(_tokenInfo.tokenCreator, _tokenInfo.tokenSupply);
        } else if(_tokenInfo.tokenSupply <= 0){
            revert TotalSupplyZero(_tokenInfo.tokenCreator);
        }
        // Confirm check given override is external facing
        if(PodiumOnlyApproval_) {
            if(!isPodiumOperator(_AllowedPodiumOperator)){
                revert OnlyApprovePodiumOperator(_AllowedPodiumOperator);
            }
        }
        adSpaceCount_++;

        tokensData_[adSpaceCount_] = _tokenInfo;
        _setApprovalForAll(_tokenInfo.tokenCreator, _AllowedPodiumOperator, true);
        _mint(_tokenInfo.tokenCreator, adSpaceCount_, _tokenInfo.tokenSupply, "");

        return adSpaceCount_;
    }

    /**
     * @notice Set approval for all tokens to Podium Marketplace
     * @dev this overrides to allow only Podium 
     * as an operator to trade their token
     * See {IERC1155-setApprovalForAll}.
     */
    function setApprovalForAll(address operator, bool approved)
        public 
        override (ERC1155, IERC1155)
    {
        if(PodiumOnlyApproval_) {
            if(!isPodiumOperator(operator)){
                revert OnlyApprovePodiumOperator(operator);
            }
        }
        _setApprovalForAll(msg.sender, operator, approved);
    }


    /*
     * Update URI 
     * Emits a {SetURI} event.
     */
    function setURI(string calldata _newURI) external onlyContractAdmin {
        baseURI = _newURI;
        emit SetURI(msg.sender, _newURI);
    }

