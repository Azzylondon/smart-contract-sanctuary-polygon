pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract SwapPOZ is Ownable {
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using SafeMath for uint256;

    uint256 public pozPrice; // POZ amount per 1 USDC
    uint256 constant DENOMINATOR = 100; // fee decimal 2
    uint256 constant STABLE_DECIMAL = 10**6;
    uint256 constant POZ_DECIMAL = 1e18;
    uint256 public transferFeeRate;

    address public pozTokenAddress;
    address public stableTokenAddress;
    address public backingReserveWalletAddress;
    address public lockedWalletAddress;
    address public pozPouchAddress;
    bool public swapEnabled;

    event TransferFeeRateUpdated(uint256 transferFeeRate);
    event BackingReserveAddressUpdated(
        address indexed backingReserveWalletAddress
    );
    event StableTokenAddressUpdated(address indexed stableTokenAddress);
    event LockedAddressUpdated(address indexed lockedAddress);
    event POZAddressUpdated(address indexed pozAddress);
    event StableAddressUpdated(address indexed stableAddress);
    event PozPouchAddressAddressUpdated(address indexed pozPouchAddress);

    constructor(
        address _pozTokenAddress,
        address _stableTokenAddress,
        address _backingReserveWalletAddress,
        address _lockedWalletAddress,
        address _pozPouchAddress,
        uint256 _transferFeeRate
    ) {
        pozTokenAddress = _pozTokenAddress;
        stableTokenAddress = _stableTokenAddress;
        backingReserveWalletAddress = _backingReserveWalletAddress;
        lockedWalletAddress = _lockedWalletAddress;
        pozPouchAddress = _pozPouchAddress;
        transferFeeRate = _transferFeeRate;
    }

    function swapPOZPouchToUSDC(address sendToAddress, uint256 amount) external {
        require(swapEnabled, "POZ SWAP: Swap is not enabled");
        require(msg.sender == pozPouchAddress, "POZ SWAP: Swap is enabled in PozPouch");
        IERC20Upgradeable pozContract = IERC20Upgradeable(pozTokenAddress);
        IERC20Upgradeable stableContract = IERC20Upgradeable(
            stableTokenAddress
        );

        require(
            amount > 0 && amount <= pozContract.balanceOf(msg.sender),
            "POZ SWAP: Please insert a correct amount - POZ2USDC"
        );

        uint256 realSwappedPOZ = amount -
            amount.mul(transferFeeRate).div(DENOMINATOR).div(100);

        uint256 swappedStableAmount = realSwappedPOZ.div(pozPrice).mul(
            STABLE_DECIMAL
        );
        pozContract.transferFrom(msg.sender, lockedWalletAddress, amount);
        stableContract.transferFrom(
            backingReserveWalletAddress,
            sendToAddress,
            swappedStableAmount
        );

        updatePOZPrice();
    }

    function swapUSDCToPOZPouch(uint256 amount) external {
        require(swapEnabled, "POZ SWAP: Swap is not enabled");
        IERC20Upgradeable pozContract = IERC20Upgradeable(pozTokenAddress);
        IERC20Upgradeable stableContract = IERC20Upgradeable(
            stableTokenAddress
        );

        require(
            amount > 0 && amount <= stableContract.balanceOf(msg.sender),
            "POZ SWAP: Please insert a correct amount - USDC2POZ"
        );

        uint256 swappedPOZAmount = amount.mul(pozPrice).div(STABLE_DECIMAL);

        uint256 realSwappedPOZAmount = swappedPOZAmount - swappedPOZAmount
            .mul(transferFeeRate)
            .div(DENOMINATOR)
            .div(100);

        stableContract.transferFrom(
            msg.sender,
            backingReserveWalletAddress,
            amount
        );
        pozContract.transferFrom(
            lockedWalletAddress,
            pozPouchAddress,
            realSwappedPOZAmount
        );

        updatePOZPrice();
    }

    function setSwapEnable(bool _swapEnabled) public onlyOwner {
        swapEnabled = _swapEnabled;
        updatePOZPrice();
    }

    function updatePOZPrice() internal {
        uint256 circulatingSupply = _getCirculatingSupply();
        pozPrice =
            (circulatingSupply * STABLE_DECIMAL) /
            IERC20Upgradeable(stableTokenAddress).balanceOf(
                backingReserveWalletAddress
            );
    }

    function setTransferFeeRate(uint256 _transferFeeRate) external onlyOwner {
        require(
            _transferFeeRate <= DENOMINATOR,
            "POZ SWAP: transfer fee rate can not be greater than 100%"
        );
        transferFeeRate = _transferFeeRate;

        emit TransferFeeRateUpdated(transferFeeRate);
    }

    function setLockedWalletAddress(address _lockedWalletAddress)
        external
        onlyOwner
    {
        lockedWalletAddress = _lockedWalletAddress;
        emit LockedAddressUpdated(lockedWalletAddress);
    }

    function setPOZTokenAddress(address _pozTokenAddress)
        external
        onlyOwner
    {
        pozTokenAddress = _pozTokenAddress;
        emit POZAddressUpdated(pozTokenAddress);
    }

    function setStableTokenAddress(address _stableTokenAddress)
        external
        onlyOwner
    {
        stableTokenAddress = _stableTokenAddress;
        emit StableAddressUpdated(stableTokenAddress);
    }

    function setBackingReserveAddress(address _backingReserveAddress)
        external
        onlyOwner
    {
        require(
            _backingReserveAddress != address(0),
            "POZ SWAP: backing reserve address cannot be zero"
        );
        backingReserveWalletAddress = _backingReserveAddress;

        emit BackingReserveAddressUpdated(backingReserveWalletAddress);
    }

    function setPozPouchAddress(address _pozPouchAddress)
        external
        onlyOwner
    {
        require(
            _pozPouchAddress != address(0),
            "POZ SWAP: PP address cannot be zero"
        );
        pozPouchAddress = _pozPouchAddress;

        emit PozPouchAddressAddressUpdated(pozPouchAddress);
    }

    function _getCirculatingSupply() internal view returns (uint256) {
        uint256 circulatingSupply = IERC20Upgradeable(pozTokenAddress)
            .totalSupply() -
            IERC20Upgradeable(pozTokenAddress).balanceOf(lockedWalletAddress);

        return circulatingSupply;
    }
}