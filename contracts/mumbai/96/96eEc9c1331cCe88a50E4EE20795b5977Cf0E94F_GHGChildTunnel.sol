pragma solidity ^0.8.0;

import {SafeMath} from "./lib/SafeMath.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {FxBaseChildTunnel} from "./FxBaseChildTunnel.sol";

contract GHGChildTunnel is Ownable, FxBaseChildTunnel {
    using SafeMath for uint256;

    mapping(address => bool) public authorizedUsers;

    event CallMade(address target, bool success, bytes data);

    constructor(address _fxChild) FxBaseChildTunnel(_fxChild) {}

    //////////////   ADMIN FUNCTIONS   //////////////

    function setFxRootTunnel(address _fxRootTunnel) external onlyOwner {
        _setFxRootTunnel(_fxRootTunnel);
    }

    function setAuthorizedUser(address _addr, bool _status) external onlyOwner {
        authorizedUsers[_addr] = _status;
    }

    //////////////   PORTAL FUNCTIONS   //////////////

    function sendMessage(bytes calldata _message) external {
        require(authorizedUsers[msg.sender], "Message Sender is not Authorized to Use Tunnel");
        _sendMessageToRoot(_message);
    }

    function _processMessageFromRoot(uint256 _stateId, address _sender, bytes memory _message) internal override {
        (address target, bytes[] memory calls ) = abi.decode(_message, (address, bytes[]));
        for (uint256 i = 0; i < calls.length; i++) {
            (bool success, ) = target.call(calls[i]);
            emit CallMade(target, success, calls[i]);
        }
    }
}

