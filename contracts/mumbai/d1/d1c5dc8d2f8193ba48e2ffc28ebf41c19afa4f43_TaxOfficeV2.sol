        return ITaxable(xone).setTaxTiersTwap(_index, _value);
    }
    function setTaxableXONEOracle(address _taxOracle) external onlyOperator {
        ITaxable(xone).setTaxOracle(_taxOracle);
    }

    function taxFreeTransferFrom(
        address _sender,
        address _recipient,
        uint256 _amt
    ) external {
        require(taxExclusionEnabled[msg.sender], "Address not approved for tax free transfers");
        _excludeAddressFromTax(_sender);
        IERC20(xone).transferFrom(_sender, _recipient, _amt);
        _includeAddressInTax(_sender);
