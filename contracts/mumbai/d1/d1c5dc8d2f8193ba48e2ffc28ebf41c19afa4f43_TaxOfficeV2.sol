        uint256 resultAmtXONE;
        uint256 resultAmtMatic;
        uint256 liquidity;
        _excludeAddressFromTax(msg.sender);
        IERC20(xone).transferFrom(msg.sender, address(this), amtXONE);
        _approveTokenIfNeeded(xone, router);
        _includeAddressInTax(msg.sender);
        (resultAmtXONE, resultAmtMatic, liquidity) = IUniswapV2Router(router).addLiquidityETH{value: msg.value}(
