pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

// age verification interface
interface AgeWB {
  function getRenewDate(address wbOwner) external view returns (uint);
}

contract CSPlayerManager is Ownable {
  using SafeMath for uint256;
  address private ageWbAddress = 0xF5c442c8ef7581B97935aA6FfCe8f55206fc39DE; // to be updated

  mapping(address => string) private nickNameMap;
  mapping(address => uint256) private memberSinceMap;
  mapping(address => bool) public blackList;

  uint256 public totalPlayers;

  constructor () {
  }

  function registerPlayer(string memory _nickName) public {
    validatePlayer(msg.sender);

    nickNameMap[msg.sender] = _nickName; // user nick name
    memberSinceMap[msg.sender] = block.timestamp; // registered time
    totalPlayers++;
  }

  function updatePlayer(string memory _nickName) public {
    require(memberSinceMap[msg.sender] != 0, "Not registered player");
    validatePlayer(msg.sender);

    nickNameMap[msg.sender] = _nickName;
  }

  function getNickName(address _address) public view returns(string memory) {
    return nickNameMap[_address];
  }

  function validatePlayer(address _address) public view {
    require(!blackList[_address], "Blacklisted player"); // check blacklisted player
    require(IERC1155(ageWbAddress).balanceOf(_address, 0) == 1, "Age verification failed"); // check if player has one wb
    require(block.timestamp.sub(AgeWB(ageWbAddress).getRenewDate(_address)) < 15768000, "Outdated WB"); // check expiration
  }

  function banishPlayer(address _playerAddress) external onlyOwner  {
    blackList[_playerAddress] = true;
    totalPlayers--;
  }

  function setAgeWbAddress(address _ageWbAddress) external onlyOwner {
    ageWbAddress = _ageWbAddress;
  }
}

