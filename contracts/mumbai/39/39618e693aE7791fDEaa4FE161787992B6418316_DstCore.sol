contract DstCore is Ownable {

    event MessageReceived(
        address sender,
        uint64 srcChainId,
        bytes message,
        address executor
    );

    uint256 public constant PROPTO1155_MAX_TOTALSUPPLY = 10000;
    uint256 public constant PROPTO20_MAX_TOTALSUPPLY = 1000000;

    using Counters for Counters.Counter;

    Counters.Counter private _proptoIndexCounter;

    uint64 public dstChainId;

    mapping (uint64 => address) private multichainSrcContracts;

    address private messageProxyContract;

    address private lotteryMachineContract;

    address private lotteryERC721Contract;

    address private proptoSharedStorefront;

    mapping (uint256 => mapping(uint256 => uint256)) private proptoSrcIndexes;

    mapping (uint256 => NFTInfo) proptos;

    address messageBus;

    constructor(uint64 _dstChainId) {
        dstChainId = _dstChainId;
    }

    function setMultiChainSrcContract(uint64 chainId, address contractAddress) public {
        multichainSrcContracts[chainId] = contractAddress;
    }

    function getMultiChainSrcContract(uint64 chainId) public view returns(address) {
        return multichainSrcContracts[chainId];
    }

    function setMessageProxyContract(address contractAddress) public {
        messageProxyContract = contractAddress;
    }

    function getMessageProxyContract() public view returns(address) {
        return messageProxyContract;
    }

    function setLotteryMachineContract(address contractAddress) public {
        lotteryMachineContract = contractAddress;
    }

    function getLotteryMachineContract() public view returns(address) {
        return lotteryMachineContract;
    }

    function setLotteryERC721Contract(address contractAddress) public {
        lotteryERC721Contract = contractAddress;
    }

    function getLotteryERC721Contract() public view returns(address) {
        return lotteryERC721Contract;
    }

    function setProptoSharedStorefront(address contractAddress) public {
        proptoSharedStorefront = contractAddress;
    }

    function getProptoSharedStorefront() public view returns(address) {
        return proptoSharedStorefront;
    }

    function setCelerimMessageBus(address contractAddress) public onlyOwner {
        messageBus = contractAddress;
    }

    function createPropto(bytes memory _data) public {
        //todo check src factory
        require((msg.sender == getMessageProxyContract()) || (msg.sender == getMultiChainSrcContract(dstChainId)), "unauthorized caller");
        
        (uint256 srcLotteryIndex, string memory name, address srcNFTContract, uint256 srcTokenID, address seller, uint256 initialPrice, uint8 ProptoType) = abi.decode(_data, (uint256, string, address, uint256, address, uint256, uint8));

        string memory symbol = string.concat(Strings.toString(dstChainId), "-");
        symbol = string.concat(symbol, Strings.toString(srcLotteryIndex));
        string memory newname = string.concat(name, "#");
        newname = string.concat(newname, Strings.toString(srcTokenID));
        newname = string.concat(newname, "#");
        newname = string.concat(newname, symbol);

        NFTInfo memory nftinfo = NFTInfo(
            dstChainId,
            getMultiChainSrcContract(dstChainId),
            srcLotteryIndex,
            srcNFTContract,
            srcTokenID,
            newname,
            symbol,
            seller,
            initialPrice,
            ProptoType,
            address(0),
            0
        );

        _proptoIndexCounter.increment();
        uint256 proptoIndex = _proptoIndexCounter.current();
        if(ProptoType == 1) {
            ProptoERC1155 propto = new ProptoERC1155();
            propto.mint(seller, PROPTO1155_MAX_TOTALSUPPLY, proptoIndex, "0x0");
            nftinfo.proptoContract = address(propto);
            nftinfo.proptoTokenId = propto.getCurrentTokenId();
        } else if (ProptoType == 2) {
            ProptoERC1155 propto = ProptoERC1155(proptoSharedStorefront);
            propto.mint(seller, PROPTO1155_MAX_TOTALSUPPLY, proptoIndex, "0x0");
            nftinfo.proptoTokenId = propto.getCurrentTokenId();
        }

        proptos[proptoIndex] = nftinfo;
        proptoSrcIndexes[dstChainId][srcLotteryIndex] = proptoIndex;
    }

    modifier onlyMessageBus() {
        require(msg.sender == messageBus, "caller is not message bus");
        _;
    }

    function executeMessage(
        address _sender,
        uint64 _srcChainId,
        bytes calldata _message,
        address executor
    ) external payable onlyMessageBus returns (IMessageReceiverApp.ExecutionStatus) {
        emit MessageReceived(_sender, _srcChainId, _message, executor);
        return IMessageReceiverApp.ExecutionStatus.Success;
    }

    function getProptoIndex(uint64 srcChainId, uint256 srcLotteryIndex) public view returns(uint256) {
        return proptoSrcIndexes[srcChainId][srcLotteryIndex];
    }

    function getProptoContract(uint64 index) public view returns(address) {
        return proptos[index].proptoContract;
    }
}

