import "../../access/Minter.sol";

contract ProptoERC1155 is ERC1155, Ownable, Minter, Pausable, ERC1155Burnable, ERC1155Supply {

    using SafeMath for uint256;

    using Counters for Counters.Counter;

    Counters.Counter private _tokenIdCounter;

    mapping (uint256 => uint256) private _tokenCoreIndexMap;

    constructor() ERC1155("") {}

    function setURI(string memory newuri) public onlyMinter {
        _setURI(newuri);
    }

    function pause() public onlyMinter {
        _pause();
    }

    function unpause() public onlyMinter {
        _unpause();
    }

    function mint(address account, uint256 amount, uint256 coreIndex, bytes memory data)
        public
        onlyMinter
    {
        _tokenIdCounter.increment();
        uint256 tokenId = _tokenIdCounter.current();
        _tokenCoreIndexMap[tokenId] = coreIndex;
        _mint(account, tokenId, amount, data);
    }

    function getCurrentTokenId() public view returns(uint256) {
        return _tokenIdCounter.current();
    }

    function getTokenCoreIndex(uint256 tokenId) public view returns(uint256) {
        return _tokenCoreIndexMap[tokenId];
    }

    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
        internal
        whenNotPaused
        override(ERC1155, ERC1155Supply)
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }
}

