pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";

// this is marked "draft" in the version of the oz node module that we have checked out, but
// i diffed it with the non-draft version in their public repo, and the source code is identical
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";

import "../signatures.sol";

// based on openzeppelin's `MinimalForwarder` reference implementation
contract FiboMetatxForwarder is EIP712 {
    using ECDSA for bytes32;

    struct ForwardRequest {
        address from;
        address to;
        // uint256 value; <-- we don't support transactions that transfer the native token
        // uint256 gas; <-- we are fine with covering gas costs for these transactions (and only to our own contracts, so we'll determine our own gas)
        uint256 nonce;
        bytes data;
    }

    bytes32 private constant _TYPEHASH =
        keccak256("ForwardRequest(address from,address to,uint256 nonce,bytes data)");


    mapping(address => uint256) public nonces;

    constructor() EIP712("FiboMetatxForwarder", "0.0.1") {}

    function _verify(ForwardRequest calldata req, FiboSignatures.EOASignature calldata signature) internal view {
        address signer = _hashTypedDataV4(
            keccak256(abi.encode(_TYPEHASH, req.from, req.to, req.nonce, keccak256(req.data)))
        ).recover(signature.v, signature.r, signature.s);
        require(signer == req.from, "invalid signature");
        require(req.nonce == nonces[signer], "nonce mismatch");
    }

    function execute(ForwardRequest calldata req, FiboSignatures.EOASignature calldata signature)
        public
        returns (bool, bytes memory)
    {
        _verify(req, signature);
        nonces[req.from] = req.nonce + 1;

        (bool success, bytes memory returndata) = req.to.call(
            abi.encodePacked(req.data, req.from)
        );

        return (success, returndata);
    }
}

