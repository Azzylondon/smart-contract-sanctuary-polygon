pragma solidity ^0.8.0;

import "@openzeppelin/contracts/interfaces/IERC1271.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

library FiboSignatures {
    using SafeMath for uint256;

    enum SignatureType {
        SignatureEOA,
        SignatureContract
    }

    struct EOASignature {
        bytes32 r;
        bytes32 s;
        uint8 v;
    }

    struct Signature {
        SignatureType sigType;
        bytes signatureData;
    }

    // bytes4(keccak256("isValidSignature(bytes32,bytes)")
    bytes4 constant internal EIP1271_MAGICVALUE = 0x1626ba7e;

    function verifySignature(bytes32 domainHash, bytes32 typeHash, bytes memory data, address signer, Signature memory signature) public view returns (bool) {
        bytes32 objectHash = generateObjectHash(domainHash, typeHash, data);
        if (signature.sigType == SignatureType.SignatureEOA) {
            EOASignature memory eoaSig = abi.decode(signature.signatureData, (EOASignature));
            return verifyEOASignature(objectHash, eoaSig, signer);
        } else if (signature.sigType == SignatureType.SignatureContract) {
            return verifyContractSignature(objectHash, signer);
        } else {
            revert("unknown signature type");
        }
    }

    function generateDomainHash(string memory contractName, string memory version) public view returns (bytes32 domainHash) {
        uint256 chainId;
        assembly {
            chainId := chainid()
        }

        domainHash = keccak256(abi.encode(
            keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"),
            keccak256(bytes(contractName)),
            keccak256(bytes(version)),
            chainId,
            address(this)
        ));
    }

    function generateObjectHash(bytes32 domainHash, bytes32 typeHash, bytes memory data) public pure returns (bytes32) {
        // https://medium.com/metamask/eip712-is-coming-what-to-expect-and-how-to-use-it-bb92fd1a7a26
        // https://dev.to/zemse/ethersjs-signing-eip712-typed-structs-2ph8
        // https://rotynski.dev/signing-transactions-with-eip-712/

        bytes32 finalHash = keccak256(abi.encodePacked(
            "\x19\x01",
            domainHash,
            keccak256(bytes.concat(typeHash, data))
        ));

        return finalHash;
    }

    function verifyEOASignature(bytes32 objectHash, EOASignature memory signature, address signer) public pure returns (bool) {
        return signer == ecrecover(objectHash, signature.v, signature.r, signature.s);
    }

    // based on eip-1271: https://eips.ethereum.org/EIPS/eip-1271
    function verifyContractSignature(bytes32 objectHash, address signer) public view returns (bool) {
        IERC1271 validator = IERC1271(signer);
        bytes memory emptyBytes;

        bytes4 magicValue = validator.isValidSignature(objectHash, emptyBytes);

        return magicValue == EIP1271_MAGICVALUE;
    }
}

