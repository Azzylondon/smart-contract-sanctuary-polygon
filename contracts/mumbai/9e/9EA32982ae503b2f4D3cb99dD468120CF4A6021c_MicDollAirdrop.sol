import '@openzeppelin/contracts/token/ERC721/IERC721.sol';
import '@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol';
import '@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol';
import '@openzeppelin/contracts/security/Pausable.sol';

contract MicDollAirdrop is Pausable {
  address public MicDollAdress;
  address public operator;
  int public wasClaimedNumber;
  mapping(address => bool) public recipients;

  event claimedInfo(address account, uint tokenId);
  event OperatorTransferred(address oldOperator, address newOperator);

  constructor() {
    operator = msg.sender;
    MicDollAdress = address(0);
    wasClaimedNumber = 0;
  }


  //must initialize MicDoll address firstly before tranfer micdoll into this airdrop contract
  function initMicDollAddress(address _MicDollAddress) external {
    require(msg.sender == operator, 'only operator');
    require(MicDollAdress  == address(0), 'MicDoll address have been initialized');
    MicDollAdress=_MicDollAddress;
  }

  //add user into Recipients list
  function addRecipients(address[] memory _recipients) external {
    require(msg.sender == operator, 'only operator');
    for(uint i = 0; i < _recipients.length; i++) {
      recipients[_recipients[i]] = true;
    }
  }

  //remove user from Recipients list
  function removeRecipients(address[] memory _recipients) external {
    require(msg.sender == operator, 'only operator');
    for(uint i = 0; i < _recipients.length; i++) {
      recipients[_recipients[i]] = false;
    }
  }
  
  //get the Remainder DropNum which can be claimed from now
  function getRemainderDropNum() external view returns (uint){
    if(MicDollAdress == address(0))
      return 0;
    else
      return IERC721(MicDollAdress).balanceOf(address(this));
  }


  //claim MicDoll
  function claim() external whenNotPaused{
    require(MicDollAdress  != address(0), 'MicDoll address have not  been initialized by operator');
    require(IERC721(MicDollAdress).balanceOf(address(this)) != 0, 'There are no airdrop micdoll is available now');
    require(recipients[msg.sender] == true, 'recipient not registered');
    recipients[msg.sender] = false;
    uint tokenId = IERC721Enumerable(MicDollAdress).tokenOfOwnerByIndex(address(this),0);
    IERC721(MicDollAdress).transferFrom(address(this), msg.sender, tokenId);
    wasClaimedNumber++;
    emit claimedInfo(msg.sender,tokenId);
  }
  
  //transfer operator
  function transferOperator(address newOperator) public {
      require(msg.sender == operator, 'only operator');
      require(newOperator != address(0), "new newOperator is the zero address");
      address oldOperator = operator;
      operator = newOperator;
      emit OperatorTransferred(oldOperator, newOperator);
  }

  //stop airdrop claim
  function pause() public {
    require(msg.sender == operator, 'only operator');
    _pause();
  }

  //start airdrop claim
  function unpause() public {
    require(msg.sender == operator, 'only operator');
    _unpause();
  }

  function onERC721Received(address, address, uint256, bytes calldata) external pure returns (bytes4) {
    return IERC721Receiver.onERC721Received.selector;
  }
}

