pragma solidity >=0.8.0 <0.9.0;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/metatx/ERC2771ContextUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";

import {IWrassleable} from "../Interfaces/Wrassleable/Wrassleable.sol";
import {ERC721} from "../Interfaces/ERC721.sol";
import {WrasslersGasStation} from "../WrasslersGasStation/WrasslersGasStation.sol";

contract UpgradeableWrasslingArena is AccessControlUpgradeable, ERC2771ContextUpgradeable {
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant REFEREE_ROLE = keccak256("REFEREE_ROLE");
    uint256 public constant attributeBaseCost = 1e16; // 0.01 MATIC

    address public cpuWrasslerAddress;

    struct Player {
        uint8 maxDefeated;
        address contractAddress;
        uint256 tokenId;
        bytes wrasslerId;
        uint256 wins;
        uint256 losses;
        uint256 spend;
    }
    event WrasslerRegistered(address contractAddress, uint256 tokenId, address ownerAddress);
    event WrasslerUpdated(address contractAddress, uint256 tokenId);
    event WrasslerRemoved(address contractAddress, uint256 tokenId);

    mapping(address => mapping(uint256 => IWrassleable.Wrassler)) public wrasslers;
    mapping(address => bool) internal wrassleableContracts;
    mapping(address => mapping(uint256 => string)) public wrasslerAvatars;
    mapping(address => Player) public players;
    mapping(address => mapping(uint256 => address)) public demoWrasslerOwners;

    function initialize(WrasslersGasStation trustedForwarder) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(ADMIN_ROLE, _msgSender());
        ERC2771ContextUpgradeable.__ERC2771Context_init_unchained(address(trustedForwarder));
    }

    function _msgData() internal view override(ContextUpgradeable, ERC2771ContextUpgradeable) returns (bytes calldata) {
        return ERC2771ContextUpgradeable._msgData();
    }

    function _msgSender()
        internal
        view
        override(ContextUpgradeable, ERC2771ContextUpgradeable)
        returns (address sender)
    {
        return ERC2771ContextUpgradeable._msgSender();
    }

    function allowWrassleable(address wrassleableContract, bool cpuAddress) public onlyRole(ADMIN_ROLE) {
        wrassleableContracts[wrassleableContract] = true;
        if (cpuAddress) {
            cpuWrasslerAddress = wrassleableContract;
        }
    }

    function setMatchAddress(address matchAddress) public onlyRole(ADMIN_ROLE) {
        grantRole(REFEREE_ROLE, matchAddress);
    }

    function reportWin(
        address _player,
        address targetContract,
        uint256 tokenId
    ) public onlyRole(REFEREE_ROLE) {
        Player storage player = players[_player];
        player.wins += 1;
    }

    function reportLoss(address player) public onlyRole(REFEREE_ROLE) {
        players[player].losses += 1;
    }

    function migratePlayer(address player, Player memory playerData) public onlyRole(ADMIN_ROLE) {
        players[player] = playerData;
    }

    function registerWrassler(
        address ownerAddress,
        address mainnetContract,
        uint256 tokenId,
        string memory avatarUri,
        string memory name
    ) external {
        require(wrasslers[mainnetContract][tokenId].tokenId == 0, "WA:rW:409");

        wrasslers[mainnetContract][tokenId] = IWrassleable.Wrassler({
            id: abi.encode(mainnetContract, tokenId),
            avatarUri: avatarUri,
            mainnetContract: mainnetContract,
            tokenId: tokenId,
            name: name,
            power: 0,
            speed: 0,
            aggression: 0,
            determination: 0,
            resilience: 0,
            awareness: 0
        });

        demoWrasslerOwners[mainnetContract][tokenId] = ownerAddress;

        emit WrasslerRegistered(mainnetContract, tokenId, ownerAddress);

        if (mainnetContract == cpuWrasslerAddress) return;
        if (players[ownerAddress].tokenId != 0) return;

        players[ownerAddress] = Player({
            contractAddress: mainnetContract,
            tokenId: tokenId,
            wrasslerId: abi.encode(mainnetContract, tokenId),
            wins: 0,
            losses: 0,
            spend: 0,
            maxDefeated: 0
        });
    }

    receive() external payable {}

    function upgradeWrassler(
        address mainnetContract,
        uint256 tokenId,
        IWrassleable.UpgradeParams memory upgradeParams
    ) external payable {
        uint256 total = upgradeParams.power +
            upgradeParams.speed +
            upgradeParams.aggression +
            upgradeParams.determination +
            upgradeParams.resilience +
            upgradeParams.awareness;

        require(msg.value == calculateUpgradeCost(total), "Bad amount");

        IWrassleable.Wrassler storage wrassler = wrasslers[mainnetContract][tokenId];
        wrassler.power += upgradeParams.power;
        wrassler.speed += upgradeParams.speed;
        wrassler.aggression += upgradeParams.aggression;
        wrassler.determination += upgradeParams.determination;
        wrassler.resilience += upgradeParams.resilience;
        wrassler.awareness += upgradeParams.awareness;

        emit WrasslerUpdated(mainnetContract, tokenId);
    }

    function calculateUpgradeCost(uint256 totalPoints) public pure returns (uint256) {
        return totalPoints * attributeBaseCost;
    }

    function withdraw() public onlyRole(ADMIN_ROLE) {
        payable(msg.sender).transfer(address(this).balance);
    }

    function getWrassler(address mainnetContract, uint256 _tokenId)
        public
        view
        returns (
            uint256 power,
            uint256 speed,
            uint256 aggression,
            uint256 determination,
            uint256 resilience,
            uint256 awareness
        )
    {
        IWrassleable.Wrassler memory wrassler = wrasslers[mainnetContract][_tokenId];

        return (
            wrassler.power,
            wrassler.speed,
            wrassler.aggression,
            wrassler.determination,
            wrassler.resilience,
            wrassler.awareness
        );
    }
}

