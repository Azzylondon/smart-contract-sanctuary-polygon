pragma solidity ^0.8.11;

import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "../interfaces/IGeoPoly.sol";

contract GeoNFTAuction is
    AccessControlEnumerable,
    ReentrancyGuard,
    Pausable,
    ERC1155Holder
{
    bytes32 public constant OPERATIONS_ROLE = keccak256("OPERATIONS_ROLE");

    uint256 public MIN_BID_DIFF_PERC = 5;

    uint256 public protocolFees = 5;

    uint256 public hottestFee = 1000 ether;

    struct Auction {
        uint256 auctionType;
        address seller;
        uint256 tokenId;
        uint256 startTime;
        uint256 startPrice;
        uint256 duration;
        uint256 maxBid;
        address maxBidder;
        bool exists;
        uint256 fees;
        address currencyToken;
        uint256 discountRate;
        uint256 minPercentage;
    }

    mapping(uint256 => Auction) public liveAuctions;

    // Mapping for tokenAddress -> amount
    mapping(address => uint256) public ownerFeesBalance;

    // Mapping for address -> tokenId -> tokenAddress -> amount
    mapping(address => mapping(uint256 => mapping(address => uint256)))
        public pendingClaims;

    // Mapping for address -> tokenId -> bool
    mapping(address => mapping(uint256 => bool)) public pendingNFTClaims;

    mapping(address => bool) public acceptedCurrencyTokens;

    // Token addresses
    // address public geoAddress = 0xf1428850f92B87e629c6f3A3B75BffBC496F7Ba6;
    // address public geoNFTAddress = 0x0b72a80C151DeC838Cb6fBCE002c09eD35897345;

    // MUMBAI
    address public geoAddress = 0x552eD887938e4319a0A86aEbcA2e8A53E8beC3c8;
    address public geoNFTAddress = 0x3eaDfA50F47b5503c0CeDF8813B2dDc85eBa4730;

    /*╔═════════════════════════════╗
      ║           EVENTS            ║
      ╚═════════════════════════════╝*/

    event AuctionBegins(
        address indexed account,
        uint256 auctionType,
        uint256 tokenId,
        uint256 startTime,
        uint256 duration,
        uint256 finishTime,
        uint256 startPrice,
        uint256 fees,
        address currencyToken,
        uint256 discountRate,
        uint256 minPercentage,
        bool isHottest
    );

    event BidEntered(address indexed account, uint256 amount, uint256 tokenId);

    event WithdrawOwner(
        address indexed account,
        uint256 amount,
        address tokenAddress
    );

    event Withdraw(
        address indexed account,
        uint256 amount,
        address tokenAddress,
        uint256 tokenId
    );

    event WithdrawNFT(address indexed account, uint256 tokenId);

    event AuctionDeleted(
        address indexed account,
        uint256 maxBid,
        address maxBidder,
        uint256 tokenId,
        address currencyToken
    );

    /*╔═════════════════════════════╗
      ║          MODIFIERS          ║
      ╚═════════════════════════════╝*/

    modifier tokenNotInAuction(uint256 _tokenId) {
        require(
            !liveAuctions[_tokenId].exists,
            "There is a live auction for token Id"
        );
        _;
    }

    modifier tokenInAuction(uint256 _tokenId) {
        require(
            liveAuctions[_tokenId].exists,
            "There is no auction created for token Id"
        );
        _;
    }

    modifier auctionStarted(uint256 _tokenId) {
        require(
            liveAuctions[_tokenId].startTime < block.timestamp,
            "Auction has not started yet"
        );
        _;
    }

    modifier auctionLive(uint256 _tokenId) {
        require(
            liveAuctions[_tokenId].startTime < block.timestamp,
            "Auction has not started yet"
        );
        require(block.timestamp < finishTime(_tokenId), "Auction has ended");
        _;
    }

    modifier auctionEnded(uint256 _tokenId) {
        require(
            liveAuctions[_tokenId].startTime < block.timestamp,
            "Auction has not started yet"
        );
        require(
            block.timestamp > finishTime(_tokenId),
            "Auction has not ended yet"
        );
        _;
    }

    modifier notZeroAddress(address _address) {
        require(_address != address(0), "Cannot specify 0 address");
        _;
    }

    modifier currencyTokenAccepted(address _tokenAddress) {
        require(
            acceptedCurrencyTokens[_tokenAddress],
            "Token address is not accepted as currency"
        );
        _;
    }

    /*╔═════════════════════════════╗
      ║         Constructor         ║
      ╚═════════════════════════════╝*/

    constructor() {
        acceptedCurrencyTokens[geoAddress] = true;
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());

        _setupRole(OPERATIONS_ROLE, _msgSender());
    }

    /*╔═════════════════════════════╗
      ║      Internal Functions     ║
      ╚═════════════════════════════╝*/

    function _startAuction(
        uint256 auctionType,
        uint256 tokenId,
        uint256 timeToStart,
        uint256 startPrice,
        uint256 duration,
        address currencyToken,
        uint256 discountRate,
        uint256 minPercentage,
        bool isHottest
    ) internal tokenNotInAuction(tokenId) currencyTokenAccepted(currencyToken) {
        _transferNftToAuctionContract(msg.sender, tokenId);

        require(
            timeToStart <= 30 days,
            "Start date cannot be after 30 days from now"
        );

        require(
            auctionType == 1 || auctionType == 2,
            "Auction type not allowed"
        );

        if (auctionType == 1) {
            require(duration <= 7 days, "Duration must be shorter than 7 days");
            require(duration > 0, "Duration must be greater than 0");
        }

        if (auctionType == 2) {
            require(
                discountRate > 0,
                "Dutch auctions cannot have discount rate = 0"
            );
            require(
                minPercentage > 0,
                "Dutch auctions cannot have minimum percentage = 0"
            );
        }

        liveAuctions[tokenId] = Auction({
            auctionType: auctionType,
            seller: msg.sender,
            tokenId: tokenId,
            startTime: block.timestamp + timeToStart,
            startPrice: startPrice,
            duration: duration,
            maxBid: 0,
            maxBidder: msg.sender,
            exists: true,
            fees: protocolFees,
            currencyToken: currencyToken,
            discountRate: discountRate,
            minPercentage: minPercentage
        });

        emit AuctionBegins(
            msg.sender,
            auctionType,
            tokenId,
            block.timestamp + timeToStart,
            duration,
            block.timestamp + timeToStart + duration,
            startPrice,
            protocolFees,
            currencyToken,
            discountRate,
            minPercentage,
            isHottest
        );
    }

    function _chargeIsHottestFees() internal {
        IERC20(geoAddress).transferFrom(msg.sender, address(this), hottestFee);

        // Add to owner fee balance
        ownerFeesBalance[geoAddress] =
            ownerFeesBalance[geoAddress] +
            hottestFee;
    }

    function _transferTokensToSelf(
        address tokenAddress,
        address senderAddress,
        uint256 amount
    ) internal {
        require(msg.value == 0, "msg.value should be 0");

        // Transfer from does not allow to send more funds than balance
        IERC20(tokenAddress).transferFrom(senderAddress, address(this), amount);
    }

    function _transferNftToAuctionContract(address _seller, uint256 _tokenId)
        internal
    {
        require(
            IGeoPoly(geoNFTAddress).balanceOf(_seller, _tokenId) > 0,
            "Seller does not own NFT"
        );

        IGeoPoly(geoNFTAddress).safeTransferFrom(
            _seller,
            address(this),
            _tokenId,
            1,
            ""
        );
    }

    function _regularBid(uint256 tokenId, uint256 amount)
        internal
        auctionLive(tokenId)
    {
        Auction memory tokenAuction = liveAuctions[tokenId];

        address currencyToken = tokenAuction.currencyToken;

        _transferTokensToSelf(currencyToken, msg.sender, amount);

        uint256 bidAmountCheck = maxValue(
            tokenAuction.maxBid,
            tokenAuction.startPrice
        );

        // If amount - maxBid < 0 it reverts because of underflow

        require(
            amount - bidAmountCheck >= minExtraBid(bidAmountCheck),
            "Amount is not greater than max bid plus percentage"
        );

        // Transfer funds to previous max bidder
        IERC20(currencyToken).transfer(
            tokenAuction.maxBidder,
            tokenAuction.maxBid
        );

        // Set new maximum bid & bidder

        liveAuctions[tokenId].maxBid = amount;
        liveAuctions[tokenId].maxBidder = msg.sender;
    }

    function _dutchBid(uint256 tokenId) internal {
        Auction memory tokenAuction = liveAuctions[tokenId];

        require(tokenAuction.auctionType == 2, "The auction is not dutch");

        uint256 amount = getDutchAuctionPrice(tokenId);

        uint256 minOffer = (tokenAuction.startPrice *
            tokenAuction.minPercentage) / 100;

        require(amount >= minOffer, "Price is below the minimum");

        // Set new maximum bid & bidder

        liveAuctions[tokenId].maxBid = amount;
        liveAuctions[tokenId].maxBidder = msg.sender;

        _settleAuction(tokenId);
    }

    function _settleAuction(uint256 tokenId) public tokenInAuction(tokenId) {
        require(
            isContractHoldingNFT(tokenId),
            "Contract does not possess the token"
        );

        Auction memory tokenAuction = liveAuctions[tokenId];

        uint256 amountToProtocol = (tokenAuction.maxBid * tokenAuction.fees) /
            100;

        uint256 amountToSeller = tokenAuction.maxBid - amountToProtocol;

        // Add pendingClaims for seller
        pendingClaims[tokenAuction.seller][tokenId][
            tokenAuction.currencyToken
        ] += amountToSeller;

        if (tokenAuction.auctionType == 1) {
            // Add pending NFT for buyer
            pendingNFTClaims[tokenAuction.maxBidder][tokenId] = true;
        } else if (tokenAuction.auctionType == 2) {
            // Send funds to contract
            IERC20(tokenAuction.currencyToken).transferFrom(
                msg.sender,
                address(this),
                tokenAuction.maxBid
            );

            // Send NFT
            IGeoPoly(geoNFTAddress).safeTransferFrom(
                address(this),
                tokenAuction.maxBidder,
                tokenAuction.tokenId,
                1,
                ""
            );
        }

        // Recover Fees to owner
        ownerFeesBalance[tokenAuction.currencyToken] =
            ownerFeesBalance[tokenAuction.currencyToken] +
            amountToProtocol;

        delete liveAuctions[tokenId];

        emit AuctionDeleted(
            msg.sender,
            tokenAuction.maxBid,
            tokenAuction.maxBidder,
            tokenAuction.tokenId,
            tokenAuction.currencyToken
        );
    }

    /*╔═════════════════════════════╗
      ║   External view Functions   ║
      ╚═════════════════════════════╝*/

    function auctionMaxBid(uint256 tokenId) public view returns (uint256) {
        return liveAuctions[tokenId].maxBid;
    }

    function minExtraBid(uint256 maxBid) public view returns (uint256) {
        return (maxBid * MIN_BID_DIFF_PERC) / 100;
    }

    function finishTime(uint256 tokenId) public view returns (uint256) {
        return liveAuctions[tokenId].startTime + liveAuctions[tokenId].duration;
    }

    function maxValue(uint256 a, uint256 b) public pure returns (uint256) {
        return a >= b ? a : b;
    }

    function isContractHoldingNFT(uint256 tokenId) public view returns (bool) {
        uint256 nftBalance = IGeoPoly(geoNFTAddress).balanceOf(
            address(this),
            tokenId
        );
        return nftBalance > 0;
    }

    function getDutchAuctionPrice(uint256 tokenId)
        public
        view
        returns (uint256)
    {
        Auction memory tokenAuction = liveAuctions[tokenId];

        uint256 minutesElapsed = (block.timestamp - tokenAuction.startTime) /
            60;

        uint256 priceReduced = (minutesElapsed *
            tokenAuction.discountRate *
            tokenAuction.startPrice) / 100;

        if (priceReduced > tokenAuction.startPrice) {
            return 0;
        }

        uint256 price = tokenAuction.startPrice - priceReduced;

        return price;
    }

    /*╔═════════════════════════════╗
      ║      External Functions     ║
      ╚═════════════════════════════╝*/

    function startAuction(
        uint256 auctionType,
        uint256 tokenId,
        uint256 timeToStart,
        uint256 startPrice,
        uint256 duration,
        address currencyToken,
        uint256 discountRate,
        uint256 minPercentage,
        bool isHottest
    ) external whenNotPaused {
        // If hottest charge hottestFee
        if (isHottest) {
            _chargeIsHottestFees();
        }
        _startAuction(
            auctionType,
            tokenId,
            timeToStart,
            startPrice,
            duration,
            currencyToken,
            discountRate,
            minPercentage,
            isHottest
        );
    }

    function bid(uint256 tokenId, uint256 amount)
        external
        tokenInAuction(tokenId)
        auctionStarted(tokenId)
        nonReentrant
        returns (bool)
    {
        Auction memory tokenAuction = liveAuctions[tokenId];

        require(
            msg.sender != tokenAuction.seller,
            "You cannot bid on your own NFT"
        );

        if (tokenAuction.auctionType == 1) {
            _regularBid(tokenId, amount);
        } else if (tokenAuction.auctionType == 2) {
            _dutchBid(tokenId);
        }

        emit BidEntered(msg.sender, amount, tokenId);
        return true;
    }

    function redeemFinishedDutchAuction(uint256 tokenId)
        public
        auctionStarted(tokenId)
        nonReentrant
    {
        Auction memory tokenAuction = liveAuctions[tokenId];

        require(
            msg.sender == tokenAuction.seller,
            "Only auction seller can redeem the NFT"
        );

        require(
            tokenAuction.auctionType == 2,
            "Only dutch auctions can be redeemed"
        );
        require(
            isContractHoldingNFT(tokenId),
            "Contract does not possess the token"
        );

        uint256 amount = getDutchAuctionPrice(tokenId);

        uint256 minOffer = (tokenAuction.startPrice *
            tokenAuction.minPercentage) / 100;

        require(amount < minOffer, "Minimum price not reached yet");

        IGeoPoly(geoNFTAddress).safeTransferFrom(
            address(this),
            msg.sender,
            tokenAuction.tokenId,
            1,
            ""
        );

        delete liveAuctions[tokenId];

        emit AuctionDeleted(
            msg.sender,
            tokenAuction.maxBid,
            tokenAuction.maxBidder,
            tokenAuction.tokenId,
            tokenAuction.currencyToken
        );
    }

    function settleAuction(uint256 tokenId)
        public
        tokenInAuction(tokenId)
        auctionEnded(tokenId)
        nonReentrant
    {
        Auction memory tokenAuction = liveAuctions[tokenId];

        require(
            tokenAuction.auctionType == 1,
            "Only regular auctions can be settled"
        );
        _settleAuction(tokenId);
    }

    function claimPendingBalance(uint256 tokenId, address tokenAddress)
        external
        nonReentrant
    {
        address receiver = msg.sender;

        uint256 amount = pendingClaims[receiver][tokenId][tokenAddress];

        IERC20(tokenAddress).transfer(receiver, amount);

        pendingClaims[receiver][tokenId][tokenAddress] = 0;

        emit Withdraw(receiver, amount, tokenAddress, tokenId);
    }

    function claimPendingNFT(uint256 tokenId) external nonReentrant {
        address receiver = msg.sender;

        require(
            isContractHoldingNFT(tokenId),
            "Contract does not possess the token"
        );

        require(pendingNFTClaims[receiver][tokenId], "Not allowed to claim");

        // Send NFT
        IGeoPoly(geoNFTAddress).safeTransferFrom(
            address(this),
            receiver,
            tokenId,
            1,
            ""
        );

        pendingNFTClaims[receiver][tokenId] = false;

        emit WithdrawNFT(receiver, tokenId);
    }

    /*╔═════════════════════════════╗
      ║     Operators  Functions    ║
      ╚═════════════════════════════╝*/

    function startAuctionOwner(
        uint256 auctionType,
        uint256 tokenId,
        uint256 timeToStart,
        uint256 startPrice,
        uint256 duration,
        address currencyToken,
        uint256 discountRate,
        uint256 minPercentage,
        bool isHottest
    ) external onlyRole(OPERATIONS_ROLE) {
        _startAuction(
            auctionType,
            tokenId,
            timeToStart,
            startPrice,
            duration,
            currencyToken,
            discountRate,
            minPercentage,
            isHottest
        );
    }

    function pause() external onlyRole(OPERATIONS_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(OPERATIONS_ROLE) {
        _unpause();
    }

    function setNewProtocolFees(uint256 newFee)
        external
        onlyRole(OPERATIONS_ROLE)
    {
        require(newFee <= 10, "Fees cannot be greater than 10%");
        require(
            newFee != protocolFees,
            "New fees cannot be equal to current fees"
        );
        protocolFees = newFee;
    }

    function setNewhottestFee(uint256 newFee)
        external
        onlyRole(OPERATIONS_ROLE)
    {
        require(
            newFee != hottestFee,
            "New fees cannot be equal to current fees"
        );
        hottestFee = newFee;
    }

    function addCurrencyToken(address tokenAddress)
        external
        onlyRole(OPERATIONS_ROLE)
        notZeroAddress(tokenAddress)
    {
        require(
            !acceptedCurrencyTokens[tokenAddress],
            "Token is already accepted"
        );

        acceptedCurrencyTokens[tokenAddress] = true;
    }

    function removeCurrencyToken(address tokenAddress)
        external
        onlyRole(OPERATIONS_ROLE)
        currencyTokenAccepted(tokenAddress)
    {
        acceptedCurrencyTokens[tokenAddress] = false;
    }

    /*╔═════════════════════════════╗
      ║       Admin Functions       ║
      ╚═════════════════════════════╝*/

    function withdrawOwnerBalance(address tokenAddress)
        external
        nonReentrant
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        uint256 amount = ownerFeesBalance[tokenAddress];

        IERC20(tokenAddress).transfer(msg.sender, amount);

        ownerFeesBalance[tokenAddress] = 0;

        emit WithdrawOwner(msg.sender, amount, tokenAddress);
    }

    /*╔═════════════════════════════╗
      ║      Override Function      ║
      ╚═════════════════════════════╝*/

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(AccessControlEnumerable, ERC1155Receiver)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

