pragma solidity 0.8.9;

import "./common/access/AccessControl.sol";


/**
 * @dev Contract implementing Fear PlayToEarn Competition.
 *
 * Using this contract caller can participate in Fear competitions and claim rewards.
 */
contract HorrorHubHost is AccessControl {

    struct GameInfo {
        string name;
        string metadataUrl;
    }

    GameInfo[] public games;
    mapping (string => GameInfo) public gamesByName;
    mapping (address => mapping (string => bool)) userInstallations;

    constructor() {
    }

    function gamesLength() external view returns(uint256) {
        return games.length;
    }

    function getUserGames(address user) external view returns(string[] memory) {
        uint256 userGamesCount;
        for (uint i = 0; i < games.length; i++) {
            if (userInstallations[user][games[i].name])
                userGamesCount++;
        }

        string[] memory userGames = new string[](userGamesCount);
        userGamesCount = 0;

        for (uint i = 0; i < games.length; i++) {
            if (userInstallations[user][games[i].name]) {
                userGames[userGamesCount] = games[i].name;
                userGamesCount++;
            }
        }

        return userGames;
    }
   
    function addGame(string memory name, string memory metadataUrl) external onlyRole(MANAGER_ROLE) {
        require(bytes(gamesByName[name].name).length == 0, "Game with this name already exists");

        GameInfo storage newGame = games.push();
        newGame.name = name;
        newGame.metadataUrl = metadataUrl;
        gamesByName[name] = newGame;
        
    }

    function editGame(string memory name, string memory metadataUrl) external onlyRole(MANAGER_ROLE) {
        require(bytes(gamesByName[name].name).length > 0, "Game not found");

        GameInfo storage existingGame = gamesByName[name];
        existingGame.metadataUrl = metadataUrl;
    }

    function removeGame(string memory name) public onlyRole(MANAGER_ROLE) {
        require(bytes(gamesByName[name].name).length > 0, "Game not found");

        uint gameIndex;
        for (uint i = 0; i < games.length; i++) {
            if (keccak256(bytes(games[i].name)) == keccak256(bytes(name)))
                gameIndex = i;
        }

        for (uint i = gameIndex; i < games.length - 1; i++) {
            games[i] = games[i + 1];
        }

        games.pop();
        delete gamesByName[name];
    }

    function registerInstallation(address user, string memory gameName) external onlyRole(MANAGER_ROLE) {
        userInstallations[user][gameName] = true;
    }

    function registerUninstallation(address user, string memory gameName) external onlyRole(MANAGER_ROLE) {
        userInstallations[user][gameName] = false;
    }
}

