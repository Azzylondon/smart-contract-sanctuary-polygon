pragma solidity ^0.8.0;

import '../../../tokens/PXL.sol';
import '../../../tokens/IPxlbot.sol';
import '../../coordinators/InventoryCoordinator/IInventoryCoordinator.sol';
import './IMissionBudget.sol';
import '../../../utils/Controllable.sol';

contract MissionPxlBudget is
  IMissionBudget,
  Controllable,
  IInventoryEntityContract
{
  IPXL pxl;
  IPxlbot pxlbot;
  IInventoryCoordinator inventoryCoordinator;
  Entity thisEntity = Entity({ _contract: this, id: 1 });

  Item pxlInventoryItem;

  mapping(uint256 => uint256) private missionBudget;

  constructor(
    IPXL _pxl,
    IPxlbot _pxlbot,
    IInventoryCoordinator _inventoryCoordinator
  ) {
    pxl = _pxl;
    pxlbot = _pxlbot;
    inventoryCoordinator = _inventoryCoordinator;
    pxlInventoryItem._contract = IInventoryItemContract(pxl);
    pxlInventoryItem.id = 1;
  }

  //this function creates a reward amount by taking a combination of weighted scores (based on factors), adding in a bounty (optional), and minting and transferring PXL
  function getReward(
    uint256 botId,
    uint256 missionId,
    uint256 score,
    uint256 totalPossible,
    uint256 bounty,
    int16
  ) external override onlyController returns (Reward memory) {
    uint256 budget = missionBudget[missionId];
    uint256 rewardAmount;
    if (totalPossible > 0) {
      rewardAmount = (budget * score) / totalPossible;
    }
    if (bounty > 0) {
      rewardAmount += bounty;
    }

    mintAdditionalPxlIfNeeded(rewardAmount);

    Item[] memory items = new Item[](1);
    items[0] = pxlInventoryItem;
    uint256[] memory amounts = new uint256[](1);
    amounts[0] = rewardAmount;

    return
      Reward({
        from: thisEntity,
        to: Entity({ _contract: pxlbot, id: botId }),
        items: items,
        amounts: amounts,
        subject_to_tribute: true
      });
  }

  //this budget is used to calculate the total reward for a given mission (see getReward)
  //it acts as a maximum upon which separate weighted scores pull their % of a total score
  //e.g. if a factor has a weight of 1 out of a possible 2 and a score of 40%, it will get 40% (score) of 50% (weights) of the total budget (e.g. 100), so 20
  function updateMissionBudget(uint256 missionId, uint256 budget)
    external
    onlyController
  {
    missionBudget[missionId] = budget;
  }

  function mintAdditionalPxlIfNeeded(uint256 amount) private {
    uint256 remainder = amount -
      inventoryCoordinator.balance(thisEntity, pxlInventoryItem);
    if (remainder > 0) {
      pxl.mint(address(this), remainder);
      pxl.approve(address(inventoryCoordinator), remainder);
      inventoryCoordinator.addItemToGame(
        pxlInventoryItem,
        thisEntity,
        remainder
      );
    }
  }

  function irlOwner(uint256) external view override returns (address) {
    return owner();
  }
}

