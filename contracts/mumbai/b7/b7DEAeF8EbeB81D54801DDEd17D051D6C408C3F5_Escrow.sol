pragma solidity ^0.8.4;

import '@openzeppelin/contracts/access/AccessControl.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';

interface Bnft {
    function getRenter(uint256) external view returns (address);

    function getPropertyOwner(uint256) external view returns (address);

    function getIdWithListingId(uint256) external view returns (uint256);

    function setPropertyId(uint256 tokenId, uint256 newPropertyId) external;

    function getCheckInTime(uint256 tokenId) external view returns (uint256);
}

interface IPropertyVerification {
    function pauseVerify(uint256 propertyId) external;

    function unpauseVerify(uint256 propertyId) external;

    function isPropertyVerified(address propertyOwner, uint256 propertyId)
        external
        view
        returns (bool);

    function verify(address propertyOwnerAddress, uint256 propertyId)
        external
        returns (uint256);

    function unlistProperty(uint256 propertyId) external;
}

contract Escrow is AccessControl {
    using EnumerableSet for EnumerableSet.UintSet;
    using SafeMath for uint256;

    /**
     * @dev after a BNFT is bought, the funds are put into escrow and locked
     * until the property is verified or there is a dispute and its resolved
     * @param escrowId id of the escrow
     * @param releaseTime The time when the escrow funds can be released
     * @param amount the amount locked until escrow is released
     * @param disputed whether or not the property has been disputed or not
     * @param propertyOwner the address of the property owner
     */
    struct EscrowVault {
        uint256 escrowId;
        uint256 releaseTime;
        uint256 amount;
        uint256 bnftId;
        uint256 listingId;
        uint256 propertyId;
        uint256 royalty;
        bool disputed;
        address originalpropertyOwner;
        address originalRenter;
        bool redeemed;
    }

    // Escrow Id => EscrowVault
    mapping(uint256 => EscrowVault) private escrows;
    EnumerableSet.UintSet private escrowIds;

    uint256 public nextEscrowId;
    bytes32 public constant ROLE_ADMIN = keccak256('ROLE_ADMIN');

    Bnft public BNFT;
    IPropertyVerification public PropertyVerificationContract;
    address public marketplaceAddress;

    event EscrowCreated(
        uint256 escrowId,
        uint256 listingId,
        uint256 releaseTime,
        uint256 amount,
        address propertyOwner,
        address renter
    );

    event EscrowCollected(
        uint256 escrowId,
        uint256 amount,
        uint256 royalty,
        uint256 verifiedPropertyId
    );

    event DisputeResolved(
        uint256 escrowId,
        uint256 renterAmount,
        uint256 propertyOwnerAmount,
        address renterAddress,
        address propertyOwnerAddress
    );

    event DisputeEscrow(uint256 escrowId, bool escrowDisputed);

    constructor(
        address _admin,
        address _BNFT,
        address _propertyContractAddress
    ) {
        // _admin addrss is now admin
        _setupRole(ROLE_ADMIN, _admin);
        _setRoleAdmin(ROLE_ADMIN, ROLE_ADMIN);

        BNFT = Bnft(_BNFT);
        PropertyVerificationContract = IPropertyVerification(
            _propertyContractAddress
        );
    }

    modifier onlyAdmin() {
        require(hasRole(ROLE_ADMIN, msg.sender), 'Sender is not admin');
        _;
    }

    modifier sellerOrAdmin(uint256 escrowId) {
        require(
            msg.sender == escrows[escrowId].originalpropertyOwner ||
                hasRole(ROLE_ADMIN, msg.sender),
            'Sender is not the property owner nor the admin'
        );
        _;
    }

    modifier propertyContractOrAdmin() {
        require(
            msg.sender == address(PropertyVerificationContract) ||
                hasRole(ROLE_ADMIN, msg.sender),
            'Sender is not the property contract nor the admin'
        );
        _;
    }

    modifier marketOrAdmin() {
        require(
            msg.sender == marketplaceAddress || hasRole(ROLE_ADMIN, msg.sender),
            'Sender is not the marketplace nor the admin'
        );
        _;
    }

    function setPropertyVerificationAddress(
        address newPropertyVerificationAddres
    ) external onlyAdmin {
        PropertyVerificationContract = IPropertyVerification(
            newPropertyVerificationAddres
        );
    }

    function setMarketAddress(address newMarketAddress) external onlyAdmin {
        marketplaceAddress = newMarketAddress;
    }

    function generateEscrowId() internal returns (uint256) {
        return nextEscrowId++;
    }

    /**
     * @dev Create an escrow and generate a new id
     * @param releaseTime when to release the locked up funds
     * @param amount amount of funds to lock up
     * @param listingId the listing id of the bnft being tracked
     */
    function createEscrow(
        uint256 releaseTime,
        uint256 amount,
        uint256 listingId,
        uint256 propertyId
    ) external payable marketOrAdmin returns (uint256) {
        uint256 bnftId = BNFT.getIdWithListingId(listingId);
        // the amount must be more than 0
        require(amount >= 0, 'amount must be greater than 0');
        // nobody should be the 0 address
        address propertyOwner = BNFT.getPropertyOwner(bnftId);
        require(
            propertyOwner != address(0),
            'property owner cannot be 0 address'
        );
        address renter = BNFT.getRenter(bnftId);
        require(renter != address(0), 'renter cannot be 0 address');

        // make sure the amount they send is equal to the amount they're locking up
        require(
            msg.value == amount,
            'Did not send the proper amount of currency'
        );

        // make sure the release time hasn't already passed
        require(
            releaseTime >= block.timestamp,
            'Given release time has already passed'
        );

        uint256 newEscrowId = generateEscrowId();

        escrows[newEscrowId] = EscrowVault(
            newEscrowId,
            releaseTime,
            amount,
            bnftId,
            listingId,
            propertyId,
            // initial royalty amount will be 0
            0,
            false,
            propertyOwner,
            renter,
            false
        );
        escrowIds.add(newEscrowId);

        emit EscrowCreated(
            newEscrowId,
            listingId,
            releaseTime,
            amount,
            propertyOwner,
            renter
        );
        return newEscrowId;
    }

    /**
     * @dev collect the locked up funds after the release time has passed
     * @param escrowId escrow id
     */
    function collectEscrow(uint256 escrowId) external sellerOrAdmin(escrowId) {
        EscrowVault storage escrow = escrows[escrowId];

        require(!escrow.redeemed, 'This escrow has already been redeemed');

        // this property has not been disputed
        require(!escrow.disputed, 'This escrow has been disputed.');
        // Require that the release time has passed
        require(
            block.timestamp >= escrow.releaseTime,
            'It is too early to release the escrow funds'
        );

        require(
            escrowIds.contains(escrowId),
            'There is no active escrow with this Id'
        );

        address propertyOwner = BNFT.getPropertyOwner(escrow.bnftId) !=
            address(0)
            ? BNFT.getPropertyOwner(escrow.bnftId)
            : escrow.originalpropertyOwner;

        // send the amount plus royalty to the user id
        (bool success, ) = payable(propertyOwner).call{
            value: escrow.amount.add(escrow.royalty)
        }('');
        require(success, 'Failed to collect Escrow');

        uint256 verifiedPropertyId = PropertyVerificationContract.verify(
            escrow.originalpropertyOwner,
            escrow.propertyId
        );
        escrow.redeemed = true;

        emit EscrowCollected(
            escrowId,
            escrow.amount,
            escrow.royalty,
            verifiedPropertyId
        );
    }

    /**
     * @dev resolve a dispute for a property
     * @param escrowId escrow id
     * @param renterAmount amount of funds to send to the renter
     * @param propertyOwnerAmount amount of funds to send to the property owner
     */
    function resolveDispute(
        uint256 escrowId,
        uint256 renterAmount,
        uint256 propertyOwnerAmount,
        bool fraudulentListing
    ) external onlyAdmin {
        require(
            escrowIds.contains(escrowId),
            'There is no active escrow with this Id'
        );
        EscrowVault memory escrow = escrows[escrowId];

        address renter = BNFT.getRenter(escrow.bnftId) != address(0)
            ? BNFT.getRenter(escrow.bnftId)
            : escrow.originalRenter;
        address propertyOwner = BNFT.getPropertyOwner(escrow.bnftId) !=
            address(0)
            ? BNFT.getPropertyOwner(escrow.bnftId)
            : escrow.originalpropertyOwner;

        // if the dispute is resolved in favor of renter (aka property owner gets 0)
        if (propertyOwnerAmount == 0) {
            // renter should only be getting the initial amount
            require(
                escrow.amount ==
                    propertyOwnerAmount.add(renterAmount),
                'Distributing the incorrect amount of funds for this escrow'
            );
            // TODO send the royalty amount to marketplace (TT)
        } else {
            require(
                escrow.amount.add(escrow.royalty) ==
                    propertyOwnerAmount.add(renterAmount),
                'Distributing the incorrect amount of funds for this escrow'
            );
        }

        require(escrow.disputed, 'This escrow is not being disputed');

        if (renterAmount > 0) {
            (bool success, ) = renter.call{value: renterAmount}('');
            require(success, 'Failed to send dispute amount to the renter');
        }
        if (propertyOwnerAmount > 0) {
            (bool success, ) = propertyOwner.call{value: propertyOwnerAmount}(
                ''
            );
            require(
                success,
                'Failed to send dispute amount to the property owner'
            );
        }

        // if the listing is fraudulent, unlist the property
        if (fraudulentListing) {
            // TODO royalties and deposit should be sent to marketplace contract
            PropertyVerificationContract.unlistProperty(escrow.propertyId);
        }

        // once an escrow is resolved / collected, remove from the list
        escrowIds.remove(escrowId);

        emit DisputeResolved(
            escrowId,
            renterAmount,
            propertyOwnerAmount,
            renter,
            propertyOwner
        );
    }

    /**
     * @dev renters can dispute a property
     * @param escrowId escrow id
     */
    function disputeEscrow(uint256 escrowId) external {
        require(
            escrowIds.contains(escrowId),
            'There is no active escrow with this Id'
        );
        EscrowVault memory escrow = escrows[escrowId];

        address renter = BNFT.getRenter(escrow.bnftId) != address(0)
            ? BNFT.getRenter(escrow.bnftId)
            : escrow.originalRenter;
        require(renter == msg.sender, 'only renter can dispute the property');

        require(
            block.timestamp < escrow.releaseTime,
            'it is too late to dispute the property'
        );
        escrows[escrowId].disputed = true;

        emit DisputeEscrow(escrowId, escrows[escrowId].disputed);
    }

    /**
     * @dev add more funds to an escrow. Ie to add resale royalties
     * @param escrowId escrow id
     */
    function addRoyalty(uint256 escrowId) external payable marketOrAdmin {
        EscrowVault storage escrow = escrows[escrowId];
        // must be before the check in time to add royalty
        uint256 checkInTime = BNFT.getCheckInTime(escrow.bnftId);
        require(
            checkInTime > block.timestamp,
            'check in time has passed, cannot add royalties'
        );

        // keep track of total royalties
        escrow.royalty += msg.value;
    }

    /**
     * @dev return the sum of escrow and royalty
     * @param escrowId escrow id
     */
    function getTotalEscrowAmount(uint256 escrowId)
        external
        view
        returns (uint256)
    {
        EscrowVault storage escrow = escrows[escrowId];
        return escrow.amount.add(escrow.royalty);
    }
}

