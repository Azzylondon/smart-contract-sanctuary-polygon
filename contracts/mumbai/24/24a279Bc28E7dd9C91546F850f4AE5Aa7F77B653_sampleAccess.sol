pragma solidity ^0.8.0;

contract sampleAccess {
    mapping (address => string) private _name;

    event changedName(
        address indexed sender,
        string indexed name
    );

    function viewName(
        address user
    ) public virtual view returns (string memory) {
        return _name[user];
    }

    function generateHash(
        uint256 deadline,
        address user,
        string memory newName
    ) public virtual view returns (bytes32) {
        bytes32 tempHash = keccak256(
            abi.encodePacked(
                user,
                newName,
                deadline
            )
        );

        return tempHash;
    }

    function changeName(
        string memory newName
    ) public virtual {
        _name[msg.sender] = newName;

        emit changedName(
            msg.sender,
            newName
        );
    }

    function changeNameWithPermit(
        uint256 deadline,
        address target,
        string memory newName,
        bytes memory signature
    ) public virtual {
        require(
            ECDSA.recover(
                ECDSA.toEthSignedMessageHash(
                    generateHash(
                        deadline,
                        target,
                        newName
                    )
                ),
                signature
            ) == target,
            "sampleAccess : You have not permitted"
        );

        require(
            deadline < block.number,
            "sampleAccess : Permission is timeout"
        );

        _name[target] = newName;

        emit changedName(
            target,
            newName
        );
    }
}

