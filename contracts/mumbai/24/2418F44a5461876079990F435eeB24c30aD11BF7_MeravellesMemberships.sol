pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol";
import "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Burnable.sol";
import "@openzeppelin/contracts/token/common/ERC2981.sol";
import "@thirdweb-dev/contracts/extension/ContractMetadata.sol";
import "@thirdweb-dev/contracts/extension/Ownable.sol";
import "@thirdweb-dev/contracts/extension/PermissionsEnumerable.sol";

contract ERC1155Base is
    ERC1155,
    ERC1155Supply,
    ERC1155Burnable,
    ERC2981,
    ContractMetadata,
    Ownable,
    PermissionsEnumerable
{
    uint256 public tokenIdCounter = 0;
    bytes32 public constant ROYALTIES_ROLE = keccak256("ROYALTIES_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    string public name;
    string public symbol;

    mapping(uint256 => TokenInfo) internal _tokensInfo;

    error NonexistentToken();

    struct TokenInfo {
        string baseUri;
        uint256 maxSupply;
    }

    constructor(
        string memory _uri,
        string memory _name,
        string memory _symbol,
        address _royaltyRecipient,
        uint96 _royaltyBps
    ) ERC1155(_uri) {
        name = _name;
        symbol = _symbol;
        _setupOwner(msg.sender);
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ROYALTIES_ROLE, msg.sender);
        _setupRole(MINTER_ROLE, msg.sender);
        _setDefaultRoyalty(_royaltyRecipient, _royaltyBps);
    }

    modifier checkBot() {
        require(msg.sender == tx.origin, "BOT");
        _;
    }

    function createToken(string memory _baseUri, uint256 _maxSupply)
        public
        onlyRole(MINTER_ROLE)
        returns (uint256)
    {
        return _addTokenType(_baseUri, _maxSupply);
    }

    function _addTokenType(string memory _baseUri, uint256 _maxSupply)
        internal
        returns (uint256)
    {
        _tokensInfo[tokenIdCounter] = TokenInfo(_baseUri, _maxSupply);
        return ++tokenIdCounter;
    }

    function reserve(uint256 _tokenId, uint256 _quantity)
        public
        onlyRole(MINTER_ROLE)
    {
        _beforeTokenMint(_tokenId, _quantity);
        _mint(msg.sender, _tokenId, _quantity, "");
    }

    function uri(uint256 _tokenId)
        public
        view
        override
        returns (string memory)
    {
        if (!_exists(_tokenId)) revert NonexistentToken();
        string memory tokenBaseURI = _tokensInfo[_tokenId].baseUri;
        return string(abi.encodePacked(super.uri(_tokenId), tokenBaseURI));
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC1155, ERC2981)
        returns (bool)
    {
        return
            interfaceId == 0x01ffc9a7 || // ERC165 Interface ID for ERC165
            interfaceId == type(IERC1155).interfaceId || // ERC165 ID for ERC1155
            interfaceId == type(IERC1155MetadataURI).interfaceId || // ERC165 ID for ERC1155MetadataURI
            interfaceId == type(IERC2981).interfaceId; // ERC165 ID for ERC2981
    }

    /// @dev Lets a contract admin update the default royalty recipient and bps.
    function setDefaultRoyaltyInfo(
        address _royaltyRecipient,
        uint96 _royaltyBps
    ) external {
        if (!_canSetRoyaltyInfo()) {
            revert("Not authorized");
        }

        _setDefaultRoyalty(_royaltyRecipient, _royaltyBps);
    }

    /// @dev Lets a contract admin set the royalty recipient and bps for a particular token Id.
    function setRoyaltyInfoForToken(
        uint256 _tokenId,
        address _recipient,
        uint96 _bps
    ) external {
        if (!_canSetRoyaltyInfo()) {
            revert("Not authorized");
        }

        _setTokenRoyalty(_tokenId, _recipient, _bps);
    }

    function _beforeTokenMint(uint256 _tokenId, uint256 _quantity)
        internal
        view
    {
        if (!_exists(_tokenId)) revert NonexistentToken();
        TokenInfo storage info = _tokensInfo[_tokenId];
        uint256 currentSupply = super.totalSupply(_tokenId);
        uint256 maxSupply = info.maxSupply;
        require(
            maxSupply == 0 || (currentSupply + _quantity) <= maxSupply,
            "Mint exceeds max supply"
        );
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal override(ERC1155, ERC1155Supply) {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    function _exists(uint256 _tokenId) internal view returns (bool) {
        return _tokenId < tokenIdCounter;
    }

    function _canSetOwner() internal view virtual override returns (bool) {
        return msg.sender == owner();
    }

    function _canSetRoyaltyInfo() internal view virtual returns (bool) {
        return hasRole(ROYALTIES_ROLE, msg.sender);
    }

    function _canSetContractURI()
        internal
        view
        virtual
        override
        returns (bool)
    {
        return hasRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }
}

