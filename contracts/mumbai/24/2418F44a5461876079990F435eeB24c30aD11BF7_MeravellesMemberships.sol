pragma solidity ^0.8.4;

import "@nefty/contracts/ERC1155Base.sol";

contract MeravellesMemberships is ERC1155Base {
    bytes32 public constant OPERATIONS_ROLE = keccak256("OPERATIONS_ROLE");
    mapping (address => uint256[]) private redeemablesMap;

    constructor(
        string memory _name,
        string memory _symbol,
        address _royaltyRecipient,
        uint96 _royaltyBps
    ) ERC1155Base("ipfs://", _name, _symbol, _royaltyRecipient, _royaltyBps) {
        _setupRole(OPERATIONS_ROLE, msg.sender);
    }

    function setRedeemable(address _recipient, uint256[] memory _tokenIds) public onlyRole(OPERATIONS_ROLE) {
        for (uint i; i < _tokenIds.length; i++) {
            require(_exists(_tokenIds[i]), "Token does not exist");
        }
        redeemablesMap[_recipient] = _tokenIds;
    }

    function getRedeemable(address _recipient) public view returns(bool, uint256[] memory) {
        uint256[] memory tokenIds = redeemablesMap[_recipient];
        return (tokenIds.length > 0, tokenIds);
    }

    function claim()
        public
        checkBot
    {
        (bool canRedeem, uint256[] memory tokenIds) = getRedeemable(msg.sender);
        require(canRedeem, "No NFTs to claim");

        // Remove redeemables before minting
        delete redeemablesMap[msg.sender];

        for (uint i = 0; i < tokenIds.length; i++) {
            _mint(msg.sender, tokenIds[i], 1, "");
        }
    }
}

