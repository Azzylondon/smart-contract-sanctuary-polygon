contract Exchange is Ownable{
    event Checking(uint256 indexed approvevalue, uint256 indexed fee, uint256 netamount);
    struct Action {
        uint256 dateTime;
        uint256 startDateTime;
        uint256 endDateTime;
    }
    struct Type {
        address addr;
        bool bid;
    }
    struct Tokens {
        uint256 Id;
        address addr;
        uint256 price;
        string tokenAddress;
        uint256 dateTime;
        uint256 updatedAt;
        uint256 status;
        string name;
    }
    // status 1:open 2:completed 3:withdraw
    mapping(uint256 => Action) public action;
    mapping(uint256 => mapping(address => Tokens)) public tokenData;
    mapping(string => Type) public tokenType;

    uint256 public auction_Id = 1;

    event RetAuctionId(
        uint256 indexed newAuctionId
    );

    function addToken(string memory _type, address tokenAddress, bool bid) public {
        tokenType[_type].addr = tokenAddress;
        tokenType[_type].bid = bid;
    }

    function createAution(uint256 startDateTime, uint256 endDateTime) public {
        uint256 auctionId = auction_Id;
        auction_Id++;
        Action memory Actiondet;

        Actiondet = Action(
            block.timestamp,
            startDateTime,
            endDateTime
        );
        action[auctionId] = Actiondet;
        emit RetAuctionId(auctionId);
    }

    function placeBid(string memory tname, address addr, uint256 amount, uint256 aucId, uint256 Id, address conaddress) public {
        require(amount > 0, 'Amount must be greater than zero');
        require(tokenType[tname].bid, "oops! Could not create a Bid with this Token");
        require(msg.sender != IERC721(conaddress).ownerOf(Id), "oops! you could not create a Bid");

        uint256 curTime = block.timestamp;

        require(curTime >= action[aucId].startDateTime, 'Auction not yet started');
        require(curTime <= action[aucId].endDateTime, 'Auction time over');

        if (tokenData[aucId][addr].price > 0) {
            tokenData[aucId][addr].dateTime = block.timestamp;
        }
        tokenData[aucId][addr].Id = Id;
        tokenData[aucId][addr].addr = addr;
        tokenData[aucId][addr].price = amount;
        tokenData[aucId][addr].name = tname;
        tokenData[aucId][addr].updatedAt = block.timestamp;
        tokenData[aucId][addr].status = 1;
    }

    function withdrawBid(address addr, uint256 amount, uint256 aucId, uint256 Id, address conaddress) public {
        require(amount > 0, "Amount must be greater than zero");
        require(tokenData[aucId][addr].price > 0, "oops! Bid not availabe");
        require(tokenData[aucId][addr].status == 1, "oops! Withdraw bid not allowed to you");
        require(msg.sender != IERC721(conaddress).ownerOf(Id), "oops! you could not create a Bid");
        tokenData[aucId][addr].updatedAt = block.timestamp;
        tokenData[aucId][addr].status = 3;
    }

    function claimWinner(string memory bidToken,address addr, uint256 amount, uint256 aucId, uint256 Id, address conaddress) public {
        require(tokenData[aucId][addr].price > 0, "oops! Bid is not valid");
        require(tokenData[aucId][addr].status == 1, "oops! Accept bid not allowed to you");
        _claimWinner(bidToken, addr, owner(), amount, Id, conaddress);
        IERC721(conaddress).safeTransferFrom(msg.sender, addr, Id);
        tokenData[aucId][addr].status = 2;
    }
    function _claimWinner(string memory tname,address from, address admin, uint256 amount, uint256 Id, address conaddress) internal{
        uint256 serviceValue = 10;
        uint256 fee = (amount * serviceValue) / 100;
        uint256 val = fee + amount;
        address addr = tokenType[tname].addr;
        IERC20 t = IERC20(addr);
        uint256 approveValue = t.allowance(from, address(this));
        require( approveValue >= val, "oops! Insufficient Balance");
        require(msg.sender == IERC721(conaddress).ownerOf(Id), "oops! Is Not a Owner");
        emit Checking(approveValue, fee, amount);
        t.transferFrom(from, admin, fee);
        t.transferFrom(from, msg.sender, amount);
    }
}