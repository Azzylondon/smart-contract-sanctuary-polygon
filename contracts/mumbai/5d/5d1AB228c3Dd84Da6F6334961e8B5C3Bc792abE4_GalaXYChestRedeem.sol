import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Burnable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

import "./GalaXYGameItem.sol";
import "./GalaXYVRFConsumer.sol";
import "./interface/IChestRedeem.sol";
import "./TreasureWeightV1.sol";

contract GalaXYChestRedeem is
    AccessControl,
    Ownable,
    Pausable,
    TreasureWeightV1,
    GalaXYVRFConsumer,
    IChestRedeem {

    bytes32 public constant DISPATCHER = keccak256("DISPATCHER");
    bytes32 public constant BUYER = keccak256("BUYER");

    GalaXYGameItem public gameItemContract;
    // GalaXYTreasureChest
    ERC1155Burnable public chest1155;
    // GalaXYVault
    ERC1155Burnable public vault1155;

    /**
     * @dev structure to store redeem request
     *
     * status: 1-> receive request, 2-> fullfill random num, 3-> redeem completed
     * chestId: the id redeemed
     * amount: chest burnt amount
     * seed: random seed fullfilled
     *
     */
    struct redeemRequest {
        uint8 status;
        address signer;
        uint256 chestId;
        uint256 amount;
        uint256 seed;
    }

    // mapping redeemRequest to requestId
    mapping(uint256 => redeemRequest) public redeemRequests;

    event RedeemEvent(uint256 requestId);
    event FulfillEvent(uint256 requestId);

    // the chest id in galaxyVault contract
    uint256[] vaultChest = [9, 10, 11, 12];
    // the chest id in galaxyTreasureChest contract
    uint256[] chestChest = [0];

    uint256 public maxSingleRedeemAmount = 10;

    constructor(
        address _chestAddress,
        address _vaultAddress,
        address _gameItemContractAddress,
        uint64 _subscriptionId,
        address _vrfCoordinator,
        bytes32 _keyHash,
        uint32 _callbackGasLimit,
        uint16 _requestConfirmations,
        uint32 _numWords)
    GalaXYVRFConsumer(
        _subscriptionId,
        _vrfCoordinator,
        _keyHash,
        _callbackGasLimit,
        _requestConfirmations,
        _numWords)
    {
        gameItemContract = GalaXYGameItem(_gameItemContractAddress);
        chest1155 = ERC1155Burnable(_chestAddress);
        vault1155 = ERC1155Burnable(_vaultAddress);
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(DISPATCHER, msg.sender);

        buildItemWeights();
    }

    modifier validAmount(uint256 amount)
    {
        require(amount > 0, "At least one chest in a redemption");
        require(
            maxSingleRedeemAmount >= amount,
            string(
                abi.encodePacked(
                    "At most ",
                    Strings.toString(maxSingleRedeemAmount),
                    " chest in a redemption"
                )
            )
        );
        _;
    }


    function setMaxSingleRedeemAmount(uint256 _maxSingleRedeemAmount)
        external onlyOwner
    {
        maxSingleRedeemAmount = _maxSingleRedeemAmount;
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomWords)
        internal override
    {
        require(redeemRequests[requestId].status == 1, "Request not found");
        redeemRequests[requestId].status = 2;
        redeemRequests[requestId].seed = randomWords[0];

        emit FulfillEvent(requestId);
    }

    /**
     * @dev functions for redeem galaxy treature chest
     *
     * First, burn the chests from msg.sender.
     * Third, random choice a item from chosen group.
     *
     * The second and third steps may loop for multiple times.
     */

    function _burnChest(uint256 chestId, uint256 amount) internal
    {
        chest1155.burn(msg.sender, chestChest[chestId], amount);
    }

    function _burnVault(uint256 chestId, uint256 amount) internal
    {
        vault1155.burn(msg.sender, vaultChest[chestId], amount);
    }

    function _redeemTo(address toAddress, uint256 chestId, uint256 amount)
        internal returns (uint256 requestId)
    {
        requestId = requestVRF();

        redeemRequests[requestId].status = 1;
        redeemRequests[requestId].signer = toAddress;
        redeemRequests[requestId].chestId = chestId;
        redeemRequests[requestId].amount = amount;

        emit RedeemEvent(requestId);
        return requestId;
    }

    function redeemTo(address toAddress, uint256 chestId, uint256 amount)
        external whenNotPaused onlyRole(BUYER) validAmount(amount)
        override returns (uint256 requestId)
    {
        return _redeemTo(toAddress, chestId, amount);
    }

    function redeem(uint256 chestId, uint256 chestAmount, uint256 vaultAmount)
        external whenNotPaused validAmount(chestAmount + vaultAmount) returns(uint256 requestId)
    {
        require(chestAmount == 0 || chestId == 0, "ChestContract only has chest 0");

        if (chestAmount > 0) {
            _burnChest(chestId, chestAmount);
        }
        if (vaultAmount > 0) {
            _burnVault(chestId, vaultAmount);
        }
        return _redeemTo(msg.sender, chestId, chestAmount + vaultAmount);
    }

    function _randomFromGroup(weightedContent storage wc, uint256 randomNumber)
        internal view returns (uint256)
    {
        require(wc.items.length > 0, "Empty chest");

        randomNumber %= wc.totalWeight;
        uint i;
        for (i = 0; i < wc.items.length; i++) {
            if (randomNumber < wc.items[i][2]) {
                break;
            }
        }
        return wc.items[i][0];
    }

    function _randomItemFromChest(uint256 chestId, uint256 seed, uint256 index)
        internal view returns (uint256)
    {
        uint256 randNum = uint256(keccak256(abi.encodePacked(seed, index)));
        uint256 itemId = _randomFromGroup(chestContent[chestId], randNum);
        return itemId;
    }

    function getRedeemItems(uint256 requestId)
        public view returns(uint256[] memory, uint256[] memory)
    {
        redeemRequest storage rr  = redeemRequests[requestId];
        require(rr.status == 2, "Random seed not found");

        uint256[] memory items = new uint256[](rr.amount);
        uint256[] memory values = new uint256[](rr.amount);
        for (uint i = 0; i < rr.amount; i++) {
            items[i] = _randomItemFromChest(rr.chestId, rr.seed, i);
            values[i] = 1;
        }

        return (items, values);
    }

    function dispatchItems(uint256 requestId)
        external onlyRole(DISPATCHER)
    {
        (uint256[] memory items, uint256[] memory values) = getRedeemItems(requestId);
        gameItemContract.mintBatch(redeemRequests[requestId].signer, items, values);
        redeemRequests[requestId].status = 3;
    }

    /**
     * @dev functions for pausable
     */

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function supportsInterface(bytes4 interfaceId)
        public view virtual
        override(AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

