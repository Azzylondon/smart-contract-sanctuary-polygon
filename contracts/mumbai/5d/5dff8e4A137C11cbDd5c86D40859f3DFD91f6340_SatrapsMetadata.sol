/// @title Satraps metadata contract
/// @notice Contract that stores metadata uri for the Satraps NFT collection.
contract SatrapsMetadata is Ownable {
  string public baseUri = ""; // WITHOUT A TRAILING SLASH "/"!!!
  string public nonRevealed = "ipfs://QmNjt8mhkEKoS4hbgQwYe4zLw4cFr13UC7bUytzwiyvhTr";

  // READ
  function getMetadata(uint256 _tokenId) public view returns(string memory) {
    if (bytes(baseUri).length == 0) {
      return string(
        abi.encodePacked("data:application/json;base64,", Base64.encode(bytes(abi.encodePacked(
          '{"name": "Satrap #', Strings.toString(_tokenId), '", ',
          '"description": "Image will be revealed after minting is completed.", ',
          '"image": "', nonRevealed, '"}'))))
      );
    } else {
      return string(
        abi.encodePacked(
          baseUri, 
          "/", 
          Strings.toString(_tokenId),
          ".json"
        )
      );
    }
  }

  // OWNER

  /// @notice Only contract owner can call this function.
  function changeBaseUri(string calldata _newUri) external onlyOwner {
    baseUri = _newUri; // WITHOUT TRAILING "/"!!!
  }

  /// @notice Only contract owner can call this function.
  function changeNonRevealed(string calldata _nonRevealed) external onlyOwner {
    nonRevealed = _nonRevealed;
  }
}

