import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";

contract VRFSubscriptionController is Ownable {
    // Chainlink data
    VRFCoordinatorV2Interface COORDINATOR;
    LinkTokenInterface LINKTOKEN;
    uint64 subscriptionId;

    // Interfaces for swap
    IPancakeRouter02 pancakeRouter;
    IPegSwap pegSwap;
    IWETH weth;
    IERC20 link;
    IERC20 pegLink;

    // Events
    event SwapBNBLinkAndRefund(
        uint64 subscriptionId,
        uint256 amount,
        uint256 timestamp
    );

    constructor(
        address _vrfCoordinator,
        uint64 _subscriptionId,
        address _pancakeRouter,
        address _pegSwap,
        address _weth,
        address _link,
        address _pegLink
    ) {
        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
        LINKTOKEN = LinkTokenInterface(_link);
        subscriptionId = _subscriptionId;
        pancakeRouter = IPancakeRouter02(_pancakeRouter);
        pegSwap = IPegSwap(_pegSwap);
        weth = IWETH(_weth);
        link = IERC20(_link);
        pegLink = IERC20(_pegLink);
    }

    function changePancakeRouter(address _newAddress) external onlyOwner {
        pancakeRouter = IPancakeRouter02(_newAddress);
    }

    function changePegSwap(address _newAddress) external onlyOwner {
        pegSwap = IPegSwap(_newAddress);
    }

    function changeSubscriptionId(uint64 _newSubscriptionId)
        external
        onlyOwner
    {
        subscriptionId = _newSubscriptionId;
    }

    receive() external payable {
        address[] memory path = new address[](2);
        path[0] = address(weth);
        path[1] = address(pegLink);
        uint256[] memory minAmounts = pancakeRouter.getAmountsOut(
            address(this).balance,
            path
        );
        pancakeRouter.swapExactETHForTokens{value: address(this).balance}(
            minAmounts[1],
            path,
            address(this),
            block.timestamp
        );
        uint256 amount = IERC20(pegLink).balanceOf(address(this));
        pegSwap.swap(amount, address(pegLink), address(link));

        LINKTOKEN.transferAndCall(
            address(COORDINATOR),
            IERC20(link).balanceOf(address(this)),
            abi.encode(subscriptionId)
        );
        emit SwapBNBLinkAndRefund(
            subscriptionId,
            minAmounts[1],
            block.timestamp
        );
    }
}

