        address referrer,
        IERC20Upgradeable paymentToken,
        uint256 amount,
        uint256 reactionId
    );

    /// @dev Event emitted when rewards are granted to a maker
    event MakerRewardsGranted(
        address maker,
        IERC20Upgradeable paymentToken,
        uint256 amount,
