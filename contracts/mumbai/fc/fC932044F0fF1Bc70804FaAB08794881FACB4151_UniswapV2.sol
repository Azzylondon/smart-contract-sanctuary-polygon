import "../interfaces/IUniswapV2Pool.sol";
import "../interfaces/IERC20Template.sol";

contract UniswapV2{
    IUniswapV2Factory private uniswapV2Factory;
    IUniswapV2Router02 private uniswapV2Router;
    address public nvg8_token;
    address public nvg8_marketplace;
    address public nvg8_factory;

    struct Listing {
        address erc20Token;
        address erc721Token;
    }

    //Modifier Only Marketplace or Factory
    modifier onlyMarketplaceOrFactory() {
        require(msg.sender == nvg8_marketplace || msg.sender == nvg8_factory, "Only Marketplace or Factory can do this");
        _;
    }

    mapping(uint256 => Listing) public listings;

    constructor(address _routerAddress, address _nvg8_token, address _nvg8_factory, address _nvg_marketplace) {
        require(_routerAddress != address(0), "Router address cannot be 0");
        require(_nvg8_token != address(0), "Nvg8 token address cannot be 0");
        uniswapV2Router = IUniswapV2Router02(_routerAddress);
        nvg8_token = _nvg8_token;
        nvg8_marketplace = _nvg_marketplace;
        nvg8_factory = _nvg8_factory;
    }

    function addLiquidity(uint256 _dataToken, uint256 _tAmountDesired, uint256 _tAmountMin, uint256 _nAmountDesired, uint256 _nAmountMin ) public onlyMarketplaceOrFactory returns( uint _tAmount, uint _nAmount, uint _liquidity) {
        require(listings[_dataToken].erc20Token != address(0), "ERC20 token address cannot be 0");

        // Add liquidity to the uniswap pair
         ( _tAmount, _nAmount, _liquidity)= uniswapV2Router.addLiquidity(listings[_dataToken].erc20Token, nvg8_token, _tAmountDesired, _nAmountDesired, _tAmountMin, _nAmountMin, msg.sender, block.timestamp+100);
    }

    function swapTokens(uint256 _dataToken, uint256 _amountIn, uint256 _amountOutMin, address _to, uint256 _deadline) onlyMarketplaceOrFactory external {
        address[] memory path = new address[](2);
        path[0] = nvg8_token;
        path[1] = listings[_dataToken].erc20Token;
        uniswapV2Router.swapExactTokensForTokens(_amountIn, _amountOutMin, path, _to, _deadline);
    }


    function addDataToken(address _erc20address, address _erc721Address, uint256 _dataTokenId) onlyMarketplaceOrFactory public {
        require(_erc20address != address(0), "ERC20 address is zero");
        require(_erc721Address != address(0), "ERC721 address is zero");

        listings[_dataTokenId] = Listing(_erc20address, _erc721Address);

    }
}

