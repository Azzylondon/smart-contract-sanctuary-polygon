pragma solidity 0.8.4;







contract ERC1155Market is ReentrancyGuard, Ownable, Pausable, ERC1155Holder {
    using EnumerableSet for EnumerableSet.UintSet;
    using Counters for Counters.Counter;

    Counters.Counter private _orderIDCounter;

    struct Order {
        uint256 orderID;
        IERC1155 collection;
        address seller;
        uint256 tokenId;
        uint256 price;
        uint256 amount;
        uint256 remaining;
        bool allowPartial;
        bool isCanceled;
        // IERC20 dealToken;
       // address[] buyers;
    }

    mapping(uint256 => Order) public getOrder;
    mapping(address => mapping(uint256 => EnumerableSet.UintSet)) private _tokenOrders;
    mapping(address => bool) public collectionAllowlist;

    event CreateOrder(
        uint256 indexed orderID,
        address seller,
        IERC1155 collection,
        uint256 tokenId,
        uint256 price,
        uint256 amount,
        bool allowPartial
        //IERC20 dealToken,
    );

    event Buy(
        uint256 indexed orderID,
        address buyer,
        uint256 amount
    );

    event CancelOrder(uint256 indexed orderID);

    event UpdateCollectionAllowlist(address collection, bool isAllowed);

    uint256 public marketCut; //in base 10000

    constructor(uint256 _marketCut) {
        marketCut = _marketCut;
        // skip orderID 0
        _orderIDCounter.increment();
    }

    function sellToken(IERC1155 _collection, uint256 _tokenID, uint256 _price, uint256 _amount, bool _allowPartial) external nonReentrant whenNotPaused {
        require(collectionAllowlist[address(_collection)], "Market: collection not allowed");
        address _seller = msg.sender;
        _escrow(_collection, _seller, _tokenID, _amount);
        uint256 _orderID = _orderIDCounter.current();

        getOrder[_orderID] = Order(
            _orderID,
            _collection,
            _seller,
            _tokenID,
            _price,
            _amount,
            _amount,
            _allowPartial,
            false
        );
        _orderIDCounter.increment();

        _tokenOrders[address(_collection)][_tokenID].add(_orderID);

        emit CreateOrder(
            _orderID,
            _seller,
            _collection,
            _tokenID,
            _price,
            _amount,
            _allowPartial
        );
    }

    function buyToken(uint256 _orderID, uint256 _amount) external  payable nonReentrant whenNotPaused {
        Order storage _order = getOrder[_orderID];
        address buyer = msg.sender;

        require(!_order.isCanceled, "Market: order is canceled");
        require(_order.remaining > 0, "Market: sold out");

        // total price seller would receive, subtract the market cut
        uint256 _sellerAmount;

        if (_order.allowPartial) {
            require(_amount <= _order.remaining, "Market: amount exceeded");
            require(msg.value >= _amount*_order.price, "Market: not enough money");

            // transfer token to buyer
            _order.remaining -= _amount;
            _order.collection.safeTransferFrom(address(this), buyer, _order.tokenId, _amount, new bytes(0));

            // send money to seller
            _sellerAmount = _amount*_order.price - _amount*_order.price*marketCut/10000;
            payable(_order.seller).transfer(_sellerAmount);

            emit Buy(_orderID, buyer, _amount);

            // check order remaining amount
            if (_order.remaining == 0) {
                // delete getOrder[_orderID];
                _tokenOrders[address(_order.collection)][_order.tokenId].remove(_orderID);
            }
        } else {
            require(_amount == _order.remaining, "Market: amount incorrect");
            require(msg.value >= _order.amount*_order.price, "Market: not enough money");

            // transfer token to buyer
            _order.collection.safeTransferFrom(address(this), buyer, _order.tokenId, _order.amount, new bytes(0));
            _order.remaining = 0;

            // send money to seller
            _sellerAmount = _order.amount*_order.price - _order.amount*_order.price*marketCut/10000;
            payable(_order.seller).transfer(_sellerAmount);

            emit Buy(_orderID, buyer, _order.amount);

            // remove order
            // delete getOrder[_orderID];
            _tokenOrders[address(_order.collection)][_order.tokenId].remove(_orderID);

        }
    }

    function cancelOrder(uint256 _orderID) external nonReentrant {
        Order storage _order = getOrder[_orderID];
        require(msg.sender == _order.seller, "Market: not seller of the order");
        _order.isCanceled = true;
        _order.collection.safeTransferFrom(address(this), _order.seller, _order.tokenId, _order.remaining, new bytes(0));

        // remove order
        // delete getOrder[_orderID];
        _tokenOrders[address(_order.collection)][_order.tokenId].remove(_orderID);

        emit CancelOrder(_orderID);
    }

    // Todo pagination
    // Do not use, there's pagination problem
//    function getTokenOrdersByIndex(address _collection, uint256 _tokenID, uint256 _start, uint256 _size) external view returns (Order[] memory) {
//        uint256 _end = _start+_size;
//        Order[] memory resultOrders = new Order[](_end - _start);
//        if (_start+_size > _tokenOrders[_collection][_tokenID].length()) {
