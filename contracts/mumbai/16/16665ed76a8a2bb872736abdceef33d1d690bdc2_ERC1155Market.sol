    function getTokenAllOrders(address _collection, uint256 _tokenID) external view returns (Order[] memory resultOrders) {
        uint256 _length = _tokenOrders[_collection][_tokenID].length();

        resultOrders = new Order[](_length);

        for (uint256 i = 0; i < _length; i++) {
            resultOrders[i]=(getOrder[_tokenOrders[_collection][_tokenID].at(i)]);
        }
        return resultOrders;
    }

    function setMarketCut(uint256 _marketCut) external onlyOwner {
        marketCut = _marketCut;
    }

    function updateCollectionAllowList(address collection, bool isAllowed)
        public
        onlyOwner
    {
        require(collectionAllowlist[collection] != isAllowed, "Market: not updated");
        collectionAllowlist[collection] = isAllowed;
        emit UpdateCollectionAllowlist(collection, isAllowed);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function withdraw(address payable _address, uint256 _amount) public onlyOwner {
        _address.transfer(_amount);
    }

    function _escrow(
        IERC1155 _token,
        address _owner,
        uint256 _tokenId,
        uint256 _amount
    ) private {
        _token.safeTransferFrom(_owner, address(this), _tokenId, _amount, new bytes(0));
    }
