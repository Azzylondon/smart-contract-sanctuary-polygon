pragma solidity 0.8.1;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

contract A4AMarketplaceNFT is Ownable {
    using SafeMath for uint256;

    address private a4A_NFT_address = 0xBacd8D198af3FB3F09c405EDDc74aD138fE812f1;
    IERC721 a4A_items = IERC721(a4A_NFT_address);

    mapping(uint256 => uint256) private _listedITemsPrice;
    mapping(uint256 => address) private _listedITemsOwner;

    uint256 public _marketFee;
    address payable private _a4A_wallet;
    uint256 public _itemsForSale;

    event ItemListed(uint256 tokenId, address seller, uint256 price);
    event ItemSold(uint256 tokenId, address buyer, address seller, uint256 price);

    constructor() {
        _a4A_wallet = payable(_msgSender());
        _marketFee = 5;
    }


    function listItem(uint256 itemID, uint256 price) external {
        require( a4A_items.ownerOf(itemID) == _msgSender() );

        //Save NFT price & owner
        _listedITemsPrice[itemID] = price;
        _listedITemsOwner[itemID] = a4A_items.ownerOf(itemID);

        //Transfer NFT to contract (requires previous approve)
        a4A_items.transferFrom(_msgSender(), address(this), itemID);

        _itemsForSale.add(1);
    }

    function delistItem(uint256 itemID) external {
        require(_listedITemsOwner[itemID] == _msgSender());

        //Transfer NFT to contract (requires previous approve)
        a4A_items.transferFrom(address(this), _listedITemsOwner[itemID], itemID);

        //Remove old values
        _listedITemsPrice[itemID] = 0;
        _listedITemsOwner[itemID] = address(0);

        _itemsForSale.sub(1);
    }

    function buyItem(uint256 itemID) external payable {
        require(_listedITemsPrice[itemID] > 0);
        require(_listedITemsOwner[itemID] != address(0));

        //Check payment
        uint256 itemPrice = _listedITemsPrice[itemID];
        require(msg.value >= itemPrice);

        address seller = _listedITemsOwner[itemID];
        _listedITemsOwner[itemID] = address(0);
        _listedITemsPrice[itemID] = 0;

        //Calculate market fee
        uint256 marketAmt = _marketFee.mul(itemPrice).div(100);
        (bool sentFee, ) = _a4A_wallet.call{value: marketAmt}("");
        require(sentFee, "Failed to send BNB fee to the team.");

        //Calculate seller's amount
        uint256 sellerAmt = itemPrice.sub(marketAmt);
        (bool sentValue, ) = seller.call{value: sellerAmt}("");
        require(sentValue, "Failed to send BNB to the item owner.");

        //Transfer NFT to the buyer
        a4A_items.safeTransferFrom(address(this), _msgSender(), itemID);

        //check New owner & Not for sale
        require(a4A_items.ownerOf(itemID) == _msgSender());
        require(_listedITemsPrice[itemID] == 0);

        _itemsForSale.sub(1);

    }

    function itemsForSale() external view returns(uint256){
        return _itemsForSale;
    }

    function isItemForSale(uint256 itemID) external view returns(bool){
        return _listedITemsPrice[itemID]>0;
    }

    function ownerOfItem(uint256 itemID) external view returns(address){
        return _listedITemsOwner[itemID];
    }



    function setA4AWallet(address payable wallet) external onlyOwner {
        _a4A_wallet = wallet;
    }

    function setA4Afee(uint256 fee) external onlyOwner {
        _marketFee = fee;
    }

}

