contract LiquidationManager is
  ILiquidationManager,
  ReentrancyGuard,
  AccessControlEnumerable
{
  using SafeERC20 for IERC20;
  using PreciseUnitMath for uint256;
  using FixedPoint for FixedPoint.Unsigned;

  bytes32 public constant MAINTAINER_ROLE = keccak256('Maintainer');

  //----------------------------------------
  // Storage
  //----------------------------------------
  ISynthereumFinder public immutable synthereumFinder;
  IJarvisBrrrrr public immutable jarvisBrrrrr;

  struct Roles {
    address admin;
    address maintainer;
  }

  uint64 feePercentage;

  //----------------------------------------
  // Event
  //----------------------------------------
  event SetFeePercentage(uint256 newFee);

  modifier onlyMaintainer() {
    require(
      hasRole(MAINTAINER_ROLE, msg.sender),
      'Sender must be the maintainer'
    );
    _;
  }

  //----------------------------------------
  // Constructor
  //----------------------------------------
  /**
   * @notice Constructs the Liquidation Module contract
   * @param _synthereumFinder Synthereum finder contract
   * @param _jarvisBrrrrr Synthereum jarvisBrrr contract
   * @param _baseFees Liquidation base fees in percentage
   * @param _roles Roles address
   */

  constructor(
    ISynthereumFinder _synthereumFinder,
    IJarvisBrrrrr _jarvisBrrrrr,
    uint64 _baseFees,
    Roles memory _roles
  ) {
    synthereumFinder = _synthereumFinder;
    jarvisBrrrrr = _jarvisBrrrrr;
    _setRoleAdmin(DEFAULT_ADMIN_ROLE, DEFAULT_ADMIN_ROLE);
    _setRoleAdmin(MAINTAINER_ROLE, DEFAULT_ADMIN_ROLE);
    _setupRole(DEFAULT_ADMIN_ROLE, _roles.admin);
    _setupRole(MAINTAINER_ROLE, _roles.maintainer);
    feePercentage = _baseFees;
  }

  /**
   * @notice Liquidate a specific provider from pool V6
   * @param _poolAddress Address of the pool
   * @param _lpAddress Address of the liquidity provider to liquidate
   * @param _isReceiveCollateralRewards Boolean of if liquidator when to get the liquidation rewards in collateral or jFIAT
   * @return success Boolean of the right execution
   */
  function liquidateLP(
    address _poolAddress,
    address _lpAddress,
    bool _isReceiveCollateralRewards
  ) external override returns (bool success) {
    _onlyPools(_poolAddress);
    ISynthereumMultiLpLiquidityPool poolContract =
      ISynthereumMultiLpLiquidityPool(_poolAddress);

    ISynthereumMultiLpLiquidityPool.LPInfo memory _lpPositionInfo =
      poolContract.positionLPInfo(_lpAddress);

    IERC20 _syntheticToken = poolContract.syntheticToken();
    IERC20 _collateralToken = poolContract.collateralToken();

    jarvisBrrrrr.mint(
      IMintableBurnableERC20(address(_syntheticToken)),
      _lpPositionInfo.tokensCollateralized
    );

    _syntheticToken.safeApprove(
      _poolAddress,
      _lpPositionInfo.tokensCollateralized
    );
    uint256 collateralAmountReceived =
      poolContract.liquidate(_lpAddress, _lpPositionInfo.tokensCollateralized);

    _collateralToken.safeApprove(_poolAddress, collateralAmountReceived);
    ISynthereumMultiLpLiquidityPool.MintParams memory mintParams =
      ISynthereumMultiLpLiquidityPool.MintParams(
        _lpPositionInfo.tokensCollateralized,
        collateralAmountReceived,
        block.timestamp + 60,
        address(this)
      );
    (uint256 syntheticTokensMinted, ) = poolContract.mint(mintParams);

    _syntheticToken.safeApprove(
      address(jarvisBrrrrr),
      _lpPositionInfo.tokensCollateralized
    );
    jarvisBrrrrr.redeem(
      IMintableBurnableERC20(address(_syntheticToken)),
      _lpPositionInfo.tokensCollateralized
    );

    _transferRewardsAndFees(
      _syntheticToken,
      _collateralToken,
      _poolAddress,
      _isReceiveCollateralRewards
    );

    return true;
  }

  /**
   * @notice Liquidate a specific provider from creditLine contract
   * @param _creditLineAddress Address of the creditLine contract
   * @param _sponsorAddress Address to liquidate
   * @param _poolAddress Address of the pool
   * @param _isReceiveCollateralRewards Boolean of if liquidator when to get the liquidation rewards in collateral or jFIAT
   * @return success Boolean of the right execution
   */
  function liquidateCreditLine(
    address _creditLineAddress,
    address _sponsorAddress,
    address _poolAddress,
    bool _isReceiveCollateralRewards
  ) external override returns (bool success) {
    _onlyCreditLine(_creditLineAddress);
    _onlyPools(_poolAddress);

    ICreditLine creditLineContract = ICreditLine(_creditLineAddress);
    ISynthereumMultiLpLiquidityPool poolContract =
      ISynthereumMultiLpLiquidityPool(_poolAddress);
    IERC20 _syntheticToken = creditLineContract.syntheticToken();
    IERC20 _collateralToken = creditLineContract.collateralToken();
    require(
      address(_syntheticToken) == address(poolContract.syntheticToken()),
      'Err: Not same synthetic token contract'
    );
    require(
      address(_collateralToken) == address(poolContract.collateralToken()),
      'Err: Not same collateral token contract'
    );

    (, uint256 tokensAmountToPayBack) =
      creditLineContract.getPositionData(_sponsorAddress);
    jarvisBrrrrr.mint(
      IMintableBurnableERC20(address(_syntheticToken)),
      tokensAmountToPayBack
    );
    _syntheticToken.safeApprove(_creditLineAddress, tokensAmountToPayBack);
    (
      uint256 tokensLiquidated,
      uint256 collateralLiquidated,
      uint256 collateralReward
    ) = creditLineContract.liquidate(_sponsorAddress, tokensAmountToPayBack);

    uint256 collateralAmountReceived = collateralLiquidated + collateralReward;
    _collateralToken.safeApprove(_poolAddress, collateralAmountReceived);

    ISynthereumMultiLpLiquidityPool.MintParams memory mintParams =
      ISynthereumMultiLpLiquidityPool.MintParams(
        tokensLiquidated,
        collateralAmountReceived,
        block.timestamp + 60,
        address(this)
      );
    poolContract.mint(mintParams);

    _syntheticToken.safeApprove(address(jarvisBrrrrr), tokensAmountToPayBack);

    jarvisBrrrrr.redeem(
      IMintableBurnableERC20(address(_syntheticToken)),
      tokensAmountToPayBack
    );
    _transferRewardsAndFees(
      _syntheticToken,
      _collateralToken,
      _poolAddress,
      _isReceiveCollateralRewards
    );
    return true;
  }

  /**
   * @notice Set new fee percentage
   * @param _newFee New fee percentage
   */
  function setFeePercentage(uint64 _newFee) public nonReentrant onlyMaintainer {
    require(
      _newFee < PreciseUnitMath.PRECISE_UNIT,
      'Fee Percentage must be less than 100%'
    );
    feePercentage = _newFee;
    emit SetFeePercentage(feePercentage);
  }

  /**
   * @notice Returns fee percentage of the pool
   * @return fee Fee percentage
   */
  function getFeePercentage() external view returns (uint256 fee) {
    return feePercentage;
  }

  /**
   * @notice Returns fee percentage of the pool
   * @param _syntheticToken IERC20 of the token
   * @param _collateralToken IERC20 of the colleteral
   * @param _poolAddress Address of the pool
   * @param _isReceiveCollateralRewards Boolean of if liquidator when to get the liquidation rewards in collateral or jFIAT
   */
  function _transferRewardsAndFees(
    IERC20 _syntheticToken,
    IERC20 _collateralToken,
    address _poolAddress,
    bool _isReceiveCollateralRewards
  ) internal {
    ISynthereumMultiLpLiquidityPool poolContract =
      ISynthereumMultiLpLiquidityPool(_poolAddress);
    if (_isReceiveCollateralRewards) {
      _syntheticToken.safeApprove(
        _poolAddress,
        _syntheticToken.balanceOf(address(this))
      );
      ISynthereumMultiLpLiquidityPool.RedeemParams memory redeemParams =
        ISynthereumMultiLpLiquidityPool.RedeemParams(
          _syntheticToken.balanceOf(address(this)),
          0,
          block.timestamp + 60,
          address(this)
        );

      (uint256 collateralRedeemed, ) = poolContract.redeem(redeemParams);
      uint256 feeAmount = collateralRedeemed.mul(feePercentage);

      _collateralToken.safeTransfer(
        synthereumFinder.getImplementationAddress(
          SynthereumInterfaces.DaoTreasure
        ),
        feeAmount
      );
      _collateralToken.safeTransfer(
        msg.sender,
        _collateralToken.balanceOf(address(this))
      );
      return;
    }
    uint256 feeAmount =
      _syntheticToken.balanceOf(address(this)).mul(feePercentage);
    _syntheticToken.safeTransfer(
      synthereumFinder.getImplementationAddress(
        SynthereumInterfaces.DaoTreasure
      ),
      feeAmount
    );
    _syntheticToken.safeTransfer(
      msg.sender,
      _syntheticToken.balanceOf(address(this))
    );
    return;
  }

  /**
   * @notice Check that address passed is a registered creditLine contract
   * @dev used function instead of modifier to avoid the following error:
   * CompilerError: Stack too deep, try removing local variables.
   */
  function _onlyCreditLine(address _creditLineAddress) internal {
    ISynthereumRegistry registry;
    bytes32 typology =
      keccak256(abi.encodePacked(ITypology(_creditLineAddress).typology()));
    if (typology == keccak256(abi.encodePacked('SELF-MINTING'))) {
      registry = ISynthereumRegistry(
        synthereumFinder.getImplementationAddress(
          SynthereumInterfaces.SelfMintingRegistry
        )
