pragma solidity ^0.8.8;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "./CTHelpers.sol";
import "./interfaces/IFixedProductMarketMaker.sol";

contract BatchBet is ERC1155Holder {
    IERC20 public immutable token;

    event FPMMBatchBuy(address indexed buyer, address[] markets, uint256[] investmentAmount);

    constructor(address _token) {
        require(_token != address(0), "invalid token address");

        token = IERC20(_token);
    }

    function getCollectionId(
        bytes32 parentCollectionId,
        bytes32 conditionId,
        uint256 indexSet
    ) internal view returns (bytes32) {
        return CTHelpers.getCollectionId(parentCollectionId, conditionId, indexSet);
    }

    function getPositionId(bytes32 _conditionId, uint256 _outcomeIndex) internal view returns (uint256) {
        uint256 indexSet = 1 << _outcomeIndex;
        bytes32 collectionId = getCollectionId(0, _conditionId, indexSet);

        return CTHelpers.getPositionId(token, collectionId);
    }

    function batchBuy(
        address[] calldata _markets,
        uint256[] calldata _investmentAmount,
        uint256[] calldata outcomeIndex,
        uint256[] calldata minOutcomeTokensToBuy
    ) external {
        uint256 length = _markets.length;
        require(
            length > 0 &&
                _investmentAmount.length == length &&
                outcomeIndex.length == length &&
                minOutcomeTokensToBuy.length == length,
            "invalid input"
        );

        for (uint256 i = 0; i < length; i++) {
            IFixedProductMarketMaker fpmm = IFixedProductMarketMaker(_markets[i]);

            token.transferFrom(msg.sender, address(this), _investmentAmount[i]);
            token.approve(_markets[i], _investmentAmount[i]);

            address conditionalToken = fpmm.conditionalTokens();
            bytes32 conditionId = fpmm.conditionIds(0);
            uint256 positionId = getPositionId(conditionId, outcomeIndex[i]);
            uint256 outcomeTokensToBuy = fpmm.calcBuyAmount(_investmentAmount[i], outcomeIndex[i]);

            fpmm.buy(_investmentAmount[i], outcomeIndex[i], minOutcomeTokensToBuy[i]);
            IERC1155(conditionalToken).safeTransferFrom(address(this), msg.sender, positionId, outcomeTokensToBuy, "");
        }

        emit FPMMBatchBuy(msg.sender, _markets, _investmentAmount);
    }
}

