pragma solidity ^0.8.1;

interface IVesting {
    
    /**
     * @notice Shows that the vesting was started with a certain number of tokens.
     * @param tokenAmount is the number of tokens that were 
     transferred at the start of the vesting.
     * @param tokenAddress is the address of the token contract.
     */
    event VestingIsInitialized(
        uint256 tokenAmount,
        address tokenAddress
    );
    
    /**
     * @notice Shows that a certain participant has withdrawn a certain number of tokens.
     * @param paymentAmount is the number of tokens withdrawn.
     * @param participantAddress is the participant address.
     * @param balance is the remaining number of tokens in 
     the participant's vesting balance.
     */
    event PaymentFromVesting(
        uint256 paymentAmount,
        address participantAddress,
        uint256 balance
    );

    /**
     * @notice Shows that tokens have been withdrawn from the balance 
     of a certain blocked participant.
     * @param participantAddress is the blocked participant address.
     * @param recipient is the address to which the withdrawal was made.
     * @param amount is the amount of tokens that have been withdrawn.
     */
    event WithdrawLockedTokens(
        address participantAddress, 
        address recipient,
        uint256 amount
    );

    struct Participant {
        uint256 totalPayment;
        uint256 balance;
        uint256 vestingEnd;
        uint256 lastCheckpoint;
        uint256 cliffEnd;
        bool status;
    }

    struct InputData {
        address participantAddress;
        uint256 totalPayment;
        uint256 vestingMonth;
        uint256 cliffDays;
    }

    /**
     * @notice Allows to start vesting.
     * @dev Vesting will be started only when called from the token 
     contract directly. Also the total number of tokens for vesting 
     in the input data must match the balance of tokens on 
     the smart contract at the time of the call. 
     * @param _honors is the input data with information about vesting
     participants.
     */
    function initVesting(InputData[] memory _honors) external;

    /**
     * @notice Allows the participant to withdraw a certain amount 
     of tokens from his balance.
     * @dev Withdrawal is possible after the end of the cliff period and 
     on the condition that the participant was not blocked.
     */
    function claim() external;

    /**
     * @notice Allows the administrator to suspend or resume payments to 
     a specific participant of vesting.
     * @param _participantAddress is the address of participant.
     * @return newStatus_ - is the new status of payments of vesting participant.
     */
    function switchVestingStatusFor(address _participantAddress)
        external
        returns (bool newStatus_);

    /**
     * @notice Allows the administrator to withdraw money of 
     the participants of the vesting, which were blocked earlier.
     * @param _participantAddress is the address of the participant from 
     whose balance the tokens will be withdrawn.
     * @param _recipient is the address to which the tokens will be added.
     */
    function withdrawLockedTokens(
        address _participantAddress,
        address _recipient
    ) external;
}