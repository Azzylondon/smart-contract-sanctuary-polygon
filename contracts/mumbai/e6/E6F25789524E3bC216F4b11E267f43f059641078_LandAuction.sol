pragma solidity ^0.8.1;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./interfaces/IVRCityCoin.sol";

contract LandAuction is ERC721Holder, AccessControl, ReentrancyGuard {
    using SafeERC20 for IVRCityCoin;

    /**
     * @notice Shows that the user with a certain address has 
     placed a token with a certain id.
     * @param owner is the address of the user who placed the token.
     * @param lotId is the id of the lot in which the token was placed.
     * @param tokenId is the id of the token that was placed on the auction.
     * @param startPrice is the starting price of the placed token.
     */
    event PutLotUp(
        address owner,
        uint256 lotId,
        uint256 tokenId,
        uint256 startPrice
    );

    /**
     * @notice Shows that a specific user has bid on an lot with 
     a specific id.
     * @param bidder is the address of the user who made the bid.
     * @param lotId is the id of the lot on which the bid was placed.
     * @param tokenId is the id of the token on which the bet was placed.
     * @param newPrice is the new bid on this lot.
     */
    event RaisePrice(
        address bidder,
        uint256 lotId,
        uint256 tokenId,
        uint256 newPrice
    );

    /**
     * @notice Shows that the user who made the last bid on a certain 
     lot collected the token with a certain id after the end of 
     the auction for it.
     * @param newOwner is the address of the user who collected the lot.
     * @param lotId is the id of the lot whose auction was completed and 
     whose token was given to the last bidder on it.
     * @param tokenId is the id of the token that was given to the last 
     bidder at the auction.
     * @param endPrice is the last bid on this lot.
     */
    event CollectLot(
        address newOwner,
        uint256 lotId,
        uint256 tokenId,
        uint256 endPrice
    );

    /**
     * @notice Shows that the owner with a certain address has called off 
     his lot with a certain id.
     * @param owner is the address of the user who called off his lot.
     * @param lotId is the id of the lot that has been called off.
     * @param tokenId is the id of the token in the lot that was called off.
     */
    event CallOffBid(address owner, uint256 lotId, uint256 tokenId);

    /**
     * @notice Shows that 123.
     * @param oldFee is the 123.
     * @param newFee is the 123.
     */
    event SetFeePercentage(uint256 oldFee, uint256 newFee);

    /**
     * @notice Shows that the minimum rate step has been changed.
     * @param newStep is the new minimum rate step 
     as a percentage of the starting price.
     */
    event SetMinimumStep(uint256 newStep);

    /**
     * @notice Shows that the auction duration has been changed.
     * @param newDuration is the new auction duration.
     */
    event SetAuctionDuration(uint256 newDuration);

    struct Lot {
        uint256 tokenId;
        uint256 endTime;
        uint256 startPrice; //In USDC
        uint256 lastPrice;
        address owner;
        address currentPurchaser;
        bool status;
    }

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    uint64 private constant precision = 1e6;

    uint256 public minimumStep;
    uint256 public auctionDuration;
    uint256 public feePercentage;
    uint256 private counter;
    address private wallet;

    mapping(uint256 => Lot) public lots;

    IERC721 Land;
    IVRCityCoin tokenForExchange;

    modifier correctLotId(uint256 _lotId) {
        require(_lotId <= counter, "Lot id is incorrect");
        require(
            lots[_lotId].status,
            "The auction for the target token is over"
        );
        _;
    }

    constructor(
        address _landAddress,
        address _tokenAddress,
        address _walletAddress,
        uint256 _minimumStep,
        uint256 _feePercentage,
        uint256 _auctionDuration
    ) {
        require(_feePercentage * 2 < precision, "Too much fee percentage");
        require(_minimumStep < precision, "Too much minimum step");

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ADMIN_ROLE, msg.sender);

        Land = IERC721(_landAddress);
        tokenForExchange = IVRCityCoin(_tokenAddress);
        wallet = _walletAddress;
        minimumStep = _minimumStep;
        auctionDuration = _auctionDuration;
        feePercentage = _feePercentage;
    }

    /**
     * @notice Allows the user to put up a token with a certain id 
     with a certain starting price for an auction.
     * @param _tokenId is the id of the token put up for auction.
     * @param _startPrice is the the starting price of the placed token. 
     */
    function putLotUp(uint256 _tokenId, uint256 _startPrice)
        external
        nonReentrant
    {
        require(
            Land.ownerOf(_tokenId) == msg.sender,
            "Caller is not the owner of this token"
        );

        Land.safeTransferFrom(msg.sender, address(this), _tokenId);
        lots[++counter] = Lot(
            _tokenId,
            block.timestamp + auctionDuration,
            tokenForExchange.getSaleAmount(_startPrice),
            _startPrice,
            msg.sender,
            address(0),
            true
        );

        emit PutLotUp(msg.sender, counter, _tokenId, _startPrice);
    }

    /**
     * @notice Allows the user to bid on an lot with a specific id.
     * @dev The new rate must at least exceed the previous rate 
     by a specified percentage of the initial rate in dollars 
     at the exchange rate currently. 
     * @param _lotId is id of the lot on which the bet is made.
     * @param _newPrice is the proposed rate. 
     */
    function raisePrice(uint256 _lotId, uint256 _newPrice)
        external
        nonReentrant
        correctLotId(_lotId)
    {
        Lot storage lot = lots[_lotId];
        require(
            lot.endTime > block.timestamp,
            "The auction for the target token is over"
        );
        uint256 computedStep = (minimumStep *
            tokenForExchange.getPurchaseAmount(lot.startPrice)) / precision;
        require(
            lot.lastPrice + computedStep <= _newPrice,
            "Suggested price is too low"
        );

        tokenForExchange.safeTransferFrom(msg.sender, address(this), _newPrice);
        if (lot.currentPurchaser != address(0)) {
            tokenForExchange.safeTransfer(lot.currentPurchaser, lot.lastPrice);
        }

        lot.lastPrice = _newPrice;
        lot.currentPurchaser = msg.sender;

        emit RaisePrice(msg.sender, _lotId, lot.tokenId, _newPrice);
    }

    /**
     * @notice Allows the user who made the last bid after the end of the 
     auction to pick up the token from a posted lot with a specific id.
     * @dev Fee from the final bet is transferred to the addresses of the 
     token and the specified wallet. 
     * @param _lotId is the id of the lot for which the auction was completed.
     */
    function collectLot(uint256 _lotId)
        external
        nonReentrant
        correctLotId(_lotId)
    {
        Lot storage lot = lots[_lotId];
        require(lot.endTime < block.timestamp, "The auction has not yet ended");
        require(
            lot.currentPurchaser == msg.sender,
            "Caller is not the last user to make a bid"
        );
        (uint256 endAmount, uint256 feeAmount) = _computeCommission(
            lot.lastPrice
        );
        tokenForExchange.transfer(lot.owner, endAmount);
        tokenForExchange.transfer(wallet, feeAmount);
        tokenForExchange.transfer(address(tokenForExchange), feeAmount);

        Land.safeTransferFrom(address(this), msg.sender, lot.tokenId);
        lot.status = false;

        emit CollectLot(msg.sender, _lotId, lot.tokenId, lot.lastPrice);
    }

    /**
     * @notice Allows the user who put the token with a specific id 
     to auction to call it off.
     * @dev To call off a lot, no bids must be placed on it. 
     * @param _lotId is the  id of the lot that is called off.
     */
    function callOffBid(uint256 _lotId)
        external
        nonReentrant
        correctLotId(_lotId)
    {
        Lot storage lot = lots[_lotId];
        require(
            lot.owner == msg.sender,
            "Caller is not the owner of this token"
        );
        require(
            lot.currentPurchaser == address(0),
            "A bid has already been placed on this lot"
        );
        Land.safeTransferFrom(address(this), msg.sender, lot.tokenId);

        emit CallOffBid(msg.sender, _lotId, lot.tokenId);
        delete lots[_lotId];
    }

    /**
     * @notice Allows the administrator to set a new fee percentage.
     * @dev Standart Set function. 
     * @param _newFeePercentage is the new fee percentage 
     as a percentage of the starting price.
     */
    function setFeePercentage(uint256 _newFeePercentage)
        external
        onlyRole(ADMIN_ROLE)
    {
        require(_newFeePercentage * 2 < precision, "Too much fee percentage");

        emit SetFeePercentage(feePercentage, _newFeePercentage);
        feePercentage = _newFeePercentage;
    }

    /**
     * @notice Allows the administrator to set a new minimum rate step.
     * @dev Standart Set function. 
     * @param _newStep is the new minimum rate step 
     as a percentage of the starting price.
     */
    function setMinimumStep(uint256 _newStep)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(_newStep < precision, "Too much minimum step");
        minimumStep = _newStep;
        emit SetMinimumStep(_newStep);
    }

    /**
     * @notice Allows the administrator to set a new auction duration.
     * @dev Standart Set function.
     * @param _newDuration is the new auction duration.
     */
    function setAuctionDuration(uint256 _newDuration)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        auctionDuration = _newDuration;
        emit SetAuctionDuration(_newDuration);
    }

    function _computeCommission(uint256 _tokenAmount)
        internal
        view
        returns (uint256 endAmount_, uint256 feeAmount_)
    {
        feeAmount_ = (_tokenAmount * feePercentage) / precision;
        endAmount_ = _tokenAmount - feeAmount_ * 2;
    }
}

