contract Property is ERC1155, Ownable{
    event RWOMinted(uint256 currentId, address to);
    event PDRMinted(address to, uint256 currentId, uint256 amount );
    event RentalMinted(address to, uint256 currentId, uint256 amount, uint256 startTime, uint256 endTime );
    event RentalRenewed(uint id, address to, uint256 startTime, uint256 endTime );

    struct Rental{
        uint256 id;
        address renter;
        uint256 amount;
        uint128 startTime;
        uint128 endTime;
    }

    struct Pdr{
        uint128 id;
        uint128 amount;
        string uri;
    }

    uint256 public currentId;
    address public admin;

    enum TokenType{RWO, PDR, RENTAL}

    bool execution;
    uint256 constant public UINT256_MAX = 2**256 - 1;

    mapping(uint256 => TokenType) private tokenType;

    mapping(uint256 => address) public rwoOwner;
    //rwo id to uri mapping
    mapping(uint256 => string) public rwoToUri;
    // rwo id to pdr ids
    mapping (uint256 => Pdr[]) public rwoToPdr;
    // pdr id to pdrToRental
    mapping(uint256 => Rental[]) public pdrToRental;
    // rental id to pdr id
    mapping(uint256 => uint256) public rentalToPdrId;
    // pdr id to rwo id
    mapping(uint256 => uint256) public pdrToRwo;
    // rentalTokenIds for a pdr of a user address
    mapping(address => mapping(uint256 => uint256[])) public rentalTokenIds;
    // token id to rental
    mapping(uint256 => Rental) public rental;
    //mapping of owner to rental id
    // mapping(uint => address) public rentalOwner;

    modifier onlyAdminOrOwner {
        require(owner() == msg.sender || admin == msg.sender);
        _;
    }
    
    modifier functionExecution {
        require( isExecutionStart() == true, "Function execution paused");
        _;
    }

    constructor(address _admin){
        admin = _admin;
        execution = true;
    }

    function mintRWO(address to, string calldata uri) external onlyOwner functionExecution{
        currentId++;
        _mint(to, currentId, 1, "");
        tokenType[currentId] = TokenType.RWO;
        rwoOwner[currentId] = to;
        rwoToUri[currentId] = uri;
        emit RWOMinted(currentId, to);
    }
    // 2 -> Addr2
    function mintPDR(uint256 rwoId, uint256 amount, string calldata uri) external onlyOwner functionExecution{
        if(tokenType[rwoId] != TokenType.RWO) revert("Incorrect RWO id");
        currentId++;
        tokenType[currentId] = TokenType.PDR;
        rwoToPdr[rwoId].push(Pdr(uint128(currentId) ,uint128(amount), string(uri)));
        address _rwoOwner = rwoOwner[rwoId];
        pdrToRwo[currentId] = rwoId;
        _mint(_rwoOwner, currentId, amount, "");
        emit PDRMinted(_rwoOwner, currentId, amount );
        mintRentalToken(currentId, _rwoOwner, amount, 0, 0);
    }

    function mintRentalToken(uint256 _pdrId, address to, uint256 amount, uint128 startTime, uint128 endTime ) internal functionExecution{
        currentId++;
        tokenType[currentId] = TokenType.RENTAL;
        _mint(to, currentId, amount, "");
        rental[currentId] = Rental(currentId, to, amount, startTime, endTime);
        pdrToRental[_pdrId].push(rental[currentId]);
        rentalToPdrId[currentId] = _pdrId;
        
        emit RentalMinted(to, currentId, amount, startTime, endTime );
    }

    // function renewPdrRental(uint256 _pdrId, address to, uint256 numberOfRentals, uint128 startTime, uint128 endTime) public{
    //     mintRentalToken(_pdrId, to, numberOfRentals, startTime, endTime);
    //     emit RentalRenewed(to, numberOfRentals, startTime, endTime);
    // }

    //rwo -> pdr : rental id
    // marketplace : sellOrder -> buyRental
    // addr3 : safeTransferFrom: rental id

// 3-2-1: 1,2: 3: addr(0), 010: rent out
// Rental 3 (100): (20)
// pdr(100) -> mintRental
// TODO pass rental details in data
    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) public virtual override functionExecution{
        if(tokenType[id] != TokenType.RENTAL && msg.sender != admin) revert("Only admin can transfer RWO");
        if(tokenType[id] == TokenType.PDR) revert("Cannot transfer PDR");
        require(
            (msg.sender == admin && tokenType[id] == TokenType.RWO) ||  from == _msgSender() || isApprovedForAll(from, _msgSender()),
            "ERC1155: caller is not owner nor approved"
        );
        if(tokenType[id] == TokenType.RWO){
            _balances[id][to] += amount;
            for(uint256 i=0; i< rwoToPdr[id].length; i++){
                _safeTransferFrom(from, to, rwoToPdr[id][i].id, rwoToPdr[id][i].amount, data);
                _balances[rwoToPdr[id][i].id][to] += rwoToPdr[id][i].amount;
            }
            rwoOwner[id] = to;
        } else // otherwise token has to be RENTAL as PDR cannot be transferred directly
        {    
            mintRentalToken(rentalToPdrId[id], to, amount, 0, 0 ); 

        }
        _safeTransferFrom(from, to, id, amount, data);

        // from == ownerOfRWO[1] && owner[3] == '010'
    }

    function safeTransferRental(
        address from, 
        address to,
        uint256 id,
        uint256 amount,
        uint128 start,
        uint128 end
    ) external functionExecution{
        require(tokenType[id] == TokenType.RENTAL);
        mintRentalToken(rentalToPdrId[id], to, amount, start, end);
    }

    function renewRental(uint id, address to, uint128 _start, uint128 _end) external functionExecution{
        rental[id].startTime = _start;
        rental[id].endTime = _end;
        
        emit RentalRenewed(id, to, _start, _end);
    }

    // Transfer any NFT to anyone - this will implement onlyOwnerOrAdmin
    function transferAnyNFT(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) public onlyAdminOrOwner functionExecution{
        if(tokenType[id] == TokenType.PDR) revert("Cannot transfer PDR");       
        if(tokenType[id] == TokenType.RWO){
            _balances[id][to] += amount;
            for(uint256 i=0; i< rwoToPdr[id].length; i++){
                _safeTransferFrom(from, to, rwoToPdr[id][i].id, rwoToPdr[id][i].amount, data);
                _balances[rwoToPdr[id][i].id][to] += rwoToPdr[id][i].amount;
            }
            rwoOwner[id] = to;
        } else // otherwise token has to be RENTAL as PDR cannot be transferred directly
        {    
            mintRentalToken(rentalToPdrId[id], to, amount, 0, 0 ); 
        }
        _safeTransferFrom(from, to, id, amount, data);
    }

    // Burn RWO NFT by NFT owner (onlyOwnerOrAdmin)
    // To be discussed: Only burns RWO and PDR nft's. Not Rentals?
    // Should an amount parameter be entered. Since this is rwo, can amount = 1 be assumed?
    function burn(uint id) public {
        // RWO token id
        if(tokenType[id] == TokenType.RWO && (msg.sender == admin || msg.sender == owner() || msg.sender == rwoOwner[id])) revert("Only admin/owner/RWOOwner");
        
        // RENTAL token id
        uint newId = rentalToPdrId[id];
        newId = pdrToRwo[newId];
        if(tokenType[id] == TokenType.RENTAL && (msg.sender == admin || msg.sender == owner() ||  msg.sender == rwoOwner[newId])) revert("Only admin/owner/ownerOfRWO");

        if(tokenType[id] == TokenType.RWO){
            // By NFT owner or onlyOwnerOrAdmin
            address ownerRwo = rwoOwner[id];
            
            _balances[id][ownerRwo] -= 1;
            _burn(ownerRwo, id, balanceOf(ownerRwo, id));
            for(uint256 i=0; i< rwoToPdr[id].length; i++){
                burnPDR(rwoToPdr[id][i].id, ownerRwo);
            }
            delete rwoOwner[id];
            delete rwoToUri[id];
            delete rwoToPdr[id] ;
        } else if(tokenType[id] == TokenType.PDR){
            burnPDR(id, rwoOwner[id]);
        } else{
            burnRental(id, rental[id].renter);
        }
    }

    function burnPDR(uint id, address ownerRwo) internal{
        uint rwoId = pdrToRwo[id];
        
        //burn pdr id
        _burn(ownerRwo, id, rwoToPdr[rwoId][id].amount);
        _balances[id][ownerRwo] -= rwoToPdr[rwoId][id].amount;

        for(uint i=0; i< pdrToRental[id].length; i++){
            // burn rental ids also
            burnRental(pdrToRental[id][i].id, rental[pdrToRental[id][i].id].renter);
        }

        uint len = rwoToPdr[rwoId].length;

        // Only used when rental id is given in burnNFT function param
        if(id != rwoToPdr[rwoId][len-1].id){
            uint index = searchRentalIndex(id, rwoId);
            delete rwoToPdr[rwoId][index];
        }

        delete pdrToRental[id];
        delete pdrToRwo[id];        
    }

    function burnRental(uint id, address ownerRental) internal{
        // update rental id mappings
        _burn(ownerRental, id, rental[id].amount);
        _balances[id][rental[id].renter] -= rental[id].amount;

        uint len = pdrToRental[rentalToPdrId[id]].length;

        // Only used when rental id is given in burnNFT function param
        if(id != pdrToRental[rentalToPdrId[id]][len-1].id){
            uint index = searchRentalIndex(id, rentalToPdrId[id]);
            delete pdrToRental[rentalToPdrId[id]][index];
        }

        delete rental[id];
        delete rentalToPdrId[id];
    }

    function searchPdrIndex(uint256 id, uint rwoId) private view returns(uint256){
        uint256 index;
        for (index= 0; index< rwoToPdr[rwoId].length; index++){
            if (rwoToPdr[rwoId][index].id == id){
                return index;
            }   
        }
        return UINT256_MAX;
    }

    function searchRentalIndex(uint256 id, uint pdrId) private view returns(uint256){
        uint256 index;
        for (index= 0; index< pdrToRental[pdrId].length; index++){
            if (pdrToRental[pdrId][index].id == id){
                return index;
            }   
        }
        return UINT256_MAX;
    }

    

    // Get NFT Balance Details - Return renter balance if its someone rents it right now Else return owner balance
    function getNFTBalance(uint id) public view returns(uint){
        if(tokenType[id] == TokenType.RWO || tokenType[id] == TokenType.PDR){
             return  _balances[id][msg.sender];
        } 
        uint newId = rentalToPdrId[id];
        newId = pdrToRwo[newId];

        if(rwoOwner[newId] != msg.sender){
            // rental id rented out
            return _balances[id][msg.sender];
        } else{
            // rental id is with owner of rental, return owner balance for rwo id
            return  _balances[newId][msg.sender];
        }
    }

    function getTokenType(uint tokenId) public view functionExecution returns(TokenType) {
        if(tokenId > currentId || tokenId == 0) revert("Non-existent token");
        return tokenType[tokenId];
    }

    // Get Children(PDR) Details from Parent(RWO)
    function getPDRFromRWO(uint rwoId) public view functionExecution returns(Pdr[] memory) {
        return rwoToPdr[rwoId];
    }

    function getRentalFromPDR(uint pdrId) external view functionExecution returns(Rental[] memory) {
        return pdrToRental[pdrId];
    }

    function getRentalDetails(uint rentalId) public view functionExecution returns(Rental memory _rental){
        return rental[rentalId];
    }

    // Change smart contract admin - this is a onlyOwner Function
    function setAdmin(address newAdmin) public onlyOwner functionExecution{
        admin = newAdmin;
    }

    // Check whether function execution is start or paused
    // Returns: True if execution is started and False if execution is Paused
    function isExecutionStart() public view returns(bool){
        return execution;
    }

    // Global flag to start/pause all function execution - onlyOwner
    function setExecution() public onlyOwner{
        execution = !execution;
    }
}

