pragma solidity ^0.8.2;

import "Interface.sol";

import "Math.sol";
import "SafeMath.sol";
import "ERC721.sol";
import "ERC721Burnable.sol";
import "ERC721Enumerable.sol";

contract BaseZone is ZoneInterface, ERC721Enumerable, ERC721Burnable {
  using SafeMath for uint256;

  struct Record {
    uint16 rrt;
    uint32 ttl;
    bytes data;
  }

  bytes32 private _origin;

  mapping (bytes32 => Record) private _records;
  mapping (bytes32 => uint256) private _timelocks;

  constructor(
    bytes32 origin,
    address owner,
    string memory name,
    string memory symbol
  ) ERC721(name, symbol) {
    _origin = origin;
    _mint(owner, uint256(origin));
    emit ZoneCreated(origin, name, symbol);
  }

  function getOrigin() public view override returns (bytes32 namehash) {
    return _origin;
  }

  function exists(
    bytes32 namehash
  ) external view virtual override returns (bool) {
    return _exists(uint256(namehash));
  }

  function register(
    address to,
    bytes32 parent,
    string memory label
  ) public virtual override returns (bytes32 namehash) {
    require(_isApprovedOrOwner(msg.sender, uint256(parent)));
    require(_isValidLabel(bytes(label)), "invalid label");

    namehash = keccak256(abi.encodePacked(parent, keccak256(bytes(label))));
    _safeMint(to, uint256(namehash));

    emit ResourceRegistered(parent, label);
  }

  function setRecord(
    bytes32 resource,
    string calldata label,
    uint16 rrt,
    uint32 ttl,
    bytes calldata data
  ) public virtual override returns (bytes32 key) {
    key = _getKey(resource, label);

    require(_isApprovedOrOwner(msg.sender, uint256(resource)), "not allowed");
    require(_timelocks[key] < block.timestamp , "record locked");

    _records[key] = Record(rrt, ttl, data);

    emit RecordSet(resource, label, rrt, ttl, data);
  }

  function getRecord(
    bytes32 resource,
    string calldata label
  ) public view virtual override returns (uint16 rrt, uint32 ttl, bytes memory data) {
    bytes32 key = _getKey(resource, label);
    Record memory record = _records[key];
    return(record.rrt, record.ttl, record.data);
  }

  function setLock(
    bytes32 resource,
    string calldata label,
    uint32 time
  ) public virtual override returns (uint256 unlocks) {
    require(_isApprovedOrOwner(msg.sender, uint256(resource)), "not allowed");

    bytes32 key = _getKey(resource, label);
    unlocks = Math.max(_timelocks[key], block.timestamp).add(time);
    _timelocks[key] = unlocks;

    emit RecordLocked(resource, label, unlocks);
  }

  function getLock(
    bytes32 resource,
    string calldata label
  ) public view virtual override returns (uint256 unlocks) {
    bytes32 key = _getKey(resource, label);
    unlocks = _timelocks[key];
  }

  function _getKey(
    bytes32 resource,
    string calldata label
  ) internal view virtual returns (bytes32 key) {
    require(_isValidLabel(bytes(label)), "invalid label");
    key = keccak256(abi.encodePacked(resource, keccak256(abi.encodePacked("_", label))));
  }

  function _isValidLabel(
    bytes memory label
  ) internal view virtual returns (bool valid) {
    require(label.length > 0, "must include a label");

    valid = true;

    for(uint i=0; i<label.length; i++) {
      uint8 char = uint8(label[i]);
      valid = valid && (
        char == 45 ||
        (char >= 48 && char <= 57) ||
        (char >= 97 && char <= 122)
      );
    }
  }

  function _beforeTokenTransfer(
    address from,
    address to,
    uint256 tokenId
  ) internal virtual override(ERC721, ERC721Enumerable) {
    super._beforeTokenTransfer(from, to, tokenId);
  }

  function supportsInterface(
    bytes4 interfaceId
  ) public view virtual override(ERC721, ERC721Enumerable) returns (bool) {
    return super.supportsInterface(interfaceId);
  }
}

