pragma solidity ^0.8.2;

import "Base.sol";
import "URI.sol";

import "IERC20.sol";

contract RedeemableZone is BaseZone, ZoneTokenURI {
  using SafeMath for uint256;

  event ProjectRegistered(
    bytes32 indexed project,
    string indexed name,
    address token
  );

  event ProjectEpochSet(
    bytes32 indexed project,
    uint256 epoch
  );

  event AllocationIssued(
    bytes32 indexed allocation,
    bytes32 indexed project,
    string indexed name,

    uint256 amount,
    uint32 vesting,
    uint32 cliff,
    uint32 base
  );

  event AllocationRedeemed(
    bytes32 indexed allocation,
    uint256 amount
  );

  struct Project {
    string name;
    IERC20 token;
    uint256 epoch;
  }

  struct Allocation {
    bytes32 project;
    string name;

    uint256 amount;
    uint32 vesting;
    uint32 cliff;
    uint32 base;
  }

  mapping (bytes32 => uint256) public redeemed;

  mapping (bytes32 => Project) public projects;
  bytes32[] public project_index;

  mapping (bytes32 => Allocation) public allocations;
  mapping (bytes32 => bytes32[]) public allocation_index;

  constructor(
    bytes32 origin,
    address owner,
    string memory name,
    string memory symbol,
    string memory baseTokenURI
  ) BaseZone(origin, owner, name, symbol) ZoneTokenURI(baseTokenURI){}

  function setBaseURI(string memory baseTokenURI) public {
    require(_isApprovedOrOwner(msg.sender, uint256(getOrigin())), "not allowed");
    _setBaseURI(baseTokenURI);
  }

  function tokenURI(
    uint256 tokenId
  ) public view virtual override(ERC721, ZoneTokenURI) returns (string memory) {
    return super.tokenURI(tokenId);
  }

  function _baseURI(
  ) internal view virtual override(ERC721, ZoneTokenURI) returns (string memory) {
    return super._baseURI();
  }

  function register(address, bytes32, string memory) public pure override returns (bytes32) {
    revert("register not allowed");
  }

  function registerProject(
    address to,
    address token,
    string memory name
  ) public returns (bytes32 project) {
    project = super.register(to, getOrigin(), name);

    project_index.push(project);
    projects[project] = Project(name, IERC20(token), 0);

    emit ProjectRegistered(project, name, token);
  }

  function project_count() public view returns (uint256) {
    return project_index.length;
  }

  function setProjectEpoch(bytes32 project, uint256 epoch) public {
    require(_isApprovedOrOwner(msg.sender, uint256(project)), "not allowed");
    Project storage _project = projects[project];

    require(_project.epoch == 0, "epoch already set");

    _project.epoch = epoch;
    emit ProjectEpochSet(project, epoch);
  }

  function launchProject(bytes32 project) external returns (uint256 epoch) {
    epoch = block.timestamp;
    setProjectEpoch(project, epoch);
  }

  function issueAllocation(
    address to,
    bytes32 project,
    string memory name,
    uint256 amount,
    uint32 vesting,
    uint32 cliff,
    uint32 base
  ) external returns (bytes32 allocation) {
    require(_isApprovedOrOwner(msg.sender, uint256(project)));

    IERC20 token = projects[project].token;
    token.transferFrom(msg.sender, address(this), amount);

    allocation = super.register(to, project, name);

    allocation_index[project].push(allocation);
    allocations[allocation] = Allocation(project, name, amount, vesting, cliff, base);

    emit AllocationIssued(allocation, project, name, amount, vesting, cliff, base);
  }

  function allocation_count(bytes32 project) public view returns (uint256) {
    return allocation_index[project].length;
  }

  function vested(bytes32 allocation) public view returns (uint256 amount) {
    Allocation memory _allocation = allocations[allocation];

    uint256 _now = block.timestamp;
    uint256 total = _allocation.amount;
    uint256 epoch = projects[_allocation.project].epoch;

    if (epoch > 0 && _now >= epoch) {
      uint256 cliff = epoch.add(_allocation.cliff);
      uint256 end = epoch.add(_allocation.vesting);
      if (_now < end) {
        uint256 base = total.mul(_allocation.base).div(10000);
        if (_now >= cliff) {
          amount = total.sub(base).mul(_now.sub(epoch)).div(_allocation.vesting);
          amount = amount.add(base);
        } else { amount = base; }
      } else { amount = total; }
    } else { amount = 0; }
  }

  function redeem(bytes32 allocation) public returns (uint256 amount) {
    amount = vested(allocation).sub(redeemed[allocation]);
    require(amount > 0, "nothing to redeem");

    IERC20 token = projects[allocations[allocation].project].token;
    token.transfer(ownerOf(uint256(allocation)), amount);

    redeemed[allocation] = redeemed[allocation].add(amount);

    emit AllocationRedeemed(allocation, amount);
  }
}

