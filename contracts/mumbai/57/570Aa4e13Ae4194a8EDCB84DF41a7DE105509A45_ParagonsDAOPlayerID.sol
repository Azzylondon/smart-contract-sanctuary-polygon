        if (_playerClaimed[msg.sender]) revert AlreadyClaimed();
        // Must pass a non-empty name string
        if (_name.length == 0) revert InvalidName();
        // Start with token id 1
        _tokenIds.increment();
        uint256 tokenID = _tokenIds.current();
