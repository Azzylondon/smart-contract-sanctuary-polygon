interface IPXP is IERC20 {
    function mint(address _account, uint256 _amount) external;

    function burn(address _account, uint256 _amount) external;
}

contract ParagonsDAOPlayerXP is ERC20, Ownable {
    /*///////////////////////////////////////////////////////////////
                               ERRORS
    //////////////////////////////////////////////////////////////*/

    /// @notice Error for if not minter
    error NotMinter();
    /// @notice Error for if attempting to transfer token
    error NotTransferable();

    /*///////////////////////////////////////////////////////////////
                               STATE VARIABLES
    //////////////////////////////////////////////////////////////*/

    /// @notice Bool if address is minter
    mapping(address => bool) public minter;

    /*///////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor() ERC20("ParagonsDAO Player XP", "PXP") {}

    /*///////////////////////////////////////////////////////////////
                               OWNER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice         Set `_minter` to have minting right
    /// @param _minter  Address that will have minting rights
    function addMinter(address _minter) external onlyOwner {
        minter[_minter] = true;
    }

    /// @notice         Remove `_minter` from having minting right
    /// @param _minter  Address that will have minting rights removed
    function removeMinter(address _minter) external onlyOwner {
        minter[_minter] = false;
    }

    /*///////////////////////////////////////////////////////////////
                               MINTER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice         Mint `_amount` of token to `_to`
    /// @param _to      Address will receieve minted tokens
    /// @param _amount  Amount of tokens to be minted
    function mint(address _to, uint256 _amount) external {
        if (!minter[msg.sender]) revert NotMinter();
        _mint(_to, _amount);
    }

    /// @notice         Burn `_amount` of token from `_from`
    /// @param _from    Address `_amount` of token will be burned form
    /// @param _amount  Amount of tokens to be burned
    function burn(address _from, uint256 _amount) external {
        if (!minter[msg.sender]) revert NotMinter();
        _burn(_from, _amount);
    }

    /*///////////////////////////////////////////////////////////////
                               INTERNAL FUNCTION
    //////////////////////////////////////////////////////////////*/

    /**
     * @notice          Disallow transfers if not from or to Address Zero
     * @param   from    Address 'amount' is transferred from
     * @param   to      Address 'amount' is transferred to
     * @param   amount  Amount of tokens to be transferred
     */
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        if (from != address(0) && to != address(0)) revert NotTransferable();
        super._beforeTokenTransfer(from, to, amount);
    }
}

