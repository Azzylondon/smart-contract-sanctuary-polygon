contract PlayerManagement is ChainlinkClient, ConfirmedOwner {
    using Chainlink for Chainlink.Request;

    /*///////////////////////////////////////////////////////////////
                               ERRORS
    //////////////////////////////////////////////////////////////*/

    error DoesNotExist();
    error NoPDP();
    error InvalidName();
    error PDTBalanceTooLow();
    error PXPBalanceTooLow();
    error TransferFailed();

    /*///////////////////////////////////////////////////////////////
                               STRUCTS
    //////////////////////////////////////////////////////////////*/

    struct PlayerData {
        bytes32 playerName;
        uint256 playerRank;
        uint256 totalWins;
        uint256 weightedScore;
        uint256 unclaimedPxp;
    }

    /*///////////////////////////////////////////////////////////////
                               STATE VARIABLES
    //////////////////////////////////////////////////////////////*/

    ParagonsDAOPlayerID public immutable pdp;
    address public immutable pxp;
    address public immutable pdt;

    address public treasury;
    PDTOracle public pdtOracle;

    uint256 public minRankForTransfers;
    uint256 public usdCostPdpMintPublic;
    uint256 public usdCostPdpMintWhitelist;
    uint256 public usdCostNameChange;
    uint256 public usdCostRankUp;
    uint256 public pxpBaseCostRankUp;
    uint256 public rankingMultiplier;

    mapping(bytes32 => uint256) private _requestToId;
    mapping(address => bool) public managers;
    mapping(uint256 => PlayerData) public playerData;
    mapping(uint256 => uint256) public playersInRank;

    bytes32 public externalJobId;
    uint256 public oraclePayment;
    address public oracle;
    address public chainlinkToken;

    /*///////////////////////////////////////////////////////////////
                               EVENTS
    //////////////////////////////////////////////////////////////*/

    event PlayerStatsUpdated(bytes32 indexed requestId, uint256 indexed id, PlayerData updatedData);
    event PlayerRankUpdated(address indexed playerAddress, uint256 indexed id, uint256 newRank);
    event PlayerNameUpdated(address indexed playerAddress, uint256 indexed id, bytes32 newName);

    /*///////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    // TODO: update 'oracle' and 'externalJobId' and 'oraclePayment' based on operator used for mainnet
    constructor(
        address _pxp,
        address _pdt,
        ParagonsDAOPlayerID _pdp,
        PDTOracle _pdtOracle
    ) ConfirmedOwner(msg.sender) {
        pxp = _pxp;
        pdt = _pdt;
        pdp = _pdp;
        pdtOracle = _pdtOracle;
        // Add Managers
        managers[msg.sender] = true;
        managers[address(pdp)] = true;
        // Oracle setup
        oracle = 0xedaa6962Cf1368a92e244DdC11aaC49c0A0acC37;
        chainlinkToken = 0x326C977E6efc84E512bB9C30f76E30c160eD06FB;
        externalJobId = "d3439590d6b047a38f1cd984154b1c0e";
        oraclePayment = (0.0 * LINK_DIVISIBILITY);
        setChainlinkOracle(oracle);
        setChainlinkToken(chainlinkToken);

        // Only for Testing
        minRankForTransfers = 1;
        usdCostPdpMintPublic = 5 * 1e18;
        usdCostPdpMintWhitelist = 0 * 1e18;
        usdCostNameChange = 5 * 1e18;
        usdCostRankUp = 10 * 1e18;
        pxpBaseCostRankUp = 1000 * 1e18;
        rankingMultiplier = 25;
        playerData[1] = PlayerData("0xFirekeeper", 1, 100, 5.95 * 1e18, 0);
    }

    /*///////////////////////////////////////////////////////////////
                               USER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function setPlayerName(bytes32 _newName) external {
        if (0 == IERC721(pdp).balanceOf(msg.sender)) revert NoPDP();
        if (_newName.length == 0) revert InvalidName();

        uint256 tokenId = pdp.getPlayerID(msg.sender);
        uint256 pdtCost = usdCostNameChange / pdtOracle.getLatestPdtPrice();

        if (pdtCost > IERC20(pdt).balanceOf(msg.sender)) revert PDTBalanceTooLow();

        playerData[tokenId].playerName = _newName;
        emit PlayerNameUpdated(msg.sender, tokenId, _newName);

        if (!IERC20(pdt).transferFrom(msg.sender, treasury, pdtCost)) revert TransferFailed();
    }

    function upgradePlayerRank() external {
        if (0 == IERC721(pdp).balanceOf(msg.sender)) revert NoPDP();

        uint256 tokenId = pdp.getPlayerID(msg.sender);
        uint256 rank = playerData[tokenId].playerRank;
        uint256 pdtCost = usdCostRankUp / pdtOracle.getLatestPdtPrice();
        uint256 pxpCost = rank**2 + pxpBaseCostRankUp; // pxpBaseCostRankUp recommended = 1000

        if (pdtCost > IERC20(pdt).balanceOf(msg.sender)) revert PDTBalanceTooLow();
        if (pxpCost > playerData[tokenId].unclaimedPxp) revert PXPBalanceTooLow(); // TODO: Add in claimed (minted) balance? (PlayerManagement.getTotalPxp instead)

        playerData[tokenId].playerRank = rank + 1;
        --playersInRank[rank];
        ++playersInRank[rank + 1];
        emit PlayerRankUpdated(msg.sender, tokenId, rank + 1);

        burnUnclaimedPxp(tokenId, pxpCost);
        // TODO: If claimed balance is taken into consideration, IPXP.burn as well
        if (!IERC20(pdt).transferFrom(msg.sender, treasury, pdtCost)) revert TransferFailed();
    }

    function getTotalPxp(uint256 _id) public view returns (uint256 totalXp_) {
        return playerData[_id].unclaimedPxp + IERC20(pxp).balanceOf(IERC721(pdp).ownerOf(_id));
    }

    function getPlayerData(uint256 _id) public view returns (PlayerData memory playerData_) {
        return playerData[_id];
    }

    function getPdpMintCost(bool whitelist) public view returns (uint256 pdtCost_) {
        uint256 currentPdtPrice = pdtOracle.getLatestPdtPrice();
        return
            whitelist
                ? (1e18 * usdCostPdpMintWhitelist) / currentPdtPrice
                : (1e18 * usdCostPdpMintPublic) / currentPdtPrice;
    }

    /*///////////////////////////////////////////////////////////////
                               MANAGER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function onPlayerIdMinted(uint256 _id, bytes32 _name) public onlyManagers {
        playerData[_id] = PlayerData(_name, 1, 0, 0, 0);
    }

    function burnUnclaimedPxp(uint256 _id, uint256 _amount) public onlyManagers {
        if (playerData[_id].unclaimedPxp < _amount) revert PXPBalanceTooLow();
        playerData[_id].unclaimedPxp -= _amount;
    }

    function requestPlayerStats(uint256 _id) public onlyManagers {
        if (ParagonsDAOPlayerID(pdp).playerExists(_id)) revert DoesNotExist();

        Chainlink.Request memory req = buildChainlinkRequest(
            externalJobId,
            address(this),
            this.fulfillPlayerStats.selector
        );

        req.add("get", "https://matrixapi.0xteacups.workers.dev/0x12267aefd8bb461817df348ce16c933e76c1aa0d"); // TODO: use 'id' to add to base api in prod
        req.add("path1", "playerData,total_wins");
        req.add("path2", "playerData,weighted_score");
        req.addInt("times", 10**18);

        bytes32 requestId = sendOperatorRequest(req, oraclePayment);
        _requestToId[requestId] = _id;
    }

    function fulfillPlayerStats(
        bytes32 _requestId,
        uint256 _totalWins,
        uint256 _weightedScore
    ) public recordChainlinkFulfillment(_requestId) {
        uint256 id = _requestToId[_requestId];
        PlayerData storage currentStats = playerData[id];

        uint256 winsSinceLastUpdate = _totalWins - currentStats.totalWins;
        uint256 rank = playerData[id].playerRank;
        uint256 earnedPxp = winsSinceLastUpdate * _weightedScore * (rankingMultiplier * rank + 75); // rankingMultiplier recommended = 25

        currentStats.totalWins = _totalWins;
        currentStats.weightedScore = _weightedScore;
        currentStats.unclaimedPxp += earnedPxp;

        emit PlayerStatsUpdated(_requestId, id, currentStats);
    }

    /*///////////////////////////////////////////////////////////////
                               OWNER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function setPdtOracle(PDTOracle _pdtOracle) external onlyOwner {
        pdtOracle = _pdtOracle;
    }

    function setStateVariables(
        uint256 _minRankForTransfers,
        uint256 _usdCostPdpMintPublic,
        uint256 _usdCostPdpMintWhitelist,
        uint256 _usdCostNameChange,
        uint256 _usdCostRankUp,
        uint256 _rankingMultiplier,
        uint256 _pxpBaseCostRankUp
    ) external onlyOwner {
        minRankForTransfers = _minRankForTransfers;
        usdCostPdpMintPublic = _usdCostPdpMintPublic;
        usdCostPdpMintWhitelist = _usdCostPdpMintWhitelist;
        usdCostNameChange = _usdCostNameChange;
        usdCostRankUp = _usdCostRankUp;
        rankingMultiplier = _rankingMultiplier;
        pxpBaseCostRankUp = _pxpBaseCostRankUp;
    }

    function addManager(address _manager) external onlyOwner {
        managers[_manager] = true;
    }

    function removeManager(address _manager) external onlyOwner {
        managers[_manager] = false;
    }

    /*///////////////////////////////////////////////////////////////
                               MODIFIERS
    //////////////////////////////////////////////////////////////*/

    function _validateManager() internal view {
        require(managers[msg.sender], "Only callable by managers!");
    }

    modifier onlyManagers() {
        _validateManager();
        _;
    }
}