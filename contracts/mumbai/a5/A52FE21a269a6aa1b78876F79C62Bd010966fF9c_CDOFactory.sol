        // Update state
        marketCap = marketCap.add(price);
        protocolTreasuryAmount = protocolTreasuryAmount.add(protocolFee);
        ownerTreasuryAmount = ownerTreasuryAmount.add(ptFee);
        currentPrice = tokenPrice;

