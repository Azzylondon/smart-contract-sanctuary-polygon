pragma solidity 0.8.12;

import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "./interfaces/IApeironPlanet.sol";
import "./interfaces/IBlacklist.sol";

import "./planets/contracts/utils/AccessProtected.sol";

contract PlanetChronomerging is AccessProtected {
    using Address for address;

    IApeironPlanet public immutable planetContract;
    IBlacklist public blacklistContract;

    /// @dev Determine if NFT is own by lister
    /// @param _nftId token ID
    /// @param _sender lister address
    modifier isOwner(uint256 _nftId, address _sender) {
        require(_sender == planetContract.ownerOf(_nftId), "Not Owner");
        _;
    }

    constructor(address _nftAddress, address _blacklistAddress) {
        require(_nftAddress.isContract(), "_nftAddress must be a contract");
        require(
            _blacklistAddress.isContract(),
            "_blacklistAddress must be a contract"
        );

        planetContract = IApeironPlanet(_nftAddress);
        blacklistContract = IBlacklist(_blacklistAddress);
    }

    /// @dev Planet Chronomerging (planet absorb function)
    /// @param _mainPlanetId main planet
    /// @param _absorbedPlanetId planet that is absorbed by main planet
    function planetChronomerging(
        uint256 _mainPlanetId,
        uint256 _absorbedPlanetId
    )
        external
        isOwner(_mainPlanetId, msg.sender)
        isOwner(_absorbedPlanetId, msg.sender)
    {
        // if any planet is blacklisted, reject the request
        if (
            blacklistContract.blacklistedNFT(
                msg.sender,
                address(planetContract),
                _mainPlanetId
            ) ||
            blacklistContract.blacklistedNFT(
                msg.sender,
                address(planetContract),
                _absorbedPlanetId
            )
        ) {
            revert("planet is blacklisted");
        }

        // get planet data
        (IApeironPlanet.PlanetData memory mainPlanetData, ) = planetContract
            .getPlanetData(_mainPlanetId);
        (IApeironPlanet.PlanetData memory absorbedPlanetData, ) = planetContract
            .getPlanetData(_absorbedPlanetId);

        // require Both planet is bornt
        require(
            mainPlanetData.bornTime != 0 && absorbedPlanetData.bornTime != 0,
            "Planet must be bornt"
        );

        // add absorbedPlanet age to mainPlanet
        planetContract.updatePlanetData(
            _mainPlanetId,
            mainPlanetData.gene,
            absorbedPlanetData.baseAge,
            0,
            0,
            false
        );

        // burn the absorbedPlanet
        planetContract.burn(_absorbedPlanetId);
    }
}

