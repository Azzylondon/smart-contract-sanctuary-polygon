pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/ContextUpgradeable.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";

contract GameWalletV2 is Initializable, ContextUpgradeable {
    using StringsUpgradeable for uint256;
    IERC20 quote;

    event Deposit(address indexed staker, uint256 amount, uint256 timestamp);

    event Withdraw(
        address indexed staker,
        uint256 amount,
        uint256 timestamp,
        string externalKey
    );

    address private _signer;

    event SignershipTransferred(
        address indexed previousSigner,
        address indexed newSigner
    );

    /**
     * @dev Throws if called by any account other than the signer.
     */
    modifier onlySigner() {
        require(_signer == _msgSender(), "Game Wallet: caller is not the signer");
        _;
    }

    //--------Main State---------//

    mapping(bytes => bool) usedHash;

    //---------------------------//

    constructor() {}

    /**
     * @dev initialize
     */
    function initialize(IERC20 _quote) external initializer {
        quote = _quote;
        _signer = _msgSender();
    }

    /**
     * @dev Transfers signership of the contract to a new account (`newSigner`).
     * Can only be called by the current signer.
     */
    function transferSignership(address newSigner) external onlySigner {
        require(
            newSigner != address(0),
            "Game Wallet:: new signer is the zero address"
        );
        emit SignershipTransferred(_signer, newSigner);
        _signer = newSigner;
    }

    /**
     * @dev Returns the bep token signer.
     */
    function getSigner() external view returns (address) {
        return _signer;
    }

    function depositBYG(uint256 _amount) external {
        require(
            quote.balanceOf(_msgSender()) >= _amount,
            "Game Wallet: insufficient funds."
        );
        require(
            quote.transferFrom(_msgSender(), address(this), _amount),
            "Game Wallet: failed transfer tokens"
        );
        emit Deposit(_msgSender(), _amount, block.timestamp);
    }

    function withdrawBYG(
        address _account,
        uint256 _amount,
        uint256 _timestamp,
        string memory _externalKey,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        bytes memory _input = abi.encodePacked(
            _amount.toString(),
            toAsciiString(_account),
            _timestamp.toString(),
            _externalKey
        );
        require(verify(_input, v, r, s), "Game Wallet: invalid action.");
        usedHash[_input] = true;
        require(_msgSender()==_account, "Game Wallet: invalid address.");
        require(
            _timestamp / 1000 + 5 * 60 >= block.timestamp,
            "Game Wallet: expired transaction"
        );
        require(
            quote.balanceOf(address(this)) >= _amount,
            "Game Wallet: insufficient funds."
        );
        require(
            quote.transfer(_account, _amount),
            "Game Wallet: failed transfer tokens"
        );
        emit Withdraw(_account, _amount, block.timestamp, _externalKey);
    }

    // verify if the input values is valid
    function verify(
        bytes memory input,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) private view returns (bool) {
        require(!usedHash[input], "Game Wallet: reentrant call.");
        bytes32 prefixedHash = keccak256(
            abi.encodePacked(
                "\x19Ethereum Signed Message:\n32",
                keccak256(input)
            )
        );

        return ecrecover(prefixedHash, v, r, s) == _signer;
    }

    function toAsciiString(address x) internal pure returns (string memory) {

        bytes memory s = new bytes(40);
        for (uint i = 0; i < 20; i++) {
            bytes1 b = bytes1(uint8(uint(uint160(x)) / (2**(8*(19 - i)))));
            bytes1 hi = bytes1(uint8(b) / 16);
            bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
            s[2*i] = char(hi);
            s[2*i+1] = char(lo);            
        }
        return string(abi.encodePacked("0x",s));
    }
    
    function char(bytes1 b) internal pure returns (bytes1 c) {

        if (uint8(b) < 10) return bytes1(uint8(b) + 0x30);
        else return bytes1(uint8(b) + 0x57);
    }
}

