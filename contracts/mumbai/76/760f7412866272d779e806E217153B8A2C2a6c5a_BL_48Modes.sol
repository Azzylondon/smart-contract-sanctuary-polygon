    }

    function _baseURIBonus() internal pure returns (string memory) {
        return "https://gateway.pinata.cloud/ipfs/QmNseuewBANuHWZiFxi5Qr9kQCyQmAKEFN36yNPQm4u9Ct/";
    }


    function tokenURI(uint256 tokenId) public view virtual override(ERC721) returns (string memory) {
      
        require(_exists(tokenId), "ERC721Metadata: URI query for nonexistent token");
        
        string memory baseURI = _baseURI(); 
      	string memory baseURIAnimated = _baseURIAnimated();
        uint256 animatedBaseId = tokenId/10;
      
      	if (tokenId/100000000 > 0) 
          	return bonusURI(uint32(tokenId));
        else if (is_animated[tokenId])
            return string(abi.encodePacked(baseURIAnimated, Strings.toString(animatedBaseId)));
        else
            return string(abi.encodePacked(baseURI, Strings.toString(tokenId)));
    }


    function bonusURI(uint32 bonusTokenId) view internal returns (string memory) {
      
        require(_exists(bonusTokenId), "ERC721Metadata: URI query for nonexistent bonus token");
        string memory baseURIBonus = _baseURIBonus();
        uint256 bonusKey = getBonusKey(bonusTokenId/100);
        return string(abi.encodePacked(baseURIBonus, Strings.toString(bonusKey)));
    }


    function splitTokenBaseId(uint32 _tokenBaseId) internal pure returns (uint32[] memory) {

        uint32[] memory splitBaseId = new uint32[] (4);

        uint32 cols = splitBaseId[0] = uint32(_tokenBaseId/100000);
        uint32 colourVar = splitBaseId[1] = uint32(_tokenBaseId/1000 - cols*100);
        uint32 mode = splitBaseId[2] = uint32(_tokenBaseId/10 - cols*10000 - colourVar*100);
        uint32 twin = splitBaseId[3] = uint32(_tokenBaseId - cols*100000 - colourVar*1000 - mode*10);

        return splitBaseId;
    }


    function isTwin(uint32 _mode) internal view returns (bool) {

        for (uint8 n=0; n < twinsListA.length; n++) {
            if (_mode == twinsListA[n] || _mode == twinsListB[n] ) {
                return true;
            }
        }
        return false;
    }


    function isValidTokenBaseId(uint32 _tokenBaseId) public view returns (bool) {

        uint32[] memory splitTokenId = splitTokenBaseId(_tokenBaseId);

        uint32 cols = splitTokenId[0];
        uint32 colourVar = splitTokenId[1];
        uint32 mode = splitTokenId[2];
        uint32 twin = splitTokenId[3];

        if (colourVar <= 0)  {return false;} 
        if (mode <= 0)  {return false;}
    
        if (cols == 12) {
            if (colourVar > 2 || mode > 48) {return false;} 
        } else if (cols == 2) {
            if (colourVar > 24 || mode > 48) {return false;} 
        } else if (cols == 6) {
            if (colourVar > 18 || mode > 48) {return false;} 
        } 

        if (isTwin(mode)) {
            if(twin != 1) {return false;}
        } else if(twin != 0) {return false;}

        return true;
    } 


    function calculatePrice(uint32 _tokenBaseId) public pure returns (uint256) {

        uint32[] memory splitTokenId = splitTokenBaseId(_tokenBaseId);

        uint32 cols = splitTokenId[0];
        uint32 twin = splitTokenId[3];

        uint256 mintCost = cols + twin*(cols/2);
        uint256 mintCostFinal = mintCost*1;

        return mintCostFinal;
    }
    

    function calculateTotalVersions(uint32 _tokenBaseId) internal pure returns (uint32){
        
        uint32 totalVersions;
      	uint32 cols = _tokenBaseId/100000;
        if (cols == 12) {totalVersions = 1;} 
        else if (cols == 2) {totalVersions = 6;} 
        else if (cols == 6) {totalVersions = 3;}  

        return totalVersions;
    }


    function firstAvailableVersion(uint32 _tokenBaseId) public view returns (uint32) {
      
      	// check validity of tokenBaseId
        require(isValidTokenBaseId(_tokenBaseId), 'Wrong token Id');

        uint32 version = 0;
        uint32 totalVersions = calculateTotalVersions(_tokenBaseId);

        // find first available version
        for (uint8 j = 1; j <= totalVersions; j++) {
            if (!_exists(_tokenBaseId*10 + j)) {
                version = j;
                break;
            }
        }
            
        require(version != 0, 'Sorry, all versions of the chosen colour and mode combination have been already minted');
        
        return version;
    }
  
	// allows switching from static to animated and vice versa
  	function switchState(uint32 _tokenId) public payable {

      uint32 tokenBaseId = _tokenId/10;
      uint32[] memory splitBaseId = splitTokenBaseId(tokenBaseId);
      uint32 lastMintableToken = tokenBaseId*10 + calculateTotalVersions(tokenBaseId); 

      require( _exists(lastMintableToken), 'Sorry, switching to/from animated state is only allowed if all versions have been minted.');
      require(msg.sender == ownerOf(_tokenId), 'Not owner of this token');
      
      is_animated[_tokenId] = !is_animated[_tokenId];
      
      // check if unlock of Bonus is possible and if yes unlock (only if token is twin and switching towards animated)
      if (splitBaseId[3] == 1 && is_animated[_tokenId]) {
        unlockBonusNFT(tokenBaseId);
      }

    }

	// check if all versions are animated
    function isFullyAnimated(uint32 _tokenBaseId) internal view returns (bool) {
    
        for (uint8 k=1; k <= calculateTotalVersions(_tokenBaseId); k++){
            if (!is_animated[_tokenBaseId*10 + k]){return false;}
        }
        return true;
    } 
  

    function unlockBonusNFT(uint32 _tokenBaseId) internal {

        uint32 mode = splitTokenBaseId(_tokenBaseId)[2];
        uint32 twinMode;
        uint32 twinBaseId;
        uint32 twinNumber;

        // find twin mode
        for (uint8 i=0; i<14; i++){
            if (mode == twinsListA[i]) {
                twinMode = twinsListB[i];
                twinNumber = i;
                break;
            } else if (mode == twinsListB[i]) {
                twinMode = twinsListA[i];
                twinNumber = i;
                break;
            }
        }

        // set twin base id
        twinBaseId = 10*(100*(_tokenBaseId/1000) + twinMode)+1;      
      	uint256 bonusKey = 100*(_tokenBaseId/1000)+twinNumber;
        // unlock bonus token
        if (isFullyAnimated(_tokenBaseId) && isFullyAnimated(twinBaseId)) {
            is_unlockedBonus[bonusKey] = true;         
        }      

    }


    function getBonusKey(uint32 _tokenId) public view returns (uint32) {
        
        uint32 tokenBaseId = _tokenId/10;
        uint32 mode = splitTokenBaseId(tokenBaseId)[2];
        uint32 twinNumber = 14;
      
        // find twin number
        for (uint8 i=0; i<14; i++){
            if (mode == twinsListA[i] || mode == twinsListB[i]) {
                twinNumber = i;
                break;
            }
        }

        require(twinNumber < 14, 'Token is not a twin');

        uint32 bonusKey = 100*(tokenBaseId/1000)+twinNumber;

        return bonusKey;

    }


    function safeMintBonus(uint32 _tokenId) public payable {
        
        uint32 bonusKey = getBonusKey(_tokenId);
        uint32 bonusId = _tokenId*100;

        require(msg.sender == ownerOf(_tokenId), 'Not owner of this token');
        require(is_unlockedBonus[bonusKey], 'Bonus token is not yet available');

        _safeMint(msg.sender, bonusId);
    }


    function safeMint(address to, uint32[] memory tokenBaseIds) public payable {

        uint256 mintCost = 0;

        uint32 mintCount = uint32(tokenBaseIds.length); 
        require(mintCount <= 24, 'Limit of NFTs per transaction exceeded. Max = 24.');
        uint32[] memory tokenIds  = new uint32[] (mintCount);
        uint32[] memory currentVersions = new uint32[] (mintCount);
        
        for (uint8 j=0; j < mintCount; j++) {

            // add token price to total mint cost
            mintCost = mintCost + calculatePrice(tokenBaseIds[j]);
            // complete tokenId
            currentVersions[j] = firstAvailableVersion(tokenBaseIds[j]);
            tokenIds[j] = tokenBaseIds[j]*10 + currentVersions[j];

        }

        // require total mint cost is paid
        require(msg.value >= mintCost, "Not enough Ether sent");

        // mint
        for (uint8 i=0; i < mintCount; i++) {
          
            _safeMint(to, tokenIds[i]);
            is_animated[tokenIds[i]] = false;

            //if all versions of the mode and colour combination have been minted, switch to animated state     
            if (currentVersions[i] == calculateTotalVersions(tokenBaseIds[i])) {
              for (uint8 k=1; k <= currentVersions[i]; k++) {
                is_animated[tokenBaseIds[i]*10 + k] = true;
              }  
              // if mode is twin, check if all versions of other twin mode are animated. If yes, query bonus NFT
              if (splitTokenBaseId(tokenBaseIds[i])[3] == 1) {
                unlockBonusNFT(tokenBaseIds[i]);
              }
            }
        }
    }


