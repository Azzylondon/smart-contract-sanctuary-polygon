    uint32 [] public twinsListA = [ 2, 5, 8, 12, 15, 19, 25, 29, 32, 35, 39, 43, 45, 47 ];
    uint32 [] public twinsListB = [ 3, 6, 9, 13, 16, 20, 26, 30, 33, 36, 40, 44, 46, 48 ];
    mapping(uint256 => bool) public is_animated;
    mapping(uint256 => bool) public is_unlockedBonus;


