import "../interfaces/IStaking.sol";
import "../interfaces/IERC721.sol";
import "../interfaces/IERC721Receiver.sol";

contract Staking is IERC721Receiver, IStaking {
    
    IERC721 NFT; 

    mapping (address => uint256) staked;

    constructor (address nftAddress_) public {
        NFT = IERC721(nftAddress_);
    }

    function nftAddress() public view returns (address) {
        return address(NFT);
    }

    function stake(uint256 tokenId) external {
        _stake(msg.sender, tokenId);
    }

    function unstake(uint256 tokenId) external {
        _unstake(msg.sender, tokenId);
    }

    function _stake(address sender, uint256 tokenId) internal {
        require(staked[sender] == 0, "token already staked");
        staked[sender] = tokenId;
        NFT.safeTransferFrom(sender, address(this), tokenId);
    }
    

    function _unstake(address sender, uint256 tokenId) internal {
        require(staked[sender] == tokenId, "sender is not token owner or not staked");
        staked[sender] = 0;
        NFT.safeTransferFrom(address(this), sender, tokenId);
    }

    function isStake(address user) public view returns (bool) {
        return staked[user] > 0;
    }   


    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public returns (bytes4) {
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));        
    }
}