pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777Recipient.sol";
import "@openzeppelin/contracts/utils/introspection/IERC1820Registry.sol";
import "solidity-bytes-utils/contracts/BytesLib.sol";
import "@openzeppelin/contracts/utils/Multicall.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract UltimateLeagueMarketplace is Ownable, IERC777Recipient, Multicall {
    using SafeMath for uint256;

    event SaleCreated(uint64 tokenId, uint256 tokenWeiPrice, address seller);
    event SaleEdited(uint64 tokenId, uint256 tokenWeiPrice, address seller);
    event SaleAccepted(
        uint64 tokenId,
        uint256 tokenWeiPrice,
        address seller,
        address buyer
    );
    event SaleDestroyed(uint64 tokenId, address seller);

    // ERC721 nft contract
    IERC721 _nftContract;

    // ERC777 token contract
    IERC777 _tokenContract;

    // (tokenID => prices) mapping of sales
    mapping(uint256 => uint256) private _sales;

    IERC1820Registry internal constant _ERC1820_REGISTRY =
        IERC1820Registry(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24);
    bytes32 private constant _TOKENS_RECIPIENT_INTERFACE_HASH =
        keccak256("ERC777TokensRecipient");

    uint256 private _marketplacePercentFees;
    address private _marketplaceFeesReceiver;

    constructor(address marketplaceFeesReceiver) {
        _ERC1820_REGISTRY.setInterfaceImplementer(
            address(this),
            _TOKENS_RECIPIENT_INTERFACE_HASH,
            address(this)
        );
        setMarketplaceFeesReceiver(marketplaceFeesReceiver);
    }

    function createSaleFrom(
        address from,
        uint64 tokenId,
        uint256 tokenWeiPrice
    ) public {
        require(
            tokenWeiPrice > 0,
            "UltimateLeagueMarketplace: Price should be strictly positive"
        );

        address nftOwner = _nftContract.ownerOf(tokenId);
        require(
            nftOwner == from,
            "UltimateLeagueMarketplace: Create sale of token that is not own"
        );
        require(
            nftOwner == msg.sender ||
                _nftContract.isApprovedForAll(nftOwner, msg.sender),
            "UltimateLeagueMarketplace: Only the token owner or its operator are allowed to create a sale."
        );
        require(
            _nftContract.getApproved(tokenId) == address(this),
            "UltimateLeagueMarketplace: Contract should be approved by the token owner."
        );
        require(
            _sales[tokenId] == 0,
            "UltimateLeagueMarketplace: Sale already exists. Destroy the previous sale first."
        );

        _sales[tokenId] = tokenWeiPrice;

        emit SaleCreated(tokenId, tokenWeiPrice, nftOwner);
    }

    function editSaleFrom(
        address from,
        uint64 tokenId,
        uint256 tokenWeiPrice
    ) public {
        require(
            _sales[tokenId] > 0,
            "UltimateLeagueMarketplace: Sale does not exists"
        );
        address nftOwner = _nftContract.ownerOf(tokenId);
        require(
            nftOwner == from,
            "UltimateLeagueMarketplace: Edit sale of token that is not own"
        );
        require(
            nftOwner == msg.sender ||
                _nftContract.isApprovedForAll(nftOwner, msg.sender),
            "UltimateLeagueMarketplace: Only the token owner or its operator are allowed to edit a sale."
        );
        require(
            tokenWeiPrice > 0,
            "UltimateLeagueMarketplace: Price should be strictly positive"
        );

        _sales[tokenId] = tokenWeiPrice;

        emit SaleEdited(tokenId, tokenWeiPrice, nftOwner);
    }

    function destroySaleFrom(address from, uint64 tokenId) public {
        address nftOwner = _nftContract.ownerOf(tokenId);
        require(
            nftOwner == from,
            "UltimateLeagueMarketplace: Destroy sale of token that is not own"
        );
        require(
            nftOwner == msg.sender ||
                _nftContract.isApprovedForAll(nftOwner, msg.sender),
            "UltimateLeagueMarketplace: Only the token owner or its operator are allowed to destroy a sale."
        );

        delete _sales[tokenId];

        emit SaleDestroyed(tokenId, nftOwner);
    }

    function tokensReceived(
        address,
        address from,
        address to,
        uint256 amount,
        bytes calldata userData,
        bytes calldata
    ) external override {
        // If the marketplace is not the target of this payment, let's just ignore it.
        if (to != address(this)) {
            return;
        }
        require(
            msg.sender == address(_tokenContract),
            "Simple777Recipient: Invalid token"
        );
        uint64 tokenId = BytesLib.toUint64(userData, 0);
        address nftReceiver = userData.length > 8
            ? BytesLib.toAddress(userData, 8)
            : from;

        require(
            _sales[tokenId] > 0,
            "UltimateLeagueMarketplace: Sale does not exists"
        );
        require(
            amount >= _sales[tokenId],
            "UltimateLeagueMarketplace: You must match the sale price to accept the sale."
        );

        if (_nftContract.getApproved(tokenId) != address(this)) {
            revert(
                "UltimateLeagueMarketplace: Contract should be approved by the token owner. Sale is corrupted."
            );
        }

        uint256 sellerTokenWeiShare;
        uint256 marketplaceFeesTokenWeiShare;
        (sellerTokenWeiShare, marketplaceFeesTokenWeiShare) = computeSaleShares(
            amount
        );
        address seller = _nftContract.ownerOf(tokenId);

        delete _sales[tokenId];
        _nftContract.safeTransferFrom(seller, nftReceiver, tokenId);
        _tokenContract.send(seller, sellerTokenWeiShare, "");
        _tokenContract.send(
            getMarketplaceFeesReceiver(),
            marketplaceFeesTokenWeiShare,
            ""
        );

        emit SaleAccepted(tokenId, amount, seller, from);
    }

    function setMarketplacePercentFees(uint256 marketplacePercentFees)
        public
        onlyOwner
    {
        require(
            marketplacePercentFees >= 0,
            "UltimateLeagueMarketplace: marketplacePercentFees should be positive"
        );
        require(
            marketplacePercentFees <= 100,
            "UltimateLeagueMarketplace: marketplacePercentFees should be below 100"
        );
        _marketplacePercentFees = marketplacePercentFees;
    }

    function getMarketplacePercentFees() public view returns (uint256) {
        return _marketplacePercentFees;
    }

    function computeSaleShares(uint256 weiPrice)
        public
        view
        returns (uint256, uint256)
    {
        uint256 saleFees = weiPrice.mul(getMarketplacePercentFees()).div(100);

        return (weiPrice.sub(saleFees), saleFees);
    }

    function setMarketplaceFeesReceiver(address marketplaceFeesReceiver)
        public
        onlyOwner
    {
        _marketplaceFeesReceiver = marketplaceFeesReceiver;
    }

    function getMarketplaceFeesReceiver() public view returns (address) {
        return _marketplaceFeesReceiver;
    }

    function setNFTAddress(address nftAddress) public onlyOwner {
        _nftContract = IERC721(nftAddress);
    }

    function getNFTAddress() public view returns (address nftAddress) {
        return address(_nftContract);
    }

    function setTokenAddress(address tokenAddress) public onlyOwner {
        _tokenContract = IERC777(tokenAddress);
    }

    function getTokenAddress() public view returns (address tokenAddress) {
        return address(_tokenContract);
    }
}

