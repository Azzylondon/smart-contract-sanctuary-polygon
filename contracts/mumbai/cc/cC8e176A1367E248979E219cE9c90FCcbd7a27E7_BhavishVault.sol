pragma solidity ^0.8.14;

import { AccessControl } from "@openzeppelin/contracts/access/AccessControl.sol";
import { SafeERC20 } from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { IBhavishVault } from "../Interface/IBhavishVault.sol";
import { BhavishVaultToken } from "./BhavishVaultToken.sol";
import { DateTimeLibrary } from "../Libs/DateTimeLibrary.sol";
import { VaultStorage } from "./VaultStorage.sol";

contract BhavishVault is IBhavishVault, BhavishVaultToken, AccessControl {
    using SafeERC20 for IERC20;

    VaultStorage public vaultStorage;
    IERC20 public token;

    uint256 public perDecimal = 4;

    modifier validateDepositor(address _depositorAddress) {
        require(msg.sender == _depositorAddress, "invalid depositor");
        _;
    }

    modifier vaildateWithdrawer(address _depositorAddress) {
        require(msg.sender == _depositorAddress, "invalid depositor");
        _;
    }

    constructor(
        uint8 _decimals,
        string memory _name,
        string memory _symbol,
        VaultStorage _vaultStorage,
        IERC20 _token
    ) BhavishVaultToken(_name, _symbol, _decimals) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        vaultStorage = _vaultStorage;
        token = _token;
    }

    function depositToVault(uint256 _amount, address _userAddress)
        public
        validateDepositor(_userAddress)
        returns (uint256 mintAmount)
    {
        require(_amount > 0, "invalid amount");

        mintAmount = _amount;

        vaultStorage.setUserDeposit(_userAddress, _amount, DateTimeLibrary.getWeek(block.timestamp));

        token.safeTransferFrom(_userAddress, address(this), _amount);
        _mint(_userAddress, _amount);
    }

    function removeDepositFromVault(uint256 _percent, address _userAddress)
        public
        vaildateWithdrawer(_userAddress)
        returns (uint256 withdrawableAmount)
    {
        require(_percent / perDecimal > 100, "invalid amount");
        withdrawableAmount = _percent;

        vaultStorage.setUserWithdrawRequest(_userAddress, _percent, DateTimeLibrary.getWeek(block.timestamp));
        token.safeTransferFrom(_userAddress, address(this), _percent);
        _burn(_userAddress, _percent);
    }
}

