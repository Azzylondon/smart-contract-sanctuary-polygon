            collectionData.delta = newDelta;
            emit DeltaUpdate(newDelta);
        }
    }

     /**
        @notice Changes the address that will receive assets received from
        trades. Only callable by the owner.
        @param _fee The new fee mutiplier
     */
    function changeFeeMultiplier(uint256 _fee)
        external
        onlyOwner
    {
        if (FEE_MULTIPLIER != _fee) {
            FEE_MULTIPLIER = _fee;
            emit FeeMultiplierUpdate(_fee);
        }
    }


