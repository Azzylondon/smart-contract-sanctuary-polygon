abstract contract Minter is Module {
    // the contract where NFTs will be minted
    address public nft;

    constructor(address _nft) {
        nft = _nft;
    }

    /// @notice mint an ERC721 token
    /// @dev Call safeMint on the ERC721 contract from the gnosis safe
    /// @dev Must revert if the mint call failed
    /// @param _to The address to mint the token to
    /// @param _tokenURI The token metaddata URI
    /// @return id The id of the NFT that was minted
    function _mint(address _to, string memory _tokenURI)
        internal
        returns (uint256)
    {
        (bool success, bytes memory returnData) = execAndReturnData(
            nft,
            0,
            abi.encodeWithSignature("safeMint(address,string)", _to, _tokenURI),
            Enum.Operation.Call
        );

        require(success, "NFT Mint failed");

        uint256 id;
        assembly {
            id := mload(add(returnData, 0x20))
        }

        return id;
    }
}

