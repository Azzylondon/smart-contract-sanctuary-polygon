/// @title A Module implementing Minter and Spender that enables anyone to complete an auction
// and transfer the fungible + non-fungible tokens associated with the auction
contract LazyAuctionCompleter is AccessControl, Spender, Minter {
    bytes32 public constant SIGNER_ROLE = keccak256("SIGNER_ROLE");

    // keep track of which auctions have already been completed
    mapping(uint256 => bool) public isAuctionComplete;

    /// @param _owner The owner of the ERC721 contract
    /// @param _vault The address of the vault the assets will be transferred from
    /// @param _nft The address of the ERC721 contract
    /// @param _signer The address that will grant permission to complete auctions
    constructor(
        address _owner,
        address _vault,
        address _nft,
        address _signer
    ) Minter(_nft) Spender(_vault) {
        bytes memory initializeParams = abi.encode(
            _owner,
            _vault,
            _nft,
            _signer
        );
        setUp(initializeParams);
    }

    function complete(
        Shared.Spend calldata _spendData,
        bytes calldata _bidderSignature,
        bytes calldata _auctioneerSignature,
        string calldata _tokenURI
    ) external {
        // decode the lazy auction data from the spend metadata
        (uint256 auctionId) = abi.decode(
            _spendData.metadata,
            (uint256)
        );

        // prevent the same listing from being minted twice
        require(!isAuctionComplete[auctionId], "Auction is complete");

        // _auctioneerSignature should be a signature of the hash of _bidderSignature.
        // This proves that the auctioneer agrees that the Spend signed by the buyer is the winning bid.
        // _auctioneerSignature is valid if it was signed by an account with the SIGNER_ROLE,
        // or if it was signed by the seller. This allows either the seller or the auctioneer to complete
        // the auction at any time before the spend deadline
        {
            address recoveredAuctioneerAddress = ECDSA.recover(
                ECDSA.toEthSignedMessageHash(keccak256(_bidderSignature)),
                _auctioneerSignature
            );

            bool isValidSignature = (hasRole(
                SIGNER_ROLE,
                recoveredAuctioneerAddress
            ) || recoveredAuctioneerAddress == _spendData.to);

            require(isValidSignature, "Invalid auctioneer signature");
        }

        isAuctionComplete[auctionId] = true;

        // this will verify the spend message
        // and send the asset from the staking contract to the seller.
        // this also ensures that the bid was signed by the same account as the spender (the buyer),
        // delegating this check to the contract that makes the spend
        require(_spend(_spendData, _bidderSignature), "Invalid signature");

        // mint a new NFT to the buyer address
        uint256 nftId = _mint(_spendData.from, _tokenURI);

        emit Shared.Complete(
            _spendData.to, //seller
            _spendData.from, //buyer
            auctionId,
            _spendData.asset,
            _spendData.amount,
            nftId
        );
    }

    /// @dev Initialize function, will be triggered when a new proxy is deployed
    /// @param initializeParams Parameters of initialization encoded
    function setUp(bytes memory initializeParams) public override initializer {
        __Ownable_init();
        (address _owner, , , address _signer) = abi.decode(
            initializeParams,
            (address, address, address, address)
        );

        _setupRole(SIGNER_ROLE, _signer);

        // Grant the contract owner the default admin role: it will be able
        // to grant and revoke any roles
        _setupRole(DEFAULT_ADMIN_ROLE, _owner);

        // Avatar: is the Safe. The Address that will ultimately execute the transaction that is passed by the module.
        setAvatar(_owner);
        // Target: is the address that this module will call execTransactionFromModule() on.
        // In most cases this will be the Safe, but in some cases it could be a special kind of module called a modifier,
        // that sits between a module and an avatar and... well... modifies the transactions passed to it in some way.
        setTarget(_owner);
        transferOwnership(_owner);
    }

    // required overrides
    function _msgSender()
        internal
        view
        override(Context, ContextUpgradeable)
        returns (address)
    {
        return Context._msgSender();
    }

