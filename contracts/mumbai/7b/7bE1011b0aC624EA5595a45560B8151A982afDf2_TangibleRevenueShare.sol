import "./interfaces/ERC20Burnable.sol";
import "./interfaces/ERC20Mintable.sol";
import "./interfaces/RevenueShare.sol";
import "./utils/Base64.sol";
import "./PassiveIncomeCalculator.sol";

// solhint-disable not-rely-on-time
contract PassiveIncomeNFT is ERC721Enumerable, AccessControl {
    bytes32 public constant SNAPPER_ROLE = keccak256("SNAPPER");
    struct Lock {
        uint256 startTime;
        uint256 endTime;
        uint256 lockedAmount;
        uint256 multiplier;
        uint256 claimed;
        uint256 maxPayout;
    }

    uint256 private immutable boostStartTime;
    uint256 private immutable boostEndTime;

    mapping(uint256 => Lock) public locks;

    uint8 public maxLockDuration;
    uint256 public totalLocked;
    uint256 public totalClaimed;
    uint256 private _totalBurned;
    uint256 private _currentMaxPayout;

    /* solhint-disable var-name-mixedcase */
    address private piTOKEN;
    IPassiveIncomeCalculator private piCALCULATOR;
    /* solhint-enable var-name-mixedcase */

    uint256 private _piTokenBalance;
    uint256 private _tokenIds;

    string private _tokenBaseURI;

    mapping(uint8 => uint256) private _lockDurations;

    uint256 private _currentSnapshot;
    mapping(uint256 => uint256) private _previousSnapshot;
    mapping(uint256 => mapping(uint256 => uint256)) private _snapshotOfAt;

    RevenueShare public revenueShare;

    constructor(address piToken, address piCalculator)
        ERC721("PI", "Passive Income NFT")
    {
        maxLockDuration = MAX_LOCK_DURATION;
        boostStartTime = _currentSnapshot = block.timestamp;
        boostEndTime = block.timestamp + (1440 days);
        piTOKEN = piToken;
        piCALCULATOR = IPassiveIncomeCalculator(piCalculator);
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function setMaxLockDuration(uint8 months)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        maxLockDuration = months;
    }

    function setRevenueShareContract(address revenueShare_)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        revenueShare = RevenueShare(revenueShare_);
    }

    function avgLockDuration() external view returns (uint256) {
        uint256 total = totalSupply();
        if (total == 0) return 0;
        uint256 sum;
        for (uint8 i = 2; i <= 48; i++) {
            sum += _lockDurations[i] * i;
        }
        return (sum * 10) / total;
    }

    function burn(uint256 tokenId) external returns (uint256 amount) {
        address sender = msg.sender;
        require(sender == ownerOf(tokenId), "caller is not the owner");
        Lock memory lock = locks[tokenId];
        require(block.timestamp >= lock.endTime, "not expired");
        (amount, ) = claimableIncome(tokenId);
        if (amount > 0) {
            totalClaimed += amount;
        }
        totalLocked -= lock.lockedAmount;
        amount += lock.lockedAmount;
        _totalBurned++;
        uint8 lockDuration = uint8((lock.endTime - lock.startTime) / (30 days));
        _lockDurations[lockDuration]--;
        delete locks[tokenId];
        _burn(tokenId);
        SafeERC20.safeTransfer(IERC20(piTOKEN), sender, amount);
    }

    function claim(uint256 tokenId, uint256 amount) external {
        address sender = msg.sender;
        require(sender == ownerOf(tokenId), "caller is not the owner");
        (uint256 free, uint256 max) = claimableIncome(tokenId);
        require(amount <= max, "amount exceeds claimable income");
        Lock storage lock = locks[tokenId];
        if (amount > free) {
            uint256 penalized = amount - free;
            uint256 percentOverFree = (penalized * 1e8) / (max - free);
            uint256 multiplier = lock.multiplier;
            uint256 decreaseMultiplierBy = (multiplier * percentOverFree) / 1e8;
            uint256 newMultiplier = multiplier - decreaseMultiplierBy;
            uint256 newMaxPayout = (newMultiplier * lock.lockedAmount) / 1e18;
            _currentMaxPayout =
                _currentMaxPayout -
                lock.maxPayout +
                newMaxPayout;
            ERC20Burnable(piTOKEN).burn(lock.maxPayout - newMaxPayout);
            lock.multiplier = newMultiplier;
            lock.maxPayout = newMaxPayout;
        }
        lock.claimed += amount;
        _snapshot(tokenId);
        SafeERC20.safeTransfer(IERC20(piTOKEN), sender, amount);
    }

    function claimableIncome(uint256 tokenId)
        public
        view
        returns (uint256, uint256)
    {
        Lock memory lock = locks[tokenId];
        (uint256 free, uint256 max) = piCALCULATOR.claimableIncome(
            lock.startTime,
            lock.endTime,
            block.timestamp,
            lock.lockedAmount,
            lock.multiplier,
            lock.claimed
        );
        max -= lock.claimed;
        if (free < lock.claimed) {
            free = 0;
        } else {
            free -= lock.claimed;
        }
        return (free, max);
    }

    function mint(
        address minter,
        uint256 lockedAmount,
        uint8 lockDurationInMonths
    ) external returns (uint256 tokenId) {
        require(
            lockDurationInMonths >= MIN_LOCK_DURATION &&
                lockDurationInMonths <= maxLockDuration,
            "invalid lock duration"
        );
        tokenId = ++_tokenIds;
        uint256 lockEndTime = block.timestamp +
            uint256(lockDurationInMonths) *
            30 days;
        Lock memory lock;
        lock.lockedAmount = lockedAmount;
        lock.startTime = block.timestamp;
        lock.endTime = lockEndTime;
        lock.multiplier = piCALCULATOR.determineMultiplier(
            boostStartTime,
            boostEndTime,
            block.timestamp,
            lockDurationInMonths
        );
        lock.maxPayout = (lockedAmount * lock.multiplier) / 1e18;
        locks[tokenId] = lock;
        totalLocked += lockedAmount;
        _currentMaxPayout += lock.maxPayout;
        _lockDurations[lockDurationInMonths]++;
        SafeERC20.safeTransferFrom(
            IERC20(piTOKEN),
            msg.sender,
            address(this),
            lockedAmount
        );
        _snapshot(tokenId);
        ERC20Mintable(piTOKEN).mint(lock.maxPayout);
        _mint(minter, tokenId);
    }

    function _snapshot(uint256 tokenId) private {
        _snapshotOfAt[tokenId][_currentSnapshot] =
            locks[tokenId].maxPayout +
            locks[tokenId].lockedAmount;
    }

    function setNextSnapshot(uint256 snapshot) external onlyRole(SNAPPER_ROLE) {
        _snapshotOfAt[0][_currentSnapshot] = _currentMaxPayout + totalLocked;
        _previousSnapshot[snapshot] = _currentSnapshot;
        _currentSnapshot = snapshot;
    }

    function getShare(uint256 tokenId) external view returns (uint256) {
        if (locks[tokenId].startTime >= _currentSnapshot) {
            return 0;
        }
        uint256 snap = _previousSnapshot[_currentSnapshot];
        uint256 totalMax = _snapshotOfAt[0][snap];
        mapping(uint256 => uint256) storage tokenSnapshots = _snapshotOfAt[
            tokenId
        ];
        uint256 tokenMax = tokenSnapshots[snap];
        while (tokenMax == 0) {
            snap = _previousSnapshot[snap];
            tokenMax = tokenSnapshots[snap];
        }
        return (tokenMax * 1e9) / totalMax;
    }

    function updateShare(uint256 tokenId)
        external
        onlyRole(SNAPPER_ROLE)
        returns (uint256)
    {
        if (locks[tokenId].startTime >= _currentSnapshot) {
            return 0;
        }
        uint256 snap = _previousSnapshot[_currentSnapshot];
        uint256 totalMax = _snapshotOfAt[0][snap];
        mapping(uint256 => uint256) storage tokenSnapshots = _snapshotOfAt[
            tokenId
        ];
        uint256 tokenMax = tokenSnapshots[snap];
        while (tokenMax == 0) {
            snap = _previousSnapshot[snap];
            tokenMax = tokenSnapshots[snap];
        }
        _snapshotOfAt[tokenId][snap] = tokenMax;
        return (tokenMax * 1e9) / totalMax;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC721Enumerable, AccessControl)
        returns (bool)
    {
        return
            ERC721Enumerable.supportsInterface(interfaceId) ||
            AccessControl.supportsInterface(interfaceId);
    }

    function setTokenBaseURI(string memory baseURI)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _tokenBaseURI = baseURI;
    }

    function _baseURI() internal view override returns (string memory) {
        return _tokenBaseURI;
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override {
        super._beforeTokenTransfer(from, to, tokenId);
        revenueShare.setClaimerForTokenId(tokenId, to);
    }
}

