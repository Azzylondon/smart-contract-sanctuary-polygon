pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/AccessControl.sol";

import "./interfaces/RevenueShare.sol";
import "./PassiveIncomeNFT.sol";
import "./TangibleERC20.sol";

contract TangibleRevenueShare is RevenueShare, AccessControl {
    bytes32 public constant DISTRIBUTOR_ROLE = keccak256("DISTRIBUTOR");
    bytes32 public constant NFT_MANAGER_ROLE = keccak256("NFT_MANAGER");

    struct IndexedAddress {
        address account;
        uint256 index;
    }

    PassiveIncomeNFT public immutable nft;
    IERC20 public immutable token;

    uint256 private _distributed;
    uint256 private _snapshot;

    mapping(uint256 => mapping(address => bool)) private _claimed;
    mapping(uint256 => IndexedAddress) private _claimers;
    mapping(address => uint256[]) private _tokenIdsByClaimer;

    constructor(address tokenContractAddress, address nftContractAddress) {
        nft = PassiveIncomeNFT(nftContractAddress);
        token = IERC20(tokenContractAddress);
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(DISTRIBUTOR_ROLE, msg.sender);
    }

    function setClaimerForTokenId(uint256 tokenId, address claimer)
        external
        override
        onlyRole(NFT_MANAGER_ROLE)
    {
        IndexedAddress memory ia = _claimers[tokenId];
        if (ia.account != claimer) {
            if (ia.account != address(0)) {
                _removeTokenFromClaimerList(ia.account, ia.index);
            }
            if (claimer != address(0)) {
                ia.account = claimer;
                ia.index = _addTokenToClaimerList(claimer, tokenId);
                _claimers[tokenId] = ia;
            } else {
                delete _claimers[tokenId];
            }
        }
    }

    function claimable(address who) public view returns (uint256 amount) {
        if (_distributed > 0 && !_claimed[_snapshot][who]) {
            uint256[] memory tokens = _tokenIdsByClaimer[who];
            uint256 numTokens = tokens.length;
            for (uint256 i = 0; i < numTokens; i++) {
                uint256 share = nft.getShare(tokens[i]);
                amount += (share * _distributed) / 1e9;
            }
        }
    }

    function updateClaimable(address who) private returns (uint256 amount) {
        if (_distributed > 0 && !_claimed[_snapshot][who]) {
            uint256[] memory tokens = _tokenIdsByClaimer[who];
            uint256 numTokens = tokens.length;
            for (uint256 i = 0; i < numTokens; i++) {
                uint256 share = nft.updateShare(tokens[i]);
                amount += (share * _distributed) / 1e9;
            }
        }
    }

    function claim() external {
        address who = msg.sender;
        require(!_claimed[_snapshot][who], "already claimed");
        uint256 amount = updateClaimable(who);
        _claimed[_snapshot][who] = true;
        SafeERC20.safeTransfer(token, who, amount);
    }

    function distribute() external onlyRole(DISTRIBUTOR_ROLE) {
        _distributed = token.balanceOf(address(this));
        nft.setNextSnapshot(_snapshot = block.timestamp);
    }

    function _addTokenToClaimerList(address claimer, uint256 tokenId)
        private
        returns (uint256 index)
    {
        index = _tokenIdsByClaimer[claimer].length;
        _tokenIdsByClaimer[claimer].push(tokenId);
    }

    function _removeTokenFromClaimerList(address claimer, uint256 index)
        private
    {
        uint256 len = _tokenIdsByClaimer[claimer].length;
        if (len > 0) {
            uint256 lastIndex = len - 1;
            if (index < lastIndex) {
                _tokenIdsByClaimer[claimer][index] = _tokenIdsByClaimer[
                    claimer
                ][lastIndex];
            }
            _tokenIdsByClaimer[claimer].pop();
        }
    }
}

