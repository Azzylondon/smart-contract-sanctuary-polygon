import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./upgradeability/CustomOwnable.sol";
import "./BadgeToken.sol";
import "./interfaces/brainchainEvents.sol";
import "./libraries/UserLibrary.sol";
import "./interfaces/Iadmin.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "contracts/relayer/BasicMetaTransaction.sol";


contract Users is BasicMetaTransaction, ReentrancyGuard, brainchainEvents, AccessControl{
    using UserLibrary for UserLibrary.User;
    
    Iadmin public admin;
    bool internal isInitialized;
    address public root;
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant OWNER_ROLE = keccak256("OWNER_ROLE");

    mapping(address => UserLibrary.User) public users;

    modifier isExist(address user) {
        require(users[user]._exists());
        _;
    }

    modifier shouldNotExist(address user) {
        require(!users[user]._exists());
        _;
    }

    function initialize(address _root,address _admin) public {
        require(!isInitialized,"initialized");
        isInitialized = true;
        _setupRole(OWNER_ROLE,_root);
        _setupRole(OPERATOR_ROLE,_root);
        root = _root;
        admin = Iadmin(_admin);
        users[root].registrationTime = uint64(block.timestamp);
        users[root].isKYCed = true;
    }

    function addOperator(address _operator) external onlyRole(OPERATOR_ROLE){
        _setupRole(OPERATOR_ROLE,_operator);
    }

    function registerUser(address referrer,bool is3rdperson) external isExist(referrer) shouldNotExist(_msgSender()) returns (bool) {
        users[_msgSender()]._addUser(referrer,is3rdperson);
        BadgeToken(admin.ExpNTT())._mint(referrer, uint(admin.newUserReward())* 10 ** 18);
        emit MintPoints("invite",referrer, admin.newUserReward());
        users[_msgSender()].clamedReward += admin.newUserReward();
        emit registerNewUser(_msgSender(),referrer, block.timestamp);
        return true;
    }

    function isUserExist(address user) external view returns(bool){
        return(users[user]._exists());
    }

    function revertKYC(address user) external onlyRole(OPERATOR_ROLE){
        users[user]._revokeKYC();
    }

    function setKYC(address user) external onlyRole(OPERATOR_ROLE){
        users[user]._approveKYC();
    }

    function _msgSender() internal view override(BasicMetaTransaction,Context) returns(address sender){
        super._msgSender();
    }

}

