import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "./interfaces/INFTCert.sol";
import "./interfaces/INFTicket.sol";

contract NRService is Ownable {

    constructor(address _nfticket, address _nftCert) {
        NFTicket = _nfticket;
        NFTCert = _nftCert;
    }

    address public immutable NFTicket;
    address public immutable NFTCert;
    address public ResellerAddress;
    mapping(uint256 => ConsumedRecord[]) public EnergyAllocation;

    // Owner only value setup
    function setupResellerAddress(address _ResellerAddress) public onlyOwner { ResellerAddress = _ResellerAddress; }

    // start from Reseller calling this function
    function issueNFTicket(Payload calldata payload) 
    external {

        address callerAddress = msg.sender;
        require(callerAddress == ResellerAddress, "Only reseller can call this function.");

        // before mint ticket
        ConsumedRecord[] memory consumedRecords = preMint(payload);

        // [NFTicket] mint ticket
        uint256 mintedTokenId = INFTicket(NFTicket).mintNFTicket(payload.recipient, payload.tokenURI);

        // after mint ticket
        postMint(consumedRecords, mintedTokenId);
    }

    function preMint(Payload calldata payload) 
    internal returns (ConsumedRecord[] memory _consumedRecords) {

        // check timestamp is within 1 hr
        require(
            block.timestamp - 3600 <= payload.timestamp,
            "Payload timestamp is not within one hour."
        );

        // [NFTCert] consume energy
        _consumedRecords = INFTCert(NFTCert).consumeEnergy(payload.energyRequests);

    }

    function postMint(ConsumedRecord[] memory consumedRecords, uint256 mintedTokenId) 
    internal {

        // tokenId and consume energy mapping 
        for (uint256 i = 0; i < consumedRecords.length; i++) {
            EnergyAllocation[mintedTokenId].push(consumedRecords[i]);
        }   
    }

}

struct Payload {
    address recipient;
    string tokenURI;
    EnergyRequest[] energyRequests;
    uint256 timestamp;
}

