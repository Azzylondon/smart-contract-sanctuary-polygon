    address public attestor;

    struct Rule {
        bool enabled;
        uint256 ageThreshold; // User should have age greater or equal to this value
        uint256 validityPeriod; // Perios when this rule verification is valid
    }

    //Rule id => Rule definition
    mapping(uint256 => Rule) public rules;

    constructor(Verifier _zkVerifier, address _attestor) {
        require(address(_zkVerifier) != address(0), "zkVerifier required");
        require(_attestor != address(0), "bad attestor");
        zkVerifier = _zkVerifier;
        attestor = _attestor;
    }

    function setAttestor(address _attestor) external onlyOwner {
        require(_attestor != address(0), "bad attestor");
        attestor = _attestor;
    }

    function addRule(uint256 ruleId, Rule calldata rule) external onlyOwner {
        require(!rules[ruleId].enabled, "rule already exists");
        rules[ruleId] = rule;
        emit RuleAdded(ruleId);
    }

    function verify(
        uint256 ruleId,
        bytes calldata proof,
        uint256, /*mid*/
        address /*sender*/
    ) external returns (uint256 validity) {
        Rule storage rule = rules[ruleId];
        require(rule.enabled, "rule not found or disabled");

        (uint256[2] memory a, uint256[2][2] memory b, uint256[2] memory c, uint256[6] memory input, bytes32 sigHash, bytes memory signature) = abi.decode(
            proof,
            (uint256[2], uint256[2][2], uint256[2], uint256[6], bytes32, bytes)
        );

