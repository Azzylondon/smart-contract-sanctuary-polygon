        bytes32 inputSignatureHash = constructHashFromParts(input[2], input[3]);
        require(inputSignatureHash == sigHash, "signature missmatch");

        uint256 ageThreshold = input[0];
        require(ageThreshold >= rule.ageThreshold, "age threshold missmatch");

        require(zkVerifier.verifyProof(a, b, c, input), "invalid proof");

        if (rule.validityPeriod == type(uint256).max) {
            // Unlimited validity
            return type(uint256).max;
        } else {
            return block.timestamp + rule.validityPeriod;
        }
    }

    function constructHashFromParts(uint256 p1, uint256 p2) private pure returns (bytes32) {
        require(p1 <= type(uint128).max, "hash part 1 over threshold");
        require(p2 <= type(uint128).max, "hash part 2 over threshold");
        return bytes32((p1 << 128) | p2);
    }
