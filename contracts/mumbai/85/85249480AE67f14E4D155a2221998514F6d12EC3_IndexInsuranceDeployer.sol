        uint256 _slopeParameter,
        uint256 _initialTokenValue,
        uint256 _initialTokenMarketCap,
        uint256 _initialTokenCount
    ) internal pure returns (uint256, uint256) {
        int256 value = int256(_value);
        int256 slope = int256(_slopeParameter);
        int256 initTokenValue = int256(_initialTokenValue);
        int256 initTokenMarketCap = int256(_initialTokenMarketCap);

        int256 newTokenMarketCap = -(initTokenMarketCap) + value;
        int256 newSlopeParameter = slope.div(PRBMathSD59x18.fromInt(2));
        require(newSlopeParameter > 0, "Slope is negative");
        int256 var1 = initTokenValue.pow(PRBMathSD59x18.fromInt(2)) -
            (newTokenMarketCap.mul(newSlopeParameter)).mul(
                PRBMathSD59x18.fromInt(4)
            );
        int256 var2 = -(initTokenValue) + var1.sqrt();
        int256 var3 = newSlopeParameter.mul(PRBMathSD59x18.fromInt(2));
        int256 var4 = var2.div(var3);

        uint256 tokensToBurn = _initialTokenCount - uint256(var4);
        int256 newTokenPrice = initTokenValue + slope.mul(var4);

        return (tokensToBurn, uint256(newTokenPrice));
    }

    /// @dev calculate price after claim
    /// @notice no tokens are burned, tokens price and slope parameter decreases instead
    function calcTokenPriceAfterClaim(
        uint256 _tokenMarketCap,
        uint256 _tokenCount,
        uint256 _initialTokenValue
    ) internal pure returns (uint256) {
        uint256 newTokenValue = _tokenMarketCap
            .mul(PRBMathUD60x18.fromUint(2))
            .div(_tokenCount) - _initialTokenValue;

        return newTokenValue;
    }

    function calcAdjustMCR(
        uint256 _updateProfitMargin,
        uint256 _initialTokenValue,
        uint256 _initialTokenValuewProfitMargin,
        uint256 _initialTokenCount
    )
        internal
        pure
        returns (
            uint256,
            uint256,
            uint256
        )
    {
        int256 initTokenValue = int256(_initialTokenValue);
        int256 initTokenValuewProfitMargin = int256(
            _initialTokenValuewProfitMargin
        );
        int256 initTokenCount = int256(_initialTokenCount);

        uint256 updateProfitMarginToPercent = calcPercentage(
            _updateProfitMargin
        );

        int256 newInitialTokenValue = (PRBMathSD59x18.fromInt(1) -
            int256(updateProfitMarginToPercent)).mul(
                (initTokenValue + initTokenValuewProfitMargin).div(
                    PRBMathSD59x18.fromInt(2)
                )
            );
