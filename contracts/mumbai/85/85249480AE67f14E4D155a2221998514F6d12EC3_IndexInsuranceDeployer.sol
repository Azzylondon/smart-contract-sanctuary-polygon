/// @title Index Insurance Contract
/// @author Igloo
/// @notice This contract is a treasury contract that handles CP Tokens for an individual Master Policy
/// @custom:version 2.0

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./MathLib.sol";
import "./CPTokens.sol";
import "./WeatherIndexStorage.sol";
import "./PoliciesStorage.sol";

contract IndexInsurance is
    ReentrancyGuard,
    AccessControl,
    WeatherIndexStorage,
    PoliciesStorage
{
    using MathLib for *;

    struct ContractStatus {
        /// @dev all params required to initialize the contract
        uint256 cpValue;
        uint256 cpMarketCap;
        uint256 slopeParameter;
        uint256 initialCpSupply;
        uint256 initialCpValue;
        uint256 targetProfitMarginAtPremium;
        uint256 targetCpValueAtPremium;
        uint256 targetCpMarketCap;
    }

    /// @dev creates a moderator role for relevant stakeholders to access the smart contract
    bytes32 private constant MODERATOR_ROLE = keccak256("MOD_ROLE");
    ContractStatus private contractStatus;
    CPTokens public tokens;
    bool public initialized;
    bool public isActive;

    event InitializedSuccessful(address _handler, bool _isInitialized);
    event MCRAdjustmentSuccessful(
        address indexed _handler,
        uint256 indexed _prevTargetProfitMarginAtPremium,
        uint256 indexed _currentTargetProfitMarginAtPremium,
        uint256 _timestamp
    );
    event TransactionSuccessful(
        string indexed _transactionType,
        uint256 indexed _amount,
        uint256 indexed _tokensAmount,
        string _transactionString,
        uint256 _timestamp
    );

    constructor(address _owner, address _insurer) {
        /// @dev assign roles for moderator access including owner of deployed contract
        /// @notice _owner should be Igloo wallet, _insurer should be external entity wallet
        _setupRole(DEFAULT_ADMIN_ROLE, _owner);
        _setupRole(MODERATOR_ROLE, _owner);
        _grantRole(MODERATOR_ROLE, _insurer);
    }

    /// @dev modifier to check if the initialize function has been executed, will revert if initialize function is not executed
    modifier isInitialized() {
        require(initialized == true, "isInitialized: false");
        _;
    }

    /// @dev modifier to check if this policy account is active, if account is not active, all functions will be paused, required to execute unPauseContract() if account is not active
    modifier active() {
        require(isActive == true, "Contract: inactive");
        _;
    }

    /// @dev initializing the contract is required before executing any other functions, affects the isInitialized modifier
    function initialize(
        uint256 _initialCPValue,
        uint256 _targetTokenCount,
        uint256 _targetProfitMarginAtPremium,
        uint256 _initialSupply
    ) external onlyRole(MODERATOR_ROLE) {
        require(initialized == false, "isInitialized: true");
        initialized = true;
        isActive = true;
        contractStatus.initialCpSupply = _initialSupply;
        /// @dev new ERC20 token contract created with initial CP supply equals to insurer's bank balance
        tokens = new CPTokens(address(this), contractStatus.initialCpSupply);

        contractStatus.initialCpValue = _initialCPValue;
        contractStatus
            .targetProfitMarginAtPremium = _targetProfitMarginAtPremium;

        contractStatus.targetCpValueAtPremium = MathLib
            .calcTargetTokenValueAtPremium(
                contractStatus.targetProfitMarginAtPremium,
                contractStatus.initialCpValue
            );

        contractStatus.slopeParameter = MathLib.calcSlopeParameter(
            contractStatus.targetCpValueAtPremium,
            contractStatus.initialCpValue,
            _targetTokenCount
        );
        contractStatus.targetCpMarketCap = MathLib.calcTargetTokenMarketCap(
            _targetTokenCount,
            contractStatus.initialCpValue,
            contractStatus.slopeParameter
        );
        contractStatus.cpValue = MathLib.calcTokenValue(
            contractStatus.initialCpValue,
            contractStatus.slopeParameter,
            contractStatus.initialCpSupply
        );
        contractStatus.cpMarketCap = MathLib.calcTokenMarketCap(
            contractStatus.initialCpSupply,
            contractStatus.initialCpValue,
            contractStatus.slopeParameter
        );

        emit InitializedSuccessful(msg.sender, initialized);
    }

    /// @dev storing of new policies executed per document
    function storeNewPoliciesDocument(
        bytes32 _policiesHash,
        uint256 _totalDocumentPremium,
        uint256 _totalDocumentNetPremium,
        uint256 _totalDocumentPoliciesCount
    ) external onlyRole(MODERATOR_ROLE) isInitialized active {
        require(
            _totalDocumentPremium > 10000000000000000 &&
                _totalDocumentNetPremium > 10000000000000000,
            "value > 10000000000000000 is required"
        );
        string memory policyType = "New Policies";
        _storeNewPoliciesDocument(
            _policiesHash,
            _totalDocumentPremium,
            _totalDocumentNetPremium,
            _totalDocumentPoliciesCount,
            policyType
        );

        _mintCp(policyType, _totalDocumentNetPremium);
    }

    /// @dev storing of canceled policies per document
    function storeCanceledPoliciesDocument(
        bytes32 _policiesHash,
        uint256 _totalDocumentPremium,
        uint256 _totalDocumentNetPremium,
        uint256 _totalDocumentPoliciesCount
    ) external onlyRole(MODERATOR_ROLE) isInitialized active {
        require(
            _totalDocumentPremium > 10000000000000000 &&
                _totalDocumentNetPremium > 10000000000000000,
            "value > 10000000000000000 is required"
        );
        string memory policyType = "Canceled Policies";
        _storeCanceledPoliciesDocument(
            _policiesHash,
            _totalDocumentPremium,
            _totalDocumentNetPremium,
            _totalDocumentPoliciesCount,
            policyType
        );

        _burnCp(policyType, _totalDocumentNetPremium);
    }

    /// @dev storing of claimed policies per document
    function storeClaimsDocument(
        bytes32 _policiesHash,
        uint256 _totalDocClaimsAmount,
        uint256 _totalDocumentPoliciesCount
    ) external onlyRole(MODERATOR_ROLE) isInitialized active {
        require(
            _totalDocClaimsAmount > 10000000000000000,
            "value > 10000000000000000 is required"
        );
        string memory policyType = "Claimed Policies";
        _storeClaimsDocument(
            _policiesHash,
            _totalDocClaimsAmount,
            _totalDocumentPoliciesCount,
            policyType
        );

        _claim(policyType, _totalDocClaimsAmount);
    }

    /// @dev external functions to execute deposit/withdrawal transactions that do not require storing of documents
    /// @notice use the external functions as there are proper access rights checks before execution
    function depositFunds(string memory _transactionType, uint256 _value)
        external
        onlyRole(MODERATOR_ROLE)
        isInitialized
        active
        nonReentrant
    {
        require(
            _value > 10000000000000000,
            "value > 10000000000000000 is required"
        );
        _mintCp(_transactionType, _value);
    }

    /// @dev conditions set to revert transaction if withdrawal request exceeds current amount in Fiat
    function withdrawFunds(string memory _transactionType, uint256 _value)
        external
        onlyRole(MODERATOR_ROLE)
        isInitialized
        active
        nonReentrant
    {
        require(
            _value > 10000000000000000 && _value <= contractStatus.cpMarketCap,
            "request exceeds balance"
        );
        _burnCp(_transactionType, _value);
    }

    /// @dev adjust the MCR by updating the targetProfitMarginAtPremium
    function adjustMCR(uint256 _updateProfitMargin)
        external
        onlyRole(MODERATOR_ROLE)
        isInitialized
    {
        uint256 prevTargetProfitMarginAtPremium = contractStatus
            .targetProfitMarginAtPremium;
        uint256 targetProfitMarginAtPremium = _updateProfitMargin;
        (
            uint256 initialCpValue,
            uint256 cpValue,
            uint256 slopeParameter
        ) = MathLib.calcAdjustMCR(
                _updateProfitMargin,
                contractStatus.initialCpValue,
                contractStatus.cpValue,
                tokens.balanceOf(address(this))
            );
        contractStatus.initialCpValue = initialCpValue;
        contractStatus.cpValue = cpValue;
        contractStatus.slopeParameter = slopeParameter;

        emit MCRAdjustmentSuccessful(
            msg.sender,
            prevTargetProfitMarginAtPremium,
            targetProfitMarginAtPremium,
            block.timestamp
        );
    }

    /// @dev stores 1 weather index item per transaction
    function storeWeatherItem(
        uint256 _timestamp,
        string memory _weatherStation,
        string memory _element,
        uint256 _weatherIndexData
    ) external onlyRole(MODERATOR_ROLE) {
        _storeWeatherItem(
            _timestamp,
            _weatherStation,
            _element,
            _weatherIndexData
        );
    }

    /// @dev stores multiple weather index items per transaction, uses more gas, has a limit of 280 items per transaction
    /// @notice format for storing _bulkWeatherIndexItems 2 dimensional array : [["_timestamp", "_weatherStation", "_element", "_weatherIndexData"],["_timestamp", "_weatherStation", "_element", "_weatherIndexData"]]
    function bulkStoreWeatherItems(
        WeatherIndexItem[] calldata _bulkWeatherIndexItems
    ) external onlyRole(MODERATOR_ROLE) {
        _bulkStoreWeatherItems(_bulkWeatherIndexItems);
    }

    function pauseContract() external onlyRole(MODERATOR_ROLE) {
        isActive = false;
    }

    function unPauseContract() external onlyRole(MODERATOR_ROLE) {
        isActive = true;
    }

    function getContractStatus()
        external
        view
        isInitialized
        returns (ContractStatus memory)
    {
        return contractStatus;
    }

    function getModeratorRole()
        external
        view
        onlyRole(MODERATOR_ROLE)
        returns (bytes32)
    {
        return MODERATOR_ROLE;
    }

    /// @notice DO NOT use the internal functions to execute any deposit/claim/refund transactions
    /// @dev internal function allows for immediate execution bypassing conditions when storing policies
    function _mintCp(string memory _transactionType, uint256 _value) private {
        uint256 initialCpMarketCap = contractStatus.cpMarketCap;
        (uint256 tokensToMint, uint256 newTokenPrice) = MathLib.calcTokenToMint(
            _value,
            contractStatus.slopeParameter,
            contractStatus.initialCpValue,
            initialCpMarketCap,
            tokens.balanceOf(address(this))
        );
        contractStatus.cpMarketCap += _value;
        contractStatus.cpValue = newTokenPrice;
        tokens.mint(tokensToMint);
        emit TransactionSuccessful(
            _transactionType,
            _value,
            tokensToMint,
            _transactionType,
            block.timestamp
        );
    }

    function _burnCp(string memory _transactionType, uint256 _value) private {
        require(
            _value < contractStatus.cpMarketCap,
            "balance: insufficient amount"
        );
        uint256 initialCpMarketCap = contractStatus.cpMarketCap;
        (uint256 tokensToBurn, uint256 newTokenPrice) = MathLib.calcTokenToBurn(
            _value,
            contractStatus.slopeParameter,
            contractStatus.initialCpValue,
            initialCpMarketCap,
            tokens.balanceOf(address(this))
        );
        require(
            tokensToBurn <= tokens.balanceOf(address(this)),
            "balance: insufficient amount"
        );
        contractStatus.cpMarketCap -= _value;
        contractStatus.cpValue = newTokenPrice;
        tokens.burn(tokensToBurn);
        emit TransactionSuccessful(
            _transactionType,
            _value,
            tokensToBurn,
            _transactionType,
            block.timestamp
        );
    }

    /// @notice internal claim function that decreases the slope parameters and token price only
    function _claim(string memory _transactionType, uint256 _claimValue)
        private
    {
        require(
            _claimValue < contractStatus.cpMarketCap,
            "balance: insufficient amount"
        );
        contractStatus.cpMarketCap = contractStatus.cpMarketCap - _claimValue;
        contractStatus.cpValue = MathLib.calcTokenPriceAfterClaim(
            contractStatus.cpMarketCap,
            tokens.balanceOf(address(this)),
            contractStatus.initialCpValue
        );
        contractStatus.slopeParameter = MathLib.calcSlopeParameter(
            contractStatus.cpValue,
            contractStatus.initialCpValue,
            tokens.balanceOf(address(this))
        );
        emit TransactionSuccessful(
            _transactionType,
            _claimValue,
            0,
            _transactionType,
            block.timestamp
        );
    }
}

