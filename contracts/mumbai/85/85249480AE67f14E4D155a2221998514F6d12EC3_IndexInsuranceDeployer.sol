/// @title Index Insurance Deployer
/// @author Igloo
/// @notice This contract is a storage for all existing master policies.
/// @custom:version 2.0

import "@openzeppelin/contracts/access/Ownable.sol";
import "./IndexInsurance.sol";

contract IndexInsuranceDeployer is Ownable {
    address[] private indexContracts;

    event instanceDeployed(
        uint256 _timestamp,
        address indexed _address,
        address indexed _owner
    );

    /// @dev deploy a master contract to represent a single master policy CP Pool
    function deployIndexInsurance(address _insurer) external onlyOwner {
        require(address(_insurer) != address(0), "wallet: not valid");
        IndexInsurance indexContract = new IndexInsurance(msg.sender, _insurer);
        indexContracts.push(address(indexContract));
        emit instanceDeployed(
            block.timestamp,
            address(indexContract),
            msg.sender
        );
    }

    /// @dev get all deployed master contracts deployed by deployer
    function getIndexContracts() external view returns (address[] memory) {
        return indexContracts;
    }
}

