/// @title Index Insurance Policy Store Contract
/// @author Igloo
/// @notice This contract is a store for all policies that for a single master policy contract.
/// @custom:version 2.0

contract PoliciesStorage {
    struct PoliciesDocument {
        uint256 timestamp;
        bytes32 policyHash;
        uint256 totalPremiums;
        uint256 totalNetPremiums;
        uint256 policiesCount;
        string policyType;
    }

    struct ClaimedPoliciesDocument {
        uint256 timestamp;
        bytes32 policyHash;
        uint256 totalClaimedAmount;
        uint256 policiesCount;
        string policyType;
    }

    struct PoliciesStatus {
        uint256 totalPremium;
        uint256 totalNetPremium;
        uint256 totalClaimedAmount;
        uint256 totalRefundedAmount;
        uint256 totalClaimedPoliciesCount;
        uint256 totalCanceledPoliciesCount;
        uint256 totalPoliciesCount;
    }

    PoliciesDocument[] private totalExistingPolicies;
    PoliciesDocument[] private totalCanceledPolicies;
    ClaimedPoliciesDocument[] private totalClaimedPolicies;
    PoliciesStatus private policiesStatus;

    function _storeNewPoliciesDocument(
        bytes32 _policiesHash,
        uint256 _totalDocumentPremium,
        uint256 _totalDocumentNetPremium,
        uint256 _totalDocumentPoliciesCount,
        string memory _policyType
    ) internal {
        PoliciesDocument memory newDoc = PoliciesDocument(
            block.timestamp,
            _policiesHash,
            _totalDocumentPremium,
            _totalDocumentNetPremium,
            _totalDocumentPoliciesCount,
            _policyType
        );
        totalExistingPolicies.push(newDoc);
        policiesStatus.totalPremium += _totalDocumentPremium;
        policiesStatus.totalNetPremium += _totalDocumentNetPremium;
        policiesStatus.totalPoliciesCount += _totalDocumentPoliciesCount;
    }

    function _storeCanceledPoliciesDocument(
        bytes32 _policiesHash,
        uint256 _totalDocumentPremium,
        uint256 _totalDocumentNetPremium,
        uint256 _totalDocumentPoliciesCount,
        string memory _policyType
    ) internal {
        require(
            _totalDocumentPoliciesCount <= policiesStatus.totalPoliciesCount,
            "no existing policies"
        );
        require(
            _totalDocumentPremium <= policiesStatus.totalPremium &&
                _totalDocumentNetPremium <= policiesStatus.totalNetPremium,
            "balance: insufficient amount"
        );
        PoliciesDocument memory newDoc = PoliciesDocument(
            block.timestamp,
            _policiesHash,
            _totalDocumentPremium,
            _totalDocumentNetPremium,
            _totalDocumentPoliciesCount,
            _policyType
        );
        totalCanceledPolicies.push(newDoc);
        policiesStatus.totalRefundedAmount += _totalDocumentNetPremium;
        policiesStatus
            .totalCanceledPoliciesCount += _totalDocumentPoliciesCount;
        policiesStatus.totalPremium -= _totalDocumentPremium;
        policiesStatus.totalNetPremium -= _totalDocumentNetPremium;
        policiesStatus.totalPoliciesCount -= _totalDocumentPoliciesCount;
    }

    function _storeClaimsDocument(
        bytes32 _policiesHash,
        uint256 _totalDocClaimsAmount,
        uint256 _totalDocumentPoliciesCount,
        string memory _policyType
    ) internal {
        require(
            _totalDocumentPoliciesCount <= policiesStatus.totalPoliciesCount,
            "no existing policies"
        );
        require(
            _totalDocClaimsAmount <= policiesStatus.totalNetPremium,
            "balance: insufficient amount"
        );
        ClaimedPoliciesDocument memory newDoc = ClaimedPoliciesDocument(
            block.timestamp,
            _policiesHash,
            _totalDocClaimsAmount,
            _totalDocumentPoliciesCount,
            _policyType
        );
        totalClaimedPolicies.push(newDoc);
        policiesStatus.totalClaimedAmount += _totalDocClaimsAmount;
        policiesStatus.totalClaimedPoliciesCount += _totalDocumentPoliciesCount;
    }

    function getAllPolicies()
        external
        view
        returns (
            PoliciesDocument[] memory existingPolicies,
            PoliciesDocument[] memory canceledPolicies,
            ClaimedPoliciesDocument[] memory claimedPolicies
        )
    {
        existingPolicies = totalExistingPolicies;
        canceledPolicies = totalCanceledPolicies;
        claimedPolicies = totalClaimedPolicies;
    }

    function getPoliciesStatus()
        external
        view
        returns (PoliciesStatus memory policyStatus)
    {
        policyStatus = policiesStatus;
    }
}

