/// @custom:version 2.0

import "@prb/math/contracts/PRBMathSD59x18.sol";
import "@prb/math/contracts/PRBMathUD60x18.sol";

library MathLib {
    using PRBMathSD59x18 for int256;
    using PRBMathUD60x18 for uint256;

    /// @dev Step 1 of initialization, calculate target token value at premium
    function calcTargetTokenValueAtPremium(
        uint256 _targetProfitMarginAtPremium,
        uint256 _initialTokenValue
    ) internal pure returns (uint256) {
        uint256 targetProfitMarginAtPremiumToPercent = calcPercentage(
            _targetProfitMarginAtPremium
        );

        uint256 var1 = targetProfitMarginAtPremiumToPercent.mul(
            PRBMathUD60x18.fromUint(2)
        );

        uint256 var2 = PRBMathUD60x18.fromUint(1) -
            targetProfitMarginAtPremiumToPercent;

        return
            ((var1).div(var2) + PRBMathUD60x18.fromUint(1)).mul(
                _initialTokenValue
            );
    }

    /// @dev Step 2 of initialization, calculate slope parameter
    function calcSlopeParameter(
        uint256 _targetTokenValueAtPremium,
        uint256 _initialTokenValue,
        uint256 _targetTokenCount
    ) internal pure returns (uint256) {
        int256 targetTokenValueAtPremium = int256(_targetTokenValueAtPremium);
        int256 initialTokenValue = int256(_initialTokenValue);
        int256 targetTokenCount = int256(_targetTokenCount);

        int256 checkSlope = (targetTokenValueAtPremium - initialTokenValue).div(
            targetTokenCount
        );
        require(checkSlope > 0, "Slope is negative");

        return uint256(checkSlope);
    }

    /// @dev Step 3 of initialization, calculate target token market cap
    function calcTargetTokenMarketCap(
        uint256 _targetTokenCount,
        uint256 _initialTokenValue,
        uint256 _slopeParameter
    ) internal pure returns (uint256) {
        uint256 var1 = _targetTokenCount.mul(_initialTokenValue);
        uint256 var2 = _slopeParameter.div(PRBMathUD60x18.fromUint(2));
        uint256 var3 = _targetTokenCount.pow(PRBMathUD60x18.fromUint(2));

        return var1 + var2.mul(var3);
    }

    /// @dev calculate tokens price change
    function calcTokenValue(
        uint256 _initialTokenValue,
        uint256 _slopeParameter,
        uint256 _initialTokenCount
    ) internal pure returns (uint256) {
        return _initialTokenValue + (_slopeParameter.mul(_initialTokenCount));
    }

    /// @dev calculate total market cap of tokens
    function calcTokenMarketCap(
        uint256 _initialTokenCount,
        uint256 _initialTokenValue,
        uint256 _slopeParameter
    ) internal pure returns (uint256) {
        uint256 var1 = _initialTokenCount.mul(_initialTokenValue);
        uint256 var2 = _slopeParameter.div(PRBMathUD60x18.fromUint(2));
        uint256 var3 = _initialTokenCount.pow(PRBMathUD60x18.fromUint(2));

        return var1 + var2.mul(var3);
    }

    /// @dev calculate tokens to mint, when new premium/income is received
    function calcTokenToMint(
        uint256 _value,
        uint256 _slopeParameter,
        uint256 _initialTokenValue,
        uint256 _initialTokenMarketCap,
        uint256 _initialTokenCount
    ) internal pure returns (uint256, uint256) {
        int256 value = int256(_value);
        int256 slope = int256(_slopeParameter);
        int256 initTokenValue = int256(_initialTokenValue);
        int256 initTokenMarketCap = int256(_initialTokenMarketCap);

        int256 newTokenMarketCap = -(initTokenMarketCap) - value;
        int256 newSlopeParameter = slope.div(PRBMathSD59x18.fromInt(2));

        int256 var1 = initTokenValue.pow(PRBMathSD59x18.fromInt(2)) -
            (newTokenMarketCap.mul(newSlopeParameter)).mul(
                PRBMathSD59x18.fromInt(4)
            );
