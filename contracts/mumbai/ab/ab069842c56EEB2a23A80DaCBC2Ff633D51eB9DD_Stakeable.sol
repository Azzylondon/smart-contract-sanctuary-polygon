pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";

contract Stakeable is IERC721Receiver {
    IERC20 rewardToken = IERC20(0xC77876786fEEBFF53fC468c921c1b4b853e2aE74);
    address erc721Contract = 0x2EE0e2Bdac56AA563cdA45Ee048bA6742a5a1754;

    constructor() {
    }
    
    /* address(this) */

    struct stakedOni{
        //uint256 tokenId;
        address user; 
        address cont;
        uint256 since;
        // This claimable field is new and used to tell how big of a reward is currently available
        uint256 coffer;
    }

    mapping(uint => stakedOni) oniByID;

    function onERC721Received(
        address _op,
        address _from,
        uint256 _token,
        bytes memory
    ) public virtual override returns (bytes4) {
    require((msg.sender == erc721Contract),"Contract not recognised!");
    oniByID[_token].user = _op;
    oniByID[_token].cont = msg.sender;
        return this.onERC721Received.selector;
    }

    function checkStake(uint256 _tokenID) public view returns (address){
        return oniByID[_tokenID].user;
    }

    function checkStake2(uint256 _tokenID) public view returns (address){
        return oniByID[_tokenID].cont;
    }


}

