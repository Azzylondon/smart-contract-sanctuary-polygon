pragma solidity 0.8.11;

import "./libraries/external/BytesLib.sol";

contract Validator {
    using BytesLib for bytes;

    address[] private validators;
    // Fixed threshold to validate unlock/refund/emergency withdraw equal or more than 2/3 signatures
    uint256 private constant threshold = 66;

    modifier validatorPrecheck(
        uint8[] memory _sigV,
        bytes32[] memory _sigR,
        bytes32[] memory _sigS
    ) {
        uint256 len = _sigV.length;
        require(
            len == _sigR.length && _sigR.length == _sigS.length,
            "Invalid Signature Length"
        );

        require(
            validators.length == 0 ||
                (len * 100) / validators.length >= threshold,
            "Threshold not reached"
        );

        if (len >= 2) {
            for (uint256 i = 0; i < len; i++) {
                for (uint256 j = i + 1; j < len; j++) {
                    require(
                        keccak256(
                            abi.encodePacked(_sigV[i], _sigR[i], _sigS[i])
                        ) !=
                            keccak256(
                                abi.encodePacked(_sigV[j], _sigR[j], _sigS[j])
                            ),
                        "Can not be the same signature"
                    );
                }
            }
        }
        _;
    }

    function getValidators() public view returns (address[] memory) {
        return validators;
    }

    event AddValidator(address _validator);

    function addValidator(
        address _validator,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external validatorPrecheck(sigV, sigR, sigS) {
        // digest the data to transactionHash
        bytes32 inputHash = keccak256(abi.encode(_validator));
        _checkSignatures(sigV, sigR, sigS, inputHash);
        _addValidator(_validator);
    }

    function removeValidator(
        address _validator,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external validatorPrecheck(sigV, sigR, sigS) {
        // digest the data to transactionHash
        bytes32 inputHash = keccak256(abi.encode(_validator));
        _checkSignatures(sigV, sigR, sigS, inputHash);
        _removeValidator(_validator);
    }

    function _checkSignature(
        uint8 _sigV,
        bytes32 _sigR,
        bytes32 _sigS,
        bytes32 _inputHash
    ) private view returns (bool) {
        address checkAdress = ecrecover(
            keccak256(
                abi.encodePacked("\x19Ethereum Signed Message:\n32", _inputHash)
            ),
            _sigV,
            _sigR,
            _sigS
        );
        for (uint256 index = 0; index < validators.length; index++) {
            if (checkAdress == validators[index]) {
                return true;
            }
        }
        return false;
    }

    function _addValidator(address _validator) internal {
        require(_validator != address(0), "Null address");
        for (uint256 index = 0; index < validators.length; index++) {
            require(_validator != validators[index], "Already added");
        }
        validators.push(_validator);

        emit AddValidator(_validator);
    }

    event RemoveValidator(address _validator);

    function _removeValidator(address _validator) internal {
        require(validators.length > 0, "Validators = 0");
        for (uint256 index = 0; index < validators.length; index++) {
            if (_validator == validators[index]) {
                validators[index] = validators[validators.length - 1];
                validators.pop();
                emit RemoveValidator(_validator);
                return;
            }
        }
        require(false, "No validator to remove");
    }

    function _checkSignatures(
        uint8[] memory _sigV,
        bytes32[] memory _sigR,
        bytes32[] memory _sigS,
        bytes32 _inputHash
    ) internal view {
        uint256 len = _sigV.length;
        for (uint256 index = 0; index < len; index++) {
            if (
                !_checkSignature(
                    _sigV[index],
                    _sigR[index],
                    _sigS[index],
                    _inputHash
                )
            ) revert("Invalid Signature");
        }
    }
}

