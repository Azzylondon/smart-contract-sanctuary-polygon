pragma solidity 0.8.11;

import "./interfaces/IPairControl.sol";

contract PairControl is IPairControl {
    // TODO: get all pairs
    // TODO: Is really need removerPair func?
    mapping(address => Pair) public pairs;

    mapping(address => uint256) private _nonces;

    // ========================= Getter methods ========================= //
    function getNonce(address _addr) external view returns (uint256) {
        return _nonces[_addr];
    }

    // ========================= external methods ========================= //
    function addPair(
        address fromContract,
        address toContract,
        address owner
    ) external override {
        pairs[fromContract] = Pair({ toContract: toContract, owner: owner });

        emit AddPair(msg.sender, fromContract, toContract, owner);
    }

    function removePair(address from) external override {
        Pair storage pair = pairs[from];
        require(msg.sender == pair.owner, "Only Owner");

        pair.toContract = address(0);
        pair.owner = address(0);

        emit RemovePair(msg.sender, from);
    }

    function updatePair(
        address fromContract,
        address toContract,
        address owner
    ) external override {
        Pair storage pair = pairs[fromContract];
        require(msg.sender == pair.owner, "Only Owner");

        pair.toContract = toContract;
        pair.owner = owner;

        emit UpdatePair(msg.sender, fromContract, toContract, owner);
    }

    // ========================= internal methods ========================= //
    function useNonce(address _addr) internal returns (uint256 nonce) {
        nonce = _nonces[_addr];
        _nonces[_addr] = nonce + 1;
    }
}

