import "solmate/utils/MerkleProofLib.sol";
import "solmate/utils/FixedPointMathLib.sol";

contract Voting {
    // Storage
    // bytes32 internal immutable merkleRoot;

    struct Project {
        address owner;
        string title;
        uint256 matchingContribution;
        uint256 rootSum;
        uint256 raisedAmount;
        bool isMatched;
    }

    mapping(uint256 => Project) public idToProjectMap;
    mapping(address => uint256) public addressToVoteMapping;
    uint256 totalProjects = 0;
    uint256 public totalSum;

    // Errors
    error IncorrectProof();
    error OutOfVotes();
    error AlreadyCalculated();

    constructor() {
        // merkleRoot = root;
    }

    function addProject(string memory title) external {
        unchecked {
            totalProjects++;
        }
        Project memory tempProject = Project(msg.sender, title, 0, 0, 0, false);
        idToProjectMap[totalProjects] = tempProject;
    }

    function contribute(
        // bytes32[] calldata proof,
        uint256 projectID,
        uint256 votes
    ) external {
        // bool isValid = MerkleProofLib.verify(
        //     proof,
        //     merkleRoot,
        //     keccak256(abi.encodePacked(msg.sender))
        // );
        // if (!isValid) revert IncorrectProof();
        uint256 preciseVotes = votes * 1 ether;
        Project memory project = idToProjectMap[projectID];
        uint256 usedVotes = addressToVoteMapping[msg.sender];
        if (preciseVotes + usedVotes > 99 ether) revert OutOfVotes();
        project.rootSum += FixedPointMathLib.sqrt(preciseVotes);
        project.raisedAmount += preciseVotes;
        idToProjectMap[projectID] = project;
        addressToVoteMapping[msg.sender] += preciseVotes;
    }

    function calculateDenominator(uint256 projectID) external {
        bool hasCalculated = idToProjectMap[projectID].isMatched;
        if (hasCalculated) revert AlreadyCalculated();
        uint256 rootSum = idToProjectMap[projectID].rootSum;
        uint256 raised = idToProjectMap[projectID].raisedAmount;
        totalSum += (rootSum**2 - raised);
        idToProjectMap[projectID].matchingContribution = (rootSum**2 - raised);
        idToProjectMap[projectID].isMatched = true;
    }

    function calculateProportionateAmount(uint256 projectID)
        external
        view
        returns (uint256)
    {
        uint256 matchedSum = idToProjectMap[projectID].matchingContribution;
        for (uint256 j = 1; j <= totalProjects; j++) {
            bool hasMatched = idToProjectMap[j].isMatched;
            require(hasMatched, "Project not Matched");
        }
        return (matchedSum * 1 ether) / totalSum;
    }
}

