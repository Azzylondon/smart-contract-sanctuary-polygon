      returns (address sender) {
      sender = BaseRelayRecipient._msgSender();
    }

    function _msgData() internal view override(Context, BaseRelayRecipient)
        returns (bytes memory) {
        return BaseRelayRecipient._msgData();
    }

    function changeForwarder(MinimalForwarder forwarder) public onlyOwner {
        BaseRelayRecipient(address(forwarder));
    }

    function decimals() public view virtual override returns (uint8) {
         return 9;
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function mint(address to, uint256 amount) public  {
        require(_msgSender() == owner() || msg.sender == MANAGER, "Access restriction");
        require((MAX_SUPPLY - totalSupply()) > amount, "MAX Supply reached");
        _mint(to, amount);
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount)
        internal
        whenNotPaused
        override
    {   
        super._beforeTokenTransfer(from, to, amount);
    }
    
    mapping(string => address) public users;
    mapping(address => string) public registeredAddress;
    mapping(address => uint) public nftTokenId;

    mapping(string => mapping(string => address)) public user_social_address;
    mapping(address => mapping(string => string)) public user_social_accounts;

    address MANAGER;

    function setManager(address _address) public onlyOwner {
        MANAGER = _address;
    }

    function setUser(address _address, string calldata username) public {
        require(msg.sender == MANAGER, "Only manager can set user");

        users[username] = _address;
        registeredAddress[_address] = username;
        emit User(_address, username);
    }


    function setNFTToken(address _address, uint tokenID) public {
        require(msg.sender == MANAGER, "Only manager can set NFT token");
        nftTokenId[_address] = tokenID;
        emit NFTToken(_address, tokenID);
    }



    function setSocial(string calldata username, string calldata socialType, string calldata socialValue) public {
        require(_msgSender() == users[username] || msg.sender == MANAGER , "Only owner or manager can set social");
        require(bytes(registeredAddress[_msgSender()]).length > 0, "User is not registered");

        user_social_accounts[_msgSender()][socialType] = socialValue;
        user_social_address[username][socialType] = _msgSender();
        emit SetSocial(_msgSender(), username, socialType, socialValue);
    }



}