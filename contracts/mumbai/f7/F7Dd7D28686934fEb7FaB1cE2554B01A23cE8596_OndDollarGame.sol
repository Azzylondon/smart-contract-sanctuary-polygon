pragma solidity ^0.8.0;

import "./libraries/FreedomGame.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract OndDollarGame is FreedomGame {
    using EnumerableSet for EnumerableSet.AddressSet;

    EnumerableSet.AddressSet private _tokens;
    mapping(address => uint256) private _ticketPrices;
    uint256 private _executerRate = 30;
    uint256 private _ownerRate = 10;
    uint256 private _minBuyerNumber;
    uint256 private _startHeight;
    uint256 private _period;
    bool private _autoOpen = false;
    EnumerableSet.AddressSet private _buyers;

    event TokenAdded(address token, uint256 price);
    event TokenRemoveed(address token);
    event PoolOpened(
        uint256 minBuyerNumber,
        uint256 startHeight,
        uint256 endHeight,
        bool autoOpen
    );
    event TicketBought(address buyer);
    event Drew(address executer, address winner, uint256 reward);

    constructor() FreedomGame() {}

    function addToken(address token, uint256 price)
        public
        onlyOwner
        returns (bool)
    {
        return _addToken(token, price);
    }

    function removeToken(address token) public onlyOwner returns (bool) {
        return _removeToken(token);
    }

    function tokens() public view returns (address[] memory) {
        return _tokens.values();
    }

    function ticketPrice(address token) public view returns (uint256) {
        return _ticketPrices[token];
    }

    function setRate(uint256 executerRateValue, uint256 ownerRateValue)
        public
        returns (bool)
    {
        return _setRate(executerRateValue, ownerRateValue);
    }

    function executerRate() public view returns (uint256) {
        return _executerRate;
    }

    function ownerRate() public view returns (uint256) {
        return _ownerRate;
    }

    function openPool(
        uint256 buyerNumber,
        uint256 blockCount,
        bool autoOpen
    ) public returns (bool) {
        require(
            owner() == msg.sender || owner() == address(this),
            "Ownable: caller is not the owner and the contract"
        );
        return _openPool(buyerNumber, blockCount, autoOpen);
    }

    function minBuyerNumber() public view returns (uint256) {
        return _minBuyerNumber;
    }

    function startHeight() public view returns (uint256) {
        return _startHeight;
    }

    function endHeight() public view returns (uint256) {
        return _startHeight + _period;
    }

    function buyTicket(address token) public whenNotPaused returns (bool) {
        return _buyTicket(token);
    }

    function draw() public whenNotPaused returns (bool) {
        require(
            _buyers.length() > _minBuyerNumber ||
                block.number > _startHeight + _period,
            "current line is below minimum water line or current height is below the end height"
        );
        return _draw();
    }

    function forceDraw() public onlyOwner whenNotPaused returns (bool) {
        return _draw();
    }

    function _addToken(address token, uint256 price) internal returns (bool) {
        require(!_tokens.contains(token), "the token is exist");
        require(
            token != address(0) && IERC20(token).totalSupply() > 0,
            "the address of new token is the zero address or the token is not a erc20 token"
        );
        _tokens.add(token);
        _ticketPrices[token] = price;
        emit TokenAdded(token, price);
        return true;
    }

    function _removeToken(address token) internal returns (bool) {
        require(_tokens.contains(token), "the token is not exist");
        _tokens.remove(token);
        delete _ticketPrices[token];
        emit TokenRemoveed(token);
        return true;
    }

    function _openPool(
        uint256 buyerNumber,
        uint256 blockCount,
        bool autoOpen
    ) internal returns (bool) {
        require(
            blockCount > 0,
            "the price is below zero or the buyer number is too low or the block count is below zero"
        );
        _minBuyerNumber = buyerNumber;
        _startHeight = block.number;
        _autoOpen = autoOpen;
        emit PoolOpened(
            _minBuyerNumber,
            _startHeight,
            _startHeight + _period,
            _autoOpen
        );
        return true;
    }

    function _setRate(uint256 executerRateValue, uint256 ownerRateValue)
        internal
        returns (bool)
    {
        require(
            executerRateValue > 0 &&
                executerRateValue < 100 &&
                ownerRateValue > 0 &&
                ownerRateValue < 100,
            "the rate is must great then zero and less then one hundred"
        );
        _executerRate = executerRateValue;
        _ownerRate = ownerRateValue;
        return true;
    }

    function _buyTicket(address token) internal returns (bool) {
        require(_tokens.contains(token), "the token is not exist");
        uint256 price = ticketPrice(token);
        require(
            !_buyers.contains(msg.sender),
            "you have already bought the ticket"
        );
        require(
            IERC20(token).allowance(msg.sender, address(this)) >= price,
            "allowance is below amount"
        );
        bool result = IERC20(token).transferFrom(
            msg.sender,
            address(this),
            price
        );
        if (result) {
            _buyers.add(msg.sender);
            emit TicketBought(msg.sender);
        }
        return result;
    }

    function _draw() internal returns (bool) {
        uint256 i = 0;
        for (i = 0; i < _tokens.length(); i++) {
            uint256 balance = IERC20(_tokens.at(i)).balanceOf(address(this));
            uint256 v1 = SafeMath.mul(
                SafeMath.div(balance, 1000),
                _executerRate
            );
            uint256 v2 = SafeMath.mul(SafeMath.div(balance, 1000), _ownerRate);
            uint256 v3 = balance - v1 - v2;
            IERC20(_tokens.at(i)).transfer(msg.sender, v1);
            IERC20(_tokens.at(i)).transfer(owner(), v2);
            uint256 index = SafeMath.mod(block.number, _buyers.length());
            IERC20(_tokens.at(i)).transfer(_buyers.at(index), v3);
            emit Drew(msg.sender, _buyers.at(index), v3);
            if (_autoOpen) {
                _openPool(_minBuyerNumber, _period, _autoOpen);
            }
        }
        return true;
    }
}

