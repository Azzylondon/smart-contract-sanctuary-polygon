pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

abstract contract FreedomGame is Ownable, Pausable {
    event RewardDropped(address receiver, uint256 amount);
    event ERC20RewardDropped(address receiver, address token, uint256 amount);

    constructor() {
        pause();
    }

    function pause() public virtual onlyOwner {
        super._pause();
    }

    function unpause() public virtual onlyOwner {
        super._unpause();
    }

    function _dropReward(address receiver, uint256 amount)
        private
        returns (bool)
    {
        require(amount > 0, "the value is must greate then zero");
        require(
            address(this).balance > amount,
            "the balance is less then the amount"
        );
        payable(receiver).transfer(amount);
        emit RewardDropped(receiver, amount);
        return true;
    }

    function _dropOwnerReward(uint256 amount) internal returns (bool) {
        return _dropReward(owner(), amount);
    }

    function _dropPlayerReward(address player, uint256 amount)
        internal
        returns (bool)
    {
        return _dropReward(player, amount);
    }

    function _dropERC20Reward(
        address receiver,
        address token,
        uint256 amount
    ) private returns (bool) {
        require(amount > 0, "the value is must greate then zero");
        require(
            token != address(0) && IERC20(token).totalSupply() > 0,
            "the  token is the zero address or not a erc20 token"
        );
        require(
            IERC20(token).balanceOf(address(this)) > amount,
            "the balance is less then the amount"
        );
        IERC20(token).transfer(receiver, amount);
        emit ERC20RewardDropped(receiver, token, amount);
        return true;
    }

    function _dropOwnerERC20Reward(address token, uint256 amount)
        internal
        returns (bool)
    {
        return _dropERC20Reward(owner(), token, amount);
    }

    function _dropPlayerERC20Reward(
        address player,
        address token,
        uint256 amount
    ) internal returns (bool) {
        return _dropERC20Reward(player, token, amount);
    }
}

