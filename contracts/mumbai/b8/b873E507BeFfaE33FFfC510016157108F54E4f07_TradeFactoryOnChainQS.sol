/**
    this contracts error codes can be decoded from ErrorCode.json file in the root folder.
 */
contract TradeFactoryOnChainQS is Whitelist {
    mapping(address => Trade[]) trades;
    mapping(address => uint256) tradeId;
    LP leveragePool;
    IUniswapV2Router02 quickSwapRouter;

    event TradeEventParams(
        uint256 tradeId,
        address traderAddress,
        Position position,
        address fromToken,
        address toToken,
        uint256 fromTokenAmount,
        uint256 toTokenAmount,
        uint256 equity,
        uint256 debt,
        Leverage leverage,
        Status tradeStatus
    );

    event ErrorInSquareOff(
        uint256 tradeId,
        address traderAddress,
        address token,
        uint256 amount
    );

    function init(address _leveragePoolAddress, address _router)
        external
        onlyOwner
        whenNotPaused
    {
        leveragePool = LP(_leveragePoolAddress);
        quickSwapRouter = IUniswapV2Router02(_router);
    }

    // Modifiers can take inputs. This modifier checks that the
    // address passed in is not the zero address.
    modifier validAddress(address _addr) {
        require(address(_addr) != address(0), "4");
        _;
    }

    modifier validAmount(uint256 _amount) {
        require(_amount > 0, "0");
        _;
    }

    function validContractAddress(bytes memory _encodedData)
        public
        view
        returns (bool)
    {
        bytes memory _encodedDataTemp = new bytes(_encodedData.length - 4);
        for (uint256 i = 0; i < _encodedDataTemp.length; i++) {
            _encodedDataTemp[i] = _encodedData[i + 4];
        }

        (, , , address contractAddress, ) = abi.decode(
            _encodedDataTemp,
            (uint256, uint256, address[], address, uint256)
        );
        return address(contractAddress) == address(this);
    }

    function swap(bytes calldata _callData)
        public
        whenNotPaused
        returns (uint256[] memory)
    {
        bytes[] memory _decodedCallData = abi.decode(_callData, (bytes[]));
        require(validContractAddress(_decodedCallData[0]), "16");

        // now go to quickswap and do a swap.
        (bool success, bytes memory response) = address(quickSwapRouter).call(
            _decodedCallData[0]
        );
        // this is written for short flow.
        if (
            success == false &&
            keccak256(_decodedCallData[0]) != keccak256(_decodedCallData[1])
        ) {
            require(validContractAddress(_decodedCallData[1]), "16");
            (success, response) = address(quickSwapRouter).call(
                _decodedCallData[1]
            );
        }
        require(success, string(response));
        /**
            returnAmounts[0] = in
            returnAmounts[1] = out 
         */
        uint256[] memory returnAmounts = abi.decode(response, (uint256[]));


        return returnAmounts;
    }

    function approve(
        address _token,
        address _spender,
        uint256 _amount
    ) private returns (bool) {
        if (ERC20(_token).balanceOf(address(this)) < _amount) {
            return false;
        }
        return ERC20(_token).approve(_spender, _amount);
    }

    function approveForAdmin(
        address _token,
        address _spender,
        uint256 _amount
    ) public onlyWhitelisted returns (bool) {
        return ERC20(_token).approve(_spender, _amount);
    }

    function getLeverageFromPool(address _token, uint256 _debt)
        public
        whenNotPaused
        returns (bool)
    {
        return leveragePool.provideLeverage(_token, _debt);
    }

    function repayToLeveragePool(
        address _token,
        uint256 _debt,
        uint256 _fees
    ) public whenNotPaused returns (bool) {
        require(approve(_token, address(leveragePool), _debt + _fees), "15");
        return leveragePool.repay(_token, _debt, _fees);
    }

    function emitTrade(Trade memory _trade) public {
        emit TradeEventParams(
            _trade.tradeId,
            _trade.traderAddress,
            _trade.position,
            _trade.fromToken,
            _trade.toToken,
            _trade.fromTokenAmount,
            _trade.toTokenAmount,
            _trade.equity,
            _trade.debt,
            _trade.leverage,
            _trade.tradeStatus
        );
    }

    function exactFees(
        uint256 _holdingAmount,
        uint256 _debt,
        uint256 _fees
    ) public pure returns (uint256) {
        uint256 fees = _holdingAmount > _debt
            ? (_holdingAmount - _debt) >= _fees
                ? _fees
                : (_holdingAmount - _debt) > 0
                ? (_holdingAmount - _debt)
                : 0
            : 0;
        return fees;
    }

    function trade(Trade memory _trade, bytes calldata _callData)
        public
        validAddress(_trade.traderAddress)
        validAddress(_trade.fromToken)
        validAddress(_trade.toToken)
        validAmount(_trade.fromTokenAmount)
        validAmount(_trade.equity)
        validAmount(_trade.debt)
        nonReentrant
        whenNotPaused
    {
        // please approve the token, approved tokens should be equal to equity
        require(
            ERC20(_trade.fromToken).allowance(
                _trade.traderAddress,
                address(this)
            ) >= _trade.equity,
            "6"
        );

        // get traders equity into this contract
        ERC20(_trade.fromToken).transferFrom(
            _trade.traderAddress,
            address(this),
            _trade.equity
        );
        if (_trade.position == Position.Long) {
            // get leverage from LP into this contract

            require(getLeverageFromPool(_trade.fromToken, _trade.debt), "7");
            require(
                approve(
                    _trade.fromToken,
                    address(quickSwapRouter),
                    _trade.fromTokenAmount
                ),
                "12"
            );
            uint256[] memory returnAmounts = swap(_callData);
            _trade.toTokenAmount = returnAmounts[1]; //swap(_callData);
            _trade.fromTokenAmount = 0; // TODO: let's keep it like this for now.
        } else {
            // get leverage from LP into this contract
            require(getLeverageFromPool(_trade.toToken, _trade.debt), "7");

            require(
                approve(
                    _trade.toToken,
                    address(quickSwapRouter),
                    _trade.toTokenAmount
                ),
                "12"
            );
            // storing equity + swap tokens we got.
            uint256[] memory returnAmounts = swap(_callData);
            _trade.fromTokenAmount = returnAmounts[1] + _trade.equity; // TODO: see if we can see toTokenAmount =0; since we are following same in the LONG flow.
            _trade.toTokenAmount = 0;
        }

        _trade.tradeId = tradeId[_trade.traderAddress];
        _trade.tradeStatus = Status.open;
        trades[_trade.traderAddress].push(_trade);
        emitTrade(_trade);
        tradeId[_trade.traderAddress]++;
    }

    function closeTrade(
        address _traderAddress,
        uint256 _tradeId,
        uint256 _fees,
        Status _status,
        bytes calldata _callData
    ) private {
        Trade storage _trade = trades[_traderAddress][_tradeId];
        require(_trade.tradeStatus == Status.open, "9");
        require(_status == Status.close || _status == Status.liquidated, "10");
        if (_trade.position == Position.Long) {
            // approve so quickswap can use the tokens.
            require(
                approve(
                    _trade.toToken,
                    address(quickSwapRouter),
                    _trade.toTokenAmount
                ),
                "12"
            );
            uint256[] memory returnAmounts = swap(_callData);
            _trade.fromTokenAmount = returnAmounts[1];
            _trade.toTokenAmount = 0;

            if (_trade.fromTokenAmount <= _trade.debt) {
                require(
                    repayToLeveragePool(
                        _trade.fromToken,
                        _trade.fromTokenAmount,
                        0
                    ),
                    "11"
                );
                emit ErrorInSquareOff(
                    _trade.tradeId,
                    _trade.traderAddress,
                    _trade.fromToken,
                    _trade.debt + _fees - _trade.fromTokenAmount
                );
            } else {
                uint256 calculateFees = exactFees(
                    _trade.fromTokenAmount,
                    _trade.debt,
                    _fees
                );

                require(
                    repayToLeveragePool(
                        _trade.fromToken,
                        _trade.debt,
                        calculateFees
                    ),
                    "11"
                );
                ERC20(_trade.fromToken).transfer(
                    _trade.traderAddress,
                    _trade.fromTokenAmount - _trade.debt - calculateFees
                );
            }
        } else {
            // approve so quickswap can use the tokens.
            require(
                approve(
                    _trade.fromToken,
                    address(quickSwapRouter),
                    _trade.fromTokenAmount
                ),
                "12"
            );

            uint256[] memory returnAmounts = swap(_callData);

            _trade.fromTokenAmount = returnAmounts[0] > 0
                ? _trade.fromTokenAmount - returnAmounts[0]
                : 0;
            _trade.toTokenAmount = returnAmounts[1];

            if (_trade.toTokenAmount <= _trade.debt) {
                // price of token falls drastically, even bot couldn't do swap asap.

                require(
                    repayToLeveragePool(
                        _trade.toToken,
                        _trade.toTokenAmount,
                        0
                    ),
                    "11"
                );
                uint256 diff = _trade.debt + _fees - _trade.toTokenAmount;
                emit ErrorInSquareOff(
                    _trade.tradeId,
                    _trade.traderAddress,
                    _trade.toToken,
                    diff
                );
            } else {
                require(
                    repayToLeveragePool(
                        _trade.toToken,
                        _trade.debt,
                        _trade.toTokenAmount - _trade.debt
                    ),
                    "11"
                );

                if (_trade.fromTokenAmount > 0) {
                    ERC20(_trade.fromToken).transfer(
                        _trade.traderAddress,
                        _trade.fromTokenAmount
                    );
                }
            }
        }

        _trade.tradeStatus = _status;

        emitTrade(_trade);
    }

    function squareOffTrade(
        uint256 _tradeId,
        uint256 _fees,
        Status _status,
        bytes calldata _callData
    ) public validAddress(msg.sender) whenNotPaused nonReentrant {
        require(_tradeId < tradeId[msg.sender], "8");
        require(
            address(trades[msg.sender][_tradeId].traderAddress) ==
                address(msg.sender),
            "17"
        );
        closeTrade(msg.sender, _tradeId, _fees, _status, _callData);
    }

    function liquidate(LiquidateTrade[] calldata _liquidateTrades)
        public
        onlyWhitelisted
        whenNotPaused
        nonReentrant
    {
        for (uint256 i = 0; i < _liquidateTrades.length; i++) {
            closeTrade(
                _liquidateTrades[i].traderAddress,
                _liquidateTrades[i].tradeId,
                _liquidateTrades[i].fees,
                Status.liquidated,
                _liquidateTrades[i].encodedCallData
            );
        }
    }

    function getTrade(address _traderAddress, uint256 _tradeId)
        public
        view
        validAddress(_traderAddress)
        returns (Trade memory)
    {
        require(_tradeId < tradeId[_traderAddress], "8");
        return trades[_traderAddress][_tradeId];
    }
}

