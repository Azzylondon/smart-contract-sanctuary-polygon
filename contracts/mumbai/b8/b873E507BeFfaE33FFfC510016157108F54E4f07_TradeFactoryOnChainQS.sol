import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "../ownership/Whitelist.sol";

contract LP is
    Whitelist
{
    event LeveragedAccount(address account, address owner);
    event Pool(
        address token,
        string name,
        string symbol,
        uint8 decimals,
        address from,
        uint256 amount,
        LPActions action
    );
    event Tokens(
        address token,
        string name,
        string symbol,
        uint8 decimals,
        uint256 totalFunds,
        uint256 totalUsedFunds
    );
    event TokenList(
        address token,
        string name,
        string symbol,
        uint8 decimals,
        TokenManage manageType,
        address owner
    );

    mapping(address => mapping(address => uint256)) public tokensAddressFunds;
    
    mapping(address => uint256) public tokenAvailableForInvestment;
    
    mapping(address => uint256) public tokenTotalFundsDepositedTillDate;

    mapping(address => mapping(address => uint256))
        public tokenGivenForInvestment;

    mapping(address => uint256) public tokenInvestedSoFar;

    mapping(address => uint256) public tokensEarning;

    ARCHToken private arch;
    address private leveragedAccount;

    // Add the library methods
    using EnumerableSet for EnumerableSet.AddressSet;
    // Declare a set state variable
    EnumerableSet.AddressSet private erc20TokensSet;

    function init(address _archTokenAddress, address[] memory _tokensList)
        external
        onlyOwner
        whenNotPaused
    {
        arch = ARCHToken(_archTokenAddress);
        manageTokens(_tokensList, true);
    }

    function setLeveragedAccount(address _account)
        external
        onlyWhitelisted
        whenNotPaused
    {
        leveragedAccount = _account;
        emit LeveragedAccount(_account, msg.sender);
    }

    function addTokens(address[] memory _tokensList)
        external
        onlyWhitelisted
        whenNotPaused
    {
        manageTokens(_tokensList, true);
    }

    function manageTokens(address[] memory _tokensList, bool _isAddition)
        internal
    {
        if (_isAddition) {
            for (uint256 index = 0; index < _tokensList.length; index++) {
                if (!erc20TokensSet.contains(_tokensList[index])) {
                    erc20TokensSet.add(_tokensList[index]);
                    emit TokenList(
                        _tokensList[index],
                        ERC20(_tokensList[index]).name(),
                        ERC20(_tokensList[index]).symbol(),
                        ERC20(_tokensList[index]).decimals(),
                        TokenManage.add,
                        msg.sender
                    );
                }
            }
        } else {
            for (uint256 index = 0; index < _tokensList.length; index++) {
                if (erc20TokensSet.contains(_tokensList[index])) {
                    erc20TokensSet.remove(_tokensList[index]);
                    emit TokenList(
                        _tokensList[index],
                        ERC20(_tokensList[index]).name(),
                        ERC20(_tokensList[index]).symbol(),
                        ERC20(_tokensList[index]).decimals(),
                        TokenManage.remove,
                        msg.sender
                    );
                }
            }
        }
    }

    function removeTokens(address[] memory _tokensList)
        external
        onlyWhitelisted
        whenNotPaused
    {
        manageTokens(_tokensList, false);
    }

    function approve(
        address _token,
        address _spender,
        uint256 _amount
    ) public onlyWhitelisted returns (bool) {
        return ERC20(_token).approve(_spender, _amount);
    }

    function basicCheck(uint256 _amount, address _token) internal view {
        require(_amount > 0, "0");
        require(erc20TokensSet.contains(_token), "1");
    }

    function deposit(address _token, uint256 _amount)
        external
        nonReentrant
        whenNotPaused
    {
        basicCheck(_amount, _token);
        require(
            ERC20(_token).allowance(msg.sender, address(this)) >= _amount,
            "12"
        );
        require(ERC20(_token).balanceOf(msg.sender) >= _amount, "13");

        ERC20(_token).transferFrom(msg.sender, address(this), _amount);

        tokensAddressFunds[_token][msg.sender] += _amount;
        tokenAvailableForInvestment[_token] += _amount;
        tokenTotalFundsDepositedTillDate[_token] += _amount;

        // for now keeping equal reward as deposited _amount 1:1
        arch.transfer(msg.sender, _amount);
        arch.reward(_token, msg.sender, _amount);

        emit Tokens(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            tokenTotalFundsDepositedTillDate[_token],
            tokenInvestedSoFar[_token]
        );
        emit Pool(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            msg.sender,
            _amount,
            LPActions.deposit
        );
    }

    function provideLeverage(address _token, uint256 _amount)
        external
        nonReentrant
        whenNotPaused
        returns (bool)
    {
        basicCheck(_amount, _token);
        require(address(leveragedAccount) != address(0), "2");
        require(msg.sender == leveragedAccount, "3");

        bool sent = ERC20(_token).transfer(leveragedAccount, _amount);

        tokenGivenForInvestment[_token][leveragedAccount] += _amount;

        tokenInvestedSoFar[_token] += _amount;

        emit Tokens(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            tokenTotalFundsDepositedTillDate[_token],
            tokenInvestedSoFar[_token]
        );
        emit Pool(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            leveragedAccount,
            _amount,
            LPActions.leverage
        );
        return sent;
    }

    function repay(
        address _token,
        uint256 _amount,
        uint256 _other
    ) external nonReentrant whenNotPaused returns (bool) {
        basicCheck(_amount, _token);
        require(msg.sender == leveragedAccount, "2");

        bool sent = ERC20(_token).transferFrom(
            leveragedAccount,
            address(this),
            (_amount + _other)
        );

        tokenGivenForInvestment[_token][leveragedAccount] -= _amount;

        tokensEarning[_token] += _other;

        emit Pool(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            leveragedAccount,
            _other,
            LPActions.earnings
        );
        emit Pool(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            leveragedAccount,
            _amount,
            LPActions.repay
        );
        return sent;
    }

    function withdraw(address _token, uint256 _amount)
        external
        nonReentrant
        whenNotPaused
    {
        basicCheck(_amount, _token);
        require(tokensAddressFunds[_token][msg.sender] >= _amount, "14");
        require(ERC20(_token).balanceOf(address(this)) >= _amount, "13");

        ERC20(_token).transfer(msg.sender, _amount);

        tokensAddressFunds[_token][msg.sender] -= _amount;
        tokenAvailableForInvestment[_token] -= _amount;

        emit Pool(
            _token,
            ERC20(_token).name(),
            ERC20(_token).symbol(),
            ERC20(_token).decimals(),
            msg.sender,
            _amount,
            LPActions.withdraw
        );
    }
}

