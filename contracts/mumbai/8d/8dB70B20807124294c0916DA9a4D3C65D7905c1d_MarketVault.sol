pragma solidity ^0.8.0;

import "../system/HSystemChecker.sol";
import "../../common/Multicall.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

contract MarketVault is HSystemChecker, Multicall, ERC1155Holder {

    /// @dev tokenId => (account => amount)
    mapping(uint256 => mapping(address => uint256)) _ownerTracking;
    address public _itemFactoryContractAddress;
    IERC1155 _token;

    /// @notice Emitted when the Item Factory contract address is updated
    /// @param itemFactoryContractAddress - Item Factory contract address
    event LogSetItemFactoryAddress(address itemFactoryContractAddress);

    constructor(
        address systemCheckerContractAddress,
        address itemFactoryContractAddress
    ) HSystemChecker(systemCheckerContractAddress) {
        _itemFactoryContractAddress = itemFactoryContractAddress;
        _token = IERC1155(itemFactoryContractAddress);
    }

    /// @notice Add token to the vault
    /// @param from - Account to add to
    /// @param tokenId - Id of token to add
    /// @param amount - Amount of token to add
    function tokenIn(address from, uint256 tokenId, uint256 amount) external onlyRole(CONTRACT_ROLE) {
        require(_token.balanceOf(address(this), tokenId) >= amount, "MV 100 - Invalid vault balance");
        _ownerTracking[tokenId][from] += amount;
    }

    /// @notice Remove token from the vault
    /// @param from - Account to deduct from
    /// @param to - Account to transfer to
    /// @param tokenId - Id of token to remove
    /// @param amount - Amount of token to remove
    function tokenOut(address from, address to, uint256 tokenId, uint256 amount) external onlyRole(CONTRACT_ROLE) {
        require(_ownerTracking[tokenId][from] >= amount, "MV 101 - Insufficient account balance");
        require(_token.balanceOf(address(this), tokenId) >= amount, "MV 102 - Invalid vault balance");

        _ownerTracking[tokenId][from] -= amount;
        _token.safeTransferFrom(address(this), to, tokenId, amount, "");
    }

    /// @notice Get amount of token help by a given account
    /// @param account - Address to check
    /// @param tokenId - Id to check
    /// @return count - Amount of token in vault
    function getTokenCount(address account, uint256 tokenId) public view returns(uint256) {
        return _ownerTracking[tokenId][account];
    }

    /// @notice Push new address for the Item Factory Contract
    /// @param itemFactoryContractAddress - Address of the Item Factory
    function setItemFactoryContractAddress(address itemFactoryContractAddress) external onlyRole(ADMIN_ROLE) {
        _itemFactoryContractAddress = itemFactoryContractAddress;
        _token = IERC1155(itemFactoryContractAddress);
        emit LogSetItemFactoryAddress(itemFactoryContractAddress);
    }
}

