import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./Interfaces.sol";

contract Payments is Ownable, ReentrancyGuard {

    IBZAI public BZAI;

    constructor(address _BZAI){
        BZAI = IBZAI(_BZAI);
    }

    IAddresses public gameAddresses;

    modifier onlyAuth() {
        require(gameAddresses.isAuthToManagedPayments(msg.sender),"Not Authorized");
        _;
    }

    mapping(address => uint256) private _myReward;
    mapping(address => uint256) private _myCentersRevenues;

    function setGameAddresses(address _address) external onlyOwner{
        gameAddresses = IAddresses(_address);
    } 

    function getMyReward(address _user) external view returns(uint256){
        return _myReward[_user];
    }

    function getMyCentersRevenues(address _user) external view returns(uint256){
        return _myCentersRevenues[_user];
    }

    function payOwner(address _owner, uint256 _amount) external onlyAuth nonReentrant returns(bool){
        uint256 _toOwner = _amount * 8000 / 10000;
        uint256 _toDistribute = _amount - _toOwner;

        // 80% for owner of Nuresery/Training Center or Forge
        _myCentersRevenues[_owner] += _toOwner;

        // 5 % for teams members
        require(BZAI.transfer(gameAddresses.getTeamAddress(), _toDistribute / 4));

        address _stakingAddress = gameAddresses.getStakingAddress();
        // 5 % for stakers
        IStaking(_stakingAddress).receiveFees(_toDistribute / 4);
        require(BZAI.transfer(_stakingAddress, _toDistribute / 4));

        // 5%  for reward challenge in game (daily and weekly ranking)
        require(BZAI.transfer(gameAddresses.getChallengeRewardsAddress(), _toDistribute / 4));
        // 5% for winning contract (where each win in game give 0.1% of the win pool to the user)
        return (BZAI.transfer(gameAddresses.getWinRewardsAddress(), _toDistribute / 4));
    }

    function distributeFees(uint256 _amount) external onlyAuth nonReentrant returns(bool){
        uint256 toStakers = _amount * 8000 / 10000;
        uint256 _toDistribute = _amount * 1000 / 10000;

        address _stakingAddress = gameAddresses.getStakingAddress();
        // 80% to stakers
        IStaking(_stakingAddress).receiveFees(toStakers);
        require(BZAI.transfer(_stakingAddress, toStakers));
        // 10 % for teams members
        require(BZAI.transfer(gameAddresses.getTeamAddress(), _toDistribute));

        // 5%  for reward challenge in game (daily and weekly ranking)
        require(BZAI.transfer(gameAddresses.getChallengeRewardsAddress(), _toDistribute / 2));
        // 5% for winning contract (where each win in game give 0.1% of the win pool to the user)
        return (BZAI.transfer(gameAddresses.getWinRewardsAddress(), _toDistribute / 2));
    }
    
    function rewardPlayer(address _user, uint256 _amount) external onlyAuth nonReentrant returns(bool){
        _myReward[_user] += _amount;
        return true;
    }

    function useReward(address _user, uint256 _amount) external onlyAuth nonReentrant returns(bool){
        require(_myReward[_user] - _amount >= 0,'Not enough credit');
        _myReward[_user] -= _amount;
        return true;
    }

    function claimReward() external nonReentrant returns(bool){
        uint256 _reward = _myReward[msg.sender];
        _myReward[msg.sender] = 0;
        uint256 _toBurn = _reward * 20 / 100;

        require(BZAI.burn(_toBurn));
        return BZAI.transfer(msg.sender, _reward - _toBurn);
    }

    function claimMyCentersRevenues() external nonReentrant returns(bool){
        uint256 _revenues = _myCentersRevenues[msg.sender];
        _myCentersRevenues[msg.sender] = 0;

        return BZAI.transfer(msg.sender, _revenues);
    }
}

