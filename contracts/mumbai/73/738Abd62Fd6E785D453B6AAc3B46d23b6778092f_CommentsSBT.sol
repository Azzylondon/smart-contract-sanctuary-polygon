pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import "./ISoulboundToken.sol";
import "../extendable/IExtendable.sol";

contract SoulboundToken is Context, ERC165, ISoulboundToken {
    using Address for address;
    using ERC165Checker for address;
    using Strings for address;

    struct Asset {
        address assetAddress;
        uint256 assetTokenId;
    }

    bytes4 public INTERFACE_ID = 0x6887f9e4;

    string private _name;

    string private _symbol;

    mapping(uint256 => string) private _tokenURIs;

    mapping(uint256 => Asset) private _assets;

    mapping(address => mapping(uint256 => uint256[])) private _tokens;

    constructor(string memory name_, string memory symbol_) {
        _name = name_;
        _symbol = symbol_;
    }

    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        _requireMinted(tokenId);
        return _tokenURIs[tokenId];
    }

    function tokenOf(uint256 tokenId)
        public
        view
        virtual
        override
        returns (address, uint256)
    {
        _requireMinted(tokenId);
        Asset memory soul = _assets[tokenId];
        return (soul.assetAddress, soul.assetTokenId);
    }

    function tokenSupplyOf(address asset, uint256 assetId)
        public
        view
        virtual
        override
        returns (uint256)
    {
        return _tokens[asset][assetId].length;
    }

    function tokenOfAssetByIndex(
        address asset,
        uint256 assetId,
        uint256 index
    ) public view virtual override returns (uint256) {
        return _tokens[asset][assetId][index];
    }

    // The following functions are extensions to ISoulboundToken.

    function _mint(
        address asset,
        uint256 assetId,
        uint256 tokenId,
        string memory uri
    ) internal {
        _tokenURIs[tokenId] = uri;
        _assets[tokenId] = Asset(asset, assetId);
        _tokens[asset][assetId].push(tokenId);

        emit Mint(tokenId, asset, assetId);
    }

    function _requireMinted(uint256 tokenId) internal view virtual {
        require(_exists(tokenId), "SoulboundToken: invalid token ID");
    }

    function _exists(uint256 tokenId) internal view virtual returns (bool) {
        return
            _assets[tokenId].assetAddress != address(0) &&
            _assets[tokenId].assetTokenId != 0;
    }

    function _requireExtendable(address asset) internal view {
        require(
            asset.supportsInterface(type(IExtendable).interfaceId),
            "SoulboundToken: interface not supported"
        );
    }

    function _requestAssetExists(address asset, uint256 assetId) internal view {
        require(
            asset.supportsInterface(type(IERC721).interfaceId),
            "SoulboundToken: interface not supported"
        );
        require(IERC721(asset).ownerOf(assetId) != address(0));
    }
}