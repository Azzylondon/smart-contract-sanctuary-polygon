        return _rewardContractAddress;
    }

    /**
     * @notice Used to set point contract's address, if we need to change point's implementation
     */
    function setPointContractAddress(address pointContractAddress) external onlyRole(SUPERADMIN_ROLE) {
        _pointContractAddress = pointContractAddress;

        emit PointContractAddressChanged(pointContractAddress);
    } 

