 * @dev InventoryBeacon can used to sharing state between object's implementation
 */
contract InventoryBeacon is Access, UpgradeableBeacon, IInventoryRegistry {

    address private _pointContractAddress;
    address private _rewardContractAddress;
    address private _currentImplAddress;

    error InvalidAddress();

    event PointContractAddressChanged(
        address indexed pointAddr
    );
    
    event RewardContractAddressChanged(
        address indexed rewardAddr 
    );

    /**
     * @notice This contract depends on inventory's implementation address, point and reward contract's addresses
     * @dev This constructor used to initiate first values for point , reward and implementation address
     */
    constructor(address implAddress, address pointAddr, address rewardAddr) UpgradeableBeacon(implAddress) {
        if ( implAddress == address(0) ) { revert InvalidAddress(); }
        if ( pointAddr == address(0) ) { revert InvalidAddress(); }
        if ( rewardAddr == address(0) ) { revert InvalidAddress(); }

        _pointContractAddress = pointAddr;
        _rewardContractAddress = rewardAddr;
        _currentImplAddress = implAddress;

        _installAccessControl(msg.sender);
    } 

