pragma solidity 0.8.7;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/interfaces/IERC721Enumerable.sol";





contract NftUtils is Context {

    uint private constant PAGE_SIZE = 100;

    function idsOwnedByAddress(address erc721ContractAddress, address owner, uint page) external view returns (uint256[] memory) {
        IERC721Enumerable nftContract = IERC721Enumerable(erc721ContractAddress);
        uint256 balance = nftContract.balanceOf(owner);
        uint startIdx = PAGE_SIZE * page;
        if (balance == 0 || startIdx >= balance) {
            return new uint[](0);
        }

        uint elementsInPage = PAGE_SIZE > balance - startIdx ? balance - startIdx : PAGE_SIZE;

        uint counter = 0;
        uint[] memory tokensIds = new uint[](elementsInPage);
        for (uint i = startIdx; i < startIdx + elementsInPage; i++) {
            tokensIds[counter++] = nftContract.tokenOfOwnerByIndex(owner, i);
        }
        return tokensIds;
    }
}

