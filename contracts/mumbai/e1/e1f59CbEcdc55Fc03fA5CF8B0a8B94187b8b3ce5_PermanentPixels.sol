pragma solidity ^0.8.9;

import "erc721a/contracts/ERC721A.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "base64-sol/base64.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";

contract PermanentPixels is ERC721A, Ownable, VRFConsumerBase {
    using Strings for uint256;

    // Constructor variables
    uint256 internal fee;
    bytes32 internal keyHash;

    // Compiler will pack this into one "slot"
    struct RandomnessRequest {
        uint128 startId;
        uint128 endId; // Exclusive
    }

    // Token storing
    uint256 internal currentTokenNumber = 1;
    mapping(bytes32 => RandomnessRequest) internal randomnessRequestInfo;

    // TODO Decide what this should be
    uint256 constant internal TOKEN_LIMIT = 10000001;

    uint256[TOKEN_LIMIT] internal tokenSeeds;

    // SVG Constants
    bytes constant internal SVG =
        "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 50 50'>"
        "<rect x='0' y='0' height='50' width='50' fill='white'/>"
        "<path stroke-width='1' stroke='black' fill='none' d='M0 .5";
    bytes constant internal END_SVG = "'/></svg>";

    // SVG
    struct SvgBuilder {
        // Output
        uint256 blackPixels;
        bytes svgString;
        uint256 svgPtr;
        // Pixel tracking
        uint256 blackPixelsInARow;
    }

    // Events
    event ManualRandomnessRequested(bytes32 oldRequestId, bytes32 newRequestId);
    event PauseStateUpdated(bool oldState, bool newState);

    bool public paused = false;

    constructor(
        address vrfCoordinator,
        address linkToken,
        bytes32 _keyHash,
        uint256 _fee
    )
        ERC721A("PermanentPixels", "PXL")
        VRFConsumerBase(vrfCoordinator, linkToken)
    {
        keyHash = _keyHash;
        fee = _fee;
    }

    /**
        Mint a positive number of Permanent Pixels

        @param _mintAmount number of Pixels to mint
     */
    function mint(uint256 _mintAmount) public payable {
        require(!paused, "Try again later!");
        require(_mintAmount < 1001, "1000 token mint limit!");
        require(_mintAmount > 0, "Not enough tokens!");
        require(currentTokenNumber + _mintAmount < TOKEN_LIMIT, "Mint fewer tokens!");

        if (msg.sender != owner()) {
            // need to figure out how to set cost in MATIC- change '0.05 ether' to cost we want
            require(msg.value >= 0.0005 ether * _mintAmount, "Minting requires more funds!");
        }

        

        uint256 iterations = _mintAmount / 10;
        uint128 startToken = uint128(currentTokenNumber);
        currentTokenNumber += _mintAmount;
        for (uint256 i = 0; i < iterations; i++) {
            RandomnessRequest storage request = randomnessRequestInfo[getRandomNumber()];
            request.startId = uint128(startToken);
            startToken += 10;
            if (startToken < _mintAmount) {
                request.endId = startToken;
            }
            else {
                request.endId = uint128(_mintAmount);
            }
        }

        _safeMint(msg.sender, _mintAmount);
    }

    /**
     * Function to create seed(s) for token(s) in the event that VRF did not reply
     */
    function manuallyReRequestRandomness(bytes32 originalRequestId) public onlyOwner {
        // Ensure there was an original request
        RandomnessRequest storage request = randomnessRequestInfo[originalRequestId];
        // Can only re-request for already minted tokens
        // which have not had their randomness fulfilled
        require(_exists(request.startId), "Token not yet minted");
        require(_exists(request.endId - 1), "Token not yet minted");

        // When we recieve randomness, we delete the original request
        require(request.startId != request.endId, "Randomness already received");

        bytes32 requestId = getRandomNumber();
        RandomnessRequest storage newRequest = randomnessRequestInfo[requestId];
        newRequest.startId = request.startId;
        newRequest.endId = request.endId;

        // Mark old request as fulfilled
        request.endId = request.startId;
    }

    function tokenURI(uint256 tokenId) public view override returns(string memory svgUri) {
        tokenId -= 1;
        require(_exists(tokenId), "Token hasn't been minted yet!");
        require(tokenSeeds[tokenId] != 0, "Haven't recieved randomness yet!");
        svgUri = buildURIEncodedPP(tokenId);
    }

    function buildURIEncodedPP(uint256 tokenId)
        internal
        view
        returns (string memory)
    {
        uint256 randomSeed = tokenSeeds[tokenId];

        (string memory pp, uint256 blackPixels) = createRandomSVG(
            randomSeed,
            50
        );

        bytes memory skew = blackPixels < 1250
            ? bytes("white")
            : blackPixels > 1250
            ? bytes("black")
            : bytes("none");

        int256 difference = 1250 - int256(blackPixels);
        if (difference < 0) {
            difference = -difference;
        }

        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    string(
                        Base64.encode(
                            abi.encodePacked(
                                /* solhint-disable quotes */
                                '{"name": "Permanent Pixel ',
                                (tokenId + 1).toString(),
                                '","randomSeed": "',
                                randomSeed.toString(),
                                '","attributes": [{'
                                '"trait_type": "skew",'
                                '"value": "',
                                skew,
                                '"}, {'
                                    '"trait_type": "rarity",'
                                    '"value": ',
                                    uint256(difference).toString(),
                                '}],'
                                '"image":"',
                                'data:image/svg+xml;base64,',
                                pp,
                                '"}'
                                /* solhint-enable quotes */
                            )
                        )
                    )
                )
            );
    }

    function createRandomSVG(uint256 randomness, int256 n)
        private
        pure
        returns (string memory, uint256)
    {
        require(n > 0, "n < 0");
        require(n <= 50, "n > 50");

        SvgBuilder memory output;

        uint256 mask = 1;

        output.svgString = new bytes(calculateTotalSvgSize(uint256(n)));

        bool isBlackPixel;

        appendToSvg(output, SVG);

        // Keep track of how many black pixels we have in a row
        output.blackPixelsInARow = 0;

        // Where to start drawing black pixels
        uint256 startX = ~uint256(0);
        bytes memory tempIntBytes;

        // Store where we left off drawing so we can
        // Move relatively to our next start
        int256 lastX;
        int256 lastY;

        for (int256 y = 0; y < n; y++) {
            for (int256 x = 0; x < n; x++) {
                if (mask == 0) {
                    mask = 1;
                    randomness = uint256(keccak256(abi.encode(randomness)));
                }

                isBlackPixel = randomness & mask == 0;
                mask = mask << 1;
                output.blackPixels += isBlackPixel ? 1 : 0;

                if (!isBlackPixel) {
                    // We've gotten to a white pixel
                    // See if we need to draw any black pixels
                    if (output.blackPixelsInARow > 0) {
                        // output += " h <output.blackPixelsInARow"
                        appendToSvg(output, bytes("h"));

                        tempIntBytes = bytes(
                            output.blackPixelsInARow.toString()
                        );

                        appendToSvg(output, tempIntBytes);

                        // reset our start point
                        startX = ~uint256(0);
                        output.blackPixelsInARow = 0;

                        // Where to start our relative moven
                        lastX = (x);
                        lastY = (y);
                    }
                } else {
                    // Set our start point
                    if (startX == ~uint256(0)) {
                        // Need to move our cursor to the first black pixel
                        // output += " m x y "
                        // lowercase 'm' -> relative movement
                        appendToSvg(output, bytes("m"));

                        if (x - lastX < 0) {
                            appendByteToSvg(output, "-");
                            tempIntBytes = bytes(
                                uint256(0 - (x - lastX)).toString()
                            );
                        } else {
                            tempIntBytes = bytes(uint256(x - lastX).toString());
                        }

                        appendToSvg(output, tempIntBytes);
                        appendByteToSvg(output, " ");

                        if (y - lastY < 0) {
                            appendByteToSvg(output, "-");
                            tempIntBytes = bytes(
                                uint256(0 - (y - lastY)).toString()
                            );
                        } else {
                            tempIntBytes = bytes(uint256(y - lastY).toString());
                        }

                        appendToSvg(output, tempIntBytes);

                        startX = uint256(x);
                    }
                    output.blackPixelsInARow++;
                }
            }
            // Before we go on to the next row,
            // Check if we need to add any pixels
            if (output.blackPixelsInARow > 0) {
                tempIntBytes = bytes(output.blackPixelsInARow.toString());
                appendToSvg(output, bytes("h"));

                appendToSvg(output, tempIntBytes);

                output.blackPixelsInARow = 0;
                startX = ~uint256(0);
                lastX = n;
                lastY = y;
            }
        }

        appendToSvg(output, END_SVG);

        // Change the length of the svgString bytes array
        // so we don't encode a bunch of null bytes at the end
        // of our svg output

        // solhint-disable-next-line no-inline-assembly
        assembly {
            let svgPtr := mload(add(output, 0x20))
            let svgLength := mload(add(output, 0x40))
            mstore(svgPtr, svgLength)
        }

        return (Base64.encode(output.svgString), output.blackPixels);
    }

    function appendByteToSvg(SvgBuilder memory svg, bytes1 singleByte)
        private
        pure
    {
        svg.svgString[svg.svgPtr++] = singleByte;
    }

    function appendToSvg(SvgBuilder memory svg, bytes memory inputBytes)
        private
        pure
    {
        for (uint8 i = 0; i < inputBytes.length; i++) {
            svg.svgString[svg.svgPtr++] = inputBytes[i];
        }
    }

    function calculateTotalSvgSize(uint256 n) private pure returns (uint256) {
        // Theory: for a checker board pattern:
        // m1 0h1
        // This is 6 chars * (n * n / 2)
        return ((n * n) / 2) * 6;
    }

    function pause(bool _state) public onlyOwner {
        bool temp = paused;
        paused = _state;
        emit PauseStateUpdated(temp, paused);
    }

    /**
        Withdraw all chain currency to the owners wallet
     */
    function withdraw() public onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    /**
        Withdraw all of any ERC20 token to the owners wallet
     */
    function withdrawERC20Token(address tokenAddress) public onlyOwner {
        require(tokenAddress != address(0), "0 Token address");
        ERC20 tokenContract = ERC20(tokenAddress);

        tokenContract.transfer(owner(), tokenContract.balanceOf(address(this)));
    }

    function getRandomNumber() public virtual returns (bytes32 requestId) {
        require(
            LINK.balanceOf(address(this)) >= fee,
            "Not enough LINK!"
        );
        return requestRandomness(keyHash, fee);
    }

    function fulfillRandomness(bytes32 requestId, uint256 randomness)
        internal
        override
    {
        // Use storage so we mark the request as fulfilled
        RandomnessRequest storage request = randomnessRequestInfo[requestId];
        require(request.startId != request.endId, "Randomness already received!");
        setTokenSeed(request.startId, request.endId, randomness);

        // Signify that a request has been fulfilled
        request.endId = request.startId;
    }

    /**
     * Set a range of token random seeds from start (inclusive) to end (exclusive)
     */
    function setTokenSeed(uint128 start, uint128 end, uint256 seed) internal {
        tokenSeeds[start] = seed;

        for (uint128 i = start + 1; i < end; i++) {
            tokenSeeds[i] = uint256(keccak256(abi.encode(seed + i)));
        }
    }
}

