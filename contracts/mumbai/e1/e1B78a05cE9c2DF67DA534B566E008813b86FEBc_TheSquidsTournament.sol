pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "cojodi/contracts/access/MerkleClaim.sol";

contract TheSquidsTournament is MerkleClaim {
  using SafeMath for uint256;

  enum TournamentPhase {
    SUSPENDED,
    DEPOSIT,
    CLAIM
  }

  TournamentPhase public currentPhase;
  IERC20 public token;

  uint256 public participationPrice;
  uint256 public lifePrice;

  mapping(address => bool) public participants;

  event UserParticipates(address indexed user, uint256 amount);
  event UserBoughtLives(address indexed user, uint256 amount);
  event UserClaimed(address indexed user, uint256 amount);

  constructor() MerkleClaim() {
    currentPhase = TournamentPhase.SUSPENDED;
  }

  function setPhase(TournamentPhase phase_) external onlyOwner {
    currentPhase = phase_;
  }

  function setParticipationFee(uint256 amount_) external onlyOwner {
    participationPrice = amount_;
  }

  function setToken(address addr_) external onlyOwner {
    token = IERC20(addr_);
  }

  function participate() external isPhase(TournamentPhase.DEPOSIT) {
    transferDNA(msg.sender, address(this), participationPrice);
    participants[msg.sender] = true;
    amountClaimed[msg.sender] = false;

    emit UserParticipates(msg.sender, 0);
  }

  function buyLives(uint256 amount_) external {
    transferDNA(msg.sender, address(this), lifePrice.mul(amount_));

    emit UserBoughtLives(msg.sender, amount_);
  }

  function claim(bytes32[] calldata merkleProof_, uint256 amount_)
    external
    isPhase(TournamentPhase.CLAIM)
    canClaim(merkleProof_, amount_)
  {
    // TODO send amount of DNA to user
    participants[msg.sender] = false;
    emit UserClaimed(msg.sender, amount_);
  }

  function reset() external isPhase(TournamentPhase.CLAIM) {
    participants[msg.sender] = false;
    emit UserClaimed(msg.sender, 0);
  }

  function transferDNA(
    address from_,
    address to_,
    uint256 amount_
  ) internal {
    bool okay = token.transferFrom(from_, to_, amount_);
    require(okay, "transfer failed");
  }

  modifier isPhase(TournamentPhase phase_) {
    require(currentPhase == phase_, "wrong phase");
    _;
  }
}

