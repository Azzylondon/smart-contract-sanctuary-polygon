    require(order.seller == nftRegistry.ownerOf(assetId), "MarketplaceV2#_executeOrder: SELLER_NOT_OWNER");


    delete orderByAssetId[nftAddress][assetId];

    // uint256 feesCollectorShareAmount;
    // uint256 royaltiesShareAmount;
