    // Transfer sale amount to seller
    uint256 creatorFeePercentage = CollectionAdder(collectionAdderAddress).collectionFees(nftAddress);
    uint256 creatorFee = price * creatorFeePercentage / 100;
    uint256 publicationFee = price * publicationFeePercentage / 100;
