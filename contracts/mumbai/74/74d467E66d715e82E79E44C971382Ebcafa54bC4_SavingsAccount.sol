pragma solidity ^0.8.7;

import "IERC20.sol";
import "Ownable.sol";

contract SavingsAccount is Ownable {
    string public name = "NFTsave treasury";
    IERC20 public NFTSaveToken;

    address[] public users;
    // token > address
    mapping(address => mapping(address => uint256)) public savingsBalance;
    mapping(address => uint256) public uniqueTokensDeposited;
    address[] public allowedTokens;

    constructor(address _TokenAddress) public {
        NFTSaveToken = IERC20(_TokenAddress);
    }

    function addAllowedTokens(address token) public onlyOwner {
        allowedTokens.push(token);
    }

    function depositTokens(uint256 _amount, address token) public {
        // Require amount greater than 0
        require(_amount > 0, "amount cannot be 0");
        require(tokenIsAllowed(token), "Token currently isn't allowed");
        updateUniqueTokensDeposited(msg.sender, token);
        IERC20(token).transferFrom(msg.sender, address(this), _amount);
        savingsBalance[token][msg.sender] =
            savingsBalance[token][msg.sender] +
            _amount;
        if (uniqueTokensDeposited[msg.sender] == 1) {
            users.push(msg.sender);
        }
    }

    // Unstaking Tokens (Withdraw)
    function withdrawTokens(address token) public {
        // Fetch staking balance
        uint256 balance = savingsBalance[token][msg.sender];
        require(balance > 0, "staking balance cannot be 0");
        IERC20(token).transfer(msg.sender, balance);
        savingsBalance[token][msg.sender] = 0;
        uniqueTokensDeposited[msg.sender] =
            uniqueTokensDeposited[msg.sender] -
            1;
    }

    function tokenIsAllowed(address token) public returns (bool) {
        for (
            uint256 allowedTokensIndex = 0;
            allowedTokensIndex < allowedTokens.length;
            allowedTokensIndex++
        ) {
            if (allowedTokens[allowedTokensIndex] == token) {
                return true;
            }
        }
        return false;
    }

    function updateUniqueTokensDeposited(address user, address token) internal {
        if (savingsBalance[token][user] <= 0) {
            uniqueTokensDeposited[user] = uniqueTokensDeposited[user] + 1;
        }
    }

    // Issuing Tokens
    function issueRewards() public onlyOwner {
        // Issue tokens to all stakers
        for (uint256 usersIndex = 0; usersIndex < users.length; usersIndex++) {
            address recipient = users[usersIndex];
            NFTSaveToken.transfer(recipient, 5);
        }
    }
}

