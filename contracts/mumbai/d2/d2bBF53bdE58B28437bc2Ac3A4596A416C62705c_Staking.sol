contract Staking is 
    Ownable,
    ReentrancyGuard,
    Pausable
{
    
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC1155 public ERC1155Token;
    IERC20   public ORareToken;
    
    mapping(address => UserInfo) public stakeHolders;
    mapping(address=>AdminData) setAdmin;
    mapping(uint256=>mapping(address=>RewardsInfo)) rewardsData;
    
    uint256 public emissionRate;
    uint256 public minStake;
    uint256 public contractStartTime;
    uint public constant decimal = 10**18;
    uint256 public perDayBlock = 43200;  //matic mainnet 
    uint256 public totalStakedAmount;
    uint256 public changeERBlockNumber;
    
    //user 
    struct UserInfo
    {
        uint256 stakedBlockNumber;
        uint256 depositAmount;
        uint256 participantStakedAddress;
        uint256 stakedAddressIndex;
        uint256 totalEarnedNFT;
    }

    struct RewardsInfo
    {
        uint256 lastClaimedBlockNumber; 
        uint256 tempNFT;
        bool updatedLastClaimedBlockNumber;
    }

    //Admin
    struct AdminData
    {
        bool approval;
        uint256 index;
    }

    address[] admins;
    address[] stakedAddress; 

    event Staked(address indexed user, uint256 amount);
    event UnStaked(address indexed user, uint256 amount);
    event Claimed(address user,uint256 rewards);
    event SystemTransferNFT(address user,uint256 rewards);
    event EmissionRateChange(uint256 rate);

    constructor(
        address _token,
        address _erc1155Token,
        uint256 _emissionRate,
        uint256 _minStake
    )
    {
        require(
            _erc1155Token != address(0),
            "_erc1155Token cannot be zero address"
        );
        require(
            _token != address(0),
            "ORareToken cannot be zero address"
        );

        ERC1155Token = IERC1155(_erc1155Token);
        ORareToken = IERC20(_token);
        minStake = _minStake;
        emissionRate = _emissionRate;
        changeERBlockNumber=0;
        contractStartTime = block.timestamp; 
    }   
    
    // set emission rate for distribution
    function setEmissionRate(uint256 _rate) 
      external 
      onlyOwner 
    {
        emissionRate = _rate;
        changeERBlockNumber = block.number;
        emit EmissionRateChange(_rate);
    }

    function setAdminAddress(address _address) 
      external
      onlyOwner
    {
       setAdmin[_address].approval = true;
       setAdmin[_address].index =  admins.length;
       admins.push(_address);
    }

    function removeAdminAddress(address _address)
      external
      onlyOwner
    {
        setAdmin[_address].approval = false;
        delete admins[(setAdmin[_address].index )];
    }
 
    function recoverETH(uint256 amount) 
      external 
      onlyOwner 
    {
        (bool success,) = msg.sender.call{value:amount}("");
        require(success,"refund failed"); 
    }

    function recoverERC1155(IERC1155 token,uint256 tokenId,uint256 amount) 
      external 
      onlyOwner 
    {
        token.safeTransferFrom(
            address(this),
            msg.sender,
            tokenId,
            amount,
            "0x"
        );
    }

    //stake tokens for rewards 
    function stake(uint256 _amount) 
      external 
      whenNotPaused
    {
        require(ORareToken.allowance(msg.sender,address(this)) >= _amount,"allowance is not enough");

        ORareToken.safeTransferFrom(msg.sender, address(this), _amount);
                  
        if(stakeHolders[msg.sender].participantStakedAddress == 0)
        {
            stakeHolders[msg.sender].stakedBlockNumber = block.number;
            stakeHolders[msg.sender].stakedAddressIndex = stakedAddress.length;
            stakedAddress.push(msg.sender);
            stakeHolders[msg.sender].participantStakedAddress=1;
        }
        else
        {
            updateDistributedToken(msg.sender);
        }
        
        stakeHolders[msg.sender].depositAmount = stakeHolders[msg.sender].depositAmount.add(_amount);
        rewardsData[emissionRate][msg.sender].lastClaimedBlockNumber = block.number;
        rewardsData[emissionRate][msg.sender].updatedLastClaimedBlockNumber = true;
        totalStakedAmount = totalStakedAmount.add(_amount);
        
        emit Staked(msg.sender,_amount);
    }
    
    function unStake() 
      external
      whenNotPaused
    {
        require(stakeHolders[msg.sender].depositAmount!=0,"staked amount is zero");
        ORareToken.safeTransfer(msg.sender,stakeHolders[msg.sender].depositAmount);
        
        uint256 rewards = getPendingDivs(msg.sender);

        if(rewards>0)
        {
            claim();
        }
     
        address shiftAddress = stakedAddress[(stakedAddress.length.sub(1))];
        stakeHolders[shiftAddress].stakedAddressIndex = stakeHolders[msg.sender].stakedAddressIndex;
        stakedAddress[(stakeHolders[msg.sender].stakedAddressIndex)] = shiftAddress;
        stakedAddress.pop();
        
        stakeHolders[msg.sender].participantStakedAddress=0;
        stakeHolders[msg.sender].depositAmount = 0;

        totalStakedAmount = totalStakedAmount.sub((stakeHolders[msg.sender].depositAmount));

        emit UnStaked(msg.sender,stakeHolders[msg.sender].depositAmount);
    }

    function systemTransfer(uint256[] memory _nftId,uint256[] memory _tokenIdsWonQty,address _to) 
       external
       whenNotPaused
       onlyOwner
       returns(
           bool
    ) 
    {        
        ERC1155Token.safeBatchTransferFrom(
            address(this),
            _to,
            _nftId,
            _tokenIdsWonQty,
            "0x0"
        );

        return true;
    }

    function onERC1155Received(address _operator, address _from, uint256 _id, uint256 _value, bytes calldata _data) 
      external  
      returns (
        bytes4
    )
    {
        return 0xf23a6e61;
    }
    
    function onERC1155BatchReceived(address _operator, address _from, uint256[] calldata _ids, uint256[] calldata _values, bytes calldata _data) 
      external  
      returns (
        bytes4
    )
    {
        return 0xbc197c81;
    }

    function getHoldersAddress()
      external
      view
      returns(
        address[] memory
    )
    {
        return stakedAddress;
    }

    function getUserInfo(address _address)
      external
      view
      returns(
        UserInfo memory
    )
    {
        return stakeHolders[_address];
    }

    function getRewardsData(address _address,uint256 _emissionRate)
      external
      view
      returns(
        RewardsInfo memory
    )
    {
        return rewardsData[_emissionRate][_address];
    }

// put check in claim 


    function claim()
      public
      whenNotPaused
    {
        uint256 rewards = getPendingDivs(msg.sender);
        require(rewards>0,"rewards equal to zero");
        rewardsData[emissionRate][msg.sender].tempNFT = 0;
        stakeHolders[msg.sender].totalEarnedNFT = stakeHolders[msg.sender].totalEarnedNFT.add(rewards);
        rewardsData[emissionRate][msg.sender].lastClaimedBlockNumber = block.number;
        rewardsData[emissionRate][msg.sender].updatedLastClaimedBlockNumber = true;
        emit Claimed(msg.sender,rewards);    
    }
    
    function getPendingDivs(address _holder)
        public
        view
        returns (
            uint256 _reward
    )
    {
        uint256 userPoolShare = (stakeHolders[msg.sender].depositAmount.mul(10000)).div(
            totalStakedAmount
        );

        uint256 blockDiff;  

        if(rewardsData[emissionRate][_holder].updatedLastClaimedBlockNumber)
        {
            blockDiff = block.number.sub(
               rewardsData[emissionRate][_holder].lastClaimedBlockNumber);
        }        
        else
        {
            blockDiff = block.number.sub(changeERBlockNumber);         
        }
        
        uint256 rewardPerBlock = ((emissionRate.mul(blockDiff)).mul(100000)).div(43200);
        _reward = ((userPoolShare.mul(rewardPerBlock)).add(rewardsData[emissionRate][_holder].tempNFT)).div(1000000000);
    }

    function getblockdiff(address _holder)
      public
      view
      returns(
         uint256,
         uint256,
         uint256,
         uint256
    )
    {
         uint256 userPoolShare = (stakeHolders[msg.sender].depositAmount.mul(10000)).div(
            totalStakedAmount
        );

        uint256 blockDiff;  

        if(rewardsData[emissionRate][_holder].updatedLastClaimedBlockNumber)
        {
            blockDiff = block.number.sub(
               rewardsData[emissionRate][_holder].lastClaimedBlockNumber);
        }        
        else
        {
            blockDiff = block.number.sub(changeERBlockNumber);         
        }

        uint256 rewardPerBlock = ((emissionRate.mul(blockDiff)).mul(100000)).div(43200);
        uint256 _reward = ((userPoolShare.mul(rewardPerBlock)).add(rewardsData[emissionRate][_holder].tempNFT)).div(1000000000);
        return(_reward,rewardPerBlock,blockDiff,userPoolShare);
    }
     
    function blockNumber()
      public
      view
      returns(
          uint256
      )
    {
        return block.number; 
    }



    function updateDistributedToken(address _account) 
       internal 
    {
        uint256 lastReward = getPendingDivs(_account);
        if (lastReward > 0) {
            rewardsData[emissionRate][_account].tempNFT = lastReward;
        }
    }
}