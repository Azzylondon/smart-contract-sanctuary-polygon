pragma solidity ^0.8.0;

import {Modifiers} from "../libraries/Modifiers.sol";
import "../libraries/LibPause.sol";

contract PauseFacet is Modifiers {
    event PauseToggled(bool state);
    event ManagerPauseToggled(address indexed manager, bool state);

    /// @notice pause or unpause platform
    /// @param _state desired state, true if paused
    function togglePause(bool _state) external onlyOwner {
        if (_state != LibPause.isPaused()) {
            LibPause.diamondStorage().isPaused = _state;
            emit PauseToggled(_state);
        }
    }

    /// @notice pause or unpause manager
    /// @param _manager manager address
    /// @param _state desired state, true if paused
    function toogleManagerPause(address _manager, bool _state) external onlyOwner {
        if (_state != LibPause.isManagerPaused(_manager)) {
            LibPause.diamondStorage().pausedManagers[_manager] = _state;
            emit ManagerPauseToggled(_manager, _state);
        }
    }

    /// @notice get global pause state
    function isPaused() external view returns (bool) {
        return LibPause.diamondStorage().isPaused;
    }

    /// @notice get manager pause state
    /// @param _manager manager address
    function isManagerPaused(address _manager) external view returns (bool) {
        return LibPause.diamondStorage().pausedManagers[_manager];
    }
}

