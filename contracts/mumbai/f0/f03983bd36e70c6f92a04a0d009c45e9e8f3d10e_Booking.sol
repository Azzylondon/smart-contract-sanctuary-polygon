pragma solidity 0.8.8;





contract Booking is IERC1363Receiver, Ownable {



    // console => day => hour => owner

    mapping(uint8 => mapping(uint16 => mapping(uint8 => address))) public booking;

    address public father;

    uint256 public price;



    function encode(uint8 start, uint8 duration, uint8 console, uint16 day) public pure returns(bytes memory) {

        return abi.encode(start, duration, console, day);

    }



    function decode(bytes memory data) public pure returns(uint8 start, uint8 duration, uint8 console, uint16 day) {

        return abi.decode(data, (uint8, uint8, uint8, uint16));

    }



    constructor(address _father, uint256 _price) {

        father = _father;

        price = _price;

    }



    function changePrice(uint256 newPrice) external onlyOwner {

        price = newPrice;

    }



    function onTransferReceived(

        address operator,

        address from,

        uint256 value,

        bytes memory data

    ) external override returns(bytes4) {

        require(msg.sender == father, "Wrong sender");



        uint8 start;

        uint8 duration;

        uint8 console;

        uint16 day;



        (start, duration, console, day) = this.decode(data);

        require(value == duration * price, "Wrong value");



        for (uint8 hour = start; hour < start + duration; hour++) {

            require(booking[console][day][hour] == address(0), "Already reserved");

            booking[console][day][hour] = operator;

        }

        

        return 0x88a7ca5c;

    }



    



}