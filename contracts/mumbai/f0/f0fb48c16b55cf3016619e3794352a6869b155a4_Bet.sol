pragma solidity ^0.8.7;


contract Bet {

    using SafeMath for uint256;

    enum State
    {
      NonExistent,
      Open,
      Closed
    }

    struct Bet {
        bool vote;
        uint total;
        User[] users;
    }

    struct User {
        uint amount;
        address user;
    }

    address private _owner;
    State public status;
    uint256 public balance;
    string public question = "Lula sera candidato?";

    constructor() public {
      _owner = msg.sender;
      status = State.NonExistent;
      balance = address(this).balance;
    }

    // events
    event NewVote(bool vote, uint amount);
    event End();

    // mapping
    mapping(bool => Bet) votes;

    // modifiers
    modifier onlyOwner() {
        require(isOwner(), "You are not the owner");
        _;
    }

    // Internal Functions

    function isOwner() public view returns (bool) {
      return _owner == msg.sender;
    }

    function updateBalance() internal {
        balance = address(this).balance;
    }

    // Public Functions

    function vote(bool _vote) public payable {
        require(status != State.Closed, "Bet already closed");
        require(msg.value > 0, "You can't bet 0 Matic");
        
        if (votes[_vote].total == 0){
            Bet storage newBet = votes[_vote];
            newBet.users.push(User(msg.value, msg.sender));
            newBet.vote = _vote;
            newBet.total = msg.value;
        } else {
            votes[_vote].users.push(User(msg.value, msg.sender));
            votes[_vote].total += msg.value;
        }

        updateBalance();
        status = State.Open;
        emit NewVote(_vote, msg.value);
    }

    function endBet(bool _winner) public onlyOwner {
        require(status != State.Closed, "Bet already closed");
        uint _balance = address(this).balance;
        uint total = votes[_winner].total;

        for (uint i = 0; i < votes[_winner].users.length; i++) {
            uint256 amount = votes[_winner].users[i].amount.mul(100).div(total);
            payable(votes[_winner].users[i].user).transfer(_balance.mul(amount).div(100));
            updateBalance();
        }
        status = State.Closed;
        emit End();

    }
}