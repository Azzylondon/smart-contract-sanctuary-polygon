pragma solidity ^0.8.9;

import {ICollectionBase} from "./ICollectionBase.sol";
import {DataTypes} from "../libraries/DataTypes.sol";

interface ICollectionV1 is ICollectionBase {
    /// @notice Stores data relevant about the collection's current configuration.
    /// @param isMintable whether the collection's tokens are mintable or not.
    /// @param totalMaxSupply the total maximum supply of tokens.
    /// @param totalSupply the total supply of tokens.
    /// @param isSoulbound whether the collection's tokens are transferable or not.
    /// @param metadataURI the contract-level metadata URI.
    /// @param baseURI the base URI for tokens in the collection.
    /// @param tiers a list of each of the collection's tier specs.
    struct Spec {
        bool isMintable;
        uint256 totalMaxSupply;
        uint256 totalSupply;
        bool isSoulbound;
        string metadataURI;
        string baseURI;
        DataTypes.TierSpec[] tiers;
    }

    /* -------------------------------- Functions ------------------------------- */
    /// @notice Mint `quantity` tokens to the given address `to`.
    /// @param to The address to which the tokens are minted.
    /// @param quantity The number of tokens to mint.
    /// @param tierIndex The index of the tier for the token to be minted in.
    /// @param sig See `DataTypes.EIP712Signature`.
    /// @return Returns the tokenId of the first minted token.
    function mintWithSig(
        address to,
        uint256 quantity,
        uint256 tierIndex,
        DataTypes.EIP712Signature calldata sig
    ) external returns (uint256);

    /// @notice Mint `quantity` tokens to the given address `to`.
    /// @param to The address to which the tokens are minted.
    /// @param quantity The number of tokens to mint.
    /// @param tierIndex The index of the tier for the token to be minted in.
    /// @return Returns the tokenId of the first minted token.
    function mint(
        address to,
        uint256 quantity,
        uint256 tierIndex
    ) external returns (uint256);

    /// @notice Change the tier of a token.
    /// @dev Stretches the tier max supply to accommodate the new token without affecting minting.
    /// @param tokenId The ID of the token.
    /// @param tierIndex The index of the tier to be upgraded to.
    /// @param sig See `DataTypes.EIP712Signature`.
    function updateTier(
        uint256 tokenId,
        uint256 tierIndex,
        DataTypes.EIP712Signature calldata sig
    ) external;

    /// @notice Sets values for the collection's mutable fields.
    /// See `Spec` for information on the parameters.
    /// @param sig See `DataTypes.EIP712Signature`.
    function setSpec(
        bool isMintable,
        bool isSoulbound,
        string calldata metadataURI,
        string calldata baseURI,
        DataTypes.EIP712Signature calldata sig
    ) external;

    /// @notice Sets values for a tier's mutable fields.
    /// If `tierIndex` is greater than the latest index, a new tier is created and pushed to the end of the list.
    /// @param tierIndex The index of the tier to set.
    /// @param tierSpec See `DataTypes.TierSpec`.
    /// @param sig See `DataTypes.EIP712Signature`.
    function setTierSpec(
        uint256 tierIndex,
        DataTypes.TierSpec calldata tierSpec,
        DataTypes.EIP712Signature calldata sig
    ) external;

    /// @notice Executes a transaction from the contract as the caller,
    /// @dev Used for withdrawing funds from the contract.
    function executeTx(
        address to,
        uint256 value,
        bytes calldata data
    ) external payable;

    /* ---------------------------------- Views --------------------------------- */
    /// @notice Returns the collection's current configuration as a [Spec] struct.
    function getSpec() external view returns (Spec memory);

    /// @notice Returns the contract-level metadata URI.
    function contractURI() external view returns (string memory);

    /// @notice Returns the name of the tier a token with `tokenId` belongs to.
    /// @param _tokenId The token ID to query the tier of.
    /// @dev Reverts for non-existent tokens.
    function tierOf(uint256 _tokenId)
        external
        view
        returns (string memory tierName);
}

