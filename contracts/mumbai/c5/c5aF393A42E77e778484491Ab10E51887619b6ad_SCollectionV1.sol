pragma solidity ^0.8.9;

import {ERC721AUpgradeable} from "erc721a-upgradeable/contracts/ERC721AUpgradeable.sol";
import {ERC721AStorage} from "erc721a-upgradeable/contracts/ERC721AStorage.sol";
import {IEIP712CollectionV1} from "../interfaces/IEIP712CollectionV1.sol";
import {DataTypes} from "../libraries/DataTypes.sol";
import {ECDSA} from "../libraries/ECDSA.sol";
import {BaseModifiers} from "../abstract/BaseModifiers.sol";

abstract contract EIP712CollectionV1 is
    IEIP712CollectionV1,
    ERC721AUpgradeable,
    BaseModifiers
{
    /* --------------------------- EIP712 Definitions --------------------------- */
    bytes32 internal constant EIP712_DOMAIN_TYPEHASH =
        keccak256(
            "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
        );
    bytes32 internal constant EIP712_REVISION_HASH = keccak256("1");

    /// @dev `permit` function EIP712 TYPEHASH
    bytes32 internal constant PERMIT_TYPEHASH =
        keccak256(
            "Permit(address spender,uint256 tokenId,uint256 nonce,uint256 deadline)"
        );
    /// @dev `permitForAll` function EIP712 TYPEHASH
    bytes32 internal constant PERMIT_FOR_ALL_TYPEHASH =
        keccak256(
            "PermitForAll(address owner,address operator,bool approved,uint256 nonce,uint256 deadline)"
        );
    /// @dev `burnWithSig` function EIP712 TYPEHASH
    bytes32 public constant BURN_WITH_SIG_TYPEHASH =
        keccak256(
            "BurnWithSig(uint256 tokenId,uint256 nonce,uint256 deadline)"
        );

    /// @dev For replay protection, signatures are required to have a nonce and a deadline.
    /// Nonces are stored and incremented by the contract.
    /// The deadline is received as a call parameter and verified in the signature by the contract.
    mapping(address => uint256) public sigNonce;

    /* -------------------------------- Functions ------------------------------- */
    function __EIP712CollectionV1_init(
        string memory _name,
        string memory _symbol
    ) internal initializerERC721A {
        __ERC721A_init(_name, _symbol);
    }

    /* ---------------------------- ERC721 Functions ---------------------------- */
    /// @inheritdoc IEIP712CollectionV1
    function permit(DataTypes.PermitData calldata _vars)
        public
        nonZeroAddress(_vars.spender)
    {
        address tokenOwner = ownerOf(_vars.tokenId);

        ECDSA.validate(
            _calculateDigest(
                keccak256(
                    abi.encode(
                        PERMIT_TYPEHASH,
