pragma solidity ^0.8.13;

import {ICollectionBase} from "./../interfaces/ICollectionBase.sol";
import {ICollectionV1} from "./../interfaces/ICollectionV1.sol";
import {CollectionManager} from "./../CollectionManager.sol";
import {EIP712CollectionV1} from "../abstract/EIP712CollectionV1.sol";
import {RolesSupportV1Initializable} from "../extensions/RolesSupportV1Initializable.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {IERC20Metadata} from "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {ERC2981} from "@openzeppelin/contracts/token/common/ERC2981.sol";
import {ERC721AUpgradeable} from "erc721a-upgradeable/contracts/ERC721AUpgradeable.sol";
import {DataTypes} from "../libraries/DataTypes.sol";
import {Errors} from "../libraries/Errors.sol";
import {ECDSA} from "../libraries/ECDSA.sol";

/// @title SCollectionV1
/// @notice This contract is a singleton to be used by the manager to deploy clone ERC721A contracts.
contract SCollectionV1 is
    ICollectionV1,
    RolesSupportV1Initializable,
    ERC2981,
    OwnableUpgradeable,
    EIP712CollectionV1
{
    using SafeERC20 for IERC20Metadata;

    /// @notice The CollectionManager contract to which this collection is linked to.
    CollectionManager public CM;

    /// @notice Collection's mutable fields Bitmap
    /// @dev Bitmap that denotes with each bit whether a certain field can be mutated by the owner.
    /// Each bit represents a field in the order of their declaration.
    uint256 public mutableFieldsBitmap;

    /// @notice Whether the collection's tokens are mintable or not.
    /// Bitmap bit #1
    bool public isMintable;

    /// @notice Wether the collection's tokens are transferable or not.
    /// Bitmap bit #2
    bool public isSoulbound;

    /// @notice The contract-level metadata URI.
    /// Bitmap bit #3
    string internal metadataURI;

    /// @notice The base URI for tokens in the collection.
    /// @dev This field could be empty. If so, the tier URI is used for all tokens instead.
    /// Bitmap bit #4
    string public baseURI;

    /// @notice The currency to be used for minting.
    /// Bitmap bit #5
    IERC20Metadata public mintCurrency;

    /// @notice Fields' mutable fields Bitmap
    /// @dev Bitmap that denotes with each bit whether a certain field can be mutated by the owner.
    /// Each bit represents a field in the order of their declaration in the {DataTypes.TierSpec} struct.
    /// All Tiers share the same mutability restrictions.
    uint256 public tierMutableFieldsBitmap;

    /// @notice A list of the defined tiers the contract has.
    /// @dev A collection with no tiers is considered to have a single tier.
    DataTypes.TierSpec[] public tiers;

    /// @notice A mapping of the tokenId to the tier's index in the `tiers` array.
    /// @dev TokenID => Index for `tiers` array.
    mapping(uint256 => uint256) public tierIndex;

    /// @notice A mapping of the tierIndex to the tier's current supply.
    /// @dev TierIndex => Supply
    mapping(uint256 => uint256) public tierSupply;

    modifier existsTier(uint256 _tierIndex) {
        if (_tierIndex >= tiers.length) {
            revert Errors.NonExistentTier(_tierIndex);
        }
        _;
    }

    modifier existsToken(uint256 _tokenId) {
        if (!_exists(_tokenId)) {
            revert Errors.NonExistentToken(_tokenId);
        }
        _;
    }

    /// @inheritdoc ICollectionBase
    /// @param _vars bytes to be decoded as per `DataTypes.CollectionV1Initialize`
    function initialize(bytes calldata _vars) external initializer {
        DataTypes.CollectionV1Initialize memory vars = abi.decode(
            _vars,
            (DataTypes.CollectionV1Initialize)
        );

        CM = CollectionManager(msg.sender);
        __EIP712CollectionV1_init(vars.name, vars.symbol);
        __RolesSupportV1Initializable_init(CM.roles());
        __Ownable_init();
        _transferOwnership(vars.owner);

        _setDefaultRoyalty(vars.royaltyReceiver, vars.royaltyBPS);

        mutableFieldsBitmap = vars.mutableFieldsBitmap;
        isMintable = vars.isMintable;
        isSoulbound = vars.isSoulbound;
        metadataURI = vars.metadataURI;
        baseURI = vars.baseURI;
        mintCurrency = IERC20Metadata(vars.mintCurrency);

        tierMutableFieldsBitmap = vars.tierMutableFieldsBitmap;
        /// @dev Direct copying array from memory to storage not supported by Solidity
        for (uint256 i = 0; i < vars.tiers.length; ) {
            tiers.push(vars.tiers[i]);
            unchecked {
                ++i;
            }
        }
    }

    bytes32 internal constant MINT_WITH_SIG_TYPEHASH =
        keccak256(
            "MintWithSig(address to,uint256 quantity,uint256 tierIndex,uint256 nonce,uint256 deadline)"
        );

    /// @inheritdoc ICollectionV1
    function mintWithSig(
        address _to,
        uint256 _quantity,
        uint256 _tierIndex,
        DataTypes.EIP712Signature calldata _sig
    ) external existsTier(_tierIndex) returns (uint256) {
        if (!isMintable) revert Errors.NotMintable();

        // Check tier's max supply is not exceeded
        if (tierSupply[_tierIndex] + _quantity > tiers[_tierIndex].maxSupply)
            revert Errors.MaxSupplyExceeded();

        address colOwner = owner();
        ECDSA.validate(
            _calculateDigest(
                keccak256(
                    abi.encode(
                        MINT_WITH_SIG_TYPEHASH,
                        _to,
                        _quantity,
                        _tierIndex,
                        sigNonce[colOwner]++,
                        _sig.deadline
                    )
                )
            ),
            colOwner,
            _sig
        );

        // Set the tier for all the tokens to be minted
        for (uint256 i = 0; i < _quantity; ) {
            tierIndex[_nextTokenId() + i] = _tierIndex;
            unchecked {
                ++i;
            }
        }

        _safeMint(_to, _quantity);

        return _nextTokenId() - _quantity;
    }

    /// @inheritdoc ICollectionV1
    function mint(
        address _to,
        uint256 _quantity,
        uint256 _tierIndex
    ) external existsTier(_tierIndex) returns (uint256) {
        if (!isMintable) revert Errors.NotMintable();

        // Check tier's max supply is not exceeded
        if (tierSupply[_tierIndex] + _quantity > tiers[_tierIndex].maxSupply)
            revert Errors.MaxSupplyExceeded();

        // Set the tier for all the tokens to be minted
        for (uint256 i = 0; i < _quantity; ) {
            tierIndex[_nextTokenId() + i] = _tierIndex;
            unchecked {
                ++i;
            }
        }

        _safeMint(_to, _quantity);

        _chargeMint(_quantity, _tierIndex);

        return _nextTokenId() - _quantity;
    }

    bytes32 internal constant UPDATE_TIER_TYPEHASH =
        keccak256(
            "UpdateTier(uint256 tokenId,uint256 tierIndex,uint256 nonce,uint256 deadline)"
        );

    /// @inheritdoc ICollectionV1
    function updateTier(
        uint256 _tokenId,
        uint256 _tierIndex,
        DataTypes.EIP712Signature calldata _sig
    ) external existsTier(_tierIndex) existsToken(_tokenId) {
        if (tierIndex[_tokenId] == _tierIndex) revert Errors.InvalidUpgrade();

        address colOwner = owner();
        ECDSA.validate(
            _calculateDigest(
                keccak256(
                    abi.encode(
                        UPDATE_TIER_TYPEHASH,
                        _tokenId,
                        _tierIndex,
                        sigNonce[colOwner]++,
                        _sig.deadline
                    )
                )
            ),
            colOwner,
            _sig
        );

        _updateTier(_tokenId, _tierIndex);
    }

    function _updateTier(uint256 _tokenId, uint256 _tierIndex) internal {
        uint256 currentTierIndex = tierIndex[_tokenId];

        // Stretch tier max supplies
        // This allows minting to not be affected by upgraded tokens
        // But ensures total supply consistency
        tiers[currentTierIndex].maxSupply--;
        tiers[_tierIndex].maxSupply++;

        // Update current tier supplies
        tierSupply[currentTierIndex]--;
        tierSupply[_tierIndex]++;

        // Update the token's tier
        tierIndex[_tokenId] = _tierIndex;
    }

    function _chargeMint(uint256 _quantity, uint256 _tierIndex) internal {
        if (_hasFeeWaiverRole(msg.sender)) return;

        uint256 price = tiers[_tierIndex].price;
        if (price > 0) {
            uint256 total = _quantity *
                ((price * (10**mintCurrency.decimals())) / 10**18);

            mintCurrency.safeTransferFrom(msg.sender, address(this), total);
        }
    }

    /* --------------------------------- Setters -------------------------------- */
    bytes32 internal constant SET_SPEC_TYPEHASH =
        keccak256(
            "SetSpec(bool isMintable,bool isSoulbound,string metadataURI,string baseURI,uint256 nonce,uint256 deadline)"
        );

    /// @inheritdoc ICollectionV1
    function setSpec(
        bool _isMintable,
        bool _isSoulbound,
        string calldata _metadataURI,
        string calldata baseURI_,
        DataTypes.EIP712Signature calldata _sig
    ) external {
        address colOwner = owner();
        ECDSA.validate(
            _calculateDigest(
                keccak256(
                    abi.encode(
                        SET_SPEC_TYPEHASH,
                        _isMintable,
                        _isSoulbound,
                        keccak256(bytes(_metadataURI)),
                        keccak256(bytes(baseURI_)),
                        sigNonce[colOwner]++,
                        _sig.deadline
                    )
                )
            ),
            colOwner,
            _sig
        );

        if (_isFieldMutable(1, mutableFieldsBitmap)) isMintable = _isMintable;

        if (_isFieldMutable(2, mutableFieldsBitmap)) {
            isSoulbound = _isSoulbound;
        }

        if (_isFieldMutable(4, mutableFieldsBitmap)) {
            metadataURI = _metadataURI;
        }

        if (_isFieldMutable(8, mutableFieldsBitmap)) {
            baseURI = baseURI_;
        }
    }

    bytes32 internal constant SET_TIER_SPEC =
        keccak256(
            "SetTierSpec(uint256 tierIndex,TierSpec tierSpec,uint256 nonce,uint256 deadline)TierSpec(uint256 maxSupply,uint256 price,string name,string metadataURI)"
        );

    bytes32 internal constant TIER_SPEC_TYPEHASH =
        keccak256(
            "TierSpec(uint256 maxSupply,uint256 price,string name,string metadataURI)"
        );

    /// @inheritdoc ICollectionV1
    function setTierSpec(
        uint256 _tierIndex,
        DataTypes.TierSpec calldata _tierSpec,
        DataTypes.EIP712Signature calldata _sig
    ) external {
        address colOwner = owner();
        ECDSA.validate(
            _calculateDigest(
                keccak256(
                    abi.encode(
                        SET_TIER_SPEC,
                        _tierIndex,
                        keccak256(
                            abi.encode(
                                TIER_SPEC_TYPEHASH,
                                _tierSpec.maxSupply,
                                _tierSpec.price,
                                keccak256(bytes(_tierSpec.name)),
                                keccak256(bytes(_tierSpec.metadataURI))
                            )
                        ),
                        sigNonce[colOwner]++,
                        _sig.deadline
                    )
                )
            ),
            colOwner,
            _sig
        );

        // Create a new Tier if it doesn't exist
        if (_tierIndex >= tiers.length) {
            tiers.push(_tierSpec);
            return;
        }

        DataTypes.TierSpec storage tier = tiers[_tierIndex];

        if (_isFieldMutable(1, tierMutableFieldsBitmap)) {
            if (tierSupply[_tierIndex] > _tierSpec.maxSupply) {
                revert Errors.InvalidMaxSupply(tierSupply[_tierIndex]);
            } else {
                tier.maxSupply = _tierSpec.maxSupply;
            }
        }

        if (_isFieldMutable(2, tierMutableFieldsBitmap)) {
            tier.price = _tierSpec.price;
        }

        if (_isFieldMutable(4, tierMutableFieldsBitmap)) {
            tier.name = _tierSpec.name;
        }

        if (_isFieldMutable(8, tierMutableFieldsBitmap)) {
            tier.metadataURI = _tierSpec.metadataURI;
        }
    }

    /// @inheritdoc ICollectionV1
    function executeTx(
        address _to,
        uint256 value,
        bytes calldata _data
    ) external payable nonZeroAddress(_to) onlyOwner {
        (bool success, bytes memory r) = _to.call{value: value}(_data);
        require(success, string(r));
    }

    /* ---------------------------------- Views --------------------------------- */
    /// @inheritdoc ICollectionV1
    function getSpec() external view returns (Spec memory) {
        return
            Spec(
                isMintable,
                totalMaxSupply(),
                totalSupply(),
                isSoulbound,
                metadataURI,
                baseURI,
                tiers
            );
    }

    /// @dev Override of {ERC721A-_baseURI} to remove the function.
    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    /// @dev Override of {ERC721A-tokenURI} to return the token's metadata URI.
    /// Returns `baseURI` + `_tokenId` if baseURI is defined.
    /// Otherwise, returns the token's tier metadata URI.
    function tokenURI(uint256 _tokenId)
        public
        view
        override
        existsToken(_tokenId)
        returns (string memory)
    {
        string memory uri = _baseURI();
        return
            bytes(uri).length != 0
                ? string(abi.encodePacked(baseURI, _toString(_tokenId)))
                : tiers[tierIndex[_tokenId]].metadataURI;
    }

    /// @inheritdoc ICollectionV1
    function contractURI() public view returns (string memory) {
        return metadataURI;
    }

    /// @inheritdoc ICollectionV1
    // TODO: Is this needed? Perhaps it should just return the Struct instead
    function tierOf(uint256 _tokenId)
        external
        view
        existsToken(_tokenId)
        returns (string memory)
    {
        return tiers[tierIndex[_tokenId]].name;
    }

    /// @notice Returns the aggregated total max supply from all the tiers in the collection.
    /// @dev Meant to be mainly used for off-chain calls.
    function totalMaxSupply() public view returns (uint256 total) {
        for (uint256 i = 0; i < tiers.length; ) {
            total += tiers[i].maxSupply;
            unchecked {
                ++i;
            }
        }
    }

    /// @dev Returns whether a field is mutable or not given the `mask` value.
    function _isFieldMutable(uint256 _mask, uint256 _bitmap)
        public
        pure
        returns (bool)
    {
        return (_bitmap & _mask) > 0;
    }

    /// @dev Override of {ERC721A-_beforeTokenTransfers} to prevent soulbound token transfers to happen.
    function _beforeTokenTransfers(
        address from,
        address to,
        uint256 startTokenId,
        uint256 quantity
    ) internal override {
        // Update Tier supply
        /// @dev All batch operations are always for tokens of the same tier.
        uint256 index = tierIndex[startTokenId];
        // When minting
        if (from == address(0)) {
            tierSupply[index] += quantity;
        }
        // When burning
        /// @dev `from` and `to` are never both zero address
        else if (to == address(0)) {
            tierSupply[index] -= quantity;
        }

        // Return if the token has no soulbound restriction
        if (!isSoulbound) {
            return;
        }

        // Soulbound tokens can only be transferred when Minting or Burning.
        if (from != address(0) && to != address(0)) {
            revert Errors.Soulbound();
        }
    }

    /// @dev Extending EIP-165 `supportsInterface` to support ICollectionV1
    function supportsInterface(bytes4 _interfaceId)
        public
        view
        override(ERC2981, ERC721AUpgradeable)
        returns (bool)
    {
        return
            (_interfaceId == type(ICollectionV1).interfaceId) ||
            (_interfaceId == type(ICollectionBase).interfaceId) ||
            super.supportsInterface(_interfaceId);
    }
}

