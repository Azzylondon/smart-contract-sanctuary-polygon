pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./Pool.sol";

contract Amptroller {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    mapping(address => Pool[]) public pools;
    mapping(address => bool) public assets;

    Counters.Counter private _poolsIds;
    constructor() {}


    function addAsset(address asset) public {
        require(!assets[asset], "Asset already added");
        assets[asset] = true;
    }

    function removeAsset(address asset) public {
        require(assets[asset], "Asset not exists");
        assets[asset] = false;
    }

    function createPool(
        string memory name,
        string memory structure,
        address asset,
        uint256 minDeposit
    ) public {
        require(assets[asset], "Asset not exists");

        _poolsIds.increment();

        uint256 _id = _poolsIds.current();
        Pool newPool = new Pool(_id, name, structure, asset, minDeposit);
        pools[msg.sender].push(newPool);
    }
}

