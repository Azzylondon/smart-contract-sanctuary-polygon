pragma solidity ^0.8.0;
pragma abicoder v2;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Pool {
    using SafeMath for uint256;
    
    uint256 public minDeposit;
    uint256 public depositedAmount;
    uint256 public lockedAmount;
    mapping (address => uint256) public balances;
    mapping (address => uint256) public lockedBalances;

    event PoolCreated(uint256 id, string name, string structure, address asset, uint256 minDeposit);
    event PoolAmountChanged(address name, uint256 amount);
    event PoolAmountLocked(address name, uint256 amount); 
    event PoolAmountUnlocked(address name, uint256 amount);

    constructor(uint256 poolId, string memory name, string memory structure, address asset, uint256 _minDeposit) {
        require(_minDeposit > 0);
        require(isValid(structure), "Invalid structure");


        depositedAmount = 0;
        minDeposit = _minDeposit;
        lockedAmount = 0;

        emit PoolCreated(poolId, name, structure, asset, _minDeposit);
    }

    function isValid(string memory structure) internal pure returns (bool) {
        return 
            keccak256(bytes(structure)) == keccak256(bytes("factoring")) ||
            keccak256(bytes(structure)) == keccak256(bytes("discounting"));
    }

    function deposit(address addr, uint256 amount) public returns (bool) {
        if(amount <= minDeposit) {
            return false;
        }
        depositedAmount += amount;
        balances[addr] += amount;

        emit PoolAmountChanged(addr, balances[addr]);
        return true;
    }

    function lock(uint256 value) public {
        require(depositedAmount >= value, "Total supply must be greater than amount to lock");

        lockedBalances[msg.sender] += value;
        emit PoolAmountLocked(msg.sender, value);
    }

    function unlock(uint256 value) public {
        require(lockedBalances[msg.sender] >= value, "Total locked supply must be greater than amount to unlock");
        lockedBalances[msg.sender] -= value;
        emit PoolAmountUnlocked(msg.sender, value);
    }

    function getBalance(address addr) public view returns (uint256) {
        return balances[addr];
    } 

    
    function getLockedBalance(address addr) public view returns (uint256) {
        return lockedBalances[addr];
    }
}