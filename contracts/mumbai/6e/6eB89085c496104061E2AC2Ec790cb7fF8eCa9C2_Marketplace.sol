pragma solidity ^0.8.4;

import "./IMarketplace.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import { SafeMath } from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract Marketplace is IMarketplace, Ownable, ReentrancyGuard, Pausable, AccessControl {

    using SafeMath for uint256;
    
    struct Sale {
        address seller;
        uint256 price;
    }

    struct Auction {
        address seller;
        uint256 minPrice;
        uint256 deadline;
        uint256 highBidIndex;
    }

    struct Bid {
        address bidder;
        uint256 amount;
    }
    Bid[] public bids;

    mapping(address => mapping(uint256 => Sale)) public _sales; // _sales[nftAddr][nftId] => Sale
    mapping(address => mapping(uint256 => uint256)) public _salesIndex; // _salesIndex[nftAddr][nftId] => idx
    mapping(address => uint256[]) public _salesId; // _salesId[nftAddr][idx] => nftId

    mapping(address => mapping(uint256 => Auction)) public _auctions; // _auctions[nftAddr][nftId] => Auction
    mapping(address => mapping(uint256 => uint256)) public _auctionsIndex; // _auctionsIndex[nftAddr][nftId] => idx
    mapping(address => uint256[]) public _auctionsId; // _auctionsId[nftAddr][idx] => nftId

    mapping(address => mapping(uint256 => Bid[])) public _bidList; // _bidList[nftAddr][nftId] => Bid[]
    uint256 auctionSchedUnit;

    constructor() Ownable() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        auctionSchedUnit = 1 days;
    }

    function addAdmin(address account) public onlyRole(DEFAULT_ADMIN_ROLE) {
        grantRole(DEFAULT_ADMIN_ROLE, account);
    }

    function removeAdmin(address account) public onlyRole(DEFAULT_ADMIN_ROLE) {
        revokeRole(DEFAULT_ADMIN_ROLE, account);
    }

    /**********************************/
    /*╔══════════════════════════════╗
      ║         Sale - START         ║
      ╚══════════════════════════════╝*/
    /**********************************/

    function _isValidPrice(uint256 _price) internal pure returns (bool) {
        return _price > 0; // In the case of the designated price, the sales amount and purchase amount must be the same
    }

    function _isSales(address _addr, uint256 _id) internal view returns (bool) {
        return _sales[_addr][_id].seller != address(0);
    }

    function _deleteSales(address _addr, uint256 _id) internal {
        uint256 lastIndex = getSalesCount(_addr).sub(1);
        uint256 lastId = _salesId[_addr][lastIndex];
        uint256 curIndex = _salesIndex[_addr][_id];

        _salesId[_addr][curIndex] = lastId;
        _salesId[_addr].pop();
        _salesIndex[_addr][lastId] = curIndex;

        delete _salesIndex[_addr][_id];
        delete _sales[_addr][_id];
    }

    function getSalesCount(address _addr) public view returns (uint256) {
        return _salesId[_addr].length;
    }

    function sellNft(
        address _addr,
        uint256 _id,
        uint256 _price
    ) external whenNotPaused {
        IERC721 nft = IERC721(_addr);

        require(
            nft.ownerOf(_id) == msg.sender,
            "sellNft: The address of the nft owner and sender must be the same."
        );
        require(
            nft.getApproved(_id) == address(this),
            "sellNft: The current address must be granted the isApproved permission."
        );
        require(_isValidPrice(_price), "sellNft: The price must exceed zero.");
        require(
            !_isSales(_addr, _id),
            "sellNft: The NFT must not be for sale."
        );

        _sales[_addr][_id] = Sale(msg.sender, _price); // 수정중
        _salesIndex[_addr][_id] = _salesId[_addr].length;
        _salesId[_addr].push(_id);

        emit SellNft(_addr, _id, msg.sender, _price);
    }

    function buyNft(address _addr, uint256 _id) external payable nonReentrant { 
        address payable seller = payable(
            address(uint160(_sales[_addr][_id].seller))
        );
        uint256 price = _sales[_addr][_id].price;
        // console.log(price);
        // console.log(msg.value);

        if (price != msg.value) revert NoMatchingPrice();

        require(
            seller != address(0) && seller != msg.sender,
            "buyNft: It must be registered as a sale item, and the addresses of the buyer and seller must be different."
        );

        // seller.transfer(msg.value); 

        (bool success, ) = seller.call{value: msg.value}("");
        if(!success) {
            revert FailedToSendBalance();
        }
        
        IERC721(_addr).transferFrom(seller, msg.sender, _id);

        _deleteSales(_addr, _id);

        emit BuyNft(_addr, _id, seller, msg.sender, price);
    }

    function cancelSale(address _addr, uint256 _id) external whenNotPaused {
        address seller = _sales[_addr][_id].seller;
        require(
            seller == msg.sender,
            "cancelSale: The address of the seller and the caller must be the same."
        );

        _deleteSales(_addr, _id);

        emit CancelSale(_addr, _id);
    }

    function changeSalePrice(
        address _addr,
        uint256 _id,
        uint256 _price
    ) external whenNotPaused {
        Sale storage sale = _sales[_addr][_id];
        uint256 currentPrice = sale.price;

        require(
            sale.seller == msg.sender,
            "changeSalePrice: The address of the seller and the caller must be the same."
        );
        sale.price = _price;

        emit ChangeSalePrice(_addr, _id, currentPrice, _price);
    }

    /**********************************/
    /*╔══════════════════════════════╗
      ║          Sale - END          ║
      ╚══════════════════════════════╝*/
    /**********************************/

    /**********************************/
    /*╔══════════════════════════════╗
      ║        Auction - START       ║
      ╚══════════════════════════════╝*/
    /**********************************/

    function _isAuction(address _addr, uint256 _id) internal view returns (bool) {
        return _auctions[_addr][_id].seller != address(0);
    }

    function _deleteAuction(address _addr, uint256 _id) internal {
        uint256 lastIndex = getAuctionCount(_addr).sub(1);
        uint256 lastId = _auctionsId[_addr][lastIndex];
        uint256 curIndex = _auctionsIndex[_addr][_id];

        _auctionsId[_addr][curIndex] = lastId;
        _auctionsId[_addr].pop();
        _auctionsIndex[_addr][lastId] = curIndex;

        delete _auctionsIndex[_addr][_id];
        delete _auctions[_addr][_id];
    }

    function _deleteBid(address _addr, uint256 _id, uint256 _index) internal {
        uint256 lastIndex = getBidCount(_addr, _id).sub(1);

        _bidList[_addr][_id][_index] = _bidList[_addr][_id][lastIndex];
        _bidList[_addr][_id].pop();
    }

    function setAuctionExpiration(address _addr, uint256 _id) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _auctions[_addr][_id].deadline = block.timestamp; 
    }

    function getAuction(address _addr, uint256 _id) public view returns (Auction memory) {
        return _auctions[_addr][_id];
    }

    function getAuctionIndex(address _addr, uint256 _id) public view returns (uint256) {
        return _auctionsIndex[_addr][_id];
    }

    function getAuctionIdList(address _addr) public view returns (uint256[] memory) {
        return _auctionsId[_addr];
    }

    function getAuctionCount(address _addr) public view returns (uint256) {
        return _auctionsId[_addr].length;
    }

    function getBidList(address _addr, uint256 _id) public view returns (Bid[] memory) {
        return _bidList[_addr][_id];
    }

    function getBidCount(address _addr, uint256 _id) public view returns (uint256) {
        return _bidList[_addr][_id].length;
    }

    function startAuction(address _addr, uint256 _id, uint256 _minPrice, uint256 sched) external {
        IERC721 nft = IERC721(_addr);

        require(
            nft.ownerOf(_id) == msg.sender,
            "startAuction: The address of the nft owner and sender must be the same."
        );
        require(
            nft.getApproved(_id) == address(this),
            "startAuction: The current address must be granted the isApproved permission."
        );
        require(_isValidPrice(_minPrice), "startAuction: The price must exceed zero.");
        require(
            !_isSales(_addr, _id),
            "startAuction: The NFT must not be for sale."
        );
        require(
            !_isAuction(_addr, _id),
            "startAuction: This NFT is being auctioned off."
        );

        _auctions[_addr][_id] = Auction(msg.sender, _minPrice, block.timestamp + (auctionSchedUnit * sched), 0);
        _auctionsIndex[_addr][_id] = _auctionsId[_addr].length;
        _auctionsId[_addr].push(_id);

        if (_bidList[_addr][_id].length != 0)
            delete _bidList[_addr][_id];

        emit StartAuction(_addr, _id, _minPrice, _auctions[_addr][_id].deadline);
    }

    function bidNft(address _addr, uint256 _id) public payable whenNotPaused {
        Auction storage auction = _auctions[_addr][_id];

        require(
            _isAuction(_addr, _id),
            "bidNft: This NFT isn't being auctioned off."
        );
        require(
            auction.seller != msg.sender,
            "bidNft: The NFT owner cannot participate in the auction."
        );
        require(_isValidPrice(msg.value), "bidNft: The price must exceed zero.");
        require(block.timestamp < auction.deadline, "bidNft: The auction time is over.");
        if (_bidList[_addr][_id].length != 0) {
            require(msg.value > _bidList[_addr][_id][auction.highBidIndex].amount,
                "bidNft: To place a bid, you must offer a higher amount.");
        }
        else {
            require(msg.value > auction.minPrice,
                "bidNft: To place a bid, you must offer a higher amount.");
        }

        uint256 curBidIndex = getBidCount(_addr, _id);
        _bidList[_addr][_id].push(Bid(msg.sender, msg.value));

        if (msg.value > _bidList[_addr][_id][auction.highBidIndex].amount)
            auction.highBidIndex = curBidIndex;

        emit BidNft(_addr, _id, msg.sender, msg.value);
    }

    function endAuction(address _addr, uint256 _id) external {
        Auction storage auction = _auctions[_addr][_id];
        Bid[] storage bid = _bidList[_addr][_id];
        IERC721 nft = IERC721(_addr);

        require(
            nft.ownerOf(_id) == auction.seller,
            "endAuction: The address of the nft owner and seller must be the same."
        );
        require(
            !_isSales(_addr, _id),
            "endAuction: The NFT must not be for sale."
        );
        require(
            _isAuction(_addr, _id),
            "endAuction: This NFT isn't being auctioned off."
        );
        require(block.timestamp > auction.deadline, "endAuction: The auction time is not over.");

        if (bid.length > 0) {
            // successful bidder
            Bid storage highestBid = _bidList[_addr][_id][auction.highBidIndex];
            address payable seller = payable(auction.seller);
            
            seller.transfer(highestBid.amount);
            IERC721(_addr).transferFrom(seller, highestBid.bidder, _id);

            emit EndAuction(_addr, _id, seller, highestBid.bidder, highestBid.amount);

            _deleteBid(_addr, _id, auction.highBidIndex);

            // failed bidder
            uint256 failedBidLength = getBidCount(_addr, _id);
            for (uint256 i = 0; i < failedBidLength; i++) { 
                Bid storage bidder = _bidList[_addr][_id][i];
                payable(bidder.bidder).transfer(bidder.amount);
            }
            for (uint256 i = 0; i < failedBidLength; i++) {
                _bidList[_addr][_id].pop();
            }
        }
        _deleteAuction(_addr, _id);
    }

    /**********************************/
    /*╔══════════════════════════════╗
      ║        Auction - END         ║
      ╚══════════════════════════════╝*/
    /**********************************/

    // Pause the contract
    function pause() public onlyOwner {
        _pause();
    }

    // Unpause the contract
    function unpause() public onlyOwner {
        _unpause();
    }

    function getBalance() public view returns (uint) {
        return address(this).balance;
    }

    fallback() external payable {
        emit Received(_msgSender(), msg.value);
    }

    receive() external payable {
        emit Received(_msgSender(), msg.value);
    }
}

