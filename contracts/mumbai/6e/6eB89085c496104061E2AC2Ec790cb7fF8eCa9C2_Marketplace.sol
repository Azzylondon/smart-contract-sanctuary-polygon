pragma solidity ^0.8.4;

interface IMarketplace {
    error FailedToSendBalance();
    error NoMatchingPrice();

    event SellNft(address indexed nftContract, uint256 indexed nftId, address from, uint256 price);
    event BuyNft(address indexed nftContract, uint256 indexed nftId, address from, address to, uint256 price);
    event CancelSale(address indexed nftContract, uint256 indexed nftId);
    event ChangeSalePrice(address indexed nftContract, uint256 indexed nftId, uint256 beforePrice, uint256 afterPrice);
    event StartAuction(address indexed nftContract, uint256 indexed nftId, uint256 minPrice, uint256 deadline);
    event BidNft(address indexed nftContract, uint256 indexed nftId, address bidder, uint256 price);
    event EndAuction(address indexed nftContract, uint256 indexed nftId, address from, address to, uint256 price);
    event Received(address sender, uint256 amount);
    event Withdraw(uint256 amount);
}

