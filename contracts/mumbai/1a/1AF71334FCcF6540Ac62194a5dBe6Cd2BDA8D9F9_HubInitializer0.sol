        require(
            LibRunnerDetail
                ._storageRunnerDetail()
                .runnerToRunnerDetail[msg.sender]
                .id != 0,
            "LibRunnerRegistry: caller not runner"
        );
    }

    function _requireNotRunner() internal view {
        require(
            LibRunnerDetail
                ._storageRunnerDetail()
                .runnerToRunnerDetail[msg.sender]
                .id == 0,
            "LibRunnerRegistry: caller is runner"
        );
    }

