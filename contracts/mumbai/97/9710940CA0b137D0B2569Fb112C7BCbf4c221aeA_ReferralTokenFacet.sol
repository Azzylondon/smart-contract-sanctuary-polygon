    /// @param portTokenAddr address of token to invest in
    /// @param investor investor to allow
    function allowReferralInvestor(address portTokenAddr, address investor) external {
        LibReferralToken.allowInvestor(msg.sender, portTokenAddr, investor);
    }

    /// @notice allow investor to invest in referral token using signature
    /// @dev not using nonce since replay result replay wont produce any dangerous effects
    function allowReferralInvestorWithAuthorization(
        address portTokenAddr,
        address investor,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        bytes32 structHash = keccak256(abi.encode(_ALLOW_INVESTOR_TYPEHASH, portTokenAddr, investor));
        bytes32 hash = LibEIP712.hashTypedDataV4(_NAME_HASH, _VERSION_HASH, structHash);
        address signer = ECDSAUpgradeable.recover(hash, v, r, s);

        LibReferralToken.allowInvestor(signer, portTokenAddr, investor);
    }

    /// @notice checl if investor is allowed to invest in referral token
    function isReferralInvestorAllowed(address portTokenAddr, address investor) external view returns (bool) {
        return LibReferralToken.isAllowedInvestor(portTokenAddr, investor);
    }

