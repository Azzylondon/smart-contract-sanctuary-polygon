import {Modifiers} from "../libraries/Modifiers.sol";
import "../libraries/LibReferralToken.sol";
import "../libraries/LibEIP712.sol";

// @TODO maybe change signers to a role
contract ReferralTokenFacet is Modifiers {
    bytes32 private constant _ALLOW_INVESTOR_TYPEHASH = keccak256("allowReferralInvestorWithAuthorization(address portTokenAddr,address investor)");
    bytes32 private constant _NAME_HASH = keccak256("ReferralTokenFacet");
    bytes32 private constant _VERSION_HASH = keccak256("1");

    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.AddressSet;

    event ReferralFeeLimitsChanged(LibReferralToken.ReferralFeeLimits limits);
    event ReferralTokenSettingsChanged(address indexed portTokenAddr, bool isReferral, uint16 feeValue, address feeDistrubutor);
    event ReferralTokenInvestorAllowed(address indexed portTokenAddr, address indexed investor);
    event ReferralFeeCharged(address indexed portTokenAddr, address indexed investor, address indexed feeDistributor, uint256 feeAmount);
    event ReferralManagerAdded(address indexed manager);
    event ReferralManagerRemoved(address indexed manager);

    /// @notice configure fee limits
    function setReferralFeeLimits(LibReferralToken.ReferralFeeLimits calldata feeLimits) external onlyOwner {
        require(feeLimits.minFee < feeLimits.maxFee && feeLimits.maxFee < LibReferralToken.FEE_DENOMINATOR, "Invalid referral fee limits");
        LibReferralToken.diamondStorage().feeLimits = feeLimits;
        emit ReferralFeeLimitsChanged(feeLimits);
    }

    /// @notice get referral fee limits
    function getReferralFeeLimits() external view returns(LibReferralToken.ReferralFeeLimits memory) {
        return LibReferralToken.diamondStorage().feeLimits;
    }

    /// @notice add approved investor whitelist signer
    function addReferralInvestorSigner(address signer) external onlyOwner {
        LibReferralToken.diamondStorage().approvedSigners.add(signer);
    }

    /// @notice remove approved investor whitelist signer
    function removeReferralInvestorSigner(address signer) external onlyOwner {
        LibReferralToken.diamondStorage().approvedSigners.remove(signer);
    }

    /// @notice list approved investor whitelist signers
    function getReferralInvestorSigners() external view returns (address[] memory signers) {
        signers = LibReferralToken.diamondStorage().approvedSigners.values();
    }

    /// @notice add fee distributor address to whitelist
    function addReferralFeeDistributor(address distributor) external onlyOwner {
        LibReferralToken.diamondStorage().approvedFeeDistributors.add(distributor);
    }

    /// @notice remove fee distributor address from whitelist
    function removeReferralFeeDistributor(address distributor) external onlyOwner {
        LibReferralToken.diamondStorage().approvedFeeDistributors.remove(distributor);
    }

    /// @notice get fee distributor address whitelists
    function getReferralFeeDistributors() external view returns (address[] memory distributors) {
        distributors = LibReferralToken.diamondStorage().approvedFeeDistributors.values();
    }

    /// @notice allow manager to create referral tokens
    function addReferralManager(address manager) external onlyOwner {
        LibReferralToken.diamondStorage().isAllowedManager[manager] = true;
        emit ReferralManagerAdded(manager);
    }

    // @notice disallow manager to create referral tokens
    function removeReferralManager(address manager) external onlyOwner {
        LibReferralToken.diamondStorage().isAllowedManager[manager] = false;
        emit ReferralManagerRemoved(manager);
    }

    // @notice check if manager is alloed to create referral tokens
    function isReferralManager(address manager) external view returns(bool) {
        return LibReferralToken.diamondStorage().isAllowedManager[manager];
    }

