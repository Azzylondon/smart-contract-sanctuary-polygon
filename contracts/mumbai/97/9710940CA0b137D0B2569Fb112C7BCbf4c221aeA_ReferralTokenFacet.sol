    function setReferralTokenSettings(
        address portTokenAddr,
        uint16 referralFee,
        address feeDistributor
    ) external onlyOwner {
        LibReferralToken.configureToken(portTokenAddr, true, referralFee, feeDistributor);
    }

    /// @notice get referral settings for token
    function getReferralTokenSettings(address portTokenAddr)
        external
        view
        returns (
            bool isReferral,
            uint16 referralFee,
            address feeDistributor
        )
    {
        LibReferralToken.DiamondStorage storage ds = LibReferralToken.diamondStorage();
        isReferral = ds.isReferral[portTokenAddr];
        referralFee = ds.tokenSettings[portTokenAddr].feeValue;
        feeDistributor = ds.tokenSettings[portTokenAddr].feeDistributor;
    }
}

