/**
 * @notice implementation of the DEFED token contract
 * @author Defed
 */
interface  DistributorInterface{
    function claimable(address _addr) external view returns (uint256);
}

interface ILendingPool {
    function deposit(
        address asset,
        uint256 amount,
        address onBehalfOf,
        uint16 referralCode
    ) external;
}


contract ProtocolIncomeVault is ReentrancyGuard {
    using SafeMath for uint256;
    
    address public owner;
    address public distributor;
    mapping(uint256 => address) public protocolIncomeAssets;
    uint256 public protocolIncomeAssetLength;
    address public lendingPool;

    event UPDATE_OWNER_LOG(address indexed newOwner);
    event CLAIM_LOG(address  sender,address token,uint256 amount);
    event CLAIMS_LOG(address  sender,address[] tokens,uint256[] amounts);
    
    constructor(){
        owner = msg.sender;
    }

     modifier onlyDistributor() {
        require(distributor == msg.sender, "caller is not the distributor");
        _;
    }

    function setDistributor(address _distributor) external onlyOwner{
        distributor = _distributor;
    }

    modifier onlyOwner() {
        require(owner == msg.sender, "caller is not the owner");
        _;
    }

    function setOwner(address _newOwner) external onlyOwner{
        owner = _newOwner;
        emit UPDATE_OWNER_LOG(owner);
    }

    function setProtocolIncomeAssetLength(uint256 _protocolIncomeAssetLength) external onlyOwner{
        protocolIncomeAssetLength = _protocolIncomeAssetLength;
    }


    function setAssets(uint256[] calldata ids,address[] calldata assets) external onlyOwner{
        require(ids.length > 0 && assets.length > 0, "ids array is empty");
        require(ids.length == assets.length, "array are not the same length");
        for (uint i = 0; i < ids.length; i++) {
            protocolIncomeAssets[ids[i]] = assets[i];
        }
    }

    function claim(address sender,uint256[] memory expectAmount) external nonReentrant onlyDistributor {

        uint256[] memory amounts = new uint256[](protocolIncomeAssetLength);
        address[] memory assets = new address[](protocolIncomeAssetLength);
        for(uint256 i = 0; i < protocolIncomeAssetLength; i++){
            uint256 vaultBalance = IERC20(protocolIncomeAssets[i]).balanceOf(address(this));

            if(expectAmount[i] > vaultBalance){
                expectAmount[i] = vaultBalance;
            }

            if(expectAmount[i] > 0){
                IERC20(protocolIncomeAssets[i]).transfer(sender,expectAmount[i]);
                amounts[i] = expectAmount[i];
                assets[i] = protocolIncomeAssets[i];
                emit CLAIM_LOG(sender,protocolIncomeAssets[i],expectAmount[i]);
            }
            
        }
        
        emit CLAIMS_LOG(sender,assets,amounts);
    }

}

