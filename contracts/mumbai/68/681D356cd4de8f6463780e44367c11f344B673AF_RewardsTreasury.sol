import { SETHProxy } from "@superfluid-finance/ethereum-contracts/contracts/tokens/SETH.sol";
import { CFAv1Library } from "@superfluid-finance/ethereum-contracts/contracts/apps/CFAv1Library.sol";
import { ISuperfluid, ISuperToken } from "@superfluid-finance/ethereum-contracts/contracts/interfaces/superfluid/ISuperfluid.sol";
import { IConstantFlowAgreementV1 } from "@superfluid-finance/ethereum-contracts/contracts/interfaces/agreements/IConstantFlowAgreementV1.sol";

import "./FundsWrapperCustody.sol";

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";

/**
  RewardsTreasury holds the funds for the project creators and handle the 
  reward streams to the verified NFT owners

  TODO:

  - The project owner should be able to set the flow rate of all streams
  - The contract should be able to support multiple ERC20 tokens
  - Create a function that can upgrade an array of flows
 */
contract RewardsTreasury is
  FundsWrapperCustody,
  UUPSUpgradeable,
  AccessControlUpgradeable
{
  using SafeMath for uint256;
  using Counters for Counters.Counter;
  using CFAv1Library for CFAv1Library.InitData;

  event FlowCreated(
    address indexed sender,
    address indexed receiver,
    int96 flowRate
  );
  event FlowUpdated(
    address indexed sender,
    address indexed receiver,
    int96 flowRate
  );
  event FlowDeleted(address indexed sender, address indexed receiver);

  bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");

  // Warning: state variables must be added in an append-only fashion,
  // and do not rearrange the order of these variables
  ISuperToken public acceptedToken;

  CFAv1Library.InitData public cfa;

  // NOTE: double check if the flow rate for the smart contract is per second
  // the flowRate equals to 1 ether/month, calculated using https://docs.superfluid.finance/superfluid/protocol-developers/interactive-tutorials/money-streaming-1#flowrates
  int96 public maxRewardFlowRate;

  uint64 public maxNumberOfFlows;

  Counters.Counter public activeFlowCounts;

  // Excluding the contract creator, the contract can only have one operator at a time.
  address private _operator;

  function initialize(
    address _operatorAddress,
    address _fundsOwner,
    ISuperfluid host,
    ISuperToken _acceptedToken,
    SETHProxy _ethProxy
  ) public initializer {
    __AccessControl_init();
    __FundsWrapperCustody_init(_fundsOwner, _ethProxy);

    maxRewardFlowRate = 385802469135;
    maxNumberOfFlows = 1000;
    _operator = _operatorAddress;
    acceptedToken = _acceptedToken;

    _setupRole(OPERATOR_ROLE, msg.sender);
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setupRole(OPERATOR_ROLE, _operatorAddress);

    cfa = CFAv1Library.InitData(
      host,
      // here, we are deriving the address of the CFA using the host contract
      IConstantFlowAgreementV1(
        address(
          host.getAgreementClass(
            keccak256(
              "org.superfluid-finance.agreements.ConstantFlowAgreement.v1"
            )
          )
        )
      )
    );
  }

  function revokeAndSetOperator(address _operatorAddress)
    external
    onlyRole(getRoleAdmin(OPERATOR_ROLE))
  {
    revokeRole(OPERATOR_ROLE, _operator);

    _operator = _operatorAddress;
    grantRole(OPERATOR_ROLE, _operatorAddress);
  }

  function revokeAndSetDefaultAdmin(address _adminAddress)
    external
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    grantRole(OPERATOR_ROLE, _adminAddress);
    grantRole(DEFAULT_ADMIN_ROLE, _adminAddress);

    revokeRole(OPERATOR_ROLE, msg.sender);
    revokeRole(DEFAULT_ADMIN_ROLE, msg.sender);
  }

  function createRewardFlow(address _receiver, int96 _flowRate)
    external
    onlyRole(OPERATOR_ROLE)
    onlyAllowedFlowRate(_flowRate)
  {
    require(
      activeFlowCounts.current() < maxNumberOfFlows,
      "max number of flows reached"
    );

    activeFlowCounts.increment();
    cfa.createFlow(_receiver, acceptedToken, _flowRate);
    emit FlowCreated(address(this), _receiver, _flowRate);
  }

  function updateRewardFlow(address _receiver, int96 _flowRate)
    external
    onlyRole(OPERATOR_ROLE)
    onlyAllowedFlowRate(_flowRate)
  {
    cfa.updateFlow(_receiver, acceptedToken, _flowRate);
    emit FlowUpdated(address(this), _receiver, _flowRate);
  }

  function deleteRewardFlow(address _receiver)
    external
    onlyRole(OPERATOR_ROLE)
  {
    activeFlowCounts.decrement();
    cfa.deleteFlow(address(this), _receiver, acceptedToken);
    emit FlowDeleted(address(this), _receiver);
  }

  function setMaxFlowRate(int96 _flowRate)
    external
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    maxRewardFlowRate = _flowRate;
  }

  function setMaxNumberOfFlows(uint64 numFlows)
    external
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    maxNumberOfFlows = numFlows;
  }

  function _authorizeUpgrade(address)
    internal
    override
    onlyRole(DEFAULT_ADMIN_ROLE)
  {}

  modifier onlyAllowedFlowRate(int96 _flowRate) {
    require(_flowRate <= maxRewardFlowRate, "max flow rate exceeded");
    _;
  }
}

