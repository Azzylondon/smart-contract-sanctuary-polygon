// SPDX-License-Identifier: MIT

import './standard/access/AccessControl.sol';
import '../interfaces/ISimpleVault.sol';
import '../interfaces/IToken.sol';

contract Vault is AccessControl, IVault{
    
    IToken private _token;
    address private _authorizedTournament;
    uint256 constant private _intervalInSeconds = 35; //60 * 60 * 24 * 7;
    uint256 private _amountPerWithdrawal;
    uint256 private _start;
    uint256 private _lastIntervalWithdrawn;

    constructor(uint256 start_, address token_address_)
    {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _token = IToken(token_address_);
        if (start_== 0){
            _start = block.timestamp;
        }else{
            _start = start_;
        }
    }

    function authorizeTournament(address newTournament, uint256 amountPerWithdrawal)
    external override
    {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Vault - authorizeTournament: Caller is unauthorized.");
        require(_authorizedTournament == address(0), "Vault - authorizeTournament: Tournament already exists.");
        _amountPerWithdrawal = amountPerWithdrawal;
        _authorizedTournament = newTournament;

        emit TournamentAuthorized(newTournament, amountPerWithdrawal);
    }

    function updateAmountPerWithdrawal(uint256 newAmount)
    external override
    {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Vault - updateAmountPerWithdrawal: Caller is unauthorized.");
        _amountPerWithdrawal = newAmount;

        emit AmountPerWithdrawalUpdated(newAmount);
    }

    function getAuthorizedTournament()
    external view override
    returns (address authorizedTournament)
    {
        authorizedTournament = _authorizedTournament;
    }

    function getAmountPerWithdrawal()
    external view override
    returns (uint256 amountPerWithdrawal)
    {
        amountPerWithdrawal = _amountPerWithdrawal;
    }

    function getIntervalsSinceLaunch()
    public view override
    returns (uint256 intervals)
    {
        intervals = (block.timestamp - _start) / _intervalInSeconds;
    }

    function getStartTime()
    external view override
    returns (uint256 start){
        start = _start;
    }

    function getLastIntervalWithdrawn()
    external override
    returns (uint256 lastIntervalWithdrawn)
    {
        lastIntervalWithdrawn = _lastIntervalWithdrawn;
    }

    function draw()
    external override
    returns (uint256 amountToWithdraw)
    {
        amountToWithdraw = _amountPerWithdrawal;
        if (amountToWithdraw > 0){
            require(msg.sender == _authorizedTournament, "Vault - draw: Caller is not authorized.");
            uint256 intervalsElapsed = getIntervalsSinceLaunch();
            require(intervalsElapsed > _lastIntervalWithdrawn, "Vault - draw: Already claimed for this interval.");
            require(_token.transfer(msg.sender, _amountPerWithdrawal), "Vault - draw: Token transfer failed.");
            _lastIntervalWithdrawn = intervalsElapsed;

            emit Drawn(msg.sender, amountToWithdraw, intervalsElapsed);
        }
    }
}

