/// @title Maneki-Neko minting strategy, exists mostly for compatibility with exchanges
abstract contract ManekiNekoMinting is Ownable, ERC721 {
    /// @notice Unsafely batch mint tokens to this contract
    /// @dev Will early return if gas is insufficient to complete the requested range
    /// @param fromTokenId the first token ID to mint (inclusive)
    /// @param toTokenId the last token ID to mint (inclusive)
    /// @return the next mintable token, useful in case of gas capping
    function batchMint(uint256 fromTokenId, uint256 toTokenId)
        external
        onlyOwner
        returns (uint256)
    {
        require(fromTokenId <= toTokenId, "ManekiNekoNFT: invalid token range");

        uint256 maxMint = gasleft() / 4500; // minting takes approx 4500 gas
        require(maxMint >= 1, "ManekiNekoNFT: gas limit too low");
        if (maxMint < toTokenId - fromTokenId + 1) {
            // not enough gas for the requested range, cap it at theoretical max
            toTokenId = fromTokenId + maxMint - 1;
        }

        uint256 tokenId = fromTokenId;
        while (tokenId <= toTokenId) {
            _mint(tokenId);
            tokenId += 1;
        }

        // Return the next mintable token ID to allow chain calling
        return tokenId;
    }

    /// @notice Unsafely mint a single token to this contract
    /// @param tokenId the token ID to mint
    function mint(uint256 tokenId) external onlyOwner {
        _mint(tokenId);
    }

    //
    // Internals
    //

    function _mint(uint256 tokenId) internal {
        require(
            ownerOf(tokenId) == address(this),
            "ManekiNekoNFT: token already minted"
        );
        emit Transfer(address(0), address(this), tokenId);
    }
}

/// @title Simple global only royalties paid to this contract
abstract contract ManekiNekoRoyalties is Ownable, ERC721, ERC2981 {
    uint256 private constant _ROYALTY_DENOMINATOR = 10000;

    uint256 private _royaltyBasis;

    /// @inheritdoc IERC2981
    function royaltyInfo(uint256 tokenId, uint256 salePrice)
        external
        view
        virtual
        override
        returns (address, uint256)
    {
        require(_exists(tokenId), "ManekiNekoNFT: royalty query for nonexistent token");
        if (_royaltyBasis == 0 || ownerOf(tokenId) == address(this)) {
            // No royalty fees if disabled or selling from the recipient
            return (address(0), 0);
        }
        return (address(this), (salePrice * _royaltyBasis) / _ROYALTY_DENOMINATOR);
    }

    function setRoyaltyBasis(uint256 royaltyBasis) external onlyOwner {
        _setRoyaltyBasis(royaltyBasis);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC721, ERC2981)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function _setRoyaltyBasis(uint256 royaltyBasis) internal virtual {
        require(
            royaltyBasis < _ROYALTY_DENOMINATOR / 4,
            "ManekiNekoNFT: royalty basis too high"
        );
        _royaltyBasis = royaltyBasis;
    }
}

