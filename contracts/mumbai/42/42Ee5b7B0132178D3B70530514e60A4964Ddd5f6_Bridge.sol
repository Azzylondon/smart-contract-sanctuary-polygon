pragma solidity 0.8.4;

import {AccessProtected} from "./utils/AccessProtected.sol";

interface IToken {
    function deposit(address user, uint amount) external;
}

contract Bridge is AccessProtected{
    address public token;
    constructor(address _token) {
        token = _token;
    }

    function deposit(address _user, uint _amount) external onlyAdmin {
        IToken(token).deposit(_user, _amount);
    }
}

