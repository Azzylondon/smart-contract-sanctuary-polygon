pragma solidity ^0.8.7;
pragma abicoder v2;

import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-periphery/contracts/interfaces/IQuoter.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

interface IUniswapRouter is ISwapRouter {
    function refundETH() external payable;
}

interface IPaktToken is IERC20 {
    function treasury() external returns (address);

    function mint(address to, uint256 amount) external;

    function burn(uint256 amount) external;
}

error UnhandledPaktType(uint8 paktType);
error UserAlreadyHasActivePaktOfType(uint8 paktType);
error LevelNotAllowed(uint8 paktType, uint8 level);
error IncorrectAmount(uint8 level, uint256 amount);
error NotEnoughAllowance(uint256 amount);
error FailedTransfer(uint256 amount);
error PaktMustBeActive();
error PaktMustNotBeCustom();
error PaktNotFinished();
error GoalNotReached();
error PaktMustBeCustom();

/**
 * @title Contract to manage all possible actions on pakts
 * @author Alexandre Bensimon
 */
contract PaktManager is ChainlinkClient, Ownable {
    using Chainlink for Chainlink.Request;

    struct Pakt {
        uint256 amount;
        uint256 startTime;
        uint8 paktType;
        uint8 level;
        bool active;
        bool success;
        string description;
    }

    struct PaktInfo {
        address user;
        uint256 index;
    }

    IPaktToken private immutable paktToken;

    IUniswapRouter private immutable swapRouter;
    IQuoter private immutable quoter;
    address private immutable LINK;
    address private immutable WMATIC;
    uint24 private constant POOL_FEE = 3000;

    address private immutable oracle;
    bytes32 private immutable jobId;
    uint256 private s_oracleFee = 0.09 ether;

    // One week
    uint48 public constant PAKT_DURATION = 7 * 24 * 60 * 60;

    uint8 private s_paktTypeCount = 4;
    uint16[6] public s_maxAmountByLevel = [0, 100, 200, 300, 400, 500];
    uint8[6] public s_interestRateByLevel = [0, 8, 9, 10, 11, 12];
    uint8 public s_burnInterestRatio = 4;

    mapping(address => Pakt[]) public s_pakts;
    mapping(address => mapping(uint8 => bool)) public s_activePaktTypes;
    mapping(bytes32 => PaktInfo) private s_requestToPaktInfo;

    event PaktCreated(address indexed user, uint256 paktIndex);
    event PaktEnded(address indexed user, uint256 paktIndex);

    constructor(
        address _paktTokenAddress,
        address _uniswapRouter,
        address _quoter,
        address _LINK,
        address _WMATIC,
        address _oracle,
        bytes32 _jobId
    ) {
        paktToken = IPaktToken(_paktTokenAddress);

        swapRouter = IUniswapRouter(_uniswapRouter);
        quoter = IQuoter(_quoter);
        LINK = _LINK;
        WMATIC = _WMATIC;

        setChainlinkToken(_LINK);
        oracle = _oracle;
        jobId = _jobId;
    }

    receive() external payable {}

    /**
     * @notice Creates a new pakt
     * @param _paktType Custom pakts are of type 0, other pakt types are between 1 and paktTypeCount-1
     * @param _level For pakts that are not custom, the level represents the difficulty
     * @param _amount The amount to lock. For pakts that are not custom, there is a max amount for each level
     * @param _description For custom pakts, stores the goal written by the user
     */
    function makeNewPakt(
        uint8 _paktType,
        uint8 _level,
        uint256 _amount,
        string calldata _description
    ) external {
        if (_paktType >= s_paktTypeCount) revert UnhandledPaktType(_paktType);

        if (_paktType != 0 && s_activePaktTypes[msg.sender][_paktType])
            revert UserAlreadyHasActivePaktOfType(_paktType);

        if (_paktType != 0 && !(_level >= 1 && _level <= 5))
            revert LevelNotAllowed(_paktType, _level);

        if (
            _amount == 0 ||
            (_paktType != 0 &&
                _amount > uint256(s_maxAmountByLevel[_level]) * 1e18)
        ) revert IncorrectAmount(_level, _amount);

        if (paktToken.allowance(msg.sender, address(this)) < _amount)
            revert NotEnoughAllowance(_amount);

        // startTime: block.timestamp - PAKT_DURATION, // For testing
        Pakt memory pakt = Pakt({
            paktType: _paktType,
            level: _level,
            amount: _amount,
            startTime: block.timestamp,
            description: _description,
            active: true,
            success: false
        });

        s_pakts[msg.sender].push(pakt);
        s_activePaktTypes[msg.sender][_paktType] = true;

        emit PaktCreated(msg.sender, s_pakts[msg.sender].length - 1);

        bool success = paktToken.transferFrom(
            msg.sender,
            address(this),
            _amount
        );
        if (!success) revert FailedTransfer(_amount);
    }

    /**
     * @notice Verifies that the pakt (only non custom) is successful. Must use an oracle to fetch the fitness data and verify if the goal is reached
     * @param _paktIndex The index in the pakt array of the user
     * @param _authCode The OAuth2 authorization code needed to query the fitness API
     * @param _swapDeadline Date after which the swap for the oracle fee will revert. Useful to prevent front-running attacks
     */
    function verifyPakt(
        uint256 _paktIndex,
        string calldata _authCode,
        uint256 _swapDeadline
    ) external payable {
        Pakt memory pakt = s_pakts[msg.sender][_paktIndex];

        if (!pakt.active) revert PaktMustBeActive();
        if (pakt.paktType == 0) revert PaktMustNotBeCustom();
        if (pakt.startTime + PAKT_DURATION > block.timestamp)
            revert PaktNotFinished();

        swapEthForExactLink(msg.value, s_oracleFee, _swapDeadline);

        Chainlink.Request memory request = buildChainlinkRequest(
            jobId,
            address(this),
            this.unlockFunds.selector
        );
        request.add("code", _authCode);
        request.add("type", Strings.toString(uint8(pakt.paktType)));
        request.add("level", Strings.toString(uint8(pakt.level)));
        request.add("startTime", Strings.toString(pakt.startTime));
        request.add(
            "endTime",
            Strings.toString(pakt.startTime + PAKT_DURATION)
        );

        bytes32 requestId = sendChainlinkRequestTo(
            oracle,
            request,
            s_oracleFee
        );

        PaktInfo memory paktInfo = PaktInfo({
            user: msg.sender,
            index: _paktIndex
        });
        s_requestToPaktInfo[requestId] = paktInfo;
    }

    /**
     * @notice This function is called by the oracle after verifying the fitness data. Will unlock the funds if the pakt is successful
     * @param _requestId The oracle request_id
     * @param _paktSuccess The oracle verifies if the pakt is successful depending on the pakt type and level
     */
    function unlockFunds(bytes32 _requestId, bool _paktSuccess)
        external
        recordChainlinkFulfillment(_requestId)
    {
        PaktInfo memory paktInfo = s_requestToPaktInfo[_requestId];
        Pakt storage pakt = s_pakts[paktInfo.user][paktInfo.index];

        if (!pakt.active) revert PaktMustBeActive();
        if (!_paktSuccess) revert GoalNotReached();

        pakt.active = false;
        pakt.success = true;
        s_activePaktTypes[paktInfo.user][pakt.paktType] = false;
        delete s_requestToPaktInfo[_requestId];
        emit PaktEnded(paktInfo.user, paktInfo.index);

        uint256 interest = computeInterestForAmount(pakt.amount, pakt.level);

        paktToken.mint(address(this), interest);
        bool success = paktToken.transfer(
            paktInfo.user,
            pakt.amount + interest
        );
        if (!success) revert FailedTransfer(pakt.amount + interest);

        // 10 % of interest is minted for treasury
        uint256 amountForTreasury = interest / 10;
        paktToken.mint(paktToken.treasury(), amountForTreasury);
    }

    /**
     * @notice If the pakt is not successful, the user can call this function to archive the pakt and recover some of the tokens locked
     * @param _paktIndex The index in the pakt array of the user
     */
    function failPakt(uint256 _paktIndex) external {
        Pakt storage pakt = s_pakts[msg.sender][_paktIndex];

        if (!pakt.active) revert PaktMustBeActive();
        if (pakt.paktType == 0) revert PaktMustNotBeCustom();
        if (pakt.startTime + PAKT_DURATION > block.timestamp)
            revert PaktNotFinished();

        pakt.active = false;
        s_activePaktTypes[msg.sender][pakt.paktType] = false;
        emit PaktEnded(msg.sender, _paktIndex);

        uint256 interest = computeInterestForAmount(pakt.amount, pakt.level);
        uint256 burnAmount = s_burnInterestRatio * interest;

        paktToken.burn(burnAmount);

        bool success = paktToken.transfer(msg.sender, pakt.amount - burnAmount);
        if (!success) revert FailedTransfer(pakt.amount - burnAmount);
    }

    /**
     * @notice End a custom pakt
     * @param _paktIndex The index in the pakt array of the user
     * @param _isPaktSuccess For a custom pakt, there is no verification by API so the user must specify if the pakt is successful or not
     */
    function endCustomPakt(uint256 _paktIndex, bool _isPaktSuccess) external {
        Pakt storage pakt = s_pakts[msg.sender][_paktIndex];

        if (!pakt.active) revert PaktMustBeActive();
        if (pakt.paktType != 0) revert PaktMustBeCustom();
        if (pakt.startTime + PAKT_DURATION > block.timestamp)
            revert PaktNotFinished();

        pakt.active = false;

        if (_isPaktSuccess) {
            pakt.success = true;

            emit PaktEnded(msg.sender, _paktIndex);

            bool success = paktToken.transfer(msg.sender, pakt.amount);
            if (!success) revert FailedTransfer(pakt.amount);
        } else {
            emit PaktEnded(msg.sender, _paktIndex);

            paktToken.burn(pakt.amount);
        }
    }

    /**
     * @dev The Oracle fee may change as node operators pay their costs in USD and the price of the oracle token in USD can change
     */
    function setOracleFee(uint256 _fee) external onlyOwner {
        s_oracleFee = _fee;
    }

    /**
     * @dev If new pakts are added, can use this function to handle new pakt types without deploying new contract
     */
    function setPaktTypeCount(uint8 _count) external onlyOwner {
        s_paktTypeCount = _count;
    }

    /**
     * @dev For tweeking authorized token ranges by level if necessary during beta phase
     */
    function setMaxAmountByLevel(uint16[6] calldata _maxAmountByLevel)
        external
        onlyOwner
    {
        s_maxAmountByLevel = _maxAmountByLevel;
    }

    /**
     * @dev For tweeking authorized interest rate by level if necessary during beta phase
     */
    function setInterestRateByLevel(uint8[6] calldata _interestRateByLevel)
        external
        onlyOwner
    {
        s_interestRateByLevel = _interestRateByLevel;
    }

    /**
     * @dev For tweeking amount of token burned when pakt is not successful if necessary during beta phase
     */
    function setBurnInterestRatio(uint8 _burnInterestRatio) external onlyOwner {
        s_burnInterestRatio = _burnInterestRatio;
    }

    /**
     * @dev Getter necessary to get full array
     */
    function getMaxAmountByLevel() external view returns (uint16[6] memory) {
        return s_maxAmountByLevel;
    }

    /**
     * @dev Getter necessary to get full array
     */
    function getInterestRateByLevel() external view returns (uint8[6] memory) {
        return s_interestRateByLevel;
    }

    /**
     * @notice Gets the amount of MATIC necessary to pay for the oracle fee
     * @dev This function should not be called on chain
     */
    function getEstimatedSwapAmountIn() external returns (uint256) {
        address tokenIn = WMATIC;
        address tokenOut = LINK;
        uint160 sqrtPriceLimitX96 = 0;

        return
            quoter.quoteExactOutputSingle(
                tokenIn,
                tokenOut,
                POOL_FEE,
                s_oracleFee,
                sqrtPriceLimitX96
            );
    }

    /**
     * @dev Getter necessary to get full array
     */
    function getAllPaktsFromUser(address _user)
        public
        view
        returns (Pakt[] memory)
    {
        return s_pakts[_user];
    }

    /**
     * @notice For each pakt level, an interest rate is calculated on the amount locked and is used as a reward with new tokens minted or as a punishment with tokens burned
     */
    function computeInterestForAmount(uint256 _amount, uint8 _paktLevel)
        public
        view
        returns (uint256)
    {
        // 1% of amount = amount * 10 / 1000
        return (_amount * s_interestRateByLevel[_paktLevel]) / 1000;
    }

    /**
     * @notice Uses Uniswap to swap MATIC for LINK
     * @param _amountInMaximum The maximum amount of MATIC that we will swap
     * @param _amountOut The exact amount of LINK that we need
     * @param _deadline Date after which the swap will revert
     * @return amountIn The effective amount that was used for the swap (_amountInMaximum - what is not used and refunded to the user)
     */
    function swapEthForExactLink(
        uint256 _amountInMaximum,
        uint256 _amountOut,
        uint256 _deadline
    ) internal returns (uint256 amountIn) {
        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter
            .ExactOutputSingleParams({
                tokenIn: WMATIC,
                tokenOut: LINK,
                fee: POOL_FEE,
                recipient: address(this),
                deadline: _deadline,
                amountOut: _amountOut,
                amountInMaximum: _amountInMaximum,
                sqrtPriceLimitX96: 0
            });
        amountIn = swapRouter.exactOutputSingle{value: msg.value}(params);
        swapRouter.refundETH();

        if (amountIn < _amountInMaximum) {
            // refund leftover ETH to user
            (bool success, ) = msg.sender.call{
                value: _amountInMaximum - amountIn
            }("");
            if (!success) revert FailedTransfer(_amountInMaximum - amountIn);
        }
    }
}

