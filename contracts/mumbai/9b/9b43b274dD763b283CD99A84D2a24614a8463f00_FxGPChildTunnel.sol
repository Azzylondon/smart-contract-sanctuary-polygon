import "./IGP.sol";

contract FxGPChildTunnel is Ownable, FxBaseChildTunnel {

    bytes32 public constant DEPOSIT = keccak256("DEPOSIT");

    IGP public gpChild;

    constructor(
        address _fxChild,
        address _gpChildAddress
    ) FxBaseChildTunnel(_fxChild) {
        require(_gpChildAddress != address(0), "Invalid GP Address");
        gpChild = IGP(_gpChildAddress);
    }

    // Moves tokens from L2 -> L1. L2 tokens are burnt, unlike L1 tokens that are kept in the root tunnel.
    function withdraw(uint256 amount) public {

        require(amount > 0, "Bad amount");

        gpChild.transferFrom(
            msg.sender,
            address(this),
            amount
        );

        // Let root know to disperse a certain amount of L1 to this sender.
        _sendMessageToRoot(abi.encode(msg.sender, amount));
    }

    // Internal functions
    //
    function _processMessageFromRoot(
        uint256, /* stateId */
        address sender,
        bytes memory data
    ) internal override validateSender(sender) {
        // decode incoming data
        (bytes32 syncType, bytes memory syncData) = abi.decode(data, (bytes32, bytes));

        if (syncType == DEPOSIT) {
            _syncDeposit(syncData);
        } else {
            revert("FxERC20ChildTunnel: INVALID_SYNC_TYPE");
        }
    }

    function _syncDeposit(bytes memory syncData) internal {
        (address to, uint256 amount) = abi.decode(
            syncData,
            (address, uint256)
        );

        // check if current balance for token is less than amount,
        // mint remaining amount for this address
        uint256 balanceOf = gpChild.balanceOf(address(this));
        if(balanceOf < amount) {
            gpChild.mint(address(this), amount - balanceOf);
        }

        gpChild.approve(address(this), amount);
        gpChild.transferFrom(address(this), to, amount);

