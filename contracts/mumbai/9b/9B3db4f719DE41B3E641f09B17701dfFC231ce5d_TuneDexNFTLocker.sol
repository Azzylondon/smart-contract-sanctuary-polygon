import "./interfaces/ITuneDexERC20.sol";
import "./interfaces/ITuneDexSettings.sol";
import "./utils/TuneDexRolesVerifier.sol";


contract TuneDexNFTLocker is
    Pausable,
    ReentrancyGuard,
    TuneDexRolesVerifier,
    IERC721Receiver {
    using SafeERC20Upgradeable for ITuneDexERC20;

    enum NftStatus { UNAPPROVED, APPROVED, LOCKED }

    IERC721 public nft;
    ITuneDexSettings public settings;
    mapping(uint256 => NftStatus) public nftStatus;

    event NftApproved(address who, uint256 what);
    event NftUnapproved(address who, uint256 what);
    event NftLocked(address who, address nft, uint256 what, string uri, address erc20, address crowdsale);

    constructor(address nft_, address settings_) {
        settings = ITuneDexSettings(settings_);
        nft = IERC721(nft_);
    }

    function approve(uint256 id) external onlyOperator {
        require(nftStatus[id] == NftStatus.UNAPPROVED, "TDNL: already approved");
        nftStatus[id] = NftStatus.APPROVED;
        emit NftApproved(_msgSender(), id);
    }

    function unapprove(uint256 id) external onlyOperator {
        require(nftStatus[id] == NftStatus.APPROVED, "TDNL: not approved or locked");
        nftStatus[id] = NftStatus.UNAPPROVED;
        emit NftUnapproved(_msgSender(), id);
    }

    function lock(
        uint256 id,
        uint256 crowdsalePrice,
        uint256 crowdsaleBegin,
        uint256 crowdsaleEnd) external whenNotPaused nonReentrant {

        require(nftStatus[id] == NftStatus.APPROVED, "TDNL: not approved or locked");
        require(nft.ownerOf(id) == _msgSender(), "TDNL: not an owner");
        nftStatus[id] = NftStatus.LOCKED;
        nft.safeTransferFrom(_msgSender(), address(this), id);
        address erc20 = Clones.clone(settings.erc20Impl());
        string memory name_ = _generate_name(id);
        ITuneDexERC20(erc20).initialize(name_, name_, settings.erc20TotalSupply());
        address crowdsale = Clones.clone(settings.crowdsaleImpl());
        ITuneDexCrowdsale(crowdsale).initialize(
            erc20,
            _msgSender(),
            address(settings),
            crowdsalePrice,
            crowdsaleBegin,
            crowdsaleEnd);
        _transferErc20(ITuneDexERC20(erc20), crowdsale);
        emit NftLocked(
            _msgSender(),
            address(nft),
            id,
            IERC721Metadata(address(nft)).tokenURI(id),
            address(erc20),
            address(crowdsale));
    }

    /**
     * @dev Pauses all token transfers.
     *
     * See {Pausable} and {Pausable-_pause}.
     *
     * Requirements:
     *
     * - the caller must have the `TUNEDEX_ADMIN_ROLE`.
     */
    function pause() public virtual onlyAdmin {
        _pause();
    }

    /**
     * @dev Unpauses all token transfers.
     *
     * See {Pausable} and {Pausable-_unpause}.
     *
     * Requirements:
     *
     * - the caller must have the `TUNEDEX_ADMIN_ROLE`.
     */
    function unpause() public virtual onlyAdmin {
        _unpause();
    }

    /**
     * @dev Whenever an {IERC721} `tokenId` token is transferred to this contract via {IERC721-safeTransferFrom}
     * by `operator` from `from`, this function is called.
     *
     * It must return its Solidity selector to confirm the token transfer.
     * If any other value is returned or the interface is not implemented by the recipient, the transfer will be reverted.
     *
     * The selector can be obtained in Solidity with `IERC721.onERC721Received.selector`.
     */
