        address operator,
        address /*from*/,
        uint256 /*tokenId*/,
        bytes calldata /*data*/
    ) external override view returns (bytes4) {
        require(operator == address(this), "TDNL: bad caller");
        return IERC721Receiver.onERC721Received.selector;
    }

    function _getAce() internal view override returns (IAccessControlEnumerable) {
        return IAccessControlEnumerable(address(settings));
    }

    function _transferErc20(ITuneDexERC20 erc20, address crowdsale) internal {
        uint256 balance = erc20.balanceOf(address(this));
        uint256 toSend = balance * settings.treasurePercent() / 100;
        erc20.safeTransfer(settings.treasure(), toSend);
        toSend = balance * settings.crowdsalePercent() / 100;
        erc20.safeTransfer(crowdsale, toSend);
        toSend = erc20.balanceOf(address(this));
        erc20.safeTransfer(_msgSender(), toSend);
    }

    function _generate_name(uint256 id) internal view returns (string memory) {
        return string(abi.encodePacked("TDXERC20_", _to8CharString(address(nft)), _to8CharString(id)));
    }

    function _to8CharString(address account) internal pure returns(string memory) {
        return _to8CharString(abi.encodePacked(account));
    }

    function _to8CharString(uint256 value) internal pure returns(string memory) {
        return _to8CharString(abi.encodePacked(value));
    }

    function _to8CharString(bytes memory data) internal pure returns(string memory) {
        bytes memory alphabet = "0123456789abcdef";
        bytes memory str = new bytes(8);
        uint256 k = 0;
        for (uint256 i = data.length - 4; i < data.length;) {
            str[k] = alphabet[uint(uint8(data[i] >> 4))];
            unchecked { k++; }
            str[k] = alphabet[uint(uint8(data[i] & 0x0f))];
            unchecked { k++; }
            unchecked { i++; }
        }
        return string(str);
    }
}

