pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

/// @title Optigon Bridge Contract V1
/// @notice Allows users to deposit tokens on Optimism and then inform the corresponding contract on Polygon to send the user their funds.
contract OptimismBridgeV1 is Ownable, ReentrancyGuard {
    uint256 public constant ADMIN_FEE = 333;
    uint256 public generatedFees;
    address public companionContract;
    uint256 public availbleLiquidity;

    //** EVENTS */

    event bridgeInitiated(
        address userAddress,
        uint256 bridgedAmount,
        uint256 fee,
        uint256 time
    );
    event bridgeCompleted(
        address user,
        uint256 bridgedAmount,
        uint256 fee,
        uint256 time
    );
    event bridgeReverted(
        address user,
        uint256 bridgedAmount,
        uint256 fee,
        string reason,
        uint256 time
    );
    event refunded(
        address user,
        uint256 refundAmount,
        string reason,
        uint256 time
    );

    //** FALLBACK FUNCTION */

    fallback() external {}

    //** RECIEVE FUNCTION */

    receive() external payable {
        if (msg.sender != owner()) {
            generatedFees = SafeMath.add(generatedFees, msg.value);
        }
    }

    /// @notice Recieves a certain quantity of eth and then signs data for the corresponding contract
    function bridge() external payable nonReentrant {
        require(msg.value > 0, "Zero value input");
        uint256 fee = SafeMath.div(msg.value, ADMIN_FEE);
        generatedFees = SafeMath.add(generatedFees, fee);
        availbleLiquidity = SafeMath.sub(address(this).balance, generatedFees);
        uint256 send = SafeMath.sub(msg.value, fee);
        emit bridgeInitiated(msg.sender, send, fee, block.timestamp);
    }

    function sendBridgedFunds(
        address userAddress,
        uint256 bridgedAmount,
        uint256 fee
    ) external onlyOwner nonReentrant {
        require(bridgedAmount > fee, "Invalid tx input");
        if (availbleLiquidity > bridgedAmount) {
            payable(userAddress).transfer(bridgedAmount);
            availbleLiquidity = SafeMath.sub(
                address(this).balance,
                generatedFees
            );
            emit bridgeCompleted(
                userAddress,
                bridgedAmount,
                fee,
                block.timestamp
            );
        } else {
            emit bridgeReverted(
                userAddress,
                bridgedAmount,
                fee,
                "Not enough liquidity",
                block.timestamp
            );
        }
    }

    function refund(
        address userAddress,
        uint256 bridgedAmount,
        uint256 fee,
        string memory reason
    ) external onlyOwner nonReentrant {
        require(bridgedAmount > fee, "Invalid tx input");
        uint256 refundAmount = SafeMath.add(bridgedAmount, fee);
        payable(userAddress).transfer(refundAmount);
        availbleLiquidity = SafeMath.sub(address(this).balance, generatedFees);
        emit refunded(userAddress, refundAmount, reason, block.timestamp);
    }

    function setCompanionContract(address companion)
        external
        onlyOwner
        nonReentrant
    {
        require(companion != address(0), "Companion can not be null.");
        companionContract = companion;
    }

    function withdrawFees() external onlyOwner nonReentrant {
        require(generatedFees > 0, "No fees generated.");
        payable(msg.sender).transfer(generatedFees);
        generatedFees = 0;
        availbleLiquidity = SafeMath.sub(address(this).balance, generatedFees);
    }

    /** VIEW FUNCTIONS */

    function totalGeneratedFees() public view returns (uint256) {
        return generatedFees;
    }

    function adminFee() public pure returns (uint256) {
        return ADMIN_FEE;
    }

    function compannionAddress() public view returns (address) {
        return companionContract;
    }

    function TLV() public view returns (uint256) {
        return availbleLiquidity;
    }
}

