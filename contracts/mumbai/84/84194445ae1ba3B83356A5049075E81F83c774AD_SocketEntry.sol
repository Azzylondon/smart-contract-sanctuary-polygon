import "ChainlinkClient.sol";
import "ConfirmedOwner.sol";
import "KeeperCompatible.sol";

contract GasPriceMonitor is ChainlinkClient, ConfirmedOwner, KeeperCompatible {
    using Chainlink for Chainlink.Request;

    uint256 public gasPrice;
    uint256 public gasPriceInWei;
    uint256 public interval = 3600; //seconds (1 hr)
    uint256 public lastTimeUpdate;
    bytes32 private jobId;
    uint256 private fee;

    constructor() ConfirmedOwner(msg.sender) {
        setChainlinkToken(0x326C977E6efc84E512bB9C30f76E30c160eD06FB);
        setChainlinkOracle(0x40193c8518BB267228Fc409a613bDbD8eC5a97b3);
        jobId = "ca98366cc7314957b8c012c72f05aeeb";
        fee = (1 * LINK_DIVISIBILITY) / 10;

        lastTimeUpdate = block.timestamp;
    }

    function requestGasPrice() public returns (bytes32 requestId) {
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );

        req.add("get", "https://gasstation-mumbai.matic.today/v2");

        req.add("path", "fast,maxFee");

        int256 timesAmount = 10**18;
        req.addInt("times", timesAmount);

        return sendChainlinkRequest(req, fee);
    }

    function fulfill(bytes32 _requestId, uint256 _gasPrice)
        public
        recordChainlinkFulfillment(_requestId)
    {
        gasPrice = _gasPrice;
        gasPriceInWei = _gasPrice / 10**9;
    }

    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    function checkUpkeep(bytes calldata)
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory)
    {
        upkeepNeeded = (block.timestamp - lastTimeUpdate) > interval;
    }

    function performUpkeep(bytes calldata) external override {
        if ((block.timestamp - lastTimeUpdate) > interval) {
            lastTimeUpdate = block.timestamp;
            requestGasPrice();
        }
    }

    function getGasPriceInWei() public view returns (uint256) {
        return gasPriceInWei;
    }
}

