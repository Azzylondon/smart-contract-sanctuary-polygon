pragma solidity ^0.8.17;

import "LinkTokenInterface.sol";
import "VRFCoordinatorV2Interface.sol";
import "VRFConsumerBaseV2.sol";

import "AggregatorV3Interface.sol";

import "GasPriceMonitor.sol";
import "ConsumerHandler.sol";

contract SocketEntry is VRFConsumerBaseV2 {
    VRFCoordinatorV2Interface public vrfCoordinator;
    LinkTokenInterface public linkToken;
    GasPriceMonitor public gasPriceMonitor;
    ConsumerHandler public consumerHandler;
    AggregatorV3Interface public priceFeed;

    uint16 public constant REQUEST_CONFIRMATIONS = 3;
    uint256 constant MAX_VERIFICATION_GAS = 200000;
    uint256 constant SOCKET_PREMIUM = 0.00001 ether;
    uint256 public closingPeriod;
    uint256 public immutable linkPremium;
    uint256 public s_totalRequestCost;
    uint256 public s_linkPremiumInNativeAsset;

    mapping(address => uint256) public consumerBalances;
    mapping(address => address) public consumerDefaultAddress;
    mapping(uint64 => SocketInformation) public socketDetails;
    mapping(uint256 => address) public requestIdToSocketConsumer;
    mapping(uint256 => uint32) public requestIdToCallbackGasLimit;
    mapping(uint64 => uint256) public subscriptionBalance;

    mapping(address => uint64) public unpriviledgedAdminToSubId;

    struct SocketInformation {
        uint64 subscriptionId;
        address owner;
        uint256 balance;
        bool active;
        uint256 noticeTimeStamp;
        uint256 closingTimeStamp;
    }

    event SocketCreated(
        address indexed creator,
        uint256 indexed balance,
        uint64 indexed subscriptionId
    );

    constructor(
        address _vrfCoordinator,
        address _linkToken,
        address _gasPriceMonitor,
        address _priceFeedAddress,
        address _consumerHandler,
        uint256 _linkPremium,
        uint256 _closingPeriod
    ) VRFConsumerBaseV2(_vrfCoordinator) {
        vrfCoordinator = VRFCoordinatorV2Interface(_vrfCoordinator);
        linkToken = LinkTokenInterface(_linkToken);
        gasPriceMonitor = GasPriceMonitor(_gasPriceMonitor);
        priceFeed = AggregatorV3Interface(_priceFeedAddress);
        linkPremium = _linkPremium;
        consumerHandler = ConsumerHandler(_consumerHandler);
        closingPeriod = _closingPeriod;
    }

    function becomeASocket() public {
        // create subscription and returnthe sub Id
        uint64 subId = vrfCoordinator.createSubscription();

        // call the consumer handler function setting in the owner as an admin
        // with priviledges to remove consumers, add consumers, withdraw funds and cancel subscription with conditions

        unpriviledgedAdminToSubId[msg.sender] = subId;

        // after creating the subscription transfer the ownership to the consumer handler contract
        vrfCoordinator.requestSubscriptionOwnerTransfer(
            subId,
            address(consumerHandler)
        );

        // the consumer contract the accepts the subscription ownership transfer
        consumerHandler.acceptRequest(subId);

        // update the socket details after creating a subscription
        socketDetails[subId] = SocketInformation({
            subscriptionId: subId,
            owner: msg.sender,
            balance: 0,
            active: true,
            noticeTimeStamp: 0,
            closingTimeStamp: 0
        });

        emit SocketCreated(msg.sender, 0, subId);
    }

    // ADD A TOP UP BALANCE FOR CONSUMERS

    function topUpConsumerBalances() public payable {
        consumerBalances[msg.sender] += msg.value;
    }

    function topUpSubscription(uint256 amount, uint64 subId) external {
        // transfer from the socket to the contract
        bool success = linkToken.transferFrom(
            msg.sender,
            address(this),
            amount
        );
        require(success, "!successful");

        // transfer from the contract to top up
        linkToken.transferAndCall(
            address(vrfCoordinator),
            amount,
            abi.encode(subId)
        );

        // update the socket information
        socketDetails[subId].balance = amount;
    }

    function addConsumerContract(
        address consumerAddress,
        address defaultAddress,
        uint64 subId
    ) external payable {
        // this function is open to anybody to use

        // require the sender to be the consumer handle
        if (msg.sender != address(consumerHandler)) {
            revert("!Consumer Handler");
        }

        // if the socket isnt active ignore them
        require(socketDetails[subId].active, "socket ! active");

        // REQUIRE THE CONSUMER ADDRESS TO BE PART OF THE SOCKET
        // IMPORTANT

        consumerBalances[consumerAddress] = msg.value;

        //set the address that'll receive the asset when the consumer is removed
        consumerDefaultAddress[consumerAddress] = defaultAddress;
    }

    function removeConsumerContract(
        address consumerAddress,
        address defaultAddress,
        uint64 subId
    ) external {
        // require the sender to be the consumer handle
        if (msg.sender != address(consumerHandler)) {
            revert("!Consumer Handler");
        }

        // make sure only the person who added the consumer can remove it
        if (defaultAddress != consumerDefaultAddress[consumerAddress]) {
            revert("!owner of consumer");
        }

        uint256 consumerAmount = consumerBalances[consumerAddress];

        // transfer their balance
        (bool ok, ) = consumerDefaultAddress[consumerAddress].call{
            value: consumerAmount
        }("");
        require(ok, "!ok");

        // reset their balance
        consumerBalances[consumerAddress] = 0;
    }

    function cancelSubscription(
        address receivingWallet,
        address defaultAddress,
        uint64 subId
    ) external {
        // require the sender to be the consumer handle
        if (msg.sender != address(consumerHandler)) {
            revert("!Consumer Handler");
        }

        // make sure only the person who added the consumer can remove it
        if (unpriviledgedAdminToSubId[defaultAddress] != subId) {
            revert("!owner of subId");
        }

        // they can only cancel when they've given prior notice
        if (block.timestamp < socketDetails[subId].closingTimeStamp) {
            revert("cant close yet");
        }
        // Cancel the subscription and send the remaining LINK to a wallet address.
        vrfCoordinator.cancelSubscription(subId, receivingWallet);
    }

    function closingSoon(address defaultAddress, uint64 subId) public {
        // require the sender to be the consumer handle
        if (msg.sender != address(consumerHandler)) {
            revert("!Consumer Handler");
        }

        // make sure only the person who added the consumer can remove it
        if (unpriviledgedAdminToSubId[defaultAddress] != subId) {
            revert("!owner of subId");
        }

        socketDetails[subId].noticeTimeStamp = block.timestamp;
        socketDetails[subId].closingTimeStamp = block.timestamp + closingPeriod;

        // fire event for closing soon notice
    }

    function getRandomNumber(
        bytes32 _keyhash,
        uint64 _subscriptionId,
        uint32 _callbackGasLimit,
        uint32 _numWords,
        address _socketConsumer
    ) external returns (uint256 requestId) {
        // check if user has sufficient gas amount
        uint256 gasPriceInWei = gasPriceMonitor.getGasPriceInWei();

        uint256 totalRequestCost = _calculateRequestCost(
            gasPriceInWei,
            _callbackGasLimit
        );

        s_totalRequestCost = totalRequestCost;

        // if the user cant pay for the request cost revert
        if (consumerBalances[_socketConsumer] < totalRequestCost) {
            revert("Insufficient bal for req");
        }

        // if user can pay for the request cost reduce their balance
        consumerBalances[_socketConsumer] -= totalRequestCost;

        // incraese the balance of the subscription owner
        subscriptionBalance[_subscriptionId] += totalRequestCost;

        // make the request
        requestId = vrfCoordinator.requestRandomWords(
            _keyhash,
            _subscriptionId,
            REQUEST_CONFIRMATIONS,
            _callbackGasLimit,
            _numWords
        );

        // update mappings accordingly
        requestIdToSocketConsumer[requestId] = _socketConsumer;
        requestIdToCallbackGasLimit[requestId] = _callbackGasLimit;
        return requestId;
    }

    // GET THE TOTAL REQUEST COST INTO A AVRIABLE DUMMY!

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        // get the consumer address
        address socketConsumerAddress = requestIdToSocketConsumer[_requestId];
        // get the call back gas limit
        uint32 requestCallbackGasLimit = requestIdToCallbackGasLimit[
            _requestId
        ];

        // call the contract with the params, an alternative will be to call the contract directly using an interface
        bytes memory callData = abi.encodeWithSignature(
            "filledRandomNumber(uint256,uint256[])",
            _requestId,
            _randomWords
        );
        (bool success, ) = socketConsumerAddress.call{
            gas: requestCallbackGasLimit
        }(callData);
        require(success, "!ok");
    }

    function _calculateRequestCost(
        uint256 _gasPriceInWei,
        uint64 _callbackGasLimit
    ) public view returns (uint256 totalRequestCost) {
        uint256 nativeAssetGasCostInWei = _gasPriceInWei *
            (MAX_VERIFICATION_GAS + _callbackGasLimit);

        // uint256 linkPremiumInMatic

        // get the price of 1 link in matic (wei i.e 18 decimals)
        (, int intPrice, , , ) = priceFeed.latestRoundData();

        // get the link premium in terms of matic
        uint256 linkPremiumInNativeAsset = (uint256(intPrice) * linkPremium) /
            10**18;

        totalRequestCost =
            nativeAssetGasCostInWei +
            linkPremiumInNativeAsset +
            SOCKET_PREMIUM;
    }

    function getLinkMaticPrice() public view returns (uint256) {
        (, int intPrice, , , ) = priceFeed.latestRoundData();
        return uint256(intPrice);
    }

    function withdrawSubscriptionBalance(uint64 _subId, uint256 amount) public {
        uint256 balance = subscriptionBalance[_subId];
        address owner = socketDetails[_subId].owner;

        if (msg.sender != owner) {
            revert("!owner of sub Id");
        }

        if (amount > balance) {
            revert("Insufficient balance");
        }

        (bool ok, ) = owner.call{value: amount}("");
        require(ok, "failed");
    }

    // TESTING PURPOSES
    function withdraw() public {
        (bool ok, ) = msg.sender.call{value: address(this).balance}("");
        require(ok, "");
    }

    // TESTING PURPOSES
    function withdrawLink() public {
        uint256 amount = linkToken.balanceOf(address(this));
        linkToken.transfer(msg.sender, amount);
    }

    // function
    function changeConsumerHandler(address _newAddress) public {
        consumerHandler = ConsumerHandler(_newAddress);
    }

    function returnTotalRequestCost(
        uint256 _gasPriceInWei,
        uint64 _callbackGasLimit
    ) public view returns (uint256) {
        return _calculateRequestCost(_gasPriceInWei, _callbackGasLimit);
    }
}

