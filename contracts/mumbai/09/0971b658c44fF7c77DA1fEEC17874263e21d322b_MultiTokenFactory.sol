        _tokenRoyaltyReceivers[newTokenId].push(royaltyRecipient);
        _tokenRoyaltyBPS[newTokenId].push(basisPoints);

        //Emit Minted event
        emit Minted(newTokenId, _uri, _supply, _sender, royaltyRecipient, basisPoints);

        return (newTokenId);
