pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/introspection/IERC165Upgradeable.sol";

import "./MultiToken.sol";
import "./interfaces/IWhitelist.sol";
import "./interfaces/IMintRequests.sol";
import "./interfaces/ITreasuryManagement.sol";
import "./interfaces/IAddressRegistry.sol";

/**
 * @title MultiTokenFactory
 * Handles the deployment of ERC1155 NFTs, storing the deployed
 * addresses of the contracts
 */
contract MultiTokenFactory is Initializable, ReentrancyGuardUpgradeable {
    /// @dev Events of the contract
    event ContractCreated1155(address creator, address nft, string name, string symbol, string tokenUri1155);
    event ContractDisabled1155(address caller, address nft);
    event UpdateMintFee(uint256 mintFee);
    event UpdatePlatformFee(uint256 platformFee);
    event UpdateFeeRecipient(address payable feeRecipient);

    /// @notice Address Registry
    IAddressRegistry private addressRegistry;

    /// @notice NFT Address => Bool
    mapping(address => bool) public exists;

    bytes4 private constant INTERFACE_ID_ERC1155 = 0xd9b67a26;

    modifier onlyAdminOrUnlimited() {
        require(
            IWhitelist(addressRegistry.whitelistContract()).hasRoleUnlimited(msg.sender) ||
                IWhitelist(addressRegistry.whitelistContract()).hasRoleAdmin(msg.sender),
            "not admin or unlimited minter role"
        );
        _;
    }

    modifier onlyAdmin() {
        require(IWhitelist(addressRegistry.whitelistContract()).hasRoleAdmin(msg.sender), "not and admin");
        _;
    }

    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    /**
     @notice Constructor
     @param _addressRegistry is the address of the address registry contract
     */
    function delegatedConstructor(address _addressRegistry) public initializer {
        addressRegistry = IAddressRegistry(_addressRegistry);
        __ReentrancyGuard_init();
    }

    /// @notice Method for deploy new MultiToken contract
    /// @dev Only admin or unlimited minters
    /// @param _name Name of NFT contract
    /// @param _symbol Symbol of NFT contract
    /// @param _uri Symbol of NFT contract
    /// @param _token ERC20 contract address with which the user wishes to pay
    function createNFTContract(
        string memory _name,
        string memory _symbol,
        string memory _uri,
        address _token
    ) external onlyAdminOrUnlimited nonReentrant{
        require(callDeployCharge(_token), "Tx Failed");
        createNFT(_name, _symbol, _uri);
    }

    /// @notice Method for deploy new MultiToken contract based on request
    /// @dev Only full minters
    /// @param _requestId is the Id of the approved request
    /// @param _token ERC20 contract address with which the user wishes to pay
    function createNFTContractFromRequest(uint256 _requestId, address _token) nonReentrant external payable {
        require(
            IWhitelist(IAddressRegistry(addressRegistry).whitelistContract()).hasRoleFull(msg.sender),
            "NFT: not full minter role"
        );
        require(callDeployCharge(_token), "MultiTokenFactory: Tx Failed");
        IMintRequests mintRequests = IMintRequests(addressRegistry.mintRequest());
        Requests memory request = mintRequests.requests(_requestId);
        RequestsData memory requestData = mintRequests.requestsData(_requestId);

        require(
            mintRequests.shouldBeMinted(_requestId),
            "MultiTokenFactory: request has either expired or is already minted or not approved"
        );
        //Require that the request should be minted, the owner is msg sender,
        //the request is for an ERC1155, etc.
        require(request.owner == msg.sender, "MultiTokenFactory: msg sender is not the owner of request");
        require(request.isMultiToken, "MultiTokenFactory: not a multi token request");
        require(request.deployAndMint, "MultiTokenFactory: not a deploy only request");

        //Deploy NFT contract
        address _nft = createNFT(request.name, request.symbol, requestData.tokenUri1155);

        //Mint NFT
        MultiToken(_nft).mint(
            request.recipient,
            request.supply,
            requestData.tokenUri,
            _token,
            request.owner,
            requestData.royaltyRecipient,
            requestData.royaltyBps
        );
        //Mark request as minted in MintRequests
        mintRequests.setAsMinted(_requestId);
    }

    function createNFT(
        string memory _name,
        string memory _symbol,
        string memory _uri
    ) internal returns (address) {
        MultiToken nft = new MultiToken(_name, _symbol, _uri, address(addressRegistry));
        exists[address(nft)] = true;
        nft.transferOwnership(_msgSender());
        emit ContractCreated1155(_msgSender(), address(nft), _name, _symbol, _uri);
        return(address(nft));
    }

    function callDeployCharge(address _token) internal returns (bool) {
        (bool result, uint256 mintFee) = ITreasuryManagement(addressRegistry.treasuryManagement()).chargeForDeploying(
            _token,
            msg.sender
        );
        require(
            (result && mintFee > 0) || (IWhitelist(addressRegistry.whitelistContract()).hasRoleAdmin(msg.sender)),
            "Error in collecting fee"
        );
        return result;
    }

    /// @notice Method for registering existing MultiToken contract
    /// @param  tokenContractAddress Address of NFT contract
    function registerTokenContract(address tokenContractAddress) external onlyAdmin {
        require(!exists[tokenContractAddress], "Multi token contract already registered");
        require(
            IERC165Upgradeable(tokenContractAddress).supportsInterface(INTERFACE_ID_ERC1155),
            "Not an ERC1155 contract"
        );
        exists[tokenContractAddress] = true;
    }

    /// @notice Method for disabling existing MultiToken contract
    /// @param  tokenContractAddress Address of NFT contract
    function disableTokenContract(address tokenContractAddress) external onlyAdmin {
        require(exists[tokenContractAddress], "Multi token contract is not registered");
        exists[tokenContractAddress] = false;
        emit ContractDisabled1155(_msgSender(), tokenContractAddress);
    }

    /// @notice Method for updating Address Registry
    /// @param _addressRegistry Address of Address Registry Contract
    function updateAddressRegistryContract(address _addressRegistry) external onlyAdmin {
        addressRegistry = IAddressRegistry(_addressRegistry);
    }
}

