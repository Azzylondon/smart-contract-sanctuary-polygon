pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/interfaces/IERC1155.sol";
import "./interfaces/ISpaceShip.sol";

contract SpaceshipMinterV4 is Initializable, IERC721Receiver {

    using StringsUpgradeable for uint256;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;

    EnumerableSetUpgradeable.UintSet mintedUUIDs;

    address private _owner;
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);
    event SpaceshipMinted(address indexed target, uint256 indexed tokenId, uint256 indexed typeOfShip);

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(_owner == msg.sender, "Minter: caller is not the owner");
        _;
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Can only be called by the current owner.
     */
    function transferOwnership(address newOwner) public onlyOwner {
        require(newOwner != address(0), "Minter: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    /**
     * @dev Returns the bep token owner.
     */
    function getOwner() external view returns (address) {
        return _owner;
    }

    string private _secret;
    IERC20 quote;
    ISpaceShip public ship;

    uint256[] public mintedTokenIds;
    uint256 public openTimestamp;

    EnumerableSetUpgradeable.UintSet blacklistOfTypes;

    bool public isClaimable;

    mapping(address=>uint256) public numMK1LockedOf;

    mapping(address=>uint256) public numMK1ForCards;

    uint256 public totalNumMK1LockedForCards;

    uint256 public rewardPerMK1;

    IERC1155 public nftCard;

    address public cardOwner;

    modifier isOpened() {
        require(block.timestamp>=openTimestamp, "Minter: This pool is not opened");
        _;
    }

    constructor(){}

    /**
     * @dev initialize
     */
    function initialize(IERC20 quote_, ISpaceShip ship_) public initializer {
        quote = quote_;
        ship = ship_;
        _owner = msg.sender;
    }

    function mintShip(uint256 _uuid, uint256 _fuelUnit, uint256 _coef, uint256 _typeOfShip, uint256 _price, uint8 v, bytes32 r, bytes32 s) external isOpened returns(uint256){
        require(verify(abi.encodePacked(_uuid.toString(), _fuelUnit.toString(), _coef.toString(), _typeOfShip.toString(), _price.toString()), v, r, s), "Minter: Invalid action.");
        require(!mintedUUIDs.contains(_uuid), "Minter: Invalid UUID");
        require(!blacklistOfTypes.contains(_typeOfShip), "Minter: This type of spaceship was sold out.");
        mintedUUIDs.add(_uuid);
        if(_price>0){
            require(quote.balanceOf(msg.sender)>=_price, "Minter: Insufficient BYG balance");
            require(quote.transferFrom(msg.sender, _owner, _price), "Minter: Insufficient allowance");
        }
        ship.mint(msg.sender, _fuelUnit, _coef, uint8(_typeOfShip));
        uint256 tokenId = ship.tokenByIndex(ship.totalSupply()-1);
        mintedTokenIds.push(tokenId);
        emit SpaceshipMinted(msg.sender, tokenId, _typeOfShip);
        
        return tokenId;
    }

    // verify if the input values is valid
    function verify(bytes memory input, uint8 v, bytes32 r, bytes32 s) private view returns(bool) {
        bytes32 prefixedHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", keccak256(input)));
        return ecrecover(prefixedHash, v, r, s)==_owner;
    }

    function numOfTokensMinted() external view returns(uint256) {
        return mintedTokenIds.length;
    } 

    function setSecret(string memory _sec) external onlyOwner {
        _secret = _sec;
    }

    function setOpenTimestamp(uint256 _openTimestamp) external onlyOwner {
        openTimestamp = _openTimestamp;
    }

    function transferOwnershipOfNftToDeployer() external onlyOwner {
        ship.transferOwnership(_owner);
    }

    function withdrawBYG() external onlyOwner {
        quote.transfer(_owner, quote.balanceOf(address(this)));
    }

    function addBlacklist(uint256 _type) external onlyOwner {
        blacklistOfTypes.add(_type);
    }

    function removeFromBlacklist(uint _type) external onlyOwner {
        blacklistOfTypes.remove(_type);
    }

    function getAllMintedUUIDs() external view returns(uint256[] memory) {
        uint256[] memory ids = new uint256[](mintedUUIDs.length());
        for(uint i=0; i<mintedUUIDs.length(); i++){
            ids[i]=mintedUUIDs.at(i);
        }
        return ids;
    }

    /**
     * ERC721Receiver hook for single transfer.
     * @dev Reverts if the caller is not the whitelisted NFT contract.
     */
    function onERC721Received(
        address, /*operator*/
        address, /*from*/
        uint256 id,
        bytes calldata /*data*/
    ) external override returns (bytes4) {
        require(address(ship) == msg.sender, "Minter: not a spaceship");
        require(ship.getType(id)==2, "Minter: not a asteroid hunter");
        ship.burn(id); 
        return this.onERC721Received.selector;
    }

    function enableClaimable() external onlyOwner {
        isClaimable = true;
    }

    function disableClaimable() external onlyOwner {
        isClaimable = false;
    }

    function stakeMK1(uint256[] memory nftIds) external {
        for(uint i=0; i<nftIds.length; i++){
            ship.safeTransferFrom(msg.sender, address(this), nftIds[i]);
        }
        numMK1LockedOf[msg.sender] += nftIds.length;
    }

    function claimMk2() external {
        require(isClaimable, "Minter: not allowed");
        require(numMK1LockedOf[msg.sender]>0, "Minter: nothing is locked");
        uint num = numMK1LockedOf[msg.sender];
        numMK1LockedOf[msg.sender] = 0;
        for(uint i = 0; i < num; i++){
            ship.mint(msg.sender, 0, 0, 4);
            uint256 tokenId = ship.tokenByIndex(ship.totalSupply()-1);
            mintedTokenIds.push(tokenId);
            emit SpaceshipMinted(msg.sender, tokenId, 4);
        }
    }

    function setRewardPerMK1(uint256 amount) external onlyOwner {
        rewardPerMK1 = amount;
    }

    function releaseNftCards(IERC1155 _nftCard, address _cardOwner) external onlyOwner {
        nftCard=_nftCard;
        cardOwner=_cardOwner;
    }

    function stakeMK1ForCards(uint256[] memory nftIds) external {
        uint num = nftIds.length;
        for(uint i=0; i<num; i++){
            ship.safeTransferFrom(msg.sender, address(this), nftIds[i]);
        }
        numMK1ForCards[msg.sender] += num;
        totalNumMK1LockedForCards += num;
        require(quote.transfer(msg.sender, num*rewardPerMK1));
    }

    function claimCards() external {
        uint num = numMK1ForCards[msg.sender];
        numMK1ForCards[msg.sender] = 0;
        if(num>0){
            totalNumMK1LockedForCards-=num;
            nftCard.safeTransferFrom(cardOwner, msg.sender, 0, num, "");
        }
    }
    
    function claimRefundsAndCards() external {
        require(numMK1LockedOf[msg.sender]>0, "Minter: nothing is locked");
        uint num = numMK1LockedOf[msg.sender];
        numMK1LockedOf[msg.sender] = 0;
        require(quote.transfer(msg.sender, num*rewardPerMK1));
        nftCard.safeTransferFrom(cardOwner, msg.sender, 0, num, "");
    }
}

