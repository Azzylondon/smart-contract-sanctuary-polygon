import { SubscriptionTypes } from "./SubscriptionTypes.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import { EnumerableSet } from "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

interface ISubscriptionStorage{
	function getSubscription(bytes32 _subscriptionId) external view  returns (SubscriptionTypes.Subscription memory);
	function getSubscriptionIds() external view returns (bytes32[] memory, uint256);
	function addSubscription( SubscriptionTypes.Subscription memory value) external;
	function getSubscriptionsByAddress(address _address) external view  returns (bytes32[] memory);
	function deleteSubscription(bytes32 _subscriptionId) external;
	function updateSubscriptionLastPayment(bytes32 _subscriptionId,uint256 _lastPaymentTimestamp) external ;
	function updateSubscriptionPaymentRetries(bytes32 _subscriptionId,uint8 _paymentRetries) external ;
}

contract SubscriptionStorage is Ownable,ISubscriptionStorage{
	using EnumerableSet for EnumerableSet.Bytes32Set;

	EnumerableSet.Bytes32Set SubscriptionIds;
    mapping(bytes32 => SubscriptionTypes.Subscription) Subscriptions;
	mapping(address => EnumerableSet.Bytes32Set) SubscriptionsByAddress;

	address private caller;
	
	modifier isValidCaller(){
		require(msg.sender==caller, "Caller is invalid");
		_;
	}

    function getSubscription(bytes32 _subscriptionId) external view  returns (SubscriptionTypes.Subscription memory){
        return Subscriptions[_subscriptionId];
    }

	function getSubscriptionIds() public view returns (bytes32[] memory, uint256){
		uint length = SubscriptionIds.length();
		bytes32[] memory results = SubscriptionIds.values();
        return (results,length);
    }

	function getSubscriptionsByAddress(address _address) external view  returns (bytes32[] memory){
		bytes32[] memory subscriptionIds = SubscriptionsByAddress[_address].values();
        return subscriptionIds;
    }

    function addSubscription( SubscriptionTypes.Subscription memory value) public isValidCaller
    {
		require(SubscriptionIds.contains(value.subscriptionId) == false, "Subscription Id already exist");
		SubscriptionIds.add(value.subscriptionId);
        Subscriptions[value.subscriptionId] = value;
		SubscriptionsByAddress[value.from].add(value.subscriptionId);
    }

	function deleteSubscription(bytes32 _subscriptionId) public isValidCaller
    {
		SubscriptionIds.remove(_subscriptionId);
		SubscriptionTypes.Subscription memory _subscription= Subscriptions[_subscriptionId];
		SubscriptionsByAddress[_subscription.from].remove(_subscriptionId);
		if(SubscriptionsByAddress[_subscription.from].length()==0){
			delete SubscriptionsByAddress[_subscription.from];
		}
        delete Subscriptions[_subscriptionId];
    }

	function updateSubscriptionLastPayment(bytes32 _subscriptionId,uint256 _lastPaymentTimestamp)public isValidCaller{
		SubscriptionTypes.Subscription memory _sub = Subscriptions[_subscriptionId];
		Subscriptions[_subscriptionId]= SubscriptionTypes.Subscription(_sub.subscriptionId,_sub.from,_sub.to, _sub.amount,_sub.frecuency, _sub.tokenAddress, _lastPaymentTimestamp,_sub.paymentRetries,_sub.expiration);
	}


	function updateSubscriptionPaymentRetries(bytes32 _subscriptionId,uint8 _paymentRetries)public isValidCaller{
		SubscriptionTypes.Subscription memory _sub = Subscriptions[_subscriptionId];
		Subscriptions[_subscriptionId]= SubscriptionTypes.Subscription(_sub.subscriptionId,_sub.from,_sub.to, _sub.amount,_sub.frecuency, _sub.tokenAddress, _sub.lastPayTimestamp,_paymentRetries,_sub.expiration);
	}

	function setCaller(address _caller) public  onlyOwner {
		caller=_caller;
	}
}

