contract SubscriptionManager is AutomationCompatibleInterface,Initializable, OwnableUpgradeable{
	using SafeCast for uint256;
    using SafeCast for int256;
	using EnumerableSet for EnumerableSet.AddressSet;
	EnumerableSet.AddressSet payableTokens;

	uint256 public GAS_FEES_USER;
	uint256 public GAS_PRICE;
	uint256 public MATIC_PRICE;
	uint256 public GAS_PER_TRANSFER_ESTIMATE;

	uint256 MAX_INT;
	uint256 public MAX_PAYMENT_RETRIES;
	uint256 public MAX_CHAINLINK_GASLIMIT;
	uint256 public GAS_PER_TRANSFER;
	uint256 public BASE_TX_GAS;
	uint256 public MAX_TRANSFERS_PER_TX;
	uint256 public PERCENTEGE_FEE_PER_TRANSFER;
	uint256 public MAX_PAYMENT_PERIODS;

	/**
	 * This interval shouldn't be more than one day, this means that 
	 * every day or less than a day the keeper will check if there are 
	 * subscriptions to pay.
	 */
	uint256 public upKeepInterval;
	uint256 public lastUpKeepTrigger;

	/**
	 * This factor represent how short should be the unkeepInterval compared to fecuency of a subscription 
	 * in order to get all the payments successfully in time  
	 */
	uint256 public FUFactor;

	ISubscriptionStorage subscriptionStorage;


	/**
     * Network: Mumbai
     * Aggregator: MATIC/USD
     * Address: 0xD4a33860578De61DBAbDc8BFdb98FD742fA7028e
     */
    AggregatorV3Interface internal coinPriceFeed;



	event SubscriptionCreated(bytes32 subscriptionId, address from , address to, uint256 amount , uint256 frecuency);
	event SubscriptionCancelled(bytes32 subscriptionId);
	event SubscriptionPaid(bytes32 subscriptionId,address from , address to, uint256 amount);
	event SubscriptionNoFunds(bytes32 subscriptionId,address from , address to, uint256 amount);
	event SubscriptionNoFundsApproved(bytes32 subscriptionId,address from , address to, uint256 amount);
	event SubscriptionExpired(bytes32 subscriptionId);
	event SubscriptionCloseToExpiration(bytes32 subscriptionId, uint256 expiration);

	function initialize(address _subscriptionStorage,uint256 _upKeepInterval, address[] memory _payableTokens, address _coinPriceFeed,uint256 _maxGasLimitChainlink) public initializer
	{
		MAX_INT == 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;
		/**
		 * Unkeep interval should be at least 30 times short than frecuency 
		 * if unkeep interfval is 1 day , frecuency should be at least 10 days.
		 */
		MAX_PAYMENT_RETRIES = 4;
		FUFactor = 1;
		MAX_CHAINLINK_GASLIMIT = _maxGasLimitChainlink;
		BASE_TX_GAS = 300000;
		GAS_PER_TRANSFER = 100000;
		PERCENTEGE_FEE_PER_TRANSFER=1;
		MAX_PAYMENT_PERIODS=6;
		MAX_TRANSFERS_PER_TX = getMaxTransfersPerTransaction();
		__Ownable_init();

		lastUpKeepTrigger = block.timestamp;
		upKeepInterval =_upKeepInterval;

		coinPriceFeed=AggregatorV3Interface(_coinPriceFeed);
		subscriptionStorage = ISubscriptionStorage(_subscriptionStorage);

		for (uint i = 0; i < _payableTokens.length; i++) {
			payableTokens.add(_payableTokens[i]);
		}

	}

/**
	 *  ===================================================================================================================
	 */
	function createSubscription(address from, address to, uint amount, uint256 frecuency, address tokenAddress) external {

		require(msg.sender == from, "From address should be the same as msg.sender");
		require(msg.sender != to, "You can't auto send assets to your wallet");
		require(to != address(0), "Payee should not be a null address");
		require(frecuency > upKeepInterval*FUFactor, "Frecuency should be greater than FUFactor times upKeepInterval");
		require (payableTokens.contains(tokenAddress),"Token address is not a white listed token");
		uint256 expiration = block.timestamp + frecuency * MAX_PAYMENT_PERIODS;
		bytes32 subscriptionId = keccak256(
                abi.encode(
                    from,
                     to,
                     frecuency,
                     amount,
                     tokenAddress,
					block.number
                )
        );
		SubscriptionTypes.Subscription memory _subscription = SubscriptionTypes.Subscription(subscriptionId,from,to,amount,frecuency,tokenAddress,block.timestamp,0,expiration);

		subscriptionStorage.addSubscription(_subscription);

		/**
		 * Trigger first subscription payment
		 */
		firstPayment(_subscription);

        emit SubscriptionCreated(_subscription.subscriptionId, _subscription.from, _subscription.to, _subscription.amount, _subscription.frecuency);
    }

	function cancelSubscription(bytes32 _subscriptionId) external {
		SubscriptionTypes.Subscription memory _subscription = subscriptionStorage.getSubscription(_subscriptionId);
		require(msg.sender==_subscription.from || msg.sender==address(this), "You have no permissions to cancel a subscription");
		subscriptionStorage.deleteSubscription(_subscriptionId);
        emit SubscriptionCancelled(_subscriptionId);
    }

	function getSubscription(bytes32 _subscriptionId) public view  returns (SubscriptionTypes.Subscription memory){
		SubscriptionTypes.Subscription memory _subscription = subscriptionStorage.getSubscription(_subscriptionId);
        return _subscription;
    }

	function getSubscriptionsByAddress(address _address) public view  returns (bytes32[] memory){
		bytes32[] memory _subscriptionIds = subscriptionStorage.getSubscriptionsByAddress(_address);
        return _subscriptionIds;
    }

	function updateSubscriptionLastPayment(bytes32 _subscriptionId, uint256 _lastPayment) internal {
		subscriptionStorage.updateSubscriptionLastPayment(_subscriptionId, _lastPayment);
	}

	function updateSubscriptionPaymentRetries(bytes32 _subscriptionId, uint8 _paymentRetries) internal {
		subscriptionStorage.updateSubscriptionPaymentRetries(_subscriptionId, _paymentRetries);
	}

	

	/**
	 * Gives ChainLink keeper the conditions to triger performUpKeep function
	 * 
	 * This function only runs off-chain so there is no problem with gas performance
	 * 
	 * 
	 */

	function checkUpkeep(
        bytes calldata /* checkData */
    )
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory /* performData */)
    {
		(bytes32[] memory subscriptionIds, uint subscriptionIdsLength) = subscriptionStorage.getSubscriptionIds();

		uint256 payableSubscriptionsLength = 0;
		
		SubscriptionTypes.Subscription[]  memory payableSubscriptions= new SubscriptionTypes.Subscription[](subscriptionIdsLength);
		for (uint i = 0; i < subscriptionIdsLength; i++) {
			if(payableSubscriptionsLength>MAX_TRANSFERS_PER_TX){
				break;
			}
			SubscriptionTypes.Subscription memory sub = subscriptionStorage.getSubscription(subscriptionIds[i]);
			if((block.timestamp - sub.lastPayTimestamp) > sub.frecuency){
				payableSubscriptions[payableSubscriptionsLength]=sub;
				payableSubscriptionsLength++;
			}
		}

        upkeepNeeded = (block.timestamp - lastUpKeepTrigger) > upKeepInterval && payableSubscriptionsLength!= 0;

		return (upkeepNeeded,abi.encode(payableSubscriptions,payableSubscriptionsLength));

    }

	/**
	 * Base gas limit is 300k and each token transfer costs 60K aprox;
	 */
	function performUpkeep(bytes calldata performData) external override {
		(SubscriptionTypes.Subscription[] memory payableSubscriptions,uint256 payableSubscriptionsLength) = abi.decode(performData, (SubscriptionTypes.Subscription[],uint256));
		require ((block.timestamp - lastUpKeepTrigger) > upKeepInterval && payableSubscriptionsLength!= 0, "One of the conditions wasn't met");
		require (payableSubscriptionsLength<=MAX_TRANSFERS_PER_TX, "MAX_TRANSFERS_PER_TX exceeded");

		for (uint i = 0; i < payableSubscriptionsLength; i++) {
			if(payableSubscriptions[i].expiration < block.timestamp){
				this.cancelSubscription(payableSubscriptions[i].subscriptionId);
				continue;
			}
			if((block.timestamp - payableSubscriptions[i].lastPayTimestamp) > payableSubscriptions[i].frecuency){
				paySubscription(payableSubscriptions[i]);
			}
		}
		lastUpKeepTrigger = block.timestamp;
    }

	/**
	 *  ===================================================================================================================
	 */
	function firstPayment(SubscriptionTypes.Subscription memory _subscription) internal {
		uint startGas = gasleft();
		IERC20 token = IERC20(_subscription.tokenAddress);

		uint256 tokensAllowed = token.allowance(_subscription.from, address(this));
		require(tokensAllowed >= _subscription.amount, "Tokens weren't approved");
		
		token.transferFrom(_subscription.from, _subscription.to, _subscription.amount * ((100-PERCENTEGE_FEE_PER_TRANSFER)/100));
		uint endGas = gasleft();
		uint256 coinPrice = getCoinPrice().toUint256();
		GAS_PER_TRANSFER_ESTIMATE = (startGas - endGas);
		GAS_PRICE= tx.gasprice;
		MATIC_PRICE = coinPrice; 
		GAS_FEES_USER = GAS_PER_TRANSFER*MATIC_PRICE*GAS_PRICE;
		token.transferFrom(_subscription.from, owner(), _subscription.amount * ((PERCENTEGE_FEE_PER_TRANSFER)/100));
		emit SubscriptionPaid(_subscription.subscriptionId, _subscription.from, _subscription.to, _subscription.amount);
	}


	function paySubscription(SubscriptionTypes.Subscription memory _subscription) internal {
		/**
		 * Send payment
		 */

		IERC20 token = IERC20(_subscription.tokenAddress);

		uint256 tokensApproved = token.allowance(_subscription.from, address(this));
		uint256 balanceOfPayer = token.balanceOf(_subscription.from);
		bool payerApproved = tokensApproved >= _subscription.amount;
		bool payerHasBalance = balanceOfPayer >=_subscription.amount;

		if( payerApproved && payerHasBalance){
			token.transferFrom(_subscription.from, _subscription.to, _subscription.amount * ((100-PERCENTEGE_FEE_PER_TRANSFER)/100));
			token.transferFrom(_subscription.from, owner(), _subscription.amount * ((PERCENTEGE_FEE_PER_TRANSFER)/100));
			updateSubscriptionLastPayment(_subscription.subscriptionId, block.timestamp);
			emit SubscriptionPaid(_subscription.subscriptionId, _subscription.from, _subscription.to, _subscription.amount);
		}
		
		if(_subscription.paymentRetries <=MAX_PAYMENT_RETRIES){
		if(!payerHasBalance){
				emit SubscriptionNoFunds( _subscription.subscriptionId, _subscription.from ,  _subscription.to,  _subscription.amount);
				updateSubscriptionPaymentRetries(_subscription.subscriptionId,_subscription.paymentRetries + 1);
		}
		else if(!payerApproved){
				emit SubscriptionNoFundsApproved( _subscription.subscriptionId, _subscription.from ,  _subscription.to,  _subscription.amount);
				updateSubscriptionPaymentRetries(_subscription.subscriptionId,_subscription.paymentRetries + 1);
		}}
		/**
		 * No funds approved, the subscription should be cancelled
		 */
		else{
			this.cancelSubscription(_subscription.subscriptionId);
		}
    }

	
