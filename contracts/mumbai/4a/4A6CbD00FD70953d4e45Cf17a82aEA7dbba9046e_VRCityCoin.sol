pragma solidity ^0.8.1;

import "./libraries/BancorFormula.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./interfaces/IVesting.sol";
import "./interfaces/IVRCityCoin.sol";

contract VRCityCoin is
    IVRCityCoin,
    ERC20,
    BancorFormula,
    AccessControl,
    ReentrancyGuard
{
    using SafeERC20 for ERC20;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    uint256 private reserve;
    uint64 private constant precision = 1e6;
    uint32 private reserveRatio;

    ERC20 public DAI;

    constructor(uint32 _reserveRatio, address _DAIAddress)
        ERC20("VR City Coin", "VRCITY")
    {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ADMIN_ROLE, msg.sender);

        DAI = ERC20(_DAIAddress);
        reserveRatio = _reserveRatio;
    }

    function initVesting(
        uint256 _initSupply,
        uint256 _initReserve,
        address _vestingAddress,
        IVesting.InputData[] memory _honors
    ) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        require(totalSupply() == 0, "Vesting already initialized");

        DAI.safeTransferFrom(msg.sender, address(this), _initReserve);
        _mint(_vestingAddress, _initSupply);
        reserve += _initReserve;
        IVesting(_vestingAddress).initVesting(_honors);

        emit InitializationVesting(_initSupply, _initReserve, _vestingAddress);
    }

    function purchaseVRX(uint256 _daiAmount) external override nonReentrant {
        require(_daiAmount > 0, "DAI amount must be non-zero");
        DAI.safeTransferFrom(msg.sender, address(this), _daiAmount);
        uint256 purchaseAmount = getPurchaseAmount(_daiAmount);
        _mint(msg.sender, purchaseAmount);
        reserve += _daiAmount;
        emit PurchaseToken(msg.sender, purchaseAmount, _daiAmount);
    }

    function sellVRX(uint256 _tokenAmount) external override nonReentrant {
        address seller = msg.sender;
        require(_tokenAmount > 0, "Token amount must be non-zero");
        uint256 saleAmount = getSaleAmount(_tokenAmount);
        _burn(seller, _tokenAmount);
        reserve -= saleAmount;
        DAI.safeTransfer(seller, saleAmount);
        emit SellToken(seller, _tokenAmount, saleAmount);
    }

    function setReserveRatio(uint32 _newReserveRatio)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        emit SetReserveRatio(reserveRatio, _newReserveRatio);
        reserveRatio = _newReserveRatio;
    }

    function getPurchaseAmount(uint256 _daiAmount)
        public
        view
        override
        returns (uint256)
    {
        return
            calculatePurchaseReturn(
                totalSupply(),
                getReserveBalance(),
                reserveRatio,
                _daiAmount
            );
    }

    function getSaleAmount(uint256 _tokenAmount)
        public
        view
        override
        returns (uint256)
    {
        return
            calculateSaleReturn(
                totalSupply(),
                getReserveBalance(),
                reserveRatio,
                _tokenAmount
            );
    }

    function getReserveBalance() public view override returns (uint256) {
        return reserve;
    }

    function getReserveRatio() public view override returns (uint32) {
        return reserveRatio;
    }
}

