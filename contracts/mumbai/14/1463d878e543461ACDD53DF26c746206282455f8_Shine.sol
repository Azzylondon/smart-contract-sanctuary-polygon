import "@openzeppelin/contracts/access/Ownable.sol";

contract Whitelist is Ownable {
    event Added(address member);
    event Removed(address member);

    mapping(address => bool) members;

    function isWhiteListed(address _member) public view returns (bool) {
        return members[_member];
    }

    modifier onlyWhiltelisted() {
        require(
            isWhiteListed(msg.sender),
            "Function accessible only by the whitelisted user !!"
        );
        _;
    }

    function add(address _member) public onlyOwner {
        require(!isWhiteListed(_member), "user already exist !");
        members[_member] = true;
        emit Added(_member);
    }

    function remove(address _member) public onlyOwner {
        require(isWhiteListed(_member), "user not found !");
        delete members[_member];
        emit Removed(_member);
    }
}

