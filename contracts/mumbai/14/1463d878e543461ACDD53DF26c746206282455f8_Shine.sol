import {IERC20} from "../interfaces/IERC20.sol";
import {IShine} from "../interfaces/IShine.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "../contracts/access/WhiteList.sol";
import "../contracts/utils/VerifySignature.sol";
import "../contracts/access/TokenWhiteList.sol";

contract Shine is
    IShine,
    Ownable,
    Whitelist,
    AccessControl,
    TokenWhiteList,
    VerifySignature,
    Pausable,
    ReentrancyGuard
{
    bytes32 public constant ISSUER_ROLE = keccak256("ISSUER_ROLE");
    bytes32 public constant VERIFIER_ROLE = keccak256("VERIFIER_ROLE");
    bytes32 public constant USER_ROLE = keccak256("USER_ROLE");
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    struct project {
        bytes32 uuid;
        string hashHex;
        address issuer;
        bytes32 verifier;
    }
    IERC20 private _token;
    mapping(bytes32 => project) projects;

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        add(msg.sender);
    }

    function createProject(bytes32 uuid, string memory hashHex)
        public
        onlyWhiltelisted
        whenNotPaused
    {
        require(hasRole(ISSUER_ROLE, msg.sender), "Caller is not a ISSUER");
        require(bytes32(uuid).length > 0, "uuid cannot be empty");
        require(bytes(hashHex).length > 0, "hashHex cannot be empty");
        projects[uuid].uuid = uuid;
        projects[uuid].hashHex = hashHex;
        projects[uuid].issuer = msg.sender;
        emit ProjectCreated(uuid, hashHex, msg.sender);
    }

    function updateProject(bytes32 uuid, string memory hashHex)
        public
        onlyWhiltelisted
        whenNotPaused
    {
        require(hasRole(ISSUER_ROLE, msg.sender), "Caller is not a ISSUER");
        require(bytes32(uuid).length > 0, "uuid cannot be empty");
        require(bytes(hashHex).length > 0, "hashHex cannot be empty");
        require(projects[uuid].issuer == msg.sender, "issuer not valid");
        projects[uuid].hashHex = hashHex;
        emit ProjectUpdated(uuid, hashHex, msg.sender);
    }

    function assinedVerifier(
        bytes32 uuid,
        string memory hashHex,
        bytes32 verifier
    ) public onlyWhiltelisted whenNotPaused {
        require(hasRole(ISSUER_ROLE, msg.sender), "Caller is not a ISSUER");
        require(bytes32(uuid).length > 0, "uuid cannot be empty");
        require(bytes32(verifier).length > 0, "verifer cannot be empty");
        require(bytes(hashHex).length > 0, "hashHex cannot be empty");
        require(projects[uuid].issuer == msg.sender, "issuer not valid");
        projects[uuid].hashHex = hashHex;
        projects[uuid].verifier = verifier;
        emit VerifierAssinged(uuid, hashHex, msg.sender);
    }

    function mintToken(
        address _reciepient,
        uint256 _amount,
        string memory _project_data,
        bytes memory _signature,
        address _signer,
        uint256 _nonce,
        address _asset
    ) public onlyWhiltelisted whenNotPaused nonReentrant {
        require(hasRole(ADMIN_ROLE, msg.sender), "Caller is not a ADMIN");
        require(_reciepient != address(0), "reciepient address invalid");
        require(_signer != address(0), "reciepient address invalid");
        require(_amount != 0, "amount must be nonzero");
        require(hasRole(VERIFIER_ROLE, _signer), "Caller is not a Verifier");
        require(
            bytes(_project_data).length > 0,
            "project_data cannot be empty"
        );
        require(_signature.length > 0, "_signature cannot be empty");
        require(_nonce != 0, "nonce must be nonzero");
        require(_asset != address(0), "_asset address invalid");
        require(isWhiteListedToken(_asset), "_asset not whiltelisted !");
        bool verify_res = verify(
            _signer,
            _reciepient,
            _amount,
            _project_data,
            _nonce,
            _signature
        );
        require(verify_res, "hash not matching !!");
        IERC20(_asset).mint(_reciepient, _amount);
        emit MintCarbonToken(
            _reciepient,
            _amount,
            _project_data,
            _signature,
            _signer,
            _asset
        );
    }

    function burnToken(address account, uint256 amount)
        public
        whenNotPaused
        nonReentrant
    {
        require(account != address(0), "account address invalid");
        require(amount == 0, "amount must be nonzero");
        _token.burn(account, amount);
        emit BurnCarbonToken(account, amount);
    }
}

