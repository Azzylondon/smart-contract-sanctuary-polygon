pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721EnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721URIStorageUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "./UserProfilesUpgradeable.sol";
import "./HeroStateUpgradeable.sol";
import "./Descriptor.sol";
import "./common/ContextMixin.sol";
import "./common/NativeMetaTransaction.sol";

contract HeroTokenUpgradeable is
    Initializable,
    ERC721Upgradeable,
    ERC721EnumerableUpgradeable,
    ERC721URIStorageUpgradeable,
    AccessControlUpgradeable,
    Descriptor,
    NativeMetaTransaction,
    ContextMixin
{
    event Locked(address indexed from, uint256 tokenId, bool locked);

    using CountersUpgradeable for CountersUpgradeable.Counter;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant MODERATOR_ROLE = keccak256("MODERATOR_ROLE");

    HeroStateUpgradeable private _state;
    UserProfilesUpgradeable private _profiles;

    CountersUpgradeable.Counter private _tokenIds;
    mapping(uint256 => bool) private _locked;

    function initialize(string memory name_) public initializer {
        __ERC721_init("WinHero", "HERO");
        __AccessControl_init();
        __ERC721Enumerable_init();
        __ERC721URIStorage_init();
        __ERC165_init();
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _initializeEIP712(name_);
    }

    // This is to support Native meta transactions
    // never use msg.sender directly, use _msgSender() instead
    function _msgSender() internal view override returns (address sender) {
        return ContextMixin.msgSender();
    }

    /// @dev Sets the Heroes state contract.
    function setHeroStateContract(address _address)
        public
        returns (bool success)
    {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, _msgSender()),
            "HeroToken: access denied"
        );

        // Verify that it is an actual contract.
        require(_address != address(0), "HeroToken: invalid");

        // Set it.
        _state = HeroStateUpgradeable(_address);
        return true;
    }

    /// @dev Sets the users profiles contract.
    function setUserProfilesContract(address _address)
        public
        returns (bool success)
    {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, _msgSender()),
            "HeroToken: access denied"
        );

        // Verify that it is an actual contract.
        require(_address != address(0), "HeroToken: invalid");

        // Set it.
        _profiles = UserProfilesUpgradeable(_address);
        return true;
    }

    function setTokenURI(uint256 tokenId, string memory tokenURI_) public {
        require(
            hasRole(MINTER_ROLE, _msgSender()) ||
                hasRole(MODERATOR_ROLE, _msgSender()),
            "HeroToken: Caller is not a minter or moderator"
        );

        _setTokenURI(tokenId, tokenURI_);
    }

    function mint(
        address to,
        string memory tokenURI_,
        bool revealed
    ) public returns (uint256) {
        require(
            hasRole(MINTER_ROLE, _msgSender()),
            "HeroToken: not authorized"
        );

        require(
            _profiles.profileExists(to),
            "HeroToken: user needs a profile first"
        );

        _tokenIds.increment(); // start token sequence from 1
        uint256 tokenId = _tokenIds.current();
        _mint(to, tokenId);
        setTokenURI(tokenId, tokenURI_);

        Descriptor memory descriptor = Descriptor({
            rarity: 0,
            xp: 0,
            level: 0,
            revealed: revealed
        });
        _state.setDescriptor(tokenId, descriptor);

        return tokenId;
    }

    function getOwnedBy(address owner)
        public
        view
        returns (uint256[] memory tokens)
    {
        tokens = new uint256[](balanceOf(owner));
        for (uint256 i = 0; i < tokens.length; i++) {
            tokens[i] = tokenOfOwnerByIndex(owner, i);
        }
    }

    // lock token if it's in play
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    )
        internal
        virtual
        override(ERC721Upgradeable, ERC721EnumerableUpgradeable)
    {
        super._beforeTokenTransfer(from, to, tokenId);
        require(_locked[tokenId] == false, "HeroToken: Token is locked");
    }

    // TODO: Do we need the burnable extension or allow to burn? If burning a
    // token, the Descriptor needs to be deleted in the following instruction.

    // The following functions are overrides required by Solidity.
    function _burn(uint256 tokenId)
        internal
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
    {
        super._burn(tokenId);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    // https://forum.openzeppelin.com/t/derived-contract-must-override-function-supportsinterface/6315/2
    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(
            ERC721Upgradeable,
            AccessControlUpgradeable,
            ERC721EnumerableUpgradeable
        )
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function lock(uint256 tokenId, bool on) public {
        require(
            hasRole(MODERATOR_ROLE, msg.sender),
            "HeroToken: Caller is not a moderator"
        );
        _locked[tokenId] = on;
        emit Locked(ownerOf(tokenId), tokenId, on);
    }

    function isLocked(uint256 tokenId) public view returns (bool) {
        return _locked[tokenId];
    }
}

