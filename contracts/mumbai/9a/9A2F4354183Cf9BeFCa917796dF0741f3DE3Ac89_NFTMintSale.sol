pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@boringcrypto/boring-solidity/contracts/libraries/BoringERC20.sol";
import "../tokens/VibeERC721.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";

contract NFTMintSale is Ownable {
    using BoringERC20 for IERC20;

    uint256 public constant BPS = 100_000;
    address private immutable masterNFT;

    VibeERC721 public nft;
    uint64 public maxMint;
    uint32 beginTime;
    uint32 endTime;
    uint128 public price;
    IERC20 public paymentToken;
    

    constructor (address masterNFT_) {
        masterNFT = masterNFT_;
    }

    function initialize(string memory symbol, string memory name, string memory baseURI, address royaltyReceiver_, uint256 royaltyRate_, uint64 maxMint_, uint32 beginTime_, uint32 endTime_, uint128 price_, IERC20 paymentToken_) public {
        require(nft == VibeERC721(address(0)), "Already initialized");

        _transferOwnership(msg.sender);

        address proxy = Clones.clone(masterNFT);
        VibeERC721(proxy).initialize(name, symbol, baseURI);

        nft = VibeERC721(proxy);
        nft.setRoyalty(royaltyReceiver_, royaltyRate_);

        maxMint = maxMint_;
        price = price_;
        paymentToken = paymentToken_;
        beginTime = beginTime_;
        endTime = endTime_;
    }

    function buyNFT(address recipient) external {
        require(block.timestamp >= beginTime && block.timestamp <= endTime && nft.totalSupply() < maxMint);
        paymentToken.safeTransferFrom(msg.sender, address(this), price);
        nft.mint(recipient);
    }

    function removeTokensAndReclaimOwnership() external onlyOwner {
        require(block.timestamp > endTime);
        paymentToken.safeTransfer(owner(), paymentToken.balanceOf(address(this)));
        nft.transferOwnership(owner());
    }

}

