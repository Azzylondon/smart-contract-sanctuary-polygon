 * @title ControllerManagement
 * @dev Contract that adds management for controllers
 */
abstract contract ControllerManagement is ContextMixin {
    error OnlyAuthorizedController();
    error NonMatchingArgumentLengths();

    event ControllerPrivilegesChange(address indexed account, bool trusted);
    
    mapping(address => bool) private controllers;

    /**
     * @dev Checks if a given account is a controller
     */
