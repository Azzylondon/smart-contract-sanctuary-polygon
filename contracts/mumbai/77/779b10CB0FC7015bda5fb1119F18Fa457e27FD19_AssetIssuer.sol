import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {IERC721Receiver} from "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";

interface IMintableERC721 {
    function mintTo(address to) external returns (uint256);
    function mintById(address to, uint256 tokenId) external;
}

interface ITransferableERC721 {
    function transferFrom(address from, address to, uint256 tokenId) external;
}

interface IMintableERC20 {
    function mint(address to, uint256 tokenCount) external;
}

/**
 * @title AssetIssuer
 * @notice Contract for issuing on-chain assets
 */
contract AssetIssuer is
    OwnerWithdrawable,
    ControllerManagement,
    NativeMetaTransaction,
    ReentrancyGuard
{
    using SafeERC20 for IERC20;

    //The ERC-165 identifier for the ERC-173 Ownable standard is 0x7f5828d0
    bytes4 private constant INTERFACE_ID_ERC173 = 0x7f5828d0;

    event MintedERC721(address indexed controller, address indexed contractAddress, address indexed recipient, uint256 tokenId);
    event MintedERC721ById(address indexed controller, address indexed contractAddress, address indexed recipient, uint256 tokenId);
    event SentERC721(address indexed controller, address indexed contractAddress, address indexed recipient, uint256 tokenId);
    event MintedERC20(address indexed controller, address indexed contractAddress, address indexed recipient, uint256 tokenCount);
    event SentERC20(address indexed controller, address indexed contractAddress, address indexed recipient, uint256 tokenCount);
    event SentETH(address indexed controller, address indexed recipient, uint256 tokenCount);

    constructor(address _owner) {
        transferOwnership(_owner);
    }

    function mintERC721(
        address contractAddress,
        address recipient,
        uint256 tokenCount
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        IMintableERC721 token = IMintableERC721(contractAddress);
              
        for (uint256 i = 0; i < tokenCount; i++) {
          uint256 tokenId = token.mintTo(recipient);

          emit MintedERC721(controller, contractAddress, recipient, tokenId);
        }
    }

    function mintERC721ById(
        address contractAddress,
        address recipient,
        uint256 tokenId
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        IMintableERC721(contractAddress)
            .mintById(recipient, tokenId);

        emit MintedERC721ById(controller, contractAddress, recipient, tokenId);
    }

    function sendERC721(
        address contractAddress,
        address recipient,
        uint256 tokenId
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        ITransferableERC721(contractAddress)
            .transferFrom(address(this), recipient, tokenId);

        emit SentERC721(controller, contractAddress, recipient, tokenId);
    }

    function mintERC20(
        address contractAddress,
        address recipient,
        uint256 tokenCount
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        IMintableERC20(contractAddress)
            .mint(recipient, tokenCount);

        emit MintedERC20(controller, contractAddress, recipient, tokenCount);
    }

    function sendERC20(
        address contractAddress,
        address recipient,
        uint256 tokenCount
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        IERC20(contractAddress)
            .safeTransfer(recipient, tokenCount);

        emit SentERC20(controller, contractAddress, recipient, tokenCount);
    }

    function sendETH(
        address recipient,
        uint256 tokenCount
    ) external onlyControllers {
        if (recipient == address(0)) {
            revert AddressCannotBeZero();
        }

        address controller = msgSender();

        //If eth amount to withdraw is not zero then withdraw it
        if (tokenCount != 0) {
            (bool sent, ) = recipient.call{value: tokenCount}("");

            if (!sent) {
                revert FailedToSendEther();
            }
        }

        emit SentETH(controller, recipient, tokenCount);
    }

    function setController(address account, bool trusted) public onlyOwner {
        _setController(account, trusted);
    }
  
    function setControllers(address[] memory _minters, bool[] memory trusted) public onlyOwner {
        _setControllers(_minters, trusted);
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) public pure returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }

    function supportsInterface(bytes4 interfaceId) public pure returns (bool) {
        return
            interfaceId == type(IERC721Receiver).interfaceId ||
            interfaceId == INTERFACE_ID_ERC173;
    }

    receive() external payable {}
}

