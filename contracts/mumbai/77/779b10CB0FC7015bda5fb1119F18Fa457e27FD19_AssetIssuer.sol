        return controllers[account];
    }

    /**
     * @dev Add or remove the given account as a controller
     */
    function _setController(address account, bool trusted) internal {
        controllers[account] = trusted;

        emit ControllerPrivilegesChange(account, trusted);
    }

    /**
     * @dev Add or remove given accounts as a controller
     */
    function _setControllers(address[] memory _controllers, bool[] memory trusted) internal {
        if(_controllers.length != trusted.length) {
            revert NonMatchingArgumentLengths();
        }

