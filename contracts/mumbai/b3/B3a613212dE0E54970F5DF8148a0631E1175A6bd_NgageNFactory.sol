      _factoryName,
      _owner,
      address(proxy),
      address(admn),
      address(factoryForwarder),
      _assetCreator
    );
    factoryOwner[_factoryName] = _owner;
    factoryCreated[_factoryName] = true;

    emit FactoryCreated(
