import '@openzeppelin/contracts/proxy/transparent/TransparentUpgradeableProxy.sol';
import './NgageN.sol';
import './Administrator.sol';

contract NgageNFactory is AccessControl, ERC2771Context {
  bytes32 public constant CREATOR = keccak256('CREATOR');
  bytes32 public constant CONTRACT_CREATOR = keccak256('CONTRACT_CREATOR');
  address public ngageN;
  address public factoryForwarder;

  struct Factory {
    string _factoryName;
    address _owner;
    address _ngageN;
    address _administrator;
    address _customForwarder;
    address _assetCreator;
  }

  mapping(string => bool) public factoryCreated;
  mapping(string => address) public factoryOwner;
  mapping(string => Factory) public factories;

  event FactoryCreated(
    string _factoryName,
    address _owner,
    address _ngageN,
    address _administrator,
    address _customForwarder,
    address _assetCreator
  );

  /**
   * @dev Constructor for NgageNFactory contract
   */
  constructor(address _forwarder) ERC2771Context(_forwarder) {
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    _setupRole(CONTRACT_CREATOR, _msgSender());
    ngageN = address(new NgageN());
    factoryForwarder = _forwarder;
  }

  /**
     @dev modifier to check if the sender is the default admin of NgageNFactory contract
     * Revert if the sender is not the contract admin
     */
  modifier onlyAdmin() {
    require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), 'NNF: Only Admin');
    _;
  }

  /**
     @dev modifier to check if the sender is the trusted forwarder
     * Revert if the sender is not the trusted forwarder
     */
  modifier onlyTrustedForwarder() {
    require(isTrustedForwarder(msg.sender), 'NNF: Only Trusted Forwarder');
    _;
  }

  /**
     @dev Overriding _msgSender function inherited from Context and ERC2771Context
     */
  function _msgSender()
    internal
    view
    virtual
    override(Context, ERC2771Context)
    returns (address)
  {
    return ERC2771Context._msgSender();
  }

