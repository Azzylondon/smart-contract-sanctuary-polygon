    TransparentUpgradeableProxy proxy = new TransparentUpgradeableProxy(
      ngageN,
      _msgSender(),
      abi.encodeWithSelector(
        NgageN(address(0)).initialize.selector,
        _uri,
        _contractUri,
        _royaltyRecipient,
        _royaltyPercentage
      )
    );

