    ngageN = _ngageN;
  }

  /**
   * @dev Public function to set new custom forwarder contract address
   * Reverts if the caller is not an admin
   * @param _forwarder The address that will be set as new custom forwarder contract
   */
  function setNewForwarder(address _forwarder) public onlyAdmin {
    factoryForwarder = _forwarder;
  }
}

