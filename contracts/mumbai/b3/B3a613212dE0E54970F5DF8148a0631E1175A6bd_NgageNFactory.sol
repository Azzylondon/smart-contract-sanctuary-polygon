     @dev Overriding _msgData function inherited from Context and ERC2771Context
     */
  function _msgData()
    internal
    view
    virtual
    override(Context, ERC2771Context)
    returns (bytes calldata)
  {
    return ERC2771Context._msgData();
  }

  /**
   * @dev Public function to create a new NgageN (proxy) contract
   * Reverts if the caller is not forwarder contract
   * Reverts if the caller does not CONTRACT_CREATOR role
   * Reverts if the factory name has already been used
   * Reverts if the caller is same as @param _owner, since it cannot be proxy admin
   * @param _factoryName The unique name of factory
   * @param _uri The base URI to be passed as constructor parameter
   * @param _contractUri The contract metadata URI to be passed as constructor parameter
   * @param _owner The owner address which will have Default Admin rights to the factory
   * @param _assetCreator The address of the asset creator which has minitng rights
   */
  function createFactory(
    string memory _factoryName,
    string memory _uri,
    string memory _contractUri,
    address _owner,
    address _assetCreator,
    address _royaltyRecipient,
    uint256 _royaltyPercentage
  ) public onlyTrustedForwarder {
    require(
      hasRole(CONTRACT_CREATOR, _msgSender()),
      'NF: Only the contract creator can create a factory'
    );
