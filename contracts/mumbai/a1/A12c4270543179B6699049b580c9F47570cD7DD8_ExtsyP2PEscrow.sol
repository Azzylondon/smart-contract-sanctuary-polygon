pragma solidity ^0.8.17;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract ExtsyP2PEscrow is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    uint256 public platformFee = 3;
    uint256 public constant TOTAL_PERCENTAGE = 100;
    uint256 public constant MAX_PLATFORM_FEE = 10;
    uint256 public totalOrders = 0;
    uint256 public totalOrdersCompleted = 0;
    uint256 public totalOrdersReturned = 0;
    uint256 public totalAmountTraded = 0;

    uint256 public totalFee = 0;

    enum OrderStatus {
        active,
        completed,
        returned
    }

    struct Order {
        address sender;
        address receiver;
        uint256 amount;
        bool isActive;
        OrderStatus orderStatus;
    }

    event OrderEvent(
        uint256 orderID,
        address sender,
        address receiver,
        uint256 amount,
        bool isActive,
        OrderStatus orderStatus
    );

    event OrderCompleted(
        uint256 orderID,
        address sender,
        address receiver,
        uint256 amount,
        bool isActive,
        OrderStatus orderStatus
    );

    event OrderReturned(
        uint256 orderID,
        address sender,
        address receiver,
        uint256 amount,
        bool isActive,
        OrderStatus orderStatus
    );

    mapping(uint256 => Order) public orderData;
    mapping(address => uint256) public listingData;

    uint256 public currentOrderID = 1;
    uint256 public pendingAmount;

    constructor() {}

    function setPlatformFee(uint256 _newPlatformFee) external onlyOwner {
        require(
            _newPlatformFee <= MAX_PLATFORM_FEE &&
                _newPlatformFee != platformFee,
            "Invalid platform fee sent"
        );

        platformFee = _newPlatformFee;
    }

    function addListing() external payable {
        require(msg.value > 0, "Invalid amount");
        listingData[msg.sender] = listingData[msg.sender].add(msg.value);
    }

    function addOrder(address _receiver, uint256 _amountToAdd) external {
        require(_amountToAdd > 0, "Invalid amount");
        require(_amountToAdd <= listingData[msg.sender], "Invalid amount");
        require(_receiver != address(0), "Invalid receiver");

        uint256 fee = _amountToAdd.mul(platformFee).div(TOTAL_PERCENTAGE);
        uint256 _amount = _amountToAdd.sub(fee);
        totalFee = totalFee.add(fee);

        orderData[currentOrderID] = Order({
            sender: msg.sender,
            receiver: _receiver,
            amount: _amount,
            isActive: true,
            orderStatus: OrderStatus.active
        });

        emit OrderEvent(
            currentOrderID,
            msg.sender,
            _receiver,
            _amount,
            true,
            OrderStatus.active
        );

        pendingAmount = pendingAmount.add(_amount);
        listingData[msg.sender] = listingData[msg.sender].sub(_amountToAdd);

        totalOrders = totalOrders.add(1);
        totalAmountTraded = totalAmountTraded.add(_amount);
        currentOrderID = currentOrderID.add(1);
    }

    function releaseOrder(uint256 _orderId) external {
        require(
            orderData[_orderId].sender == msg.sender || owner() == msg.sender,
            "You are not allowed to do this operation"
        );
        require(orderData[_orderId].isActive, "Order is not active");

        orderData[_orderId].isActive = false;
        orderData[_orderId].orderStatus = OrderStatus.completed;

        pendingAmount = pendingAmount.sub(orderData[_orderId].amount);

        emit OrderCompleted(
            _orderId,
            orderData[_orderId].sender,
            orderData[_orderId].receiver,
            orderData[_orderId].amount,
            orderData[_orderId].isActive,
            orderData[_orderId].orderStatus
        );

        totalOrdersCompleted = totalOrdersCompleted.add(1);
        payable(orderData[_orderId].receiver).transfer(
            orderData[_orderId].amount
        );
    }

    function returnOrder(uint256 _orderId) external {
        require(
            orderData[_orderId].sender == msg.sender || owner() == msg.sender,
            "You are not allowed to do this operation"
        );
        require(orderData[_orderId].isActive, "Order is not active");

        orderData[_orderId].isActive = false;
        orderData[_orderId].orderStatus = OrderStatus.returned;
        pendingAmount = pendingAmount.sub(orderData[_orderId].amount);

        emit OrderReturned(
            _orderId,
            orderData[_orderId].sender,
            orderData[_orderId].receiver,
            orderData[_orderId].amount,
            orderData[_orderId].isActive,
            orderData[_orderId].orderStatus
        );

        totalOrdersReturned = totalOrdersReturned.add(1);
        listingData[orderData[_orderId].sender] = listingData[
            orderData[_orderId].sender
        ].add(orderData[_orderId].amount);
    }

    function getBalance() public view returns (uint256) {
        return address(this).balance;
    }

    function getWithdrawableAmount() public view returns (uint256) {
        return address(this).balance.sub(pendingAmount);
    }

    function withdrawAmount(uint256 _amount) external onlyOwner {
        uint256 withdrawableAmount = getWithdrawableAmount();
        require(_amount <= withdrawableAmount, "Insufficient balance");

        payable(msg.sender).transfer(_amount);
    }
}

