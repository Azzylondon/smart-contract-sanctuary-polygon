pragma solidity ^0.8.9;

interface IElteriaERC721 {
    enum AlgorithmType {
        Random,
        SemiRandom
    }

    struct Elty {
        AlgorithmType algorithm;
        bytes32 gene;
        uint256 unlockTime;
        uint256 hatchedTime;
    }

    function mint(address to, AlgorithmType algorithm, bytes32 genes, uint256 unlockTime) external returns(uint256);

    function update(uint256 tokenId, bytes32 genes) external;

    function burn(uint256[] memory tokenIds) external;

    function freeze(uint256[] memory tokenIds, uint256[] memory unlockTimes) external;

    function getEltyDataOf(uint256 tokenId) external view returns (Elty memory);

    function getGeneOf(uint256 tokenId) external view returns (bytes32);

    function isFrozen(uint256 tokenId) external view returns (bool);
}

