pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "./interfaces/IElteriaERC721.sol";


/// @title Elteria NFT breeding contract
/// @dev The upgradable contract
/// @author @seiji0411
contract ElteriaBreeding is OwnableUpgradeable, PausableUpgradeable, IERC721Receiver {
    enum PrimaryCategoryEnum {
        CATEGORY_A,
        CATEGORY_B,
        CATEGORY_C
    }

    enum OffspringStatus {
        NONE,
        IN_SLOT,
        RELEASED,
        HATCHED
    }

    struct Offspring {
        uint256 userId;
        uint256 parent1;
        uint256 parent2;
        address owner;
        OffspringStatus status;
        uint256 createdTp;
        uint256 hatchPeriod;
        uint256 hatchedTp;
    }

    address public apiAccount;
    address public elteriaNFT;
    uint256 public maxBreedCount;

    mapping(uint256 => Offspring) internal _offspringMap;
    mapping(uint256 => uint256[]) internal _childrenMap;
    mapping(uint256 => mapping(PrimaryCategoryEnum => uint256)) internal _perkLevelMap;
    mapping(uint256 => uint256) internal _slotMap;

    // ******************  Event functions  ********************
    event SetApiAccount(address indexed apiAccount);
    event Created(uint256 userId, address indexed to, IElteriaERC721.AlgorithmType algorithm, uint256 indexed parentId1, uint256 indexed parentId2, uint256 offspringId);
    event Released(uint256 userId, uint256 indexed offspringId, address to);
    event Emerged(uint256 userId, uint256 indexed offspringId, bytes32 gene);
    event Merged(uint256 userId, uint256 indexed mainId, uint256[] donorIds, PrimaryCategoryEnum cat, uint256 newLevel);

    // ******************  Errors  *****************************
    error InvalidApiAccount();
    error InvalidSigner();
    error InvalidNFT();
    error InvalidAddress();
    error InvalidHatchPeriod();
    error SameParents();
    error InvalidOwner();
    error InvalidGene();
    error EmptyDonors();
    error MaxBreedLimit();
    error FamilyRelation();
    error InvalidAction();
    error InvalidHatchTime();

    modifier onlyApi() {
        if(msg.sender != apiAccount) revert InvalidSigner();
        _;
    }

    /// @dev Prevent initialization of the implementation contract itself and prevent an attacker from initializing it
    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(address elteriaNFT_, address apiAccount_) public initializer {
        if(apiAccount_ == address(0)) revert InvalidApiAccount();
        if(elteriaNFT_ == address(0)) revert InvalidNFT();

        elteriaNFT = elteriaNFT_;
        apiAccount = apiAccount_;

        // Max limit number of breeding
        maxBreedCount = 5;

        // Ownable Initialize
        __Ownable_init();
        // Pausable Initialize
        __Pausable_init();
    }

    function create(uint256 userId, address to, IElteriaERC721.AlgorithmType algorithm, uint256 parentId1, uint256 parentId2, uint256 hatchPeriod) external onlyApi returns (uint256 offspringId) {
        if(to == address(0)) revert InvalidAddress();
        if(hatchPeriod == 0) revert InvalidHatchPeriod();
        if(parentId1 == parentId2) revert SameParents();

        // check family
        if(isFamily(parentId1, parentId2) == true) revert FamilyRelation();

        // check max breed count
        uint256[] memory children1  = getChildrenOf(parentId1);
        uint256[] memory children2  = getChildrenOf(parentId2);
        if(children1.length >= maxBreedCount || children2.length >= maxBreedCount) {
            revert MaxBreedLimit();
        }

        // increase slot count
        _slotMap[userId]++;

        // freeze parents and mint offspring with empty gene
        uint256[] memory parentIds = new uint256[](2);
        parentIds[0] = parentId1;
        parentIds[1] = parentId2;
        uint256[] memory unlockTimes = new uint256[](2);
        uint256 unlockTime = block.timestamp + hatchPeriod;
        unlockTimes[0] = unlockTime;
        unlockTimes[1] = unlockTime;
        IElteriaERC721(elteriaNFT).freeze(parentIds, unlockTimes);
        offspringId = IElteriaERC721(elteriaNFT).mint(address(this), algorithm, bytes32(0), 0);

        _childrenMap[parentId1].push(offspringId);
        _childrenMap[parentId2].push(offspringId);

        _offspringMap[offspringId] = Offspring({
            userId: userId,
            parent1: parentId1,
            parent2: parentId2,
            owner: to,
            createdTp: block.timestamp,
            hatchPeriod: hatchPeriod,
            status: OffspringStatus.IN_SLOT,
            hatchedTp: 0
        });

        emit Created(userId, to, algorithm, parentId1, parentId2, offspringId);
    }

    function isFamily(uint256 p1, uint256 p2) public view returns (bool) {
        // check parents
        Offspring memory p = getParentOf(p1);
        if(p.parent1 == p2) return true;
        if(p.parent2 == p2) return true;

        // check brothers and sisters, half-brothers, half-sisters
        uint256[] memory children = getChildrenOf(p.parent1);
        for(uint256 i = 0; i < children.length; i++) {
            if(children[i] == p2) return true;
        }
        children = getChildrenOf(p.parent2);
        for(uint256 i = 0; i < children.length; i++) {
            if(children[i] == p2) return true;
        }

        // check parents
        p = getParentOf(p2);
        if(p.parent1 == p1) return true;
        if(p.parent2 == p1) return true;

        // check brothers and sisters, half-brothers, half-sisters
        children = getChildrenOf(p.parent1);
        for(uint256 i = 0; i < children.length; i++) {
            if(children[i] == p1) return true;
        }
        children = getChildrenOf(p.parent2);
        for(uint256 i = 0; i < children.length; i++) {
            if(children[i] == p1) return true;
        }

        return false;
    }

    function getChildrenOf(uint256 eltyId) public view returns (uint256[] memory) {
        return _childrenMap[eltyId];
    }

    function getParentOf(uint256 eltyId) public view returns (Offspring memory) {
        return _offspringMap[eltyId];
    }

    function release(uint256 offspringId) external onlyApi {
        Offspring storage offspring = _offspringMap[offspringId];
        if(offspring.createdTp + offspring.hatchPeriod > block.timestamp) revert InvalidHatchTime();
        if(offspring.status != OffspringStatus.IN_SLOT) revert InvalidAction();

        offspring.status = OffspringStatus.RELEASED;
        _slotMap[offspring.userId]--;
        IERC721(elteriaNFT).transferFrom(address(this), offspring.owner, offspringId);

        emit Released(offspring.userId, offspringId, offspring.owner);
    }

    function emerge(uint256 offspringId, bytes32 gene) external onlyApi {
        if(gene == bytes32(0)) revert InvalidGene();

        Offspring storage offspring = _offspringMap[offspringId];
        if(offspring.status != OffspringStatus.RELEASED) revert InvalidAction();

        offspring.hatchedTp = block.timestamp;

        // Update gene of offspring
        IElteriaERC721(elteriaNFT).update(offspringId, gene);

        emit Emerged(offspring.userId, offspringId, gene);
    }

    function merge(uint256 userId, uint256 mainId, uint256[] memory donorIds, PrimaryCategoryEnum category) external  onlyApi {
        if(donorIds.length == 0) revert EmptyDonors();

        address to = IERC721(elteriaNFT).ownerOf(mainId);
        if(to == address(0)) revert InvalidOwner();

        uint256 newLevel = _perkLevelMap[mainId][category] + 1;
        _perkLevelMap[mainId][category] = newLevel;

        // burn olds
        IElteriaERC721(elteriaNFT).burn(donorIds);

        emit Merged(userId, mainId, donorIds, category, newLevel);
    }

    /// @dev Set Api account address
    /// @param _apiAccount New api account address
    function setApiAccount(address _apiAccount) external onlyOwner {
        if(_apiAccount == address(0)) revert InvalidApiAccount();

        apiAccount = _apiAccount;

        emit SetApiAccount(_apiAccount);
    }

    /// @dev Get perk level of Elty about special category
    function getPerkLevel(uint256 eltyId, PrimaryCategoryEnum category) public view returns (uint256){
        return _perkLevelMap[eltyId][category];
    }

    /// @dev Get the number of slots used by user
    function getSlotsOf(uint256 userId) public view returns (uint256) {
        return _slotMap[userId];
    }

    /// @dev pause locking/unlocking
    function pause() external onlyOwner {
        _pause();
    }

    /// @dev unpause locking/unlocking
    function unpause() external onlyOwner {
        _unpause();
    }

    /// @dev ERC721 Receiver override
    function  onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) override external pure returns (bytes4){
        return this.onERC721Received.selector;
    }
}

