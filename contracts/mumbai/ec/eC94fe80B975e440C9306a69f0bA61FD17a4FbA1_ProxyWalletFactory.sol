    function call(address contractToCall, bytes calldata abiEncodedData) external payable onlyOwner nonReentrant returns (bytes memory) {
        (bool success, bytes memory data) = contractToCall.call{value: msg.value}(abiEncodedData); // solhint-disable-line
        require(success, string(data));
        return data;
    }
}

