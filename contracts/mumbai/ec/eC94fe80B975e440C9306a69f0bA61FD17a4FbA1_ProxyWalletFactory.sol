contract ProxyWallet is ReentrancyGuard, ERC1155Holder, ERC721Holder {
    address public owner;

    modifier onlyOwner() {
        require(msg.sender == owner, 'Only owner is allowed!');
        _;
    }

    constructor(address _owner) {
        owner = _owner;
    }

    function transferOwnership(address newOwner) external onlyOwner {
        owner = newOwner;
    }

    /**
     *  @dev Call other contracts in behalf of this contract address.
     *  @param contractToCall The contract's address to be called.
     *  @param abiEncodedData The function to be called, encoded with its params.
