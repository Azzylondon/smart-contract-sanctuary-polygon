pragma solidity 0.8.9;

import './ProxyWallet.sol';

contract ProxyWalletFactory {
    ProxyWallet[] public proxyWallets;
    uint256 public count;

    event ProxyWalletCreated(address indexed walletAddress, uint256 index);

    function create(address owner) external returns (address) {
        ProxyWallet proxyWallet = new ProxyWallet(owner);
        proxyWallets.push(proxyWallet);
        emit ProxyWalletCreated(address(proxyWallet), count);
        count++;
        return address(proxyWallet);
    }
}

