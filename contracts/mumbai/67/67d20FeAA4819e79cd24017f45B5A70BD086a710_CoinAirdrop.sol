pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./access/BaseAccessControl.sol";

contract CoinAirdrop is BaseAccessControl {
    string public constant BAD_TRANSFER_ARGS_ERROR = "CoinAirdrop: bad transfer arguments";

    address private _coinAddress;

    event BatchTransfer(uint batchId);

    constructor(address accessControl, address cnAddress) BaseAccessControl(accessControl) {
        _coinAddress = cnAddress;
    }

    function coinAddress() public view returns (address) {
        return _coinAddress;
    }

    function setCoinAddress(address newAddress) external onlyRole(COO_ROLE) {
        address previousAddress = _coinAddress;
        _coinAddress = newAddress;
        emit AddressChanged("coin", previousAddress, newAddress);
    }

    function batchTransfer(uint batchId, address[] calldata to, uint[] calldata amounts) external onlyRole(CFO_ROLE) {
        require(to.length == amounts.length, BAD_TRANSFER_ARGS_ERROR);
        
        IERC20 coin = IERC20(coinAddress());
        for (uint i = 0; i < to.length; i++) {
            coin.transfer(to[i], amounts[i]);
        }

        emit BatchTransfer(batchId);
    }
}

