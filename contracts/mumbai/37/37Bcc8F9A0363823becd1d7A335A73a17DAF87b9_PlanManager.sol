pragma solidity 0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./IPlanManager.sol";
import "../libs/Period.sol";

contract PlanManager is IPlanManager, Ownable {
    address public manager;

    mapping(uint256 => Plan[]) private merchantTokenIdToPlans;

    modifier onlyManager() {
        require(msg.sender == manager, "only can call by manager");
        _;
    }

    function setManager(address _manager) external override onlyOwner {
        manager = _manager;
    }

    function createPlan(
        uint256 merchantTokenId,
        string memory name,
        string memory description,
        Period.PeriodType period,
        address paymentToken,
        uint256 price
//        Period.PeriodType termPeriod
    ) external override onlyManager {
        Plan memory plan = Plan(
            name,
            description,
            Period.PeriodType(period),
            paymentToken,
            price,
//            Period.PeriodType(termPeriod),
            true
        );
        merchantTokenIdToPlans[merchantTokenId].push(plan);
    }

    function disablePlan(uint256 merchant, uint256 planIndex)
        external
        override
        onlyManager
    {
        Plan storage plan = merchantTokenIdToPlans[merchant][planIndex];
        plan.enabled = false;
    }

    function getPlan(uint256 merchantTokenId, uint256 planIndex)
        external
        view
        override
        returns (Plan memory plan)
    {
        plan = merchantTokenIdToPlans[merchantTokenId][planIndex];
    }

    function getPlans(uint256 merchantTokenId)
        external
        view
        override
        returns (Plan[] memory plans)
    {
        plans = merchantTokenIdToPlans[merchantTokenId];
    }
}

