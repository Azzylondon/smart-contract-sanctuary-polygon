pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "./ISoulboundToken.sol";
import "./ISoulboundable.sol";

contract SoulboundToken is Context, ERC165, ISoulboundToken {
    using Address for address;
    using ERC165Checker for address;

    struct NFT {
        address nftAddress;
        uint256 nftTokenId;
    }

    // Token souls
    mapping(uint256 => NFT) private _nfts;

    // Token name
    string private _name;

    // Token symbol
    string private _symbol;

    mapping(uint256 => string) private _tokenURIs;

    mapping(address => mapping(uint256 => uint256[])) private _ownedTokens;

    constructor(string memory name_, string memory symbol_) {
        _name = name_;
        _symbol = symbol_;
    }

    function boundTo(uint256 tokenId)
        public
        view
        returns (address nftAddress, uint256 nftTokenId)
    {
        _requireMinted(tokenId);
        NFT memory _nft = _nfts[tokenId];
        return (_nft.nftAddress, _nft.nftTokenId);
    }

    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        _requireMinted(tokenId);
        return _tokenURIs[tokenId];
    }

    function tokenOfOwnerByIndex(
        address nftAddress,
        uint256 nftToken,
        uint256 index
    ) external view returns (uint256) {
        return _ownedTokens[nftAddress][nftToken][index];
    }

    function tokenSupply(address nftAddress, uint256 nftTokenId)
        external
        view
        returns (uint256)
    {
        return _ownedTokens[nftAddress][nftTokenId].length;
    }

    function mint(
        address nftAddress,
        uint256 nftTokenId,
        uint256 tokenId,
        string memory uri
    ) public {
        require(
            !_exists(tokenId),
            "SoulboundToken: mint of already existed token"
        );
        require(
            nftAddress.isContract(),
            "SoulboundToken: address is not a contract"
        );

        NFT memory _newNFT = NFT(nftAddress, nftTokenId);
        _tokenURIs[tokenId] = uri;
        _nfts[tokenId] = _newNFT;
        _ownedTokens[nftAddress][nftTokenId].push(tokenId);

        _bind(tokenId, nftAddress, nftTokenId);

        emit Mint(tokenId, nftAddress, nftTokenId);
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC165, IERC165)
        returns (bool)
    {
        return
            interfaceId == type(ISoulboundToken).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function _bind(
        uint256 tokenId,
        address nftAddress,
        uint256 nftTokenId
    ) internal {
        bytes4 interfaceId = type(ISoulboundable).interfaceId;
        if (nftAddress.supportsInterface(interfaceId)) {
            ISoulboundable(nftAddress).bind(nftTokenId, address(this), tokenId);
        }
    }

    function _exists(uint256 tokenId) internal view virtual returns (bool) {
        return
            _nfts[tokenId].nftAddress != address(0) &&
            _nfts[tokenId].nftTokenId != 0;
    }

    function _requireMinted(uint256 tokenId) internal view virtual {
        require(_exists(tokenId), "SoulboundToken: invalid token ID");
    }
}

