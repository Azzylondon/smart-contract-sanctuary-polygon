import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./Whitelist.sol";
import "./FullMath.sol";

//TODO create events
contract AUTXO is ERC20, Ownable, Whitelist {
    using SafeERC20 for IERC20;

    mapping(address => uint256) public contribution;
    uint32 public startTime;
    uint32 public endTime;

    // Min and max contribution in USDC (with decimals)
    uint256 public minimumContribution;
    uint256 public maximumContribution;
    uint256 public totalContribution;

    // 125000 tokens reserved for CopperLaunch
    // 80000 tokens for the presale
    uint256 constant public SALE_SUPPLY = 205000;
    uint256 constant public PRESALE_PRICE = 25;
    uint256 internal constant USDC_DECIMALS = 10 ** 18;

    address public USDC; 
    // Balancer: Liquidity Bootstrapping Pool Factory
    // https://polygonscan.com/address/0x751a0bc0e3f75b38e01cf25bfce7ff36de1c87de
    address public COPPERLAUNCH_CONTRACT;
    event Contribute(address indexed from, uint256 amount, uint256 allocation);

    // Whitelist takes the merklee tree root 
    constructor(address _USDC, address _COPPERLAUNCH_CONTRACT, bytes32 _merkleRoot) ERC20("aUTXO", "aUTXO") Whitelist(_merkleRoot) {
        // fund the contract with total supply
        _mint(address(this), SALE_SUPPLY * 10 ** decimals());
        require( _USDC != address(0), "0x0 address forbidden" );
        USDC = _USDC;
        require( _COPPERLAUNCH_CONTRACT != address(0), "0x0 address forbidden" );
        COPPERLAUNCH_CONTRACT = _COPPERLAUNCH_CONTRACT;
    }

    function setStartTime (uint32 _startTime) public onlyOwner {
        startTime= _startTime;
        endTime= startTime + 2 days;
    }

    function getStartTime() public view returns(uint32) {
        return startTime;
    }

    function getEndTime() public view returns(uint32) {
        return endTime;
    }

    // Minimum contribution set in USDC
    function setMinimumContribution (uint256 _minimumContribution) public onlyOwner {
        minimumContribution= _minimumContribution;
    }

    // Maximum contribution set in USDC
    function setMaximumContribution (uint256 _maximumContribution) public onlyOwner {
        maximumContribution= _maximumContribution;
    }

    // Contribution is only allowed using USDC
    function contribute(bytes32[] memory _proof, uint256 _amount, uint8 _bonus) external {
        require(block.timestamp >= startTime, "Sale has not started");
        require(block.timestamp < endTime, "Sale has ended");
        require(isWhitelisted(_proof, _bonus), "Not whitelisted");
        require(contribution[msg.sender]==0, "Contribution already made");

        // Check contribution range
        require(_amount >= minimumContribution, "Minimum contribution not reached");
        require(_amount <= maximumContribution, "Maximum contribution exceeded");

        // Transfer USDC to contract
        IERC20(USDC).safeTransferFrom(msg.sender, address(this), _amount);

        contribution[msg.sender] = _amount;
        totalContribution+=_amount;

        // Calculate individual allocation 
        uint256 baseAllocation = FullMath.mulDivRoundingUp(_amount, 1, PRESALE_PRICE);
        uint256 bonus = calculateBonus(baseAllocation, _bonus);

        // Trasfer aUTXO to sender
        _transfer(address(this), msg.sender, baseAllocation + bonus);

        emit Contribute(msg.sender, _amount, baseAllocation + bonus);
    }

    // Bonus specified in percentage
    function calculateBonus(uint256 _allocation, uint8 _bonus) internal pure returns(uint256) {
        if (_bonus > 0 ) {
            return FullMath.mulDivRoundingUp(_allocation, _bonus, 100);
        }
        return 0;
    }

    // Approve transfer of USDC and remaining aUTXO from the specified smart contract (Copper Launch)
    function approveTokensTransfer() external onlyOwner {
        IERC20(USDC).approve(COPPERLAUNCH_CONTRACT, totalContribution);
        this.approve(COPPERLAUNCH_CONTRACT, SALE_SUPPLY * 10 ** decimals());
    }
}

