import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

contract Whitelist{

    bytes32 public merkleRoot;

    constructor(bytes32 _root) {
        merkleRoot = _root;
    }

    // Check if the caller is part ot the merkle tree
    function isWhitelisted(bytes32[] memory _proof, uint8 _bonus) public view returns (bool) {
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender, _bonus));
        bool valid = MerkleProof.verify(
            _proof,
            merkleRoot,
            leaf
        );

        return valid;
    }
}

