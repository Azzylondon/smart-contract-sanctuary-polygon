pragma solidity ^0.8.0;

import './TitleTransfer.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol';

contract RodoPayment is Ownable {
    event RodoPaymentReceipt(
        address payer_,
        string titleId_,
        uint256 _messageValue
    );

    TitleTransfer titleTransfer;
    bool isTestModeEnabled = false;
    AggregatorV3Interface internal priceFeed;

    constructor(
        address _titleTransferContractAddress,
        address _polygonPriceContractAddress
    ) {
        titleTransfer = TitleTransfer(_titleTransferContractAddress);
        isTestModeEnabled = true;
        priceFeed = AggregatorV3Interface(_polygonPriceContractAddress);
    }

    struct Payment {
        address payer;
        uint256 messageValue;
        uint256 polygonPrice;
        uint256 date;
    }
    mapping(string => Payment) public _titlePaymentList;

    function rodo_titlePayment(string memory titleInternalId_)
        public
        payable
        returns (bool)
    {
        require(
            titleTransfer.rodo_isTitleExists(titleInternalId_),
            "titleInternalId_ doesn't exists"
        );
        require(
            _titlePaymentList[titleInternalId_].messageValue == 0,
            'Already paid for this titleInternalId_'
        );

        (, , , , , uint256 totalAmountToBePaid) = titleTransfer.rodo_viewTitle(
            titleInternalId_
        );
        uint256 currentMaticPrice = getLatestPrice();
        uint256 requiredMatic = ((totalAmountToBePaid * 100) /
            currentMaticPrice) * (1 ether);

        if (!isTestModeEnabled) {
            require(
                msg.value >= requiredMatic,
                'You are sending less MATIC than  required : '
            );
        } else {
            require(
                msg.value >= 0.01 ether,
                'You are sending less MATIC than  required : 0.01'
            );
        }
        _titlePaymentList[titleInternalId_] = Payment(
            msg.sender,
            msg.value,
            currentMaticPrice,
            block.timestamp
        );

        emit RodoPaymentReceipt(msg.sender, titleInternalId_, msg.value);
        return true;
    }

    //TO enable the test Mode
    function rodo_admin_activateTestMode(bool _isTestModeEnabled)
        public
        onlyOwner
    {
        isTestModeEnabled = _isTestModeEnabled;
    }

    //Withdraw balance to owner account
    function withdraw() public payable onlyOwner {
        require(payable(msg.sender).send(address(this).balance));
    }

    function getLatestPrice() public view returns (uint256) {
        (
            ,
            /*uint80 roundID*/
            int256 price, /*uint startedAt*/ /*uint timeStamp*/ /*uint80 answeredInRound*/
            ,
            ,

        ) = priceFeed.latestRoundData();

        //to get only 2 decimal point
        price = price / 1000000;
        return uint256(price);
    }
}

