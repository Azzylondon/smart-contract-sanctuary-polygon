pragma solidity ^0.8.0;

import './list/TitleList.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/access/AccessControl.sol';

contract TitleTransfer is TitleList, Ownable, AccessControl {
    event RodoPublishTitle(
        address publisher_,
        string titleInternalId_,
        string vin_
    );
    bytes32 public constant PUBLISHER_ROLE = keccak256('PUBLISHER_ROLE');

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(PUBLISHER_ROLE, msg.sender);
    }

    function rodo_publishTitle(
        string memory titleInternalId,
        string memory vin,
        string memory dmvTitleId,
        string memory buyerState,
        uint256 internalStage,
        uint256 totalAmountToBePaid
    ) public returns (bool) {
        require(
            hasRole(PUBLISHER_ROLE, msg.sender),
            'Caller is not a publisher'
        );
        require(
            _titleList[titleInternalId].internalStage == 0,
            'Already rodo titles exists'
        );
        _titleList[titleInternalId] = TitleM(
            titleInternalId,
            vin,
            dmvTitleId,
            buyerState,
            internalStage,
            totalAmountToBePaid
        );
        emit RodoPublishTitle(msg.sender, titleInternalId, vin);
        return true;
    }

    function rodo_viewTitle(string memory titleInternalId_)
        public
        view
        returns (
            string memory,
            string memory,
            string memory,
            string memory,
            uint256,
            uint256
        )
    {
        TitleM memory _title = _titleList[titleInternalId_];
        require(_title.internalStage != 0, 'No rodo titles exists');
        return (
            _title.titleInternalId,
            _title.vin,
            _title.dmvTitleId,
            _title.buyerState,
            _title.internalStage,
            _title.totalAmountToBePaid
        );
    }

    function rodo_isTitleExists(string memory titleInternalId_)
        public
        view
        returns (bool)
    {
        TitleM memory _title = _titleList[titleInternalId_];
        if (_title.internalStage == 0) {
            return false;
        }
        return true;
    }
}

