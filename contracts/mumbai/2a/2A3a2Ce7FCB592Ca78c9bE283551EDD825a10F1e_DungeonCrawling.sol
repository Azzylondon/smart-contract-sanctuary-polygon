pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";

import "./DungeonCrawlingSettings.sol";

contract DungeonCrawling is Initializable, DungeonCrawlingSettings {

    function initialize() external initializer {
        DungeonCrawlingSettings.__DungeonCrawlingSettings_init();
    }

    function startDungeonCrawl(
        string calldata _dungeonName,
        DungeonCrawlingEntity[] calldata _orcEntities,
        DungeonCrawlingEntity[] calldata _allyEntities,
        uint64[] calldata _inputQuantities)
    external
    whenNotPaused
    contractsAreSet
    {
        // Unstake anything from the last run first.
        _unstakeItemsAndEntitiesIfNeeded();

        _updateDungeonForUser(_dungeonName);
        _stakeEntities(_dungeonName, _orcEntities, _allyEntities);
        _stakeInputs(_dungeonName, _inputQuantities);

        emit DungeonStarted(msg.sender, _dungeonName, _orcEntities, _allyEntities, userToInfo[msg.sender].suppliedInputs);
    }

    function _updateDungeonForUser(
        string calldata _dungeonName)
    private
    {
        require(!isUserDungeonCrawling(msg.sender), "DungeonCrawling: User is already dungeon crawling");
        require(isKnownDungeon(_dungeonName), "DungeonCrawling: Unknown dungeon");

        DungeonInfo storage _dungeonInfo = dungeonNameToInfo[_dungeonName];
        require(_dungeonInfo.endTime == 0 || block.timestamp < _dungeonInfo.endTime, "DungeonCrawling: Dungeon has ended");
        require(_dungeonInfo.maxNumberOfCrawlsGlobal == 0 || _dungeonInfo.currentNumberOfCrawls < _dungeonInfo.maxNumberOfCrawlsGlobal,
            "DungeonCrawling: Dungeon has reached global limit");

        _dungeonInfo.currentNumberOfCrawls++;

        UserInfo storage _userInfo = userToInfo[msg.sender];

        require(block.timestamp >= _userInfo.lastDungeonEndTime + dungeonCooldownPeriod, "DungeonCrawling: Must cooldown before starting a new dungeon");

        _userInfo.dungeonStartTime = block.timestamp;
        _userInfo.activeDungeonName = _dungeonName;

        if(_dungeonInfo.zugCost > 0) {
            zug.burn(msg.sender, _dungeonInfo.zugCost);
        }
    }

    function _stakeEntities(
        string calldata _dungeonName,
        DungeonCrawlingEntity[] calldata _orcEntities,
        DungeonCrawlingEntity[] calldata _allyEntities)
    private
    {
        uint256 _totalEntities = _allyEntities.length + _orcEntities.length;
        require(_totalEntities > 0, "DungeonCrawling: Must take at least one entity into dungeon");
        require(dungeonNameToInfo[_dungeonName].maxEntitiesPerCrawl >= _totalEntities, "DungeonCrawling: Too many entities sent to dungeon");

        UserInfo storage _userInfo = userToInfo[msg.sender];

        uint256[] memory _orcIds = new uint256[](_orcEntities.length);

        for(uint256 i = 0; i < _orcEntities.length; i++) {
            (,,,,uint16 _level,,) = orcs.orcs(_orcEntities[i].tokenId);
            _orcIds[i] = _orcEntities[i].tokenId;

            require(_orcEntities[i].collection == address(orcs), "DungeonCrawling: Bad address for entity collection");

            _storeEntity(_dungeonName, _orcEntities[i], _level);

            _userInfo.activeEntities.push(_orcEntities[i]);
        }

        uint256[] memory _allyIds = new uint256[](_allyEntities.length);

        for(uint256 i = 0; i < _allyEntities.length; i++) {
            (,uint16 _level,,,,) = allies.allies(_allyEntities[i].tokenId);
            _orcIds[i] = _allyEntities[i].tokenId;

            require(_orcEntities[i].collection == address(allies), "DungeonCrawling: Bad address for entity collection");

            _storeEntity(_dungeonName, _allyEntities[i], _level);

            _userInfo.activeEntities.push(_allyEntities[i]);
        }

        if(_orcIds.length > 0) {
            orcs.pull(msg.sender, _orcIds);
        }
        if(_allyIds.length > 0) {
            allies.pull(msg.sender, _allyIds);
        }
    }

    function _storeEntity(
        string calldata _dungeonName,
        DungeonCrawlingEntity calldata _entity,
        uint16 _level)
    private
    {
        DungeonInfo storage _dungeonInfo = dungeonNameToInfo[_dungeonName];
        require(_level >= _dungeonInfo.minimumLevel, "DungeonCrawling: Entity is not at the minimum level for the dungeon");

        require(_dungeonInfo.maxNumberOfCrawlsPerEntity == 0
            || _dungeonInfo.maxNumberOfCrawlsPerEntity > dungeonNameToCollectionToTokenIdToNumberOfCrawls[_dungeonName][_entity.collection][_entity.tokenId],
            "DungeonCrawling: Entity has reached maximum crawls for this dungeon");

        dungeonNameToCollectionToTokenIdToNumberOfCrawls[_dungeonName][_entity.collection][_entity.tokenId]++;

        _stakeEquipment(_entity.mainHandItemId, EQUIPMENT_MAIN_HAND);
        _stakeEquipment(_entity.offHandItemId, EQUIPMENT_OFF_HAND);
        _stakeEquipment(_entity.armorItemId, EQUIPMENT_ARMOR);
    }

    function _stakeEquipment(uint64 _equipmentId, string memory _equipmentType) private {
        if(_equipmentId == 0) {
            return;
        }

        // This check ensures that the given equipment ID is of the right type. They can't
        // equip a sword as their armor.
        require(compareStrings(_equipmentType, dungeonCrawlingItem.propertyValueForToken(_equipmentId, EQUIPMENT_TYPE_PROPERTY_NAME)),
            "DungeonCrawling: Incorrect equipment type");

        dungeonCrawlingItem.noApprovalSafeTransferFrom(msg.sender, address(this), _equipmentId, 1);
    }

    function _stakeInputs(
        string calldata _dungeonName,
        uint64[] calldata _inputQuantities)
    private
    {
        DungeonInfo storage _dungeonInfo = dungeonNameToInfo[_dungeonName];
        require(_inputQuantities.length == _dungeonInfo.inputs.length, "DungeonCrawling: Input length must match dungeon input length");

        UserInfo storage _userInfo = userToInfo[msg.sender];

        for(uint256 i = 0; i < _inputQuantities.length; i++) {
            uint64 _quantity = _inputQuantities[i];
            DungeonInputRequirement storage _inputRequirement = _dungeonInfo.inputs[i];

            if(_quantity == 0 && _inputRequirement.minQuantity == 0) {
                continue;
            } else {
                require(_quantity >= _inputRequirement.minQuantity, "DungeonCrawling: Quantity given less than minimum required");
                require(_inputRequirement.maxQuantity == 0 || _quantity <= _inputRequirement.maxQuantity, "DungeonCrawling: Quantity given over maximum");

                if(_inputRequirement.collection == address(etherOrcsItems)) {
                    if(_inputRequirement.willBurn) {
                        etherOrcsItems.burn(msg.sender, _inputRequirement.itemId, _quantity);
                    } else {
                        etherOrcsItems.safeTransferFrom(msg.sender, address(this), _inputRequirement.itemId, _quantity, "");
                    }
                } else if(_inputRequirement.collection == address(dungeonCrawlingItem)) {
                    if(_inputRequirement.willBurn) {
                        dungeonCrawlingItem.burn(msg.sender, _inputRequirement.itemId, _quantity);
                    } else {
                        dungeonCrawlingItem.noApprovalSafeTransferFrom(msg.sender, address(this), _inputRequirement.itemId, _quantity);
                    }
                } else {
                    revert("DungeonCrawling: Unknown item collection");
                }
            }

            _userInfo.suppliedInputs.push(DungeonSuppliedInput(
                _inputRequirement.collection,
                _inputRequirement.itemId,
                _quantity,
                _inputRequirement.willBurn));
        }
    }

    function endDungeonCrawl(
        DungeonCrawlingOutcome calldata _outcome,
        bytes calldata _signature)
    external
    whenNotPaused
    contractsAreSet
    {
        require(isUserDungeonCrawling(msg.sender), "DungeonCrawling: User is not dungeon crawling");

        UserInfo storage _userInfo = userToInfo[msg.sender];

        bytes32 _messageHash = keccak256(
            abi.encodePacked(
                _outcome.zugAmount,
                _outcome.dungeonCrawlingItemIds,
                _outcome.dungeonCrawlingItemAmounts,
                msg.sender,
                _userInfo.dungeonStartTime
            )
        );

        require(_verifySignature(_messageHash, _signature), "Dungeon Crawling: Invalid signature");

        // No need to clear other fields of UserInfo.
        // Saves on gas and will not be useful while dungeonStartTime is 0.
        // Also blocks re-entrance
        _userInfo.lastDungeonEndTime = block.timestamp;
        delete _userInfo.dungeonStartTime;

        _mintRewards(_outcome);

        // If no unlock period, release everything immediately.
        if(dungeonUnlockPeriod == 0) {
            _unstakeEntities();
            _unstakeItems();
        }

        emit DungeonEnded(msg.sender, _userInfo.activeDungeonName, _outcome);
    }

    function unstakeItemsAndEntities()
    external
    whenNotPaused
    contractsAreSet
    {
        // If they do not have anything to unstake, don't let the txn go through.
        // Saves the user gas.
        require(doesUserHaveStakedEntities(msg.sender), "DungeonCrawling: Nothing to unstake");

        _unstakeItemsAndEntitiesIfNeeded();
    }

    function _unstakeItemsAndEntitiesIfNeeded() private {
        if(!doesUserHaveStakedEntities(msg.sender)) {
            return;
        }

        require(!isUserDungeonCrawling(msg.sender), "DungeonCrawling: Cannot unstake while dungeon crawling");

        require(block.timestamp >= userToInfo[msg.sender].lastDungeonEndTime + dungeonUnlockPeriod,
            "DungeonCrawling: Entities have not unlocked after dungeon crawling");

        _unstakeEntities();
        _unstakeItems();
    }

    function _verifySignature(
        bytes32 _messageHash,
        bytes calldata _signature)
    private
    view
    returns(bool)
    {
        address _userThatSignedMessage = ECDSAUpgradeable.recover(
            ECDSAUpgradeable.toEthSignedMessageHash(_messageHash),
            _signature
        );

        return hasRole(DUNGEON_MASTER_ROLE, _userThatSignedMessage);
    }

    function _unstakeEntities() private {
        UserInfo storage _userInfo = userToInfo[msg.sender];
        for(uint256 i = 0; i < _userInfo.activeEntities.length; i++) {
            DungeonCrawlingEntity storage _entity = _userInfo.activeEntities[i];
            if(_entity.collection == address(orcs)) {
                orcs.transfer(msg.sender, _entity.tokenId);
            } else {
                allies.transfer(msg.sender, _entity.tokenId);
            }

            if(_entity.mainHandItemId > 0) {
                dungeonCrawlingItem.noApprovalSafeTransferFrom(address(this), msg.sender, _entity.mainHandItemId, 1);
            }
            if(_entity.offHandItemId > 0) {
                dungeonCrawlingItem.noApprovalSafeTransferFrom(address(this), msg.sender, _entity.offHandItemId, 1);
            }
            if(_entity.armorItemId > 0) {
                dungeonCrawlingItem.noApprovalSafeTransferFrom(address(this), msg.sender, _entity.armorItemId, 1);
            }
        }

        delete _userInfo.activeEntities;
    }

    function _unstakeItems() private {
        UserInfo storage _userInfo = userToInfo[msg.sender];
        for(uint256 i = 0; i < _userInfo.suppliedInputs.length; i++) {
            DungeonSuppliedInput storage _input = _userInfo.suppliedInputs[i];
            if(_input.burned || _input.quantity == 0) {
                continue;
            }

            if(_input.collection == address(etherOrcsItems)) {
                etherOrcsItems.safeTransferFrom(
                    address(this),
                    msg.sender,
                    _input.itemId,
                    _input.quantity,
                    "");
            } else {
                dungeonCrawlingItem.noApprovalSafeTransferFrom(
                    address(this),
                    msg.sender,
                    _input.itemId,
                    _input.quantity);
            }
        }

        delete _userInfo.suppliedInputs;
    }

    function _mintRewards(DungeonCrawlingOutcome calldata _outcome) private {
        if(_outcome.zugAmount > 0) {
            zug.mint(msg.sender, _outcome.zugAmount);
        }

        if(_outcome.dungeonCrawlingItemIds.length > 0) {
            dungeonCrawlingItem.mintBatch(msg.sender, _outcome.dungeonCrawlingItemIds, _outcome.dungeonCrawlingItemAmounts);
        }
    }

    // Nothing to do here. Needed for the ability to pull orcs/allies and stake them here.
    function pullCallback(address, uint256[] calldata) external {

    }

    function isUserDungeonCrawling(address _user) public view returns(bool) {
        return userToInfo[_user].dungeonStartTime > 0;
    }

    function doesUserHaveStakedEntities(address _user) public view returns(bool) {
        return userToInfo[_user].activeEntities.length > 0;
    }

    function activeEntitiesForUser(address _user) public view returns(DungeonCrawlingEntity[] memory) {
        return userToInfo[_user].activeEntities;
    }

    function suppliedEntitiesForUser(address _user) public view returns(DungeonSuppliedInput[] memory) {
        return userToInfo[_user].suppliedInputs;
    }
}

