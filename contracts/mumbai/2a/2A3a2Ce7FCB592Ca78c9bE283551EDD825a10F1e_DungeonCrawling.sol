import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./DungeonCrawlingContracts.sol";

abstract contract DungeonCrawlingSettings is Initializable, DungeonCrawlingContracts {

    function __DungeonCrawlingSettings_init() internal onlyInitializing {
        DungeonCrawlingContracts.__DungeonCrawlingContracts_init();
    }

    function setDungeonUnlockPeriod(
        uint256 _dungeonUnlockPeriod)
    external
    requiresEitherRole(ADMIN_ROLE, OWNER_ROLE)
    {
        dungeonUnlockPeriod = _dungeonUnlockPeriod;
    }

    function addDungeon(
        string calldata _dungeonName,
        DungeonInfo calldata _info)
    external
    requiresEitherRole(ADMIN_ROLE, OWNER_ROLE)
    {
        require(!isKnownDungeon(_dungeonName), "DungeonCrawling: Dungeon is already added");
        require(_info.startTime > 0, "DungeonCrawling: Dungeon start time must be greater than 0");
        require(!compareStrings(_dungeonName, ""), "DungeonCrawling: Dungeon name must not be blank");

        dungeonNameToInfo[_dungeonName] = _info;

        for(uint256 i = 0; i < _info.inputs.length; i++) {
            DungeonInputRequirement calldata _input = _info.inputs[i];
            require(_input.itemId > 0, "DungeonCrawling: Bad input item ID");
            require(_input.maxQuantity == 0 || _input.maxQuantity >= _input.minQuantity, "DungeonCrawling: Max quantity must be greater or equal than min quantity");
            require(_input.collection == address(etherOrcsItems) || _input.collection == address(dungeonCrawlingItem), "DungeonCrawling: Unknown input collection");
        }

        emit DungeonAdded(_dungeonName, _info);
    }

    function isKnownDungeon(string memory _dungeonName) public view returns(bool) {
        return dungeonNameToInfo[_dungeonName].startTime > 0;
    }
}

