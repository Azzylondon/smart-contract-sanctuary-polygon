    IDiagonalRegistryV1,
    ERC721Upgradeable,
    PausableUpgradeable,
    OwnableUpgradeable,
    UUPSUpgradeable
{
    /*******************************
     * Constants *
     *******************************/

    /*
        E_INVALID_TOKEN - Invalid token address. e.g. Zero address.
        E_INVALID_FEE - Invalid fee percentage
        E_TREASURY_INPUT - Invalid treasury address
        E_BEACON_INPUT - Invalid Beacon address
        E_ACC_TOKEN_INPUT - Invalid accepted tokens input
        E_NO_SUPERAPP - Cannot stream to another superApp
        E_TOKEN_NOT_REG_WHITELIST - Token not registry whitelisted
        E_SERVICE_DEPLOY - Service deployed unsuccessfully!
        E_DEPLOYER_INVALID - Deployer address invalid!
        E_ALREADY_INITIALIZED - Service already initialized!
     */

    /// @inheritdoc IDiagonalRegistryV1
    /// @dev Please check chain superfluid host address before deploying
    ISuperfluid public constant override SUPERFLUID_HOST = ISuperfluid(0xEB796bdb90fFA0f28255275e16936D25d3418603);

    /*******************************
     * State Variables *
     *******************************/

    /// @inheritdoc IDiagonalRegistryV1
    address public override treasury;
    /// @inheritdoc IDiagonalRegistryV1
    uint256 public override serviceIds;
    /// @inheritdoc IDiagonalRegistryV1
    address public override serviceBeacon;
    /// @inheritdoc IDiagonalRegistryV1
    IDiagonalDeployer public override deployer;

    /// @inheritdoc IDiagonalRegistryV1
    mapping(ISuperToken => int96) public override protocolFees;
    /// @inheritdoc IDiagonalRegistryV1
    mapping(uint256 => address) public override serviceIdToAddress;
    /// @inheritdoc IDiagonalRegistryV1
    mapping(ISuperToken => bool) public override acceptedTokens;

    /********************************
     * Initializer *
     ********************************/

    /// @inheritdoc IDiagonalRegistryV1
    function initialize(
        address _treasury,
        IDiagonalDeployer _deployer,
        ISuperToken[] calldata _acceptedTokens,
        address _owner
    ) public override initializer {
        console.log("initializing diagonal registry v1");
        require(_acceptedTokens.length != 0, "REG:E_ACC_TOKEN_INPUT");
        require(address(_deployer) != address(0), "REG:E_DEPLOYER_INVALID");

        ERC721Upgradeable.__ERC721_init("Diagonal", "DIAG");
        // Call unchained versions as to not initilise context multiple times
        PausableUpgradeable.__Pausable_init_unchained();
        OwnableUpgradeable.__Ownable_init_unchained();
        // Call init version as also calls `__ERC1967Upgrade_init_unchained`
        UUPSUpgradeable.__UUPSUpgradeable_init();

        treasury = _treasury;
        transferOwnership(_owner);
        for (uint256 i = 0; i < _acceptedTokens.length; i++) {
            require(address(_acceptedTokens[i]) != address(0), "REG:E_INVALID_TOKEN");
            acceptedTokens[_acceptedTokens[i]] = true;
        }

        deployer = _deployer;
    }

    /***********************************
     * IDiagonalRegistryV1 implementation *
     ***********************************/

    /// @inheritdoc IDiagonalRegistryV1
    function updateTreasury(address newTreasury) external override onlyOwner {
        require(newTreasury != address(0), "REG:E_TREASURY_INPUT");
        treasury = newTreasury;
        emit TreasuryUpdated(newTreasury);
    }

    /// @inheritdoc IDiagonalRegistryV1
    function addAcceptedSuperToken(ISuperToken superToken) external override onlyOwner {
        require(address(superToken) != address(0), "REG:E_INVALID_TOKEN");
        acceptedTokens[superToken] = true;
        emit AcceptedSuperTokenAdded(superToken);
    }

    /// @inheritdoc IDiagonalRegistryV1
    function removeAcceptedSuperToken(ISuperToken superToken) external override onlyOwner {
        require(address(superToken) != address(0), "REG:E_INVALID_TOKEN");
        require(acceptedTokens[superToken], "REG:E_TOKEN_NOT_REG_WHITELIST");
        acceptedTokens[superToken] = false;
        emit AcceptedSuperTokenRemoved(superToken);
    }

    /// @inheritdoc IDiagonalRegistryV1
    function updateProtocolFee(ISuperToken superToken, int96 newProtocolFeePercent) external override onlyOwner {
        require(address(superToken) != address(0), "REG:E_INVALID_TOKEN");
        require(acceptedTokens[superToken], "REG:E_TOKEN_NOT_REG_WHITELIST");
        require(newProtocolFeePercent >= 0, "REG:E_INVALID_FEE");

        protocolFees[superToken] = newProtocolFeePercent;

        emit ProtocolFeePercentUpdated(superToken, newProtocolFeePercent);
    }

    /// @inheritdoc IDiagonalRegistryV1
    function setServiceBeacon(address _serviceBeacon) external override onlyOwner {
        require(_serviceBeacon != address(0), "REG:E_BEACON_INPUT");

        serviceBeacon = _serviceBeacon;
        emit DiagonalServiceBeaconSet(_serviceBeacon);
    }

    /// @inheritdoc IDiagonalRegistryV1
    function pause() public override onlyOwner {
        _pause();
    }

    /// @inheritdoc IDiagonalRegistryV1
    function unpause() public override onlyOwner {
        _unpause();
    }

    /// @inheritdoc IDiagonalRegistryV1
    /// @dev This creates a service with a default package, a service should always have an associated package
    /// @dev `_primaryTokens` can be empty list.
    function createService(ISuperToken[] calldata _primaryTokens)
        external
        override
        whenNotPaused
        returns (uint256 _serviceId, address _serviceAddress)
    {
        SaltParams memory _salt;
        (_serviceId, _serviceAddress) = setupService(_salt);
        // Init tokens and package
        IDiagonalServiceV1(_serviceAddress).initializeService(_primaryTokens);

        // Register super app, external call made last
        uint256 configWord = SuperAppDefinitions.APP_LEVEL_FINAL;
        SUPERFLUID_HOST.registerAppByFactory(ISuperApp(_serviceAddress), configWord);
    }

    /// @inheritdoc IDiagonalRegistryV1
    /// @dev This creates a service with a default package, a service should always have an associated package
    /// @dev `_primaryTokens` can be empty list.
    function createService(ISuperToken[] calldata _primaryTokens, PackageData calldata defaultPackage)
        external
        override
        whenNotPaused
        returns (uint256 _serviceId, address _serviceAddress)
    {
        SaltParams memory _salt;
        (_serviceId, _serviceAddress) = setupService(_salt);
        // Init tokens and package
        IDiagonalServiceV1(_serviceAddress).initializeService(_primaryTokens, defaultPackage);

        // Register super app, external call made last
        uint256 configWord = SuperAppDefinitions.APP_LEVEL_FINAL;
        SUPERFLUID_HOST.registerAppByFactory(ISuperApp(_serviceAddress), configWord);
    }

    /// @inheritdoc IDiagonalRegistryV1
    /// @dev This creates a service with a salt
    /// @dev `_primaryTokens` can be empty list.
    function createServiceWithSalt(
        ISuperToken[] calldata _primaryTokens,
        PackageData calldata defaultPackage,
        SaltParams memory saltParams
    ) external override whenNotPaused returns (uint256 _serviceId, address _serviceAddress) {
        (_serviceId, _serviceAddress) = setupService(saltParams);
        // Init tokens and package
        IDiagonalServiceV1(_serviceAddress).initializeService(_primaryTokens, defaultPackage);

        // Register super app, external call made last
        uint256 configWord = SuperAppDefinitions.APP_LEVEL_FINAL;
        SUPERFLUID_HOST.registerAppByFactory(ISuperApp(_serviceAddress), configWord);
    }

    /// @notice Private function used to setup service
    /// @dev Should only be called by `createService`
    function setupService(SaltParams memory saltParams) private returns (uint256 _serviceId, address _serviceAddress) {
        address provider = msg.sender;
        // Because super app will be registered as final, we can't stream to downstream apps, as per superfluid governance.
        // See superfluid docs: https://docs.superfluid.finance/superfluid/docs/super-app#super-app-configuration
        require(!SUPERFLUID_HOST.isApp(ISuperApp(provider)), "REG:E_NO_SUPERAPP");

        // Increment id and mint NFT assigning ownership of service to provider
        // Service IDs start from 1 and save SLOADs
        _serviceId = serviceIds + 1;
        // Write current serviceId to storage
        serviceIds = _serviceId;
        // Mint
        _safeMint(provider, _serviceId);

        // Compute bytecode
        bytes memory serviceProxyBytecode = type(DiagonalServiceProxy).creationCode;

        // Compute salt
        uint256 salt = _computeSalt(saltParams, provider, _serviceId);

        // Save SLAODs
        IDiagonalDeployer _deployer = deployer;

        // Check if the service was already initialized
        _serviceAddress = _deployer.getAddress(serviceProxyBytecode, salt);

        require(_serviceAddress.code.length == 0, "REG:E_ALREADY_INITIALIZED");

        // Deploy service proxy
        _serviceAddress = _deployer.deploy(serviceProxyBytecode, salt);

        // Initialize service proxy
        bytes memory serviceInitSignature = abi.encodeWithSignature(
            "initialize(uint256,address)",
            _serviceId,
            provider
        );
        IDiagonalServiceProxy(_serviceAddress).initializeProxy(serviceBeacon, serviceInitSignature);

        require(_serviceAddress != address(0), "REG:E_SERVICE_DEPLOY");

        emit ServiceCreated(_serviceId, _serviceAddress, provider, salt);

        // set service address
        serviceIdToAddress[_serviceId] = _serviceAddress;
    }

    function _computeSalt(
        SaltParams memory saltParams,
        address provider,
        uint256 currentServiceId
    ) internal view returns (uint256 salt) {
        uint256 chainId = saltParams.chainId;
        uint256 serviceId = saltParams.chainServiceId;
        if (chainId == 0 || serviceId == 0) {
            chainId = block.chainid;
            serviceId = currentServiceId;
        }
        salt = uint256(keccak256(abi.encodePacked(provider, chainId, serviceId)));
    }

    /**
     * @notice _authorizeUpgrade - requirement from the UUPSUpgradeable contract
     */
    function _authorizeUpgrade(address newImplementation) internal override onlyOwner {}

    /// @inheritdoc ERC721Upgradeable
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override whenNotPaused {
        // For all non-mint transfers `transferServiceOwnership` should be called.
        // Escape mint case, as ownership assigned during service creation.
        // PS: We could assume `to != address(0)` at this point
        // as `_mint` and `_transfer` both check condition, and `_burn` is unimplemented.
        if (from != address(0) && to != address(0)) {
            IDiagonalServiceV1(serviceIdToAddress[tokenId]).transferServiceOwnership(to);
        }
    }

    /// @inheritdoc ERC721Upgradeable
    function _baseURI() internal pure override returns (string memory) {
        // TODO: Use decentralised storage provider.
        return "api.diagonal/services/";
    }
}

