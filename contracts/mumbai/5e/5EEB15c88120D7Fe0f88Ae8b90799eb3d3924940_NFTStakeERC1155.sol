//可暂停的带黑名单的ERC1155的NFT质押合约，从玩家钱包质押到游戏平台，解押需要由服务端的私钥签名
//只支持ERC1155的NFT
contract NFTStakeERC1155 is ReentrancyGuard, AccessControlEnumerable, Ownable, Pausable, Blacklistable {
    using SafeMath for uint256;

    event OnStakeNFTCreated (
        address  ownerAddress,
        uint indexed id,
        address  rentalAddress,
        uint  canUnStakingTimestamp,
        bytes data
    );

    event OnUnStakeNFT (
        address ownerAddress,
        uint indexed id,
        address rentalAddress,
        bytes data
    );

    event OnUnStakeNFTByOperator (
        address operator,
        address ownerAddress,
        uint indexed id,
        address rentalAddress
    );

    //质押的NFT信息
    struct StakingNFTInfo {
        address ownerAddress;               // 拥有者地址 
        uint256 id;                         // NFT id ERC1155 里的id 
        address rentalAddress;              // 租赁者地址 
        uint256 canUnStakingTimestamp;      // 可解押的时间戳，必须大于才能解押
        uint256 timestamp;                  // 质押时间戳
    }

    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");

    //哈希  to 合约地址
    mapping(bytes32 => StakingNFTInfo) private stakingNFTs;

    mapping(address => uint256) lastBlockNumberCalled;

    IERC1155 mggeContract;

    /**
     * @dev ensure caller is not contract 
     */
    modifier onlyNonContract() {
        _onlyNonContract();
        _;
    }

    function _onlyNonContract() internal view {
        require(tx.origin == _msgSender(), "ONC");
    }

    /**
     * @dev ensure caller is not one block 
     */
    modifier oncePerBlock(address user) {
        _oncePerBlock(user);
        _;
    }  

    function _oncePerBlock(address user) internal {
        require(lastBlockNumberCalled[user] < block.number, "OCB");
        lastBlockNumberCalled[user] = block.number;
    }

    constructor(IERC1155 _mggeContract) ReentrancyGuard(){
         
        mggeContract = _mggeContract;

        //将部署者设置为操作员
        _setupRole(OPERATOR_ROLE, _msgSender()); 
    }

    modifier onlyOperator {
		require(hasRole(OPERATOR_ROLE, _msgSender()), "Caller is not an operator");
		_;
	}
	
   // 合约部署者增加操作员
    function grantOperator(address _operator) external nonReentrant onlyOwner returns(bool){
       grantRole(OPERATOR_ROLE, _operator);
       return true;
    }

    // 合约部署者移除操作员
    function revokeOperator(address _operator) external nonReentrant onlyOwner returns(bool){
        revokeRole(OPERATOR_ROLE, _operator);
        return true;
    }


    receive() external payable {}

    fallback() external payable {}

    

    //质押NFT, 如果是_rentalAddress填写调用者地址则为自行使用，如果填其他地址则为租赁
    function stakeNFT(
        uint _id,
        address _rentalAddress,
        uint _rentalDays,
        bytes memory data
    ) 
        external 
        whenNotPaused
        notBlacklisted(_msgSender())   
        nonReentrant 
        onlyNonContract 
        oncePerBlock(_msgSender()) 
        returns(bool) 
    {
        require(_id > 0, "stakeNFT: ZERO_ID");
        require(paused() == false, "stakeNFT: CONTRACT_PAUSED");
        require(mggeContract.balanceOf(_msgSender(), _id) > 0, "stakeNFT: ONLY_OWNERS_ALLOWED");

        //可解押时间
        uint _canUnStakingTimestamp = block.timestamp.add(_rentalDays.mul(86400));

        bytes32 hash = keccak256(abi.encodePacked(_msgSender(), _id));
        stakingNFTs[hash] = StakingNFTInfo({
            ownerAddress: _msgSender(),
            id: _id,
            rentalAddress: _rentalAddress,
            canUnStakingTimestamp: _canUnStakingTimestamp,
            timestamp: block.timestamp
        });

        // Transfering the ownership to the staking contract
        mggeContract.safeTransferFrom(
            _msgSender(),
            address(this),
            _id,
            1,
            data
        );

        //触发事件
        emit OnStakeNFTCreated(_msgSender(), _id, _rentalAddress, _canUnStakingTimestamp, data); 

        return true;
    }

    //解押
    function unStakeNFT(
        uint256 _id,
        bytes memory _data
    ) 
        external 
        whenNotPaused
        notBlacklisted(_msgSender())       
        nonReentrant 
        onlyNonContract 
        oncePerBlock(_msgSender()) 
        returns(bool) 
    {
        require(_id > 0, "unStakeNFT: ZERO_ID");

        bytes32 hash = keccak256(abi.encodePacked(_msgSender(), _id));

        require(stakingNFTs[hash].ownerAddress == _msgSender(), "unStakeNFT: ONLY_OWNERS_ALLOWED");

        require(block.timestamp >= stakingNFTs[hash].canUnStakingTimestamp, "unStakeNFT: NOT_YET_DUE");

        mggeContract.safeTransferFrom(
            address(this),
            _msgSender(),
            _id,
            1,
            _data
        );

        stakingNFTs[hash].ownerAddress = address(0x0);
        stakingNFTs[hash].id = 0;

        //触发事件
        emit OnUnStakeNFT(_msgSender(), _id, stakingNFTs[hash].rentalAddress, _data); 

        return true;
    }

    //操作员解押，在紧急情况下由操作员操作
    function unStakeNFTByOperator(
        address _ownerAddress,
        uint256 _id
    ) 
        external
        onlyOperator
        returns(bool) 
    {
        require(_id > 0, "unStakeNFT: ZERO_ID");

        bytes32 hash = keccak256(abi.encodePacked(_ownerAddress, _id));

        require(stakingNFTs[hash].ownerAddress == _ownerAddress, "unStakeNFT: NOT_OWNER");

        mggeContract.safeTransferFrom(
            address(this),
            _ownerAddress,
            _id,
            1,
            bytes("0")
        );

        stakingNFTs[hash].ownerAddress = address(0x0);
        stakingNFTs[hash].id = 0;
        stakingNFTs[hash].canUnStakingTimestamp = block.timestamp;

        //触发事件
        emit OnUnStakeNFTByOperator(_msgSender(), _ownerAddress, _id, stakingNFTs[hash].rentalAddress); 

        return true;
    }

    function getStakedNFT(
        address _ownerAddress,
        uint256 _id
    ) 
        public
        view
        returns(StakingNFTInfo memory) 
    {
        bytes32 hash = keccak256(abi.encodePacked(_ownerAddress, _id));
        return stakingNFTs[hash];
    }

    // required function to allow receiving ERC-1155
    //必须有才能接收 ERC-1155
    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    )
        external
        returns(bytes4)
    {
        return bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"));
    }

    /**
    * @dev withdraw ether to owner/admin wallet
    * @notice only owner can call this method
    */
    function withdraw() external onlyOwner nonReentrant returns(bool){
        payable(_msgSender()).transfer(address(this).balance);
        return true; 
    }

    // function addressToBytes32(address input) internal pure returns (bytes32) {
    //     return bytes32(uint256(uint160(input)));
    // }


}

