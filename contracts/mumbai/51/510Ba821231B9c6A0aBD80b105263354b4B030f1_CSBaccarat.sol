// interface to interact with pool contract
interface CSGamePool {
    function getMyDepositAmount(address _address)
        external
        view
        returns (uint256);

    function updateBalance(
        address _address,
        uint256 _amount,
        bool _isWinner
    ) external;

    function getMaxBetAmount() external view returns (uint256);

    function getMaxPayoutAmount() external view returns (uint256);
}

// interface to interact with player contract
interface CSPlayerManager {
    function validatePlayer(address _address) external view;
}

contract CSBaccarat is ReentrancyGuard, Ownable {
    using SafeMath for uint256;

    address private immutable WMaticAddress =
        0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270;

    address public gamePoolAddress = 0xbDf475A3B824D252E031b4C01ce6Ae75b165eFea;
    address public playerManagerAddress =
        0x78861D0b64C2F29C87068E77a859a55b94Cfc82b;

    mapping(address => uint256) private roundMap; // save round counter for each player
    mapping(address => round[]) private historyMap; // save round details for each player

    uint256[] private playerHand;
    uint256[] private bankerHand;

    uint256 private balanceAlt;

    struct round {
        uint256 tieBetAmount;
        uint256 playerBetAmount;
        uint256 bankerBetAmount;
        uint256 playerPip;
        uint256 bankerPip;
        uint256 profit;
    }

    event GameResult(
        uint256[] _playerHand,
        uint256[] _bankerhand,
        string _gameType,
        address _address,
        uint256 _payout,
        uint256 _profit,
        bool _isWinner
    );

    constructor() {}

    // calculate adding 2 card according to rule
    function calcSum(uint256 _a, uint256 _b) internal pure returns (uint256) {
        uint256 a = _a > 9 ? 0 : _a;
        uint256 b = _b > 9 ? 0 : _b;
        a + b > 9 ? a = a + b - 10 : a = a + b;
        return a;
    }

    function subCasinoFee(
        uint256 _betAmount,
        uint256 _div,
        uint256 _mul
    ) internal pure returns (uint256) {
        return _betAmount.div(_div).mul(_mul);
    }

    function playGame(
        uint256 _tieBetAmount,
        uint256 _playerBetAmount,
        uint256 _bankerBetAmount
    ) external {
        CSPlayerManager(playerManagerAddress).validatePlayer(msg.sender);

        uint256 betAmount = _tieBetAmount + _playerBetAmount + _bankerBetAmount; // bet amount for one round
        uint256 maxBetAmount = CSGamePool(gamePoolAddress).getMaxBetAmount(); // max bet amount from pool contract
        uint256 myDepositAmount = CSGamePool(gamePoolAddress)
            .getMyDepositAmount(msg.sender); // current account balance

        require(gamePoolAddress != address(0), "Address should not be null");
        require(betAmount <= maxBetAmount, "Exceed max bet amount");
        require(
            betAmount <= myDepositAmount,
            "Can not bet over deposited amount"
        );

        uint256 tieBetAmount = _tieBetAmount;
        uint256 playerBetAmount = _playerBetAmount;
        uint256 bankerBetAmount = _bankerBetAmount;

        // uint256 wmaticBalance = address(wmaticAddress).balance;
        // uint256 randomNumber = uint256(keccak256(abi.encodePacked(block.timestamp, block.difficulty, wmaticBalance)));

        uint256 randomNumber = uint256(
            keccak256(
                abi.encodePacked(block.timestamp, block.difficulty, balanceAlt)
            )
        );
        uint256 randomCard;

        for (uint256 i = 0; i < 6; i++) {
            randomCard = ((randomNumber % 52) + 1) % 13 == 0
                ? 13
                : ((randomNumber % 52) + 1) % 13;
            i % 2 == 0
                ? playerHand.push(randomCard)
                : bankerHand.push(randomCard);
            randomNumber /= 52;
        }
        balanceAlt++;

        bool isWinner = false;
        uint256 profit;
        uint256 payout = 1;

        uint256 playerPip = calcSum(playerHand[0], playerHand[1]); // add 2 cards of player pip
        uint256 bankerPip = calcSum(bankerHand[0], bankerHand[1]); // add 2 cards of banker pip

        bool isPlayer3Card = false;
        bool isBanker3Card = false;

        if (playerPip >= 6 && playerPip < 8 && bankerPip < 6) {
            // decide if banker hold or draw
            bankerPip = calcSum(bankerPip, bankerHand[2]);
            isBanker3Card = true;
        }

        if (playerPip < 6 && bankerPip < 8) {
            playerPip = calcSum(playerPip, playerHand[2]); // player draw 3rd card
            isPlayer3Card = true;
            if (
                bankerPip <= 2 ||
                (bankerPip == 3 && playerHand[2] != 8) ||
                (bankerPip == 4 && playerHand[2] >= 2 && playerHand[2] <= 7) ||
                (bankerPip == 5 && playerHand[2] >= 4 && playerHand[2] <= 7) ||
                (bankerPip == 6 && playerHand[2] >= 6 && playerHand[2] <= 7)
            ) {
                // decide if banker hold or draw
                bankerPip = calcSum(bankerPip, bankerHand[2]);
                isBanker3Card = true;
            }
        }

        if (!isPlayer3Card) playerHand.pop(); // check player cards are 3
        if (!isBanker3Card) bankerHand.pop(); // check banker cards are 3

        uint256 leftSum;
        uint256 rightSum;
        if (playerPip > bankerPip) {
            // win on player
            // share 1% to game pool for bet earning
            leftSum = subCasinoFee(playerBetAmount, 100, 98);
            rightSum = tieBetAmount.add(bankerBetAmount);
            if (leftSum > rightSum) {
                profit = leftSum.sub(rightSum);
                isWinner = true;
            } else {
                profit = rightSum.sub(leftSum);
                isWinner = false;
            }
        }

        if (playerPip < bankerPip) {
            // win on banker
            // 6% to game pool for bet earning
            leftSum = subCasinoFee(playerBetAmount, 100, 88);
            rightSum = tieBetAmount.add(playerBetAmount);
            if (leftSum > rightSum) {
                profit = leftSum.sub(rightSum);
                isWinner = true;
            } else {
                profit = rightSum.sub(leftSum);
                isWinner = false;
            }
        }

        if (playerPip == bankerPip) {
            payout = 8;
            // share 1% for 8x payout
            leftSum = subCasinoFee(tieBetAmount, 100, 692);
            rightSum = playerBetAmount.add(bankerBetAmount);
            if (leftSum > rightSum) {
                profit = leftSum.sub(rightSum);
                isWinner = true;
            } else {
                profit = rightSum.sub(leftSum);
                isWinner = false;
            }
        }

        // require(
        //     CSGamePool(gamePoolAddress).getMaxPayoutAmount() >= profit,
        //     "Exceed max payout amount"
        // ); // check if exceed max payout amount

        // // save game history
        // historyMap[msg.sender][roundMap[msg.sender]]
        //     .tieBetAmount = tieBetAmount;
        // historyMap[msg.sender][roundMap[msg.sender]]
        //     .playerBetAmount = playerBetAmount;
        // historyMap[msg.sender][roundMap[msg.sender]]
        //     .bankerBetAmount = bankerBetAmount;
        // historyMap[msg.sender][roundMap[msg.sender]].playerPip = playerPip;
        // historyMap[msg.sender][roundMap[msg.sender]].bankerPip = bankerPip;
        // historyMap[msg.sender][roundMap[msg.sender]].profit = profit;

        // roundMap[msg.sender] += 1;

        // emit GameResult(
        //     playerHand,
        //     bankerHand,
        //     "Baccarat",
        //     msg.sender,
        //     payout,
        //     profit,
        //     isWinner
        // );

        // // update player balance on game result
        // CSGamePool(gamePoolAddress).updateBalance(msg.sender, profit, isWinner);
        // delete playerHand;
        // delete bankerHand;
    }

    function setGamePoolAddress(address _address) external onlyOwner {
        gamePoolAddress = _address;
    }

    function setPlayerManagerAddress(address _address) external onlyOwner {
        playerManagerAddress = _address;
    }
}

