contract Core is Ownable {
    using SafeMath for uint;
    IERC20 public USDT;
    IERC20 public DOOD;
    struct Data{
        uint256 timestamp;
        uint256 value;
        bool isValid;
        address referrer;
    }
    mapping(address => Data) public Members;

    // array of rates for 10 levels
    uint8[12] public LevelRates;

    event Withdraw(address indexed _member, uint256 _amount);

    constructor (IERC20 _USDT, IERC20 _DOOD) {
        Members[msg.sender].isValid = true;
        Members[address(0)].isValid = true;
        Members[address(this)].isValid = true;
        LevelRates = [0, 30, 0, 10, 0, 5, 0, 5, 0, 5, 0, 5];
        USDT = _USDT;
        DOOD = _DOOD;
    }

    function setUSDT(IERC20 _USDT) public onlyOwner{
        USDT = _USDT;
    }

    function setDOOD(IERC20 _DOOD) public onlyOwner{
        DOOD = _DOOD;
    }

    function findUp(address _addr, uint _depth) public view  returns(address){
        if(_depth == 0){
            return _addr;
        }
        if(Members[_addr].referrer == address(0)){
            return address(0);
        }
        return findUp(Members[_addr].referrer, _depth-1);
    }

    function activate(address _sender, address _reciever, uint amount) external returns(bool){
        require(Members[_sender].isValid, "Sender is not valid");
        if(!Members[_reciever].isValid){
            Members[_reciever].isValid = true;
            Members[_reciever].timestamp = block.timestamp;
            Members[_reciever].referrer = _sender;
        }
        return true;
    }

    function notify(address _sender, address _reciever, uint amount) external{
        for(uint i = 1; i <= 11; i++){
            if(LevelRates[i] == 0){
                continue;
            }
            address up = findUp(_sender, i);
            if(up == address(0)){
                break;
            }
            uint8 levelRatio = LevelRates[i];
            uint amountToUp = amount.mul(levelRatio).div(1000);
            Members[up].value = Members[up].value.add(amountToUp);
            DOOD.transfer(up, amountToUp);
        }
        for(uint i = 1; i <= 11; i++){
            if(LevelRates[i] == 0){
                continue;
            }
            address up = findUp(_reciever, i);
            if(up == address(0)){
                break;
            }
            uint levelRatio = LevelRates[i];
            uint amountToUp = amount.mul(levelRatio).div(1000);
            Members[up].value = Members[up].value.add(amountToUp);
            DOOD.transfer(up, amountToUp);
        }
    }

    function withdraw(uint _amount) public{
        // _amount must be smaller than the value of the sender
        require(Members[msg.sender].value >= _amount, "not enough value");
        // transfer the amount of DOOD to the sender
        DOOD.transfer(msg.sender, _amount);
        // deduct the amount from the sender
        Members[msg.sender].value = Members[msg.sender].value.sub(_amount);
        // emit the event
        emit Withdraw(msg.sender, _amount);
    }
}

