pragma solidity ^0.8.0;

/**
 * @title OrderTypes
 * @notice This library contains order types for the LooksRare exchange.
 */
library OrderTypes {
    bytes32 private constant MAKER_ORDER_HASH =
        keccak256(
            "MakerOrder(address signer,address collection,uint256 tokenId,uint256 amount,uint256 lnqAmount,uint256 nonce,string uri,uint256 deadline,bytes royalties,bytes params)"
        );
    struct MakerOrder {
        address signer; // signer of the maker order
        address collection; // collection address
        uint256 tokenId; // id of the token
        uint256 amount; // amount of tokens to sell/purchase (must be 1 for ERC721, 1+ for ERC1155)
        uint256 lnqAmount; // amount of lnq tokens to sell
        uint256 nonce; // order nonce (must be unique unless new maker order is meant to override existing one e.g., lower ask price)
        string uri; // uri (token uri)
        uint256 deadline;
        bytes royalties; // royalty reciver address and percentage
        bytes params; // additional parameters
        uint8 v; // v: parameter (27 or 28)
        bytes32 r; // r: parameter
        bytes32 s; // s: parameter
    }
    struct TakerOrder {
        address taker; // msg.sender
        address collection;
        uint256 tokenId;
        uint256 amount;
        uint256 lnqAmount;
        bytes params; // other params (e.g., tokenId)
    }

    function hash(MakerOrder memory makerOrder)
        internal
        pure
        returns (bytes32)
    {
        return
            keccak256(
                abi.encode(
                    MAKER_ORDER_HASH,
                    makerOrder.signer,
                    makerOrder.collection,
                    makerOrder.tokenId,
                    makerOrder.amount,
                    makerOrder.lnqAmount,
                    makerOrder.nonce,
                    keccak256(bytes(makerOrder.uri)),
                    makerOrder.deadline,
                    keccak256(makerOrder.royalties),
                    keccak256(makerOrder.params)
                )
            );
    }
}

