/**
 * @title LazyMint
 * @notice It is the core contract of the  Lazy mint.
 */
contract TicketLazyMint is ERC2771Context, EIP712, ReentrancyGuard, Ownable {
    using OrderTypes for OrderTypes.MakerOrder;
    using OrderTypes for OrderTypes.TakerOrder;

    address public ticketAddress; // ticketAddress
    address public escrowAddress; // escrowAddress

    mapping(address => mapping(uint256 => uint256)) public userNonceCount;
    mapping(address => mapping(uint256 => bool))
        private _isUserOrderNonceExecutedOrCancelled;

    /**
     * @notice Constructor
     * @param trustedForwarder trustedForwarderaddress
     * @param _ticketAddress erc1155 ticket address
     * @param _escrowAddress erc1155 ticket address
     */
    constructor(
        string memory name,
        address trustedForwarder,
        address _ticketAddress,
        address _escrowAddress
    ) ERC2771Context(trustedForwarder) EIP712(name, "1") {
        require(
            trustedForwarder != address(0),
            "trusted forwarder must be a valid address"
        );
        require(
            _ticketAddress != address(0) && _escrowAddress != address(0),
            "invalid address"
        );
        ticketAddress = _ticketAddress;
        escrowAddress = _escrowAddress;
    }

    /**
     * @notice Cancel maker orders
     * @param orderNonces array of order nonces
     * @param counts array of order nonces
     */
    function cancelMultipleMakerOrders(
        uint256[] calldata orderNonces,
        uint256[] calldata counts
    ) external {
        require(orderNonces.length > 0, "Cancel: Cannot be empty");
        for (uint256 i = 0; i < orderNonces.length; i++) {
            _isUserOrderNonceExecutedOrCancelled[_msgSender()][
                orderNonces[i]
            ] = true;
            userNonceCount[_msgSender()][orderNonces[i]] = counts[i];
        }
    }

    /**
     * @notice Cancel maker orders
     * @param orderNonce order nonce
     * @param tokenAmount token amount
     */
    function cancelMakerOrders(uint256 orderNonce, uint256 tokenAmount)
        external
    {
        require(
            !_isUserOrderNonceExecutedOrCancelled[_msgSender()][orderNonce],
            "already done or cancel"
        );
        _isUserOrderNonceExecutedOrCancelled[_msgSender()][orderNonce] = true;
        userNonceCount[_msgSender()][orderNonce] = tokenAmount;
    }

    /**
     * @notice burn ticket and get LNQ amount
     * @param tokenId token Id of the ticket
     * @param amount amount if tickets
     */
    function ticketBurnAndClaims(uint256 tokenId, uint256 amount) external {
        require(ITicket(ticketAddress).balanceOf(_msgSender(),tokenId) >= amount,"not enough ticket balance");
        ITicket(ticketAddress).burn(_msgSender(),tokenId,amount);
        IEscrow(escrowAddress).burnAndClaim(tokenId, _msgSender(), amount);
    }

    /**
     * @notice Match with a taker
     * @param takerOrder taker bid order
     * @param makerOrder maker ask order
     */
    function matchOrderForTicket(
        OrderTypes.TakerOrder calldata takerOrder,
        OrderTypes.MakerOrder calldata makerOrder
    ) external nonReentrant {
        require(
            _msgSender() == takerOrder.taker,
            "Order: Taker must be the sender"
        );
        require(
            makerOrder.tokenId == takerOrder.tokenId,
            "tokenId must be the same"
        );
        require(
            takerOrder.amount >= 1,
            "token amount must be greater than one"
        );
        require(
            takerOrder.collection == makerOrder.collection,
            "collection is not same"
        );
        require(makerOrder.deadline >= block.timestamp, "signature expired");

        uint256 _amount = (makerOrder.lnqAmount * takerOrder.amount);
        require(takerOrder.lnqAmount == _amount, "lnqAmount is less");
        // Verify whether order nonce has expired
        require(
            (
                !_isUserOrderNonceExecutedOrCancelled[makerOrder.signer][
                    makerOrder.nonce
                ]
            ) ||
                (userNonceCount[makerOrder.signer][makerOrder.nonce] +
                    takerOrder.amount <=
                    makerOrder.amount),
            "Order: Matching order expired"
        );

        // Check the maker ask order
        bytes32 askHash = makerOrder.hash();
        _validateOrder(makerOrder, askHash);

        userNonceCount[makerOrder.signer][makerOrder.nonce] += takerOrder
            .amount;

        (address[] memory receivers, uint256[] memory fees) = abi.decode(makerOrder.royalties,(address[],uint256[]));

        uint256 _startTime = abi.decode(makerOrder.params, (uint256));
        // Update maker ask order status to true (prevents replay)
        _isUserOrderNonceExecutedOrCancelled[makerOrder.signer][
            makerOrder.nonce
        ] = true;

        if (!ITicket(ticketAddress).exists(takerOrder.tokenId)) {
            ITicket(ticketAddress).create(
                makerOrder.signer,
                takerOrder.taker,
                makerOrder.tokenId,
                takerOrder.amount,
                makerOrder.uri,
                receivers,
                fees
            );
        } else {
            require(
                ITicket(ticketAddress).creators(takerOrder.tokenId) ==
                    makerOrder.signer,
                "invalid token ID signer"
            );
            ITicket(ticketAddress).mint(
                takerOrder.taker,
                takerOrder.tokenId,
                takerOrder.amount
            );
        }
        IEscrow(escrowAddress).depositeAndUpdate(
            takerOrder.tokenId,
            makerOrder.signer,
            takerOrder.taker,
            takerOrder.amount,
            _amount,
            _startTime
        );
    }

    /**
     * @notice Verify the validity of the maker order
     * @param makerOrder maker order
     * @param orderHash computed hash for the order
     */
    function _validateOrder(
        OrderTypes.MakerOrder calldata makerOrder,
        bytes32 orderHash
    ) internal {
        // Verify the signer is not address(0)
        require(makerOrder.signer != address(0), "Order: Invalid signer");
        // Verify the amount is not 0
        require(makerOrder.amount > 0, "Order: Amount cannot be 0");

        bytes32 digest = _hashTypedDataV4(orderHash);
        bool status;
        if (Address.isContract(makerOrder.signer)) {
            // 0x1626ba7e is the interfaceId for signature contracts (see IERC1271)
            status =
                IERC1271(makerOrder.signer).isValidSignature(
                    digest,
                    abi.encodePacked(makerOrder.r, makerOrder.s, makerOrder.v)
                ) ==
                0x1626ba7e;
        } else {
            status =
                ECDSA.recover(
                    digest,
                    makerOrder.v,
                    makerOrder.r,
                    makerOrder.s
                ) ==
                makerOrder.signer;
        }
        // Verify the validity of the signature
        require(status, "Signature: Invalid");
    }


    function _msgSender()
        internal
        view
        override(Context, ERC2771Context)
        returns (address sender)
    {
        sender = ERC2771Context._msgSender();
    }

    function _msgData()
        internal
        view
        override(Context, ERC2771Context)
        returns (bytes memory)
    {
        return ERC2771Context._msgData();
    }

    /**
     * @notice Check whether user order nonce is executed or cancelled
     * @param user address of user
     * @param orderNonce nonce of the order
     */
    function isUserOrderNonceExecutedOrCancelled(
        address user,
        uint256 orderNonce
    ) external view returns (bool) {
        return _isUserOrderNonceExecutedOrCancelled[user][orderNonce];
    }

    /**
     * @dev Returns the domain separator for the current chain.
     */
    function domainSeparatorV4() external view returns (bytes32) {
        return _domainSeparatorV4();
    }

    /**
     * @dev Returns the orderHash for the current order.
     */
    function getOrderHash(OrderTypes.MakerOrder calldata makerOrder)
        external
        pure
        returns (bytes32)
    {
        return makerOrder.hash();
    }
}

