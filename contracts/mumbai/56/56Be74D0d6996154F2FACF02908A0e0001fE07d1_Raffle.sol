pragma solidity ^0.8.12;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/metatx/MinimalForwarder.sol";
import "@openzeppelin/contracts/metatx/ERC2771Context.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/interfaces/LinkTokenInterface.sol";


contract Raffle is
    Ownable,
    VRFConsumerBaseV2,
    ERC2771Context
{
    using EnumerableSet for EnumerableSet.AddressSet;
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    enum GameState {
        QUEUE,
        GETTING_VRF
    }

    VRFCoordinatorV2Interface COORDINATOR;
    LinkTokenInterface LINKTOKEN;
    bytes32 internal keyHash;
    uint64 public subscriptionId;
    uint16 public requestConfirmations = 3;
    uint32 public callbackGasLimit = 100000;

    GameState public state;
    Counters.Counter private gameCounter;
    uint256 public ante;
    uint256 public totalPrize;
    uint256 public maxPlayers;
    uint256 public minPlayers;

    uint256 public gameStarted; //timestamp
    uint256 public timeout;

    EnumerableSet.AddressSet private players;

    address public beneficiary;
    IERC20 public MANA_TOKEN_CONTRACT_ADDRESS;

    event GameCreated(uint256 indexed _gameId);
    event PlayerJoined(address indexed _address, uint256 indexed _gameId);
    event PulledOut(address indexed _address, uint256 indexed _gameId);
    event GettingVRF(
        uint256 indexed _gameId,
        uint256 indexed _prize,
        uint256 indexed _numPlayers
    );
    event WinnerSelected(
        address indexed winner,
        uint256 indexed _gameId,
        uint256 indexed _randomNumber
    );

    constructor(
        MinimalForwarder _forwarder,
        VRFCoordinatorV2Interface _VRFCoordinator,
        LinkTokenInterface _linkTokenAddress,
        bytes32 _keyHash,
        uint64 _subscriptionId,
        IERC20 _anteTokenAddress,
        address _beneficiary,
        uint256 _maxPlayers,
        uint256 _timeOut,
        uint256 _ante
    ) 
        ERC2771Context(address(_forwarder)) 
        VRFConsumerBaseV2(address(_VRFCoordinator)) 
    {
        COORDINATOR = _VRFCoordinator;
        LINKTOKEN = _linkTokenAddress;
        keyHash = _keyHash;
        subscriptionId = _subscriptionId;

        beneficiary = _beneficiary;
        MANA_TOKEN_CONTRACT_ADDRESS = _anteTokenAddress;

        state = GameState.QUEUE;
        ante = _ante;
        maxPlayers = _maxPlayers;
        timeout = _timeOut;

        createRaffle();
    }

    function createRaffle() private {
        gameCounter.increment();
        state = GameState.QUEUE;
        gameStarted = block.timestamp;

        emit GameCreated(gameCounter.current());
    }

    function joinRaffle() public {
        address sender = _msgSender();
        require(state == GameState.QUEUE, "Raffle not active");
        require(players.length() < maxPlayers, "game at capacity");
        IERC20 mana = IERC20(MANA_TOKEN_CONTRACT_ADDRESS);
        require(
            mana.balanceOf(sender) >= ante,
            "player doesnt have enough mana"
        );
        require(
            mana.allowance(sender, address(this)) >= ante,
            "raffle not approved to pull enough mana"
        );

        require(
            players.add(sender),
            "joinRaffle: Player already joined raffle"
        );
        require(
            mana.transferFrom(sender, address(this), ante),
            "transfer failed"
        );

        totalPrize += ante;

        emit PlayerJoined(sender, gameCounter.current());

        if (players.length() == maxPlayers) {
            getRandomNumber();
        }
    }

    function progressRaffle() public {
        require(
            block.timestamp >= gameStarted.add(timeout),
            "Game queue has not timed out"
        );
        require(state == GameState.QUEUE, "Raffle not active");
        require(players.length() >= 1, "Not enough players");
        getRandomNumber();
    }

    function pullOut() public {
        address sender = _msgSender();
        require(
            block.timestamp >= gameStarted.add(timeout),
            "Game queue has not timed out"
        );
        require(state == GameState.QUEUE, "Raffle not active");
        require(players.remove(sender), "Caller not in game");
        IERC20 mana = IERC20(MANA_TOKEN_CONTRACT_ADDRESS);
        require(mana.transfer(sender, ante), "error in transfer of funds");
    }

    function getRandomNumber() private {
        state = GameState.GETTING_VRF;
        emit GettingVRF(gameCounter.current(), totalPrize, players.length());

        requestRandomWords();
    }

    function requestRandomWords() private {
        // Will revert if subscription is not set and funded.
        COORDINATOR.requestRandomWords(
            keyHash,
            subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            1
        );
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomWords(uint256, uint256[] memory randomWords) internal override {
        uint256 modifiedRandomNumber = (randomWords[0] % players.length());
        endGame(modifiedRandomNumber);
    }

    function endGame(uint256 _randomNumber) private {
        address winner = players.at(_randomNumber);
        emit WinnerSelected(winner, gameCounter.current(), _randomNumber);
        IERC20 mana = IERC20(MANA_TOKEN_CONTRACT_ADDRESS);

        mana.transfer(winner, totalPrize);
        resetRaffle();
    }

    function resetRaffle() private {
        uint256 numPlayers = players.length();
        for (uint256 i = 0; i < numPlayers; i++) {
            players.remove(players.at(numPlayers.sub(1).sub(i)));
        }

        delete totalPrize;
        createRaffle();
    }

    function getNumberOfPlayers() public view returns (uint256) {
        return players.length();
    }

    function getPlayers() public view returns (address[] memory) {
        return players.values();
    }

    function getGameCounter() public view returns (uint256) {
        return gameCounter.current();
    }

    function _msgSender()
        internal
        view
        override(ERC2771Context, Context)
        returns (address sender)
    {
        return ERC2771Context._msgSender();
    }

    function _msgData()
        internal
        view
        override(ERC2771Context, Context)
        returns (bytes calldata)
    {
        return ERC2771Context._msgData();
    }
}

