pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Staker {

    using SafeMath for uint;

    struct Room {
        address player1;
        uint player1_balance;
        address player2;
        uint player2_balance;
        address winner;
    }

    mapping(string => Room) public rooms;

    function createRoom(string memory _roomName , uint256 _amount) payable public {
        require(msg.value == _amount , "invalid input amount");
        Room memory new_room  = Room(msg.sender , _amount , address(0) , 0 , address(0));
        rooms[_roomName] = new_room;
    }

    function joinRoom(string memory _roomName, uint256 _amount) payable public {
        require(msg.value == _amount , "invalid input amount");
        require(msg.value == rooms[_roomName].player1_balance , "invalid amount");
        require(rooms[_roomName].player2 == address(0) , "rooms is already full");
        rooms[_roomName].player2 = msg.sender;
        rooms[_roomName].player2_balance = msg.value;
    }

    function winner(string memory _roomName , address _winner) public {
        rooms[_roomName].winner = _winner;
    }

    function claimReward(string memory _roomName) public {
        require(msg.sender == rooms[_roomName].winner , "you are not a winner");
        uint256 total_stake = SafeMath.mul(2, rooms[_roomName].player1_balance);
        payable(msg.sender).transfer(total_stake);
        rooms[_roomName].player1 = address(0);
        rooms[_roomName].player1_balance = 0;
        rooms[_roomName].player2 = address(0);
        rooms[_roomName].player2_balance = 0;
        rooms[_roomName].winner = address(0);
     }
}

