        require(bytes(cid).length == 46, 'Invalid cid');
        require(Strings.startsWith(cid,'Qm'), 'Invalid cid');
        lastTokenId++;
        tokenMetadata[lastTokenId] = string(abi.encodePacked(IPFS_PREFIX,cid));
        _safeMint(_msgSender(), lastTokenId);
    }

