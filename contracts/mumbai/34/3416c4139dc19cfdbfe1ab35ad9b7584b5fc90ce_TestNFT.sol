        require(msg.value >= MINT_FEE, 'Not enough fee');
        require(lastTokenId <= MAX_TOKEN_ID, 'No token left');
        lastTokenId++;
        string memory base64 = Base64.encode(bytes(json));
        tokenMetadata[lastTokenId] = string(abi.encodePacked('data:application/json;base64,', base64));
        _safeMint(_msgSender(), lastTokenId);
    }
}