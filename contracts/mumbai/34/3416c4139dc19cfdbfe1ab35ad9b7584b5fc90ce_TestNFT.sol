    string private IPFS_PREFIX = 'https://gateway.pinata.cloud/ipfs/';

    uint256 private lastTokenId = 0;
    mapping(uint256 => string) private tokenMetadata;

    constructor() ERC721('TestNFT_721_2022038','TNTA') Ownable() {
        //TODO: mint something to owner
    }

    function mint(string memory url) public payable {
        require(msg.value >= MINT_FEE, 'Not enough fee');
        require(lastTokenId <= MAX_TOKEN_ID, 'No token left');
        require(bytes(url).length > 13, 'Invalid url');
        require(Strings.startsWith(url,'https://'), 'Invalid url');
        lastTokenId++;
        tokenMetadata[lastTokenId] = url;
        _safeMint(_msgSender(), lastTokenId);
    }

