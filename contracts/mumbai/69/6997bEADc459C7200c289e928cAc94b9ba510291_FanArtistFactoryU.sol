  struct Pack {
    uint256 id;
    uint256 price;
    bool forSale;
    uint256 idOffchain;
    Product[] products;
  }
  // A struct containing product's information
  struct Product {
    uint256 id;
    uint256 idOffChain;
    bool used;
  }

  /**
   * @notice Constructor of the contract
