  function transferNFT(
    address _from,
    address _to,
    uint256 _idNft,
    uint256 _amount
  ) external override onlyRole(EXECUTOR_ROLE) {
    _safeTransferFrom(_from, _to, _idNft, _amount, "");
    emit NftTransfered(_idNft, _amount);
  }

  /**
   * @notice Set a product already used
   * @param _idPack Id of pack
   * @param _idProduct Id of product in products array of pack
   * @dev This function set a product already used
   */
  function setProductUsed(uint256 _idPack, uint256 _idProduct)
    external
    override
    onlyRole(EXECUTOR_ROLE)
  {
    packs[_idPack].products[_idProduct].used = true;
  }

  /**
   * @notice Set price of pack
   * @param _idPack Id of pack
   * @param _price Price to nft
   * @dev This function set a price of pack
   */
  function setPrice(uint256 _idPack, uint256 _price)
    external
    override
    onlyRole(EXECUTOR_ROLE)
  {
    packs[_idPack].price = _price;
  }

  /**
   * @notice Set a pack enabled or not for sale
   * @param _idPack Id of pack
   * @param _isForSale Boolean value to indicate if the pack will be enabled or disabled to sale
   * @dev This function set a pack enabled or disabled for sale
   */
  function setPackForSale(uint256 _idPack, bool _isForSale)
    external
    override
    onlyRole(EXECUTOR_ROLE)
  {
    packs[_idPack].forSale = _isForSale;
  }

  /**
   * @notice Set the uri
   * @param newuri Id of pack
   * @dev This function set the URI of contract, where we will save the metadata of each nft
   */
  function setURI(string memory newuri) public onlyRole(EXECUTOR_ROLE) {
    _setURI(newuri);
  }

  /* ========================================================= VIEWS ======================================================== */
  /**
   * @notice Get the address of artist who represetn this contract
   * @dev This function return the artist address saved in this contract
   */
  function getArtistAddress() public view returns (address) {
    return artistAddress;
  }

  /**
   * @notice Get a pack
   * @param _idPack Id of pack
   * @dev This function return a pack
   */
  function getPack(uint256 _idPack) public view returns (Pack memory) {
    return packs[_idPack];
  }

  /**
   * @notice Get one product of pack
   * @param _idPack Id of pack
   * @param _idProduct Id of product in products array or pack
   * @dev This function return a product of pack
   */
  function getProductOfPack(uint256 _idPack, uint256 _idProduct)
    public
    view
    returns (Product memory)
  {
    return packs[_idPack].products[_idProduct];
  }

  /**
   * @notice Get total amount of packs saved
   * @dev This function return the total of packs
   */
  function getAmountOfPack() public view returns (uint256) {
    return packs_amount;
  }

  /* ========================================================= REQUIRED TO IMPLEMETATION ======================================================== */
  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override(ERC1155, AccessControl)
    returns (bool)
  {
    return super.supportsInterface(interfaceId);
  }

  function onERC1155Received(
    address,
    address,
    uint256,
    uint256,
    bytes memory
  ) public virtual returns (bytes4) {
    return this.onERC1155Received.selector;
  }

  function onERC1155BatchReceived(
    address,
    address,
    uint256[] memory,
    uint256[] memory,
    bytes memory
  ) public virtual returns (bytes4) {
    return this.onERC1155BatchReceived.selector;
  }
}

