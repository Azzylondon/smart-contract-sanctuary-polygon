pragma solidity ^0.8.0;

import "../interfaces/IFanArtistFactoryU.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "../FanArtist.sol";

/**
 * @title FanArtistFactoryU Contract
 */
contract FanArtistFactoryU is
  IFanArtistFactoryU,
  Initializable,
  AccessControlUpgradeable
{
  // Rol executor of functions
  bytes32 public constant EXECUTOR_ROLE = keccak256("EXECUTOR_ROLE");
  // Contract deployed for address of artist
  mapping(address => FanArtist) private artistAddressToContract;

  /**
   * @notice Initialize of the contract
   * @dev This function set default rol and executor rol to sender address
   */
  function initialize() external initializer {
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setupRole(EXECUTOR_ROLE, msg.sender);
  }

  /**
   * @notice Deploy a new contract for a artist address
   * @param _artistAddress address of artist
   * @dev This function create and deploy a new smart contract Artist, and save the artist address in the mapping.
   */
  function createArtistContract(address _artistAddress)
    external
    override
    onlyRole(EXECUTOR_ROLE)
  {
    require(!(_artistAddress == address(0)), "Address must not be empty");
    require(
      address(artistAddressToContract[_artistAddress]) == address(0),
      "Contract already deployed to address"
    );
    FanArtist fanArtist = new FanArtist(_artistAddress, msg.sender);
    artistAddressToContract[_artistAddress] = fanArtist;
  }

  /**
   * @notice Get the address of contract deployed for a artist
   * @param _artistAddress address of artist
   * @dev This function return the address of smart contract deployed to one artist.
   */
  function deployedContractFromArtist(address _artistAddress)
    external
    view
    override
    returns (address)
  {
    return address(artistAddressToContract[_artistAddress]);
  }

  // ONLY TO TEST
  function removeArtistContract(address _address)
    external
    onlyRole(EXECUTOR_ROLE)
  {
    delete artistAddressToContract[_address];
  }
}

