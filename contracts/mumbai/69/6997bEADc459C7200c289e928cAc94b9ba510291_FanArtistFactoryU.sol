  function mintNFT(uint256 _idPack, uint256 _amount)
    external
    override
    onlyRole(EXECUTOR_ROLE)
  {
    require(
      packs.length > _idPack,
      "Can't mint a nft of pack don't previously created"
    );
    _mint(address(this), _idPack, _amount, "");
    emit NftMinted(_idPack, _amount);
  }

  /**
   * @notice Transfer a new NFT
   * @param _from Address who is the owner of ntf to transfer
   * @param _to Address who will receive the nft
   * @param _idNft Id of nft to be transfer
   * @param _amount Amount of nft to be transfer
   * @dev This function transfer nft to other address. The internal function check insufficient balance
