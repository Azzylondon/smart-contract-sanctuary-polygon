  constructor(address _artistAddress, address _owner) ERC1155("") {
    require(!(_artistAddress == address(0)), "Address must not be empty");
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setupRole(EXECUTOR_ROLE, msg.sender);
    _setupRole(DEFAULT_ADMIN_ROLE, _owner);
    _setupRole(EXECUTOR_ROLE, _owner);
    artistAddress = _artistAddress;
  }

  /* ======================================================= EVENTS ====================================================== */
  event PackCreated(uint256 idPack);
  event NftMinted(uint256 idPack, uint256 amount);
  event NftTransfered(uint256 idPack, uint256 amount);

  /* ================================================== MUTATIVE FUNCTIONS ================================================== */

  /**
   * @notice Create a new pack
   * @param _idOffchain id of pack createed off chain
   * @param _idsProductsOfchain list of products Id created off chain included in this pack
   * @dev This function create a new pack and save in array of packs. We firt add new pack to packs, and then set the attributes of pack.
   * We use this way for implementation of solidity to save a memory array product in storage pack.
   */
  function createPack(uint256 _idOffchain, uint256[] memory _idsProductsOfchain)
    external
    override
    onlyRole(EXECUTOR_ROLE)
    returns (uint256)
  {
    packs.push();
    uint256 _position = packs.length - 1;
    Pack storage _pack = packs[_position];
    _pack.id = _position;
    _pack.price = 0;
    _pack.forSale = false;
    _pack.idOffchain = _idOffchain;

    for (uint256 i = 0; i < _idsProductsOfchain.length; i++) {
      Product memory _product;
      _product.id = i;
      _product.idOffChain = _idsProductsOfchain[i];
      _product.used = false;
      _pack.products.push(_product);
    }
    packs_amount = packs_amount + 1;
    emit PackCreated(_pack.id);

    return _pack.id;
  }

  /**
   * @notice Mint a new NFT
   * @param _idPack Pack id related to ntf that we will mint
   * @param _amount Amount of nft to mint
   * @dev This function requieres that the pack was already created. We assume that we will not delete packs.
