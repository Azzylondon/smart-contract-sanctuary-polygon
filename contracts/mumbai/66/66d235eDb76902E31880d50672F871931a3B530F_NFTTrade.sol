import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";

contract NFTTrade is Ownable, Pausable, IERC721Receiver, IERC1155Receiver {
	using Counters for Counters.Counter;

	mapping(address => bool) whitelistedERC20; //allowed ERC20s
	mapping(address => bool) whitelistedERC721; //allowed NFTs
	mapping(address => bool) whitelistedERC1155; //allowed NFTs

	mapping(address => bool) freeTradeERC721; //free trading for owners
	mapping(address => bool) freeTradeERC1155; //free trading for owners

	address payable public VAULT;

	uint256 public swapFee = 3000000000000000; // 0.003 ETH

	Counters.Counter private _swapIds;

	// a proposal from the initiator or counterparty
	struct proposal {
		uint256 proposalType; //1 - erc20, 2 - erc721, 3 - erc1155
		address forContract; //contract of the ERC (must be whitelisted)
		uint256 tokenId; // only for erc721 & erc1155
		uint256 amount; // only for erc20 & erc1155
		uint256 swapStart; //when the swap should start (eg: from now)
		uint256 swapEnd; //time for swap to complete
	}

	// Swap Status
	enum swapStatus {
		Opened,
		Closed,
		Cancelled
	}

	// swap data
	struct swapData {
		uint256 id;
		address payable addressInitiator;
		address payable addressCounterparty;
		proposal initiatorProposal;
		proposal counterpartyProposal;
		swapStatus status;
	}

	// Events
	event swapEvent(
		address indexed _creator,
		uint256 indexed time,
		swapStatus indexed _status,
		uint256 _swapId,
		address _swapCounterPart
	);

	constructor() {
		setVaultAddress(payable(msg.sender));
	}

	// Create Swap
	function createSwap(swapData memory sData) public payable whenNotPaused {
		//checks if the proposal has whitelisted contracts
		require(isWhitelistProposal(sData.initiatorProposal), "non-whitelisted contracts");
		require(isWhitelistProposal(sData.counterpartyProposal), "non-whitelisted contracts");

		_swapIds.increment();
	}

	function isWhitelistProposal(proposal memory prop) internal view returns (bool) {
		if (whitelistedERC20[prop.forContract]) {
			return true;
		}
		if (whitelistedERC721[prop.forContract]) {
			return true;
		}
		if (whitelistedERC1155[prop.forContract]) {
			return true;
		}
		return false;
	}

	// Close the swap
	function closeSwap(address _swapCreator, uint256 _swapId) public payable whenNotPaused {}

	// Cancel Swap
	function cancelSwap(uint256 _swapId) public whenNotPaused {}

	// set the swap fees
	function setSwapFee(uint256 _newPrice) external onlyOwner {
		swapFee = _newPrice;
	}

	// Set Vault address
	function setVaultAddress(address payable _vault) public onlyOwner {
		VAULT = _vault;
	}

	//=================================================
	//=================== WHITELIST ===================
	//=================================================
	function addFreeTradeERC721(address _erc721) external onlyOwner {
		freeTradeERC721[_erc721] = true;
	}

	function addFreeTradeERC1155(address _erc1155) external onlyOwner {
		freeTradeERC1155[_erc1155] = true;
	}

	function removeFreeTradeERC721(address _erc721) external onlyOwner {
		freeTradeERC721[_erc721] = false;
	}

	function removeFreeTradeERC1155(address _erc1155) external onlyOwner {
		freeTradeERC1155[_erc1155] = false;
	}

	//to avoid scams, only this whitelisted erc's can trade on the platform
	function addWhitelistERC20(address _erc20) external onlyOwner {
		whitelistedERC20[_erc20] = true;
	}

	function addWhitelistERC721(address _erc721) external onlyOwner {
		whitelistedERC721[_erc721] = true;
	}

	function addWhitelistERC1155(address _erc1155) external onlyOwner {
		whitelistedERC1155[_erc1155] = true;
	}

	function removeWhitelistERC20(address _erc20) external onlyOwner {
		whitelistedERC20[_erc20] = false;
	}

	function removeWhitelistERC721(address _erc721) external onlyOwner {
		whitelistedERC721[_erc721] = false;
	}

	function removeWhitelistERC1155(address _erc1155) external onlyOwner {
		whitelistedERC1155[_erc1155] = false;
	}

	//=================================================
	//===================== OTHER =====================
	//=================================================
	function togglePause() external onlyOwner {
		if (!paused()) _pause();
		else _unpause();
	}

	function withdrawToVault() public onlyOwner {
		payable(VAULT).transfer(address(this).balance);
	}

	//Interface IERC721/IERC1155
	function onERC721Received(
		address operator,
		address from,
		uint256 tokenId,
		bytes calldata data
	) external override returns (bytes4) {
		return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
	}

	function onERC1155Received(
		address operator,
		address from,
		uint256 id,
		uint256 value,
		bytes calldata data
	) external override returns (bytes4) {
		return bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"));
	}

	function onERC1155BatchReceived(
		address operator,
		address from,
		uint256[] calldata id,
		uint256[] calldata value,
		bytes calldata data
	) external override returns (bytes4) {
		return bytes4(keccak256("onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)"));
	}

	function supportsInterface(bytes4 interfaceID) public view virtual override returns (bool) {
		return interfaceID == 0x01ffc9a7 || interfaceID == 0x4e2312e0;
	}
}

