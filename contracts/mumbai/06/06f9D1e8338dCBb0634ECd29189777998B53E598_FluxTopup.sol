import "LinkTokenInterface.sol";
import "ConfirmedOwner.sol";

contract FluxTopup is ConfirmedOwner {
    LinkTokenInterface linkToken;

    // Rinkeby LINK token address: 0x01BE23585060835E02B77ef475b0Cc51aA1e0709
    constructor(address _linkAddress) ConfirmedOwner(msg.sender) {
        linkToken = LinkTokenInterface(_linkAddress);
    }

    // Flux Deployment on Rinkeby 0x9430a6E44700FAbD784Fd5D5Cba8832141b7eCB3
    // Common payment amounts:
    // 0.005LINK - 5000000000000000
    // 0.05LINK - 50000000000000000
    // 0.06LINK - 60000000000000000
    // 0.1LINK - 100000000000000000
    // 0.5LINK - 500000000000000000
    // 1LINK -  1000000000000000000
    // 2LINK -  2000000000000000000
    function initiateTransfer(address _fluxAggregator, uint256 _paymentAmount)
        external
    {
        linkToken.transferAndCall(_fluxAggregator, _paymentAmount, bytes(""));
    }

    function currentBalance() public view returns (uint256) {
        return linkToken.balanceOf(address(this));
    }
}

