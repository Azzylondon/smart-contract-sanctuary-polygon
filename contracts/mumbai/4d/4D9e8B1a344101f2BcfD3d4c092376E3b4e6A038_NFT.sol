pragma solidity >=0.8.4;

uint256 constant TOTAL_PUBLIC_MINTABLE_TOKENS = 1300;
uint256 constant TOTAL_MEMBER_MINTABLE_TOKENS = 37;
uint256 constant TOTAL_MINTABLE_TOKENS = TOTAL_PUBLIC_MINTABLE_TOKENS + TOTAL_MEMBER_MINTABLE_TOKENS;
uint256 constant MAX_TOKEN_MINT_ONCE = 5;
uint256 constant MAX_MINT_PER_BID = 5;
uint256 constant MAX_NB_REVEAL = 5;

interface INFT {
    /**
     * @dev event emited when the reveal action has been done
     *
     * @param _count number of the reveal
     * @param _random random number issued by chainlink
     */
    event Revealed(uint256 _count, bytes32 _random);

    /**
     * @dev Counter of mint transaction for a given bidId
     *
     * @param _bidId the given bidId
     *
     * @return count : the amount of token minted for the given bidId
     */
    function bidIdCounter(uint256 _bidId) external view returns (uint256 count);

    /**
     * @dev Return if a signature was already used
     *
     * @param _signature : the given signature
     *
     * @return if the signature was already used to mint a token
     */
    function signatureAlreadyUsed(bytes calldata _signature) external view returns (bool);

    /**
     * @dev the mintAdmin has some privilege and can generate signature to call the function publicMint(...)
     *
     * @return the address of the mintAdmin
     */
    function mintAdmin() external view returns (address);

    /**
     * @dev Seeds are generated on chain to be sure the NFT repartion is generated in a fully decentralized way
     *
     * @return data : the seeds
     */
    function getSeeds() external view returns (bytes32[] memory data);

    /**
     * @dev Change the mintAdmin
     *
     * @param _newMintAdmin the new mintAdmin
     *
     * NOTE: only the owner or the actual mintAdmin may call this external feature.
     */
    function setMintAdmin(address _newMintAdmin) external;

    /**
     * @dev allow the public to mint a token. There is a limit of `TOTAL_PUBLIC_MINTABLE_TOKENS` token that can be minted. In order to mint a token you need
     *  to have the aknowledge of the mintAdmin in the form of a signature. The signature is generated from the following message (in js):
     *  `address: ${address} price: ${price} expiration: ${expiration_timestamp} bidId: ${bidId} tokenAmount: ${tokenAmount}`
     *  where address is msg.sender and the price is the amount of ether sent, others parameters are explained after.
     *
     * @param _expirationTimestamp : signature expiration timestamp
     * @param _bidId : bidId, ensure no more than `MAX_MINT_PER_BID` tokens are minted per bidId
     * @param _tokenAmount : max amount of token to mint
     * @param _signature : the signature
     *
     * NOTE: an equal number or less than _tokenAmount may be minted depending on the number of token minted for the specified bidId
     */
    function publicMint(
        uint256 _expirationTimestamp,
        uint256 _bidId,
        uint256 _tokenAmount,
        bytes calldata _signature
    ) external payable returns (uint256);

    /**
     * @dev Mint tokens for the members. Only `TOTAL_MEMBER_MINTABLE_TOKENS` members tokens can be minted.
     *  tokenId will be between `TOTAL_PUBLIC_MINTABLE_TOKENS` and `TOTAL_MINTABLE_TOKENS`
     *
     * @param _to : array of address to mint tokens for, so that less functions calls are needed.
     *
     * NOTE: only the owner may call this external feature.
     */
    function memberMint(address[] calldata _to) external;

    /**
     * @dev reveal nft repartition. `MAX_NB_REVEAL` calls are required to reveal all the nft. The reveal generate a
     *  seeds that is stored in the contract. It ensures the nft repartition is made on-chain.
     *  This seed is computed using a truly decentralised random source: Chainlink VRF
     *  Each Generated Seed can be access using getSeeds()
     *
     * NOTE: only the owner may call this external feature.
     */
    function reveal() external;

    /**
     * @dev Withdraw ethers of the contract sent during the minting.
     *
     * NOTE: only the owner may call this external feature.
     */
    function withdraw() external;
}

