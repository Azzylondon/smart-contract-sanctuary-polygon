import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./interfaces/IController.sol";
import "./libraries/ControllerLib.sol";
import "./interfaces/IPaza.sol";
// import "./interfaces/IStaking.sol";
import "./interfaces/IPool.sol";
import "./interfaces/ILoanNFT.sol";
import "./libraries/LoanLib.sol";
import "./interfaces/IFactory.sol";

contract Factory is Ownable, IFactory,AccessControl {
    // bytes32 override public constant BANK_ROLE = keccak256("BANK_ROLE");

    address public implementation;
    IPaza public Paza;
    ILoanNFT public NFT;
    address public foundation;

    mapping(address => ControllerLib.bankInfo) private banks;
    mapping(address => address) public pools;
    mapping(address => bool) public isWhitelisted;
    mapping(address => bool) public isBlacklisted;

    constructor(
        address _owner,
        address _impl,
        address _paza,
        address _nft,
        address _foundation
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        // _setupRole(BANK_ROLE,msg.sender);
        _transferOwnership(_owner);
        implementation = _impl;
        Paza = IPaza(_paza);
        NFT = ILoanNFT(_nft);
        foundation = _foundation;
    }

    function deployPool(address _owner, address _bank) internal {
        address impl = Clones.clone(implementation);
        IPool(impl).initialize(_owner, address(Paza));
        pools[_bank] = impl;
    }

    function mintLoanNft(
        address _to,
        uint256 _tokenId,
        string memory _tokenURI,
        LoanLib.Loan memory _details
    ) public onlyOwner {
        require(isBlacklisted[_details.bank] != true, "Bank Blacklisted");
        NFT.mint(_to, _tokenId, _tokenURI, _details);
        if (_details.isPrepaid) {
            Paza.transferFrom(
                _details.bank,
                foundation,
                _details.foundationShare
            );
            Paza.transferFrom(
                _details.bank,
                _details.borrower,
                _details.borrowerShare
            );
        } else {
            Paza.mint(foundation, _details.foundationShare);
            Paza.mint(_details.borrower, _details.borrowerShare);
        }

        IPool(_details.bank).updateUserDetail(_details, _details.loanID, false);
    }

    function updateBankDetails(
        address _bank,
        ControllerLib.bankInfo memory _info
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(isWhitelisted[_bank] == true, "Bank Not Whitelisted");
        banks[_bank] = _info;
    }

    function whitelistBank(
        address _owner,
        address _bank,
        ControllerLib.bankInfo memory _info
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(isWhitelisted[_bank] == false, "Already Whitelisted");
        banks[_bank] = _info;
        deployPool(_owner, _bank);
        isWhitelisted[_bank] = true;
    }

    function blackListBankPool(address _bank) public onlyRole(DEFAULT_ADMIN_ROLE){
        isBlacklisted[pools[_bank]] = true;

    }

    function isBankPoolBlacklisted(address _bank) public override view returns (bool){
        return isBlacklisted[_bank];
    }

    function checkBankInfo(address _bank)
        external
        view
        returns (ControllerLib.bankInfo memory)
    {
        return banks[_bank];
    }

    function setImplementation(address _newImplementation) public onlyOwner {
        require(_newImplementation != address(0), "zero address sent");
        implementation = _newImplementation;
    }
}

