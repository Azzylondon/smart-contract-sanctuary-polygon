pragma solidity ^0.8.9;
pragma abicoder v2;

import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/SignedSafeMath.sol";
import "base64-sol/base64.sol";
import "./interfaces/INFTDescriptor.sol";
import "./libraries/HexStrings.sol";
import "./libraries/DateTime.sol";

contract NFTDescriptor is INFTDescriptor {
    using Strings for uint256;
    using HexStrings for uint256;

    constructor() {}

    function constructTokenURI(
        bool isCave,
        uint256 tokenId,
        uint256 power,
        uint256 expiration,
        string memory nftImage
    ) public pure override returns (string memory) {
        string memory name = generateName(isCave, tokenId);
        string memory description = generateDescription(
            tokenId,
            power,
            expiration
        );
        string memory image = nftImage;

        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    Base64.encode(
                        bytes(
                            abi.encodePacked(
                                '{"name":"',
                                name,
                                '", "description":"',
                                description,
                                '", "image": "',
                                image,
                                '"}'
                            )
                        )
                    )
                )
            );
    }

    function generateDescription(
        uint256 tokenId,
        uint256 power,
        uint256 expiration
    ) private pure returns (string memory) {
        string memory expirationDate = DateTime.dateTimeToString(
            DateTime.parseTimestamp(expiration)
        );
        return
            string(
                abi.encodePacked(
                    "This NFT represents a mining power in GreenBlock Capital.\\n",
                    "\\nID: ",
                    tokenId.toString(),
                    "\\n",
                    "\\nPower: ",
                    power.toString(),
                    " H/s",
                    "\\n",
                    "\\nExpiration: ",
                    expirationDate,
                    "\\n\\n",
                    unicode"⚠️ DISCLAIMER: This NFT has an expiration date, once it has expired it cannot be used in the mining pool."
                )
            );
    }

    function generateName(bool isCave, uint256 tokenId)
        private
        pure
        returns (string memory)
    {
        return
            string(
                abi.encodePacked(
                    "GreenBlock - ",
                    isCave ? "Cave" : "Miner",
                    " - ",
                    tokenId.toString()
                )
            );
    }
}

