pragma solidity ^0.8.12;

/*
GP Rocket is 100% DeFi. No humans control its functionality and all tokens inside the contract are 100% decentralized. 
To board the GP Rocket you must purchase a LaunchPass for 10 USDT and refer 3 of your friends.
This is your chance to fly to the moon! 
*/

import "./import/GPO.sol";
import "@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol";
import "@uniswap/v3-periphery/contracts/libraries/OracleLibrary.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";

contract GPRocket is Context {

    // GPO Token 
    GPO public gpo;
    // Total GP Reserves held by the contract
    uint256 public totalGPReserves;
    // Ticket Price in USDC
    uint256 public constant ticketPrice = 1;
    // Uniswap Router Address
    ISwapRouter public immutable swapRouterV3;
    // Uniswap V3 Pool Fee * 100 = 0.01 %
    uint24 internal swapPoolFeeUSDT = 100;
    // USDT Polygon token Address
    address public immutable addrUSDT;

    // Rocket Ship
    address[42] public rocketShip;

    // Qualified Struct
    struct Qualified {
        bool hasPaid;
        uint256 refAmount;
    }

    // Events 
    event boughtLaunchPass(
        address indexed purchaser,
        uint256 amountIn
    );

    event shiftPayout(
        address indexed position,
        uint256 GPAmountOut
    );

    // Qualify Mapping 
    mapping(address => Qualified) public launchPad;

    // Constructor 
    constructor(address _gpo, ISwapRouter _swapRouterV3, address _addrUSDT) {
        gpo = GPO(_gpo);
        swapRouterV3 = _swapRouterV3;
        addrUSDT = _addrUSDT;
    }

    // Function which takes USDT and swaps it for USDC and deposits into the contract 
    function swapUSDTForUSDC (uint256 amountIn, uint256 deadline) external {
        // Declare key addresses for transaction
        address _usdc = gpo.addrUSDC();
        address _from = _msgSender();

        // Transfer USDT from msg.sender to GPRocket
        TransferHelper.safeTransferFrom(addrUSDT, _from, address(this), amountIn);
        // Approve Uniswap Swap Router to swap USDT
        TransferHelper.safeApprove(addrUSDT, address(swapRouterV3), amountIn);

        if (deadline == 0)
            deadline = block.timestamp + 30*60;

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: addrUSDT,
                tokenOut: _usdc,
                fee: swapPoolFeeUSDT,
                recipient: address(this),
                deadline: deadline,
                amountIn: amountIn,
                amountOutMinimum: amountIn * 99 / 100,
                sqrtPriceLimitX96: 0
            });

        // Perform Swap and return the amount of USDC received 
        swapRouterV3.exactInputSingle(params);
    }

    // Swap USDC for GPO inside GPO Contract
    function swapUSDCToGPO() external {
         // Declare key addresses for transaction
        address _usdc = gpo.addrUSDC();
        address _gpo = address(gpo);

        uint256 deadline = block.timestamp + 30*60;

        // Approve GPO Contract to spend USDC
        TransferHelper.safeApprove(_usdc, _gpo, 1);
        // Swap USDC for GPO and adjust GPRockets totalGPReserves
        totalGPReserves += gpo.swapFromExactInput(1, 0, deadline);
    }
    

    // Buy a LaunchPass and enter the GP Rocket Launchpad
    function buyLaunchPass(uint256 amountIn, uint256 amountOutMinimum, uint256 deadline, address ref) external {
        // Check to see if the wallet has already paid
        require(launchPad[_msgSender()].hasPaid == false, "You can only purchase 1 LaunchPass per wallet!");
        // amountIn must equal to the ticketPrice and min amountOut must be greater than 0
        require(amountIn == ticketPrice && amountOutMinimum > 0);

        // Declare key addresses for transaction
        address _usdc = gpo.addrUSDC();
        address _gpo = address(gpo);
        address _from = _msgSender();

        // Transfer USDT from msg.sender to GPRocket
        TransferHelper.safeTransferFrom(addrUSDT, _from, address(this), amountIn);
        // Approve Uniswap Swap Router to swap USDT
        TransferHelper.safeApprove(addrUSDT, address(swapRouterV3), amountIn);

        if (deadline == 0)
            deadline = block.timestamp + 30*60;

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: addrUSDT,
                tokenOut: _usdc,
                fee: swapPoolFeeUSDT,
                recipient: address(this),
                deadline: deadline,
                amountIn: amountIn,
                amountOutMinimum: amountIn * 99 / 100,
                sqrtPriceLimitX96: 0
            });

        // Perform Swap and return the amount of USDC received 
        uint256 amountOutUSDC = swapRouterV3.exactInputSingle(params);
        // Approve GPO Contract to spend USDC
        TransferHelper.safeApprove(_usdc, _gpo, amountOutUSDC);
        // Swap USDC for GPO and adjust GPRockets totalGPReserves
        totalGPReserves += gpo.swapFromExactInput(amountOutUSDC, amountOutMinimum, deadline);
        // Update hasPaid for msg.sender
        launchPad[_from].hasPaid == true;

        // Update ref 
        if (ref != address(0)) {
            launchPad[ref].refAmount += 1;

            if (launchPad[ref].refAmount == 3 && launchPad[ref].hasPaid == true) {
                // ref has qualified to board the GPRocket
                enterTheRocket(ref);
            }
        }
        emit boughtLaunchPass(_msgSender(), amountIn);
    }

    // LaunchPass holders who qualify can enter the GP RocketShip
    function enterTheRocket(address ref) internal {
        // Step 1: Shift all positions inside Rocket Ship 
        for (uint i = 42; i < 1; i--) {
            if (i % 3 == 0 && rocketShip[i-1] != address(0)) {
                // Transfer GP to rocketShip[i] - 10% held by GP Rocket Reserves 
                uint256 USDAmountOut = 9 * ticketPrice * 2**(i / 3) / 10;
                uint256 GPAmountOut = calculateGPOOut(USDAmountOut);
                // Make sure there enough GPO inside the GP Rocket Ship
                require(GPAmountOut <= totalGPReserves, "GP Rocket has run out of fuel");
                // Transfer GPAmountOut to address in rocketShip[i-1]
                TransferHelper.safeTransfer(address(gpo), rocketShip[i-1], GPAmountOut);
                // Adjust the Total GP Reserves
                totalGPReserves -= GPAmountOut;
                // Shift Positions
                rocketShip[i-1] = rocketShip[i-2];
                // Emit stag
                emit shiftPayout(rocketShip[i-1], GPAmountOut);
            }
            else {
                rocketShip[i-1] = rocketShip[i-2];
            }
        }
        // Step 2: Send ticketPrice worth of GPO to ref - 10% held by GP Rocket Reserves
        uint256 gpoOut = calculateGPOOut(9*ticketPrice/10);
        // Step 3: Transfer gpoOut to ref
        TransferHelper.safeTransfer(address(gpo), ref, gpoOut);
        // Add ref to the bottom of the Rocket Ship 
        rocketShip[0] = ref;
    }

    // Calulate the total GPO out for given USDC based on the current GPO price
    function calculateGPOOut(uint256 usdc) public view returns (uint256 amountOut) {
        (int24 tick, ) = OracleLibrary.consult(gpo.authorizedPool(), 60);
        amountOut = OracleLibrary.getQuoteAtTick(
            tick,
            uint128(usdc),
            gpo.addrUSDC(),
            address(gpo)
        );
    }

    // Return the address at a given stage in the Rocket Ship 
    function addressAtStageX(uint256 stage) external view returns (address) {
        require (stage < 42, "This stage does not exist! Please enter valid stage");
        return rocketShip[stage];
    }

    // Returns the stage for a given address
    function positionForAddressX(address position) external view returns (uint256) {
        for (uint256 i = 0; i < 42; i++) {
            if (rocketShip[i] == position) {
                return i;
            }
        }
        return 1000;
    }
}

