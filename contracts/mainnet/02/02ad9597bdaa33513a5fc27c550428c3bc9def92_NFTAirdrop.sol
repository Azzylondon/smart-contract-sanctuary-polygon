  function addERC1155Airdrops(address _nftAddress, uint _nftID, uint _value) external {
    IERC1155(_nftAddress).safeTransferFrom(
      msg.sender, 
      address(this), 
      _nftID, 
      _value, 
      "0x9345e839" // data field for ERC1155 TO BE DEFINED
    );
  }

  function addRecipients(address[] memory _recipients) external {
    require(msg.sender == admin, 'only admin');
    for(uint i = 0; i < _recipients.length; i++) {
      recipients[_recipients[i]] = true;
    }
  }

  function removeRecipients(address[] memory _recipients) external {
    require(msg.sender == admin, 'only admin');
    for(uint i = 0; i < _recipients.length; i++) {
      recipients[_recipients[i]] = false;
    }
  }

  function claimERC721() external {
    require(recipients[msg.sender] == true, 'recipient not registered');
    recipients[msg.sender] = false;
    Airdrop storage airdrop = airdrops[nextAirdropId];
    IERC721(airdrop.nft).transferFrom(address(this), msg.sender, airdrop.id);
    nextAirdropId++;
  }

  function claimERC1155() external {
    require(recipients[msg.sender] == true, 'recipient not registered');
    recipients[msg.sender] = false;
    Airdrop storage airdrop = airdrops[nextAirdropId];
    IERC1155(airdrop.nft).safeTransferFrom(
      address(this), 
      msg.sender, 
      airdrop.id, 
      airdrop.id, 
      "0x9345e839" // data field for ERC1155 TO BE DEFINED
    );
    nextAirdropId++;
  }

  function sendERC1155(address _to, uint _id, uint256 _amount) external {
    require(recipients[msg.sender] == true, 'recipient not registered');
    recipients[msg.sender] = false;
    IERC1155(airdrops[nextAirdropId].nft).safeTransferFrom(
      address(this), 
      _to, 
      _id, 
      _amount, 
      "0x9345e839" // data field for ERC1155 TO BE DEFINED
    );
    nextAirdropId++;
  }

  function sendOneERC1155(address _nftAddress, address[] memory _to, uint _id) external {
    require(msg.sender == admin, 'only admin');
    for(uint i = 0; i < _to.length; i++) {
      IERC1155(_nftAddress).safeTransferFrom(
        address(this), 
        _to[i], 
        _id, 
        1, 
        "0x9345e839" // data field for ERC1155 TO BE DEFINED
      );
    }
  }
