pragma solidity 0.8.4;

import "../interfaces/IAaveIncentives.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {IERC20Metadata as IERC20} from "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract AaveIncentivesAdapter is OwnableUpgradeable {
	using SafeMath for uint256;

	IAaveIncentives public constant INCENTIVES =
		IAaveIncentives(0x357D51124f59836DeD84c8a1730D72B749d8BC23);

	mapping(address => address) public aTokens;
	mapping(address => address) public debtTokens;
	mapping(address => address) public priceFeeds;

	function formatDecimals(address token, uint256 amount)
		public
		view
		returns (uint256)
	{
		uint256 decimals = IERC20(token).decimals();

		if (decimals == 18) return amount;
		else return amount.mul(1 ether).div(10**decimals);
	}

	function getAaveRewards(address[] memory _tokens)
		public
		view
		returns (
			uint256[] memory _rewardsLending,
			uint256[] memory _rewardsBorrowing
		)
	{
		_rewardsLending = new uint256[](_tokens.length);
		_rewardsBorrowing = new uint256[](_tokens.length);

		(, int256 maticPrice, , , ) = AggregatorV3Interface(
			priceFeeds[0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE]
		).latestRoundData();

		for (uint256 i = 0; i < _tokens.length; i++) {
			(, int256 tokenPrice, , , ) = AggregatorV3Interface(
				priceFeeds[_tokens[i]]
			).latestRoundData();

			// Lending Data
			{
				IERC20 token_ = IERC20(aTokens[_tokens[i]]);
				uint256 totalSupply = formatDecimals(
					address(token_),
					token_.totalSupply()
				);

				(uint256 emissionPerSecond, , ) = INCENTIVES.assets(
					address(token_)
				);

				if (emissionPerSecond > 0) {
					_rewardsLending[i] = emissionPerSecond
						.mul(uint256(maticPrice))
						.mul(365 days)
						.mul(1 ether)
						.div(totalSupply)
						.div(uint256(tokenPrice));
				}
			}

			// Borrowing Data
			{
				IERC20 token_ = IERC20(debtTokens[_tokens[i]]);
				uint256 totalSupply = formatDecimals(
					address(token_),
					token_.totalSupply()
				);

				(uint256 emissionPerSecond, , ) = INCENTIVES.assets(
					address(token_)
				);

				if (emissionPerSecond > 0) {
					_rewardsBorrowing[i] = emissionPerSecond
						.mul(uint256(maticPrice))
						.mul(365 days)
						.mul(1 ether)
						.div(totalSupply)
						.div(uint256(tokenPrice));
				}
			}
		}
	}

	// Owner Functions

	function setPriceFeed(address[] memory _tokens, address[] memory _feeds)
		external
		onlyOwner
	{
		for (uint256 i = 0; i < _tokens.length; i++) {
			priceFeeds[_tokens[i]] = _feeds[i];
		}
	}

	function addSupplyTokens(
		address[] memory _tokens,
		address[] memory _aTokens
	) external onlyOwner {
		for (uint256 i = 0; i < _tokens.length; i++) {
			aTokens[_tokens[i]] = _aTokens[i];
		}
	}

	function addBorrowTokens(
		address[] memory _tokens,
		address[] memory _debtTokens
	) external onlyOwner {
		for (uint256 i = 0; i < _tokens.length; i++) {
			debtTokens[_tokens[i]] = _debtTokens[i];
		}
	}
}

