pragma experimental ABIEncoderV2;



contract SFLInventoryExtended is ERC1155Holder {
    IERC1155 private sflInventory;
    address private owner;

    struct BatchTransfer {
        address recipient;
        uint256[] tokenIds;
        uint256[] amounts;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Not the deployer");
        _;
    }

    constructor(address inventoryAddress) {
        owner = msg.sender;
        sflInventory = IERC1155(inventoryAddress);
    }

    function setInventoryAddress(address inventoryAddress) onlyOwner public {
        sflInventory = IERC1155(inventoryAddress);
    }

    function getOwner() public view returns(address) {
        return owner;
    }

    function getInventoryAddress() public view returns(address) {
        return address(sflInventory);
    }

    function getBalances(uint256[] memory tokenIds) public view returns(uint256[] memory) {
        address[] memory batchAccount = new address[](tokenIds.length);
        uint256[] memory balances = new uint256[](tokenIds.length);

        for(uint256 i = 0; i < tokenIds.length; i++) {
            batchAccount[i] = msg.sender;
        }

        balances = sflInventory.balanceOfBatch(batchAccount, tokenIds);

        return balances;
    }

    /*
        this function transfers `amount` of `tokenId` to each recipient
        relies on `safeTransferFrom` builtin checks e.g. if sufficient balance
    */
    function singleItemMultiTransfer(uint256 tokenId, uint256 amount, address[] memory recipients) public {
        for(uint256 i = 0; i < recipients.length; i += 1) {
            // `safeTransferFrom` already checks if `from`[1] has enough `amount`[4]
            sflInventory.safeTransferFrom(msg.sender, recipients[i], tokenId, amount, "");
        }
    }

    /*
        this function accepts argument of type BatchTransfer[] each consisting of recipient, id array, amounts array
        serves both single and multiple/batch item transfers
        relies on `safeBatchTransferFrom` builtin checks e.g. if sufficient balance
    */
    function multiItemMultiTransfer(BatchTransfer[] memory transfers) public {
        for(uint256 i = 0; i < transfers.length; i += 1) {
            BatchTransfer memory batchTransfer = transfers[i];

            // `safeBatchTransferFrom` already checks if `from`[1] has enough `amount`[4]
            sflInventory.safeBatchTransferFrom(msg.sender, batchTransfer.recipient, batchTransfer.tokenIds, batchTransfer.amounts, "");
        }
    }
}