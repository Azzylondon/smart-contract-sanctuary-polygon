import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "./S10NBaseFacet.sol";
import "../merchants/IMerchantTokenManager.sol";

contract MerchantFacet is S10NSubManagerBaseFacet {
    event MerchantCreated(
        address indexed owner,
        uint256 tokenId,
        string name,
        bool isSBT
    );
    event MerchantUpdated(address indexed owner, uint256 tokenId, string name);

    function createMerchant(
        string memory _merchantName,
        bool isSBT
    ) external whenNotPaused {
        IMerchantTokenManager merchantTokenManager = IMerchantTokenManager(
            _getManagerAddress("MerchantTokenManager")
        );
        uint tokenId = merchantTokenManager.createMerchant(
            _merchantName,
            msg.sender,
            isSBT
        );
        emit MerchantCreated(msg.sender, tokenId, _merchantName, isSBT);
    }

    function updateMerchant(
        uint256 merchantTokenId,
        string memory name
    ) external whenNotPaused {
        address merchantOwner = IERC721(
            _getManagerAddress("MerchantTokenManager")
        ).ownerOf(merchantTokenId);
        require(msg.sender == merchantOwner, "must call by merchant owner");
        IMerchantTokenManager(_getManagerAddress("MerchantTokenManager"))
            .updateMerchant(merchantTokenId, name);
        emit MerchantUpdated(msg.sender, merchantTokenId, name);
    }
}

