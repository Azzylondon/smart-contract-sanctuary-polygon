pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "../CreatorContract.sol";

contract CreatorsFactory is AccessControl {
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN");
    bytes32 public constant PLATFORM_ROLE = keccak256("PLATFORM");

    bytes32 public constant CREATOR_ROLE = keccak256("CREATOR");
    bytes32 public constant LABEL_ROLE = keccak256("LABEL");

    string _baseProfileMetadataUri;
    address _baseTradeToken;
    bool _allowCreations = true;

    mapping(address => uint) createdArtists;
    uint256 artistsCounter = 0;

    event ArtistCreated (   
        address indexed artistContract
    );

    constructor(
        address baseTradeToken,
        string memory baseProfileUrl,
        address admin,
        address platform
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ADMIN_ROLE, admin);
        _setupRole(PLATFORM_ROLE, platform);

        _grantRole(PLATFORM_ROLE, admin);

        _setRoleAdmin(CREATOR_ROLE, PLATFORM_ROLE);

        _baseTradeToken = baseTradeToken;
        _baseProfileMetadataUri = baseProfileUrl;
    }

    function enableCreations() public onlyRole(ADMIN_ROLE) {
        _allowCreations = true;
    }

    function disableCreations() public onlyRole(ADMIN_ROLE) {
        _allowCreations = false;
    }

    function setBaseProfileUrl(string memory profileUrl)
        public
        onlyRole(ADMIN_ROLE)
    {
        _baseProfileMetadataUri = profileUrl;
    }

    function permitUser(address user) public onlyRole(PLATFORM_ROLE) {
        _grantRole(CREATOR_ROLE, user);
    }

    function revokeUser(address user) public onlyRole(ADMIN_ROLE) {
        _revokeRole(CREATOR_ROLE, user);
    }

    function permitLabel(address user) public onlyRole(PLATFORM_ROLE) {
        _grantRole(LABEL_ROLE, user);
    }

    function revokeLabel(address user) public onlyRole(ADMIN_ROLE) {
        _revokeRole(LABEL_ROLE, user);
    }

    function createArtistContract(
        string memory socialUrl,
        string memory proof
    ) public returns (address) {
        if (createdArtists[msg.sender] == 0) {
            require(hasRole(CREATOR_ROLE, msg.sender));
        } else {
            require(hasRole(LABEL_ROLE, msg.sender));
        }

        artistsCounter++;
        CreatorContract artist = new CreatorContract(
            artistsCounter,
            socialUrl,
            proof,
            msg.sender,
            _baseTradeToken,
            string(abi.encodePacked(_baseProfileMetadataUri, "/nft/"))
        );
        createdArtists[msg.sender]++;
        emit ArtistCreated(address(artist));
        return address(artist);
    }
}

