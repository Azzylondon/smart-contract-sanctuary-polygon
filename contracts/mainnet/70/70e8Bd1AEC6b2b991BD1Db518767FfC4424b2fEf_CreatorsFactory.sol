pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/token/ERC777/ERC777.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "./SocialToken.sol";

contract CreatorContract is ERC1155, AccessControl {
    bytes32 public constant ARTIST_ROLE = keccak256("ARTIST");
    bytes32 public constant FACTORY_ROLE = keccak256("FACTORY");

    uint256 private idcounter = 0;

    string creatorSocialUrl;
    string platformProof;
    uint256 _id;
    string _metadataUri;

    address private _baseTradeToken;
    address _socialToken;

    struct Stake {
        uint256 amount;
        uint256 stakeUntil;
    }

    uint256 totalTokensStaked;
    mapping(address=>Stake) stakes;

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC1155, AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    constructor(
        uint256 artistId,
        string memory socialUrl,
        string memory proof,
        address owner,
        address tradeToken,
        string memory metadataUri
    ) ERC1155(metadataUri) {
        creatorSocialUrl = socialUrl;
        platformProof = proof;
        _id = artistId;
        _metadataUri = metadataUri;

        _setupRole(ARTIST_ROLE, owner);
        _setupRole(FACTORY_ROLE, msg.sender);

        _baseTradeToken = tradeToken;

    }

   
    function setSocialToken(address socialTokenAddress) onlyRole(ARTIST_ROLE) public {
        require(Ownable(socialTokenAddress).owner() == msg.sender && _socialToken == address(0));
        _socialToken = socialTokenAddress;
    }

    function getSocialToken() public view returns (address) {
        return _socialToken;
    }

    

    function mintArtworkTokens(uint256 totalAmount)
        public
        onlyRole(ARTIST_ROLE)
        returns (uint256)
    {
        idcounter++;
        _mint(msg.sender, idcounter, totalAmount, "");
        return idcounter;
    }

    function id() public view returns (uint256) {
        return _id;
    }

    function uri(uint256 tokenId) public view override returns (string memory) {
        require(tokenId <= idcounter);
        return
            string(
                abi.encodePacked(
                    _metadataUri,
                    Strings.toString(tokenId),
                    ".json"
                )
            );
    }

    function getArtworksCount() public view returns (uint256) {
        return idcounter;
    }
}

