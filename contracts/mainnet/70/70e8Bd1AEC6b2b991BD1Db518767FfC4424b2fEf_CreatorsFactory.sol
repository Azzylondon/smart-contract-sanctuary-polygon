import "@openzeppelin/contracts/token/ERC777/ERC777.sol";

contract ERC777Dividend is ERC777 {
    struct BalanceSnapshot {
        bool taken;
        uint256 amount;
    }

    uint32 currentSnapshot = 0;
    mapping(uint32 => mapping(address => BalanceSnapshot)) balanceSnapshots;
    mapping(uint32 => BalanceSnapshot) supplySnapshots;
    mapping(address => uint32) private lastUsedSnapshot;

    address _baseDivsToken;
    uint256 prevBalance;

    uint8 _maxSupplyPow10;

    constructor(
        string memory name,
        string memory symbol,
        address[] memory defaultOperators,
        uint256 initialSupply,
        uint8 maxSupplyPow10,
        address minter,
        address baseDivsToken
    ) ERC777(name, symbol, defaultOperators) {
        //require(initialSupply <= 10**maxSupplyPow10);
        _maxSupplyPow10 = maxSupplyPow10;
        _baseDivsToken = baseDivsToken;
        _mint(minter, initialSupply, "", "");
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        super._beforeTokenTransfer(operator, from, to, amount);

        if (from == address(0) && !supplySnapshots[currentSnapshot].taken) {
            supplySnapshots[currentSnapshot].amount = totalSupply() + amount;
            return;
        }

        if (to == address(0) && !supplySnapshots[currentSnapshot].taken) {
            supplySnapshots[currentSnapshot].amount = totalSupply() - amount;
            return;
        }

        if (!balanceSnapshots[currentSnapshot][from].taken) {
            balanceSnapshots[currentSnapshot][from].amount =
                balanceOf(from) -
                amount;
            balanceSnapshots[currentSnapshot][from].taken = true;
        }

        if (!balanceSnapshots[currentSnapshot][to].taken) {
            balanceSnapshots[currentSnapshot][to].amount =
                balanceOf(to) +
                amount;
            balanceSnapshots[currentSnapshot][to].taken = true;
        }
    }

    function _confirmDividends() internal {
        if (prevBalance != balanceOf(address(this))) {
            snapshot();
        }
    }

    function getDividendsAvailable(address user) public view returns (uint256) {
        uint256 userDivs = calculateUserDivs(
            user,
            lastUsedSnapshot[user],
            currentSnapshot
        );
        return userDivs;
    }

    function withdrawDividends() public {
        uint256 userDivs = calculateUserDivs(
            msg.sender,
            lastUsedSnapshot[msg.sender],
            currentSnapshot
        );
        _approve(address(this), msg.sender, userDivs);
        transferFrom(address(this), msg.sender, userDivs);
        lastUsedSnapshot[msg.sender] = currentSnapshot;
    }

    function snapshot() internal {
        currentSnapshot++;
    }

    function calculateUserDivs(
        address user,
        uint32 from,
        uint32 to
    ) private view returns (uint256) {
        require(to <= currentSnapshot);
        uint256 userDivs = 0;
        for (uint32 i = from; i < to; i++) {
            // Если у адреса не было активности во время снапшотов то у него был баланс равный его последнему сделанному снапшоту
            uint256 balance = balanceSnapshots[from][user].taken
                ? balanceSnapshots[from][user].amount
                : getLastBalanceSnapshot(from, user);
            uint256 supply = supplySnapshots[from].taken
                ? supplySnapshots[from].amount
                : getLastSupplySnapshot(from);
            uint256 percentScaled = (balance * 10**_maxSupplyPow10) / supply;
            userDivs +=
                (balanceOf(address(this)) * percentScaled) /
                (10 * _maxSupplyPow10 + 2);
        }
        return userDivs;
    }

    function getLastBalanceSnapshot(uint32 from, address user)
        private
        view
        returns (uint256)
    {
        uint256 lastSnapshot = 0;
        do {
            lastSnapshot = balanceSnapshots[from][user].amount;
            from--;
        } while (!balanceSnapshots[from][user].taken && from > 0);

        return lastSnapshot;
    }

    function getLastSupplySnapshot(uint32 from) private view returns (uint256) {
        uint256 lastSnapshot = 0;
        do {
            lastSnapshot = supplySnapshots[from].amount;
            from--;
        } while (!supplySnapshots[from].taken && from > 0);

        return lastSnapshot;
    }

    function getBaseTokenAddress() public view returns(address) {
        return _baseDivsToken;
    }
}