pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";

contract ElegantAccounts2 is Ownable {
    
    mapping(address => string) public nameByAddress;
    mapping(string => bool) public nameTaken;
    mapping(address => uint) captainMyCaptain;

    address public admin;

    constructor() {
        admin = msg.sender;
    }

    //  //
    function nameUpdate(string calldata _name, address _addy) public {
        require(!compareStrings(_name,""), "Name cannot be blank.");
        require(nameTaken[_name] == false, "Name already in use!");
        bool per;
        if (msg.sender == _addy || msg.sender == admin){
            per = true;
        }
        require(per, "You don't have permission to do that.");
        string memory _old = nameByAddress[msg.sender];
        nameByAddress[msg.sender] = _name;
        nameTaken[_name] = true;
        nameTaken[_old] = false;
    }
    
    function getName(address _wallet) external view returns (string memory){
        string memory _name = nameByAddress[_wallet];
        return _name;
    }

    function getCaptain(address _wallet) external view returns (uint){
        return captainMyCaptain[_wallet];
    }

    function compareStrings(string memory a, string memory b) public pure returns (bool) {
        return keccak256(abi.encodePacked(a)) == keccak256(abi.encodePacked(b));
    }
    
}

