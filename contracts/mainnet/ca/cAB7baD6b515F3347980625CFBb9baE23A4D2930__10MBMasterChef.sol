    function getBoostRate10MB(address _nft, uint256 _nftId) public view returns (uint256) {
        if (nftIdBoosters[_nft].length == 0)
            return nftBoost[_nft].rate10MB;
        else {
            for (uint i = 0;i<nftIdBoosters[_nft].length;i++) {
                if (_nftId >= nftIdBoosters[_nft][i].nftIdStart && _nftId <= nftIdBoosters[_nft][i].nftIdEnd)
                    return nftIdBoosters[_nft][i].rate10MB;
            }
        }
        return nftBoost[_nft].rate10MB;
    }

    function getBoostRate10SHARE(address _nft, uint256 _nftId) public view returns (uint256) {
        if (nftIdBoosters[_nft].length == 0)
