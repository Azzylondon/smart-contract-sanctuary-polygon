    }

    // Update the given pool's USDT allocation point and deposit fee. Can only be called by the owner.
    function set(uint256 _pid, uint256 _allocPoint10MB, uint256 _allocPoint10SHARE, bool _withUpdate, uint256 _depositFeeBP) public onlyOwner {
