    /* ========== View Functions ========== */

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public pure returns (uint256) {
        return _to.sub(_from);
    }

    // View function to see pending USDT on frontend.
    function pending10MB(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 acc10MBPerShare = pool.acc10MBPerShare;
        uint256 lpSupply = pool.totalLocked;
        if (block.timestamp > pool.lastRewardTime && lpSupply != 0) {
            uint256 multiplier = getMultiplier(pool.lastRewardTime, block.timestamp);
            uint256 _10MBReward = multiplier.mul(_10MBPerSecond).mul(pool.allocPoint10MB).div(totalAllocPoint10MB);
            acc10MBPerShare = acc10MBPerShare.add(_10MBReward.mul(1e18).div(lpSupply));
        }
        return user.amount.mul(acc10MBPerShare).div(1e18).sub(user.rewardDebt10MB);
    }

    // View function to see pending USDT on frontend.
    function pending10SHARE(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 acc10SHAREPerShare = pool.acc10SHAREPerShare;
        uint256 lpSupply = pool.totalLocked;
        if (block.timestamp > pool.lastRewardTime && lpSupply != 0) {
            uint256 multiplier = getMultiplier(pool.lastRewardTime, block.timestamp);
            uint256 _10SHAREReward = multiplier.mul(_10SHAREPerSecond).mul(pool.allocPoint10SHARE).div(totalAllocPoint10SHARE);
            acc10SHAREPerShare = acc10SHAREPerShare.add(_10SHAREReward.mul(1e18).div(lpSupply));
