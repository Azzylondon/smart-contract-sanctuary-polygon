    function add(uint256 _allocPoint10MB, uint256 _allocPoint10SHARE, ERC20 _lpToken, bool _withUpdate, uint256 _depositFeeBP, bool _hasReceiptToken, string memory receiptName) public onlyOwner nonDuplicated(_lpToken) {
        require(_depositFeeBP <= 1000, "too high fee"); // <= 10%

        if (_withUpdate) {
            massUpdatePools();
        }

        address receiptTokenAddress = address(0);

        if (_hasReceiptToken)
            receiptTokenAddress = ERC20FactoryLib.createERC20(receiptName, receiptName, _lpToken.decimals());

        uint256 lastRewardTime = block.timestamp > startTime ? block.timestamp : startTime;
        totalAllocPoint10MB = totalAllocPoint10MB.add(_allocPoint10MB);
        totalAllocPoint10SHARE = totalAllocPoint10SHARE.add(_allocPoint10SHARE);
        poolExistence[_lpToken] = true;
        poolInfo.push(PoolInfo({
            lpToken : _lpToken,
            allocPoint10MB : _allocPoint10MB,
            allocPoint10SHARE : _allocPoint10SHARE,
            lastRewardTime : lastRewardTime,
            acc10MBPerShare : 0,
            acc10SHAREPerShare : 0,
            depositFeeBP: _depositFeeBP,
            totalLocked: 0,
            receiptToken: receiptTokenAddress,
            hasReceiptToken: _hasReceiptToken
