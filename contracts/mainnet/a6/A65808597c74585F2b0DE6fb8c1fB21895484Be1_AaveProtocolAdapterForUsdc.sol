/**
 * @title AaveProtocolAdapterForUsdc
 * @author Protofire
 * @dev Aave Protocol reporting Aave holdings in USDC scaled decimals.
 *
 */
contract AaveProtocolAdapterForUsdc is ProtocolAdapter {
   using SafeMath for uint256;

  address public usdcToken;
  address public aaveToken;
  address public aaveUsdFeed;

  constructor ( address _usdc, address _aave, address _aaveUsdcFeed ) ProtocolAdapter("Aave Token Protocol Adapter For USDC",IERC20(_usdc)) {
      usdcToken = _usdc;
      aaveToken = _aave;
      aaveUsdFeed = _aaveUsdcFeed;
  }
  
  function getGrossDebt(address) public override pure returns (uint256) {
     return 0;
  }

  function getGrossValue(address _target) public override view returns (uint256) {
     // aassuming that 1 stETH = 1 WETH, we make no convertions nor appalying eny rate
     // an could be an improovement to query an oracle or a median of pools with those tokens
     uint256 scaleFactorToUdscDecimals = 10**(IERC20Metadata(aaveToken).decimals()-IERC20Metadata(usdcToken).decimals());
     return IERC20(aaveToken).balanceOf(_target).mul(getAaveScaledUSDCPrice()).div(scaleFactorToUdscDecimals);
  }

  function getAaveScaledUSDCPrice() public view returns (uint256) {
      uint256 aaveUsdcDeciamls = AggregatorV2V3Interface(aaveUsdFeed).decimals();
      int256 aaveUsdcPrice = AggregatorV2V3Interface(aaveUsdFeed).latestAnswer();

      uint256 scaleFactorToUdscDecimals = 10**(aaveUsdcDeciamls.sub(IERC20Metadata(usdcToken).decimals()));
      return uint256(aaveUsdcPrice).div(scaleFactorToUdscDecimals);
  }

  function decimals() external view returns (uint8) { 
     return IERC20Metadata(usdcToken).decimals();
  }
}

