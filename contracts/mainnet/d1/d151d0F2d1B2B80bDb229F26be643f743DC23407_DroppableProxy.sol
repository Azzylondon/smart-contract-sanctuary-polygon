    //  Reverts if the message sender does not have admin privileges
    modifier onlyAdminOrOwner() {
        require(owner() == _msgSender() || addressIsAdmin[_msgSender()], 'Caller is not an admin');
        _;
    }

    function kill() external onlyOwner {
        selfdestruct(payable(owner()));
    }

    function supportsInterface(bytes4 interfaceId) public view override returns (bool) {
        return
            interfaceId == type(IERC165).interfaceId ||                             // 0x01ffc9a7
            interfaceId == type(IERC20).interfaceId ||                              // 0x36372b07
            interfaceId == type(IERC721Receiver).interfaceId ||                     // 0x150b7a02
            interfaceId == ON_ERC721_RECEIVED_NEW ||                                // 0x150b7a02
            interfaceId == ON_ERC721_RECEIVED_OLD ||                                // 0xf0b9e5ba
            interfaceId == ERC20.name.selector ||                                   // 0x06fdde03
            interfaceId == ERC20.symbol.selector ||                                 // 0x95d89b41
            interfaceId == ERC20.decimals.selector ||                               // 0x313ce567
