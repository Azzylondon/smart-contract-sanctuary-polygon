        address payable sender = payable(_msgSender());

        require(getAdmin(sender) || getFulfillmentAgent(sender), 'This token is soulbound');

        if (addressIsFulfillmentAgent[sender]) {
            //  This is where the magic happens - transfer NFTs instead of tokens
            require(nftRewardPool != address(0), 'NFT pool is not set');
            IERC721Enumerable nft = IERC721Enumerable(nftRewardPool);
            uint256 nfts = nft.balanceOf(address(this));

            require(nfts >= amount, 'Proxy does not have enough NFTs to redeem');
