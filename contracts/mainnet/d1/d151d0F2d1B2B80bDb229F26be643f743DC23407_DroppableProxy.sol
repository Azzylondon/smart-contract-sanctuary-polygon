    function recallNFTs(address nftAddress, uint256[] memory tokenIds) external onlyAdminOrOwner {
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            IERC721(nftAddress).safeTransferFrom(address(this), _msgSender(), tokenIds[i]);
        }
    }

    //  Owner or admin can pull ERC20s back off the contract
    function recallTokens(address tokenAddress) external onlyAdminOrOwner {
        IERC20 token = IERC20(tokenAddress);
        uint256 balance = token.balanceOf(address(this));
        token.transfer(_msgSender(), balance);
    }

    function getRuntimeRNG(uint256 _modulus) internal returns (uint256) {
        require(_msgSender() != block.coinbase, 'RNG: Validators are not allowed to generate their own RNG');
        return uint256(keccak256(abi.encodePacked(block.coinbase, gasleft(), block.number, ++rngSeed))) % _modulus;
    }
