        return nftRewardPool;
    }

    //  Override from ERC20
    function decimals() public pure override returns (uint8) {
        return 0;
    }

    //  Create tokens for the given account
    //  @param address account - The wallet to receive the new tokens
    //  @param uint256 amount - Number of tokens to mint
