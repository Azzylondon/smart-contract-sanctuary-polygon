contract LaunchpadRETH is PausableUpgradeable, AccessControlUpgradeable {    

    AggregatorV3Interface internal priceFeed;

    IERC20 public Token;
    IERC20 public BMC;

    uint256 public tokenRate;
    uint256 public minBMCRequired;
    uint256 public minInvestment;
    uint256 public maxInvestment;

    uint public MaticRaised;
    uint public TokenSold;
    uint public soldCount;

    bool public saleEnabled = true;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER");
    address internal _safe = 0xd8806d66E24b702e0A56fb972b75D24CAd656821;

    struct Sale {
        address buyer;
        uint amount;
        uint timestamp;
    }

    mapping(uint => Sale) public sales;
    event Raised(address buyer, uint amount, uint timestamp);

    constructor(address _Token, address _BMC){
        _grantRole(DEFAULT_ADMIN_ROLE, 0x5a1a41d613676780f6E9684F1C9Fb89e116013f2);
        _grantRole(MINTER_ROLE, 0x5E012056c8a1f8aDc7e1Df367BC5c2eC200BE7a8);
        priceFeed = AggregatorV3Interface(0xAB594600376Ec9fD91F8e885dADF0CE036862dE0);

        minInvestment = 10 * 1e18;
        maxInvestment = 10000 * 1e18;
        Token = IERC20(_Token);
        BMC = IERC20(_BMC);
        tokenRate = 3000000;
    }
    
    modifier validate() {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender) ||
                hasRole(MINTER_ROLE, msg.sender),
            "AccessControl: Address does not have valid Rights"
        );
        _;
    }

    function setTokenRate(uint _tokenRate) public validate {
        tokenRate = _tokenRate;
    }
    
    function setMinBMC(uint _min) public validate {
        minBMCRequired = _min;
    }

    function getTokenRate() public view returns (uint256) {
        return tokenRate;
    }
    
    function setCapSize(uint _min, uint _max) public validate {
        minInvestment = _min;
        maxInvestment = _max;
    }

    function toggleSale() public validate {
        saleEnabled = !saleEnabled;
    }

    function tokenSold() public view returns(uint){
        return TokenSold;
    }

    function checkAmount(uint amount) public view returns(uint){
        (
            uint80 roundID, 
            int price,
            uint startedAt,
            uint timeStamp,
            uint80 answeredInRound
        ) = priceFeed.latestRoundData();

        amount = (amount / 1e18) * uint(price); // Dollar amount
        amount = amount / tokenRate; // token numbers denominated in dollars
        return amount * 1e18;
    }
    
    function InvestInRETH() public payable {
        address sender = msg.sender;
        uint value = msg.value;
        uint tokenToBeSent = checkAmount(value);

        require(value >= minInvestment, "BMN: Investment Too Low");
        require(value <= maxInvestment, "BMN: Investment Too High");
        require(saleEnabled, "Launchpad: Reth Sale is not enabled.");
        require(BMC.balanceOf(sender) >= minBMCRequired, "Launchpad: Not Enough BMC balance.");
        
        payable(_safe).transfer(address(this).balance);
        MaticRaised += value;
    
        Token.transfer(sender, tokenToBeSent);
        TokenSold += tokenToBeSent;

        Sale storage sale = sales[++soldCount];
        sale.buyer = sender;
        sale.amount = value;
        sale.timestamp = block.timestamp;

        emit Raised(sender, tokenToBeSent, block.timestamp);
    }
}


