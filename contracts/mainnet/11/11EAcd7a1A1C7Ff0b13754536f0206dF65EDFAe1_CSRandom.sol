pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract CSRandom {
  using SafeMath for uint256;
  address private immutable wmaticAddress = 0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270;
  uint256 wmaticBalance;
  uint256 randomNumber;
  uint256[] private playerHand;
  uint256[] private bankerHand;

  // event WMaticBalance(uint256 balance);
  event PlayerHand(uint[] _playerHand);
  event BankerHand(uint[] _bankerHand);
  constructor() {

  }

  function randomGenerator() public {
    wmaticBalance = address(wmaticAddress).balance;
    uint randomCard;

    randomNumber = uint256(keccak256(abi.encodePacked(block.timestamp, block.difficulty, wmaticBalance)));
    for (uint i=0; i<6; i++) {
      randomCard = (randomNumber / 52 + 1) % 13 == 0 ? 13 : (randomNumber / 52 + 1) % 13;
      randomCard % 2 == 0 ? playerHand.push(randomCard) : bankerHand.push(randomCard);
      randomCard /= 52;
    }
    
    emit PlayerHand(playerHand);
    emit BankerHand(bankerHand);

    delete playerHand;
    delete bankerHand;
  }

  function getBalance() public view returns(uint256) {
    return wmaticBalance;
  }

  function getRandomNumber() public view returns(uint256) {
    return randomNumber;
  }

  // function getPlayerHand() public view returns(uint[] memory) {
  //   return playerHand;
  // }

  // function getBankerHand() public view returns(uint[] memory) {
  //   return bankerHand;
  // }
}

