    IJamonRouter public immutable ROUTER;
    IAcornBank public immutable BANK;

    //---------- Variables ----------//
    address public immutable JSHARE;
    uint256 public lastDistribution;
    uint256 public interval;
    address public jstlpVault;

    //---------- Constructor ----------//
    constructor(
        address _jamon,
        address _jshare,
        address _bank,
        address _jstlpVault
    ) {
        JAMON = IERC20Burnable(_jamon);
        ROUTER = IJamonRouter(0xdBe30E8742fBc44499EB31A19814429CECeFFaA0);
        BANK = IAcornBank(_bank);
        JAMON.approve(address(ROUTER), ~uint256(0));
