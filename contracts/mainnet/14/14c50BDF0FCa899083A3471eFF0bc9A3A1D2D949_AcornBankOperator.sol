        uint256 toBurn = amount.mul(75).div(100);
        uint256 toSwap = amount.sub(toBurn);
        JAMON.burn(toBurn);
        address[] memory path = new address[](2);
        path[0] = address(JAMON);
        path[1] = JSHARE;
        ROUTER.swapExactTokensForTokens(
            toSwap,
            0,
            path,
            jstlpVault,
            block.timestamp.add(60)
        );
    }

    //----------- External Functions -----------//
