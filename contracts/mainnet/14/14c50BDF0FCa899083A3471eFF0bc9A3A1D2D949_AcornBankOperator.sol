        distributeRewards();
    }

    function setInterval(uint256 _interval) external onlyOwner {
        require(_interval >= 1 days && _interval <= 15 days);
        interval = _interval;
    }

    function setJstlpVault(address _newJstlpVault) external onlyOwner {
        require(_newJstlpVault != address(0));
        jstlpVault = _newJstlpVault;
