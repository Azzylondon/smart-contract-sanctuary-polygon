        if (BANK.hasProfits()) {
            BANK.distributeProfits();
            lastDistribution = block.timestamp;
        }
        uint256 jamonBalance = JAMON.balanceOf(address(this));
        if (jamonBalance >= 100) {
            _processRewards(jamonBalance);
        }
