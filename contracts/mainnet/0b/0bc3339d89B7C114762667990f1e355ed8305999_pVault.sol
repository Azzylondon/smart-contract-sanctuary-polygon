pragma solidity 0.6.12;
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Pausable.sol";
import "../interfaces/base/IStrategy.sol";
import "./AccessManager.sol";
import "./VaultEvent.sol";

contract pVault is ERC20, AccessManager, Pausable, VaultEvent, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    struct UserInfo {
        uint256 shares; // number of shares for a user
        uint256 lastDepositedTime; // keeps track of deposited time for potential penalty
        uint256 lastUserActionTime; // keeps track of the last user action time
        uint256 amount; // keeps track of the balance last user action time
    }
    address public treasury;
    uint256 public performanceFee = 200; //2%
    uint256 public withdrawFeePeriod = 72 hours; // 3 days
    uint256 public withdrawFee = 10; //0.1%
    uint256 public reinvestBounty = 100; //1%
    uint256 public MAX_FEE = 5000; //50%
    uint256 public totalShare = 0;
    uint256 public lastCompoundBalance = 0;
    IStrategy public strategy;
    IERC20 public token;
    IERC20 public straxRewardToken;
    bool isSameAsset = false;

    mapping(address => UserInfo) public userInfo;

    constructor(address _token, address _straxRewardToken)
        public
        ERC20(
            string(abi.encodePacked("Payb ", ERC20(_token).name())),
            string(abi.encodePacked("p", ERC20(_token).symbol()))
        )
        AccessManager(msg.sender, msg.sender)
    {
        token = IERC20(_token);
        straxRewardToken = IERC20(_straxRewardToken);
        _setupDecimals(ERC20(_token).decimals());
        treasury = msg.sender;
        isSameAsset = _token == _straxRewardToken;
    }

    /** Modifier */
    /// @dev Require that the caller must be an EOA account to avoid flash loans.
    modifier onlyEOA() {
        require(msg.sender == tx.origin, "not eoa");
        _;
    }

    function setTreasury(address _treasury) external onlyGovernance {
        require(treasury != _treasury, "Bad address");
        treasury = _treasury;
    }

    function setStrategy(address _strategy) external onlyGovernance {
        require(address(strategy) != _strategy, "Bad address");
        strategy = IStrategy(_strategy);
    }

    function setWithdrawFeePeriod(uint256 value) external onlyGovernance {
        require(
            value >= 0 && value != withdrawFeePeriod && value < MAX_FEE,
            "Bad val"
        );
        withdrawFeePeriod = value;
        emit SettingChanged(
            Setting.WITHDRAW_FEE_PERIOD,
            msg.sender,
            block.timestamp
        );
    }

    function setWithdrawFee(uint256 value) external onlyGovernance {
        require(
            value >= 0 && value != withdrawFee && value < MAX_FEE,
            "Bad val"
        );
        withdrawFee = value;
        emit SettingChanged(Setting.WITHDRAW_FEE, msg.sender, block.timestamp);
    }

    function setPerformanceFee(uint256 value) external onlyGovernance {
        require(
            value >= 0 && value != performanceFee && value < MAX_FEE,
            "Bad val"
        );
        performanceFee = value;
        emit SettingChanged(
            Setting.PERFORMANCE_FEE,
            msg.sender,
            block.timestamp
        );
    }

    function setReinvestBounty(uint256 value) external onlyGovernance {
        require(
            value >= 0 && value != reinvestBounty && value < MAX_FEE,
            "Bad val"
        );
        reinvestBounty = value;
        emit SettingChanged(
            Setting.REINVEST_BOUNTY,
            msg.sender,
            block.timestamp
        );
    }

    function pause() external whenNotPaused onlyGovernance {
        _pause();
    }

    function unpause() external whenPaused onlyGovernance {
        _unpause();
    }

    function _deposit(uint256 _amount) internal {
        require(_amount > 0, "Zero deposit");
        require(token.balanceOf(msg.sender) >= _amount, "Bad bal");
        _harvest();
        uint256 _pool = balance();
        uint256 _before = token.balanceOf(address(this));
        token.safeTransferFrom(msg.sender, address(this), _amount);
        uint256 _after = token.balanceOf(address(this));
        // Additional check for deflationary tokens
        _amount = _after.sub(_before);
        if (_amount > 0) {
            uint256 currentShares = _amount;
            if (totalShare > 0 && _pool > 0) {
                currentShares = (_amount.mul(totalShare)).div(_pool);
            }
            totalShare = totalShare.add(currentShares);
            //_mint(msg.sender, currentShares);
            token.safeTransfer(address(strategy), _amount);
            UserInfo storage user = userInfo[msg.sender];
            user.shares = user.shares.add(currentShares);
            user.lastDepositedTime = block.timestamp;
            user.lastUserActionTime = block.timestamp;
            user.amount = user.amount.add(_amount);
            emit UserDeposit(msg.sender, _amount, block.timestamp);
        }
        _earn();
    }

    function _harvest() internal {
        strategy._harvest();
        uint256 b = token.balanceOf(address(strategy));
        if(b > lastCompoundBalance){
            uint256 diff = b.sub(lastCompoundBalance);
            if (diff > 0) {
                uint256 _performanceFee = diff.mul(performanceFee).div(10000);
                if (_performanceFee > 0) {
                    strategy._collectPerformaceFee(treasury, _performanceFee);
                }
            }
        }
       strategy._supply();
    }

    function _earn() internal {
        // reinvest
        strategy._supply();
        lastCompoundBalance = strategy.balanceOf();
    }

    function deposit(uint256 _amount)
        external
        nonReentrant
        whenNotPaused
        onlyEOA
    {
        _deposit(_amount);
    }

    function depositAll() external nonReentrant whenNotPaused onlyEOA {
        _deposit(token.balanceOf(msg.sender));
    }

    function _withdraw(uint256 _shares) internal {
        UserInfo storage user = userInfo[msg.sender];
        require(user.shares > 0, "Bad shares");
        //Clamp the user shares
        if (_shares == 0 || _shares > user.shares) {
            _shares = user.shares;
        }
        uint256 r = (balance().mul(_shares)).div(totalShare);
        uint256 b = available();
        user.shares = user.shares.sub(_shares);
        totalShare = totalShare.sub(_shares);
        // Check balance
        if (b < r) {
            uint256 _withdrawAmount = r.sub(b);
            strategy._withdraw(_withdrawAmount);
            uint256 _diff = available().sub(b);
            if (_diff < _withdrawAmount) {
                r = b.add(_diff);
            }
        }
        /// @dev this block must be place before the Withdraw cooldown penalty
        if (user.amount > r) {
            user.amount = user.amount.sub(r);
        } else {
            user.amount = 0;
        }
        //Withdraw cooldown penalty
        if (block.timestamp < user.lastDepositedTime.add(withdrawFeePeriod)) {
            uint256 _fee = r.mul(withdrawFee).div(10000);
            if (_fee > 0) {
                token.safeTransfer(treasury, _fee);
                r = r.sub(_fee);
            }
        }
        

        require(r > 0, "Bad amount");
        token.safeTransfer(msg.sender, r);
        lastCompoundBalance = balance(); 
        emit UserWithdraw(msg.sender, r, block.timestamp);
    }

    function withdraw(uint256 _shares) external nonReentrant onlyEOA {
        _withdraw(_shares);
    }

    function withdrawAll() external nonReentrant onlyEOA {
        _withdraw(userInfo[msg.sender].shares);
    }

    /// @notice For manually autocompound
    function compound() external whenNotPaused nonReentrant onlyEOA {
        strategy.compound(reinvestBounty, msg.sender);
        emit UserCompound(msg.sender, block.timestamp);
    }

    /// @notice for other token
    function inCaseTokensGetStuck(address _token) external onlyStrategist {
        require(
            _token != address(token) && _token != address(straxRewardToken),
            "not allowed"
        );
        IERC20(_token).safeTransfer(
            msg.sender,
            IERC20(_token).balanceOf(address(this))
        );
    }

    /// @notice emergency withdraw all funds 
    function inCaseStrategyTokensGetStuck() external onlyStrategist {
        strategy.emergencyExist();
    }

    /** View function */
    /// @notice get available token in vault
    function available() public view returns (uint256) {
        return token.balanceOf(address(this));
    }
    /// @notice get all token in vault and strategy
    function balance() public view returns (uint256) {
        uint256 straxBal = strategy.balanceOf();
        return available().add(straxBal);
    }

    function getVaultInfo(address _user, uint256 _blocks)
        public
        view
        returns (uint256[14] memory)
    {
        UserInfo memory user = userInfo[_user];
        return [
            available(),
            balance(),
            yeild(),
            getPricePerFullShare(),
            user.shares,
            user.amount,
            user.lastDepositedTime,
            getUserPendingReward(_user),
            getIntervalReturn(_blocks),
            getPendingReward(),
            performanceFee,
            withdrawFeePeriod,
            withdrawFee,
            reinvestBounty
        ];
    }

    function yeild() public view returns (uint256) {
        return
            isSameAsset
                ? balance().add(strategy.getPendingReward())
                : balance();
    }

    function getPricePerFullShare() public view returns (uint256) {
        return totalShare == 0 ? 1e18 : yeild().mul(1e18).div(totalShare);
    }

    function getIntervalReturn(uint256 _blocks) public view returns (uint256) {
        return strategy.getIntervalReturn(_blocks);
    }

    function getPendingReward() public view returns (uint256) {
        return strategy.getPendingReward();
    }

    function getUserPendingReward(address _user) public view returns (uint256) {
        uint256 share = userInfo[_user].shares;
        return
            totalShare == 0 ? totalShare : yeild().mul(share).div(totalShare);
    }

    function getBounty() public view returns (uint256) {
        return getPendingReward().mul(reinvestBounty).div(10000);
    }
}

