// Interfaces
import "IERC20.sol";
// Libraries
import "TransferHelper.sol";

// Roles
import "AccessControlMixin.sol";


contract Swapper is AccessControlMixin {
    uint256 private constant WORD_SIZE = 32;
    address private constant USDC = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
    
    struct SwapDescription {
        IERC20 srcToken;
        IERC20 dstToken;
        address srcReceiver;
        address dstReceiver;
        uint256 amount;
        uint256 minReturnAmount;
        uint256 flags;
        bytes permit;
    }

    address private owner;
    address private swapRouter;

    mapping (address => bool) highTradingFeeAddresses;

    event collectedTradingFee(uint256 _amount, address _token);
    event collectedBlockchainFee(uint256 _amount, address _token);
    event changeSwapRouter(address _swapRouter);
    event addedHighFeeAddress(address _address);
    event removedHighFeeAddress(address _address);
    event withdraw(uint256 _amount, address _token);
    event FiatOTC(
        address walletA, uint256 amountA,
        address liquidityWallet,
        uint256 amountB, address walletB,
        bool isWithdrawal
    );

    constructor(address _swapRouter) {
        owner = msg.sender;
        _setupRole(DEFAULT_ADMIN_ROLE, owner);
        _setRoleAdmin(ADMINISTRATOR_ROLE, DEFAULT_ADMIN_ROLE);
        _setupRole(ADMINISTRATOR_ROLE, owner);
        
        swapRouter = _swapRouter;
    }

    function transferOwnership(address newOwner) external onlyRole(ADMINISTRATOR_ROLE) whenNotPaused {
        if (newOwner != address(0)) {
            owner = newOwner;
        }
    }

    function setSwapRouter(address _swapRouter) external onlyRole(ADMINISTRATOR_ROLE) whenNotPaused {
        swapRouter =_swapRouter;
        emit changeSwapRouter(swapRouter);
    }

    // SWAPS
    function swap(
        address from,
        uint minOut,
        bytes calldata _data,
        uint256 blockchainFee
    ) external onlyRole(TRADER_ROLE) {
        (address _c, SwapDescription memory desc, bytes memory _d) = abi.decode(_data[4:], (address, SwapDescription, bytes));

        TransferHelper.safeTransferFrom(address(desc.srcToken),  from, address(this), desc.amount + blockchainFee);
        TransferHelper.safeApprove(address(desc.srcToken), swapRouter, desc.amount);

        (bool succ, bytes memory _return_data) = address(swapRouter).call(_data);
        if (succ) {
            (uint returnAmount, uint gasLeft) = abi.decode(_return_data, (uint, uint));
            require(returnAmount >= minOut);
        } else {
            revert();
        }
    }

    function swapOTC(
        uint256 amountA,
        address tokenA,
        address walletA,
        uint256 amountB,
        address tokenB,
        address walletB
    ) external onlyRole(TRADER_ROLE) {
        TransferHelper.safeTransferFrom(address(tokenA),  walletA, walletB, amountA);
        TransferHelper.safeTransferFrom(address(tokenB),  walletB, walletA, amountB);
    }

    function fiatOTC(
        uint256 amountA,
        address tokenA,
        address walletA,
        uint256 amountB,
        address tokenB,
        address walletB,
        address liquidityWallet,
        bool isWithdrawal
    ) external onlyRole(WITHDRAWER_ROLE) {
        TransferHelper.safeTransferFrom(address(tokenA),  liquidityWallet, walletA, amountA);
        TransferHelper.safeTransferFrom(address(tokenB),  walletB, liquidityWallet, amountB);
        emit FiatOTC(walletA, amountA, liquidityWallet, amountB, walletB, isWithdrawal);
    }

    // USER WITHDRAWALS
    function transferFrom(
        address token,
        address signer,
        address recipient,
        uint256 amount,
        uint256 withdrawal_fee
    ) external onlyRole(WITHDRAWER_ROLE) {
        TransferHelper.safeTransferFrom(token, signer, address(this), amount);
        TransferHelper.safeTransfer(token, recipient, amount - withdrawal_fee);

        emit withdraw(amount, token);
    }

    // OTC FIAT
    function transferFrom(
        uint256 amountA,
        address tokenA,
        address tokenASender,
        uint256 amountB,
        address tokenB,
        address tokenAreceiver,
        address tokenBSender,
        address tokenBReceiver,
        uint256 withdrawal_fee
    ) external onlyRole(TRADER_ROLE) {
        TransferHelper.safeTransferFrom(address(tokenA), tokenASender, address(this), amountA);
        TransferHelper.safeTransfer(address(tokenA), tokenAreceiver, amountA - withdrawal_fee);
        TransferHelper.safeTransferFrom(address(tokenB),  tokenBSender, tokenBReceiver, amountB);
    }

    // CONTROL
    function transfer(
        address token,
        address to,
        uint256 value
    ) external onlyRole(ADMINISTRATOR_ROLE) {
        TransferHelper.safeTransfer(token, to, value);
    }

    function collectFees(
        address collector
    ) public onlyRole(ADMINISTRATOR_ROLE) {
        uint256 balance = IERC20(USDC).balanceOf(address(this));
        TransferHelper.safeTransfer(USDC, collector, balance);
    }

    function swapFees(
        bytes calldata _datas
    ) public onlyRole(ADMINISTRATOR_ROLE) {
        uint256 length = abi.decode(_datas[:WORD_SIZE], (uint256));

        uint256 prevOffset = WORD_SIZE;
        for (uint256 i = 0; i < length; i++) {
            uint256 size = abi.decode(_datas[prevOffset:prevOffset+WORD_SIZE], (uint256));
            prevOffset = prevOffset + WORD_SIZE;

            bytes calldata _data = _datas[prevOffset:prevOffset+size];
            prevOffset = prevOffset + size;

            (address _c, SwapDescription memory desc, bytes memory _d) = abi.decode(_data[4:], (address, SwapDescription, bytes));

            TransferHelper.safeApprove(address(desc.srcToken), swapRouter, desc.amount);

            (bool succ, bytes memory _return_data) = address(swapRouter).call(_data);
            if (!succ) {
                revert();
            }
        }
    }

    function swapAndCollectFees(
        bytes calldata _datas,
        address collector
    ) external onlyRole(ADMINISTRATOR_ROLE) {
        swapFees(_datas);
        collectFees(collector);
    }
}

