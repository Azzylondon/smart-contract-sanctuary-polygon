import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

contract ErraSwapper is Initializable, OwnableUpgradeable, UUPSUpgradeable {
    using SafeMath for uint256;

    uint256 internal minWETH;
    address public WETH;
    address public ERRA;
    address public dexTools;
    address public vault;

    uint256 public PremiumUserAmount;
    uint256 public PremiumUserFee;

    uint256 public fee;
    uint256 public constant feeDivision = 10000;
    
    IErraLibrary public ErraLibrary;

    function initialize() initializer public {
        __Ownable_init();
        __UUPSUpgradeable_init();
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        onlyOwner
        override
    {}

    receive() payable external {}
    
    modifier VerifiedUserOnly(address user) {
        require(msg.sender == dexTools || 
                msg.sender == vault ||
                msg.sender == address(0) ||
                msg.sender == user, "No Permission!"
                );
        _;
    }

    function settings(
        uint256 _fee,
        uint256 _PremiumUserFee,
        uint256 _PremiumUserAmount,
        uint256 _minWETH,
        address _ERRA,
        address _vault,
        IErraLibrary _ErraLibrary
    ) external virtual onlyOwner {

        require(_fee <= 100, "Fee to high, Max 100 (1%)!");
        require(_PremiumUserFee <= 70, "Fee to high, Max 70 (0.7%)!");
        fee = _fee;
        minWETH = _minWETH;
        PremiumUserFee = _PremiumUserFee;
        PremiumUserAmount = _PremiumUserAmount;
        ERRA = _ERRA;
        vault = _vault;
        ErraLibrary = _ErraLibrary;
        WETH = ErraLibrary.WETH();
        
    }

    function takeFee(uint256 amount) internal view returns (uint256) {
        uint256 user_Balance = IERC20(ERRA).balanceOf(msg.sender);
        if (user_Balance >= PremiumUserAmount){
            return amount.sub(amount.mul(PremiumUserFee).div(feeDivision));
        }
        return amount.sub(amount.mul(fee).div(feeDivision));
    }

     function calcSlippage(uint256 amount, uint256 Slip) public pure returns (uint256 amountAfterSlippage){
        amountAfterSlippage = amount.sub(amount.mul(Slip).div(100));
    }

    function _swap(address[] memory path, uint256[] memory dexPath, address _to) internal virtual {
        for (uint256 i; i < path.length - 1; i++) {
            (address token0,) = ErraLibrary.sortTokens(path[i], path[i + 1]);
            IPair pair = IPair(ErraLibrary.pairFor(dexPath[i], path[i], path[i + 1]));
            uint256 amountInput;
            uint256 amountOutput;
            { 
                (uint256 reserve0, uint256 reserve1,) = pair.getReserves();
                (uint256 reserveInput, uint256 reserveOutput) = path[i] == token0 ? (reserve0, reserve1) : (reserve1, reserve0);
                amountInput = IERC20(path[i]).balanceOf(address(pair)).sub(reserveInput);
                amountOutput = ErraLibrary.getAmountOut(dexPath[i], amountInput, reserveInput, reserveOutput);
            }
            (uint256 amount0Out, uint256 amount1Out) = path[i] == token0 ? (uint256(0), amountOutput) : (amountOutput, uint256(0));
            address to = i < path.length - 2 ? ErraLibrary.pairFor(dexPath[i+1], path[i + 1], path[i + 2]) : _to;
            pair.swap(amount0Out, amount1Out, to, new bytes(0));
        }
    }

    function fromETHtoToken(address token, uint256 Slippage, address user) public payable virtual VerifiedUserOnly(user) {
        (address[] memory path, uint[] memory dexPath) = ErraLibrary.fromETHtoTokenPath(token);
        uint256 amountIn = msg.value;
        IWETH(WETH).deposit{value: amountIn}();
        amountIn = takeFee(amountIn);
        uint256[] memory amountOutMin = ErraLibrary.getAmountsOut(calcSlippage(amountIn, Slippage), path, dexPath); 
        assert(IWETH(WETH).transfer(ErraLibrary.pairFor(dexPath[0], path[0], path[1]), amountIn));
        uint256 balanceBefore = IERC20(path[path.length - 1]).balanceOf(user);
        _swap(path, dexPath, user);

        require(
            IERC20(path[path.length - 1]).balanceOf(user).sub(balanceBefore) >= amountOutMin[amountOutMin.length - 1],
            'ERRA-Swapper: OUTPUT_AMOUNT_TO_LOW_CHECK_SLIPPAGE'
        );

        if (sholdBuyBack()){
            executeBuyBack();
        }

    }

    function fromTokentoETH(uint256 amountIn, address token, uint256 Slippage, address user) public virtual VerifiedUserOnly(user) returns (uint256 RealAmountOut) {
        uint256 amountBef = IERC20(WETH).balanceOf(address(this));
        if(token == WETH){
            TransferHelper.safeTransferFrom(WETH, user, address(this), amountIn);
            uint256 amountOut = takeFee(IERC20(WETH).balanceOf(address(this)).sub(amountBef));
            IWETH(WETH).withdraw(amountOut);
            TransferHelper.safeTransferETH(user, amountOut);
        }else{
            (address[] memory path, uint[] memory dexPath) = ErraLibrary.fromTokentoETHPath(token);
            uint256[] memory amountOutMin = ErraLibrary.getAmountsOut(calcSlippage(amountIn, Slippage), path, dexPath);
            require(path[path.length - 1] == WETH, 'ERRA-Swapper: INVALID_PATH');
            TransferHelper.safeTransferFrom(path[0], user, ErraLibrary.pairFor(dexPath[0], path[0], path[1]), amountIn);
            _swap(path, dexPath, address(this));
            RealAmountOut = takeFee(IERC20(WETH).balanceOf(address(this)).sub(amountBef));
            require(RealAmountOut >= amountOutMin[amountOutMin.length - 1], 'ERRA-Swapper: OUTPUT_AMOUNT_TO_LOW_CHECK_SLIPPAGE');

            IWETH(WETH).withdraw(RealAmountOut);
            TransferHelper.safeTransferETH(user, RealAmountOut);
        }

        if (sholdBuyBack()){
            executeBuyBack();
        }
    }

    function fromTokentoToken(uint256 amountIn, address tokenIn, address tokenOut, uint256 Slippage, address user) public virtual VerifiedUserOnly(user) returns (uint256 RealAmountOut){
        (address[] memory path, uint[] memory dexPath) = ErraLibrary.fromTokentoTokenPath(tokenIn, tokenOut);
        uint256[] memory amountOutMin = ErraLibrary.getAmountsOut(calcSlippage(amountIn, Slippage), path, dexPath);
        TransferHelper.safeTransferFrom(path[0], user, ErraLibrary.pairFor(dexPath[0], path[0], path[1]), amountIn);
        uint256 balanceBefore = IERC20(path[path.length - 1]).balanceOf(user);
        uint256 balanceBeforeThis = IERC20(path[path.length - 1]).balanceOf(address(this));
        _swap(path, dexPath, address(this));
        uint256 amountOut = takeFee(IERC20(path[path.length - 1]).balanceOf(address(this)).sub(balanceBeforeThis));
        IERC20(path[path.length - 1]).transfer(user, amountOut);
        RealAmountOut = IERC20(path[path.length - 1]).balanceOf(user).sub(balanceBefore);
        require(
             RealAmountOut >= amountOutMin[amountOutMin.length - 1],
            'ERRA-Swapper: OUTPUT_AMOUNT_TO_LOW_CHECK_SLIPPAGE'
        );
        if (sholdBuyBack()){
            executeBuyBack();
        }
    }

    function executeBuyBack() internal virtual {
        uint256 bWETH = IERC20(WETH).balanceOf(address(this));
        if (bWETH != 0){
            IWETH(WETH).withdraw(bWETH);
            TransferHelper.safeTransferETH(owner(), address(this).balance);
        }
        address[] memory baseTokens = ErraLibrary.getBaseTokens();
        for (uint32 i = 0; i < baseTokens.length; i++) {
            uint256 balance = IERC20(baseTokens[i]).balanceOf(address(this));
            if (balance != 0){
                IERC20(baseTokens[i]).transfer(owner(), balance);
            }
        }
    }

    function rescueToken(address Token) external onlyOwner {
        uint256 balance = IERC20(Token).balanceOf(address(this));
        IERC20(Token).transfer(msg.sender, balance);
    }

    function rescueWithdraw() public onlyOwner {
        uint256 bWETH = IERC20(WETH).balanceOf(address(this));
        if (bWETH != 0){
            IWETH(WETH).withdraw(bWETH);
            TransferHelper.safeTransferETH(msg.sender, address(this).balance);
        }
        address[] memory baseTokens = ErraLibrary.getBaseTokens();
        for (uint32 i = 0; i < baseTokens.length; i++) {
            uint256 balance = IERC20(baseTokens[i]).balanceOf(address(this));
            if (balance != 0){
                IERC20(baseTokens[i]).transfer(msg.sender, balance);
            }
        }
    }

    function sholdBuyBack() internal view returns (bool) {
        return IERC20(WETH).balanceOf(address(this)) >= minWETH;
    }

}

