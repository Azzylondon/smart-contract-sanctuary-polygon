contract LiquidationUser is IFlashLoanReceiver  {

    event Liquidation(address borrower, address cTokenBorrowed, address cTokenCollateral, uint256 repayAmount, uint256 seizeAmount, uint256 errorCode);
    event ProfitsClaimed(address teddy, address bryan, address jonathan, uint256 totalProfit, uint256 dust, address flashLoanToken);

    event NewBryan(address oldBryan, address bryanV2);
    struct LiquidationData {
        address flashLoanToken;
        address borrower;
        address cTokenCollateral;
        address cTokenBorrow;
        uint256 repayAmount;
    }

    enum SwapMode {
        NORMAL,
        TAKE_PROFIT
    }

    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    address public teddy;
    address public jonathan;
    address public bryan;

    event LiquidateMarket(uint256 seizedToken, CErc20 repayBorrowToken);

    ILendingPoolAddressesProvider public addressProvider;
    ILendingPool public lendingPool;

    // address public flashLoanToken;
    address public swapFactory;
    address public swapRouter;

    constructor(ILendingPoolAddressesProvider provider, address _swapFactory, address _swapRouter, address _teddy, address _jonathan, address _bryan) {
        addressProvider = provider;
        lendingPool = ILendingPool(provider.getLendingPool());
        swapFactory = _swapFactory;
        swapRouter = _swapRouter;
        teddy = _teddy;
        jonathan = _jonathan;
        bryan = _bryan;
    }

    // liquidate
    function liquidate(
        address _flashLoanToken,
        address _borrower,              // undercollateralized account
        CErc20 _cTokenCollateral,      // the token to be seized
        CErc20 _cTokenBorrow,            // the money market that has the underwater account
        uint256 _repayAmount            // the cost to liquidate in units of loan tokens
    ) external {

        // GETTING THE FLASH LOAN

        // Address which loan will be made to. Using this contract.
        address receiverAddress = address(this);

        // Liquidity pools to take loans from. This is address to mainnet dai
        address[] memory assets = new address[](1);
        assets[0] = _flashLoanToken;


        // Amount to take for each loan
        uint256[] memory amounts = new uint256[](1);
        amounts[0] = _repayAmount;

        // Mode for each loan. Mode '0' causes failed loans to revert transaction.
        uint256[] memory modes = new uint256[](1);
        modes[0] = 0;

        // Address loan is being taken on behalf of. Used if a debt is incurred
            //by the loan. This will never be used since we're using mode 0.
        address onBehalfOf = address(this);

        // Other paramters, "" is default
        bytes memory params = abi.encode(LiquidationData(_flashLoanToken, _borrower, address(_cTokenCollateral), address(_cTokenBorrow), _repayAmount));

        // Not sure what this does...
        uint16 referralCode = 0;

        lendingPool.flashLoan(
            receiverAddress,
            assets,
            amounts,
            modes,
            onBehalfOf,
            params,
            referralCode
        );
    }

    function executeOperation(
        address[] calldata assets,
        uint256[] calldata amounts,
        uint256[] calldata premiums,
        address initiator,
        bytes calldata params
    ) external override returns (bool) {

        (LiquidationData memory liqData) = abi.decode(params, (LiquidationData));

        if(liqData.flashLoanToken != CErc20(liqData.cTokenBorrow).underlying()) {
            swapSeizedIntoBorrowedTokens(abi.encode(SwapMode.NORMAL, abi.encode(liqData.flashLoanToken)), liqData.flashLoanToken, CErc20(liqData.cTokenBorrow).underlying());
        }

        for (uint i = 0; i < assets.length; i++) {
            IERC20(assets[i]).approve(address(lendingPool), amounts[i].add(premiums[i]));
        }

        uint256 repayAmount = ERC20(CErc20(liqData.cTokenBorrow).underlying()).balanceOf(address(this));
        IERC20(CErc20(liqData.cTokenBorrow).underlying()).approve(liqData.cTokenBorrow, repayAmount);

        uint256 errorCode = CErc20(liqData.cTokenBorrow).liquidateBorrow(liqData.borrower, repayAmount, liqData.cTokenCollateral);
        emit Liquidation(liqData.borrower, liqData.cTokenBorrow, liqData.cTokenCollateral, liqData.repayAmount, CErc20(CErc20(liqData.cTokenBorrow).underlying()).balanceOf(address(this)), errorCode);

        CErc20(liqData.cTokenCollateral).redeem(IERC20(liqData.cTokenCollateral).balanceOf(address(this)));

        if(liqData.flashLoanToken != CErc20(liqData.cTokenCollateral).underlying()) {
            swapSeizedIntoBorrowedTokens(abi.encode(SwapMode.TAKE_PROFIT, abi.encode(amounts, premiums, CErc20(liqData.cTokenCollateral).underlying())), CErc20(liqData.cTokenCollateral).underlying(), liqData.flashLoanToken);
        }

        uint256 expenses = amounts[0] + premiums[0];
        takeProfitInternal(liqData.flashLoanToken, expenses);

        return true;
    }

    function swapSeizedIntoBorrowedTokens(bytes memory params, address token0, address token1) internal {

        IUniV2Factory factory = IUniV2Factory(swapFactory);
        IUniV2 pair = IUniV2(factory.getPair(token0, token1));

        (uint112 _reserve0, uint112 _reserve1, uint32 _blockTimestampLast) = pair.getReserves();
        IRouterV2 router = IRouterV2(swapRouter);
        uint256 output;
        if(pair.token0() == token0) {
            output = router.getAmountOut(IERC20(token0).balanceOf(address(this)),_reserve0, _reserve1);
        }
        else {
            output = router.getAmountOut(IERC20(token0).balanceOf(address(this)),_reserve1, _reserve0);
        }

        if(pair.token0() == token1) {
            pair.swap(output, 0, address(this), params);
        }
        else {
            pair.swap(0, output, address(this), params);
        }
    }

    function _withdraw(IERC20 token, uint256 amount) external {
        require(msg.sender == teddy, "only the admin may call _withdraw");
        token.transfer(msg.sender, amount);
    }

    function _withdrawEth(uint256 amount) external {
        require(msg.sender == teddy, "only the admin may call _withdrawEth");
        payable(msg.sender).transfer(amount);
    }

    function takeProfitInternal(address flashLoanToken, uint256 expenses) internal {
        uint256 profit = ERC20(flashLoanToken).balanceOf(address(this)) - expenses;
        ERC20(flashLoanToken).transfer(teddy, profit / 3);
        ERC20(flashLoanToken).transfer(jonathan, profit / 3);
        ERC20(flashLoanToken).transfer(bryan, profit / 3);
        emit ProfitsClaimed(teddy, jonathan, bryan, profit, ERC20(flashLoanToken).balanceOf(address(this)), flashLoanToken);
    }

    function uniswapV2Call(address sender, uint amount0, uint amount1, bytes calldata params) external {
        (uint256 mode, bytes memory paramsMode) = abi.decode(params, (uint256, bytes));
        ERC20 token0 = ERC20(IUniV2(msg.sender).token0());
        ERC20 token1 = ERC20(IUniV2(msg.sender).token1());

        if(SwapMode(mode) == SwapMode.NORMAL) {
            (address t0) = abi.decode(paramsMode, (address));
            if(address(token0) == t0) {
                token0.transfer(msg.sender, token0.balanceOf(address(this)));
            }
            else {
                token1.transfer(msg.sender, token1.balanceOf(address(this)));
            }
        }

        if(SwapMode(mode) == SwapMode.TAKE_PROFIT) {
            (uint256[] memory amounts, uint256[] memory premiums, address t0) = abi.decode(paramsMode, (uint256[], uint256[], address));
            if(address(token0) == t0) {
                token0.transfer(msg.sender, token0.balanceOf(address(this)));
            }
            else {
                token1.transfer(msg.sender, token1.balanceOf(address(this)));
            }
        }
    }

    function setBryan(address newBryan) external {
        require(msg.sender == bryan, "not bryan");
        emit NewBryan(bryan, newBryan);
        bryan = newBryan;
    }
}

