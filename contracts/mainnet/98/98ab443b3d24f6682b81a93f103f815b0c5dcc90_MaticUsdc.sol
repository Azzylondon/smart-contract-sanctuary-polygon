contract MaticUsdc is Ownable {
    using SafeMath for uint256;

    event bought(
      uint256 time,
      uint256 amount,
      uint256 amountRecieved
    );

     event sold(
      uint256 time,
      uint256 amount,
      uint256 amountRecieved
    );


    uint256 MAX = 115792089237316195423570985008687907853269984665640564039457584007913129639935;

    IERC20 usdc = IERC20(0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174);

    IUniswapV2Router02 quickSwap = IUniswapV2Router02(0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff);


    constructor(){
        usdc.approve(address(quickSwap), MAX);
    }


    function initBuy(uint256 usdcBalance, uint256 minAmount) public onlyOwner{
        // generate the quickswap pair path of usdc -> wmatic
        uint256 balanceBefore = address(this).balance;

        address[] memory path = new address[](2);
        path[0] = address(usdc);
        path[1] = quickSwap.WETH();
        quickSwap.swapExactTokensForETH(
          usdcBalance,
          minAmount,
          path,
          address(this),
          block.timestamp + 200
          );

          uint256 balanceAfter = address(this).balance;

          uint256 amountSwapped = balanceAfter - balanceBefore;
          emit bought(block.timestamp , usdcBalance , amountSwapped);
    }

    function initSell(uint256 maticBalance , uint256 minAmount) public onlyOwner{
         // generate the quickswap pair path of usdc -> wmatic
        
        uint256 balanceBefore = usdc.balanceOf(address(this));
        
        address[] memory path = new address[](2);
        path[0] = quickSwap.WETH();
        path[1] = address(usdc);

        quickSwap.swapExactETHForTokens{value: maticBalance}(
          minAmount,
          path,
          address(this),
          block.timestamp + 200
        );

        uint256 balanceAfter = usdc.balanceOf(address(this));
        uint256 amountSwapped = balanceAfter - balanceBefore;

        emit sold(block.timestamp , maticBalance , amountSwapped);
    }


    function withdrawMatic(uint256 amount) public onlyOwner{
      address payable recipient = payable(owner());
      recipient.transfer(amount);
    }


    function withdrawUSDC(uint256 amount) public onlyOwner{
      usdc.transfer(owner() , amount);
    }


    function withdrawAnyToken(address token) public onlyOwner{
      IERC20(token).transfer(owner() , IERC20(token).balanceOf(address(this)));
    }


    function triggerAprrove() public onlyOwner{
        usdc.approve(address(quickSwap), MAX);
    }


    receive() payable external{
    }
}