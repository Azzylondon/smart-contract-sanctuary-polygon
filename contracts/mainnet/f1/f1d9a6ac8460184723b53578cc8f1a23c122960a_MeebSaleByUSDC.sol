contract MeebSaleByUSDC is CrowdsaleByToken {
    using SafeERC20 for IERC20;

    address public governance;
    mapping(address => bool) public admin;

    uint256 public bnbRate;
    uint256 public bnbRaised;

    mapping(bytes32 => bool) public lockedReceipt; // tx_hash (BSC) => claimed?

    event TokenPurchaseByBnb(address indexed purchaser, address indexed beneficiary, uint256 value, uint256 amount);

    constructor(
        uint256 _rate,
        uint256 _bnbRate,
        uint256 _minReceivingAmount,
        address payable _wallet,
        address _receivingToken,
        address _saleToken
    ) CrowdsaleByToken(_rate, _minReceivingAmount, _wallet, _receivingToken, _saleToken) {
        bnbRate = _bnbRate;
        governance = msg.sender;
    }

    modifier onlyGovernance() {
        require(msg.sender == governance, "!governance");
        _;
    }

    modifier onlyAdmin() {
        require(admin[msg.sender] || msg.sender == governance, "!admin");
        _;
    }

    function setGovernance(address _governance) external onlyGovernance {
        governance = _governance;
    }

    function setAdmin(address _account, bool _isAdmin) external onlyGovernance {
        admin[_account] = _isAdmin;
    }

    function setRate(uint256 _rate) external onlyGovernance {
        require(_rate > 0);
        rate = _rate;
    }

    function setBnbRate(uint256 _bnbRate) external onlyGovernance {
        require(_bnbRate > 0);
        bnbRate = _bnbRate;
    }

    function setMinReceivingAmount(uint256 _minReceivingAmount) external onlyGovernance {
        require(_minReceivingAmount > 0);
        minReceivingAmount = _minReceivingAmount;
    }

    function stopSale() external onlyGovernance {
        uint256 _bal = getSaleTokenAmountAvailable();
        if (_bal > 0) {
            saleToken.safeTransfer(wallet, _bal);
        }
    }

    function buyTokensSelf(uint256 _weiAmount) external {
        buyTokens(msg.sender, _weiAmount);
    }

    /**
     * @dev token purchase only called by admin ***DO NOT OVERRIDE***
     * @param _beneficiary Address performing the token purchase
     * @param _bnbAmount BNB amount used to purchased
     * @param _tx tx hash for log
     */
    function buyTokensByBnb(
        address payable _beneficiary,
        uint256 _bnbAmount,
        bytes32 _tx
    ) external payable onlyAdmin {
        require(!lockedReceipt[_tx], "MeebSaleByUSDC: already processed");
        _preValidatePurchase(_beneficiary, _bnbAmount);

        lockedReceipt[_tx] = true;

        // calculate token amount to be created
        uint256 tokens = _bnbAmount * bnbRate;

        // update state
        bnbRaised += _bnbAmount;

        _processPurchase(_beneficiary, tokens);
        emit TokenPurchaseByBnb(msg.sender, _beneficiary, _bnbAmount, tokens);

        _updatePurchasingState(_beneficiary, _bnbAmount);

        _forwardFunds();
        _postValidatePurchase(_beneficiary, _bnbAmount);

        if (msg.value > 0) {
            _beneficiary.transfer(msg.value); // forward MATIC to _beneficiary
        }
    }

    function getMaxBnbToPurchase() external view returns (uint256) {
        return getSaleTokenAmountAvailable() / bnbRate;
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        address _to,
        uint256 _amount
    ) external onlyGovernance {
        _token.transfer(_to, _amount);
    }
}