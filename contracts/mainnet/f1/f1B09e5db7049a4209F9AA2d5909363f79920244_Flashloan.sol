contract Flashloan is FlashLoanReceiverBase {
    enum Swap { UNISWAP, SUSHISWAP }

    using SafeMath for uint256;

    ISwapRouter public immutable uniswapRouter;
    IUniswapV2Router02 public immutable sushiswapRouter;
    address public owner;

    event SwapHappened(address tokenIn, address tokenOut, Swap firstSwap);
    event FlashLoanCompleted(address asset, uint256 profit);

    constructor(IPoolAddressesProvider _addressProvider, ISwapRouter _uniswapRouter, IUniswapV2Router02 _sushiswapRouter) FlashLoanReceiverBase(_addressProvider) {
        uniswapRouter = _uniswapRouter;
        sushiswapRouter = _sushiswapRouter;
        owner = msg.sender;
    }

    /**
        This function is called after your contract has received the flash loaned amount
     */
    function executeOperation(
        address[] calldata assets,
        uint256[] calldata amounts,
        uint256[] calldata premiums,
        address _initiator,
        bytes calldata params
    ) external override returns (bool)
    {
        uint256 amount = amounts[0];
        address asset = assets[0];
        uint256 premium = premiums[0];
        require(amount <= IERC20(asset).balanceOf(address(this)), "Invalid balance, was the flashLoan successful?");

        _execute(amount, params);

        uint totalDebt = amount.add(premium);
        uint256 balance = IERC20(asset).balanceOf(address(this));
        require(balance > totalDebt, "COULD NOT PROFIT :((");
        uint256 profit = balance - totalDebt;
        TransferHelper.safeTransfer(asset, owner, profit);
        emit FlashLoanCompleted(asset, profit);
        return true;
    }

    /**
        Flash loan 1000000000000000000 wei (1 ether) worth of `_asset`
     */
    function flashloan(
        address _uniswapPool,
         address[] memory _tokenIn,
        address[] memory _tokenOut,
        uint256[] memory _flashAmount,
        Swap _firstSwap
    ) public {
        require(msg.sender == owner, "You're not the owner WTF :(");
        bytes memory data = abi.encode(_uniswapPool, _flashAmount[0], _tokenIn[0], _tokenOut[0], _firstSwap);

        IPool lendingPool = IPool(ADDRESSES_PROVIDER.getPool());
        uint256[] memory zero = new uint256[](1);
        zero[0] = 0;
        lendingPool.flashLoan(address(this), _tokenIn, _flashAmount, zero, owner, data, 0);
    }

    function _execute(uint256 _amount, bytes calldata _params) internal {
        (address _uniswapPool, uint _flashAmount, address tokenIn, address tokenOut,  Swap _firstSwap) = abi.decode(_params, (address, uint, address,  address, Swap));
        require(_flashAmount == _amount, 'Requested flashloan not equal to what we got');

        uint24 uniswapPoolFee = IUniswapV3Pool(_uniswapPool).fee();

        if (_firstSwap == Swap.UNISWAP) {
            uint256 _amountOut = uniswapSwap(_amount, tokenIn, tokenOut, uniswapPoolFee);
            sushiswapSwap(_amountOut, tokenOut, tokenIn);
            emit SwapHappened(tokenIn, tokenOut, _firstSwap);
        } else {
           uint256 _amountOut=  sushiswapSwap(_amount, tokenIn, tokenOut);
           uniswapSwap(_amountOut, tokenOut, tokenIn, uniswapPoolFee);
            emit SwapHappened(tokenOut, tokenIn, _firstSwap);
        }
    }

    /// @notice swapExactInputSingle swaps a fixed amount of DAI for a maximum possible amount of WETH9
    /// using the DAI/WETH9 0.3% pool by calling `exactInputSingle` in the swap router.
    /// @dev The calling address must approve this contract to spend at least `amountIn` worth of its DAI for this function to succeed.
    /// @param amountIn The exact amount of DAI that will be swapped for WETH9.
    /// @return amountOut The amount of WETH9 received.
    function uniswapSwap(uint256 amountIn, address inAsset, address outAsset, uint24 poolFee) internal returns (uint256 amountOut) {
        TransferHelper.safeApprove(inAsset, address(uniswapRouter), amountIn);
                // Naively set amountOutMinimum to 0. In production, use an oracle or other data source to choose a safer value for amountOutMinimum.
        // We also set the sqrtPriceLimitx96 to be 0 to ensure we swap our exact input amount.
        ISwapRouter.ExactInputSingleParams memory params =
            ISwapRouter.ExactInputSingleParams({
                tokenIn: inAsset,
                tokenOut: outAsset,
                fee: poolFee,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: amountIn,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });

        // The call to `exactInputSingle` executes the swap.
        amountOut = uniswapRouter.exactInputSingle(params);
    }

    function sushiswapSwap(uint256 amountIn, address inAsset, address outAsset) internal returns (uint256 amountOut) {
        TransferHelper.safeApprove(inAsset, address(sushiswapRouter), amountIn);

        address[] memory path = new address[](2);
        path[0] = inAsset;
        path[1] = outAsset;

        amountOut = sushiswapRouter.swapExactTokensForTokens(amountIn, sushiswapGetAmountsOut(amountIn, path)[0], path, address(this), block.timestamp)[0];
    }

    function sushiswapGetAmountsOut(uint tokenAmount, address[] memory path) internal view returns (uint[] memory) {
        return sushiswapRouter.getAmountsOut(tokenAmount, path);
    }
}

