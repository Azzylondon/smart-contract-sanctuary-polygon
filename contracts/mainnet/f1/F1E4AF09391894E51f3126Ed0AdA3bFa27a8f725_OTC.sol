contract OTC is Ownable, ReentrancyGuard {
  using SafeERC20 for IERC20;
  using ECDSA for bytes32;
  IERC20 nxtt = IERC20(0x0d0B8488222F7f83B23E365320a4021b12eAD608); 
  IUniswapV3Pool pool = IUniswapV3Pool(0x9f32237AE1A240DfF3bE9458606B246ee2b199C4);
  IUniswapV3PoolState poolState = IUniswapV3PoolState(0x9f32237AE1A240DfF3bE9458606B246ee2b199C4);
  AggregatorV3Interface maticFeed = AggregatorV3Interface(0xAB594600376Ec9fD91F8e885dADF0CE036862dE0);
  uint256 flashGuard;
  uint256 public otcStart;
  uint256 public otcEnd;

  enum KYCStatus { UNSPECIFIED, STARTED, FAILED, DONE }

  struct OTCWallet {
    uint8 tier;
    uint256 tokenAmount;
    uint256 purchasePrice;
    uint256 purchaseDate;
    uint256 unlockDate;
    KYCStatus kyc;
  }

  address public kycSigner;
  mapping (address => OTCWallet) public buyers;

  constructor(address _kycSigner) {
    flashGuard = block.timestamp;
    kycSigner = _kycSigner;
  }

  function openOTC() public onlyOwner {
    require(otcStart == 0 && otcEnd == 0, "sale already started");
    otcStart = block.timestamp;
  }

  function endOTC() public onlyOwner {
    require(otcStart > 0 && otcStart < block.timestamp && otcEnd == 0, "sale not started yet");
    otcEnd = block.timestamp;
  }

  event OTCPurchase(address buyer, uint256 amount, uint256 maticPrice, uint256 usdValue);
  function buyOTC(bytes calldata sig) public payable nonReentrant returns (uint256) {
    require(otcStart > 0 && otcStart < block.timestamp, "OTC sale not started");
    require(otcEnd == 0, "OTC sale ended");
    // we don't let critical functionality to trigger multiple times whithin blocks
    require(flashGuard < block.timestamp, "FLP: try again");
    bytes32 hash = keccak256(abi.encodePacked("KYC", msg.sender, "STARTED"));
    require(_verify(hash, sig, kycSigner), "invalid signature");
    require(buyers[msg.sender].tier == 0 || buyers[msg.sender].purchaseDate == 0, "cannot participate more than once");
    uint256 maticUSD = getMaticUSD();
    uint256 usdValue = msg.value * maticUSD / 1e18 / 1e8;
    require(usdValue >= 20000, "minimum OTC buyin is $20.000");
    uint8 tier = 0;
    if (usdValue >= 20000 && usdValue < 50000) {
      tier = 1;
    } else if (usdValue >= 50000 && usdValue < 100000) {
      tier = 2;
    } else {
      tier = 3; 
    }
    buyers[msg.sender] = OTCWallet(tier, msg.value, maticUSD, block.timestamp, 0, KYCStatus.STARTED);
    uint256 usdSent = maticUSD * msg.value / 1e18 / 1e8;
    flashGuard = block.timestamp;
    emit OTCPurchase(msg.sender, msg.value, maticUSD, usdValue);
    return usdSent;
  }

  event OTCCashOut(address buyer, uint256 amount, uint256 usdValue);
  function cashOut(bytes calldata sig) public nonReentrant returns (uint256) {
    require(otcEnd < block.timestamp && otcEnd > 0, "OTC sale not ended");
    require(buyers[msg.sender].tier > 0, "invalid buyer address");
    require(buyers[msg.sender].unlockDate == 0, "user already redeemed tokens");
    bytes32 hash = keccak256(abi.encodePacked("KYC", msg.sender, "DONE"));
    require((sig.length == 0 && buyers[msg.sender].kyc == KYCStatus.DONE) ||
            (sig.length > 0 && _verify(hash, sig, kycSigner)), "invalid signature or failed KYC");
    // we don't let critical functionality to trigger multiple times whithin blocks
    require(flashGuard < block.timestamp, "FLP: try again");

    // ... and apply some bonus after 1 year
    uint256 nxttToSend = 0;
    uint256 usdValue = 0;
    uint256 nxttUSD = getNXTTUSD();
    // -30% penalty between 0-6 months
    if(block.timestamp < otcEnd + 183 days) {
      nxttToSend = buyers[msg.sender].tokenAmount * 700 / 1000;
    }
    // -20% penalty between 6-12 months 
    else if (block.timestamp > otcEnd + 183 days && 
               block.timestamp < otcEnd + 365 days) {
      nxttToSend = buyers[msg.sender].tokenAmount * 800 / 1000;
    }
    // guaranteed profit after 12 months
    else {
      uint256 usdSent = buyers[msg.sender].purchasePrice * buyers[msg.sender].tokenAmount / 1e18 / 1e8;
      // we guarantee to give back at least the USD sent
      uint256 usdTarget = usdSent;
      if(buyers[msg.sender].tier == 1) {
        usdTarget = usdTarget * 105 / 100; // 5% profit
      } else if (buyers[msg.sender].tier == 2) {
        usdTarget = usdTarget * 1075 / 1000; // 7.5% profit
      } else if (buyers[msg.sender].tier == 3) {
        usdTarget = usdTarget * 11 / 10; // 10% profit
      } else {
        revert("invalid tier");
      }
      nxttToSend = usdTarget * 1e8 / nxttUSD * 1e18;
    }
    flashGuard = block.timestamp;
    buyers[msg.sender].unlockDate = block.timestamp;
    usdValue = nxttToSend * nxttUSD / 1e18 / 1e8;
    nxtt.safeTransfer(msg.sender, nxttToSend);
    emit OTCCashOut(msg.sender, nxttToSend, usdValue);
    return nxttToSend;
  }

  function setKYCSigner(address _kycSigner) public onlyOwner {
    kycSigner = _kycSigner;
  }

  function setKYCStatus(address addr, KYCStatus status) public onlyOwner {
    require(buyers[addr].tier > 0, 'invalid buyer');
    require(buyers[addr].kyc == KYCStatus.UNSPECIFIED ||
            buyers[addr].kyc == KYCStatus.STARTED, 'cannot modify KYC status');
    buyers[addr].kyc = status;
  }
  
  function getKYCStatus() public returns (KYCStatus) {
    return buyers[msg.sender].kyc;
  }

  function getMaticUSD() private view returns (uint256) {
    (
      /*uint80 roundID*/,
      int price,
      /*uint startedAt*/,
      /*uint timeStamp*/,
      /*uint80 answeredInRound*/
    ) = maticFeed.latestRoundData();
    return SafeCast.toUint256(price);
  }

  function getNXTTMATIC() public view returns (uint256) {
    (
      uint160 sqrtPriceX96, 
      /*int24 tick*/, 
      /*uint16 observationIndex*/, 
      /*uint16 observationCardinality*/, 
      /*uint16 observationCardinalityNext*/, 
      /*uint8 feeProtocol*/, 
      /*bool unlocked*/
    ) = poolState.slot0();
    uint256 ratioX192 = uint256(sqrtPriceX96) * uint256(sqrtPriceX96);
    uint256 price = (ratioX192 * 1e18) >> uint256(96 * 2);
    return price;
  }

  function getNXTTUSD() public view returns (uint256) {
    return getNXTTMATIC() * getMaticUSD() / 1e18;
  }
  
  function _verify(bytes32 data, bytes memory signature, address account) internal pure returns (bool) {
    return data
    .toEthSignedMessageHash()
    .recover(signature) == account;
  }

  function withdrawMatic() public onlyOwner {
    require(block.timestamp > otcEnd, "otc sale not ended");
    uint256 maticBalance = address(this).balance;
    (bool success,) = msg.sender.call{value: maticBalance}("");
    require(success, "transfer failed");
  }

  function withdrawStuckNXTT() public onlyOwner {
    require(block.timestamp > otcEnd + 365 days + 30 days, "buyers are still vesting");
    uint256 nxttBalance = nxtt.balanceOf(address(this));
    nxtt.safeTransfer(msg.sender, nxttBalance);
  }
}

