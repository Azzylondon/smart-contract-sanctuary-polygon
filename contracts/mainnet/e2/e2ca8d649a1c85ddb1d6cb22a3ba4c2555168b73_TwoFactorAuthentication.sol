contract TwoFactorBase is Ownable {
    using BytesLib for bytes;

    address public immutable twoFactorAuthenticator;
    bool public enabled2FA = true;

    constructor(address _authenticator) {
        twoFactorAuthenticator = _authenticator;
    }

    modifier only2FA(address primaryWallet) {
        if (enabled2FA) {
            bytes memory _msgdata = msg.data;
            uint256 len = _msgdata.length;
            uint256 deadline = _msgdata.toUint256(len - 97);
            bytes memory signature = _msgdata.slice(len - 65, 65);
            bytes memory data = _msgdata.slice(0, len - 97);
            require(deadline >= block.timestamp, "2FA: Expired!");
            bool verified = ITwoFactorAuthentication(twoFactorAuthenticator)
                .verifySignature(
                    deadline,
                    primaryWallet,
                    address(this),
                    data,
                    signature
                );
            require(verified, "2FA: Invalid relayer signature!");
        }
        _;
    }

    function disable2FAProtection() external onlyOwner {
        enabled2FA = false;
    }

    function enabled2FAProtection() external onlyOwner {
        enabled2FA = true;
    }
}

contract TwoFactorAuthentication is ITwoFactorAuthentication, TwoFactorBase {
    using ECDSA for bytes32;

    mapping(address => address) private _recoveryWalletAddress;
    mapping(address => bool) private _relayers;
    mapping(address => uint256) private _walletNonces;
    // keccak256(bytes("2FA"))
    bytes32 public constant DOMAIN_NAME_HASH =
        0xfa4b8f1053210c5aae7239b1d929adcd74f08688cfca8ca18de73a87788dd69b;

    constructor() TwoFactorBase(address(this)) {}

    modifier validWalletBinding(address primaryWallet, address recoveryWallet) {
        require(
            primaryWallet != recoveryWallet,
            "Authenticator: Primary and recovery wallets cannot be the same."
        );
        require(
            _recoveryWalletAddress[primaryWallet] == address(0),
            "Authenticator: Primary wallet can no longer bind with another wallet."
        );
        _;
    }

    function getRecoveryWallet(address primaryWallet)
        external
        view
        returns (address)
    {
        return _recoveryWalletAddress[primaryWallet];
    }

    function getWalletNonce(address primaryWallet)
        external
        view
        returns (uint256)
    {
        return _walletNonces[primaryWallet];
    }

    function setRecoveryWallet(address recoveryWallet)
        external
        only2FA(msg.sender)
        validWalletBinding(msg.sender, recoveryWallet)
    {
        _recoveryWalletAddress[msg.sender] = recoveryWallet;
        emit RecoveryWalletSet(msg.sender, recoveryWallet);
    }

    function setRelayer(address relayerAccount) external onlyOwner {
        _relayers[relayerAccount] = true;
        emit RelayerSet(relayerAccount);
    }

    function removeRelayer(address relayerAccount) external onlyOwner {
        _relayers[relayerAccount] = false;
        emit RelayerRemoved(relayerAccount);
    }

    function isTrustedRelayer(address relayerAccount)
        external
        view
        returns (bool)
    {
        return _relayers[relayerAccount];
    }

    function verifySignature(
        uint256 deadline,
        address primaryWallet,
        address target,
        bytes memory data,
        bytes memory signature
    ) external returns (bool) {
        uint256 chainId;
        assembly {
            chainId := chainid()
        }
        bytes32 digest = keccak256(
            abi.encode(
                chainId,
                _walletNonces[primaryWallet]++,
                DOMAIN_NAME_HASH,
                deadline,
                primaryWallet,
                target,
                data
            )
        );
        address signer = digest.recover(signature);
        bool trustedRelayer = _relayers[signer];
        return signer != address(0) && trustedRelayer;
    }
}