import "./interfaces/IAuthorities.sol";
import "./interfaces/IGnosisSafeL2.sol";

contract TrustedTxModifier is Modifier {
    event Ejected(address newOwner);
    event SigningAuthorityChanged(address _signingAuthority);
    event EjectingAuthorityChanged(address _ejectingAuthority);

    modifier onlySafeOwner() {
        require(OwnerManager(avatar).isOwner(_msgSender()), "Not safe owner");
        _;
    }

    modifier onlySigningAuthority() {
        require(
            IAuthorities(authorities).isSigningAuthority(msg.sender),
            "Not signing authority"
        );
        _;
    }

    modifier unpaused() {
        require(
            !paused,
            "TrustedTxModifier: Executing transactions is paused."
        );
        _;
    }

    /// @param _avatar Address of the avatar (e.g. a Gnosis Safe)
    /// @param _target Address of the contract that will call exec function
    /// @param _authorities Address of the contract that will manage authorizing addresses
    constructor(
        GnosisSafeProxy _avatar,
        GnosisSafeProxy _target,
        IAuthorities _authorities
    ) {
        bytes memory initParams = abi.encode(_avatar, _target, _authorities);
        setUp(initParams);
        paused = false;
        authorities = _authorities;
    }

    IAuthorities public authorities;
    bool public paused;
    uint256 public nonce;

    bytes4 private constant MAGIC_VALUE =
        bytes4(keccak256("isValidSignature(bytes32,bytes)"));

    function pause() external onlySigningAuthority {
        paused = true;
    }

    function unpause() external onlySigningAuthority {
        paused = false;
    }

    function setUp(bytes memory initParams) public override {
        (
            GnosisSafeProxy _avatar,
            GnosisSafeProxy _target,
            IAuthorities _authorities
        ) = abi.decode(
                initParams,
                (GnosisSafeProxy, GnosisSafeProxy, IAuthorities)
            );

        require(
            address(_avatar) != address(0),
            "Avatar can not be zero address"
        );
        require(
            address(_target) != address(0),
            "Target can not be zero address"
        );
        require(
            address(_authorities) != address(0),
            "Authorities can not be zero address"
        );

        avatar = address(_avatar);
        target = address(_target);
        authorities = _authorities;
        paused = false;

        setupModules();
    }

    function validateSignature(bytes32 hashedMessage, bytes calldata signature)
        internal
        view
        returns (bool)
    {
        return
            IAuthorities(authorities).isValidSignature(
                hashedMessage,
                signature
            ) == MAGIC_VALUE;
    }

    /// @dev Executes the next transaction only if accompanying signature resolves to an Authority
    /// @param to Destination address of module transaction
    /// @param value Ether value of module transaction
    /// @param data Data payload of module transaction
    /// @param operation Operation type of module transaction
    function executeTransaction(
        address to,
        uint256 value,
        bytes calldata data,
        Enum.Operation operation,
        bytes calldata signature
    ) public {
        require(
            !paused,
            "TrustedTxModifier: Executing transactions is paused."
        );

        bytes memory context = abi.encodePacked(
            address(this),
            nonce,
            this.executeTransaction.selector,
            abi.encode(to, value, data, operation)
        );

        bytes32 message = keccak256(context);

        bytes32 messageHash = ECDSA.toEthSignedMessageHash(message);

        bytes4 magic = IAuthorities(authorities).isValidSignature(
            messageHash,
            signature
        );

        require(magic == MAGIC_VALUE, "Invalid signature");

        require(exec(to, value, data, operation), "Module transaction failed");

        nonce++;
    }

    function changeAuthority(address newAuthority, bytes memory signature)
        public
        unpaused
    {
        bytes memory context = abi.encodePacked(
            address(this),
            nonce,
            this.changeAuthority.selector,
            abi.encode(newAuthority)
        );

        bytes32 message = keccak256(context);

        bytes32 messageHash = ECDSA.toEthSignedMessageHash(message);

        require(
            IAuthorities(authorities).isSigningAuthority(
                ECDSA.recover(messageHash, signature)
            ),
            "Not signing authority"
        );

        authorities = IAuthorities(newAuthority);

        nonce++;

        emit SigningAuthorityChanged(newAuthority);
    }

    function eject(address newOwner, bytes memory signature) public unpaused {
        bytes memory ejectData = abi.encodeWithSelector(
            OwnerManager.swapOwner.selector,
            address(1),
            address(authorities),
            address(newOwner)
        );

        bytes memory context = abi.encodePacked(
            address(this),
            nonce,
            this.eject.selector,
            abi.encode(avatar, 0, ejectData, 0)
        );

        bytes32 message = keccak256(context);

        bytes32 messageHash = ECDSA.toEthSignedMessageHash(message);

        require(
            IAuthorities(authorities).isEjectingAuthority(
                ECDSA.recover(messageHash, signature)
            ),
            "Not ejecting authority"
        );

        require(
            exec(avatar, 0, ejectData, Enum.Operation(0)),
            "Module transaction failed"
        );

        paused = true;

        nonce++;

        emit Ejected(newOwner);
    }

    function setupModules() internal {
        require(
            modules[SENTINEL_MODULES] == address(0),
            "setUpModules has already been called"
        );
        modules[SENTINEL_MODULES] = SENTINEL_MODULES;
    }
}

