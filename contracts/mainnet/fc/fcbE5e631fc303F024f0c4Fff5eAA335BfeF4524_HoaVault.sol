pragma solidity ^0.8.0;

import "./openzeppelin/access/OwnableUpgradeable.sol";
import "./maticnetwork/NativeMetaTransaction.sol";
import "./IERC20.sol";

contract HoaVault is OwnableUpgradeable, NativeMetaTransaction {
    address public HOA_ADDR;
    address public trustedForwarder; // this should be set to the current contract addr
    IERC20 private HOA_TOKEN;

    event TokenDeposited(string uuid, uint256 amount, uint256 credits);

    function initialize(string memory _name) public initializer {
        __EIP712Base_init(_name);
        __Ownable_init();
    }

    function Deposit(string memory uuid, uint256 credits) public {
        uint256 amount = credits * 1e12;
        HOA_TOKEN.transferFrom(_msgSender(), address(this), amount);
        emit TokenDeposited(uuid, amount, credits);
    }

    function setHoaAddr(address _address) public onlyOwner {
        HOA_ADDR = _address;
        HOA_TOKEN = IERC20(HOA_ADDR);
    }

    function transferOut(
        address token,
        address target,
        uint256 amount
    ) public onlyOwner {
        IERC20(token).transfer(target, amount);
    }

    function setTrustedForwarder(address _address) external onlyOwner {
        trustedForwarder = _address;
    }

    /*** metatransaction logic ***/
    function isTrustedForwarder(address forwarder) public view returns (bool) {
        return forwarder == trustedForwarder;
    }

    function _msgSender() internal view override returns (address signer) {
        signer = msg.sender;
        if (msg.data.length >= 20 && isTrustedForwarder(signer)) {
            assembly {
                signer := shr(96, calldataload(sub(calldatasize(), 20)))
            }
        }
    }
}

