pragma solidity ^0.8.7;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import '@openzeppelin/contracts/access/Ownable.sol';

error PriceNotMet(uint tokenId, uint price);
error ItemNotForSale(uint tokenId);
error NotListed(uint tokenId);
error AlreadyListed(uint tokenId);
error NoProceeds();
error NotOwner();
error NotApprovedForMarketplace();
error PriceMustBeAboveZero();

contract DemotapersMarket is ReentrancyGuard, Ownable {

    event ItemListed(
        uint indexed tokenId,
        uint price
    );

    event ItemCanceled(
        uint indexed tokenId
    );

    event ItemBought(
        address indexed buyer,
        uint indexed tokenId,
        uint price
    );

    IERC721 private immutable _nftAddress;
    mapping(uint256 /* tokenId */=> uint256 /* price */) private _listings;

    constructor(IERC721 nftAddress) {
        _nftAddress = nftAddress;
    }

    modifier areNotListed(uint[] memory tokenIds) {
        for (uint i=0; i < tokenIds.length; i++) {
            uint tokenId = tokenIds[i];
            uint256 listingPrice = _listings[tokenId];
            if (listingPrice > 0) {
                revert AlreadyListed(tokenId);
            }
        }
        _;
    }

    modifier isListed(uint tokenId) {
        uint256 listingPrice = _listings[tokenId];
        if (listingPrice == 0) {
            revert NotListed(tokenId);
        }
        _;
    }

    modifier areListed(uint[] memory tokenIds) {
        for (uint i=0; i < tokenIds.length; i++) {
            uint tokenId = tokenIds[i];
            uint256 listingPrice = _listings[tokenId];
            if (listingPrice == 0) {
                revert NotListed(tokenId);
            }
        }
        _;
    }

    /**
     * @dev Return the NFT address of the token sold by this marketplace
     *
     * @return NFT address
    */
    function getNFTAddress() external view returns (IERC721) {
        return _nftAddress;
    }

    /*
     * @notice Method for listing NFT
     * @param tokenIds array of NFTs
     * @param price sale price for each item
     */
    function listItems(uint[] memory tokenIds, uint price) external areNotListed(tokenIds) onlyOwner() {
        if (price == 0) {
            revert PriceMustBeAboveZero();
        }
        if (!IERC721(_nftAddress).isApprovedForAll(msg.sender, address(this))) {
            revert NotApprovedForMarketplace();
        }
        for (uint i=0; i < tokenIds.length; i++) {
            uint tokenId = tokenIds[i];
            _listings[tokenId] = price;
            emit ItemListed(tokenId, price);
        }
    }

    /*
     * @notice Method for cancelling listing
     * @param tokenIds array of NFTs
     */
    function cancelListing(uint[] memory tokenIds) external areListed(tokenIds) onlyOwner() {
        for (uint i=0; i < tokenIds.length; i++) {
            uint tokenId = tokenIds[i];
            delete (_listings[tokenId]);
            emit ItemCanceled(tokenId);
        }
    }

    /*
     * @notice Method for updating listing
     * @param tokenIds array of NFTs
     * @param newPrice Price in Wei of the item
     */
    function updateListing(uint[] memory tokenIds, uint newPrice) external areListed(tokenIds) nonReentrant onlyOwner() {
        if (newPrice == 0) {
            revert PriceMustBeAboveZero();
        }
        for (uint i=0; i < tokenIds.length; i++) {
            uint tokenId = tokenIds[i];
            _listings[tokenId] = newPrice;
            emit ItemListed(tokenId, newPrice);
        }
    }

    /*
     * @notice Method for buying listing
     * @param tokenId Token ID of NFT
     */
    function buyItem(uint tokenId) external payable isListed(tokenId) nonReentrant {
        uint256 listedItemPrice = _listings[tokenId];
        if (msg.value != listedItemPrice) {
            revert PriceNotMet(tokenId, listedItemPrice);
        }
        delete _listings[tokenId];
        IERC721(_nftAddress).safeTransferFrom(owner(), msg.sender, tokenId);
        emit ItemBought(msg.sender, tokenId, listedItemPrice);
    }

    /**
    *  @dev Transfers all founds to the owner's address
    *  Can only be called by the owner of the contract.
    */
    function withdraw() onlyOwner external {
        uint balance = address(this).balance;
        if (balance > 0) {
            (bool success, ) = msg.sender.call{value:balance}("");
            require(success, "Transfer failed.");
        }
    }

    /**
     * @dev Return the listing information for the tokenId
     * @param tokenId Token ID of NFT
     * @return Return the listing information for the tokenId
    */
    function getListing(uint tokenId) external view returns (uint256) {
        return _listings[tokenId];
    }

    /// @notice withdraw erc20 token, this could be used to withdraw payouts or occasionally sent native tokens
    ///   in a "normal" flow of this contract usage, erc20 tokens may never be hold on the contract.
    function recoverERC20(address _token, uint256 amount, address to) external onlyOwner {
        IERC20(_token).transfer(to, amount);  // no need to use safeTransfer here
    }

    /// @notice recover erc721 token, this could be used to withdraw occasionally sent NFTs
    ///   in a "normal" flow of this contract usage, erc721 tokens may never be hold on the contract.
    function recoverERC721(
        address _nft,
        uint256 tokenId,
        address to,
        bytes memory _data
    ) external onlyOwner {
        IERC721(_nft).safeTransferFrom(address(this), to, tokenId, _data);
    }

    /// @notice recover erc1155 token, this could be used to withdraw occasionally sent NFTs
    ///   in a "normal" flow of this contract usage, erc1155 tokens may never be hold on the contract.
    function recoverERC1155(
        address _nft,
        uint256 tokenId,
        uint256 tokenAmount,
        address to,
        bytes memory _data
    ) external onlyOwner {
        IERC1155(_nft).safeTransferFrom(address(this), to, tokenId, tokenAmount, _data);
    }
}

