import "../interfaces/PortToken/IPortToken.sol";
import "../interfaces/ITransferHookReceiver.sol";
import {Modifiers} from "../libraries/Modifiers.sol";
import "../libraries/LibFee.sol";

// streaming fee lifecycle
// Accumulated - after every mint/burn or if called manually
// Minted      - Minted and can be claimed

contract FeeFacet is Modifiers, ITransferHookReceiver {
    event StreamingFeeAccumulated(address indexed portTokenAddr, uint256 amount);
    event StreamingFeeMinted(address indexed portTokenAddr, uint256 amount);
    event StreamingFeeChanged(address indexed portTokenAddr, uint32 value);
    event SuccessFeeChanged(address indexed portTokenAddr, uint32 value);
    event FeeLimitsChanged(LibFee.FeeLimits limits);

    function setFeeLimits(LibFee.FeeLimits calldata _limits) external onlyOwner {
        LibFee.DiamondStorage storage ds = LibFee.diamondStorage();
        ds.feeLimits = _limits;

        emit FeeLimitsChanged(_limits);
    }

    function getFeeLimits() external view returns (LibFee.FeeLimits memory limits) {
        LibFee.DiamondStorage storage ds = LibFee.diamondStorage();
        return ds.feeLimits;
    }

    function setStreamingFee(address _addr, uint16 _value) external onlyTokenManager(_addr) whenNotPaused {
        LibFee.setStreamingFee(_addr, _value);
    }

    function setSuccessFee(address _addr, uint16 _value) external onlyTokenManager(_addr) whenNotPaused {
        LibFee.setSuccessFee(_addr, _value);
    }

    function getStreamingFee(address _addr) external view returns (uint32) {
        LibFee.StreamingFeeData storage d = LibFee.streamingFeeDataForToken(_addr);
        return d.value;
    }

    function getAccumulatedStreamingFee(address _addr) external view returns (uint256) {
        LibFee.StreamingFeeData storage d = LibFee.streamingFeeDataForToken(_addr);
        return d.accumulatedAmount;
    }

    function accumulateStreamingFee(address _addr) public {
        LibFee.StreamingFeeData storage d = LibFee.streamingFeeDataForToken(_addr);
        if (d.lastAccumulatedAt >= block.timestamp) {
            return;
        }

        if (d.value != 0) {
            //streaming fee value d.value is in 1/1000 (1000==100%) per year
            //means streaming fee per second = d.value/31536000 (seconds in one year)
            uint256 unclaimedAmount = IPortToken(_addr).balanceOf(address(this));
            d.accumulatedAmount +=
                ((IPortToken(_addr).totalSupply() - unclaimedAmount) * d.value * (block.timestamp - d.lastAccumulatedAt)) /
                31536000 /
                LibFee.FEE_DENOMINATOR;
        }

        d.lastAccumulatedAt = block.timestamp;
        emit StreamingFeeAccumulated(_addr, d.accumulatedAmount);
    }

    function mintAccumulatedStreamingFee(address _addr) external whenNotPaused {
        LibFee.StreamingFeeData storage d = LibFee.streamingFeeDataForToken(_addr);
        uint256 amt = d.accumulatedAmount;
        if (amt == 0) {
            return;
        }

        d.accumulatedAmount = 0;
        IPortToken(_addr).controllerMint(address(this), amt);

        emit StreamingFeeAccumulated(_addr, 0);
        emit StreamingFeeMinted(_addr, amt);
    }

    function claimStreamingFee(address _addr, uint256 _amount) external onlyTokenManager(_addr) whenNotPaused {
        revert("Fee claim disabled");
        IPortToken port = IPortToken(_addr);
        port.transfer(port.manager(), _amount);
    }

    function burnStreamingFee(address _addr, uint256 _amount) external onlyTokenManager(_addr) whenNotPaused {
        revert("Fee burn disabled");
        IPortToken(_addr).controllerBurn(address(this), _amount);
    }

    function onTokenTransfer(
        address token,
        address from,
        address to,
        uint256
    ) external override {
        //mint or burn
        if (from == address(0) || to == address(0)) {
            accumulateStreamingFee(token);
        }
    }
}

