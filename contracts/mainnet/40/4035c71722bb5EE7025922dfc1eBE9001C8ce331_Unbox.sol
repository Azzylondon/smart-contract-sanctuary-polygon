pragma solidity 0.8.11;


contract Unbox {
    IERC721 public charactersInstance;
    IERC721 public landsInstance;
    address public keeper;
    address public admin;

    event SendedNFT(address indexed user, address indexed contractAddress, uint tokenID);
    event ChangeAddressCharacters(address indexed oldAddress, address indexed newAddress);
    event ChangeAddressLands(address indexed oldAddress, address indexed newAddress);
    event ChangeKeeper(address indexed oldKeeper, address indexed newKeeper);
    event ChangeAdmin(address indexed oldAdmin, address indexed newAdmin);

    constructor(address _characters, address _lands, address _keeper) {
        charactersInstance = IERC721(_characters);
        landsInstance = IERC721(_lands);
        keeper = _keeper;
        admin = msg.sender;
    }

    function sendNFT(address addressTo, uint[] calldata charactersID, uint[] calldata landsID) public onlyAdmin {
        for (uint256 index = 0; index < charactersID.length; index++) {
            charactersInstance.transferFrom(addressTo, keeper, charactersID[index]);
            emit SendedNFT(addressTo, address(charactersInstance), charactersID[index]);
        }
        for (uint256 index = 0; index < landsID.length; index++) {
            landsInstance.transferFrom(addressTo, keeper, landsID[index]);
            emit SendedNFT(addressTo, address(landsInstance), landsID[index]);
        }
    }

    function changeAddressCharacters(address _contractAddress) external onlyAdmin {
        address _oldAddress = address(charactersInstance);
        charactersInstance = IERC721(_contractAddress);
        emit ChangeAddressCharacters(_oldAddress, address(charactersInstance));
    }

    function changeAddressLands(address _contractAddress) external onlyAdmin {
        address _oldAddress = address(landsInstance);
        landsInstance = IERC721(_contractAddress);
        emit ChangeAddressLands(_oldAddress, address(landsInstance));
    }

    function changeKeeper(address _newKeeper) external onlyAdmin {
        address _oldKeeper = keeper;
        keeper = _newKeeper;
        emit ChangeKeeper(_oldKeeper, _newKeeper);
    }

    function changeAdmin(address _newAdmin) external onlyAdmin {
        address _oldAdmin = admin;
        admin = _newAdmin;
        emit ChangeAdmin(_oldAdmin, _newAdmin);
    }

    modifier onlyAdmin {
        require(msg.sender == admin, "Only admin");
        _;
    }

}