import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Context.sol";

contract axoBakery is Context, Ownable {
    using SafeMath for uint256;

    uint256 private BAKER_PER_BREAD_PRICE = 86400; //for final version should be seconds in a day
    uint256 private PSN = 10000;
    uint256 private PSNH = 5000;
    uint256 private devFeeVal = 2;
    bool private initialized = false;
    address payable private recAddr;
    mapping(address => uint256) private Bakers;
    mapping(address => uint256) private claimedBreads;
    mapping(address => uint256) private lastResell;
    uint256 private marketBreads;

    constructor(address payable _benificiaryAddress) {
        recAddr = _benificiaryAddress;
    }

    function resellBread(address ref) public {
        require(initialized);
        if (ref == msg.sender) {
            ref = address(0);
        }
        uint256 breadUsed = getMyBreads(msg.sender);
        uint256 newBakers = SafeMath.div(breadUsed, BAKER_PER_BREAD_PRICE);
        Bakers[msg.sender] = SafeMath.add(Bakers[msg.sender], newBakers);
        claimedBreads[msg.sender] = 0;
        lastResell[msg.sender] = block.timestamp;
        marketBreads = SafeMath.add(marketBreads, SafeMath.div(breadUsed, 5));
    }

    function claimBreads() public {
        require(initialized);
        uint256 hasBread = getMyBreads(msg.sender);
        uint256 breadPrice = calculateBreadSell(hasBread);
        uint256 fee = devFee(breadPrice);
        claimedBreads[msg.sender] = 0;
        lastResell[msg.sender] = block.timestamp;
        marketBreads = SafeMath.add(marketBreads, hasBread);
        recAddr.transfer(fee);
        payable(msg.sender).transfer(SafeMath.sub(breadPrice, fee));
    }

    function breadRewards(address adr) public view returns (uint256) {
        uint256 hasBread = getMyBreads(adr);
        (adr);
        uint256 breadPrice = calculateBreadSell(hasBread);
        return breadPrice;
    }

    function getBakers(address ref) public payable {
        require(initialized);
        uint256 breadBought = calculateBreadBuy(
            msg.value,
            SafeMath.sub(address(this).balance, msg.value)
        );
        breadBought = SafeMath.sub(breadBought, devFee(breadBought));
        uint256 fee = devFee(msg.value);
        recAddr.transfer(fee);
        claimedBreads[msg.sender] = SafeMath.add(
            claimedBreads[msg.sender],
            breadBought
        );
        resellBread(ref);
    }

    function calculateTrade(
        uint256 rt,
        uint256 rs,
        uint256 bs
    ) private view returns (uint256) {
        return
            SafeMath.div(
                SafeMath.mul(PSN, bs),
                SafeMath.add(
                    PSNH,
                    SafeMath.div(
                        SafeMath.add(
                            SafeMath.mul(PSN, rs),
                            SafeMath.mul(PSNH, rt)
                        ),
                        rt
                    )
                )
            );
    }

    function calculateBreadSell(uint256 breads) public view returns (uint256) {
        return calculateTrade(breads, marketBreads, address(this).balance);
    }

    function calculateBreadBuy(uint256 matic, uint256 contractBalance)
        public
        view
        returns (uint256)
    {
        return calculateTrade(matic, contractBalance, marketBreads);
    }

    function calculateBreadBuySimple(uint256 matic)
        public
        view
        returns (uint256)
    {
        return calculateBreadBuy(matic, address(this).balance);
    }

    function devFee(uint256 amount) private view returns (uint256) {
        return SafeMath.div(SafeMath.mul(amount, devFeeVal), 100);
    }

    function breadMarket() public payable onlyOwner {
        require(marketBreads == 0);
        initialized = true;
        marketBreads = 108000000000;
    }

    function getBalance() public view returns (uint256) {
        return address(this).balance;
    }

    function getMyBakers(address adr) public view returns (uint256) {
        return Bakers[adr];
    }

    function getMyBreads(address adr) public view returns (uint256) {
        return SafeMath.add(claimedBreads[adr], getbreadsSincelastResell(adr));
    }

    function getbreadsSincelastResell(address adr)
        public
        view
        returns (uint256)
    {
        uint256 secondsPassed = min(
            BAKER_PER_BREAD_PRICE,
            SafeMath.sub(block.timestamp, lastResell[adr])
        );
        return SafeMath.mul(secondsPassed, Bakers[adr]);
    }

    function min(uint256 a, uint256 b) private pure returns (uint256) {
        return a < b ? a : b;
    }
}

