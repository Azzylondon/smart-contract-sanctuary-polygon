pragma solidity ^0.8.11;

import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "../interfaces/IGeoPoly.sol";

import "../libraries/GeoSpecial.sol";

contract GeoMint is ChainlinkClient, ConfirmedOwner, Pausable {
    using Chainlink for Chainlink.Request;

    uint256 public oraclePayment = 75 * 10**15;
    uint256 public currentPrice;
    address public _oracle = 0x3d5552a177Fe380CDDe28a034EA93C2d30b80b2D;
    bytes32 public _jobId = "bd7fa17ffe2d4a328f65e59434ccb3f7";

    struct RequestData {
        string mintingProps;
        address mintingAddress;
        address sender;
    }

    mapping(bytes32 => RequestData) public requestMapping;

    // Mainnet
    address public geoAddress = 0xf1428850f92B87e629c6f3A3B75BffBC496F7Ba6;
    address public geoNFTAddress = 0x0b72a80C151DeC838Cb6fBCE002c09eD35897345;
    address public USDTTokenAddress =
        0xc2132D05D31c914a87C6611C10748AEb04B58e8F;

    event RequestPriceFulfilled(
        bytes32 indexed requestId,
        uint256 indexed price
    );

    constructor() ConfirmedOwner(msg.sender) {
        setChainlinkToken(0xb0897686c545045aFc77CF20eC7A532E3120E0F1);
    }

    function mint(string memory _props, address _to)
        public
        whenNotPaused
        returns (bytes32 requestId)
    {
        require(
            IERC20(USDTTokenAddress).balanceOf(address(this)) >= 0,
            "Contract has no USDT balance"
        );

        Chainlink.Request memory req = buildChainlinkRequest(
            _jobId,
            address(this),
            this.fulfillMint.selector
        );

        bytes32 requestId = sendChainlinkRequestTo(_oracle, req, oraclePayment);

        requestMapping[requestId] = RequestData({
            mintingProps: _props,
            mintingAddress: _to,
            sender: msg.sender
        });
    }

    function fulfillMint(bytes32 _requestId, uint256 _price)
        public
        whenNotPaused
        recordChainlinkFulfillment(_requestId)
    {
        emit RequestPriceFulfilled(_requestId, _price);
        currentPrice = _price;

        string memory mintingProps = requestMapping[_requestId].mintingProps;

        address mintingAddress = requestMapping[_requestId].mintingAddress;

        address senderTx = requestMapping[_requestId].sender;

        uint256 geoAmount = getGeoAmount(mintingProps, currentPrice);

        _transferTokensToSelf(geoAddress, senderTx, geoAmount);

        approve(USDTTokenAddress, geoNFTAddress);

        IGeoPoly(geoNFTAddress).geoMint(mintingProps, mintingAddress);
        delete requestMapping[_requestId];
    }

    function reserve(string memory _props, address _to)
        public
        whenNotPaused
        returns (bytes32 requestId)
    {
        require(
            IERC20(USDTTokenAddress).balanceOf(address(this)) >= 0,
            "Contract has no USDT balance"
        );

        Chainlink.Request memory req = buildChainlinkRequest(
            _jobId,
            address(this),
            this.fulfillReserve.selector
        );

        bytes32 requestId = sendChainlinkRequestTo(_oracle, req, oraclePayment);

        requestMapping[requestId] = RequestData({
            mintingProps: _props,
            mintingAddress: _to,
            sender: msg.sender
        });
    }

    function fulfillReserve(bytes32 _requestId, uint256 _price)
        public
        whenNotPaused
        recordChainlinkFulfillment(_requestId)
    {
        emit RequestPriceFulfilled(_requestId, _price);
        currentPrice = _price;

        string memory reserveProps = requestMapping[_requestId].mintingProps;

        address reserveAddress = requestMapping[_requestId].mintingAddress;

        address senderTx = requestMapping[_requestId].sender;

        uint256 geoAmount = getGeoAmount(reserveProps, currentPrice);

        _transferTokensToSelf(geoAddress, senderTx, geoAmount);

        approve(USDTTokenAddress, geoNFTAddress);

        IGeoPoly(geoNFTAddress).reserveNFT(reserveProps, reserveAddress);
        delete requestMapping[_requestId];
    }

    function getGeoAmount(string memory _props, uint256 oraclePrice)
        public
        view
        returns (uint256)
    {
        require(oraclePrice > 0, "Price is 0");

        (
            uint256 cat,
            uint256 tier,
            uint256 _price,
            string memory lat,
            string memory lng
        ) = GeoSpecial.doAll(_props);

        uint256 geoAmount = (_price * (10**26)) / oraclePrice;

        return geoAmount;
    }

    function _transferTokensToSelf(
        address tokenAddress,
        address senderAddress,
        uint256 amount
    ) internal {
        require(msg.value == 0, "msg.value should be 0");

        // Transfer from does not allow to send more funds than balance
        IERC20(tokenAddress).transferFrom(senderAddress, address(this), amount);
    }

    function approve(address token, address spender) internal {
        IERC20(token).approve(spender, type(uint256).max);
    }

    // Owner functions

    function setNewGeoAddress(address newGeoAddress) external onlyOwner {
        geoAddress = newGeoAddress;
    }

    function setNewGeoNFTAddress(address newGeoNFTAddress) external onlyOwner {
        geoNFTAddress = newGeoNFTAddress;
    }

    function setNewUSDTAddress(address newUSDTAddress) external onlyOwner {
        USDTTokenAddress = newUSDTAddress;
    }

    function setNewOracleData(address newOracle, bytes32 newJobId)
        external
        onlyOwner
    {
        _oracle = newOracle;
        _jobId = newJobId;
    }

    function setNewOraclePayment(uint256 newFee) external onlyOwner {
        oraclePayment = newFee;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function withdrawERC20(address tokenAddress, uint256 amount)
        external
        onlyOwner
    {
        IERC20(tokenAddress).transfer(msg.sender, amount);
    }

    function withdrawAllGeos() external onlyOwner {
        uint256 amount = IERC20(geoAddress).balanceOf(address(this));

        IERC20(geoAddress).transfer(msg.sender, amount);
    }
}

