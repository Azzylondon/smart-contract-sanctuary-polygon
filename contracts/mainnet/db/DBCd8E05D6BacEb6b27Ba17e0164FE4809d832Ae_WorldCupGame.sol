pragma solidity ^0.8.9;

// Openzeppelin dependecies 
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

// Chainlink dependecies 
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
// Core dependecies 
import "./libs/ContextMixin.sol";
import "./libs/NativeMetaTransaction.sol";

contract DegoVerseFactoryNFT is ERC721Enumerable, ContextMixin, NativeMetaTransaction, AccessControl, VRFConsumerBaseV2 {
    // Auto Increment nftIDs;
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIdCounter;

    // CORE SETUP
    mapping(address => bool) private _excludedOperators;
    string private baseTokenURI;
    //ROLES
    /// operator role
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR");
    /// minter role
    bytes32 public constant MINTER_ROLE = keccak256("MINTER");
    //

    // VRF CHAINLINK DATA
    VRFCoordinatorV2Interface COORDINATOR;
    uint64 public subscriptionId;
    address public vrfCoordinator;
    bytes32 public keyHash;
    uint32 public callbackGasLimit = 2500000;
    uint16 public requestConfirmations = 3;
    uint32 public numWords = 1;
    //

    // NFT STRUCT GAME
    struct Player {
        uint256 defense;
        uint256 attack;
        uint256 physical;
        uint256 morale;
        uint256 foot;
        uint256 birth;
        uint256 position;
        uint256 country;
        uint256 experience;
    }

    mapping(uint256 => Player) public players;
    
    mapping(uint256 => uint256) playerBirth;
    mapping(uint256 => uint256) playerPosition;
    mapping(uint256 => uint256) playerCountry;
    mapping(uint256 => uint256) playerId;
    mapping(uint256 => address) playerAddress;
    //

    constructor(uint64 _subscriptionId, address _vrfCoordinator, bytes32 _keyHash) 
        VRFConsumerBaseV2(_vrfCoordinator) ERC721("DegoVerse Factory NFT", "DegoVerse") 
    {
        // Allow meta transactions
        _initializeEIP712("DegoVerse Factory NFT");
        
        // Setup vrf chainlink
        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
        vrfCoordinator = _vrfCoordinator;
        keyHash = _keyHash;
        subscriptionId = _subscriptionId;

        // Setup access control
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(MINTER_ROLE, msg.sender);
        _setupRole(OPERATOR_ROLE, msg.sender);
    }

    function generatePlayer(
        uint256 birth,
        uint256 position,
        uint256 country,
        address owner
    ) external onlyRole(MINTER_ROLE) returns (uint256) {        
        uint256 requestId = COORDINATOR.requestRandomWords(
            keyHash,
            subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            numWords
        );
        
        playerBirth[requestId]    = birth;
        playerCountry[requestId]  = country;
        playerAddress[requestId]  = owner;
        playerPosition[requestId] = position;
        playerId[requestId] = _tokenIdCounter.current();
        
        _tokenIdCounter.increment();

        return requestId;
    }

    function fulfillRandomWords(
        uint256 requestId,
        uint256[] memory randomWords
    ) internal override {
        Player storage player = players[playerId[requestId]];

        // vrf randomness data
        player.defense = (randomWords[0] % 100) + 1;
        player.attack  = ((randomWords[0] % 10000) / 100 ) + 1;
        player.physical = ((randomWords[0] % 1000000) / 10000 ) + 1;
        player.morale = ((randomWords[0] % 100000000) / 1000000 ) + 1;
        player.foot = ((randomWords[0] % 10000000000) / 100000000 ) > 50 ? 1 : 0;
        
        // core data
        player.country = playerCountry[requestId];
        player.position = playerPosition[requestId];
        player.birth = playerBirth[requestId];

        //mint new unique random nft player
        _safeMint(playerAddress[requestId], playerId[requestId]);
        
        //delete old date persisted
        delete playerBirth[requestId];
        delete playerPosition[requestId];
        delete playerCountry[requestId];
        delete playerAddress[requestId];
        delete playerId[requestId];
    }

    // GAME METHODS

    /// SET Methods
    // This method allow set skills of the player. Only Operator can run this method.
    function setSkills(uint256 tokenId, uint256[] memory skills) external onlyRole(OPERATOR_ROLE) {
        require(_exists(tokenId));
      
        players[tokenId].defense    = skills[0];
        players[tokenId].attack     = skills[1];
        players[tokenId].physical   = skills[2];
        players[tokenId].morale     = skills[3];
        players[tokenId].experience = skills[4];
    }

    // This method allow set experience of the player. Only Operator can run this method.
    function setExperience(uint256 tokenId, uint256 newExperience) external onlyRole(OPERATOR_ROLE) {
        require(_exists(tokenId));

        players[tokenId].experience = newExperience;
    }

    // This method allow set morale of the player. Only Operator can run this method.
    function setMorale(uint256 tokenId, uint256 newMorale) external onlyRole(OPERATOR_ROLE) {
        require(_exists(tokenId));

        players[tokenId].morale = newMorale;
    }

    // This method allow set position of the player. Only Operator can run this method.
    function setPosition(uint256 tokenId, uint256 newPosition) external onlyRole(OPERATOR_ROLE) {
        require(_exists(tokenId));

        players[tokenId].position = newPosition;
    }

    // This method will be use in case to need fix some wrong nft data. Only Owner can run this method.
    function setAll(uint256 tokenId, uint256[] memory values) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_exists(tokenId));

        players[tokenId].defense        = values[0];
        players[tokenId].attack         = values[1];
        players[tokenId].physical       = values[2];
        players[tokenId].morale         = values[3];
        players[tokenId].foot           = values[4];
        players[tokenId].birth          = values[5];
        players[tokenId].position       = values[6];
        players[tokenId].country        = values[7];
        players[tokenId].experience     = values[8];
    }

    /// READ Methods
    function playerAbout(uint256 tokenId)
        external
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        return (
            players[tokenId].foot,
            players[tokenId].birth,
            players[tokenId].position,
            players[tokenId].country
        );
    }

    function playerSkill(uint256 tokenId)
        external
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        return (
            players[tokenId].defense,
            players[tokenId].attack,
            players[tokenId].physical,
            players[tokenId].morale,
            players[tokenId].experience
        );
    }
    //


    // CORE METHODS
    // Override isApprovedForAll to whitelist user's proxy accounts to enable gas-less listings.
    function isApprovedForAll(
        address owner,
        address operator
    ) public override view returns (bool isOperator) {
        if (_excludedOperators[operator]) {
            return true;
        }
        
        return ERC721.isApprovedForAll(owner, operator);
    }

     // This is used instead of msg.sender as transactions won't be sent by the original token owner, but by OpenSea.
    function _msgSender()
        internal
        override
        view
        returns (address sender)
    {
        return ContextMixin.msgSender();
    }

    // Add/Update operator address. Only Owner can run this method
    function setOperators(address operatorAddress, bool status) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(operatorAddress != address(0));
        
        _excludedOperators[operatorAddress] = status;
    }

    // Sets the base token URI prefix.
    function setBaseTokenURI(string memory _baseTokenURI) external onlyRole(DEFAULT_ADMIN_ROLE) {
        baseTokenURI = _baseTokenURI;
    }

    // Sets the base URI.
    function _baseURI() internal override view virtual returns (string memory) {
        return baseTokenURI;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(AccessControl, ERC721Enumerable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function nextTokenId() external view returns(uint256) {
        return _tokenIdCounter.current();
    }
}

