pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

import "./DegoVerseFactoryNFT.sol";
import "./GameCard.sol";


contract WorldCupGame is AccessControl, ReentrancyGuard {
    using SafeERC20 for IERC20;

    error TimeNotValid();
    error DepositFeeTooHigh();
    error InvalidAmount();
    error WithdrawNotAvailable();
    error NotOwner();
    error CardLengthNotValid();
    error AddressNotValid();
    error AlreadyClaimed();
    error TotalAmountNotValid();
    error ClaimNotValid();
    error AlreadyEndMatch();

    struct BetInfo {
        BetOption bet;
        bool claimed;
        uint256 amount;
        uint256 cardId;
        uint256[] playerIds;
    }

    mapping(uint256 => mapping(address => BetInfo)) public betInfo;

    // Info of each match.
    struct MatchInfo {
        uint256 localCountryId;
        uint256 visitorCountryId;
        uint256 startTime;
        uint256 treasuryFee;
        uint256 totalAmount;
        uint256 winAmount;
        uint256 tieAmount;
        uint256 loseAmount;
        address stakedToken;
        uint256 rewardBaseCalAmount;
        uint256 rewardAmount;
        uint256 treasuryAmount;
    }

    // Info of result.
    struct MatchResult {
        BetOption bet;
        bool endMatch;
    }

    MatchInfo[] public matchInfo;
    MatchResult[] public matchResult;
    
    uint256 nullNftId = 999999999;
    uint256 public startTime;
    uint256 public totalUsdLockup;
    address public feeAddress;

    // NFT Factories
    DegoVerseFactoryNFT public playerNFT; 
    GameCard public gameCardNFT;

    // Roles
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR");

    // Events definitions
    event AddMatch(uint256 indexed pid, uint256 localCountryId, uint256 visitorCountryId, uint256 startTime, uint256 treasuryFee, address stakedToken);
    event SetMatch(uint256 indexed pid, uint256 localCountryId, uint256 visitorCountryId, uint256 startTime, uint256 treasuryFee, address stakedToken);
    event BetMatch(address indexed user, uint256 indexed pid, uint256 amount, BetOption bet);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event SetFeeAddress(address indexed user, address indexed newAddress);
    event SetStartTime(uint256 indexed newStartTime);
    event AddNFT(address indexed user, uint256 indexed pid, uint256[] playerIds, uint256 cardId);
    event WithdrawNFT(address indexed user, uint256 indexed pid, uint256[] playerIds, uint256 cardId);
    event NewMinBetAmount(uint256 indexed pid, uint256 minBetAmount);
    event MatchEnded(uint256 indexed pid, BetOption bet);
    event Claim(address indexed user, uint256 indexed pid, uint256 amount);
    event ClaimTreasury(address indexed user, uint256 indexed pid, uint256 amount);
    event RewardsCalculated(uint256 indexed pid, uint256 rewardBaseCalAmount ,uint256 rewardAmount, uint256 treasuryAmount);
    
    enum BetOption {
        Win,
        Lose,
        Tie
    }
    
    uint256 public minBetAmount; // minimum betting amount (denominated in wei)

    constructor(
        address _playerNFT,
        address _gameCardNFT,
        address _feeAddress,
        uint256 _startTime
    ) {

        // if(_startTime < block.timestamp) {
        //     revert TimeNotValid();
        // }

        playerNFT = DegoVerseFactoryNFT(_playerNFT);
        gameCardNFT = GameCard(_gameCardNFT);
        feeAddress = _feeAddress;
        startTime = _startTime;

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(OPERATOR_ROLE, msg.sender);
    }

    /// External functions ///
    /// Add a new match. Can only be called by the owner.
    function addMatch(
        uint256 _localCountryId,
        uint256 _visitorCountryId,
        uint256 _startTime,
        uint256 _treasuryFee,
        address _stakedToken
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        // if(_startTime < block.timestamp) revert TimeNotValid();
        if(_treasuryFee > 10000) revert DepositFeeTooHigh();

        matchInfo.push(
            MatchInfo({
                localCountryId: _localCountryId,
                visitorCountryId: _visitorCountryId,
                startTime: _startTime,
                treasuryFee: _treasuryFee,
                totalAmount: 0,
                winAmount: 0,
                tieAmount: 0,
                loseAmount: 0,
                stakedToken: _stakedToken,
                rewardBaseCalAmount: 0,
                rewardAmount: 0,
                treasuryAmount: 0
            })
        );
        matchResult.push(
            MatchResult({
                bet: BetOption.Tie,
                endMatch: false
            })
        );

      emit AddMatch(matchInfo.length - 1, _localCountryId, _visitorCountryId, _startTime, _treasuryFee, _stakedToken); 
    }

    // Update the given match's info. Can only be called by the owner.
    function setMatch(
        uint256 _pid,
        uint256 _localCountryId,
        uint256 _visitorCountryId,
        uint256 _startTime,
        uint256 _treasuryFee,
        address _stakedToken
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        // if(_startTime < block.timestamp) revert TimeNotValid();
        if(_treasuryFee > 10000) revert DepositFeeTooHigh();


        matchInfo[_pid].localCountryId = _localCountryId;
        matchInfo[_pid].visitorCountryId = _visitorCountryId;
        matchInfo[_pid].startTime = _startTime;
        matchInfo[_pid].treasuryFee = _treasuryFee;
        matchInfo[_pid].stakedToken = _stakedToken;        
        emit SetMatch(_pid, _localCountryId, _visitorCountryId, _startTime, _treasuryFee, _stakedToken);
    }

    // Bet on the match.
    function betMatch(uint256 _pid, uint256 _amount, BetOption _bet) external nonReentrant {
        MatchInfo storage pool = matchInfo[_pid];
        BetInfo storage user = betInfo[_pid][msg.sender];
        if (_amount < 0) revert InvalidAmount();
        if(IERC20(pool.stakedToken).balanceOf(msg.sender) < _amount) revert InvalidAmount();

        // if (block.timestamp < pool.startTime || pool.endMatch) revert TimeNotValid();

        // Transfer token to this contract
        IERC20(pool.stakedToken).safeTransferFrom(address(msg.sender), address(this), _amount);

        user.amount = user.amount + _amount;
        totalUsdLockup = totalUsdLockup + _amount;
        pool.totalAmount = pool.totalAmount + _amount;

        user.bet = _bet;
        if (_bet == BetOption.Win) {
            pool.winAmount = pool.winAmount + _amount;
        } else if (_bet == BetOption.Lose) {
            pool.loseAmount = pool.loseAmount + _amount;
        } else {
            pool.tieAmount = pool.tieAmount + _amount;
        }

        emit BetMatch(msg.sender, _pid, _amount, _bet);
    }

    function addNft(
        uint256 _pid, 
        uint256[] memory _playerIds, 
        uint256 _cardId) 
        external nonReentrant {
        BetInfo storage user = betInfo[_pid][msg.sender];

        // Players NFT
        for (uint256 i = 0; i < _playerIds.length; i++) {
            if (playerNFT.ownerOf(_playerIds[i]) != msg.sender) revert NotOwner();
            user.playerIds.push(_playerIds[i]);
        }

        // Cards NFT
        if(_cardId != nullNftId) {
            if(gameCardNFT.balanceOf(msg.sender, _cardId) < 1) revert NotOwner();
            user.cardId = _cardId;
        }

        emit AddNFT(msg.sender, _pid, _playerIds, _cardId);

    }


    function withdrawNFT(
        uint256 _pid, 
        uint256[] memory _playerIds, 
        uint256 _cardId
    ) external nonReentrant {
        BetInfo storage user = betInfo[_pid][msg.sender];
        
        for (uint256 i = 0; i < _playerIds.length; i++) {
            for (uint256 j = 0; j < user.playerIds.length; j++) {
                if (user.playerIds[j] == _playerIds[i]) {
                    user.playerIds[j] = user.playerIds[user.playerIds.length - 1];
                    user.playerIds.pop();
                    break;
                }
            }
        }
        if(user.cardId != nullNftId) {
            user.cardId = nullNftId;
        }

        emit WithdrawNFT(msg.sender, _pid, _playerIds, _cardId);
    }

  
    // Set fee address. OnlyOwner
    function setFeeAddress(address newFeeAddress) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if (newFeeAddress != address(0)) revert AddressNotValid();

        feeAddress = newFeeAddress;
        emit SetFeeAddress(msg.sender, newFeeAddress);
    }

    ///@dev Set startTime. Only can run before start by Owner.
    function setStartTime(uint256 newStartTime) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if(block.timestamp < startTime) revert TimeNotValid();
        if(block.timestamp < newStartTime) revert TimeNotValid();

        startTime = newStartTime;

        emit SetStartTime(startTime);
    }

    /// External functions that are view ///
    function poolLength() external view returns (uint256) {
        return matchInfo.length;
    }

    ///@return pending USD.
    function pendingReward(uint256 _pid, address _userAddress) external view returns (uint256) {
        BetInfo storage user = betInfo[_pid][_userAddress];
        MatchInfo storage pool = matchInfo[_pid];
        if(pool.totalAmount < 0) revert TotalAmountNotValid();
        
        uint256 treasuryAmt = (pool.totalAmount * pool.treasuryFee) / 10000;
        uint256 rewardAmount = pool.totalAmount - treasuryAmt;
        uint256 rewardBaseCalAmount;
        
        if (user.bet == BetOption.Win) {
            rewardBaseCalAmount = pool.winAmount;
        } else if (user.bet == BetOption.Lose) {
            rewardBaseCalAmount = pool.loseAmount;
        } else {
            rewardBaseCalAmount = pool.tieAmount;
        }

        return user.amount  * rewardAmount / rewardBaseCalAmount;
    }

    function _calculateRewards(uint256 _pid) internal {
        MatchInfo storage pool = matchInfo[_pid];
        MatchResult storage result = matchResult[_pid];

        uint256 rewardBaseCalAmount;
        uint256 treasuryAmt;
        uint256 rewardAmount;

        // Win option wins
        if (result.bet == BetOption.Win) {
            rewardBaseCalAmount = pool.winAmount;
            treasuryAmt = (pool.totalAmount * pool.treasuryFee) / 10000;
            rewardAmount = pool.totalAmount - treasuryAmt;
        }
        // Lose option wins
        else if (result.bet == BetOption.Lose) {
            rewardBaseCalAmount = pool.loseAmount;
            treasuryAmt = (pool.totalAmount * pool.treasuryFee) / 10000;
            rewardAmount = pool.totalAmount - treasuryAmt;
        }
        // Tie 
        else if (result.bet == BetOption.Tie) {
            rewardBaseCalAmount = pool.tieAmount;
            treasuryAmt = (pool.totalAmount * pool.treasuryFee) / 10000;
            rewardAmount = pool.totalAmount - treasuryAmt;
        }
        // House wins
        else {
            rewardBaseCalAmount = 0;
            rewardAmount = 0;
            treasuryAmt = pool.totalAmount;
        }
        pool.rewardBaseCalAmount = rewardBaseCalAmount;
        pool.rewardAmount = rewardAmount;
        // Add to treasury
        pool.treasuryAmount += treasuryAmt;

        emit RewardsCalculated(_pid, rewardBaseCalAmount, rewardAmount, treasuryAmt);
    }

    function setMinBetAmount(uint256 _pid, uint256 _minBetAmount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if(_minBetAmount < 0) revert InvalidAmount();
        minBetAmount = _minBetAmount;

        emit NewMinBetAmount(_pid, minBetAmount);
    }

    function matchEnd(uint256 _pid, BetOption _bet) external onlyRole(DEFAULT_ADMIN_ROLE) {
        MatchResult storage result = matchResult[_pid];
        if(result.endMatch) revert AlreadyEndMatch();
        
        result.endMatch = true;
        result.bet = _bet;
        _calculateRewards(_pid);
        
        emit MatchEnded(_pid, _bet);
    }

    function claimable(uint256 _pid, address _user) public view returns (bool) {
        MatchResult storage result = matchResult[_pid];
        MatchInfo storage pool = matchInfo[_pid];
        BetInfo storage user = betInfo[_pid][_user];
        
        return 
            user.amount > 0 &&
            result.endMatch &&
            !user.claimed &&
            pool.totalAmount > 0 &&
            user.bet == result.bet;
    }

    function claim(uint256 _pid) external nonReentrant {
        MatchInfo storage pool = matchInfo[_pid];
        BetInfo storage user = betInfo[_pid][msg.sender];
        if(!claimable(_pid, msg.sender)) revert ClaimNotValid();
        
        uint256 reward = (user.amount * pool.rewardAmount) / pool.rewardBaseCalAmount;
        if (reward > 0) {
            IERC20(pool.stakedToken).safeTransfer(msg.sender, reward);
        }

        emit Claim(msg.sender, _pid, reward);
    }

    function claimTreasury(uint256 _pid) external nonReentrant onlyRole(DEFAULT_ADMIN_ROLE) {
        MatchInfo storage pool = matchInfo[_pid];
        uint256 currentTreasuryAmount = pool.treasuryAmount;
        pool.treasuryAmount = 0;
        if(currentTreasuryAmount > 0)
            IERC20(pool.stakedToken).safeTransfer(msg.sender, currentTreasuryAmount);
        
        emit ClaimTreasury(msg.sender, _pid, currentTreasuryAmount);
    }

    function getPlayerIds(uint256 _pid, address _user) external view returns (uint256[] memory) {
        BetInfo storage user = betInfo[_pid][_user];
        return user.playerIds;
    }

}

