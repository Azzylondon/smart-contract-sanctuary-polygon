import { PermissionControl } from "./PermissionControl.sol";
import "@rari-capital/solmate/src/utils/SafeTransferLib.sol";
import { DisplayERC20 } from "./DisplayERC20.sol";
import "@boringcrypto/boring-solidity/contracts/libraries/BoringRebase.sol";
import { MerkleProof } from "./libraries/MerkleProof.sol";
import "@boringcrypto/boring-solidity/contracts/BoringOwnable.sol";
import { BoringBatchable } from "@boringcrypto/boring-solidity/contracts/BoringBatchable.sol";

error InvalidProof();

contract TreasuryFund is DisplayERC20, BoringOwnable, BoringBatchable {
    using RebaseLibrary for Rebase;
    using SafeTransferLib for ERC20;

    /*//////////////////////////////////////////////////////////////
                                 STORAGE
    //////////////////////////////////////////////////////////////*/

    mapping (bytes32 => uint256) public withdrawn;

    uint256 public fundMaxSize = type(uint256).max;

    Rebase public totalAsset;

    PermissionControl public control;

    bytes32 public merkleRoot;

    string public ipfsHash;

    /*//////////////////////////////////////////////////////////////
                                 ERC20 logic
    //////////////////////////////////////////////////////////////*/

    function totalSupply() external view override returns (uint256) {
        return uint256(totalAsset.base);
    }

    /*//////////////////////////////////////////////////////////////
                                 EVENTS
    //////////////////////////////////////////////////////////////*/

    event Deposit(address indexed caller, uint256 assets, uint256 shares);

    event Withdraw(
        address indexed caller,
        uint256 assets,
        uint256 shares
    );

    event ReturnedFunds(address indexed lp, uint256 assets, uint256 shares);

    event LogUpdateMerkleRoot(bytes32 root, string hash_);

    event LogProfit(uint128 newTotal, uint128 amount);

    event LogLoss(uint128 newTotal, uint128 amount);

    event WithdrawRequest(address indexed sender, uint256 shares, uint256 time);

    event LogChangeMaxFundSize(uint256 newMaxFundSize);

    /*//////////////////////////////////////////////////////////////
                               IMMUTABLES
    //////////////////////////////////////////////////////////////*/

    ERC20 public immutable asset;

    constructor(
        address to,
        PermissionControl _control,
        ERC20 _asset,
        string memory _name,
        string memory _symbol
    ) DisplayERC20(_name, _symbol, _asset.decimals()) {

        // Set default roles
        emit OwnershipTransferred(owner, to);
        owner = to;
        control = _control;
        asset = _asset;
    }

    modifier onlyWhitelisted {
        require(control.whitelistedInvestors(msg.sender), "Not Whitelisted");
        _;
    }

    /*//////////////////////////////////////////////////////////////
                        DEPOSIT/WITHDRAWAL LOGIC
    //////////////////////////////////////////////////////////////*/

    function deposit(uint256 assets) public onlyWhitelisted returns (uint256 shares) {
        Rebase memory total = totalAsset;

        (total, shares) = total.add(assets, false);
        require(uint256(total.elastic) <= fundMaxSize, "FundMaxSize reached");

        // Need to transfer before minting or ERC777s could reenter.
        asset.safeTransferFrom(msg.sender, address(owner), assets);

        _mint(msg.sender, shares);
        totalAsset = total;

        emit Deposit(msg.sender, assets, shares);
    }

    function withdrawRequest(uint256 shares) public onlyWhitelisted {
        require(balanceOf[msg.sender] >= shares, "sender has less shares");

        // potential problem of double trigger, needs to be filtered out in offchain computing
        emit WithdrawRequest(msg.sender, shares, block.timestamp);
    }

    function withdraw(
        uint256 shares,
        uint256 sharesProof, 
        bytes32[] calldata merkleProof
    ) public onlyWhitelisted returns (uint256 assets) {

        require(shares + withdrawn[merkleRoot] <= sharesProof, "Already too much withdrawn");
        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(msg.sender, sharesProof));
        if (!MerkleProof.verify(merkleProof, merkleRoot, node)) revert InvalidProof();

        Rebase memory total = totalAsset;

        (total, assets) = total.sub(shares, false);

        _burn(msg.sender, shares);
        totalAsset = total;
        withdrawn[merkleRoot] += shares;

        emit Withdraw(msg.sender, assets, shares);

        asset.safeTransfer(msg.sender, assets);
    }

    function returnFunds(address holder) public onlyOwner {
        uint256 shares = balanceOf[holder];

        Rebase memory total = totalAsset;

        uint256 assets;

        (total, assets) = total.sub(shares, false);

        _burn(holder, shares);
        totalAsset = total;

        emit ReturnedFunds(holder, assets, shares);

        asset.safeTransfer(holder, assets);
    }

    function changeMaxFundSize(uint256 newMaxFundSize) public onlyOwner {
        fundMaxSize = newMaxFundSize;
        emit LogChangeMaxFundSize(newMaxFundSize);
    }

    function updateMerkleRoot(bytes32 root, string memory hash_) public onlyOwner {
        merkleRoot = root;
        ipfsHash = hash_;

        emit LogUpdateMerkleRoot(root, hash_);
    }

    function logProfitOrLoss (uint128 amount, bool profit, bool loss) public onlyOwner {
        Rebase memory total = totalAsset;

        if (profit) {
            total.elastic = total.elastic + amount;
            emit LogProfit(total.elastic, amount);
        } else if (loss) {
            total.elastic = total.elastic - amount;
            emit LogLoss(total.elastic, amount);
        }

        totalAsset = total;
    }

    function setInvestorWhitelisting(
        address operator,
        address investor,
        bool approved,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public {
        control.setInvestorWhitelisting (
            operator,
            investor,
            approved,
            deadline,
            v,
            r,
            s
        );
    }
}

