import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "./LendingPool/ILendingPool.sol";
import "./LendingPool/IVariableDebtToken.sol";
import "./LendingPool/IAaveIncentivesController.sol";
import "./swap/IUniswapV2Router.sol";

contract ClipAavePoolDAI is ERC20 {
    uint256 constant DEPOSIT_CYCLES = 20;
    uint256 constant LEVELING_DEPOSIT_CYCLES = 5;
    uint256 constant INITIAL_SHARE_PRICE = 10**9;

    uint256 public marketingTax;
    uint256 private minAmountToSwap;

    address public immutable aTokenAddress;
    address public immutable variableDebtTokenAddress;
    address public immutable aaveIncentivesController;
    address public immutable DAI_ADDRESS;
    address public immutable LendingPool;
    address public marketingWallet;
    IUniswapV2Router02 public immutable QuickSwap;

    constructor(
        address _LendingPool,
        address _DAI_ADDRESS,
        IUniswapV2Router02 _QuickSwap,
        address _marketingWallet,
        uint256 _marketingTax,
        uint256 _minAmountToSwap
    ) ERC20("Clip DAI", "cDAI") {
        LendingPool = _LendingPool;
        marketingTax = _marketingTax;
        minAmountToSwap = _minAmountToSwap;
        marketingWallet = _marketingWallet;

        DataTypes.ReserveData memory reserveData = ILendingPool(_LendingPool)
            .getReserveData(_DAI_ADDRESS);

        aTokenAddress = reserveData.aTokenAddress;
        variableDebtTokenAddress = reserveData.variableDebtTokenAddress;

        aaveIncentivesController = address(
            IVariableDebtToken(reserveData.variableDebtTokenAddress)
                .getIncentivesController()
        );
        DAI_ADDRESS = _DAI_ADDRESS;
        QuickSwap = _QuickSwap;

        IERC20(_DAI_ADDRESS).approve(_LendingPool, type(uint256).max);
        IERC20(_QuickSwap.WETH()).approve(
            address(_QuickSwap),
            type(uint256).max
        );
    }

    /*
     * Returns total amount of available ERC20 in deposit-credit pools
     * (max amount that we're able to withdraw)
     */
    function totalDAI() public view returns (uint256) {
        return (getDepositAmount() - getDebtAmount());
    }

    /*
     * Params
     * uint256 sharesAmount - Amount of shares to withdraw
     *
     * Transfers respective amount of DAI to user while burning his shares.
     */
    function withdraw(uint256 sharesAmount) external {
        require(sharesAmount > 0);
        require(balanceOf(msg.sender) >= sharesAmount, "Not enough shares");

        claimSwapAndDepositReward();

        uint256 deposit = getDepositAmount();
        uint256 debt = getDebtAmount();

        uint256 amount = sharesAmount * _pricePerShare(deposit, debt);

        _burn(msg.sender, sharesAmount);
        _withdraw(amount, deposit, debt);
    }

    /*
     * Params
     * uint256 DAI_amount - Amount of DAI to deposit
     *
     * Deposits requested DAI amount while giving the user respective amount of shares.
     */
    function deposit(uint256 DAI_amount) external {
        require(DAI_amount > 0);
        require(
            IERC20(DAI_ADDRESS).allowance(msg.sender, address(this)) >=
                DAI_amount,
            "Not enough allowance"
        );
        claimSwapAndDepositReward();

        uint256 deposit = getDepositAmount();
        uint256 debt = getDebtAmount();

        uint256 sharesAmount = DAI_amount / _pricePerShare(deposit, debt);

        IERC20(DAI_ADDRESS).transferFrom(msg.sender, address(this), DAI_amount);

        _deposit(DAI_amount, deposit, debt);
        _mint(msg.sender, sharesAmount);
    }

    /*
     * Function claims WETH reward and balances debt:deposit ratio to ltv
     * Does not send tokens to anyone
     * Designed to manually achieve perfect credit:deposit balance
     */
    function claimRewardAndBalance() public {
        claimSwapAndDepositReward();

        (, , , , uint256 ltv, ) = ILendingPool(LendingPool).getUserAccountData(
            address(this)
        );

        uint256 deposit = getDepositAmount();
        uint256 debt = getDebtAmount();

        if ((debt * 10_000) / deposit > (ltv * 1001) / 1000) {
            balanceByRepaying(0, deposit, debt);
        } else if ((debt * 10_000) / deposit < (ltv * 999) / 1000) {
            balanceByDepositing(DEPOSIT_CYCLES, deposit, debt);
        }
    }

    /*
     * Params
     * uint256 amount - Amount to deposit
     * uint256 deposit - Deposit amount
     * uint256 debt - Debt amount
     *
     * Deposits all available amount of ERC20
     * Balances deposit:debt ratio afterwards
     */
    function _deposit(
        uint256 amount,
        uint256 deposit,
        uint256 debt
    ) private {
        ILendingPool(LendingPool).deposit(
            DAI_ADDRESS,
            amount,
            address(this),
            0
        );
        deposit += amount;

        balanceByDepositing(DEPOSIT_CYCLES, deposit, debt);
    }

    /*
     * Params
     * uint256 amount - Amount to withdraw
     * uint256 deposit - Deposit amount
     * uint256 debt - Debt amount
     *
     * Balances deposit:debt ratio
     * Withdraws requested amount
     */
    function _withdraw(
        uint256 amount,
        uint256 deposit,
        uint256 debt
    ) private {
        balanceByRepaying(amount, deposit, debt);

        //sending user his amount
        ILendingPool(LendingPool).withdraw(DAI_ADDRESS, amount, msg.sender);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {}

    /*
     * Params
     * uint256 amount - Amount of tokens that needs to be withdrawn after balancing
     * uint256 deposit - Deposit amount
     * uint256 debt - Debt amount
     *
     * Manages deposit and debt balances in such way, that perfect {ltv} will be achieved
     * after withdrawing requested {amount} of tokens
     * Function is used before withdrawing or in case of high deposit:debt ratio
     */
    function balanceByRepaying(
        uint256 amount,
        uint256 deposit,
        uint256 debt
    ) private {
        (
            ,
            ,
            ,
            uint256 currentLiquidationThreshold,
            uint256 ltv,

        ) = ILendingPool(LendingPool).getUserAccountData(address(this));

        uint256 maxAmountToWithdraw = getMaxAmountToWithdraw(
            deposit,
            debt,
            currentLiquidationThreshold
        );
        uint256 equilibriumDelta = getEquilibriumDelta(
            deposit,
            debt,
            amount,
            ltv
        );

        while (debt > 0 && maxAmountToWithdraw < equilibriumDelta) {
            //withdrawing max amount
            ILendingPool(LendingPool).withdraw(
                DAI_ADDRESS,
                maxAmountToWithdraw,
                address(this)
            );

            uint256 amountToRepay = maxAmountToWithdraw;
            if (amountToRepay > debt) amountToRepay = debt;
            //repaying what we had withdrawn
            ILendingPool(LendingPool).repay(
                DAI_ADDRESS,
                amountToRepay,
                2,
                address(this)
            );

            deposit -= maxAmountToWithdraw;
            debt -= amountToRepay;

            maxAmountToWithdraw = getMaxAmountToWithdraw(
                deposit,
                debt,
                currentLiquidationThreshold
            );
            equilibriumDelta = getEquilibriumDelta(deposit, debt, amount, ltv);
        }

        //Balancing with equilibrium delta value
        if (debt > 0) {
            //withdrawing equilibrium amount
            ILendingPool(LendingPool).withdraw(
                DAI_ADDRESS,
                equilibriumDelta,
                address(this)
            );

            //repaying what we had withdrawn
            ILendingPool(LendingPool).repay(
                DAI_ADDRESS,
                equilibriumDelta,
                2,
                address(this)
            );
        }
    }

    /*
     * Params
     * uint256 cycles - Number of cycles to process. The more cycles - the better {ltv} ratio,
     *** but more gas will function consume
     * uint256 deposit - Deposit amount
     * uint256 debt - Debt amount
     *
     * Manages deposit and debt balances in such way, that perfect {ltv} will be achieved
     * Function is used after deposit or in case of low deposit:debt ratio
     */
    function balanceByDepositing(
        uint256 cycles,
        uint256 deposit,
        uint256 debt
    ) private {
        (, , , , uint256 ltv, ) = ILendingPool(LendingPool).getUserAccountData(
            address(this)
        );

        //max amount to borrow
        uint256 amountToDeposit = (deposit * ltv) / 10_000 - debt;

        for (uint256 i = 0; i < cycles; i++) {
            ILendingPool(LendingPool).borrow(
                DAI_ADDRESS,
                amountToDeposit,
                2,
                0,
                address(this)
            );

            ILendingPool(LendingPool).deposit(
                DAI_ADDRESS,
                amountToDeposit,
                address(this),
                0
            );
            //subtract 1000 because of rounding error
            amountToDeposit = (amountToDeposit * ltv) / 10000 - 1000;
        }
    }

    /*
     * Params
     * uint256 deposit - DAI deposit amount
     * uint256 debt - DAI debt amount
     * uint256 amountToWithdraw - Amount that needs to be withdrawn
     * uint256 ltv - Loan-to-Value ratio is basis points
     *
     * Function returns amount that needs to be withdraws from deposit and
     * repaid in debt to achieve perfect equilibrium according to Loan-to-Value ratio,
     * after specific amount will be withdrawn from deposit
     */
    function getEquilibriumDelta(
        uint256 deposit,
        uint256 debt,
        uint256 amountToWithdraw,
        uint256 ltv
    ) private pure returns (uint256) {
        return
            ((debt - ((deposit - amountToWithdraw) * ltv) / 10_000) * 10_000) /
            (10_000 - ltv);
    }

    /*
     * Params
     * uint256 deposit - DAI deposit amount
     * uint256 debt - DAI debt amount
     * uint256 currentLiquidationThreshold - Maximum ratio debt:deposit in basis points
     *
     * Function returns maximum amount we can withdraw while not exceeding currentLiquidationThreshold
     */
    function getMaxAmountToWithdraw(
        uint256 deposit,
        uint256 debt,
        uint256 currentLiquidationThreshold
    ) private pure returns (uint256) {
        uint256 depositToStay = (debt / currentLiquidationThreshold) * 10_000;
        return ((deposit - depositToStay) * 99) / 100;
    }

    /*
     * Function returns price (in DAI) per share
     */
    function pricePerShare() external view returns (uint256) {
        uint256 deposit = getDepositAmount();
        uint256 debt = getDebtAmount();
        return (deposit - debt) / totalSupply();
    }

    /*
     * Params
     * uint256 deposit - DAI deposit amount
     * uint256 debt - DAI debt amount
     *
     * Function returns price (in DAI) per share
     */
    function _pricePerShare(uint256 deposit, uint256 debt)
        private
        view
        returns (uint256)
    {
        if (deposit - debt == 0) return INITIAL_SHARE_PRICE;
        return (deposit - debt) / totalSupply();
    }

    /*
     * Function returns pool deposit amount
     */
    function getDepositAmount() private view returns (uint256) {
        return IERC20(aTokenAddress).balanceOf(address(this));
    }

    /*
     * Function returns pool credit amount
     */
    function getDebtAmount() private view returns (uint256) {
        return IERC20(variableDebtTokenAddress).balanceOf(address(this));
    }

    /*
     * Function claims WETH rewards, swaps them to DAI and deposits to lending pool
     */
    function claimSwapAndDepositReward() private {
        address[] memory assets = new address[](2);
        assets[0] = aTokenAddress;
        assets[1] = variableDebtTokenAddress;
        uint256 rewardBalance = IAaveIncentivesController(
            aaveIncentivesController
        ).getRewardsBalance(assets, address(this));

        if (rewardBalance >= minAmountToSwap) {
            claimRewardWETH(assets, rewardBalance);
            swapWETHtoDAI();

            ILendingPool(LendingPool).deposit(
                DAI_ADDRESS,
                IERC20(DAI_ADDRESS).balanceOf(address(this)),
                address(this),
                0
            );
        }
    }

    /*
     * Params
     * address[] memory assets - Array of deposit/credit assets
     * uint256 amount - Amount of reward to claim
     *
     * Function claims WETH reward
     */
    function claimRewardWETH(address[] memory assets, uint256 amount) private {
        IAaveIncentivesController(aaveIncentivesController).claimRewards(
            assets,
            amount,
            address(this)
        );
    }

    /*
     * Function swaps reward WETH to DAI
     */
    function swapWETHtoDAI() private {
        uint256 totalAmount = IERC20(QuickSwap.WETH()).balanceOf(address(this));
        if (totalAmount >= minAmountToSwap) {
            uint256 marketingAmount = (totalAmount * marketingTax) / 10_000;
            uint256 swapAmount = totalAmount - marketingAmount;

            IERC20(QuickSwap.WETH()).transfer(marketingWallet, marketingAmount);

            address[] memory path = new address[](2);
            path[0] = QuickSwap.WETH();
            path[1] = DAI_ADDRESS;

            QuickSwap.swapExactTokensForTokens(
                swapAmount,
                0,
                path,
                address(this),
                block.timestamp + 1200
            );
        }
    }
}

