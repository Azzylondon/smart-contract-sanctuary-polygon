import '@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol';
import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/security/PullPaymentUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol';

import './Drawing.sol';
import './TicketIndex.sol';
import './VRFConsumer.sol';


// This is in USD cents, so it's $1.50
uint constant BASE_TICKET_PRICE_USD = 150;

// ChainLink USD price feed on matic (8 decimals)
address constant USD_PRICE_FEED = 0xAB594600376Ec9fD91F8e885dADF0CE036862dE0;


contract Lottery is UUPSUpgradeable, OwnableUpgradeable, PausableUpgradeable,
    PullPaymentUpgradeable, ReentrancyGuardUpgradeable
{
  using AddressUpgradeable for address payable;
  using TicketIndex for uint64[][90];

  enum State {OPEN, DRAWING, DRAWN}

  VRFConsumer private _vrfConsumer;

  uint256 public baseTicketPrice;

  uint64 public currentRound;

  State public state;
  uint8[6] public numbers;

  address payable[] public playersByTicket;
  uint64[][90] public ticketsByNumber;

  event NewTicketPrice(uint indexed round, uint256 price);
  event Ticket(uint indexed round, address indexed player, uint8[] numbers);
  event VRFRequest(uint indexed round, uint256 requestId);
  event Draw(uint indexed round, uint8[6] numbers, uint256 currentBalance);
  event CloseRound(uint indexed round, uint64[5] numberOfWinningTickets, uint256[5] prizes);

  // Accept funds from ICO and possibly other sources in the future.
  receive() external payable {}

  function initialize(address vrfCoordinator) public initializer {
    __UUPSUpgradeable_init();
    __Ownable_init();
    __Pausable_init();
    __PullPayment_init();
    __ReentrancyGuard_init();
    _vrfConsumer = new VRFConsumer(vrfCoordinator);
    _updateTicketPrice();
    currentRound = 0;
    state = State.OPEN;
  }

  function _authorizeUpgrade(address newImplementation) internal override onlyOwner {}

  function _updateTicketPrice() private {
    AggregatorV3Interface priceFeed = AggregatorV3Interface(USD_PRICE_FEED);
    (, int256 price, , , ) = priceFeed.latestRoundData();
    baseTicketPrice = BASE_TICKET_PRICE_USD *
        uint256(10 ** (16 + priceFeed.decimals())) / uint256(price);
    emit NewTicketPrice(currentRound, baseTicketPrice);
  }

  function pause() public onlyOwner {
    _pause();
  }

  function unpause() public onlyOwner {
    _unpause();
  }

  function priceMultipliers() public pure returns (uint[20] memory) {
    return [
      uint(1),  // 6 numbers
      7,        // 7 numbers
      28,       // 8 numbers
      84,       // 9 numbers
      210,      // 10 numbers
      462,      // 11 numbers
      924,      // 12 numbers
      1716,     // 13 numbers
      3003,     // 14 numbers
      5005,     // 15 numbers
      8008,     // 16 numbers
      12376,    // 17 numbers
      18564,    // 18 numbers
      27132,    // 19 numbers
      38760,    // 20 numbers
      54264,    // 21 numbers
      74613,    // 22 numbers
      100947,   // 23 numbers
      134596,   // 24 numbers
      177100    // 25 numbers
    ];
  }

  function getTicketPrice(uint8[] calldata playerNumbers) public view returns (uint256) {
    require(state == State.OPEN, 'please wait for the next round');
    uint256[20] memory multipliers = priceMultipliers();
    require(playerNumbers.length >= 6, 'too few numbers');
    require(playerNumbers.length <= multipliers.length + 5, 'too many numbers');
    for (uint i = 0; i < playerNumbers.length; i++) {
      require(playerNumbers[i] > 0 && playerNumbers[i] <= 90, 'invalid numbers');
      for (uint j = i + 1; j < playerNumbers.length; j++) {
        require(playerNumbers[i] != playerNumbers[j], 'duplicate numbers');
      }
    }
    return baseTicketPrice * multipliers[playerNumbers.length - 6];
  }

  function buyTicket(uint8[] calldata playerNumbers) public payable whenNotPaused nonReentrant {
    uint256 ticketPrice = getTicketPrice(playerNumbers);
    require(msg.value == ticketPrice, 'incorrect value, please check the price of your ticket');
    uint64 ticketId = uint64(playersByTicket.length);
    playersByTicket.push(payable(msg.sender));
    for (uint i = 0; i < playerNumbers.length; i++) {
      ticketsByNumber[playerNumbers[i] - 1].push(ticketId);
    }
    emit Ticket(currentRound, msg.sender, playerNumbers);
    payable(owner()).sendValue(msg.value / 10);
  }

  function draw(uint256 vrfFee) public onlyOwner {
    require(state == State.OPEN, 'invalid state');
    state = State.DRAWING;
    uint256 vrfRequestId = uint256(_vrfConsumer.requestRandomness(vrfFee));
    emit VRFRequest(currentRound, vrfRequestId);
  }

  function fulfillRandomness(uint256 randomness) external whenNotPaused {
    require(msg.sender == address(_vrfConsumer), 'permission denied');
    require(state == State.DRAWING, 'invalid state');
    numbers = Drawing.sortNumbersByTicketCount(
        ticketsByNumber, Drawing.getRandomNumbersWithoutRepetitions(randomness));
    state = State.DRAWN;
    emit Draw(currentRound, numbers, address(this).balance);
  }

  function _getPrizes(uint64[][5] memory winners) private view returns (uint256[5] memory prizes) {
    uint256 balance = address(this).balance;
    uint256[5] memory shares = [
      uint256(400),  // 40.0% is distributed among tickets with 2 matches
      128,           // 12.8% is distributed among tickets with 3 matches
      42,            //  4.2% is distributed among tickets with 4 matches
      42,            //  4.2% is distributed among tickets with 5 matches
      174            // 17.4% is distributed among tickets with 6 matches
    ];
    for (uint i = 0; i < prizes.length; i++) {
      if (winners[i].length > 0) {
        prizes[i] = balance * shares[i] / (1000 * winners[i].length);
      } else {
        prizes[i] = 0;
      }
    }
  }

  function _reset() private {
    delete ticketsByNumber;
    delete playersByTicket;
    delete numbers;
    currentRound++;
    state = State.OPEN;
    _updateTicketPrice();
  }

  function closeRound() public onlyOwner {
    require(state == State.DRAWN, 'please call draw() first');
    uint64[][5] memory tickets = ticketsByNumber.findWinningTickets(numbers);
    uint256[5] memory prizes = _getPrizes(tickets);
    for (uint i = 0; i < tickets.length; i++) {
      for (uint j = 0; j < tickets[i].length; j++) {
        _asyncTransfer(playersByTicket[tickets[i][j]], prizes[i]);
      }
    }
    emit CloseRound(currentRound, [
      uint64(tickets[0].length),
      uint64(tickets[1].length),
      uint64(tickets[2].length),
      uint64(tickets[3].length),
      uint64(tickets[4].length)
    ], prizes);
    delete tickets;
    _reset();
  }
}

