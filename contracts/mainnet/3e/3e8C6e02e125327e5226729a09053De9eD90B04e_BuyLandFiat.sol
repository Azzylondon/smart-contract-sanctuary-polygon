pragma solidity ^0.8.9;

import "./BuyLand.sol";
import "./NFTTresor.sol";

contract BuyLandFiat is BuyLand {
    using ECDSA for bytes32;

    string public name = "BuyLand Fiat";
    string public version = "1.0";

    mapping (address => bool) public providers;
    NFTTresor nftTresor;

    event ProviderGranted(address provider, bool grant);
    event NftTresorChanged(address oldTresor, address newTresor);
    event StoreToNftTresor(uint256 tokenId, uint128 userId, address nftTresor);

    constructor(
        address _merchant,
        address _nftAddress,
        address _ownerVaultAddress,
        address _commissionVaultAddress,
        address _charityVaultAddress,
        uint16 _charityPercent,
        address _provider,
        address _nftTresor
    ) BuyLand(
        _merchant,
        _nftAddress,
        _ownerVaultAddress,
        _commissionVaultAddress,
        _charityVaultAddress,
        _charityPercent
    ) {
        _setProvider(_provider, true);
        _setNftTresor(_nftTresor);
    }

    /**
     * @dev Buy land for a user by a provider
     * @param signature Signature
     * @param message Message to check: (to, tokenId, fullPrice, discountPercent, commissionPercent, userId)
     */
    function buyLand(bytes memory message, bytes memory signature)
        whenNotPaused
        external
        override
        payable
    {
        (
            address to,
            uint256 tokenId,
            uint256 fullPrice,
            uint16 discountPercent,
            uint16 commissionPercent,
            uint128 userId
        ) = _decodeMessageWuser(message, signature);

        require(providers[msg.sender] == true, "BuyLand: Must call by a provider");

        // If the buyer has no address we mint the token to the tresor
        address _to = to == address(0) ? address(nftTresor) : to;

        _buyLand(_to, tokenId, fullPrice, discountPercent, commissionPercent);

        if (_to == address(nftTresor)) {
            nftTresor.storeToken(tokenId, userId);
            emit StoreToNftTresor(tokenId, userId, address(nftTresor));
        }

    }

    function _decodeMessageWuser(bytes memory message, bytes memory signature)
        private
        view
        returns (
            address to,
            uint256 tokenId,
            uint256 fullPrice,
            uint16 discountPercent,
            uint16 commissionPercent,
            uint128 userId
        )
    {
        (
            address _to,
            uint256 _tokenId,
            uint256 _fullPrice,
            uint16 _discountPercent,
            uint16 _commissionPercent,
            uint128 _userId
        ) = abi.decode(message, (address, uint256, uint256, uint16, uint16, uint128));
        
        address recovered = keccak256(
            abi.encodePacked(_to, _tokenId, _fullPrice, _discountPercent, _commissionPercent, _userId)
        ).toEthSignedMessageHash().recover(signature);

        require(recovered == merchant, "BuyLand: invalid merchant signature");
        return (_to, _tokenId, _fullPrice, _discountPercent, _commissionPercent, _userId);
    }

    function setProvider(address _provider, bool _grant) onlyOwner external {
        _setProvider(_provider, _grant);
    }

    function _setProvider(address _provider, bool _grant) internal {
        require(address(0) != _provider, "BuyLand: Provider cannot be the zero address");
        providers[_provider] = _grant;
        emit ProviderGranted(_provider, _grant);
    }

    function nftTresorAddress() public view returns (address) {
        return address(nftTresor);
    }

    function setNftTresor(address _nftTresor) onlyOwner external {
        _setNftTresor(_nftTresor);
    }

    function _setNftTresor(address _nftTresor) private {
        // no need to check if it's an ERC721Receiver, safeMint will do
        require(_nftTresor != address(0), "BuyLand: NFT Tresor cannot be the zero address");
        address oldTresor = address(nftTresor);
        nftTresor = NFTTresor(_nftTresor);
        emit NftTresorChanged(oldTresor, _nftTresor);
    }
}

