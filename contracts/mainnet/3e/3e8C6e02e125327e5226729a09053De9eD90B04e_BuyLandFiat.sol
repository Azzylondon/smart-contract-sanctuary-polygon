import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol";
import "./ne-nft/NFT_v3.sol";

contract NFTTresor is OwnableUpgradeable, IERC721ReceiverUpgradeable {
    using ECDSA for bytes32;

    NFT_v3 nft;
    address private _merchant;
    mapping (address => bool) private _operators;

    mapping (uint256 => uint128) private _tokenUsers;
    mapping (uint128 => uint256) private _balances;

    // Array with all token ids, used for enumeration
    uint256[] private _allStored;
    // Mapping from token id to position in the allStored array
    mapping(uint256 => uint256) private _allStoredIndex;
    // Mapping from owner to list of owned token IDs
    mapping(uint128 => mapping(uint256 => uint256)) private _ownedTokens;
    // Mapping from token ID to index of the owner tokens list
    mapping(uint256 => uint256) private _ownedTokensIndex;

    event TokenStored(uint256 tokenId, uint128 userId);
    event TokenClaimed(uint256 tokenId, address tokenOwner, uint128 userId);
    event MerchantChanged(address oldMerchant, address newMerchant);
    event OperatorGranted(address operator, bool grant);
    event TokenReceived(uint256 tokenId, bytes data);

    function initialize(
        address _nftAddress,
        address _merchantAddress
        ) public initializer
    {
        __Ownable_init();
        _setMerchant(_merchantAddress);
        nft = NFT_v3(_nftAddress);
    }

    function storeToken(uint256 tokenId, uint128 userId) external {
        require(_operators[msg.sender] == true, "NFTTresor: Only a granted address can store NFT");
        require(_tokenUsers[tokenId] == 0, "NFTTresor: Token already stored");
        require(nft.ownerOf(tokenId) == address(this), "NFTTresor: Token not transferred to tresor");
        require(userId > 0, "NFTTresor: UserId cannot be zero"); // Zero means that the token is not stored to anyone

        _addTokenToAllStoredEnumeration(tokenId);
        _addTokenToUserEnumeration(userId, tokenId);
        _tokenUsers[tokenId] = userId;
        _balances[userId] += 1;

        emit TokenStored(tokenId, userId);
    }

    function claimToken(uint256 tokenId, uint128 userId, bytes memory sig) external {
        require(userId > 0, "NFTTresor: UserId cannot be zero"); // Zero means that the token is not stored to anyone
        require(_tokenUsers[tokenId] == userId, "NFTTresor: Token id not stored to user");

        address recovered = keccak256(
            abi.encodePacked(tokenId, userId, msg.sender)
        ).toEthSignedMessageHash().recover(sig);

        require(recovered == _merchant, "NFTTresor: Invalid merchant signature");

        _removeTokenToAllStoredEnumeration(tokenId);
        _removeTokenFromUserEnumeration(userId, tokenId);
        _tokenUsers[tokenId] = 0;
        _balances[userId] -= 1;

        nft.safeTransferFrom(address(this), msg.sender, tokenId);
        nft.setFirstOwner(tokenId, msg.sender);
        emit TokenClaimed(tokenId, msg.sender, userId);
    }

    function transferNotStoredToken(address to, uint256 tokenId) onlyOwner public {
        require(_tokenUsers[tokenId] == 0, "NFTTresor: Token is stored");
        nft.safeTransferFrom(address(this), to, tokenId);
    }

    function nftAddress() public view returns (address) {
        return address(nft);
    }

    function tokenUser(uint256 tokenId) public view returns (uint128) {
        uint128 userId = _tokenUsers[tokenId];
        require(userId != 0, "NFTTresor: Token is not stored");
        return userId;
    }

    function balanceOf(uint128 userId) public view returns (uint256) {
        return _balances[userId];
    }

    function totalStored() public view returns (uint256) {
        return _allStored.length;
    }

    function storedTokenByIndex(uint256 index) public view returns (uint256) {
        require(index < totalStored(), "NFTTresor: global index out of bounds");
        return _allStored[index];
    }

    function storedTokenOfUserByIndex(uint128 userId, uint256 index) public view returns (uint256) {
        require(index < balanceOf(userId), "NFTTresor: user index out of bounds");
        return _ownedTokens[userId][index];
    }

    function isOperator(address _operator) public view returns (bool) {
        return _operators[_operator];
    }

    function merchant() public view returns (address) {
        return _merchant;
    }

    function setMerchant(address newMerchant) onlyOwner public {
        _setMerchant(newMerchant);
    }

    function _setMerchant(address newMerchant) private {
        require(address(0) != newMerchant, "NFTTresor: Merchant can't be the zero address");
        address oldMerchant = _merchant;
        _merchant = newMerchant;
        emit MerchantChanged(oldMerchant, newMerchant);
    }

    function setOperator(address _operator, bool _grant) onlyOwner public {
        _operators[_operator] = _grant;
        emit OperatorGranted(_operator, _grant);
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external override returns (bytes4)
    {
        require(from == address(0), "NFTTresor: Only a newly minted token can be stored in the tresor");
        require(_operators[operator] == true, "NFTTresor: Only an operator can mint token to this contract");
        require(nft.ownerOf(tokenId) == address(this), "NFTTresor: Accept NFTs only from the NFT contract");
        emit TokenReceived(tokenId, data);
        return IERC721ReceiverUpgradeable.onERC721Received.selector;
    }

    function _addTokenToAllStoredEnumeration(uint256 tokenId) private {
        _allStoredIndex[tokenId] = _allStored.length;
        _allStored.push(tokenId);
    }

    function _addTokenToUserEnumeration(uint128 userId, uint256 tokenId) private {
        uint256 length = balanceOf(userId);
        _ownedTokens[userId][length] = tokenId;
        _ownedTokensIndex[tokenId] = length;
    }

    function _removeTokenToAllStoredEnumeration(uint256 tokenId) private {
        uint256 lastTokenIndex = _allStored.length - 1;
        uint256 tokenIndex = _allStoredIndex[tokenId];
        
        uint256 lastTokenId = _allStored[lastTokenIndex];

        _allStored[tokenIndex] = lastTokenId;
        _allStoredIndex[lastTokenId] = tokenIndex;

        delete _allStoredIndex[tokenId];
        _allStored.pop();
    }

    function _removeTokenFromUserEnumeration(uint128 userId, uint256 tokenId) private {
        uint256 lastTokenIndex = balanceOf(userId) - 1;
        uint256 tokenIndex = _ownedTokensIndex[tokenId];

        if (tokenIndex != lastTokenIndex) {
            uint256 lastTokenId = _ownedTokens[userId][lastTokenIndex];

            _ownedTokens[userId][tokenIndex] = lastTokenId;
            _ownedTokensIndex[lastTokenId] = tokenIndex;
        }

        delete _ownedTokensIndex[tokenId];
        delete _ownedTokens[userId][lastTokenIndex];
    }

    function implementationVersion() public pure returns (uint256) {
        return 1;
    }
}

