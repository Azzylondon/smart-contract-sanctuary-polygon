contract UltramaticRebaser is Ultramatic {
	using SafeMath for uint256;

    string public _name = "Ultramatic Rebaser";

	uint256 constant public PROJECT_TAX = 200;
	uint256 constant public PERCENT_DIVIDER = 1000;
	uint256 constant public TIME_STEP = 1 days;

    uint256 public percentDaily;
    uint256 public totalValueLocked;

	struct Deposit {
		uint256 amount;
		uint256 start;
	}
    
	struct User {
        Deposit[] deposits;
        uint256 depositsTotal;
	}

	mapping (address => User) internal users;

	address payable public projectTaxWallet1;
	address payable public projectTaxWallet2;

    constructor(address _projectTaxWallet1, address _projectTaxWallet2) {
		projectTaxWallet1 = payable(_projectTaxWallet1);
		projectTaxWallet2 = payable(_projectTaxWallet2);

        percentDaily = 100;
    }

    function deposit(uint256 amount) public {
        //deposit tax
        uint256 tax = amount.mul(PROJECT_TAX).div(PERCENT_DIVIDER);

        //transfer deposit amount
        address from = _msgSender();
        _burn(from, amount);
        _mint(projectTaxWallet1, tax);

        //get user
        User storage user = users[from];

        //get net
        uint256 netAmount = amount.sub(tax);

        //log deposit
        user.deposits.push(Deposit(netAmount, block.timestamp));
        user.depositsTotal = user.depositsTotal.add(netAmount);

        //log TVL
        totalValueLocked = totalValueLocked.add(netAmount);
    }

    function withdraw() public {
        address userAddress = _msgSender();

        //get user
        User storage user = users[userAddress];
        require(user.depositsTotal > 0, "User has no deposits.");

        //get rebase amount
        uint256 rebasedAmount = getUserRebasedAmount(userAddress);

        //withdraw tax
        uint256 tax = rebasedAmount.mul(PROJECT_TAX).div(PERCENT_DIVIDER);
        uint256 net = rebasedAmount.sub(tax);

        _mint(userAddress, net);
        _mint(projectTaxWallet2, tax);

        //log TVL
        totalValueLocked = totalValueLocked.sub(user.depositsTotal);

        //reset 
        user.depositsTotal = 0;
        delete user.deposits;
    }

    function getUserRebasedAmount(address userAddress) public view returns (uint256 rebasedAmount) {
        User storage user = users[userAddress];

        uint256 rebases;
        for (uint256 i = 0; i < user.deposits.length; i++) {
            uint256 unixSinceStart = block.timestamp.sub(user.deposits[i].start);
            uint256 daysSinceStart = unixSinceStart.div(TIME_STEP);

            for (uint256 d = 0; d < daysSinceStart; d++) {
                rebases = rebases.add(user.deposits[i].amount.mul(percentDaily).div(PERCENT_DIVIDER));
            }
        }

        rebasedAmount = user.depositsTotal.add(rebases);
    }

    function getUserDepositsTotal(address userAddress) public view returns (uint256) {
        return users[userAddress].depositsTotal;
    }

    function setPercentDaily(uint256 percent) public onlyOwner {
        percentDaily = percent;
    }
}

library SafeMath {

    function add(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a + b;
        require(c >= a, "SafeMath: addition overflow");

        return c;
    }

    function sub(uint256 a, uint256 b) internal pure returns (uint256) {
        require(b <= a, "SafeMath: subtraction overflow");
        uint256 c = a - b;

        return c;
    }

    function mul(uint256 a, uint256 b) internal pure returns (uint256) {
        if (a == 0) {
            return 0;
        }

        uint256 c = a * b;
        require(c / a == b, "SafeMath: multiplication overflow");

        return c;
    }

    function div(uint256 a, uint256 b) internal pure returns (uint256) {
        require(b > 0, "SafeMath: division by zero");
        uint256 c = a / b;

        return c;
    }
}