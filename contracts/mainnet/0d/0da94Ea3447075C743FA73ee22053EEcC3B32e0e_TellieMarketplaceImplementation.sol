/// @title Tellie NFT Listing and Sales contract
///
/// This is a non-escrow minting and seller contract
/// that allows users to list NFTs for sale for a fixed price in USD.
/// Incoming currency is the chain's native token. Outgoing is USDC to seller and
/// royalty recipients.
///
/// @dev listings have no expiration date
///
/// Lots of inspiration from manifold.xyz and showtime.io
contract TellieMarketplaceImplementation is
    PausableUpgradeable,
    AdminControlUpgradeable,
    ReentrancyGuardUpgradeable,
    UUPSUpgradeable,
    BaseRelayRecipient
{
    using SafeMathUpgradeable for uint256;
    using SafeMathUpgradeable for uint8;
    using SafeMathUpgradeable for uint80;
    using MathUpgradeable for uint8;
    using MathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Extended;
    using AddressUpgradeable for address;
    using AddressUpgradeable for address payable;

    IUsdSwapUtil swapUtil;

    TieredTakeRateImplementation internal _takeRateContract;
    TellieAccountsReceivableImplementation internal _accountsReceivableContract;
    Tellie1155Collection internal _erc1155Contract;

    mapping(uint256 => Listing) public _listings;
    uint256 internal _listingCounter;

    // Admin wallet
    address private _adminWallet;

    uint256 usdcDecimals = 10**4;

    struct BuyArguments {
        uint256 listingId;
        uint256 tokenId;
        uint256 quantity;
        uint8 tier;
        address buyer;
        uint16 poolFee;
    }

    struct SalesInfo {
        uint256 availableQuantity;
        uint256 totalPrice;
        uint256 takeRateAmount;
        uint256[] royaltyAmounts;
        uint256 totalFees;
        uint256 buyerFee;
        uint256 revenue;
        uint256 ethPriceInUsd;
        uint256 ethTotal;
    }

    struct Listing {
        uint256 tokenId;
        uint256 quantity;
        uint256 priceInUsd;
        address seller;
        bool splitFees;
    }

    /** Events */
    event ListingCreated(uint256 indexed listingId, address indexed seller, uint256 indexed tokenId);
    event ListingDeleted(uint256 indexed listingId, address indexed seller);
    event SaleCompleted(
        uint256 indexed listingId,
        address indexed seller,
        address indexed buyer,
        uint256 quantity,
        uint8 tier
    );
    event SalesInfoEvent(
        uint256 availableQuantity,
        uint256 totalPrice,
        uint256 takeRateAmount,
        uint256[] royaltyAmounts,
        uint256 totalFees,
        uint256 buyerFee,
        uint256 revenue,
        uint256 ethPriceInUsd,
        uint256 ethTotal
    );

    /** Custom Errors */
    error NotListingSellerOrAdmin(uint256 listingId);
    error ListingDoesNotExist(uint256 listingId);
    error NotContractAddress(address currency);
    error InvalidContract(address contractAddress);
    error TokenIdMismatch(uint256 listedTokenId);
    event RoyaltyPaid(address indexed receiver, IERC20Upgradeable currency, uint256 amount);
    event TakeRatePaid(address indexed receiver, IERC20Upgradeable currency, uint256 amount);
    error AvailableQuantityInsuficient(uint256 availableQuantity);
    error SellerDoesNotOwnToken(uint256 tokenId, uint256 quantity);
    error CanNotSellToSelf();
    error NullQuantity();
    error NullAddress();

    /// ============ Modifiers ============

    modifier onlySellerOrAdmin(uint256 _id) {
        if (_listings[_id].seller != _msgSender() && !isAdmin(_msgSender())) revert NotListingSellerOrAdmin(_id);
        _;
    }

    modifier listingExists(uint256 _id) {
        if (_listings[_id].seller == address(0)) revert ListingDoesNotExist(_id);
        _;
    }

    modifier hasQuantity(uint256 quantity) {
        if (quantity == 0) revert NullQuantity();
        _;
    }

    /**
     * Initializer
     */
    function initialize(
        address takeRateAddress,
        address accountsReceivableAddress,
        address ercAddress,
        address _trustedForwarder,
        address adminWallet,
        address payable swapUtilAddress
    ) public initializer {
        __Ownable_init();
        __Pausable_init();
        __Context_init();
        __ReentrancyGuard_init();
        __UUPSUpgradeable_init();

        _listingCounter = 1; // start at 1 so that we can use 0 to represent an invalid listing

        if (!swapUtilAddress.isContract()) revert InvalidContract(swapUtilAddress);
        swapUtil = IUsdSwapUtil(swapUtilAddress);

        if (!takeRateAddress.isContract()) revert InvalidContract(takeRateAddress);
        _takeRateContract = TieredTakeRateImplementation(takeRateAddress);

        if (!accountsReceivableAddress.isContract()) revert InvalidContract(accountsReceivableAddress);
        _accountsReceivableContract = TellieAccountsReceivableImplementation(accountsReceivableAddress);

        if (!ercAddress.isContract()) revert InvalidContract(ercAddress);
        _erc1155Contract = Tellie1155Collection(ercAddress);

        // If we deploy the wallet with the adminWallet
        if (adminWallet != address(0x0)) {
            _adminWallet = adminWallet;
            approveAdmin(adminWallet);
        }

        if (_trustedForwarder != address(0x0)) {
            BaseRelayRecipient._setTrustedForwarder(_trustedForwarder);
        }
    }

    /**
     * @dev See {UUPSUpgradeable-_authorizeUpgrade}
     */
    function _authorizeUpgrade(address) internal override adminRequired {}

    /// @notice `setApprovalForAll` on `_erc1155Contract` before calling
    function listForSale(
        uint256 tokenId,
        uint256 priceInUsd, // USD in cents, e.g., 1 == $.01, 10000 == $100.00
        uint256 quantity,
        address _seller,
        bool splitFees
    ) public whenNotPaused hasQuantity(quantity) returns (uint256 listingId) {
        address seller = _msgSender();
        // Allow an admin to pass in a seller id to create a listing on behalf of token owner
        if (_seller != address(0x0)) {
            require(isAdmin(_msgSender()), "Only admins can create listings on behalf of token owners.");
            seller = _seller;
        }

        if (_erc1155Contract.balanceOf(seller, tokenId) < quantity) revert SellerDoesNotOwnToken(tokenId, quantity);

        Listing memory listing = Listing({
            tokenId: tokenId,
            quantity: quantity,
            priceInUsd: priceInUsd,
            seller: seller,
            splitFees: splitFees
        });

        listingId = _listingCounter;
        _listings[listingId] = listing;

        // no need to check for overflows here
        unchecked {
            _listingCounter++;
        }

        emit ListingCreated(listingId, seller, tokenId);
    }

    /// @notice cancel an active sale
    function cancelSale(uint256 listingId) external listingExists(listingId) onlySellerOrAdmin(listingId) {
        delete _listings[listingId];
        emit ListingDeleted(listingId, _msgSender());
    }

    /// @notice the seller may own fewer NFTs than the listed quantity
    function availableForSale(uint256 _listingId) public view listingExists(_listingId) returns (uint256) {
        Listing memory listing = _listings[_listingId];
        return MathUpgradeable.min(_erc1155Contract.balanceOf(listing.seller, listing.tokenId), listing.quantity);
    }

    // @dev: Purchases occur through the chain's native token and are paid out as USDC
    function buy(BuyArguments memory buyArguments)
        public
        payable
        whenNotPaused
        hasQuantity(buyArguments.quantity)
        listingExists(buyArguments.listingId)
    {
        if (buyArguments.buyer == address(0)) revert NullAddress();

        Listing memory listing = _listings[buyArguments.listingId];

        // to prevent issues with block reorgs, we need to make sure that the expectations of the buyer (tokenId,
        // price and currency) match with the listing
        if (listing.tokenId != buyArguments.tokenId) revert TokenIdMismatch(listing.tokenId);
        if (buyArguments.buyer == listing.seller) revert CanNotSellToSelf();

        SalesInfo memory salesInfo;

        salesInfo.availableQuantity = availableForSale(buyArguments.listingId);
        if (buyArguments.quantity > salesInfo.availableQuantity)
            revert AvailableQuantityInsuficient(salesInfo.availableQuantity);

        // Convert USD to USDC for all of the calculations
        salesInfo.totalPrice = SafeMath.mul(listing.priceInUsd.mul(usdcDecimals), buyArguments.quantity);
        salesInfo.takeRateAmount = TieredTakeRateImplementation(_takeRateContract).getTakeAmount(
            buyArguments.tier,
            salesInfo.totalPrice
        );
        (address payable[] memory addresses, uint256[] memory royaltyBPSs) = _erc1155Contract.getRoyalties(
            buyArguments.tokenId
        );

        // Sum royalty amounts and take rate to arrive at total fees
        salesInfo.totalFees = salesInfo.takeRateAmount;
        salesInfo.royaltyAmounts = new uint256[](royaltyBPSs.length);
        for (uint256 x = 0; x < royaltyBPSs.length; x++) {
            // Calculate royalties. 10000 is considered 100%.
            salesInfo.royaltyAmounts[x] = SafeMath.mul(salesInfo.totalPrice, royaltyBPSs[x]).div(100_00);
            salesInfo.totalFees = salesInfo.totalFees.add(salesInfo.royaltyAmounts[x]);
        }

        salesInfo.buyerFee = listing.splitFees == true ? SafeMath.div(salesInfo.takeRateAmount, 2) : 0;

        // Now that we've calculated the total price and fees,
        // swap the native token for USDC and send to this contract
        // for redistribution to seller and royalty recipients.
        // This also refunds any ether (or matic) to the buyer left over from the swap
        IUsdSwapUtil.EthSwapInfo memory ethSwapInfo = swapUtil.swapEthForUsdc{ value: msg.value }(
            salesInfo.totalPrice.add(salesInfo.buyerFee),
            buyArguments.poolFee
        );
        IERC20Extended USDC = IERC20Extended(swapUtil.getCurrency("USDC").currencyAddress);

        updateListing(buyArguments.listingId, SafeMath.sub(salesInfo.availableQuantity, buyArguments.quantity));

        // Send take rate fee to Tellie
        if (salesInfo.takeRateAmount > 0) {
            emit TakeRatePaid(_accountsReceivableContract.getAccount(0), USDC, salesInfo.takeRateAmount);
            USDC.transfer(_accountsReceivableContract.getAccount(0), salesInfo.takeRateAmount);
        }

        // Send royalties to addresses
        for (uint256 y = 0; y < salesInfo.royaltyAmounts.length; y++) {
            if (salesInfo.royaltyAmounts[y] > 0) {
                emit RoyaltyPaid(addresses[y], USDC, salesInfo.royaltyAmounts[y]);
                USDC.transfer(addresses[y], salesInfo.royaltyAmounts[y]);
            }
        }

        // Substract fees from sales total
        salesInfo.revenue = SafeMath.sub(
            salesInfo.totalPrice,
            listing.splitFees == true ? salesInfo.totalFees.sub(salesInfo.buyerFee) : salesInfo.totalFees
        );

        // The total fees are deducted from the price paid by the buyer and sent to the seller
        USDC.transfer(listing.seller, salesInfo.revenue);

        // Transfer the NFTs from the seller to the buyer
        _erc1155Contract.safeTransferFrom(
            listing.seller,
            buyArguments.buyer,
            listing.tokenId,
            buyArguments.quantity,
            ""
        );

        emit SaleCompleted(
            buyArguments.listingId,
            listing.seller,
            buyArguments.buyer,
            buyArguments.quantity,
            buyArguments.tier
        );
        emit SalesInfoEvent(
            salesInfo.availableQuantity,
            salesInfo.totalPrice,
            salesInfo.takeRateAmount,
            salesInfo.royaltyAmounts,
            salesInfo.totalFees,
            salesInfo.buyerFee,
            salesInfo.revenue,
            ethSwapInfo.ethPriceInUsd,
            ethSwapInfo.ethTotal
        );
    }

    /// @notice update the listing with the remaining quantity, or delete it if newQuantity is zero
    function updateListing(uint256 listingId, uint256 newQuantity) internal {
        if (newQuantity == 0) {
            address seller = _listings[listingId].seller;
            delete _listings[listingId];
            emit ListingDeleted(listingId, seller);
        } else {
            _listings[listingId].quantity = newQuantity;
        }
    }

    function getListing(uint256 listingId) public view returns (Listing memory listing) {
        return _listings[listingId];
    }

    function getListings(uint256[] memory listingIds) public view returns (Listing[] memory listing) {
        Listing[] memory _foundListings = new Listing[](listingIds.length);

        for (uint256 x = 0; x < listingIds.length; x++) {
            _foundListings[x] = _listings[listingIds[x]];
        }

        return _foundListings;
    }

    function getAllListings() public view returns (Listing[] memory listing) {
        uint256[] memory validIndexes = new uint256[](_listingCounter);
        uint256 numValid = 0;
        for (uint256 x = 0; x < _listingCounter; x++) {
            if (_listings[x].seller != address(0)) {
                validIndexes[x] = x;
                unchecked {
                    numValid++;
                }
            } else {
                validIndexes[x] = 0;
            }
        }

        Listing[] memory _foundListings = new Listing[](numValid);
        uint256 count = 0;
        for (uint256 x = 0; x < validIndexes.length; x++) {
            if (validIndexes[x] != 0) {
                _foundListings[count] = _listings[validIndexes[x]];
                unchecked {
                    count++;
                }
            }
        }

        return _foundListings;
    }

    /// @notice pause the contract
    function pause() external whenNotPaused adminRequired {
        _pause();
    }

    /// @notice unpause the contract
    function unpause() external whenPaused adminRequired {
        _unpause();
    }

    /**
     * Trusted Forwarder methods
     */

    function _msgSender() internal view override(ContextUpgradeable, BaseRelayRecipient) returns (address) {
        return BaseRelayRecipient._msgSender();
    }

    function _msgData()
        internal
        view
        virtual
        override(ContextUpgradeable, BaseRelayRecipient)
        returns (bytes calldata ret)
    {
        return BaseRelayRecipient._msgData();
    }

    function setTrustedForwarder(address _forwarder) public virtual adminRequired {
        BaseRelayRecipient._setTrustedForwarder(_forwarder);
    }

    function versionRecipient() external pure override returns (string memory) {
        return "1";
    }
}

