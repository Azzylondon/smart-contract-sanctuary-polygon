/**
 * This utility converts USD to token and will swap tokens with the equivalent USD out
 */

contract UsdSwapUtilImplementation is UUPSUpgradeable, AdminControlUpgradeable, IUsdSwapUtil {
    using SafeMathUpgradeable for uint8;
    using SafeMathUpgradeable for uint80;
    using MathUpgradeable for uint8;
    using MathUpgradeable for uint256;
    using SafeMathUpgradeable for uint256;

    error CurrencyNotFound(string currency);

    IUniswapRouter internal swapRouter;

    AggregatorV3Interface internal wethPriceFeed;
    AggregatorV3Interface internal usdcPriceFeed;

    string[] internal currencies;
    mapping(string => Currency) internal currencyMap;

    function initialize(
        IUniswapRouter _swapRouter,
        string[] memory _currencies,
        address[] memory _addresses,
        AggregatorV3Interface[] memory _priceFeeds
    ) public initializer {
        __UUPSUpgradeable_init();
        __Ownable_init();
        swapRouter = _swapRouter;
        setCurrencies(_currencies, _addresses, _priceFeeds);
    }

    function getCurrencies() public view returns (Currency[] memory) {
        Currency[] memory allCurrencies = new Currency[](currencies.length);
        for (uint16 x = 0; x < currencies.length; x++) {
            allCurrencies[x] = currencyMap[currencies[x]];
        }
        return allCurrencies;
    }

    function getCurrency(string memory currencyKey) public view returns (Currency memory) {
        Currency memory currency = currencyMap[currencyKey];
        if (currency.currencyAddress == address(0x0)) {
            revert CurrencyNotFound(currencyKey);
        }
        return currency;
    }

    function setCurrencies(
        string[] memory _currencies,
        address[] memory _addresses,
        AggregatorV3Interface[] memory _priceFeeds
    ) public adminRequired {
        for (uint16 x = 0; x < _currencies.length; x++) {
            currencies.push(_currencies[x]);
            currencyMap[_currencies[x]] = Currency({
                name: _currencies[x],
                feed: _priceFeeds[x],
                currencyAddress: _addresses[x]
            });
        }
    }

    function deleteCurrency(string memory currencyKey) public adminRequired {
        for (uint16 x = 0; x < currencies.length; x++) {
            if (keccak256(abi.encodePacked(currencies[x])) == keccak256(abi.encodePacked(currencyKey))) {
                currencies[x] = currencies[currencies.length - 1];
                currencies.pop();
                delete currencyMap[currencyKey];
            }
        }
    }

    function swapEthForUsdc(uint256 priceInUsdc, uint16 poolFee)
        public
        payable
        returns (EthSwapInfo memory ethSwapInfo)
    {
        require(msg.value > 0, "Must pass non 0 ETH amount");

        Currency memory currencyIn = getCurrency("WETH");
        Currency memory currencyOut = getCurrency("USDC");

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams({
            tokenIn: currencyIn.currencyAddress,
            tokenOut: currencyOut.currencyAddress,
            fee: poolFee,
            recipient: msg.sender,
            deadline: block.timestamp,
            amountOut: priceInUsdc,
            amountInMaximum: msg.value,
            sqrtPriceLimitX96: 0
        });

        // amountIn in the actual amount swapped vs how much we supplied
        uint256 amountIn = swapRouter.exactOutputSingle{ value: msg.value }(params);

        uint256 amountRefunded = 0;
        // refund leftover ETH to user
        if (address(this).balance > 0 && amountIn < msg.value) {
            amountRefunded = msg.value - amountIn;
            TransferHelper.safeTransferETH(msg.sender, amountRefunded);
        }

        return
            EthSwapInfo({
                ethPriceInUsd: getUsdForToken(priceInUsdc.div(10**4), currencyIn.name),
                ethTotal: msg.value - amountRefunded
            });
    }

    // important to receive ETH
    receive() external payable {}

    function getUsdForToken(uint256 priceInUsd, string memory currencyKey) public view returns (uint256) {
        Currency memory currency = getCurrency(currencyKey);
        return convertUsdToToken(priceInUsd, currency.feed, IERC20Extended(currency.currencyAddress));
    }

    // @dev The smallest usd supported is 100th of a dollar (or $.01), which you would pass in as 1 since 1 == $.01
    // @dev Passing in 10 == $.10. Passing in 100 == $1.00. Passing in 1234 == $12.34. And so on.
    function convertUsdToToken(
        uint256 priceInUsd,
        AggregatorV3Interface usdPriceFeed,
        IERC20Extended token
    ) public view returns (uint256) {
        (, int256 usdPrice, , , ) = usdPriceFeed.latestRoundData();
        uint256 decimalsDifference = uint8(18).sub(usdPriceFeed.decimals().min(18));
        // 18 - Math.min(tokenDecimals - 2, 18)
        // subtracting 2 resets the USD to USDC since USD comes in without decimals
        uint256 tokenDecimalsDiff = uint8(18).sub(uint8(IERC20Extended(token).decimals()).sub(2).min(18));

        return
            priceInUsd.mul(1 ether).mul(1 ether).div(uint256(usdPrice).mul(10**decimalsDifference)).div(
                10**tokenDecimalsDiff
            );
    }

    /**
     * @dev See {UUPSUpgradeable-_authorizeUpgrade}
     */
    function _authorizeUpgrade(address) internal override adminRequired {}
}

