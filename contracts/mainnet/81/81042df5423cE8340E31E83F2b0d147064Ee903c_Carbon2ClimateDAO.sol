// File contracts/Carbon2Climate.sol

pragma solidity ^0.8.0;

contract Carbon2ClimateDAO is Carbon2ClimateDAONFT {

    string public DAOname;
    string public description;
    address public Owner;

    uint256 public memberCount = 0;
    uint256 public InvestmentOpportunitiesCount = 0;
    uint256 public minimumNumberOfShares = 10;
    uint256 public thresholdFundsToBeCollected = 500000*10**18;
    uint256 public firstInvestmentBlockTimestamp = 0;

    uint256 public totalFundsCollected = 0;

    bool private _isInvestmentOpenForMembers = false;

    uint256 INVESTMENT_PERIOD = 90 * 24 * 60 * 60; // 3 months
    uint256 VOTING_DURATION = 2 * 24 * 60 * 60; // 2 months

    struct Member {
        address delegateKey; //address of the member that can be used to vote on different proposals.
        uint256 shares; // the voting shares that can be done by the memeber.
        uint256 shareClaimed; // the shares that have been claimed by the member.
        bool exists; // boolean variable, that tells if a address is still member or not.
    }

    struct InvestmentOpportunity {
        address IO;
        uint256 sharesRequested;
        uint256 CreationTime;
        uint256 startingVotingPeriod;
        uint256 yesVotes;
        uint256 noVotes;
        string details;
        bool enableVoting;
        bool processed;
        bool didPass;
        mapping(address => Vote) votesByMember;
    }

    enum Vote {
        Null,
        Yes,
        No
    }

    event MemberRegistered(address member, uint256 shares, uint256 timestamp);
    event InvestmentOpportunityCreated(address GIO, uint256 shares_requested, string details, uint256 timestamp);
    event VoteSubmitted(address from, uint256 votes, uint256 timestamp);
    event FundsDispersed(address GIO, uint256 funds, uint256 timestamp);
    event GIOProcessed(address GIO, bool didPass, uint256 timestamp);
    event FundsClaimed(address from, uint256 funds, uint256 timestamp);

    mapping(address => Member) public members;
    mapping(uint256 => InvestmentOpportunity) public investmentOpportunities;
    mapping(address => address) public getDelegateKeybyAddress;

    modifier onlyMember {
        require(members[msg.sender].shares > 0);
        _;
    }

    modifier onlyOwner {
        require(msg.sender == Owner, "Address Calling function is not a owner");
        _;
    }

    constructor (string memory _name, string memory _description, string memory _symbol) Carbon2ClimateDAONFT(_name, _symbol) {
        _setDAOName(_name);
        _setDAODescription(_description);
        Owner = msg.sender;
        _isInvestmentOpenForMembers = true;
        _createInvestmentOpportunity(address(this), 1, "should split investment in two proposals"); // id = 1
        _createInvestmentOpportunity(address(this), 1, "should invest in Highest Voted GIO"); // id = 2
        _createInvestmentOpportunity(address(this), 1, "should continue collecting investments"); // id = 3
        _createInvestmentOpportunity(address(this), 1, "should pay money back to investors"); // id = 4


    }
    /* A function that allows users to become member of the pykeDAO. 
    To become member they need to deposit certain number of nfts for which they
    will be getting membership token */

    function registerAsMember(uint256 shares) public payable {

        require(members[msg.sender].delegateKey == address(0x0), "member already registered");
        //this checks member is giving away minimum number of shares.
        require(shares >= minimumNumberOfShares, "fund minimum number of shares");
        require(msg.value == shares, "Not enough funds sent");
        require(_isInvestmentOpenForMembers, "Investment is now closed");
        Member memory member = Member(msg.sender, msg.value, 0, true);
        getDelegateKeybyAddress[msg.sender] = member.delegateKey;
        members[msg.sender] = member;
        totalFundsCollected += msg.value;
        memberCount +=1;
        if(firstInvestmentBlockTimestamp == 0) {
            firstInvestmentBlockTimestamp = block.timestamp;
        }
        //mint a nft token to the member with the tokenID
        mint(msg.sender, memberCount);
        emit MemberRegistered(msg.sender, shares, block.timestamp);
    }

    function createInvestmentOpportunity(address IO,  uint256 sharesRequested, string memory details) external onlyOwner {
        _createInvestmentOpportunity(IO, sharesRequested, details);
    }
    /* this a function to create the Investment Opportunity for the DAO Members */
    function _createInvestmentOpportunity(address IO, uint256 sharesRequested, string memory details) internal returns (uint256 IoID)
    {
        require(sharesRequested > 0, "requested shares cannot be less than 1");
        InvestmentOpportunitiesCount = InvestmentOpportunitiesCount + 1;
        investmentOpportunities[InvestmentOpportunitiesCount].IO = IO;
        investmentOpportunities[InvestmentOpportunitiesCount].CreationTime = block.timestamp;
        investmentOpportunities[InvestmentOpportunitiesCount].enableVoting = false;
        investmentOpportunities[InvestmentOpportunitiesCount].details = details;
        investmentOpportunities[InvestmentOpportunitiesCount].startingVotingPeriod = 0;
        investmentOpportunities[InvestmentOpportunitiesCount].sharesRequested = sharesRequested;
        investmentOpportunities[InvestmentOpportunitiesCount].processed = false;
        emit InvestmentOpportunityCreated(IO, sharesRequested, details, block.timestamp);
        return InvestmentOpportunitiesCount;
        
    }

    function enableVotingForGInvestmentOpportunity(uint256[] calldata ids) external {
        require(firstInvestmentBlockTimestamp + INVESTMENT_PERIOD <= block.timestamp, "three months not passed"); 
        
        for(uint8 i = 0 ; i < ids.length; i++)
        {
            // proposal id  3 = should continue collecting investments
            // proposal id  4 = Should return money back to the dao members
            if(ids[i] == 3 || ids[i] == 4) 
            {
                // proposals can be enabled if threshold funds are not collected in three months
                require(totalFundsCollected < thresholdFundsToBeCollected);
                
            }
            if (ids[i] != 3 && ids[i] != 4) 
            {
                // proposals can be enabled if threshold funds are not collected in three months
                require(totalFundsCollected > thresholdFundsToBeCollected);
            }
            investmentOpportunities[ids[i]].enableVoting = true;
            investmentOpportunities[ids[i]].startingVotingPeriod = block.timestamp;
        }

    }

    function voteGIO(uint256 proposerId, uint256 uintVote) external {
        address memberAddress = getDelegateKeybyAddress[msg.sender];
        Member storage member = members[memberAddress];
        require(member.shares >= minimumNumberOfShares, "member is not registered or do not have enough shares");
        InvestmentOpportunity storage investmentOpportunity = investmentOpportunities[proposerId];
        require(uintVote < 3, "VoteType does not exist");
        Vote vote = Vote(uintVote);
        require(investmentOpportunity.enableVoting == true, "Voting is not started yet");
        require(investmentOpportunity.votesByMember[memberAddress] == Vote.Null, "Voted already");
        require(investmentOpportunity.startingVotingPeriod + VOTING_DURATION >= block.timestamp, "Voting is Over");
        

        investmentOpportunity.votesByMember[memberAddress] = vote;

        if( vote == Vote.Yes) {
            investmentOpportunity.yesVotes += member.shares;
        }

        if( vote == Vote.No) {
            investmentOpportunities[proposerId].noVotes += member.shares;
        }

        emit VoteSubmitted(memberAddress, member.shares, block.timestamp);
    }

    function processGIO(uint256 proposerId) external onlyOwner {
        require(investmentOpportunities[proposerId].CreationTime > 0, "Investment Opportunity is not created yet");
        InvestmentOpportunity storage proposal = investmentOpportunities[proposerId];
        require(proposal.processed == false, "Investment Opportunity is already processed");
        require(proposal.startingVotingPeriod + VOTING_DURATION <= block.timestamp, "Voting is not Over");

        proposal.processed = true;

        uint256 yesVotesPercentage = _calculateVotePercentage(proposal.yesVotes, proposal.noVotes);
        if(yesVotesPercentage >= 60) {
            proposal.didPass = true;
        }
        else {
            proposal.didPass = false;
        }
        
        emit GIOProcessed(proposal.IO, proposal.didPass, block.timestamp);

    }

    function disperseFunds(uint256 proposerId, uint256 funds) external onlyOwner {
        InvestmentOpportunity storage investmentOpportunity = investmentOpportunities[proposerId];
        require(investmentOpportunity.processed == true, "Investment Opportunity is not processed");
        require(investmentOpportunity.didPass == true, "Investment Opportunity did not pass");
        _disperseFunds(proposerId, funds);
    }

    function _disperseFunds(uint256 proposer_id, uint256 total_number_of_funds) internal {
        uint256 InvestmentFund = total_number_of_funds;
        InvestmentOpportunity storage investmentOpportunity = investmentOpportunities[proposer_id];
        payable(address(investmentOpportunities[proposer_id].IO)).transfer(InvestmentFund);
        totalFundsCollected = totalFundsCollected - total_number_of_funds;
        emit FundsDispersed(investmentOpportunity.IO, total_number_of_funds, block.timestamp);
    }

    function disableInvestmentForMembers() external onlyOwner {
        _isInvestmentOpenForMembers = false;
    }

    function enableInvestmentForMembers() external onlyOwner {
        _isInvestmentOpenForMembers = true;
    }

    function _calculateVotePercentage(uint256 yesVotes, uint256 noVotes) internal pure returns (uint256) {
        uint256 totalVotes = yesVotes + noVotes;
        uint256 votePercentage = (yesVotes * 100) / totalVotes;
        return votePercentage;
    }

    function resetProposal(uint256 id) external onlyOwner {
        InvestmentOpportunity storage investmentOpportunity = investmentOpportunities[id];
        investmentOpportunity.didPass = false;
        investmentOpportunity.processed = false;
        investmentOpportunity.yesVotes = 0;
        investmentOpportunity.noVotes = 0;
    }

    function resetThresholdFunds(uint256 threshold_funds) external onlyOwner {
            thresholdFundsToBeCollected = threshold_funds;
    }

    function resetFirstInvestment() external onlyOwner {
        firstInvestmentBlockTimestamp = 0;
    }

    function getDaoMaintanceCharges() public view returns (uint256) {
        return (totalFundsCollected * 20) / 100;
    }

    function claimFundsBack() external onlyMember() {
        require(address(this).balance > 0, "no funds in the contract");
        uint256 chargesPerMember = getDaoMaintanceCharges()/memberCount;
        require(investmentOpportunities[4].didPass == true, "proposal to get money back is not passed");
        address payable member_address = payable(getDelegateKeybyAddress[msg.sender]);
        Member storage member = members[member_address];
        require(member.shares >= minimumNumberOfShares, "member is not registered or do not have enough shares");
        require(member.shareClaimed < member.shares, "member has already claimed funds");
        if(member.shareClaimed == 0){
            member.shares -= chargesPerMember;
        }
        member.shareClaimed = member.shareClaimed + member.shares;
        member.shares -= member.shareClaimed;
        totalFundsCollected -= member.shareClaimed;
        member_address.transfer(member.shareClaimed);
        emit FundsClaimed(member.delegateKey, member.shares, block.timestamp);
    }


    function _setDAOName(string memory _name) internal {
        DAOname = _name;
    }

    function _setDAODescription(string memory _description) internal {
        description = _description;
    }

    function withdrawFunds(uint256 amount) external onlyOwner {
        require(address(this).balance > 0, "no Funds available");
        totalFundsCollected -= totalFundsCollected;
        payable(msg.sender).transfer(amount);
    }

    fallback() external payable {

    }
}