            for (uint256 i = 0; i < tokenIDs.length; ) {
                uint256 tokenId = tokenIDs[i];
                uint256 shipScarcity = getScarcity(tokenId);
                require(shipScarcity > 0, "Mule not allowed");
                _vSpaceship.mint(msg.sender, tokenId);
                spaceship.safeTransferFrom(msg.sender, address(this), tokenId);
                user.amount += shipScarcity;
                totalLP += shipScarcity;
                initiateRental(tokenIDs);

                emit Deposit(msg.sender, tokenId);

                unchecked {
                    ++i;
                }
            }
            for (uint256 i = 0; i < resources.length; i++) {
                user.rewardDebt[i] = user.amount * rewardsPerShare[i];
            }
        }
    }

    function getPendingRewards(address _user) external view returns (uint256[] memory) {
        UserInfo storage user = userInfo[_user];
        uint256[] memory pendingRewards = new uint256[](4);
        if (totalLP != 0 && user.amount > 0) {
            for (uint256 i = 0; i < resources.length; ) {
                uint256 balance = IERC20(resources[i]).balanceOf(address(this));
                uint256 lastRewards = balance - lastUpdateBalance[i];
                pendingRewards[i] = ((rewardsPerShare[i] + (lastRewards / totalLP)) * user.amount) - user.rewardDebt[i];
                unchecked {
                    ++i;
                }
            }
        }
        return pendingRewards;
    }

    function withdraw(uint256[] memory tokenIDs) public {
        UserInfo storage user = userInfo[msg.sender];
        claim();

        for (uint256 i = 0; i < tokenIDs.length; i++) {
            address owner = IERC721(_vSpaceship).ownerOf(tokenIDs[i]);
            require(owner == msg.sender, "Forbidden");
            uint256 scarcity = getScarcity(tokenIDs[i]);
            user.amount -= scarcity;
            totalLP -= scarcity;
            _vSpaceship.burn(tokenIDs[i]);
            if (spaceship.ownerOf(tokenIDs[i]) == address(this)) {
                spaceship.transferFrom(address(this), msg.sender, tokenIDs[i]);
            } else if (lentNFT.ownerOf(tokenIDs[i]) == address(this)) {
                lentNFT.transferFrom(address(this), msg.sender, tokenIDs[i]);
            } else {
                revert("Invalid tokenId");
            }
            emit Withdraw(msg.sender, tokenIDs[i]);
        }

        updateVault();
    }

    function setRentalParameters(
        uint256 _scarcity,
