    function initiateRental(uint256[] memory tokenIDs) internal {
        for (uint256 i = 0; i < tokenIDs.length; i++) {
            uint256 tokenId = tokenIDs[i];
            IRentalProtocol.NFT[] memory nftParam = new IRentalProtocol.NFT[](1);

            uint256 scarcity = getScarcity(tokenId);
