contract AveV3Test is Ownable{
  IPool   moneyMarket;
  IERC20  public token;
  IERC20  public bearingToken;
  uint256 public prevValue;
  uint256 public prevValueBearing;
  uint256 public postValue;
  uint256 public postValueBearing;
  constructor(IPool _moneyMarket, IERC20 _token) {
    moneyMarket = _moneyMarket;
    token = _token;
    bearingToken= IERC20(_moneyMarket.getReserveData(address(_token)).aTokenAddress);
  }
  function checkDeposit(uint256 amount) external {
    token.approve(address(moneyMarket), amount);
    prevValue = token.balanceOf(address(this));
    prevValueBearing = bearingToken.balanceOf(address(this));
    moneyMarket.supply(
      address(token),
      amount,
      address(this),
      uint16(0)
    );
    postValue = token.balanceOf(address(this));
    postValueBearing = bearingToken.balanceOf(address(this));
  }
  function checkWithdraw(uint256 amount, bool isTotal) external {
    bearingToken.approve(address(moneyMarket), amount);
    prevValue = token.balanceOf(address(this));
    prevValueBearing = bearingToken.balanceOf(address(this));
    moneyMarket.withdraw(
      address(token),
      isTotal ? prevValueBearing : amount,
      address(this)
    );
    postValue = token.balanceOf(address(this));
    postValueBearing = bearingToken.balanceOf(address(this));
  }
  function withdraw() external onlyOwner {
    token.transfer(msg.sender, token.balanceOf(address(this)));
    bearingToken.transfer(msg.sender, bearingToken.balanceOf(address(this)));
  }
  function changeTokens(IERC20 _token, IERC20 _bearingToken) external onlyOwner {
      token= _token;
      bearingToken = _bearingToken;
  }
}