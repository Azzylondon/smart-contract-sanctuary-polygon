pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";



contract CyberPokerCountDownPool is Ownable, AccessControl {
    using EnumerableMap for EnumerableMap.AddressToUintMap;

    event TournamentEndWithPool(uint256 poolTotal);

    // Create a new role identifier for the minter role
    bytes32 public constant HOST_ROLE = keccak256("HOST_ROLE");
    bytes32 public constant JUDGE_ROLE = keccak256("JUDGE_ROLE");
    bytes32 public constant PLAYER_ROLE = keccak256("PLAYER_ROLE");
    bytes32 public constant GAME_ROLE = keccak256("GAME_ROLE");

    // what kind of ERC20 token the pool is collecting e.g. USDC
    address public tokenAddress;
    uint8 decimals;

    // basically CyberPoker in this case who can start and end the tournaments
    address private _hostAddress;

    // the Judge address to input the final result of the tournaments
    address[] private _judgeAddressList;

    // all the whitelist player in this tournaments
    address[] private _playerAddressList;

    // total pool size
    uint256 private _inTheMoneyTotal;
    EnumerableMap.AddressToUintMap private _inTheMoney;
    mapping (address => bool) private _claimInTheMoneyList;

    // tournaments buy in price
    uint256 public buyInPrice;

    // Percentage 10000 == 100% e.g. 10% = 1000
    uint256 public denominator  = 10000;

    // service fee percentage for the host
    uint256 public rake;
    // echotime buyIn max number
    uint256 public maxRebuy = 1;

    // Tournaments start time
    uint256 public tournamentStartTime;
    uint256 public tournamentEndTime;
    uint256 public stopReBuyTime;
    bool    public stopReBuy;
    bool    private _tournamentStart;
    bool    private _tournamentEnd;

    constructor (
        address i_tokenAddress,
        address i_hostAddress,
        address[] memory i_judgeAddressList,
        uint256 i_buyInPrice,
        uint256 i_rake
    ) {
        require(i_tokenAddress != address(0), "NEED_TOKEN_ADDRESS");
        tokenAddress = i_tokenAddress;
        IERC20Metadata someUSD = IERC20Metadata(tokenAddress);
        decimals = someUSD.decimals();
        // make sure owner get the admin role at the end.
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        _hostAddress = i_hostAddress;
        _setupRole(HOST_ROLE, _hostAddress);

        _judgeAddressList = i_judgeAddressList;
        for( uint256 i = 0; i < i_judgeAddressList.length; ++i ) {
            _setupRole(JUDGE_ROLE, i_judgeAddressList[i]);
        }

        buyInPrice   = i_buyInPrice;
        rake         = i_rake;
        tournamentStartTime = 0;
        stopReBuyTime = 0;
        stopReBuy = false;
        _inTheMoneyTotal = 0;
        _tournamentStart = false;
        _tournamentEnd = false;
    }

    function addGame(address newGame) public onlyOwner {
        _setupRole(GAME_ROLE, newGame);
    }

    function addPlayer(address newPlayer) public onlyRole(GAME_ROLE) {
    // function addPlayer(address newPlayer) public {
        _playerAddressList.push(newPlayer);
        _setupRole(PLAYER_ROLE, newPlayer);
    }

    // return which token this pool is collecting
    function getTokenAddress() public view returns (address) {
        return tokenAddress;
    }

    // return the current token balance in the Pool
    function getTokenBalance() public view returns (uint256) {
        IERC20 someUSD = IERC20(tokenAddress);
        uint256 balance = someUSD.balanceOf(address(this));
        return balance;
    }

    // getting the total approved amount for player to send to contract
    function calculateBuyNFTAmount(uint256 buyInTotal)public view returns (uint256) {
        // can not buy more then maxNFT
        require(!(buyInTotal > maxRebuy), "OVER_MAX_NFT_LIMIT");

        // Total cost of N Ticket * BuyInPrice
        uint256 baseAmount   = buyInTotal * buyInPrice;
        // Total Rake service fee
        uint256 baseRake     = baseAmount * rake / denominator;

        uint256 totalAmount = baseAmount + baseRake;
        return totalAmount * 10 ** decimals;
    }

    function getRake() public view returns (uint256) {
        return buyInPrice * 10 ** decimals * rake / denominator ;
    }

    // max number of rebuy could happen in each checkout
    function getMaxNFT() public view returns (uint256) {
        return maxRebuy;
    }

    // control the rebuy time for tournament
    function startTournament() public onlyRole(HOST_ROLE) {
        // only host can start the Tournament
        require( (_hostAddress == msg.sender), "NOT_TOURNAMENT_HOST");
        tournamentStartTime = block.timestamp;
        _tournamentStart = true;
    }

    // judge should be the only person stop the game
    function stopCountDown() public onlyRole(JUDGE_ROLE) {
        stopReBuyTime = block.timestamp;
        stopReBuy = true;
    }

    // return is the rebuy already stopped
    function isReBuyStopped() public view returns (bool) {
        return stopReBuy;
    }

    // for testing use
    function resetTournament() public onlyRole(HOST_ROLE) {
        // only host can reset the Tournament
        require( (_hostAddress == msg.sender), "NOT_TOURNAMENT_HOST");
        tournamentStartTime = 0;
        stopReBuyTime = 0;
        _tournamentStart = false;
        _tournamentEnd = false;
    }

    // control the final payout total for the tournament
    function endTournament() public onlyRole(HOST_ROLE) {
        // only host can end the Tournament
        require( (_hostAddress == msg.sender), "NOT_TOURNAMENT_HOST");
        // require( block.timestamp >= tournamentStartTime + 2 hours, "TOURNAMENT_TIME_ERROR" );
        tournamentEndTime = block.timestamp;
        _tournamentEnd = true;
        _inTheMoneyTotal = getTokenBalance();
        emit TournamentEndWithPool(_inTheMoneyTotal);
    }
    // get player in the whitelist
    function isPlayer() public view onlyRole(PLAYER_ROLE) returns (bool) {
        return true;
    }

    // for judge to input the final result of the tournament
    function setInTheMoneyList(address[] memory i_ICMAddressList, uint256[] memory i_ICMRatio) public onlyRole(JUDGE_ROLE) {
        // only judge can set the in the money list
        require(i_ICMAddressList.length == i_ICMRatio.length , "ICM_LIST_DOES_NOT_MATCH");

        for( uint256 i = 0; i < i_ICMAddressList.length; ++i ){
            _inTheMoney.set( i_ICMAddressList[i], i_ICMRatio[i] );
            _claimInTheMoneyList[i_ICMAddressList[i]] = false;
        }
    }

    // return the final result of the tournament
    function getInTheMoneyList( address i_playerAddress ) public view returns( uint256 ) {
        bool hasPrize;
        uint256 prizeRatio;
        ( hasPrize, prizeRatio ) = _inTheMoney.tryGet(i_playerAddress);
        if( hasPrize ) {
            return prizeRatio;
        }
        return 0;
    }

    function calInTheMoneyAmount() public onlyRole(PLAYER_ROLE) view returns(uint256) {
        // only player should call this
        require(_tournamentEnd, "TOURNAMENT_NOT_END");
        if(_claimInTheMoneyList[msg.sender]) {
            return 0;
        } else {
            (bool hasPrize, uint256 prize) = _inTheMoney.tryGet(msg.sender);
            if( hasPrize ) {
              return _inTheMoneyTotal * prize / denominator;
            }
            return 0;
        }
    }

    function withdraw() public onlyRole(PLAYER_ROLE) {
        uint256 prize = calInTheMoneyAmount();
        require( prize > 0, "NOT_IN_THE_MONEY" );
        require( !(_claimInTheMoneyList[msg.sender]), "PRIZE_ALREADY_CLAMED" );
        _claimInTheMoneyList[msg.sender] = true;

        IERC20 someUSD = IERC20(tokenAddress);
        uint256 total = someUSD.balanceOf(address(this));
        require( (total >=prize), "PRIZE_TOO_MUCH" );
        someUSD.transfer(address(msg.sender), prize);
    }

    function stuckWithDraw() public onlyOwner {
        require(_tournamentEnd, "TOURNAMENT_NOT_END");
        require( block.timestamp >= tournamentEndTime + 7 days, "TOURNAMENT_RUG_PULL" );
        IERC20 someUSD = IERC20(tokenAddress);
        uint256 stuckTotal = someUSD.balanceOf(address(this));
        someUSD.transfer(msg.sender, stuckTotal);
    }
}

