pragma solidity 0.8.11;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@opengsn/contracts/src/BaseRelayRecipient.sol";

contract DonationsModule is BaseRelayRecipient, Ownable {
    
    address public treasuryAddress;

    IERC20 public USDC;

    string public override versionRecipient = "2.2.6";

    // -------------------------------------------------------------
    // STORAGE
    // --------------------------------------------------------------

    mapping(address => uint256) public totalDonationsPerAddress;

    // --------------------------------------------------------------
    // EVENTS
    // --------------------------------------------------------------

    event DonationSubmitted(address donor, uint256 amount, uint256 timestamp);
    event WithdrawnToTreasury(address treasury, uint256 amount);
    event TreasuryAddressSet(address treasuryAddress);

    // --------------------------------------------------------------
    // CUSTOM ERRORS
    // --------------------------------------------------------------
    error ZeroAddressNotAllowed();
    error InsufficentAmountSent();

    // --------------------------------------------------------------
    // CONSTRUCTOR
    // --------------------------------------------------------------
    constructor(address _usdc, address _forwarder) {
        _setTrustedForwarder(_forwarder);
        USDC = IERC20(_usdc);
    }

    // --------------------------------------------------------------
    // STATE-MODIFYING FUNCTIONS
    // --------------------------------------------------------------
    
    /**
        @notice sets Treasury address for transfering funds
        @param _treasuryAddress address of treasury
    */
    function setTreasuryAddress(address _treasuryAddress) public onlyOwner {
        if (_treasuryAddress == address(0)) revert ZeroAddressNotAllowed();
        treasuryAddress = _treasuryAddress;

        emit TreasuryAddressSet(_treasuryAddress);
    }

    /**
        @notice creates new donation
        @param _amount donated amount of USDC
    */
    function donateUSDC(uint256 _amount) public {
        if (0 >= _amount) revert InsufficentAmountSent();

        require(USDC.transferFrom(_msgSender(), address(this), _amount), "DONATION FAILED");
        
        totalDonationsPerAddress[_msgSender()] += _amount;

        emit DonationSubmitted(_msgSender(), _amount, block.timestamp);
    }

    /**
        @notice moves donations collected to treasury
        @param _amount amount withdrawn from contract balance
    */
    function moveFundsToTreasury(
        uint256 _amount
    ) public onlyOwner {
        require(USDC.transfer(treasuryAddress, _amount), "WITHDRAW FAILED");
        emit WithdrawnToTreasury(treasuryAddress, _amount);
    }

    // *** BICONOMY *** //

    function setTrustedForwarder(address _forwarder) public onlyOwner {
        _setTrustedForwarder(_forwarder);
    }

    function _msgSender() internal view override(Context, BaseRelayRecipient) returns (address sender) {
        sender = BaseRelayRecipient._msgSender();
    }

    function _msgData() internal view override(Context, BaseRelayRecipient) returns (bytes memory) {
        return BaseRelayRecipient._msgData();
    }

    // --------------------------------------------------------------
    // VIEW FUNCTIONS
    // --------------------------------------------------------------

     /**
        @notice returns amount a specific address has donated
        @param _account amoutn which we are receiving the total donations for
    */
    function getTotalDonationsPerAddress(address _account) public view returns (uint256) {
        return totalDonationsPerAddress[_account];
    }
}

