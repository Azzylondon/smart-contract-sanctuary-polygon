pragma solidity ^0.8.15;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./interfaces/IGaiaStableDAOMinter.sol";

contract GaiaStableDAOMinter is Ownable, IGaiaStableDAOMinter {
    using SafeERC20 for IERC20;
    using Address for address payable;

    IERC721G public immutable stableDAO;
    IERC20 public immutable USDC;
    ISinglePool public immutable iUSDC;
    IERC20 public immutable MESH;

    uint256 public constant MINTPRICE = 1300e6;
    uint256 public constant BUYBACKPRICE = 1200e6;
    uint256 public totalSupply;
    bool public isBuyBackAlive = true;
    uint16[] internal _burnedIds;
    uint256 internal _begin;

    address public devFund;

    constructor(
        address _stableDAO,
        address _USDC,
        address _iUSDC,
        address _MESH,
        uint256 _totalSupply,
        uint16[] memory burnedIds
    ) {
        require(
            _stableDAO != address(0) && _USDC != address(0) && _iUSDC != address(0) && _MESH != address(0),
            "WRONG_ADDRESS"
        );

        stableDAO = IERC721G(_stableDAO);
        USDC = IERC20(_USDC);
        iUSDC = ISinglePool(_iUSDC);
        MESH = IERC20(_MESH);
        totalSupply = _totalSupply;
        _burnedIds = burnedIds;
        devFund = msg.sender;
    }

    fallback() external payable {}

    receive() external payable {
        // solhint-disable-previous-line no-empty-blocks
    }

    //ownership functions
    function updateIsBuyBackAlive(bool status) external onlyOwner {
        require(isBuyBackAlive != status, "NOT_CHANGED");
        isBuyBackAlive = status;
        emit UpdateIsBuyBackAlive(status);
    }

    function updateDevFund(address newDevFund) external onlyOwner {
        require(devFund != newDevFund, "NOT_CHANGED");
        devFund = newDevFund;
        emit UpdateDevFund(newDevFund);
    }

    function addBurnedIds(uint16[] calldata tokenIds) external onlyOwner {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            _burnedIds.push(tokenIds[i]);
        }
    }

    function clearBurnedIds() external onlyOwner {
        delete _burnedIds;
        delete _begin;
    }

    function updateTotalSupply(uint256 ts) external onlyOwner {
        totalSupply = ts;
    }

    function claimTokens(address token) external onlyOwner {
        uint256 amount;
        if (token == address(0)) {
            amount = address(this).balance;
            payable(msg.sender).sendValue(amount);
        } else {
            amount = IERC20(token).balanceOf(address(this));
            IERC20(token).safeTransfer(msg.sender, amount);
        }
    }

    function claimInterest() external onlyOwner {
        uint256 claimableUSDC = claimableInterest();
        _withdraw(claimableUSDC);
        USDC.transfer(msg.sender, claimableUSDC);
        uint256 balanceOfMESH = MESH.balanceOf(address(this));
        MESH.transfer(msg.sender, balanceOfMESH);
        emit ClaimInterest(claimableUSDC, balanceOfMESH);
    }

    function emergencyWithdraw(uint256 iUSDCAmount) external onlyOwner {
        if (iUSDCAmount == type(uint256).max) iUSDCAmount = iUSDC.balanceOf(address(this));
        iUSDC.withdrawTokenByAmount(iUSDCAmount);

        uint256 balanceOfUSDC = USDC.balanceOf(address(this));
        USDC.transfer(msg.sender, balanceOfUSDC);

        uint256 balanceOfMESH = MESH.balanceOf(address(this));
        MESH.transfer(msg.sender, balanceOfMESH);
        emit EmergencyWithdraw(balanceOfUSDC, balanceOfMESH);
    }

    //view functions
    function getBurnedIds() external view returns (uint16[] memory ids) {
        uint256 begin = _begin;
        uint256 amount = burnedTokensAmount();
        ids = new uint16[](amount);
        for (uint256 i = 0; i < amount; i++) {
            ids[i] = _burnedIds[begin + i];
        }
    }

    function burnedTokensAmount() public view returns (uint256) {
        return _burnedIds.length - _begin;
    }

    function claimableInterest() public view returns (uint256) {
        uint256 totalDepositedUSDC = (iUSDC.exchangeRateStored() * iUSDC.balanceOf(address(this))) / 1e18;
        return totalDepositedUSDC - (totalSupply * BUYBACKPRICE);
    }

    //external functions
    function mintStableDAO(uint256 amount) external {
        require(amount != 0, "INVALID_AMOUNT");
        require(totalSupply + amount <= 10000, "OUT_OF_RANGE");

        USDC.safeTransferFrom(msg.sender, address(this), MINTPRICE * amount);
        USDC.transfer(devFund, (MINTPRICE - BUYBACKPRICE) * amount);
        _mintTokenWithCheckingBurnedList(msg.sender, amount);
        _deposit(amount);
    }

    function buyBack(uint256[] calldata ids) external {
        require(isBuyBackAlive, "BUYBACK_DISABLED");
        uint256 amount = ids.length;
        require(amount > 0, "INVALID_IDS");
        for (uint256 i = 0; i < amount; i++) {
            require(stableDAO.ownerOf(ids[i]) == msg.sender, "UNAUTHORIZED");
            stableDAO.burn(ids[i]);
            _burnedIds.push(uint16(ids[i]));
            emit BuyBack(msg.sender, ids[i]);
        }
        totalSupply -= amount;
        uint256 amountOfUSDC = amount * BUYBACKPRICE;
        _withdraw(amountOfUSDC);
        USDC.safeTransfer(msg.sender, amountOfUSDC);
    }

    //by using callstatic, accurate interest can be obtained
    function claimMeshReward() external returns (uint256) {
        iUSDC.claimReward();
        return MESH.balanceOf(address(this));
    }

    //internal functions
    function _deposit(uint256 amount) internal {
        uint256 totalAmount = amount * BUYBACKPRICE;
        USDC.approve(address(iUSDC), totalAmount);
        iUSDC.depositToken(totalAmount);
    }

    function _withdraw(uint256 amountOfUSDC) internal {
        iUSDC.withdrawToken(amountOfUSDC);
    }

    function _mintTokenWithCheckingBurnedList(address user, uint256 amount) internal {
        uint256 burnedAmount = burnedTokensAmount();

        if (burnedAmount == 0) {
            uint256 currentId = totalSupply;
            for (uint256 i = 0; i < amount; i++) {
                stableDAO.mint(user, currentId + i);
            }
        } else if (burnedAmount >= amount) {
            uint256 begin = _begin;
            for (uint256 i = 0; i < amount; i++) {
                stableDAO.mint(user, _burnedIds[begin + i]);
                delete _burnedIds[begin + i];
            }
            if (burnedAmount == amount) {
                delete _burnedIds;
                delete _begin;
            } else {
                _begin = begin + amount;
            }
        } else {
            // if(burnedAmount < amount)
            uint256 begin = _begin;
            for (uint256 i = 0; i < burnedAmount; i++) {
                stableDAO.mint(user, _burnedIds[begin + i]);
            }

            delete _burnedIds;
            delete _begin;

            uint256 currentId = totalSupply + burnedAmount;
            for (uint256 i = 0; i < amount - burnedAmount; i++) {
                stableDAO.mint(user, currentId + i);
            }
        }
        totalSupply += amount;
    }
}

