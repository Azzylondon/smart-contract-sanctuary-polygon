struct Reserve {
  address token0;
  address token1;
  uint256 reserve0;
  uint256 reserve1;
  uint256 blockTimestampLast;
}

contract Utils {
  function getReserve(address pair) public view returns (Reserve memory reserve) {
    (address token0, address token1) = (IUniswapV2Pair(pair).token0(), IUniswapV2Pair(pair).token1());
    (uint256 reserve0, uint256 reserve1, uint256 blockTimestampLast) = IUniswapV2Pair(pair).getReserves();
    reserve = Reserve(token0, token1, reserve0, reserve1, blockTimestampLast);
  }

  function getReserves(address[] memory pairs) public view returns (Reserve[] memory reserves) {
    reserves = new Reserve[](pairs.length);
    for (uint256 index; index < pairs.length; index++) {
      reserves[index] = getReserve(pairs[index]);
    }
  }
}

