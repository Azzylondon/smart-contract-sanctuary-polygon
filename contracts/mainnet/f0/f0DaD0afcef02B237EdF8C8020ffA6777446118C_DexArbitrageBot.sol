import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol';
import './IDexArbitrageBot.sol';
import './DODOFlashloan.sol';
import './Utils.sol';

contract DexArbitrageBot is Ownable, ReentrancyGuard, DODOFlashloan, Utils {
  using SafeMath for uint256;

  function arbitrage(FlashLoan memory flashLoan, Path[] memory paths) public {
    _dodoFlashLoan(flashLoan, paths);
  }

  function execute(FlashLoan memory flashLoan, Path[] memory paths) internal {
    for (uint256 index = 0; index < paths.length; index++) {
      // setup
      Path memory path = paths[index];
      IUniswapV2Pair pair = IUniswapV2Pair(path.pair);
      (uint256 reserve0, uint256 reserve1, ) = pair.getReserves();
      address token0 = pair.token0();
      address token1 = pair.token1();
      (IERC20 tokenIn, uint256 reserveX, uint256 reserveY) = path.from == token0
        ? (IERC20(token0), reserve0, reserve1)
        : (IERC20(token1), reserve1, reserve0);
      uint256 amountIn = tokenIn.balanceOf(address(this));
      uint256 amountOut = getAmountOut(amountIn, reserveX, reserveY);
      (uint256 amount0Out, uint256 amount1Out) = path.from == token0
        ? (uint256(0), amountOut)
        : (amountOut, uint256(0));

      // swap
      tokenIn.transfer(path.pair, amountIn);
      pair.swap(amount0Out, amount1Out, address(this), new bytes(0));
    }

    // check
    uint256 balance = IERC20(flashLoan.token).balanceOf(address(this));
    require(balance > flashLoan.amount, 'arbitrage is missing');
  }

  function getAmountOut(
    uint256 amountIn,
    uint256 reserveX,
    uint256 reserveY
  ) public pure returns (uint256 amountOut) {
    // https://github.com/Uniswap/v2-periphery/blob/2efa12e0f2d808d9b49737927f0e416fafa5af68/contracts/libraries/UniswapV2Library.sol#L43
    uint256 amountInWithFee = amountIn.mul(997);
    uint256 numerator = amountInWithFee.mul(reserveY);
    uint256 denominator = reserveX.mul(1000).add(amountInWithFee);

    // out = y * in / (x + in)
    amountOut = numerator / denominator;
  }

  // dodo fashloan callback
  function _dodoflashLoanCallBack(
    address sender,
    uint256,
    uint256,
    bytes calldata data
  ) internal override {
    (FlashLoan memory flashLoan, Path[] memory paths) = abi.decode(data, (FlashLoan, Path[]));
    require(sender == address(this) && msg.sender == flashLoan.pair, 'flashLoan denied');

    // your own logic
    execute(flashLoan, paths);

    // return funds
    IERC20 token = IERC20(flashLoan.token);
    token.transfer(flashLoan.pair, flashLoan.amount);

    // get profit
    token.transfer(owner(), token.balanceOf(address(this)));
  }

  function withdraw(address token, address to) public payable onlyOwner nonReentrant {
    if (token != address(0)) {
      IERC20 targetToken = IERC20(token);
      uint256 amount = targetToken.balanceOf(address(this));
      targetToken.transfer(to, amount);
    } else {
      payable(to).transfer(address(this).balance);
    }
  }
}

