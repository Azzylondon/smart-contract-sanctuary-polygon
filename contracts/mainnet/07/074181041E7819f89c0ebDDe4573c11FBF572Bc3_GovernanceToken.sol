/// @title GovernanceToken
/// @notice GovernanceToken implementation from openzeppelin
/// @dev 

contract GovernanceToken is Initializable, ERC20Upgradeable, ERC20PermitUpgradeable, ERC20VotesUpgradeable{

    /// @notice Total number of tokens.
    /// @dev Total number of tokens.
    uint256 private s_maxSupply = 1000;

    /// @notice Reference to UsersGroups Contract.
    /// @dev Reference to UsersGroups Contract.
    UsersGroups private roles;

    /// @notice Owner of tokens.
    /// @dev Owner of tokens.
    address private owner;

    constructor() {
        _disableInitializers();
    }

    /// @notice Initializer.
    /// @dev Initializer.
    /// @param roleContract Address UsersGroups Contract.
    function initialize(address roleContract) initializer public 
    {
        __ERC20_init("GovernanceToken", "GT");
        __ERC20Permit_init("GovernanceToken");
        __ERC20Votes_init();
        s_maxSupply = 1000;
        _mint(msg.sender, s_maxSupply);
        roles = UsersGroups(roleContract);
        owner = msg.sender;
    }

    modifier onlyAdmin()
    {
        require(roles.isAdmin(msg.sender), "Restricted to admins GovernanceToken.");
        _;
    }

    /// @notice Transfer token to account.
    /// @dev Transfer token to account.
    /// @param to Account for transfer.
    /// @param amount Amount for transfer.
    function transfer(address to, uint amount)  
    onlyAdmin
    public override(ERC20Upgradeable) returns (bool)
    {
        //address owner = _msgSender();
        //super._delegate(to, to);
        super._transfer(owner, to, amount);
    }

    /// @notice Delegate to account - user can only delegete to yourself.
    /// @dev Delegate to account - user can only delegete to yourself.
    /// @param delegatee Addres to delegate, Needed for override openzeppelin, pass addres of msgSender.
    function delegate(address delegatee)  
    public override(ERC20VotesUpgradeable)
    {
        address account = _msgSender();
        super._delegate(account, account);
    }

    /// @notice Transfer token to accountand delegate vote for him.
    /// @dev Transfer token to accountand delegate vote for him.
    /// @param to Account for transfer.
    /// @param amount Amount for transfer.
    function transfer_and_delegate(address to, uint amount)  
    onlyAdmin
    public returns (bool)
    {
        //address owner = _msgSender();
        super._delegate(to, to);
        super._transfer(owner, to, amount);
    }

    /// @notice Delegate account by Admin.
    /// @dev Delegate account by Admin.
    /// @param from Account delegate from.
    /// @param to Account delegate to.
    function delegateByAdmin(address from, address to)  
    onlyAdmin
    public
    {
        //address owner = _msgSender();
        super._delegate(from, to);
    }

    /// @notice After token transfer needed for inetrnal use.
    /// @dev After token transfer needed for inetrnal use.
    function _afterTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override(ERC20Upgradeable, ERC20VotesUpgradeable) {
        super._afterTokenTransfer(from, to, amount);
    }
    

    /// @notice MINT TOKEN.
    /// @dev MINT TOKEN.
    function _mint(address to, uint256 amount)
        internal
        override(ERC20Upgradeable, ERC20VotesUpgradeable)
    {
        super._mint(to, amount);
    }

    /// @notice BURN TOKEN.
    /// @dev BURN TOKEN.
    function _burn(address account, uint256 amount)
        internal
        override(ERC20Upgradeable, ERC20VotesUpgradeable)
    {
        super._burn(account, amount);
    }

    /// @notice get All Tokens
    /// @dev get All Tokens
    /// @return total_tokens Amount of tokens.
    function totalTokens()
        external
        view
        onlyAdmin
        returns (uint256 total_tokens)
    {
       return s_maxSupply;
    }

    /// @notice Get current Reference to UsersGroups Address.
    /// @dev Get current Reference to UsersGroups Address.
    /// @return address DataFeed Address.
    function getUsersGroups() 
    onlyAdmin
    public view returns (address) {
        return address(roles);
    }
}

