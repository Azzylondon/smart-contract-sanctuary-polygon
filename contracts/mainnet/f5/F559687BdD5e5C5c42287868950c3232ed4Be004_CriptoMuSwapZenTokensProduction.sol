pragma solidity ^0.8.15;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

import "./TZENMainnet.sol";

contract CriptoMuSwapZenTokensProduction is AccessControl, Pausable, ReentrancyGuard, ERC1155Holder { 

    IERC1155 private _NFT = IERC1155(0x78C7b170d37Ddf69d728686bfcE7879AD08C5587);
    TZENMainnet private _TZEN = TZENMainnet(0xb18D330b6364FE4e7715bfAd632DB15B58745626);
    address private _treasury = 0x2387A9Ef973eE968d009091CF8F09A60122373B3;
    address private _relay = payable(0x9911C136d63e29Fb498bb611cb07cdECB2B4ACDF);
    uint256 private _totalStaked = 0;
    uint256 private _totalDistributed = 0;
    uint256 private _totalClaimed = 0;
    address[] private _stakersArray;

    uint256 private _keyNftIniciado;
    uint256 private _keyNftAvanzado;
    uint256 private _minimumExchangeAllowed = 5000 ether;

    uint256 private _swapFee = 0.03 ether;
    uint256 private _stakingFee = 0.03 ether;
    uint256 private _burnFee = 0.05 ether;
    uint256 private _nftHoldersFee = 0.05 ether;
    uint256 private _treasuryFee = 0.20 ether;

    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant BACKOFFICE_ROLE = keccak256("BACKOFFICE_ROLE");

    mapping(address => uint256) private _totalUserAmountStaked;
    mapping(address => uint256) private _totalUserStakingPendingBalance;
    mapping(address => uint256) private _pendingUserSwapZen;

    event ZenForTokens(address beneficiary, uint256 originalZenAmount, uint256 zenAmountWithFees, uint256 burnFee, uint256 nftHoldersFee, uint256 treasuryFee);
    event TokensForZen(address beneficiary, uint256 originalZenAmount, uint256 zenAmountWithFees, uint256 burnFee, uint256 nftHoldersFee, uint256 treasuryFee);

    event Staked(address beneficiary, uint256 amount, uint256 userTotalStaked);
    event Unstaked(address beneficiary, uint256 amount, uint256 userTotalStaked);
    event Claimed(address beneficiary, uint256 amountClaimed, uint256 amountLeft, uint256 totalContractBalance);

    constructor(uint256 keyNftIniciado, uint256 keyNftAvanzado) {
        _keyNftIniciado = keyNftIniciado;
        _keyNftAvanzado = keyNftAvanzado;

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(BACKOFFICE_ROLE, msg.sender);
    }

    function setUserSwapPendingZen(address beneficiary, uint256 amount) public onlyRole(BACKOFFICE_ROLE) {
        _pendingUserSwapZen[beneficiary] = amount;
    }

    function distributeRewards() public onlyRole(BACKOFFICE_ROLE) {
        require(_TZEN.balanceOf(address(this)) > 0, "contract have 0 TZEN balance to spend");
        require(_totalStaked > 0, "no stakers");

        uint256 totalToDistribute = (_TZEN.balanceOf(address(this))+_totalClaimed);
        uint256 totalShareAmount = (totalToDistribute-_totalDistributed);
        uint256 share = totalShareAmount / _totalStaked;
        
        for (uint256 i = 0; i < _stakersArray.length; i++) {
            _totalUserStakingPendingBalance[_stakersArray[i]] += _totalUserAmountStaked[_stakersArray[i]] * share;
        }

        _totalDistributed += totalShareAmount;
    }

    function swapZenForTokens(address beneficiary, uint256 _zenAmount) public onlyRole(BACKOFFICE_ROLE) {
        uint256 originalAmount = _zenAmount;
        uint256 totalBurnAmount = (_zenAmount*_burnFee)/1e18;
        uint256 totalHoldersAmount = (_zenAmount*_nftHoldersFee)/1e18;
        uint256 totalTreasuryAmount = (_zenAmount*_treasuryFee)/1e18;
        
        _TZEN.mintTokens(address(this), totalHoldersAmount);
        _TZEN.mintTokens(_treasury, totalTreasuryAmount);
        
        _zenAmount -= totalBurnAmount;
        _zenAmount -= totalHoldersAmount;
        _zenAmount -= totalTreasuryAmount;
        
        _TZEN.mintTokens(beneficiary, _zenAmount);

        emit ZenForTokens(beneficiary, originalAmount, _zenAmount, totalBurnAmount, totalHoldersAmount, totalTreasuryAmount);
    }

    function swapTokensForZen(uint256 _tokenAmount) public nonReentrant whenNotPaused payable {
        require(msg.value >= _swapFee, "not enough balance");
        require(_tokenAmount >= _minimumExchangeAllowed, "Minimum allowed not meet");
        require(_TZEN.balanceOf(msg.sender) >= _tokenAmount, "you dont have enough tokens to swap");

        uint256 originalAmount = _tokenAmount;
        uint256 totalBurnAmount = (_tokenAmount*_burnFee)/1e18;
        uint256 totalHoldersAmount = (_tokenAmount*_nftHoldersFee)/1e18;
        uint256 totalTreasuryAmount = (_tokenAmount*_treasuryFee)/1e18;
        
        _tokenAmount -= totalBurnAmount;
        _tokenAmount -= totalHoldersAmount;
        _tokenAmount -= totalTreasuryAmount;

        require(_TZEN.transferFrom(msg.sender, address(this), totalHoldersAmount), "transfer to nft holders failed");
        require(_TZEN.transferFrom(msg.sender, _treasury, totalTreasuryAmount), "transfer to treasury failed");

        (bool sent, ) = _relay.call{ value: msg.value }("");
        require(sent, "error sending the funds to relay");

        _TZEN.burnTokens(msg.sender, _tokenAmount+totalBurnAmount);
        _pendingUserSwapZen[msg.sender] += _tokenAmount;

        emit TokensForZen(msg.sender, originalAmount, _tokenAmount, totalBurnAmount, totalHoldersAmount, totalTreasuryAmount);
    }

    function stake(uint256 _nftAmount) public nonReentrant payable {
        require(msg.value >= _stakingFee, "not enough balance");
        require(_NFT.balanceOf(msg.sender, _keyNftAvanzado) >= _nftAmount, "you dont have enough gamepass nfts");

        (bool sent, ) = _treasury.call{ value: msg.value }("");
        require(sent, "error sending the funds to treasury");

        _NFT.safeTransferFrom(msg.sender, address(this), _keyNftAvanzado, _nftAmount, "0x0000");
        
        if(_totalUserAmountStaked[msg.sender] == 0) {
            _stakersArray.push(msg.sender);
        }

        _totalUserAmountStaked[msg.sender] += _nftAmount;
        _totalStaked += _nftAmount;

        emit Staked(msg.sender, _nftAmount, _totalUserAmountStaked[msg.sender]);
    }

    function unstake(uint256 _nftAmount) public nonReentrant payable {
        require(msg.value >= _stakingFee, "not enough balance");
        require(_totalUserAmountStaked[msg.sender] >= _nftAmount, "not enough staked tokens");

        (bool sent, ) = _treasury.call{ value: msg.value }("");
        require(sent, "error sending the funds to treasury");

        _NFT.safeTransferFrom(address(this), msg.sender, _keyNftAvanzado, _nftAmount, "0x0000");

        _totalUserAmountStaked[msg.sender] -= _nftAmount;
        _totalStaked -= _nftAmount;

        if(_totalUserAmountStaked[msg.sender] == 0) {
            removeStakerFromArray(msg.sender);
        }

        emit Unstaked(msg.sender, _nftAmount, _totalUserAmountStaked[msg.sender]);
    }

    function claimRewards(uint256 _amountToClaim) public nonReentrant whenNotPaused payable {
        require(msg.value >= _stakingFee, "not enough balance");
        require(_TZEN.balanceOf(address(this)) >= _amountToClaim, "not enough TZEN balance on contract");
        require(_totalUserStakingPendingBalance[msg.sender] >= _amountToClaim, "you dont have that amount of pending rewards");
        require(_TZEN.transfer(msg.sender, _amountToClaim), "error transferring tokens to beneficiary");

        (bool sent, ) = _treasury.call{ value: msg.value }("");
        require(sent, "error sending the funds to treasury");

        _totalUserStakingPendingBalance[msg.sender] -= _amountToClaim;
        _totalClaimed += _amountToClaim;
        
        emit Claimed(msg.sender, _amountToClaim, _totalUserStakingPendingBalance[msg.sender], _TZEN.balanceOf(address(this)));
    }

    function removeStakerFromArray(address _staker) internal {
        for (uint256 i = 0; i < _stakersArray.length; i++) {
            if(_stakersArray[i] == address(_staker)) {
                _stakersArray[i] = _stakersArray[_stakersArray.length - 1];
                delete _stakersArray[_stakersArray.length - 1];
                _stakersArray.pop();
            }
        }
    }

    function setMinimumExchangeAllowed(uint256 minimumExchangeAllowed) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _minimumExchangeAllowed = minimumExchangeAllowed;
    }

    function setKeyIniciado(uint256 _newKeyIniciado) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _keyNftIniciado = _newKeyIniciado;
    }

    function setKeyAvanzado(uint256 _newKeyAvanzado) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _keyNftAvanzado = _newKeyAvanzado;
    }

    function setSwapFee(uint256 _newSwapFee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _swapFee = _newSwapFee;
    }

    function setStakingFee(uint256 _newStakingFee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _stakingFee = _newStakingFee;
    }

    function setBurnFee(uint256 burnFee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _burnFee = burnFee;
    }

    function setNftHoldersFee(uint256 nftHoldersFee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _nftHoldersFee = nftHoldersFee;
    }

    function setTreasuryFee(uint256 treasuryFee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _treasuryFee = treasuryFee;
    }

    function setTreasuryWallet(address treasury) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _treasury = treasury;
    }

    function setRelayerWallet(address relay) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _relay = relay;
    }
    
    function setNFT(address NFT) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _NFT = IERC1155(NFT);
    }

    function setTZEN(address TZEN) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _TZEN = TZENMainnet(TZEN);
    }

    function pause() public virtual onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() public virtual onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function getTotalFees() public view returns(uint256) {
        return _burnFee+_nftHoldersFee+_treasuryFee;
    }

    function getTreasuryFee() public view returns(uint256) {
        return _treasuryFee;
    }

    function getNftHoldersFee() public view returns(uint256) {
        return _nftHoldersFee;
    }

    function getBurnFee() public view returns(uint256) {
        return _burnFee;
    }

    function getStakingFee() public view returns(uint256) {
        return _stakingFee;
    }

    function getSwapFee() public view returns(uint256) {
        return _swapFee;
    }

    function getNFT() public view returns(IERC1155) {
        return _NFT;
    }

    function getTZEN() public view returns(TZENMainnet) {
        return _TZEN;
    }

    function getTreasury() public view returns(address) {
        return _treasury;
    }

    function getRelayer() public view returns(address) {
        return _relay;
    }

    function getTokenKeyIniciado() public view returns(uint256) {
        return _keyNftIniciado;
    }

    function getTokenKeyAvanzado() public view returns(uint256) {
        return _keyNftAvanzado;
    }

    function getMinimumExchangeAllowed() public view returns(uint256) {
        return _minimumExchangeAllowed;
    }

    function getTotalStaked() public view returns(uint256) {
        return _totalStaked;
    }

    function getTotalDistributed() public view returns(uint256) {
        return _totalDistributed;
    }

    function getTotalClaimed() public view returns(uint256) {
        return _totalClaimed;
    }

    function getTotalStakers() public view returns(address[] memory) {
        return _stakersArray;
    }

    function getTotalStakerAmount(address beneficiary) public view returns(uint256) {
        return _totalUserAmountStaked[beneficiary];
    }

    function getUserStakingRewards(address beneficiary) public view returns(uint256) {
        return _totalUserStakingPendingBalance[beneficiary];
    }

    function getUserSwapPendingZen(address beneficiary) public view returns(uint256) {
        return _pendingUserSwapZen[beneficiary];
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155Receiver, AccessControl) returns (bool) {
        return super.supportsInterface(interfaceId);
    }
}

