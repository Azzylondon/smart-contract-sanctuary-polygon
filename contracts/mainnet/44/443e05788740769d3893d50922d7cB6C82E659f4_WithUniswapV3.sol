import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract WithUniswapV3 is Ownable {
    using SafeMath for uint256;

    uint private constant DIVIDER = 10000;
    uint public FEE = 10;

    ISwapRouter private immutable swapRouter;

    mapping(address => address) private oracles;

     struct Transaction {
        address tokenIn;
        address tokenOut;
        uint24 fee;
        uint256 amountIn;
        uint256 amountOutMinimum;
    }

    struct Result {
        address tokenIn;
        uint256 amountIn;
        address tokenOut;
        uint256 amountOut;
    }

    struct Price {
        int value;
        uint8 decimals;
    }

    constructor(ISwapRouter _swapRouter) {
        swapRouter = _swapRouter;
    }

    event Successful(address _tokenIn,  uint256 _amountIn, address _tokenOut, uint256 _amountOut);

    function singleTransaction(Transaction memory _transaction) external returns (Result memory) {
        _collectValues(_transaction.tokenIn, _transaction.amountIn);

        Result memory response = _response(_transaction);

        emit Successful(response.tokenIn, response.amountIn, response.tokenOut, response.amountOut);

        return response;
    }

    function manyTransactions(Transaction[] memory _transactions) external returns (Result[] memory) {
        Result[] memory response = new Result[](_transactions.length);

        unchecked {
            for (uint i = 0; i < _transactions.length; i++) {
                Transaction memory transaction = _transactions[i];
                _collectValues(transaction.tokenIn, transaction.amountIn);

                Result memory result = _response(transaction);
                response[i] = result;

                emit Successful(result.tokenIn, result.amountIn, result.tokenOut, result.amountOut);
            }
        }

        return response;
    }



    function setFee(uint _fee) onlyOwner external {
        require(_fee <= 20, "fee allowed out of range");
        FEE = _fee;
    }

    function withdraw(address _token, address _to, uint256 _value) onlyOwner external {
        TransferHelper.safeTransfer(_token, _to, _value);
    }

    function setOracleUsd(address _token, address _oracle) onlyOwner external {
        oracles[_token] = _oracle;
    }

    function getPrice(address _token) external view returns (Price memory){
        address oracle = oracles[_token];
        require(oracle != address(0), "non-existent token");

        AggregatorV3Interface feed = AggregatorV3Interface(oracle);

        (,int price,,,) = feed.latestRoundData();

        return Price(price, feed.decimals());
    }

    function changeBetweenDecimals(uint256 _value, uint8 _from, uint8 _to) public pure returns(uint256) {
        if (_from >= _to) {
            _value = _value / (10**(_from - _to));
        } else {
            _value = _value * (10**(_to - _from));
        }

        return _value;
    }

    function _collectValues(address _token, uint256 _amount) private {
        TransferHelper.safeTransferFrom(_token, msg.sender, address(this), _amount);
        TransferHelper.safeApprove(_token, address(swapRouter), _amount.mul(DIVIDER - FEE).div(DIVIDER));
    }

    function _response(Transaction memory _transaction) private returns(Result memory) {
        uint256 amountOut = _single(_transaction);

        Result memory response = Result({
            tokenIn: _transaction.tokenIn,
            amountIn: _transaction.amountIn,
            tokenOut: _transaction.tokenOut,
            amountOut: amountOut
        });

        return response;
    }

    function _single(Transaction memory _transaction) private returns (uint256 amountOut) {
        uint256 transactionAmountIn = _transaction.amountIn.mul(DIVIDER - FEE).div(DIVIDER);

        ISwapRouter.ExactInputSingleParams memory params =
            ISwapRouter.ExactInputSingleParams({
                tokenIn: _transaction.tokenIn,
                tokenOut: _transaction.tokenOut,
                fee: _transaction.fee,
                recipient: msg.sender,
                deadline: block.timestamp,
                amountIn: transactionAmountIn,
                amountOutMinimum: _transaction.amountOutMinimum,
                sqrtPriceLimitX96: 0
            });

        amountOut = swapRouter.exactInputSingle(params);

        return amountOut;
    }
}

