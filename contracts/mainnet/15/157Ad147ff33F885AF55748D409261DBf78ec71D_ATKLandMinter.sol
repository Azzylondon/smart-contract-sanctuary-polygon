import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "./IATKLand.sol";

interface IERC721Delegate is IERC721Receiver {
    function handleERC721Transfer(bytes calldata params, address user) external payable;
}

contract ATKLandMinter is IERC721Delegate {
    IERC20 public constant ATK = IERC20(0xF868939Ee81F04f463010BC52EAb91c0839eF08c);
    IATKLand public constant ATK_LAND = IATKLand(0xF868939Ee81F04f463010BC52EAb91c0839eF08c);

    constructor() {
        ATK.approve(
            address(ATK_LAND),
            0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff
        );
    }

    function handleERC721Transfer(bytes calldata data, address user) external payable override {
        (bytes4 selector, bytes memory params) = abi.decode(data, (bytes4, bytes));

        address to;
        uint256 mintCount;
        uint256 nonce;
        uint256 landType;
        bytes memory signature;
        uint256 index;

        if (selector == ATK_LAND.mint_land_token.selector) {
            (mintCount, landType) = abi.decode(params, (uint256, uint256));
        } else if (selector == ATK_LAND.vip_mint_land_token.selector) {
            (to, mintCount, landType, nonce, signature) = abi.decode(
                params,
                (address, uint256, uint256, uint256, bytes)
            );
        } else {
            revert("ATKLandMinter: Unknown selector");
        }

        if (landType == 1) {
            index = ATK_LAND._COMMON_INDEX() + 1121;
        } else if (landType == 2) {
            index = ATK_LAND._GRAND_INDEX() + 120;
        } else {
            index = ATK_LAND._ICONIC_INDEX();
        }

        (bool mintSuccess, ) = address(ATK_LAND).call(data);
        require(mintSuccess, "Mint failed");

        for (uint256 i = 1; i <= mintCount; i++) {
            ATK_LAND.transferFrom(address(this), user, index + i);
        }
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function _getSelector(string calldata _func) internal pure returns (bytes4) {
        return bytes4(keccak256(bytes(_func)));
    }
}

