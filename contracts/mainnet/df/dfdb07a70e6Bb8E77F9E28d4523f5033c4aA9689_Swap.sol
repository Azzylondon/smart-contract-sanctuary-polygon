pragma solidity 0.8.11;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./Interfaces/ILNQToken.sol";

contract Swap is Ownable, ReentrancyGuard {
    ILNQToken public LNQToken;
    AggregatorV3Interface internal priceFeed;

    event Swaped(address _user, uint256 _maticAmount, uint256 _lnqAmount);
    event Withdraw(address _reciver, uint256 _amount);

    constructor(address _lnqtoken, address _chainlinkAggregator) Ownable() {
        LNQToken = ILNQToken(_lnqtoken);
        priceFeed = AggregatorV3Interface(
            _chainlinkAggregator
        );
    }

    receive() external payable {}

    /**
     * @notice swap Matic to LNQ token equivalent USD.
     */
    function SwapNativeToLNQ() external payable nonReentrant returns (uint256) {
        require(msg.value > 0, "The amouunt needs to be greater than 0");
        //convert msg.value to usd
        int256 price = getLatestPrice();
        uint256 totalPrice = ((msg.value) * uint256(price)) / (1e18);
        LNQToken.mint(_msgSender(), totalPrice);
        emit Swaped(msg.sender, msg.value, totalPrice);
        return totalPrice;
    }

    /**
     * @notice admin get Matic token from the contract.
     * @param _address Address at which amount recive
     * @param _amount that want to withdrow
     */
    function getMaticToken(address _address, uint256 _amount)
        external
        onlyOwner
        nonReentrant
    {
        require(
            maticSupply() >= _amount,
            "_amount must be less and equal to contract balance"
        );
        require(_address != address(0),"invalid zero address");
        emit Withdraw(_address, _amount);
        (bool sent,) = payable(_address).call{value: _amount}("");
        require(sent,"_amount transafer failed");
    }

    /**
     * @notice get current matic price in USD.
     */
    function getLatestPrice() public view returns (int256) {
        (
            ,
            /*uint80 roundID*/
            int256 price, /*uint startedAt*/ /*uint timeStamp*/
            ,
            ,

        ) = /*uint80 answeredInRound*/
            priceFeed.latestRoundData();
        return price * (10**10);
    }

    /**
     * @notice get matic amount balance of this contract.
     */
    function maticSupply() public view returns (uint256) {
        return address(this).balance;
    }
}

