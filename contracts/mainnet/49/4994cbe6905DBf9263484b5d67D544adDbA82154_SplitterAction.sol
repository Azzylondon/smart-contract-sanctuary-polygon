/**
 * @dev used to split up 1 input amount into 4 output amounts
 */

/*            
                   Splitter IO
                  ______________
        Token A->[              ]->Token A
 0x0000....0000->[              ]->Token A
 0x0000....0000->[              ]->Token A
 0x0000....0000->[______________]->Token A

*/

contract SplitterAction is BaseSiloAction{
    uint constant public baseDecimals = 10000;
    constructor(string memory _name, address _siloFactory, address[4] memory _inputs, address[4] memory _outputs, uint[4] memory _ratio, uint _startingIndex) {
        name = _name;
        //configurationData = abi.encode(_inputs, _outputs, _ratio, _startingIndex);
        factory = _siloFactory;
    }

    function enter(address implementation, bytes memory configuration, bytes memory inputData) public override returns(uint[4] memory outputAmounts){
        //load configuration information
        bytes memory storedConfig = IAction(implementation).getConfig();
        uint[4] memory ratio;
        address[4] memory input;
        address[4] memory output;
        uint index;
        if(storedConfig.length > 0){
            (input, output, ratio, index) = abi.decode(storedConfig, (address[4],address[4],uint[4],uint));
        }
        else{
            (input, output, ratio, index) = abi.decode(configuration, (address[4],address[4],uint[4],uint));
        }
        uint ratioSum;
        uint outputSum;
        uint[4] memory inputAmounts = abi.decode(inputData, (uint[4]));
        for(uint i=0; i<4; i++){
            ratioSum += ratio[i];
            outputAmounts[i] = (inputAmounts[index] * ratio[i]) / baseDecimals;
            outputSum += outputAmounts[i];
        }
        if(outputSum < inputAmounts[index]){ //add any dust to the index output
            outputAmounts[0] += (inputAmounts[index] - outputSum);
        }
        require(ratioSum == baseDecimals, "Invalid Ratios");
    }

    function exit(address implementation, bytes memory configuration, bytes memory outputData) public override returns(uint[4] memory outputAmounts){}

    function createConfig(address[4] memory _inputs, address[4] memory _outputs, uint[4] memory _ratio, uint _startingIndex) public pure returns(bytes memory configData){
        configData = abi.encode(_inputs, _outputs, _ratio, _startingIndex);
    }

    function decodeConfig(bytes memory configData) public pure returns(address[4] memory inputs, address[4] memory outputs, uint[4] memory ratio){
        (inputs,  outputs, ratio) = abi.decode(configData, (address[4], address[4], uint[4]));
    }

    function validateConfig(bytes memory configData) public view override returns(bool){
        uint[4] memory ratio;
        address[4] memory input;
        address[4] memory output;
        address[4] memory recipients;
        (input, output, ratio,recipients) = abi.decode(configData, (address[4],address[4],uint[4],address[4]));
        uint sum;
        for (uint i=0; i<4; i++){
            sum += ratio[i];
        }
        if(sum == baseDecimals){
            return true;
        }
        else{
            return false;
        }
    }

    function checkMaintain(bytes memory configuration) public override view returns(bool){
        return false;
    }
}

