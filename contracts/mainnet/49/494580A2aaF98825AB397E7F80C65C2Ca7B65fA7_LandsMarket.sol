contract LandsMarket is Ownable, Pausable {

    using SafeMath for uint256;

    uint _publicSaleStartTs;
    uint _tokenPrice;

    IERC20 private _usdcContract;
    ILandsNftContract public _landsContract;

    constructor(address wethContractAddress, address landTokenContractAddress, uint256 publicSaleStartTs, uint tokenPrice) {
        _usdcContract = IERC20(wethContractAddress);
        _landsContract = ILandsNftContract(landTokenContractAddress);
        _publicSaleStartTs = publicSaleStartTs;
        _tokenPrice =  tokenPrice;
    }

    function setPublicSaleStartTs(uint publicSaleStartTs) public onlyOwner {
        require(publicSaleStartTs > block.timestamp);
        _publicSaleStartTs = publicSaleStartTs;
    }

    function setTokenPrice(uint256 tokenPrice) public onlyOwner {
        require(tokenPrice > 0);
        _tokenPrice = tokenPrice;
    }

    function isPublicSale() public view returns (bool) {
        return block.timestamp >= _publicSaleStartTs;
    }

    function buySpecificTokens(uint256[] memory tokenIds) public whenNotPaused {
        require(isPublicSale(), "Public sale is not started yet");
        require(tokenIds.length <= 24, "Max tokens per transaction number exceeded");

        for (uint i = 0; i < tokenIds.length; i++) {
            require(!_landsContract.tokenExists(tokenIds[i]), "This token already minted");
        }

        uint256 totalPrice = tokenIds.length.mul(getTokenPrice());
        _usdcContract.transferFrom(_msgSender(), address(this), totalPrice);

        _landsContract.mintSpecificTokens(_msgSender(), tokenIds);
    }

    function buyTokens(uint tokensNumber) public whenNotPaused returns (uint256[] memory) {
        require(isPublicSale(), "Public sale is not started yet");
        require(tokensNumber <= 100, "Max tokens per transaction number exceeded");

        _usdcContract.transferFrom(_msgSender(), address(this), tokensNumber.mul(getTokenPrice()));
        uint256[] memory tokenIds = _landsContract.mintTokens(_msgSender(), tokensNumber);
        return tokenIds;
    }

    function getTokenPrice() internal view returns (uint256) {
        return _tokenPrice;
    }

    function setLandsContract(address landsContractAddress) public onlyOwner {
        require(landsContractAddress != address(this), "wrong address");
        _landsContract = ILandsNftContract(landsContractAddress);
    }

    function setUsdcContract(address usdcContractAddress) public onlyOwner {
        require(usdcContractAddress != address(this), "wrong address");
        _usdcContract = IERC20(usdcContractAddress);
    }

    function withdrawToken(address _tokenContract, uint256 _amount) external onlyOwner {
        IERC20 tokenContract = IERC20(_tokenContract);
        tokenContract.transfer(msg.sender, _amount);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }
}