contract ValuesBondStakeDepository is Ownable {
    using FixedPoint for *;
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    ISwapRouter public swapRouter;

    /* ======== EVENTS ======== */

    event BondCreated(
        uint256 deposit,
        uint256 indexed payout,
        uint256 indexed expires,
        uint256 indexed priceInUSD
    );
    event BondRedeemed(
        address indexed recipient,
        uint256 payout,
        uint256 remaining
    );
    event BondPriceChanged(
        uint256 indexed priceInUSD,
        uint256 indexed internalPrice
    );

    /* ======== STATE VARIABLES ======== */

    address public immutable VALUES; // intermediate reward token from treasury
    address public immutable sVALUES; // token given as payment for bond
    address public immutable principle; // token used to create bond
    address public immutable DAO; // receives profit share from bond

    address public staking; // to stake and claim if no staking warmup

    Terms public terms; // stores terms for new bonds

    mapping(address => Bond) public bondInfo; // stores bond information for depositors
    mapping(address => bool) public lps; // stores lps information

    bool public swappable = true;
    /* ======== STRUCTS ======== */

    // Info for creating new bonds
    struct Terms {
        uint256 vestingTerm; // in timestamp
        uint256 minimumPrice; // vs principle value
        uint256 maxPayout; // in thousandths of a %. i.e. 500 = 0.5%
        uint256 lp; //
        uint256 pool; // as % of bond payout, in hundreths. ( 500 = 5% = 0.05 for every 1 paid)
        uint24 poolFee; // as % of bond payout, in hundreths. ( 500 = 5% = 0.05 for every 1 paid)
    }

    // Info for bond holder
    struct Bond {
        uint256 payout; //values at the moment of bond
        uint256 vesting; // Blocks left to vest
        uint256 lastTimestamp; // Last interaction
        uint256 pricePaid; // In DAI, for front end viewing
        uint256 gonsPayout; // sVALUES gons remaining to be paid
    }

    /* ======== INITIALIZATION ======== */

    constructor(
        address _VALUES,
        address _sVALUES,
        address _principle,
        address _DAO
    ) {
        require(_VALUES != address(0));
        VALUES = _VALUES;
        require(_sVALUES != address(0));
        sVALUES = _sVALUES;
        require(_principle != address(0));
        principle = _principle;
        require(_DAO != address(0));
        DAO = _DAO;
    }

    /**
     *  @notice initializes bond parameters
     *  @param _vestingTerm uint
     *  @param _minimumPrice uint
     *  @param _maxPayout uint
     *  @param _lp uint
     *  @param _pool uint
     *  @param _poolFee uint
     */
    function initializeBondTerms(
        uint256 _vestingTerm,
        uint256 _minimumPrice,
        uint256 _maxPayout,
        uint256 _lp,
        uint256 _pool,
        uint24 _poolFee
    ) external onlyOwner {
        terms = Terms({
            vestingTerm: _vestingTerm,
            minimumPrice: _minimumPrice,
            maxPayout: _maxPayout,
            lp: _lp,
            pool: _pool,
            poolFee: _poolFee
        });
    }

    /**
     *  @notice set contract for auto stake
     *  @param _staking address
     */
    function setStaking(address _staking) external onlyOwner {
        require(_staking != address(0));
        staking = _staking;
    }

    function setRouter(ISwapRouter _swapRouter) external onlyOwner {
        swapRouter = _swapRouter;
    }

    function setLp(address _lp, bool _status) external onlyOwner {
        lps[_lp] = _status;
    }

    function setSwappable(bool _status) external onlyOwner {
        swappable = _status;
    }

    /* ======== USER FUNCTIONS ======== */

    /**
     *  @notice deposit bond
     *  @param _amount uint
     *  @param _maxPrice uint
     *  @param _recipient address
     *  @param _lp address
     *  @return uint
     */
    function deposit(
        uint256 _amount,
        uint256 _maxPrice,
        address _recipient,
        address _lp
    ) external returns (uint256) {
        require(
            _maxPrice >= bondPrice(),
            'Slippage limit: more than max price'
        ); // slippage protection
        require(isLp(_lp) == true, 'Not active provider'); // condition for bond creation
        uint256 value = valueOfToken(principle, _amount);
        uint256 payout = payoutFor(value); // payout to bonder is computed

        require(payout >= 10000000, 'Bond too small'); // must be > 0.01 VALUES ( underflow protection )
        require(payout <= maxPayout(), 'Bond too large'); // size protection because there is no slippage

        // profits are calculated
        address depositor = _recipient;
        address provider = _lp;
        uint256 amount = _amount;
        uint256 lp = amount.mul(terms.lp).div(10000);
        uint256 pool = amount.mul(terms.pool).div(10000);
        uint256 totalValues = payout;
        uint256 daoProfit = amount.sub(lp).sub(pool);

        IERC20(principle).safeTransferFrom(msg.sender, address(this), amount);
        IERC20(principle).approve(address(DAO), amount);
        IERC20(principle).safeTransfer(DAO, daoProfit);
        IERC20(VALUES).safeTransferFrom(DAO, address(this), totalValues);

        IERC20(VALUES).approve(staking, totalValues);
        IValuesStaking(staking).stake(totalValues, address(this));
        IValuesStaking(staking).claim(address(this));

        IERC20(principle).transfer(address(provider), lp);

        uint256 stakeGons = IsVALUES(sVALUES).gonsForBalance(payout);
        Bond memory info = bondInfo[depositor];
        uint256 gonsPayout = info.gonsPayout.add(stakeGons);
        uint256 payoutBond = info.payout.add(payout);
        uint256 priceInUSD = bondPriceInUSD(); // Stored in bond info

        Bond memory newBond = Bond({
            gonsPayout: gonsPayout,
            payout: payoutBond,
            vesting: terms.vestingTerm,
            lastTimestamp: block.timestamp,
            pricePaid: priceInUSD
        });
        // depositor info is stored
        bondInfo[depositor] = newBond;

        // Swap to Values

        if (isSwappable()) {
            _swapToValues(pool, address(DAO));
        } else {
            IERC20(principle).safeTransfer(DAO, pool);
        }

        // indexed events are emitted
        emit BondCreated(
            amount,
            payout,
            block.timestamp.add(terms.vestingTerm),
            priceInUSD
        );

        return payout;
    }

    function _swapToValues(uint256 amountIn, address recipient)
        internal
        returns (uint256 amountOut)
    {
        // msg.sender must approve this contract

        // Transfer the specified amount of USDC to this contract.

        IERC20(principle).approve(address(swapRouter), amountIn);
        // Naively set amountOutMinimum to 0. In production, use an oracle or other data source to choose a safer value for amountOutMinimum.
        // We also set the sqrtPriceLimitx96 to be 0 to ensure we swap our exact input amount.
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: principle,
                tokenOut: VALUES,
                fee: terms.poolFee,
                recipient: recipient,
                deadline: block.timestamp,
                amountIn: amountIn,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });

        // The call to `exactInputSingle` executes the swap.
        amountOut = swapRouter.exactInputSingle(params);
    }

    function valueOfToken(address _token, uint256 _amount)
        public
        view
        returns (uint256 value_)
    {
        // convert amount to match VALUES decimals
        value_ = _amount.mul(10**IERC20(VALUES).decimals()).div(
            10**IERC20(_token).decimals()
        );
    }

    /**
     *  @notice redeem bond for user
     *  @param _recipient address
     *  @param _stake bool
     *  @return uint
     */
    function redeem(address _recipient, bool _stake)
        external
        returns (uint256)
    {
        Bond memory info = bondInfo[_recipient];
        uint256 percentVested = percentVestedFor(_recipient); // (timestamp since last interaction / vesting term remaining)

        require(percentVested >= 10000, 'not fully vested'); // if fully vested
        delete bondInfo[_recipient]; // delete user info
        uint256 _amount = IsVALUES(sVALUES).balanceForGons(info.gonsPayout);
        emit BondRedeemed(_recipient, _amount, 0); // emit bond data
        IERC20(sVALUES).transfer(_recipient, _amount); // pay user everything due
        return _amount;
    }

    /**
     *  @notice determine maximum bond size
     *  @return uint
     */
    function maxPayout() public view returns (uint256) {
        return IERC20(VALUES).totalSupply().mul(terms.maxPayout).div(100000);
    }

    /**
     *  @notice calculate interest due for new bond
     *  @param _value uint
     *  @return uint
     */
    function payoutFor(uint256 _value) public view returns (uint256) {
        return
            FixedPoint.fraction(_value, bondPrice()).decode112with18().div(
                1e16
            );
    }

    /**
     *  @notice calculate current bond premium
     *  @return price_ uint
     */
    function bondPrice() public view returns (uint256 price_) {
        price_ = terms.minimumPrice;
    }

    function isLp(address _lp) public view returns (bool) {
        return lps[_lp];
    }

    function isSwappable() public view returns (bool) {
        return swappable;
    }

    /**
     *  @notice converts bond price to DAI value
     *  @return price_ uint
     */
    function bondPriceInUSD() public view returns (uint256 price_) {
        price_ = bondPrice().mul(10**IERC20(principle).decimals()).div(100);
    }

    /**
     *  @notice calculate how far into vesting a depositor is
     *  @param _depositor address
     *  @return percentVested_ uint
     */
    function percentVestedFor(address _depositor)
        public
        view
        returns (uint256 percentVested_)
    {
        Bond memory bond = bondInfo[_depositor];
        uint256 timeSinceLast = block.timestamp.sub(bond.lastTimestamp);
        uint256 vesting = bond.vesting;

        if (vesting > 0) {
            percentVested_ = timeSinceLast.mul(10000).div(vesting);
        } else {
            percentVested_ = 0;
        }
    }

    /**
     *  @notice calculate amount of VALUES available for claim by depositor
     *  @param _depositor address
     *  @return pendingPayout_ uint
     */
    function pendingPayoutFor(address _depositor)
        external
        view
        returns (uint256 pendingPayout_)
    {
        uint256 percentVested = percentVestedFor(_depositor);
        uint256 payout = IsVALUES(sVALUES).balanceForGons(
            bondInfo[_depositor].gonsPayout
        );

        if (percentVested >= 10000) {
            pendingPayout_ = payout;
        } else {
            pendingPayout_ = payout.mul(percentVested).div(10000);
        }
    }

    /* ======= AUXILLIARY ======= */

    /**
     *  @notice allow anyone to send lost tokens (excluding principle or VALUES) to the DAO
     *  @return bool
     */
    function recoverLostToken(address _token) external returns (bool) {
        require(_token != VALUES);
        require(_token != sVALUES);
        require(_token != principle);
        IERC20(_token).safeTransfer(
            DAO,
            IERC20(_token).balanceOf(address(this))
        );
        return true;
    }
}

