contract AdminModule is Variables, Events {

    modifier onlyOwner {
        require(IProxy(address(this)).getAdmin() == msg.sender, "not-an-admin");
        _;
    }

    /**
    * @dev updates fee for flashloan.
    * @param fee_ 1 = 1BPS = 0.01%.
    */
    function updateFee(uint fee_) onlyOwner external {
        require(fee_ < 10000, "invalid-fee");
        _fee = fee_;
        emit updateFeeLog(_fee);
    }

}

