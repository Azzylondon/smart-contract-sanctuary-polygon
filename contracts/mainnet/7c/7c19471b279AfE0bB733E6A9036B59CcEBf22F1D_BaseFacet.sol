import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import {LibOrders} from "../../shared/libraries/LibOrders.sol"; 

import {
    AppStorage,
    Modifiers,
    AssetStandard,
    AssetVersion
} from "../libraries/LibAppStorage.sol";

contract BaseFacet is Modifiers {
    AppStorage internal s;
    
    using ECDSA for bytes32;
    using SafeERC20 for IERC20;

    receive() external payable {}

    event CollectionTracked(
        address indexed collection,
        AssetStandard standard,
        AssetVersion version,
        bool tracked
    );

//  --------------------------------------------------------------------------
//  ----------- Accessors ----------------------------------------------------
//  --------------------------------------------------------------------------

/// @dev Get collection tracking nonce.
    function getTrackingNonce() external view returns (uint64) {

        return s.trackingNonce;
    }

/// @dev Get mint nonce.
    function getMintNonce(
        address account
    ) external view returns (uint64) {

        return s.mintNonce[account];
    }

/// @dev Get burn nonce.
    function getBurnNonce(
        address account
    ) external view returns (uint64) {

        return s.burnNonce[account];
    }

/// @dev Get transfer nonce.
    function getTransferNonce(
        address account
    ) external view returns (uint64) {

        return s.transferNonce[account];
    }

//  --------------------------------------------------------------------------
//  ----------- Base configuration -------------------------------------------
//  --------------------------------------------------------------------------

/// @dev Sets signer account.
    function setSigner(
        address signer,
        bool enabled
    ) external onlyDiamondOwner {

        s.signers[signer] = enabled;
    }

/// @dev Track / untrack collection
    function setCollectionTracked(
        address collection,
        AssetStandard standard,
        AssetVersion version,
        bool tracked,
        uint64 nonce,
        bytes memory signature
    ) external {

        require(
            s.signers[
                keccak256(
                    abi.encodePacked(
                        collection,
                        standard,
                        version,
                        tracked,
                        block.chainid,
                        nonce
                    ) 
                ).toEthSignedMessageHash().recover(signature)
            ],
            "invalid signature"
        );

        require(s.trackingNonce++ == nonce, "invalid nonce");

        emit CollectionTracked(collection, standard, version, tracked);

        s.collections[standard][version][collection] = tracked;
    }

//  --------------------------------------------------------------------------
//  ----------- Withdraw functions -------------------------------------------
//  --------------------------------------------------------------------------

/// @dev Transfer `value` from the contract to `to`.
    function withdraw(
        address to,
        uint256 value
    ) external onlyDiamondOwner {

        payable(to).transfer(value);
    }

/// @dev Transfer `value` tokens from the contract to `to`.
    function withdrawERC20(
        address to,
        address token,
        uint256 value
    ) external onlyDiamondOwner {

        IERC20(token).safeTransfer(to, value);
    }

//  --------------------------------------------------------------------------
//  ----------- Receiver callbacks -------------------------------------------
//  --------------------------------------------------------------------------

/// @dev {IERC721Receiver}.
    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC721Received.selector;
    }

/// @dev {IERC1155Receiver}.
    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {

        return this.onERC1155Received.selector;
    }

/// @dev {IERC1155Receiver}.
    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual returns (bytes4) {

        return this.onERC1155BatchReceived.selector;
    }
}

