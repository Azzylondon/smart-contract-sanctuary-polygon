        for (uint256 i = 0; i < uniswapNFTs.length; i++) {
            if (uniswapNFTs[i] == tokenId) {
                if (uniswapNFTs.length > 1) {
                    uniswapNFTs[i] = uniswapNFTs[uniswapNFTs.length - 1];
                    uniswapNFTs.pop();
