pragma solidity ^0.8.4;

import "base64-sol/base64.sol";
import "./IMeshASketchHelper.sol";

contract MeshASketchHelper is IMeshASketchHelper {
    bytes constant addressAlphabet = "0123456789abcdef";
    bytes constant addressAttributePrefix =
        '{"trait_type":"Contributor","value":"';

    /**
     * JSONifys the token information
     */
    function getMetadata(
        address payable[] memory contributorAddresses,
        uint256 remainingContributions,
        string memory path
    ) external pure override returns (string memory) {
        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    Base64.encode(
                        bytes(
                            abi.encodePacked(
                                '{"name":"',
                                'Mesh A Sketch","attributes":[{"trait_type":"Contributions remaining","display_type":"number","value":',
                                toString(remainingContributions),
                                "},",
                                serializeAddresses(contributorAddresses),
                                '],"image":"',
                                abi.encodePacked(
                                    "data:image/svg+xml;base64,",
                                    Base64.encode(
                                        bytes(
                                            abi.encodePacked(
                                                '<svg height="200" width="200" xmlns="http://www.w3.org/2000/svg"><path d="',
                                                path,
                                                '" fill="none" stroke="#000" stroke-width="1"/></svg>'
                                            )
                                        )
                                    )
                                ),
                                '"}'
                            )
                        )
                    )
                )
            );
    }

    /**
     * Openzepplin implementation from Strings.sol
     * @dev Converts a `uint256` to its ASCII `string` decimal representation.
     */
    function toString(uint256 value)
        public
        pure
        override
        returns (string memory)
    {
        if (value == 0) {
            return "0";
        }
        uint256 temp = value;
        uint256 digits;
        while (temp != 0) {
            digits++;
            temp /= 10;
        }
        bytes memory buffer = new bytes(digits);
        while (value != 0) {
            digits -= 1;
            buffer[digits] = bytes1(uint8(48 + uint256(value % 10)));
            value /= 10;
        }
        return string(buffer);
    }

    function toString(bytes memory data) public pure returns (string memory) {
        bytes memory str = new bytes(2 + data.length * 2);

        for (uint256 i = 0; i < data.length; i++) {}
        return string(str);
    }

    /**
     * String length = 42 char addresses + comma and -1 for the final comma
     */
    function serializeAddresses(address payable[] memory addresses)
        internal
        pure
        returns (string memory)
    {
        /* 42 char addresses with quotations plus one comma, less final last comma */
        bytes memory commaSeparatedAddresses = new bytes(
            addresses.length * 82 - 1
        );
        uint256 currentWriteIndex = 0;
        for (uint256 i = 0; i < addresses.length; i++) {
            /* Only add comma if not doing first iteration */
            if (i > 0) {
                commaSeparatedAddresses[currentWriteIndex++] = ",";
            }

            for (uint256 j = 0; j < addressAttributePrefix.length; j++) {
                commaSeparatedAddresses[
                    currentWriteIndex++
                ] = addressAttributePrefix[j];
            }

            bytes memory addressBytes = abi.encodePacked(addresses[i]);
            commaSeparatedAddresses[currentWriteIndex++] = "0";
            commaSeparatedAddresses[currentWriteIndex++] = "x";
            for (uint256 j = 0; j < addressBytes.length; j++) {
                commaSeparatedAddresses[currentWriteIndex++] = addressAlphabet[
                    uint256(uint8(addressBytes[j] >> 4))
                ];
                commaSeparatedAddresses[currentWriteIndex++] = addressAlphabet[
                    uint256(uint8(addressBytes[j] & 0x0f))
                ];
            }

            commaSeparatedAddresses[currentWriteIndex++] = '"';
            commaSeparatedAddresses[currentWriteIndex++] = "}";
        }
        return string(commaSeparatedAddresses);
    }
}

