pragma solidity 0.8.12;
import "@gnosis.pm/safe-contracts/contracts/proxies/GnosisSafeProxyFactory.sol";
import "@gnosis.pm/safe-contracts/contracts/libraries/MultiSend.sol";
import "@gnosis.pm/zodiac/contracts/factory/ModuleProxyFactory.sol";
import "@gnosis.pm/safe-contracts/contracts/GnosisSafeL2.sol";
import "./TrustedTxModifier.sol";

interface IGnosisSafeProxyFactory {
    function createProxy(address singleton, bytes memory data)
        external
        returns (GnosisSafeProxy proxy);
}

interface IOwnerManager {
    function getThreshold() external view returns (uint256);

    function getOwners() external view returns (address[] memory);
}

contract WalletDeployer is ModuleProxyFactory {
    address public immutable gnosisMultisendLibrary;
    GnosisSafeProxyFactory public immutable safeFactory;
    address public immutable safeSingleton;
    address public immutable moduleSingleton;
    address public immutable fallbackHandler;
    ModuleProxyFactory public immutable moduleProxyFactory;

    event ModuleSetup(address moduleAddress, address safeAddress);
    event TrustedTxModifierSetup(
        address avatar,
        address target,
        address _authorities
    );

    constructor(
        address _gnosisMultisendLibrary,
        address _safeFactory,
        address _safeSingleton,
        address _fallbackHandler,
        address _moduleSingleton,
        address _moduleProxyFactory
    ) {
        gnosisMultisendLibrary = _gnosisMultisendLibrary;
        safeFactory = GnosisSafeProxyFactory(_safeFactory);
        safeSingleton = _safeSingleton;
        fallbackHandler = _fallbackHandler;
        moduleSingleton = _moduleSingleton;
        moduleProxyFactory = ModuleProxyFactory(_moduleProxyFactory);
    }

    function deployTrustedTxModifierAndSafe(uint256 _saltNonce, address authorities)
        public
        returns (address trustedTxModifier, address payable safe)
    {
        safe = payable(safeFactory.createProxy(safeSingleton, hex"00"));

        trustedTxModifier = deployTrustedTxModifier(safe, _saltNonce, authorities);

        bytes memory multisendAction = _generateMultisendAction(
            trustedTxModifier,
            safe
        );

        address[] memory owners = new address[](1);
        owners[0] = address(2);

        GnosisSafe(safe).setup(
            owners,
            1,
            gnosisMultisendLibrary,
            multisendAction,
            fallbackHandler,
            address(0),
            0,
            payable(address(0))
        );

        emit ModuleSetup(address(trustedTxModifier), address(safe));
    }

    function deployAndSetupSafesMultiple(uint256 numSafes, uint256 _saltNonce, address authorities)
        external
    {
        for (uint256 i = 0; i < numSafes; i++) {
            deployTrustedTxModifierAndSafe(_saltNonce, authorities);
        }
    }

    function deployTrustedTxModifier(address _safe, uint256 _saltNonce, address authorities)
        public
        returns (address)
    {
        bytes memory initializeParams = abi.encode(_safe, _safe, authorities);

        address trustedTxModifier = moduleProxyFactory.deployModule(
            moduleSingleton,
            abi.encodeWithSignature("setUp(bytes)", initializeParams),
            _saltNonce
        );

        emit TrustedTxModifierSetup(_safe, _safe, authorities);

        return trustedTxModifier;
    }

    function _generateMultisendAction(address trustedTxModifier, address safe)
        internal
        view
        returns (bytes memory _action)
    {
        bytes memory enableTrustedTxModifier = abi.encodeWithSignature(
            "enableModule(address)",
            trustedTxModifier
        );

        bytes memory setGuard = abi.encodeWithSignature(
            "setGuard(address)",
            trustedTxModifier
        );

        bytes memory packedCalls = abi.encodePacked(
            uint8(0),
            safe,
            uint256(0),
            uint256(enableTrustedTxModifier.length),
            bytes(enableTrustedTxModifier),
            uint8(0),
            safe,
            uint256(0),
            uint256(setGuard.length),
            bytes(setGuard)
        );

        _action = abi.encodeWithSignature("multiSend(bytes)", packedCalls);
    }
}

