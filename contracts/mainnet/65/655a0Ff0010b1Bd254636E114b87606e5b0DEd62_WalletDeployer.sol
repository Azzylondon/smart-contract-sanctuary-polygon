import "@gnosis.pm/zodiac/contracts/core/Modifier.sol";
import "@gnosis.pm/safe-contracts/contracts/base/OwnerManager.sol";
import "./Domain.sol";

interface IAuthorities {
    function isAuthority(address) external view returns (bool);
}

contract TrustedTxModifier is Modifier, Domain {
    event ModifierSetup(
        address indexed initiator,
        address indexed owner,
        address indexed avatar,
        address target
    );

    event Ejected();

    event AuthorityChanged(address _authorities);

    struct SigParams {
        uint8 v;
        bytes32 r;
        bytes32 s;
    }

    modifier onlySafeOwner() {
        require(OwnerManager(avatar).isOwner(_msgSender()), "Not safe owner");
        _;
    }

    /// @param _avatar Address of the avatar (e.g. a Gnosis Safe)
    /// @param _target Address of the contract that will call exec function
    /// @param _authorities Address of the contract that will manage authorizing addresses
    constructor(
        address _avatar,
        address _target,
        address _authorities
    ) {
        bytes memory initParams = abi.encode(_avatar, _target, _authorities);
        setUp(initParams);
        paused = false;
    }

    address public authorities;
    uint256 public nonce;
    bool public paused;

    function pause() external onlySafeOwner {
        paused = true;
    }

    function unpause() external onlySafeOwner {
        paused = false;
    }

    function DOMAIN_SEPARATOR() external view returns (bytes32) {
        return _domainSeparator();
    }

    bytes32 private constant CREATE_TRANSACTION_HASH =
        keccak256(
            "CreateTransaction(address to,uint256 value,bytes data,uint8 operation)"
        );

    bytes32 private constant CHANGE_AUTHORITIES_HASH =
        keccak256("ChangeAuthorities(address authority)");

    bytes32 private constant EJECT_WALLET_HASH =
        keccak256("Eject(address newOwner)");

    //delete owner with authorities
    function setUp(bytes memory initParams) public override {
        (address _avatar, address _target, address _authorities) = abi.decode(
            initParams,
            (address, address, address)
        );
        // __Ownable_init();
        require(_avatar != address(0), "Avatar can not be zero address");
        require(_target != address(0), "Target can not be zero address");
        require(_authorities != address(0), "Target can not be zero address");

        avatar = _avatar;
        target = _target;
        authorities = _authorities;

        paused = false;

        // transferOwnership(_owner);
        setupModules();

        // emit ModifierSetup(msg.sender, _owner, _avatar, _target);
    }

    /// @dev Executes the next transaction only if accompanying signature resolves to an Authority
    /// @param to Destination address of module transaction
    /// @param value Ether value of module transaction
    /// @param data Data payload of module transaction
    /// @param operation Operation type of module transaction
    /// @param sigParams Split signature of owner
    /// @notice The txIndex used by this function is always 0
    function executeTransaction(
        address to,
        uint256 value,
        bytes calldata data,
        Enum.Operation operation,
        SigParams calldata sigParams
    ) public {
        require(
            !paused,
            "TrustedTxModifier: Executing transactions is paused."
        );
        {
            bytes32 txHash = keccak256(
                abi.encode(
                    CREATE_TRANSACTION_HASH,
                    to,
                    value,
                    data,
                    operation,
                    nonce
                )
            );
            require(
                IAuthorities(authorities).isAuthority(
                    ecrecover(
                        _getDigest(txHash),
                        sigParams.v,
                        sigParams.r,
                        sigParams.s
                    )
                ),
                "Signature not that of an authority"
            );
        }

        require(exec(to, value, data, operation), "Module transaction failed");
    }

    function changeAuthorities(
        address _authorities,
        SigParams calldata sigParams
    ) public {
        require(
            !paused,
            "TrustedTxModifier: Executing transactions is paused."
        );
        {
            bytes32 txHash = keccak256(
                abi.encode(CHANGE_AUTHORITIES_HASH, _authorities)
            );
            require(
                IAuthorities(authorities).isAuthority(
                    ecrecover(
                        _getDigest(txHash),
                        sigParams.v,
                        sigParams.r,
                        sigParams.s
                    )
                ),
                "Signature not that of an authority"
            );
        }

        authorities = _authorities;

        emit AuthorityChanged(_authorities);
    }

    function eject(
        bytes calldata data,
        Enum.Operation operation,
        SigParams calldata sigParams
    ) public {
        require(
            !paused,
            "TrustedTxModifier: Executing transactions is paused."
        );
        {
            bytes32 txHash = keccak256(
                abi.encode(EJECT_WALLET_HASH, avatar, 0, data, operation, nonce)
            );
            require(
                IAuthorities(authorities).isAuthority(
                    ecrecover(
                        _getDigest(txHash),
                        sigParams.v,
                        sigParams.r,
                        sigParams.s
                    )
                ),
                "Signature not that of an authority"
            );
        }

        require(exec(avatar, 0, data, operation), "Claim transaction failed");

        emit Ejected();
    }

    function setupModules() internal {
        require(
            modules[SENTINEL_MODULES] == address(0),
            "setUpModules has already been called"
        );
        modules[SENTINEL_MODULES] = SENTINEL_MODULES;
    }
}

