import '@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol';
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";

import "./mirrors/Staking.sol";


contract Strategy is Initializable, AccessControlUpgradeable, PausableUpgradeable {

    struct Reserves {
        uint112 _reserve0;
        uint112 _reserve1;
        uint32 _blockTimestampLast;
    }

    using SafeERC20Upgradeable for IERC20Upgradeable;

    bytes32 public constant OWNER = keccak256("OWNER");
    bytes32 public constant BOT = keccak256("BOT");

    address KLIMA_ADDRESS = 0x4e78011Ce80ee02d2c3e649Fb657E45898257815;
    address USDC_ADDRESS = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
    address STAKING_ADDRESS = 0x25d28a24Ceb6F81015bB0b2007D795ACAc411b4d;
    address SUSHI_ADDRESS = 0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506;
    address HELPER_ADDRESS = 0x4D70a031Fc76DA6a9bC0C922101A05FA95c3A227;

    IERC20Upgradeable KLIMA_TOKEN = IERC20Upgradeable(KLIMA_ADDRESS);
    IERC20Upgradeable S_KLIMA_TOKEN = IERC20Upgradeable(0xb0C22d8D350C67420f06F48936654f567C73E8C8);
    IERC20Upgradeable USDC_TOKEN = IERC20Upgradeable(USDC_ADDRESS);
    IERC20Uniswap SLP_TOKEN = IERC20Uniswap(0x5786b267d35F9D011c4750e0B0bA584E1fDbeAD1);

    StakingHelper KLIMA_STAKING_HELPER = StakingHelper(HELPER_ADDRESS);
    Distributor DISTRIBUTOR = Distributor(0x4cC7584C3f8FAABf734374ef129dF17c3517e9cB);
    KlimaStaking STAKING = KlimaStaking(STAKING_ADDRESS);
    UniswapV2Router02 SUSHI = UniswapV2Router02(SUSHI_ADDRESS);

    uint256 public constant amount = 11579208923731619542357098500868790785326998466564056403;

    event Withdraw(address account, uint256 amount, address tokenAddress);

    function initialize(address owner_, address bot_) external initializer {
        require(owner_ != address(0));
        require(bot_ != address(0));

        __Pausable_init();
        __AccessControl_init();


        _setupRole(OWNER, owner_);
        _setupRole(BOT, bot_);
        _setRoleAdmin(BOT, OWNER);
    }

    function approveSushiToSpendUSDC() public onlyRole(BOT) {
        USDC_TOKEN.approve(SUSHI_ADDRESS, amount);
    }

    function approveKlimaHelperToSpendKLIMA() public onlyRole(BOT) {
        KLIMA_TOKEN.approve(HELPER_ADDRESS, amount);
    }

    function approveSushiToSpendKLIMA() public onlyRole(BOT) {
        KLIMA_TOKEN.approve(SUSHI_ADDRESS, amount);
    }

    function approveStakingToSpendSKLIMA() public onlyRole(BOT) {
        S_KLIMA_TOKEN.approve(STAKING_ADDRESS, amount);
    }

    function approveSushiToSpendSLP() public onlyRole(BOT) {
        SLP_TOKEN.approve(SUSHI_ADDRESS, amount);
    }

    function removeLiquidityAndStake() public onlyRole(BOT) whenNotPaused returns (bool) {
        require(hasRole(BOT, msg.sender));

        uint slp_balance = SLP_TOKEN.balanceOf(address(this));
        uint total_supply = SLP_TOKEN.totalSupply();
        uint share = slp_balance / total_supply;

        uint112 r0;
        uint112 r1;
        uint32 blockTimestampLast;

        (r0, r1, blockTimestampLast) = SLP_TOKEN.getReserves();

        uint usd_share = r0 * share;
        uint klima_share = r1 * share;

        SUSHI.removeLiquidity(
            USDC_ADDRESS,
            KLIMA_ADDRESS,
            slp_balance,
            usd_share * 1000 / 1005,
            klima_share * 1000 / 1005,
            address(this),
            block.timestamp + 45
        );

        uint klima_balance = KLIMA_TOKEN.balanceOf(address(this));
        KLIMA_STAKING_HELPER.stake(klima_balance);
        return true;
    }

    function unstake(uint usdc_amount_, uint klima_amount_) public onlyRole(BOT) whenNotPaused returns (bool) {
        uint s_klima_balance = S_KLIMA_TOKEN.balanceOf(address(this));
        STAKING.unstake(s_klima_balance, false);

        SUSHI.addLiquidity(
            USDC_ADDRESS,
            KLIMA_ADDRESS,
            usdc_amount_,
            klima_amount_,
            usdc_amount_ * 1000 / 1005,
            klima_amount_ * 1000 / 1005,
            address(this),
            block.timestamp + 45
        );
        return true;
    }

    function pause() public onlyRole(OWNER) returns (bool) {
        _pause();
        return true;
    }

    function resume() public onlyRole(OWNER) returns (bool) {
        _unpause();
        return true;
    }

    function withdraw(address tokenAddress_) public onlyRole(OWNER) returns (bool) {
        IERC20Upgradeable token = IERC20Upgradeable(tokenAddress_);
        uint256 balance = token.balanceOf(address(this));
        token.safeTransfer(msg.sender, balance);

        emit Withdraw(msg.sender, balance, address(tokenAddress_));
        return true;
    }
}

