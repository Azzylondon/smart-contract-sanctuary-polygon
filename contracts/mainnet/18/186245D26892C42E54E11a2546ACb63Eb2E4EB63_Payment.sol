struct Bill {
    uint256 telegramUserId;
    uint256[] groups;
    uint256 period;
    uint256 until;
}


contract Payment {

    using SafeMath for uint256;

    address payable public owner;
    uint256 public baseRatePriceInGwei;
    uint256 public baseRateDays;
    mapping(uint256 => Bill[]) public bills;

    event NewBill(Bill bill);

    constructor() payable {
        owner = payable(msg.sender);
        baseRatePriceInGwei = 2912621359; //matic
        baseRateDays = 30;
    }

    modifier onlyOwner() {
        require (msg.sender == owner);
        _;
    }

    function deposit() public payable {}

    function withdraw() public onlyOwner(){
        uint amount = address(this).balance;

        (bool success,) = owner.call{value: amount}("");
        require(success, "Failed to send");
    }

    function setPrice(uint256 _price) public onlyOwner(){
        baseRatePriceInGwei = _price;
    }

    function setDays(uint256 _days) public onlyOwner(){
        baseRateDays = _days;
    }


    function getAllUserBills(uint256 _telegramUserId) public view returns(Bill[] memory){
        return bills[_telegramUserId];
    }

    function pay(uint256 _telegramUserId, uint256[] memory _groups, uint256 _days) public payable{
        require(_groups.length > 0, "At least one group");
        require(_days >= baseRateDays, "At least baseRateDays days");

        uint256 b = _days.div(baseRateDays);
        uint256 a = baseRatePriceInGwei.mul(_groups.length);
        uint256 price = a.mul(b);
        uint256 priceInGwei = price * 1 gwei;

        require(msg.value >= priceInGwei, "Amount should be bigger than baseRatePriceInGwei");

        Bill memory _bill;
        _bill.telegramUserId = _telegramUserId;
        _bill.groups = _groups;
        _bill.until = block.timestamp + _days * 1 days;
        _bill.period = _days;

        bills[_bill.telegramUserId].push(_bill);

        emit NewBill(_bill);
    }
}