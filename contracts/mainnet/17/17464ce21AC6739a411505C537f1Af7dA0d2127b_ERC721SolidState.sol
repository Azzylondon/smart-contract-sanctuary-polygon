        address to,
        uint256 tokenId
    ) internal virtual override {
        uint256 cardPower = _cardPower(tokenId);
        if(from != address(0)) {
            _decreaseUserPower(from, cardPower);
        }
        if(to != address(0)) {
            _increaseUserPower(to, cardPower);
        }
    }
    
}

