//The Ribby Contract manages the minting and burning of RibbyTokens according to users actions on the ribby.app plaform.
//A ribby is a gift in the form of cryptocurrencies or nfts, and can only be claimed to a personal wallet after a specific delivery date specified by the sender.

pragma solidity 0.8.11;

import "./Ribby.sol";
import "./RibbyTokenContract.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";


contract RibbyContract {
    
    //Owner of the contract
    address payable public owner; //payable for fees

    //Numbering of Ribby ERC-721 Tokens
    uint public currentId;

    //Fees for each package (see package details on ribby.app)
    uint public basicFee = 10000000000000000; //in wei: means 0.01 ETH/BNB/..
    uint public premiumFee = 30000000000000000; //in wei: means 0.03 ETH/BNB/..

    //Ribby ERC-721 Token Contract
    RibbyTokenContract ribbyTokenContract;

    //For clarity, keep track of all balances used in ribbyTokens
    uint public ethBalancesUsedInRibbies = 0;
    mapping(IERC20 => uint) public tokensBalancesUsedInRibbies;
    mapping(IERC721 => mapping(uint => bool)) public nftUsedInRibby;

    //Events
    //Fires when a ribby is created
    event RibbyCreated(uint id, address sender, address receiver, uint timestamp);
    //Fires when a ribby is claimed
    event RibbyClaimed(uint id, address claimer, uint timestamp);

    //Constructor
    constructor(RibbyTokenContract _ribbyTokenContract){
        owner = payable(msg.sender); //Sets the owner (for fees)
        ribbyTokenContract = _ribbyTokenContract; //Sets the Ribby ERC-721 Token Contract
    }

    /* CREATE AND CLAIM RIBBIES */

    //Payable for fees
    function createRibby(string memory _senderName, address _giftee, RibbyTokenContract.TokenType _tokenType, address _tokenAddress, uint _tokenAmountOrId, uint _releaseTimestamp, string memory _message, bool _emergencyUnlock, bool _insuranceProtect) public payable { //payable for fees
        require(_releaseTimestamp >= block.timestamp, "Cannot set release timestamp in past");
        
        //A> Calculate a small fee for the developer based on requirements
        uint _fee = basicFee;
        if(_emergencyUnlock || _insuranceProtect) //Premium Features
            _fee = premiumFee;            

        //B> Transfer the gift funds to the contract (if not already done, i.e. by sending ETH/BNB/..)
        //Ribby Type: Native Currency (ETH, BNB, ..)
        if((_tokenType == RibbyTokenContract.TokenType.NATIVE) && (_tokenAddress == address(0))){
            //1> Check whether the sender sent enough ETH/BNB/.. to cover the gift amount + fee
            require(msg.value >= _fee + _tokenAmountOrId, "The sent amount is not enough to cover the gift + fee");
            //2> Add to balances
            ethBalancesUsedInRibbies += _tokenAmountOrId;
        } 
        //Ribby Type: Fungibel Token (FT|ERC20: E.g. USDT, ..)
        else if((_tokenType == RibbyTokenContract.TokenType.FUNGIBLE_TOKEN) && (_tokenAddress != address(0))){
            //1> Check whether the sender sent enough ETH/BNB/.. to cover the fee
            require(msg.value >= _fee, "The sent amount is not enough to cover the fee");
            //2> Check whether the sender has enough token balance to cover the gift
            IERC20 _token = IERC20(_tokenAddress); //Reverts when token doesnt exists!
            require(_token.balanceOf(msg.sender) >= _tokenAmountOrId, "The sender does not have enough token balance.");
            //3> Check if user gave the contract permission to transfer its tokens
            require(_token.allowance(msg.sender, address(this)) >= _tokenAmountOrId, "The sender did not give this contract permission to transfer (enough) tokens");
            //4> Transfer the gift amount to this contract (sender must approve first!)
            _token.transferFrom(msg.sender, address(this), _tokenAmountOrId);
            //5> Add to balances
            tokensBalancesUsedInRibbies[_token] += _tokenAmountOrId; 
        }
        //Ribby Type: Non Fungible Token (NFT|ERC721: E.g. CryptoPunks, ..)
        else if((_tokenType == RibbyTokenContract.TokenType.NON_FUNGIBLE_TOKEN) && (_tokenAddress != address(0))){
            //1> Check whether the sender sent enough ETH/BNB/.. to cover the fee
            require(msg.value >= _fee, "The sent amount is not enough to cover the fee");
            //2> Check whether the sender owns the nft in the gift
            IERC721 _token = IERC721(_tokenAddress);
            require(_token.ownerOf(_tokenAmountOrId) == msg.sender, "The sender does not own this NFT.");
            //3> Check if user gave the contract permission to transfer the nft
            require(_token.getApproved(_tokenAmountOrId) == address(this), "The sender did not give this contract permission to transfer this nft");
            //4> Transfer the nft to this contract (gifter must approve first!)
            _token.transferFrom(msg.sender, address(this), _tokenAmountOrId);
            //5> Add to balances
            nftUsedInRibby[_token][_tokenAmountOrId] = true; 
        }else 
            revert("Something went wrong");

        //C> Transfer the fee to the owner
        owner.transfer(_fee);

        //D> Transfer some $RIB to the sender (as a reward for using the platform)
        /*uint ribbyReward = 0;
        if(ribby.balanceOf(address(this)) >= ribbyReward)
            ribby.transfer(msg.sender, ribbyReward);*/

        //E> Define a new ID for the Ribby
        uint _id = ++currentId;

        //F> Create the Ribby (= a token allowing the holder to claim the gift after releaseTimestamp)
        RibbyTokenContract.RibbyToken memory _ribbyToken = RibbyTokenContract.RibbyToken(
            RibbyTokenContract.Sender(_senderName, msg.sender), _message, 
            RibbyTokenContract.Token(_tokenType, _tokenAddress, _tokenAmountOrId), 
            RibbyTokenContract.Claimer(_giftee, 0), false, _releaseTimestamp, 
            RibbyTokenContract.PremiumFeatures(_emergencyUnlock, false, _insuranceProtect)
        );
        
        //G> Mint the Ribby Token and send it to the giftee. This token represents the right to withdraw the gift at given timestamp or later.
        ribbyTokenContract.mintRibby(_id, _giftee, _ribbyToken);

        //H> Raise Event (so that dapp can get ribby tokenId)
        emit RibbyCreated(_id, msg.sender, _giftee, block.timestamp);
    }

        
    function claimRibby(uint _id) public{ 
        require(ribbyTokenContract.ownerOf(_id) == msg.sender, "Only the owner of the ribby is allows to claim this ribby");
        
        // A> Fetch the Ribby Token
        (,,RibbyTokenContract.Token memory _token,RibbyTokenContract.Claimer memory claimer ,bool claimed,uint releaseTimestamp,RibbyTokenContract.PremiumFeatures memory _premium) = ribbyTokenContract.ribbyTokens(_id);
        require(!claimed && claimer.timestamp == 0, "This ribby is already claimed");
        
        // B> Is withdraw allowed yet? Check release date/time and early claim state.
        require((block.timestamp >= releaseTimestamp) || (_premium.emergencyUnlock && _premium.emergencyUnlockUsed), "Claim of this ribby is not yet allowed. Wait for the correct date/time. (It is possible that the blockchain is running a bit behind. Please check the latest block creation timestamp.)");

        // C> Send the contents of the ribby to the receiver
        if(_token._type == RibbyTokenContract.TokenType.NATIVE){
            payable(msg.sender).transfer(_token.amountOrId);
            ethBalancesUsedInRibbies -= _token.amountOrId;
        } else if(_token._type == RibbyTokenContract.TokenType.FUNGIBLE_TOKEN){
            IERC20 _ercToken = IERC20(_token._address);
            _ercToken.transfer(msg.sender, _token.amountOrId);
            tokensBalancesUsedInRibbies[_ercToken] -= _token.amountOrId;
        } else if(_token._type == RibbyTokenContract.TokenType.NON_FUNGIBLE_TOKEN){
            IERC721 _ercToken = IERC721(_token._address);
            _ercToken.transferFrom(address(this), msg.sender,_token.amountOrId);
            nftUsedInRibby[_ercToken][_token.amountOrId] = false; 
        } else revert('Something went wrong');
        
        // D> Burn the Ribby
        ribbyTokenContract.burnRibby(_id, msg.sender);

        // E> Emit an Event
        emit RibbyClaimed(_id, msg.sender, block.timestamp);
    }


    //In case the owner wants to change his address
    function updateOwner(address payable _owner) public {
        require(msg.sender == owner, "Only the owner can update the owner :)");
        owner = _owner;
    }

    //Fees might become too low/high depending on the network 
    function updateFees(uint _basicFee, uint _premiumFee) public{
        require(msg.sender == owner, "Only the owner can update the fees :)");
        basicFee = _basicFee;
        premiumFee = _premiumFee;
    }

    //Donations are welcome (ETH, BNB, ..)
    receive() external payable{
        owner.transfer(msg.value);
    }

    //Allows to withdraw any donations or lost tokens
    //This function is present to prevent lost tokens stuck in contracts and allows to withdraw dontations
    //Can also be in the form of ERC-20/.. donations.
    //This function cannot withdraw any tokens amounts which are used in ribbyTokens, as you can verify in the "require" statements below.
    function withdrawDonations(RibbyTokenContract.TokenType _tokenType, address _tokenAddress, uint _id) public payable {
        require(msg.sender == owner, "Only the owner can withdraw donations or lost tokens :)");
        
        if(_tokenType == RibbyTokenContract.TokenType.NATIVE){ //(Normally handled by receive function)
            //Fetch current ETH/BNB/.. balance
            uint _value = address(this).balance;
            //Make sure donations/lost balance are/is present & withdraw (if present)
            require(_value > ethBalancesUsedInRibbies, "No unused ETH to withdraw");
            owner.transfer(_value - ethBalancesUsedInRibbies); //Transfers only the balance of the contract not used in ribbyTokens!
        }else if(_tokenType == RibbyTokenContract.TokenType.FUNGIBLE_TOKEN){
            //Fetch current token balance
            IERC20 _token = IERC20(_tokenAddress);
            uint _value = _token.balanceOf(address(this));
            //Make sure donations/lost balance are/is present & withdraw (if present)
            require(_value > tokensBalancesUsedInRibbies[_token], "No unused tokens to withdraw"); //Transfers only the balance of the contract not used in ribbyTokens!
            _token.transfer(owner, _value - tokensBalancesUsedInRibbies[_token]);
        }else if(_tokenType == RibbyTokenContract.TokenType.NON_FUNGIBLE_TOKEN){
            IERC721 _token = IERC721(_tokenAddress);
            //Check if contract owns given nft and if its not used in any ribby 
            require(_token.ownerOf(_id) == address(this) && !nftUsedInRibby[_token][_id], "No unused nfts to withdraw");
            _token.transferFrom(address(this), owner, _id); //Transfers only the balance of the contract not used in ribbyTokens!
        }
    }
}

