// Ribby is an ERC-721 Token representing ownership of a received gift. 
// This gift is in the form of cryptocurrencies or nfts, and can only be claimed to a personal wallet after a specific delivery date specified by the sender.
// Steps:
// 1. A Ribby is minted when a gift is created by a sender. 
// 2. The Ribby is burned when the receiver claims the ribby (after a specific date set by the sender)
// Ribbies can also be transferred by the receiver to a third party, as it is a token representing ownership of a Ribby.

pragma solidity 0.8.11;

import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "./RibbyContract.sol";

contract RibbyTokenContract is ERC721Enumerable{

    //Ribby is in the form of:
    //{Native Token, Fungible Token, Non-Fungible Token} 
    enum TokenType { NATIVE, FUNGIBLE_TOKEN, NON_FUNGIBLE_TOKEN }  //(e.g. {ETH, ERC20, ERC721 on Ethereum}
    
    //Sender of Ribby
    struct Sender{
        string name; //(Nick)Name of the sender (not required, empty if anonymous)
        address _address;
    }

    //Claimer of the ribby
    struct Claimer {
        address _address; //Address of the claimer
        uint timestamp; //Timestamp at which the ribby has been claimed (0 if unclaimed)
    }

    //Token that is included in the ribby
    struct Token{
        TokenType _type; 
        address _address;
        uint amountOrId; //NON_FUNGIBLE_TOKEN: id, ELSE: amount
    }

    //Premium Features 
    struct PremiumFeatures{
        //1. Emergency Unlock
        //Special feature which allows the receiver to claim the ribby earlier than the specified date (by changing releaseTimestamp)
        bool emergencyUnlock; //Is premium feature emergency unlock enabled? 
        bool emergencyUnlockUsed;
        //2. Insurance Protect
        //Special feature which allows the sender to reclaim the gift when the receiver did not claim the gift one year after the release date.
        bool insuranceProtect; //Is insurance protect feature enabled?
    }

    //The Ribby itself
    struct RibbyToken{
        Sender sender; //Sender of the ribby
        string message; //Personal message of the sender
        Token token; //Contents of the ribby (cryptocurrency or nft)
        Claimer claimer; //Claimer of ribby
        bool claimed; //Set to true if ribby is claimed (initially false)
        uint releaseTimestamp; //Timestamp at which the ribby may be claimed
        PremiumFeatures premium; //Premium features if enabled
    }

    //Empty ribby struct
    RibbyToken nullRibby = RibbyToken(Sender('', address(0)), '', Token(TokenType.NATIVE, address(0), 0), Claimer(address(0),0), false, 0, PremiumFeatures(false, false, false));

    //Mapping of token ID to the Ribby
    mapping(uint => RibbyToken) public ribbyTokens; 

    //Ribbies from senders
    //Amount of ribbyTokens a sender has created
    mapping(address => uint) public senderBalance;  
    //Enumeration of ribbyTokens a sender has created
    mapping(address => mapping(uint => uint)) public tokenFromSenderByIndex; //Sender -> index[0-senderBalance] -> ID

    //Ribbies of claimers 
    //(The initial receiver is not necesarilly a claimer since a receiver can always transfer their ribbyTokens to someone else)
    //Amount of ribbyTokens a claimer has claimed 
    mapping(address => uint) public claimerBalance;
    //Enumeration of ribbyTokens a claimer has claimed
    mapping(address => mapping(uint => uint)) public tokenOfClaimerByIndex; //Claimer -> index[0-claimerBalance] -> ID

    //Ribbies of current owners (=unclaimed ribbyTokens)
    //These values can be consulted using the ERC721Enumerable standard
    //Amount of ribbyTokens a owner has at the current instant: balanceOf(address owner)
    //Enumeration of currently owned ribbyTokens: tokenOfOwnerByIndex(address owner, uint index)

    //Contract owner & Main Contract (mints and burns ribbyTokens)
    address public owner; 
    RibbyContract public ribbyContract;
    bool ribbyContractSet = false;

    //Events
    //Fires when a sender allows a receiver to claim the gift at current time or later (earlier than normal)
    event EarlyClaimUpdate(uint id, uint newReleaseTimestamp); //Token ID
    //Fires when a sender reclaims the ribby after the receiver has not claimed the ribby in time (within one year after release)
    //(Only possible when the sender chose the insurance option during creation)
    event InsuranceReclaim(address originalOwner, address claimedBy, uint id);

    //Constructor
    constructor() ERC721("Ribby", "RBY"){
        owner = msg.sender; //set owner (only used to initially set the main contract)
    }

    //Sets the main contract
    function setRibbyContract(RibbyContract _ribbyContract) external {
        require(msg.sender == owner, "Only the owner can set the ribby contract.");
        require(!ribbyContractSet, "This ribby contract was already set.");        
        ribbyContract = _ribbyContract;
        ribbyContractSet = true;
    }

    //Mints Ribby when Ribbies are created 
    //Only possible by the main contract, which mints/burns ribbyTokens acc. to the senders|receivers|claimers|owners actions
    function mintRibby(uint _id, address _giftee, RibbyToken memory _ribby) external {
        require(msg.sender == address(ribbyContract), "Only the ribby contract can mint ribbyTokens. Please interact with the ribby contract.");
        require(ribbyTokens[_id].sender._address == address(0), "Error: A ribby with this id already exists");
        
        //Mint the ribby
        ribbyTokens[_id] = _ribby; //Add ribby to the ribbyTokens array
        _safeMint(_giftee, _id); //Mint it

        //Update sender ribbyTokens
        uint currentSenderBalance = senderBalance[_ribby.sender._address];
        senderBalance[_ribby.sender._address] = currentSenderBalance + 1;  //increment sender balance
        tokenFromSenderByIndex[_ribby.sender._address][currentSenderBalance] = _id;
    }

    //Burns ribbyTokens when claimed
    function burnRibby(uint _id, address _giftee) external {
        require(msg.sender == address(ribbyContract), "Only the ribby contract can burn vouchers. Please interact with the ribby contract.");
        require(ownerOf(_id) == _giftee, "The given address does not own this ribby!");

        //Set claimed
        ribbyTokens[_id].claimed = true;
        
        //Set claimer & claimed timestamp
        ribbyTokens[_id].claimer._address = _giftee;
        ribbyTokens[_id].claimer.timestamp = block.timestamp; 
        
        //Update claimer ribbyTokens
        uint currentClaimerBalance = claimerBalance[_giftee];
        tokenOfClaimerByIndex[_giftee][currentClaimerBalance] = _id;
        claimerBalance[_giftee] += 1; //Increase the claimer balance
        
        //Burn Ribby!
        _burn(_id); //sets owner to 0x000000..00 (uses ERC721 standard _burn function)
    }

    //[Premium Feature]: Early Claim
    //Allows receivers to claim ribbyTokens from the current date
    //Only callable by senders 
    function allowEarlyClaim(uint _id, uint _newReleaseTimestamp) public{
        //Sender of the ribby must call this function
        require(ribbyTokens[_id].sender._address == msg.sender, "Only the sender can enable early claim");
        //Sender must have enabled premium during purchase
        require(ribbyTokens[_id].premium.emergencyUnlock, "Error, your plan does not support this");
        //Allows the receiver to claim the ribby now
        ribbyTokens[_id].releaseTimestamp = _newReleaseTimestamp;
        ribbyTokens[_id].premium.emergencyUnlockUsed = true;
        emit EarlyClaimUpdate(_id, _newReleaseTimestamp);
    }

    //[Premium Feature]: Insurance Protect
    //Allows receivers to reclaim the ribby (=get back the gift) if the receiver did not claim the gift within one year after release.
    //i.e. transfers ownership of the ribby back to the sender
    function insuranceReclaim(uint _id) public{
        RibbyToken memory _ribby = ribbyTokens[_id];
        //Sender of the ribby must call this function
        require(_ribby.sender._address == msg.sender, "Only the sender can enable early claim");
        //Insurance protect feature must be enabled when voucher was created
        require(_ribby.premium.insuranceProtect, "Your plan does not support this");
        //Voucher may not be claimed yet 
        require(!_ribby.claimed, "This ribby has already been claimed");
        //Current timestamp should be at least one year (31557600 seconds) after ribby release date/time.
        require(block.timestamp >= (_ribby.releaseTimestamp + 31557600) , "The insurance can only reclaim the ribby one year after it has been released. Wait for the correct date/time. (It is possible that the blockchain is running a bit behind. Please check the latest block creation timestamp.)");

        //Transfer the voucher back to the sender
        address _currentOwner = ownerOf(_id);
        _transfer(_currentOwner, _ribby.sender._address, _id);
        
        //Emit Event
        emit InsuranceReclaim(_currentOwner, _ribby.sender._address, _id);
    }

    

}

