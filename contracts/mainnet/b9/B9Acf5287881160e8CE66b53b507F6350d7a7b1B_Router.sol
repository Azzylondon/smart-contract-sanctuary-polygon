pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/Address.sol";
import "./interfaces/IManager.sol";
import "./utils/BaseRelayRecipient.sol";

contract Router is BaseRelayRecipient {
    using Address for address;
    address _manager;

    struct ForwardRequest {
        address to;
        uint256 gas;
        uint256 value;
        bytes data;
    }

    event FunctionRouted(address sender);

    constructor(address manager_, address _trustedForwarder ){
        _manager = manager_;
        trustedForwarder = _trustedForwarder;
    }

    function routeRequest(ForwardRequest calldata req) public returns(bool, bytes memory) {
        require(IManager(_manager).isInitialized(req.to), "Proxy address invalid");

        address signer = _msgSender();

        (bool success, bytes memory returndata) = req.to.call{gas: req.gas}(
            abi.encodePacked(req.data, signer)
        );

        // Validate that the relayer has sent enough gas for the call.
        // See https://ronan.eth.link/blog/ethereum-gas-dangers/
        if (gasleft() <= req.gas / 63) {
            // We explicitly trigger invalid opcode to consume all gas and bubble-up the effects, since
            // neither revert or assert consume all gas since Solidity 0.8.0
            // https://docs.soliditylang.org/en/v0.8.0/control-structures.html#panic-via-assert-and-error-via-require
            assembly {
                invalid()
            }
        }
        if(success){
            emit FunctionRouted(signer);
        }
        return (success, returndata);
        
    }

    function versionRecipient() external pure override returns (string memory) {
        return "1";
    }
}

