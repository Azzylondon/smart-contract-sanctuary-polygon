pragma solidity 0.8.4;




contract CryptoBash is Ownable {
    using EnumerableSet for EnumerableSet.Bytes32Set;

    struct Bash {
        address creator;
        int256 votes;
        string ipfs;
        bytes32 hash;
        uint256 tip;
        uint256 tipCount;
        uint256 timestamp;
        bool blacklisted;
    } 

    struct ModBash {
        string hash;
        bool flag;
    }

    ERC20Burnable public token;
    bool public init = false;
    uint256 public pricePerBash;
    uint256 public airdropAmount;
    EnumerableSet.Bytes32Set bashList;
    EnumerableSet.Bytes32Set moderateList;
    mapping(bytes32 => Bash) public bashMap;
    mapping(bytes32 => mapping(address => bool)) public votes;
    mapping(address => bool) public gotAirdrop;
    mapping(address => bool) public pendingAirdrop;
    bool public airdropActive;

    constructor () {}

    function initialze(ERC20Burnable _token) external onlyOwner {
        require(!init, "contract already initialized");
        init = true;
        token = _token;
        pricePerBash = 1*10**18;
        airdropAmount = 5*10**18;
    }

    function addBash(string memory _newBash) external {
        bytes32 bash32 = keccak256(abi.encodePacked(_newBash));
        token.burnFrom(msg.sender, pricePerBash);
        Bash memory newBash = Bash(msg.sender, 0, _newBash, bash32, 0, 0, block.timestamp, false);
        moderateList.add(bash32);
        bashMap[bash32] = newBash;
    }

    function requestAirdrop(string memory _newBash) external {
        require(airdropActive, "airdrop inactive");
        require(!gotAirdrop[msg.sender] && !pendingAirdrop[msg.sender], "sender already received airdrop or has a pending airdrop");
        bytes32 bash32 = keccak256(abi.encodePacked(_newBash));
        pendingAirdrop[msg.sender] = true;
        Bash memory newBash = Bash(msg.sender, 0, _newBash, bash32, 0, 0, block.timestamp, false);
        moderateList.add(bash32);
        bashMap[bash32] = newBash;
    }

    function moderateBash(ModBash[] memory _newBashs) external onlyOwner {
        for(uint256 i = 0; i < _newBashs.length; i++) {
            bytes32 bash32 = keccak256(abi.encodePacked(_newBashs[i].hash));
            address creator = bashMap[bash32].creator;
            if(_newBashs[i].flag) {
                bashList.add(bash32);
                emit BashAdded(bash32, creator);
                if(pendingAirdrop[creator]) {
                    gotAirdrop[creator] = true;
                    token.transfer(creator, airdropAmount);
                }
            } 
            pendingAirdrop[creator] = false;
            moderateList.remove(bash32);
        }
    }

    function voteForBash(bytes32 _bash, bool _vote) external {
        require(!votes[_bash][msg.sender], "user already voted");
        require(token.balanceOf(msg.sender) >= pricePerBash, "user needs community token to vote");
        votes[_bash][msg.sender] = true;
        Bash storage bash = bashMap[_bash];
        if(_vote) {
            bash.votes++;
        } else {
            bash.votes--;
        }
        emit BashVoted(_bash, msg.sender, _vote);
    }

    function tipBash(bytes32 _bash, uint256 _amount) external {
        Bash storage bash = bashMap[_bash];
        token.transferFrom(msg.sender, bash.creator, _amount);
        bash.tip+=_amount;
        bash.tipCount++;        
        emit TipPaid(_bash, msg.sender, _amount);
    }

    function setPricePerBash(uint256 _price) external onlyOwner {
        pricePerBash = _price;
    }

    function getPricePerBash() external view returns(uint256) {
        return pricePerBash;
    }

    function setAirdropAmount(uint256 _price) external onlyOwner {
        airdropAmount = _price;
    }

    function getAirdropAmount() external view returns(uint256) {
        return airdropAmount;
    }

    function getBashListLength() external view returns(uint256) {
        return bashList.length();
    }

    function getBashListAt(uint256 index) external view returns(bytes32) {
        return bashList.at(index);
    }

    function getUserVotedForBash(address _user, bytes32 _bash) external view returns(bool) {
        return votes[_bash][_user];
    }

    function tokenWithdraw(IERC20 _token) external onlyOwner {
        _token.transfer(msg.sender, _token.balanceOf(address(this)));
    }

    function burnToken(uint256 amount) external onlyOwner {
        if(amount == 0) amount = token.balanceOf(address(this));
        token.burn(amount);
    }

    function setBlacklist(bytes32 _bash, bool _flag) external onlyOwner {
         Bash storage bash = bashMap[_bash];
         bash.blacklisted = _flag;
    }

    function setAirdropActive(bool _flag) external onlyOwner {
        airdropActive = _flag;
    }

    function getBashList(uint256 _from, uint256 _to) external view returns(Bash[] memory) {
        require(_from < _to);
        require(_to <= bashList.length());
        uint256 diff = _to-_from;
        Bash[] memory bashArray = new Bash[](diff);

        for(uint256 i = 0; i < diff; i++) {
            bashArray[i] = bashMap[bashList.at(i)];
        }
        return bashArray;
    }

    function getModerateList(uint256 _from, uint256 _to) external view returns(Bash[] memory) {
        if(_to == 0) _to = moderateList.length();
        require(_from < _to);
        require(_to <= moderateList.length());
        uint256 diff = _to-_from;
        Bash[] memory bashArray = new Bash[](diff);

        for(uint256 i = 0; i < diff; i++) {
            bashArray[i] = bashMap[moderateList.at(i)];
        }
        return bashArray;
    }

    function getBash(bytes32 _bash) external view returns(Bash memory) {
        return bashMap[_bash];
    }

    event BashAdded(bytes32 bash, address creator);
    event BashVoted(bytes32 bash, address voter, bool vote);
    event TipPaid(bytes32 bash, address tipper, uint256 amount);
}