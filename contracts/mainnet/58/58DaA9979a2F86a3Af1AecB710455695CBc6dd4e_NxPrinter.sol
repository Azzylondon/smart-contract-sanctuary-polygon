contract NxPrinter is Ownable, IERC1155Receiver, ReentrancyGuard {

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // it uses market price if it's 0.
    // it must be set actual amount (no adjust decimal) in token to buy.
    uint256 public fixRate = 0;
    uint256 public electrumPrice = 5000000;

    bool public isEnableSwapTokenToNote;
    bool public isEnableSwapNoteToToken;

    bool public isInitialized = false;

    IERC20 public tokenToBuy;
    // token as reference price. it's usually USDT
    IERC20 public basePriceToken;
    address[] public swapPath;
    IUniswapV2Router01 public swapRouter;

    struct ElectrumInfo {
        address nftContractAddress;
        uint256 nftTokenId;
        uint256 value;
        string name;
    }

    struct PurchasedItem {
        address nftContractAddress;
        uint256 nftTokenId;
        uint256 value;
        string name;
        uint256 amount;
    }

    mapping(address => mapping(uint256 => ElectrumInfo)) private electrumInfo;
    address[] public nftContractAddressList;
    mapping(address => uint256[]) public nftTokenIdList;
    mapping(address => mapping(address => mapping(uint256 => uint256))) private purchasedItems;
    mapping(address => uint256) private purchasedToken;

    event PurchaseTokenToNote(
        address indexed account, 
        address nftContractAddress,
        uint256 nftTokenId,
        uint256 amount
    );
    event RedeemNote(
        address indexed account, 
        address nftContractAddress,
        uint256 nftTokenId,
        uint256 amount        
    );
    event PurchaseNoteToToken(
        address indexed account, 
        address nftContractAddress,
        uint256 nftTokenId,
        uint256 amount
    );
    event RedeemToken(
        address indexed account,
        uint256 amount
    );
    event WithdrawToken(
        address indexed recipient,
        address tokenAddress,
        uint256 amount
    );
    event WithdrawNft(
        address indexed recipient,
        address nftContractAddress,
        uint256 nftTokenId,
        uint256 amount
    );

    function initialize(
        address _tokenToBuy,
        address _basePriceToken,
        uint256 _electrumPrice,
        address _router,
        address[] calldata _swapPath
    ) external onlyOwner {
        tokenToBuy = IERC20(_tokenToBuy);
        basePriceToken = IERC20(_basePriceToken);
        electrumPrice = _electrumPrice;
        swapPath = _swapPath;
        swapRouter = IUniswapV2Router01(_router);
    }

    function updateExchangeRate(uint256 _rate) external onlyOwner {
        fixRate = _rate;
    }

    function updateElectrumPrice(uint256 _price) external onlyOwner {
        electrumPrice = _price;
    }

    function updateSwapStatus(bool _tokenToNote, bool _noteToToken) external onlyOwner {
        isEnableSwapNoteToToken = _noteToToken;
        isEnableSwapTokenToNote = _tokenToNote;
    }

    function withdrawToken(IERC20 _token, uint256 _amount) external onlyOwner {
        uint256 balance = _token.balanceOf(address(this));
        require(balance > 0, "no balance");
        if (_amount == 0) {
            _amount = balance;
        }
        _token.safeTransfer(
            _msgSender(),
            _amount
        );
        emit WithdrawToken(_msgSender(), address(_token), _amount);
    }

    function withdrawElectrum(
        address _nftContractAddress,
        uint256 _nftTokenId,
        uint256 _amount
    ) external onlyOwner {
        uint256 balance = IERC1155(_nftContractAddress).balanceOf(address(this), _nftTokenId);
        require(balance > 0, "no balance");
        
        if (_amount == 0) {
            _amount = balance;
        }

        IERC1155(_nftContractAddress).safeTransferFrom(
            address(this),
            _msgSender(),
            _nftTokenId,
            _amount,
            ""
        );
        emit WithdrawNft(
            _msgSender(),
            _nftContractAddress,
            _nftTokenId,
            _amount
        );
    }

    function updateRouter(address _router) external onlyOwner {
        swapRouter = IUniswapV2Router01(_router);
    }

    function updateTokenToBuy(address _token) external onlyOwner {
        tokenToBuy = IERC20(_token);
        swapPath[0] = address(tokenToBuy);
    }

    function updateSwapPath(address[] calldata _swapPath) external onlyOwner {
        swapPath = _swapPath;
    }

    function updateElectrumItem(
        address _nftContractAddress,
        uint256 _nftTokenId,
        uint256 _value,
        string calldata _name
    ) external onlyOwner {
        ElectrumInfo storage info = electrumInfo[_nftContractAddress][_nftTokenId];
        info.nftContractAddress = _nftContractAddress;
        info.nftTokenId = _nftTokenId;
        info.value = _value;
        info.name = _name;

        // add nftContractAddress array
        bool found = false;
        for (uint i=0; i<nftContractAddressList.length; i++) {
            if (_nftContractAddress == nftContractAddressList[i]) {
                found = true;
                break;
            }
        }
        if (found == false) {
            nftContractAddressList.push(_nftContractAddress);
        }
        uint256[] storage _nftTokenIdList = nftTokenIdList[_nftContractAddress];
        found = false;
        for (uint i=0; i<_nftTokenIdList.length; i++) {
            if (_nftTokenId == _nftTokenIdList[i]) {
                found = true;
                break;
            }
        }
        if (found == false) {
            _nftTokenIdList.push(_nftTokenId);
        }

    }

    function getElectrumItemList() public view 
        returns (
            ElectrumInfo[] memory _electrumItemList
        )
    {
        uint _length = 0;    
        for (uint i=0; i<nftContractAddressList.length; i++) {
            _length += nftTokenIdList[nftContractAddressList[i]].length;
        }

        _electrumItemList = new ElectrumInfo[](_length);

        uint _index = 0;
        for (uint i=0; i<nftContractAddressList.length; i++) {
            uint256[] memory _tokenIdList = nftTokenIdList[nftContractAddressList[i]];
            for (uint j=0; j<_tokenIdList.length; j++) {
                _electrumItemList[_index] = electrumInfo[nftContractAddressList[i]][_tokenIdList[j]];
                _index++;
            }
        }
    }

    function getItemBalance(address _account) public view 
        returns (
            PurchasedItem[] memory _purchasedItems
        )
    {
        uint _length = 0;    
        for (uint i=0; i<nftContractAddressList.length; i++) {
            _length += nftTokenIdList[nftContractAddressList[i]].length;
        }

        _purchasedItems = new PurchasedItem[](_length);

        uint _index = 0;
        for (uint i=0; i<nftContractAddressList.length; i++) {
            uint256[] memory _tokenIdList = nftTokenIdList[nftContractAddressList[i]];
            for (uint j=0; j<_tokenIdList.length; j++) {
                // uint256 _amount = purchasedItems[_account][nftContractAddressList[i]][_tokenIdList[j]];
                ElectrumInfo memory _info = electrumInfo[nftContractAddressList[i]][_tokenIdList[j]];
                PurchasedItem memory _item;
                _item.nftContractAddress = nftContractAddressList[i];
                _item.nftTokenId = _tokenIdList[j];
                _item.value = _info.value;
                _item.name = _info.name;
                _item.amount = purchasedItems[_account][nftContractAddressList[i]][_tokenIdList[j]];
                _purchasedItems[_index] = _item;
                _index++;
            }
        }
    }

    function getTokenBalance(address _account) public view
        returns (
            uint256 _amount
        )
    {
        _amount = purchasedToken[_account];
    }

    function getValueInToken(
        address _nftContractAddress, 
        uint256 _nftTokenId
    ) public view returns (uint256) {
        ElectrumInfo memory info = electrumInfo[_nftContractAddress][_nftTokenId];
        require(info.value > 0, "invalid address");

        uint256 value = 0;
        if (fixRate == 0) {
            try swapRouter.getAmountsIn(electrumPrice, swapPath) returns (
                uint256[] memory amounts
            ) {
                value = amounts[0];
            } catch (
                bytes memory
            ) {
                value = 0;
            }
        } else {
            value = fixRate;
        }
        require(value > 0, "something went wrong");

        value = value.mul(info.value);
        return value;
    }

    function purchaseTokenToNote(
        address _nftContractAddress,
        uint256 _nftTokenId,
        uint256 _amount
    ) external nonReentrant {
        require(isEnableSwapTokenToNote, "not in service now");

        uint256 balance = IERC1155(_nftContractAddress).balanceOf(address(this), _nftTokenId);
        require(balance >= _amount, "no stocks");

        uint256 value = getValueInToken(_nftContractAddress, _nftTokenId).mul(_amount);
        require(value <= tokenToBuy.balanceOf(_msgSender()), "insufficient balance");

        tokenToBuy.safeTransferFrom(
            address(_msgSender()),
            address(this),
            value
        );

        purchasedItems[_msgSender()][_nftContractAddress][_nftTokenId] = purchasedItems[_msgSender()][_nftContractAddress][_nftTokenId].add(_amount);


        emit PurchaseTokenToNote(_msgSender(), _nftContractAddress, _nftTokenId, _amount);
    }

    function redeemNote(
        address _nftContractAddress,
        uint256 _nftTokenId
    ) external nonReentrant {
        uint256 _amount = purchasedItems[_msgSender()][_nftContractAddress][_nftTokenId];
        require(_amount > 0, "you don't have purchased item");

        IERC1155(_nftContractAddress).safeTransferFrom(
            address(this),
            _msgSender(),
            _nftTokenId,
            _amount,
            ""
        );

        emit RedeemNote(_msgSender(), _nftContractAddress, _nftTokenId, _amount);
    }

    function purchaseNoteToToken(
        address _nftContractAddress,
        uint256 _nftTokenId,
        uint256 _amount
    ) external nonReentrant {
        require(isEnableSwapNoteToToken, "not in service now");
        
        uint256 balance = IERC1155(_nftContractAddress).balanceOf(_msgSender(), _nftTokenId);
        require(balance >= _amount, "insufficient balance");

        uint256 value = getValueInToken(_nftContractAddress, _nftTokenId).mul(_amount);
        require(value <= tokenToBuy.balanceOf(address(this)), "no stocks");

        IERC1155(_nftContractAddress).safeTransferFrom(
            _msgSender(),
            address(this),
            _nftTokenId,
            _amount,
            ""
        );

        purchasedToken[_msgSender()] = purchasedToken[_msgSender()].add(value);

        emit PurchaseNoteToToken(_msgSender(), _nftContractAddress, _nftTokenId, _amount);

    }

    function redeemToken() external nonReentrant {
        uint256 _amount = purchasedToken[_msgSender()];
        require(_amount > 0, "you don't have purchased token");
        require(_amount <= tokenToBuy.balanceOf(address(this)), "not enough token to redeem");

        tokenToBuy.safeTransferFrom(
            address(this),
            address(_msgSender()),
            _amount
        );

        emit RedeemToken(_msgSender(), _amount);
    }

    function onERC1155Received(
        address, /*operator*/
        address, /*from*/
        uint256, /*id*/
        uint256, /*value*/
        bytes calldata /*data*/
    ) public virtual override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address, /*operator*/
        address, /*from*/
        uint256[] calldata, /*ids*/
        uint256[] calldata, /*values*/
        bytes calldata /*data*/
    ) public virtual override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(
        bytes4 /*interfaceId*/
    ) public view virtual override returns (bool) {
        return false;
    }
}