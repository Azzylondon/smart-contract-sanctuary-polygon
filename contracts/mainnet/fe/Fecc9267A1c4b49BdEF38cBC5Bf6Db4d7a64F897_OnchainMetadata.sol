                address(tempAddr).delegatecall(abi.encodeWithSelector(imgSelector, tokenId));
                assembly {
                    switch success
                        // delegatecall returns 0 on error.
                        case 0 { revert(add(data, 32), returndatasize()) }
                        default { return(add(data, 32), returndatasize()) }
                }
            }
        }
    }
}

