        ItemInfo storage item = _allItems[index];
        require(item.itemId != 0, "Item does not exist");
        require(item.owner == itemOwner, "ItemOwner invalid");
        item.price = _newPrice;

        emit Price_Changed(itemId, _newPrice);
    }

