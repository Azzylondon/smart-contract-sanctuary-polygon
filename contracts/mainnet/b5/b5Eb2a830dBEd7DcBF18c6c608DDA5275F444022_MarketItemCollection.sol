            revert("Item already removed");
        }

        delete _NFTs[item.tokenAddress][item.tokenId];
        delete _itemIdToItemIndex[_itemId];

        if (itemIndex != lastItemIndex) {
           ItemInfo memory lastItem = _allItems[lastItemIndex];
           delete _allItems[itemIndex];
            _allItems[itemIndex] = lastItem;
           _itemIdToItemIndex[lastItem.itemId] = itemIndex;
