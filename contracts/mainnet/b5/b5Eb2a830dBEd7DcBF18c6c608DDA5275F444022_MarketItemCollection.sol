        bytes32[] memory values = _holderItems[user]._inner._values;
        uint256[] memory itemIds = new uint256[](values.length);

        for (uint256 i; i < values.length; i++) {
            itemIds[i] = uint(values[i]);
        }

        return itemIds;
    }

