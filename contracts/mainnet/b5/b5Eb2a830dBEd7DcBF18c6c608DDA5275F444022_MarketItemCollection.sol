        _itemIds.increment();

        ItemInfo memory item = ItemInfo(itemId, _tokenAddress, _tokenId, _erc20Address, _price, _itemOwner, amount, 0);

        _itemIdToItemIndex[itemId] = _allItems.length;
        _allItems.push(item);

        _holderItems[_itemOwner].add(itemId);

        _NFTs[_tokenAddress][_tokenId] = itemId;
        emit Add_item(item.itemId, item.tokenAddress, _itemOwner, item.tokenId, item.price);
