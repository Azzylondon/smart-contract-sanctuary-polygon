contract TTKN is IERC20, SafeMath, Ownable, Pausable {
    string public name;
    string public symbol;
    address payable private owner1;
    uint8 public decimals; // 18 decimals is the strongly suggested default, avoid changing it

    uint256 public _totalSupply;

    mapping(address => uint256) balances;
    mapping(address => mapping(address => uint256)) allowed;

    /**
     * Constrctor function
     *
     * Initializes contract with initial supply tokens to the creator of the contract
     */
    constructor() {
        name = "Points System Coin";
        symbol = "PTSC";
        decimals = 18;
        _totalSupply = 100000000000000000000000000;

        balances[msg.sender] = _totalSupply;
        owner1 = payable(msg.sender);
        emit Transfer(address(0), msg.sender, _totalSupply);
    }

    function totalSupply() public whenNotPaused view returns (uint256) {
        return _totalSupply  - balances[address(0)];
    }

    function balanceOf(address tokenOwner) public whenNotPaused view returns (uint256 balance) {
        return balances[tokenOwner];
    }

    function allowance(address tokenOwner, address spender) public whenNotPaused view returns (uint256 remaining) {
        return allowed[tokenOwner][spender];
    }

    function approve(address spender, uint256 tokens) public whenNotPaused returns (bool success) {
        allowed[msg.sender][spender] = tokens;
        emit Approval(msg.sender, spender, tokens);
        return true;
    }

    function transfer(address to, uint256 tokens) public whenNotPaused returns (bool success) {
        balances[msg.sender] = safeSub(balances[msg.sender], tokens);
        balances[to] = safeAdd(balances[to], tokens);
        emit Transfer(msg.sender, to, tokens);
        return true;
    }

    function transferFrom(address from, address to, uint256 tokens) public whenNotPaused returns (bool success) {
        balances[from] = safeSub(balances[from], tokens);
        allowed[from][msg.sender] = safeSub(allowed[from][msg.sender], tokens);
        balances[to] = safeAdd(balances[to], tokens);
        emit Transfer(from, to, tokens);
        return true;
    }




    function hello() public pure returns (uint256 works) {

        return 1;

    }

    function destroy() public whenPaused onlyOwner returns (uint256 works) {
        selfdestruct(owner1);
        return 1;
    }

    function pause_contract() public whenNotPaused onlyOwner returns (uint256 works) {
        _pause();
        return 1;
    }

    function unpause_contract() public whenPaused onlyOwner returns (uint256 works) {
        _unpause();
        return 1;
    }

    
}