import "./IHootles.sol";

contract HootlesMinter is IERC721Delegate {
    address HOOTLES_ADDRESS = 0xFAf3795ac17962D48B9abA848151efd2107a634e;
    IHootles public HOOTLES = IHootles(HOOTLES_ADDRESS);

    function handleERC721Transfer(bytes calldata data, address user) external payable override {
        bytes4 selector = bytes4(data[0:4]);
        bytes memory params = data[4:];

        uint256 curIndex = HOOTLES.totalSupply() + 1; // start index is 1 for Hootles
        uint256 mintAmount;
        bytes32[] memory merkleProof;

        if (selector == HOOTLES.mint.selector) {
            (mintAmount) = abi.decode(params, (uint256));
            HOOTLES.mint{value: msg.value}(mintAmount);
        } else if (selector == HOOTLES.whitelistMint.selector) {
            (mintAmount, merkleProof) = abi.decode(params, (uint256, bytes32[]));
            HOOTLES.whitelistMint{value: msg.value}(mintAmount, merkleProof);
        } else {
            revert("Hootles: Unknown selector");
        }

        for (uint256 i = 0; i < mintAmount; i++) {
            HOOTLES.transferFrom(address(this), user, curIndex + i);
        }
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

