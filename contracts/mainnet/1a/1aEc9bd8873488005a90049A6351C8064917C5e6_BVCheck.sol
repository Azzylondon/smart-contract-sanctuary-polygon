contract BVCheck is OwnableUpgradeable, DivestorUpgradeable {
    struct Meta {
        ICattlePlanet cattlePlanet;
        I20 bvg;
        I20 bvt;
        I721 cattle;
        I721 box;
        I1155 item;
        IInfo info;
        // IMilkFactory milk;
    }
    Meta public meta;

    constructor() {
        // function initialize() public initializer {
        // __Ownable_init_unchained();

        meta.cattlePlanet = ICattlePlanet(
            0x99aFf8CC6b5B58Bbdd25ddA8f4693c42D1f2018e
        );

        meta.bvg = I20(0x7a3D1B0C6fE308bA786fD2Ef37eC6E5D70F44f8C);
        meta.bvt = I20(0x2b641bC25358a239598290dF7A57B6FA9f3c0186);
        meta.cattle = I721(0x904ff0644C6254DB78c6a8F2f1e53ec3053Dc142);
        meta.item = I1155(0xe1003955d629c6837cf31d4D059cf271bE1D2620);
        meta.info = IInfo(0xa1e73FA72d0A772bf10321687A9C5Bcb8D45744F);
        meta.box = I721(0x323DCcB569c3A0dfbF13656C354E4B7A0c78b55f);
    }

    function userInfo(address account_)
        public
        view
        returns (
            uint[] memory info,
            uint[] memory bullpenList,
            uint[] memory freeList,
            uint[] memory boxList
        )
    {
        info = new uint[](10);
        // 绑定的星球
        info[0] = meta.cattlePlanet.getUserPlanet(account_);
        // 主链币
        info[1] = account_.balance;
        // bvg
        info[2] = meta.bvg.balanceOf(account_);
        // bgt
        info[3] = meta.bvt.balanceOf(account_);

        info[4] = meta.item.balanceOf(account_, 6);
        info[5] = meta.item.balanceOf(account_, 9);
        info[6] = meta.item.balanceOf(account_, 12);
        (
            // 牛栏数量， 牛栏经验值， 牛栏等级， 牛栏里的tokenId
            info[7],
            info[8],
            info[9],
            bullpenList
        ) = meta.info.bullPenInfo(account_);
        freeList = meta.cattle.checkUserCowList(account_);
        boxList = meta.box.checUserBoxList(account_);
    }

    function batchCowInfoes(uint[] calldata tokenId_)
        public
        view
        returns (uint256[24][] memory info1, bool[3][] memory info2)
    {
        info1 = new uint[24][](tokenId_.length);
        info2 = new bool[3][](tokenId_.length);
        for (uint i; i < tokenId_.length; i++) {
            (uint256[24] memory cInfo1, bool[3] memory cInfo2, ) = meta
                .info
                .cowInfoes(tokenId_[i]);
            info1[i] = cInfo1;
            info2[i] = cInfo2;
        }
    }

    function isApprove(address account_)
        public
        view
        returns (bool[] memory info)
    {
        info = new bool[](4);
        uint256 allowance = meta.bvg.allowance(account_, address(meta.item));
        info[0] = allowance > 1e24 ? true : false;

        allowance = meta.bvt.allowance(account_, address(meta.item));
        info[1] = allowance > 1e24 ? true : false;

        info[2] = meta.cattle.isApprovedForAll(account_, address(meta.item));
        info[3] = meta.item.isApprovedForAll(account_, address(meta.item));
    }

    function isBonding(address addr_) external view returns (bool) {
        return meta.cattlePlanet.isBonding(addr_);
    }

    function bondPlanet(uint256 tokenId_) external {
        meta.cattlePlanet.bondPlanet(tokenId_);
    }

    function checkUserCowList(address player_)
        external
        view
        returns (uint256[] memory)
    {
        return meta.cattle.checkUserCowList(player_);
    }

    function cowInfos(uint256 tokenId_)
        public
        view
        returns (uint256[24] memory, bool[3] memory)
    {
        (uint256[24] memory info1, bool[3] memory info2, ) = meta
            .info
            .cowInfoes(tokenId_);
        return (info1, info2);
    }

    // function batchCowInfos(uint256[] memory tokenIds_)
    //     public
    //     view
    //     returns (uint256[24][] memory info1, bool[3][] memory info2)
    // {
    //     for (uint i; i < )
    // }

    function checkPlant() public view returns (uint256) {
        (uint256[] memory planets, ) = meta.cattlePlanet.checkPlanetOwner();
        for (uint256 i; i < planets.length; i++) {
            (
                address owner,
                uint256 tax,
                uint256 population,
                uint256 normalTaxAmount,
                uint256 battleTaxAmount,
                uint256 motherPlanet,
                uint256 types,
                uint256 membershipFee,
                uint256 populationLimit,
                uint256 federalLimit,
                uint256 federalAmount,
                uint256 totalTax
            ) = meta.cattlePlanet.planetInfo(planets[i]);
            if (membershipFee > 0 && population < populationLimit) {
                return planets[i];
            }
        }
    }
}

