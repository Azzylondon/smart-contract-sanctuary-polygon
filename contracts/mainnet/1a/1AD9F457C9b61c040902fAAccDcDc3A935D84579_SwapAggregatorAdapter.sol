    function adapterTransfer(
        IERC20 token,
        address payable to,
        uint256 amount
    )
    internal
    {
        if (isTokenETH(token)) {
            TransferHelper.safeTransferETH(to, amount);
        } else {
            TransferHelper.safeTransfer(address(token), to, amount);
