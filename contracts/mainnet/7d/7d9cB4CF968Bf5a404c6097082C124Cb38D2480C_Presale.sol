contract VaultOwned {
    address private _vault;

    constructor() {
        _vault = msg.sender;
    }

    function vault() public view returns (address) {
        return _vault;
    }

    modifier onlyVault() {
        require(msg.sender == _vault, "VaultOwned: caller is not vault");
        _;
    }

    function setVault(address newVault) public onlyVault {
        require(
            newVault != address(0),
            "VaultOwned: new owner is the zero address"
        );
        _vault = newVault;
    }
}

contract Presale is VaultOwned {
    address public immutable shrigma;
    uint256 public immutable accountLimit;
    uint256 public immutable maxLimit;
    mapping(address => uint256) public purchases;
    uint256 public amountSold = 0;
    bool public presaleEnabled = false;
    address public router;

    constructor(address _shrigma) {
        shrigma = _shrigma;
        accountLimit = 2000 ether;
        maxLimit = 250000 ether;
        router = 0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff;
    }

    function purchase() external payable {
        require(msg.value > 0, "Presale: invalid amount");
        require(amountSold < maxLimit, "Presale: presale has sold out");
        require(presaleEnabled, "Presale: presale not enabled");
        uint256 amountPurchased = msg.value;
        require(
            purchases[msg.sender] + amountPurchased <= accountLimit,
            "Presale: purchase exceeds accountLimit"
        );
        if (amountPurchased + amountSold > maxLimit) {
            // refund if amount purchased exceeds presale limit
            amountPurchased = maxLimit - amountSold;
            (bool sent, ) = msg.sender.call{value: msg.value - amountPurchased}(
                ""
            );
            require(sent, "Presale: failed to send Ether");
        }
        purchases[msg.sender] += amountPurchased;
        amountSold += amountPurchased;
        IShrigma(shrigma).mint(msg.sender, amountPurchased / 10**9);
    }

    function setEnabled(bool state) external onlyVault {
        presaleEnabled = state;
    }

    function setRouterAddress(address _router) external onlyVault {
        router = _router;
    }

    function addLiquidity() external onlyVault {
        IERC20(shrigma).approve(router, 2**256 - 1);

        uint256 amountShrigmaDesired = address(this).balance / (2 * 10**9);
        IShrigma(shrigma).mint(address(this), amountShrigmaDesired);
        IUniswapV2Router02(router).addLiquidityETH{
            value: address(this).balance
        }(
            shrigma,
            amountShrigmaDesired,
            0,
            0,
            vault(),
            block.timestamp + 600000
        );
    }
}