import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {IStakingChild} from "./interfaces/IStakingChild.sol";
import {Math} from "@openzeppelin/contracts/utils/math/Math.sol";
import {SafeMath} from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {Epoch} from "./utils/Epoch.sol";

/**
 * The staking collector is an automated distribution contract, that distributes rewards in the contract's
 * balance at every step.
 */
contract StakingCollector is Epoch {
  using SafeMath for uint256;

  address[] public tokens;
  mapping(address => uint256) public tokenRatePerEpoch;
  mapping(address => address) public arthTokenStakingPool;
  mapping(address => address) public arthxTokenStakingPool;

  event TokenRegistered(
    address indexed token,
    address arthStakingPool,
    address arthxStakingPool,
    uint256 rate
  );
  event TokenUpdated(
    address indexed token,
    address arthStakingPool,
    address arthxStakingPool,
    uint256 rate
  );

  constructor(uint256 _period) Epoch(_period, block.timestamp, 0) {}

  function registerToken(
    address token,
    uint256 epochRate,
    address arthStakingPool,
    address arthxStakingPool
  ) external onlyOwner {
    require(arthTokenStakingPool[token] == address(0), "token already exists");

    tokenRatePerEpoch[token] = epochRate;
    arthTokenStakingPool[token] = arthStakingPool;
    arthxTokenStakingPool[token] = arthxStakingPool;
    emit TokenRegistered(token, arthStakingPool, arthxStakingPool, epochRate);

    tokens.push(token);
  }

  function updateToken(
    address token,
    uint256 epochRate,
    address arthStakingPool,
    address arthxStakingPool
  ) external onlyOwner {
    require(arthTokenStakingPool[token] != address(0), "token doesn't exists");

    tokenRatePerEpoch[token] = epochRate;
    arthTokenStakingPool[token] = arthStakingPool;
    arthxTokenStakingPool[token] = arthxStakingPool;
    emit TokenUpdated(token, arthStakingPool, arthxStakingPool, epochRate);
  }

  function step() external checkEpoch {
    for (uint256 index = 0; index < tokens.length; index++) {
      IERC20 token = IERC20(tokens[index]);

      // figure out how much tokens to send
      uint256 tokenBalance = token.balanceOf(address(this));
      uint256 ratePerEpoch = tokenRatePerEpoch[tokens[index]];
      uint256 balanceToSend;

      // if a rate was not set, then we send everything in the contract
      if (ratePerEpoch == 0)
        balanceToSend = tokenBalance;

        // if a rate was set, then we send as much as we can
      else balanceToSend = Math.min(tokenBalance, ratePerEpoch);

      if (balanceToSend > 0) {
        // send token and notify the staking contract

        // 50% for arth
        IStakingChild arthStakingPool = IStakingChild(
          arthTokenStakingPool[tokens[index]]
        );
        token.transfer(address(arthStakingPool), balanceToSend.div(2));
        arthStakingPool.notifyRewardAmount(balanceToSend.div(2));

        // 50% for arthx
        IStakingChild arthxStakingPool = IStakingChild(
          arthxTokenStakingPool[tokens[index]]
        );
        token.transfer(address(arthxStakingPool), balanceToSend.div(2));
        arthxStakingPool.notifyRewardAmount(balanceToSend.div(2));
      }
    }
  }

  function refundTokens(address token) external onlyOwner {
    IERC20(token).transfer(owner(), IERC20(token).balanceOf(address(this)));
  }
}

