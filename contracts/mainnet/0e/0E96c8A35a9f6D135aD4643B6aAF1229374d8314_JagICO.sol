    function calculateTokensToReceivePerRound(address _investor, uint256 _round)
        public
        view
        returns (uint256)
    {
        require(_round <= activeRound, "Round does not exist");
        Investors storage investor = investors[_investor];

        if (investor.rounds[_round].balance == 0) return 0;

        uint256 lastClaimTimeStamp = investor.lastClaimTimestamp;

        if (investor.lastClaimTimestamp == 0)
            lastClaimTimeStamp = startOfVestingTimestamp;
        uint256 diffTimestamp = block.timestamp - lastClaimTimeStamp;
        uint256 reward = investor.rounds[_round].tokenPerSecond * diffTimestamp;

        if (reward >= investor.rounds[_round].balance)
            return investor.rounds[_round].balance;

