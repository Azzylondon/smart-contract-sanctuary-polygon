    function _addTokenToOwnerEnumeration(address to, uint256 tokenId) private {
        uint256 length = BRC721.balanceOf(to);
        _ownedTokens[to][length] = tokenId;
        _ownedTokensIndex[tokenId] = length;
    }

    /**
     * @dev Private function to add a token to this extension's token tracking data structures.
     * @param tokenId uint256 ID of the token to be added to the tokens list
     */
    function _addTokenToAllTokensEnumeration(uint256 tokenId) private {
        _allTokensIndex[tokenId] = _allTokens.length;
        _allTokens.push(tokenId);
    }

    /**
     * @dev Private function to remove a token from this extension's ownership-tracking data structures. Note that
     * while the token is not assigned a new owner, the `_ownedTokensIndex` mapping is _not_ updated: this allows for
     * gas optimizations e.g. when performing a transfer operation (avoiding double writes).
     * This has O(1) time complexity, but alters the order of the _ownedTokens array.
     * @param from address representing the previous owner of the given token ID
     * @param tokenId uint256 ID of the token to be removed from the tokens list of the given address
     */
    function _removeTokenFromOwnerEnumeration(address from, uint256 tokenId) private {
        // To prevent a gap in from's tokens array, we store the last token in the index of the token to delete, and
        // then delete the last slot (swap and pop).

        uint256 lastTokenIndex = BRC721.balanceOf(from) - 1;
        uint256 tokenIndex = _ownedTokensIndex[tokenId];

        // When the token to delete is the last token, the swap operation is unnecessary
        if (tokenIndex != lastTokenIndex) {
            uint256 lastTokenId = _ownedTokens[from][lastTokenIndex];

            _ownedTokens[from][tokenIndex] = lastTokenId; // Move the last token to the slot of the to-delete token
            _ownedTokensIndex[lastTokenId] = tokenIndex; // Update the moved token's index
        }

        // This also deletes the contents at the last position of the array
        delete _ownedTokensIndex[tokenId];
        delete _ownedTokens[from][lastTokenIndex];
    }

    /**
     * @dev Private function to remove a token from this extension's token tracking data structures.
     * This has O(1) time complexity, but alters the order of the _allTokens array.
     * @param tokenId uint256 ID of the token to be removed from the tokens list
     */
    function _removeTokenFromAllTokensEnumeration(uint256 tokenId) private {
        // To prevent a gap in the tokens array, we store the last token in the index of the token to delete, and
        // then delete the last slot (swap and pop).

        uint256 lastTokenIndex = _allTokens.length - 1;
        uint256 tokenIndex = _allTokensIndex[tokenId];

        // When the token to delete is the last token, the swap operation is unnecessary. However, since this occurs so
        // rarely (when the last minted token is burnt) that we still do the swap here to avoid the gas cost of adding
        // an 'if' statement (like in _removeTokenFromOwnerEnumeration)
        uint256 lastTokenId = _allTokens[lastTokenIndex];

        _allTokens[tokenIndex] = lastTokenId; // Move the last token to the slot of the to-delete token
        _allTokensIndex[lastTokenId] = tokenIndex; // Update the moved token's index

        // This also deletes the contents at the last position of the array
        delete _allTokensIndex[tokenId];
        _allTokens.pop();
    }
}

contract MeebMasterFactory is IMeebMasterFactory, OwnableUpgradeable, ReentrancyGuard {
    using SafeERC20 for IERC20;

    address private nft_;
    address private stats_;

    mapping(address => bool) private _admin;

    uint256 private fusionCount_;
    uint256 private mintedCount_;
    bool private allowRemint_;

    uint256[] private mintedTokens_;
    mapping(uint256 => uint256) private tokenMintedIndex_;
    mapping(uint256 => uint256[]) private tokenParents_;
    mapping(uint256 => uint256) private tokenMintedFee_;
    mapping(uint256 => uint256) private tokenBirthDate_;
    mapping(uint256 => uint256) private tokenDeathDate_;

    /* =================== Added variables (need to keep orders for proxy to work) =================== */
    address private meebToken_;
    address private fusion_;

    /* ========== EVENTS ========== */

    event AdminUpdate(address indexed account, bool isAdmin);
    event StatsUpdate(address oldStats, address newStats);
    event AllowRemintUpdate(bool oldAllowRemint, bool newAllowRemint);
    event Mint(uint256 indexed tokenId, address indexed receiver, uint256 timestamp);
    event Burn(uint256 indexed tokenId, uint256 timestamp);
    event FusionSuccess(uint256 indexed father, uint256 indexed mother, uint256 indexed son);
    event FusionFailed(uint256 indexed father, uint256 indexed mother);

    /* ========== Modifiers =============== */

    modifier onlyAdmin() {
        require(_admin[msg.sender] || owner() == msg.sender, "!admin");
        _;
    }

    /* ========== GOVERNANCE ========== */

    function initialize(address _nft, address _stats) external initializer {
        require(_nft != address(0), "zero");
        __Ownable_init();
        nft_ = _nft;
        stats_ = _stats;
        mintedTokens_.push(0);
    }

    function setAdmin(address _account, bool _isAdmin) external onlyOwner {
        require(_account != address(0), "zero");
        emit AdminUpdate(_account, _isAdmin);
        _admin[_account] = _isAdmin;
    }

    function setStats(address _stats) external onlyOwner {
        require(_stats != address(0), "zero");
        emit StatsUpdate(stats_, _stats);
        stats_ = _stats;
    }

    function setMeebToken(address _meebToken) external onlyOwner {
        require(_meebToken != address(0), "zero");
        meebToken_ = _meebToken;
    }

    function setFusion(address _fusion) external onlyOwner {
        require(_fusion != address(0), "zero");
        fusion_ = _fusion;
    }

    function setAllowRemint(bool _allowed) external onlyOwner {
        emit AllowRemintUpdate(allowRemint_, _allowed);
        allowRemint_ = _allowed;
    }

    /* ========== VIEW FUNCTIONS ========== */

    function isAdmin(address _account) external view returns (bool) {
        return _admin[_account];
    }

    function nft() external view override returns (address) {
        return nft_;
    }

    function stats() external view override returns (address) {
        return stats_;
    }

    function fusion() external view override returns (address) {
        return fusion_;
    }

    function totalBurned() external view override returns (uint256) {
        return IMeebMasterNFT(nft_).totalBurned();
    }

    function totalFusion() external view override returns (uint256) {
        return fusionCount_;
    }

    function mintedTokens() external view override returns (uint256) {
        return mintedCount_;
    }

    function tokenMintedIndex(uint256 tokenId) external view override returns (uint256 index) {
        index = tokenMintedIndex_[tokenId];
    }

    function tokenByIndex(uint256 index) external view override returns (uint256 tokenId) {
        tokenId = mintedTokens_[index];
    }

    function tokenInfo(uint256 tokenId)
        external
        view
        override
        returns (
            uint256[] memory,
            uint256,
            uint256,
            uint256
        )
    {
        return (tokenParents_[tokenId], tokenMintedFee_[tokenId], tokenBirthDate_[tokenId], tokenDeathDate_[tokenId]);
    }

    function fusionInfo(uint256[] memory) external pure override returns (uint256 mintedFee, uint256[] memory otherInfo) {
        mintedFee = type(uint256).max;
        otherInfo = new uint256[](0);
    }

    function getTokensOfOwner(
        address owner,
        uint256 startIndex,
        uint256 numTokens
    ) external view returns (uint256[] memory tokenIds) {
        BRC721Enumerable _nft = BRC721Enumerable(nft_);
        require(startIndex + numTokens <= _nft.balanceOf(owner), "out of range");
        tokenIds = new uint256[](numTokens);
        for (uint256 i = 0; i < numTokens; i++) {
            uint256 _tokenId = _nft.tokenOfOwnerByIndex(owner, startIndex + i);
            tokenIds[i] = _tokenId;
        }
    }

    function getFusionFee(uint256 _father, uint256 _mother) external view returns (uint256) {
        return IMeebMasterFusion(fusion_).getFusionFee(_father, _mother);
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function mintToken(
        address receiver,
        uint256 tokenId,
        IMeebMasterStats.MeebInfo[] memory info,
        IMeebMasterStats.MeebPurity memory purity,
        IMeebMasterStats.MeebBody memory body
    ) public override onlyAdmin {
        require(allowRemint_ || tokenBirthDate_[tokenId] == 0, "Not allowed to remint tokens (burned or existing)");
        BRC721Enumerable(nft_).safeMint(receiver, tokenId);
        IMeebMasterStats(stats_).setDetails(tokenId, info, purity, body);
        ++mintedCount_;
        mintedTokens_.push(tokenId);
        tokenMintedIndex_[tokenId] = mintedCount_;
        tokenMintedFee_[tokenId] = 0;
        tokenBirthDate_[tokenId] = block.timestamp;
        tokenDeathDate_[tokenId] = 0;
        emit Mint(tokenId, receiver, block.timestamp);
    }

    function mintMultiTokens(
        address receiver,
        uint256[] memory tokenIds,
        IMeebMasterStats.MeebInfo[][] memory infos,
        IMeebMasterStats.MeebPurity[] memory purities,
        IMeebMasterStats.MeebBody[] memory bodies
    ) external override onlyAdmin {
        uint256 length = tokenIds.length;
        require(length >= 1, "zero token");
        require(length == infos.length && length == purities.length && length == bodies.length, "Wrong array length");
        for (uint256 i = 0; i < length; i++) {
            mintToken(receiver, tokenIds[i], infos[i], purities[i], bodies[i]);
        }
    }

    function transferMultiTokens(address receiver, uint256[] memory tokenIds) external {
        uint256 length = tokenIds.length;
        require(length >= 1, "zero token");
        IMeebMasterNFT _nft = IMeebMasterNFT(nft_);
        for (uint256 i = 0; i < length; i++) {
            uint256 _tokenId = tokenIds[i];
            if (_nft.ownerOf(_tokenId) == msg.sender) {
                _nft.safeTransferFrom(msg.sender, receiver, _tokenId);
            }
        }
    }

    function burnToken(uint256 tokenId) external override nonReentrant {
        IMeebMasterNFT _nft = IMeebMasterNFT(nft_);
        require(_nft.ownerOf(tokenId) == msg.sender, "MeebMasterFactory: burn token not owned");
        _nft.burn(tokenId);
        tokenDeathDate_[tokenId] = block.timestamp;
        emit Burn(tokenId, block.timestamp);
    }

    function fusionToken(uint256[] memory parents) external override nonReentrant {
        require(parents.length == 2, "invalid parents id");
        uint256 _father = parents[0];
        uint256 _mother = parents[1];
        IMeebMasterNFT _nft = IMeebMasterNFT(nft_);
        require(_nft.ownerOf(_father) == msg.sender && _nft.ownerOf(_mother) == msg.sender, "MeebMasterFactory: fuse tokens not owned");
        IMeebMasterFusion _fusion = IMeebMasterFusion(fusion_);
        uint256 _fusedId;
        uint256 _fusionFee;
        for (uint256 _attempt = 1; _attempt <= 3; _attempt++) {
            (_fusedId, _fusionFee) = _fusion.fusionToken(_father, _mother);
            if (!_nft.exists(_fusedId) && (allowRemint_ || tokenBirthDate_[_fusedId] == 0)) {
                IERC20(meebToken_).safeTransferFrom(msg.sender, fusion_, _fusionFee);
                _nft.burn(_father);
                _nft.burn(_mother);
                tokenDeathDate_[_father] = tokenDeathDate_[_mother] = block.timestamp;
                ++fusionCount_;
                BRC721Enumerable(nft_).safeMint(msg.sender, _fusedId);
                ++mintedCount_;
                mintedTokens_.push(_fusedId);
                tokenMintedIndex_[_fusedId] = mintedCount_;
                tokenMintedFee_[_fusedId] = 0;
                tokenParents_[_fusedId] = [_father, _mother];
                tokenBirthDate_[_fusedId] = block.timestamp;
                tokenDeathDate_[_fusedId] = 0;
                emit FusionSuccess(_father, _mother, _fusedId);
                return;
            }
        }
        emit FusionFailed(_father, _mother);
        require(_fusedId > 0, "Fail to mint new token (duplicated)");
    }

    /* ========== EMERGENCY ========== */

    function rescueStuckErc20(address _token) external onlyOwner {
        IERC20(_token).safeTransfer(owner(), IERC20(_token).balanceOf(address(this)));
    }
}