import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol';
import './IUNSRegistry.sol';

interface IERC20 {
    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);
}

contract Leasing is OwnableUpgradeable {
    function initialize(address _tokenAddress) public initializer {
        __Ownable_init();
        tokenAddress = IUNSRegistry(_tokenAddress);
    }

    modifier onlyLessee(uint256 tokenId) {
        if (leases[tokenId].endTime < block.timestamp) {
            leases[tokenId].lessee = address(0);
        }
        require(msg.sender == leases[tokenId].lessee, 'Sender is not the lessee');
        _;
    }

    modifier onlyLessor(uint256 tokenId) {
        if (leases[tokenId].endTime < block.timestamp) {
            leases[tokenId].lessee = address(0);
        }
        require(leases[tokenId].lessee == address(0), 'Domain is currently being leased');
        require(msg.sender == leases[tokenId].lessor, 'Sender is not the lessor');
        _;
    }

    modifier updateExpiration(uint256 tokenId) {
        if (leases[tokenId].endTime < block.timestamp) {
            leases[tokenId].lessee = address(0);
        }
        _;
    }

    struct Lease {
        address lessor;
        IERC20 priceCurrency;
        uint256 pricePerPeriod;
        uint256 periodLength;
        address lessee;
        uint256 endTime;
    }

    mapping(uint256 => Lease) leases;

    IUNSRegistry tokenAddress;

    function setTokenAddres(address _tokenAddress) external onlyOwner {
        tokenAddress = IUNSRegistry(_tokenAddress);
    }

    mapping(address => bool) allowedCurrencies;

    function setAllowedCurrency(address _currencyAddress, bool _allowed) external onlyOwner {
        allowedCurrencies[_currencyAddress] = _allowed;
    }

    mapping(uint256 => bool) allowedPeriods;

    function setAllowedPeriod(uint256 _periodLength, bool _allowed) external onlyOwner {
        allowedPeriods[_periodLength] = _allowed;
    }

    function listDomainForLease(
        uint256 tokenId,
        address priceCurrency,
        uint256 pricePerPeriod,
        uint256 periodLength
    ) external {
        require(tokenAddress.ownerOf(tokenId) == msg.sender, 'Lessor is not the owner');

        tokenAddress.transferFrom(msg.sender, address(this), tokenId);

        leases[tokenId].lessor = msg.sender;
        updateDomainListingForLease(tokenId, priceCurrency, pricePerPeriod, periodLength);
    }

    function updateDomainListingForLease(
        uint256 tokenId,
        address priceCurrency,
        uint256 pricePerPeriod,
        uint256 periodLength
    ) public onlyLessor(tokenId) {
        require(allowedCurrencies[priceCurrency], 'Currency not allowed');
        require(allowedPeriods[periodLength], 'Period not allowed');

        leases[tokenId].priceCurrency = IERC20(priceCurrency);
        leases[tokenId].pricePerPeriod = pricePerPeriod;
        leases[tokenId].periodLength = periodLength;
    }

    function unlistDomainForLease(uint256 tokenId) external onlyLessor(tokenId) {
        tokenAddress.transferFrom(address(this), msg.sender, tokenId);
        leases[tokenId].lessor = address(0);
    }

    function unleaseDomain(uint256 tokenId) external onlyLessee(tokenId) {
        leases[tokenId].lessee = address(0);
    }

    function leaseDomain(uint256 tokenId, uint256 time) external updateExpiration(tokenId) {
        Lease storage lease = leases[tokenId];

        require(lease.lessor != address(0), 'Domain not listed for lease');
        require(lease.lessee == address(0), 'Domain is already being leased');

        lease.lessee = msg.sender;
        lease.endTime = block.timestamp;

        extendLease(tokenId, time);
    }

    function extendLease(uint256 tokenId, uint256 time) public onlyLessee(tokenId) {
        Lease storage lease = leases[tokenId];

        require(time % lease.periodLength == 0, 'Time must be a multiple of the lease period');

        uint256 numPeriods = time / lease.periodLength;

        lease.priceCurrency.transferFrom(msg.sender, lease.lessor, numPeriods * lease.pricePerPeriod); // TODO send royalties

        lease.lessee = msg.sender;
        lease.endTime += time;
    }

    function getLeaseInfo(uint256 tokenId)
        external
        view
        returns (
            address lessor,
            IERC20 priceCurrency,
            uint256 pricePerPeriod,
            uint256 periodLength,
            address lessee,
            uint256 endTime
        )
    {
        Lease storage lease = leases[tokenId];
        lessor = lease.lessor;
        priceCurrency = lease.priceCurrency;
        pricePerPeriod = lease.pricePerPeriod;
        periodLength = lease.periodLength;
        endTime = lease.endTime;
        lessee = lease.endTime < block.timestamp ? address(0) : lease.lessee;
    }

    // --------- IRecordStorage ---------
    function set(
        string calldata key,
        string calldata value,
        uint256 tokenId
    ) external onlyLessee(tokenId) {
        tokenAddress.set(key, value, tokenId);
    }

    function setMany(
        string[] memory keys,
        string[] memory values,
        uint256 tokenId
    ) external onlyLessee(tokenId) {
        tokenAddress.setMany(keys, values, tokenId);
    }

    function setByHash(
        uint256 keyHash,
        string calldata value,
        uint256 tokenId
    ) external onlyLessee(tokenId) {
        tokenAddress.setByHash(keyHash, value, tokenId);
    }

    function setManyByHash(
        uint256[] calldata keyHashes,
        string[] calldata values,
        uint256 tokenId
    ) external onlyLessee(tokenId) {
        tokenAddress.setManyByHash(keyHashes, values, tokenId);
    }

    function reconfigure(
        string[] memory keys,
        string[] memory values,
        uint256 tokenId
    ) external onlyLessee(tokenId) {
        tokenAddress.reconfigure(keys, values, tokenId);
    }

    function reset(uint256 tokenId) external onlyLessee(tokenId) {
        tokenAddress.reset(tokenId);
    }
}

